<wms:WmsView x:Class="Ferretto.WMS.App.Modules.ItemLists.ItemListDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:modules="clr-namespace:Ferretto.Common.Utils.Modules;assembly=Ferretto.Common.Utils"
             xmlns:res="clr-namespace:Ferretto.WMS.App.Resources;assembly=Ferretto.WMS.App.Resources"
             xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls"
             xmlns:enums="clr-namespace:Ferretto.Common.Resources.Enums;assembly=Ferretto.Common.Resources"
             Title="{x:Static res:Navigation.ListDetails}"
             MinHeight="300"
             d:DesignHeight="450"
             d:DesignWidth="800"
             EnableHistoryView="True"
             SubTitleVisibility="{Binding Model, Converter={StaticResource RTVC}}"
             mc:Ignorable="d">
    <wms:WmsView.Resources>
        <wms:StringFormatConverter x:Key="SFC" />
        <wms:DisplayNameConverter x:Key="DNC" />

        <DataTemplate x:Key="CellDisplayTemplateRequestedQuantity">
            <TextBlock Style="{DynamicResource TextBlockCell}">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource SFC}">
                        <Binding Source="{x:Static res:General.QuantityWithUnitMeasure}" />
                        <Binding Path="RowData.Row.RequestedQuantity"
                                 TargetNullValue="" />
                        <Binding Path="RowData.Row.ItemUnitMeasure"
                                 TargetNullValue="" />
                    </MultiBinding>
                </TextBlock.Text>
                <TextBlock.ToolTip>
                    <MultiBinding Converter="{StaticResource SFC}">
                        <Binding Source="{x:Static res:General.QuantityWithUnitMeasure}" />
                        <Binding Path="RowData.Row.RequestedQuantity"
                                 TargetNullValue="" />
                        <Binding Path="RowData.Row.ItemUnitMeasure"
                                 TargetNullValue="" />
                    </MultiBinding>
                </TextBlock.ToolTip>
            </TextBlock>
        </DataTemplate>

        <DataTemplate x:Key="CellDisplayTemplateDispatchedQuantity">
            <TextBlock Style="{DynamicResource TextBlockCell}">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource SFC}">
                        <Binding Source="{x:Static res:General.QuantityWithUnitMeasure}" />
                        <Binding Path="RowData.Row.DispatchedQuantity"
                                 TargetNullValue="" />
                        <Binding Path="RowData.Row.ItemUnitMeasure"
                                 TargetNullValue="" />
                    </MultiBinding>
                </TextBlock.Text>
                <TextBlock.ToolTip>
                    <MultiBinding Converter="{StaticResource SFC}">
                        <Binding Source="{x:Static res:General.QuantityWithUnitMeasure}" />
                        <Binding Path="RowData.Row.DispatchedQuantity"
                                 TargetNullValue="" />
                        <Binding Path="RowData.Row.ItemUnitMeasure"
                                 TargetNullValue="" />
                    </MultiBinding>
                </TextBlock.ToolTip>
            </TextBlock>
        </DataTemplate>
    </wms:WmsView.Resources>
    <wms:WmsView.SubTitle>
        <MultiBinding Converter="{StaticResource SFC}">
            <Binding Source="{x:Static res:Title.ItemListDetailsView}" />
            <Binding Converter="{StaticResource DNC}"
                     ConverterParameter="{x:Type enums:ItemListType}"
                     Path="Model.ItemListType"
                     TargetNullValue="" />
            <Binding Path="Model.Code"
                     TargetNullValue="" />
        </MultiBinding>
    </wms:WmsView.SubTitle>

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          IsEnabled="{Binding IsBusy, Converter={StaticResource BNC}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"
                              MaxWidth="400" />
        </Grid.ColumnDefinitions>

        <dxt:WaitIndicator Grid.Row="1"
                           VerticalAlignment="Center"
                           Panel.ZIndex="1"
                           Content="{x:Static res:DesktopApp.Loading}"
                           DeferedVisibility="{Binding IsBusy}" />

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <wms:NotifyControl SubTitleDimension="{Binding SubTitleDimension, RelativeSource={RelativeSource AncestorType={x:Type wms:WmsHistoryView}}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

            <wms:ActionBar Grid.Column="1"
                           MinWidth="100"
                           Margin="0,10,10,0"
                           HorizontalAlignment="Right"
                           Style="{DynamicResource ActionBarNotCustomizable}">

                <wms:ActionBarItem Command="{Binding ExecuteListCommand}"
                                   Content="{x:Static res:ItemLists.ItemListExecute}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/av/1x_web/ic_play_arrow_black_24dp.png"
                                   GlyphSize="Custom"
                                   TooltipText="{Binding ExecuteReason}" />

                <wms:ActionBarItem Command="{Binding SaveCommand}"
                                   Content="{x:Static res:General.Save}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/1x_web/ic_save_black_24dp.png"
                                   GlyphSize="Custom"
                                   TooltipText="{Binding SaveReason}" />
                <wms:ActionBarItem Command="{Binding RevertCommand}"
                                   Content="{x:Static res:General.Revert}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/1x_web/ic_undo_black_24dp.png"
                                   GlyphSize="Custom" />

                <wms:ActionBarItem Command="{Binding DeleteCommand}"
                                   Content="{x:Static res:General.Delete}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_delete_black_24dp.png"
                                   GlyphSize="Custom" />

                <wms:ActionBarItem Command="{Binding RefreshCommand}"
                                   Content="{x:Static res:General.Refresh}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/navigation/1x_web/ic_refresh_black_24dp.png"
                                   GlyphSize="Custom" />
            </wms:ActionBar>

            <StackPanel Orientation="Vertical"
                        Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="0,0,10,5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                <TextBlock Style="{DynamicResource TextBlockErrorMessageStyle}"
                           Text="{Binding Model.Error}"
                           TextAlignment="Right"
                           Visibility="{Binding Model.Error, Converter={StaticResource STVC}}" />
                <TextBlock Style="{DynamicResource TextBlockErrorMessageStyle}"
                           Text="{x:Static res:Errors.ThisObjectHasUnsavedChangesButDataNeedToBeRefreshed}"
                           TextAlignment="Right">
                    <TextBlock.Visibility>
                        <MultiBinding Converter="{StaticResource MBATVC}">
                            <Binding Path="HasConflictingChanges" />
                            <Binding Path="IsBusy" Converter="{StaticResource BNC}" />
                        </MultiBinding>
                    </TextBlock.Visibility>
                </TextBlock>
            </StackPanel>

        </Grid>

        <ScrollViewer Grid.Row="1"
                      Margin="10,0,10,10"
                      Focusable="False"
                      IsTabStop="True"
                      Visibility="{Binding Model, Converter={StaticResource RTVC}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="0"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:ItemLists.ItemListInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <wms:TextBox Grid.Row="0"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Path=Model.Code, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="1"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Path=Model.Description, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <Grid Grid.Row="0"
                              Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <wms:ComboBox Grid.Column="0"
                                          Margin="0,0,20,0"
                                          wms:ShowTitle.Show="True"
                                          EditValue="{Binding Path=Model.ItemListType, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                          ItemTemplate="{DynamicResource ComboBoxEditTranslation}">
                                <dxmvvm:Interaction.Behaviors>
                                    <dxmvvm:EnumItemsSourceBehavior EnumType="{x:Type enums:ItemListType}"
                                                                    SortMode="DisplayName" />
                                </dxmvvm:Interaction.Behaviors>
                            </wms:ComboBox>
                            <wms:SpinEdit Grid.Column="1"
                                          Margin="0,0,20,0"
                                          wms:ShowTitle.Show="True"
                                          EditValue="{Binding Path=Model.Priority, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                        <wms:TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Margin="0,0,20,0"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Path=Model.Job, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="0"
                          Grid.Column="1">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <Grid DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type GroupBox}}}">
                                <dxe:ToggleSwitch IsChecked="{Binding Path=Model.ShipmentUnitAssociated, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock Margin="36,0,0,0"
                                           Style="{StaticResource GroupBoxHeaderTemplateTextBlockStyle}"
                                           Text="{x:Static res:ItemLists.ShipmentUnitInformation}" />
                            </Grid>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <StackPanel IsEnabled="{Binding Model.ShipmentUnitAssociated}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <wms:TextBox Grid.Row="1"
                                         Margin="0,0,20,0"
                                         wms:ShowTitle.Show="True"
                                         EditValue="{Binding Path=Model.ShipmentUnitCode, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding Path=Model.ShipmentUnitAssociated, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <wms:TextBox Grid.Row="2"
                                         Margin="0,0,20,0"
                                         wms:ShowTitle.Show="True"
                                         EditValue="{Binding Path=Model.ShipmentUnitDescription, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         IsEnabled="{Binding Path=Model.ShipmentUnitAssociated, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </Grid>
                    </StackPanel>
                </GroupBox>


                <GroupBox Grid.Row="0"
                          Grid.Column="2"
                          Header="{x:Static res:ItemLists.CustomerOrderInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <wms:TextBox Grid.Row="0"
                                     Margin="0,0,20,0"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Path=Model.CustomerOrderCode, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="1"
                                     Margin="0,0,20,0"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Path=Model.CustomerOrderDescription, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>

                </GroupBox>

                <GroupBox Grid.Row="2"
                          Grid.ColumnSpan="4">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <Grid DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type GroupBox}}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0"
                                           Grid.Column="0"
                                           VerticalAlignment="Center"
                                           Style="{StaticResource GroupBoxHeaderTemplateTextBlockStyle}"
                                           Text="{x:Static res:ItemLists.ItemListRows}" />

                                <wms:ActionBar Grid.Row="0"
                                               Grid.ColumnSpan="2"
                                               HorizontalAlignment="Right"
                                               Style="{DynamicResource ActionBarNotCustomizable}">

                                    <wms:ActionBarItem Command="{Binding ExecuteListRowCommand}"
                                                       Content="{x:Static res:ItemLists.ItemListRowExecute}"
                                                       CustomGlyphSize="24,24"
                                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/av/1x_web/ic_play_arrow_black_24dp.png"
                                                       GlyphSize="Custom"
                                                       TooltipText="{Binding ExecuteRowReason}" />

                                    <wms:ActionBarItem Command="{Binding ShowListRowDetailsCommand}"
                                                       Content="{x:Static res:ItemLists.ItemListRowShowDetails}"
                                                       CustomGlyphSize="24,24"
                                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_info_outline_black_24dp.png"
                                                       GlyphSize="Custom" />

                                    <wms:ActionBarItem Command="{Binding DeleteListRowCommand}"
                                                       Content="{x:Static res:General.Delete}"
                                                       CustomGlyphSize="24,24"
                                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_delete_black_24dp.png"
                                                       GlyphSize="Custom"
                                                       TooltipText="{Binding DeleteRowReason}" />

                                    <wms:ActionBarItem Command="{Binding AddListRowCommand}"
                                                       Content="{x:Static res:ItemLists.ItemListRowAdd}"
                                                       CustomGlyphSize="24,24"
                                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/1x_web/ic_add_circle_outline_black_24dp.png"
                                                       GlyphSize="Custom"
                                                       TooltipText="{Binding AddRowReason}" />
                                </wms:ActionBar>
                            </Grid>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="{x:Static res:ItemLists.ItemListWithNoRows}"
                                   Visibility="{Binding ListHasRows, Converter={StaticResource BTVIC}}" />
                        <wms:WmsGridControl MinHeight="62"
                                            MaxWidth="2000"
                                            MaxHeight="2000"
                                            ItemsSource="{Binding Model.ItemListRows, Mode=OneWay}"
                                            SelectedBusinessObject="{Binding SelectedItemListRow, Mode=TwoWay}"
                                            Visibility="{Binding ListHasRows, Converter={StaticResource BTVC}}">
                            <wms:WmsGridControl.View>
                                <dxg:TableView>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="RowDoubleClick">
                                            <wms:WmsHistoryViewAppear Id="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.SelectedItemListRow.Id, Mode=OneWay}"
                                                                      StartModuleName="{wms:NameOf Type={x:Type modules:ItemLists}}"
                                                                      StartViewName="{x:Static modules:ItemLists.ITEMLISTROWDETAILS}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </dxg:TableView>
                            </wms:WmsGridControl.View>

                            <wms:WmsGridControl.Columns>
                                <dxg:GridColumn Width="120*"
                                                FieldName="Status">
                                    <dxg:GridColumn.CellTemplate>
                                        <DataTemplate>
                                            <Grid HorizontalAlignment="Stretch">
                                                <wms:WmsEnumIndicator Margin="5,0,0,0"
                                                                      VerticalAlignment="Center"
                                                                      EnumType="{x:Type enums:ItemListRowStatus}"
                                                                      EnumValue="{Binding Data.Status}"
                                                                      HideIcon="True"
                                                                      IconSize="8"
                                                                      ShowText="True" />

                                            </Grid>
                                        </DataTemplate>
                                    </dxg:GridColumn.CellTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn Width="80*"
                                                FieldName="Priority" />
                                <dxg:GridColumn Width="100*"
                                                FieldName="Code" />
                                <dxg:GridColumn Width="400*"
                                                FieldName="ItemDescription" />
                                <dxg:GridColumn Width="120*"
                                                CellDisplayTemplate="{StaticResource CellDisplayTemplateRequestedQuantity}"
                                                FieldName="RequestedQuantity">
                                    <dxg:GridColumn.EditSettings>
                                        <dxe:TextEditSettings Mask="{x:Static res:General.CompartmentTypeListFormatReduced}"
                                                              MaskUseAsDisplayFormat="True" />
                                    </dxg:GridColumn.EditSettings>
                                </dxg:GridColumn>
                                <dxg:GridColumn Width="120*"
                                                CellDisplayTemplate="{StaticResource CellDisplayTemplateDispatchedQuantity}"
                                                FieldName="DispatchedQuantity" />
                                <dxg:GridColumn Width="120*"
                                                FieldName="MaterialStatusDescription" />
                                <dxg:GridColumn Width="150*"
                                                FieldName="CreationDate" />
                            </wms:WmsGridControl.Columns>

                            <wms:WmsGridControl.SortInfo>
                                <dxg:GridSortInfo FieldName="Priority"
                                                  SortOrder="Ascending" />
                                <dxg:GridSortInfo FieldName="Status"
                                                  SortOrder="Ascending" />
                            </wms:WmsGridControl.SortInfo>

                        </wms:WmsGridControl>
                    </StackPanel>
                </GroupBox>

            </Grid>

        </ScrollViewer>

        <ScrollViewer Grid.RowSpan="2"
                      Grid.Column="1"
                      Focusable="False"
                      IsTabStop="False">

            <Border Style="{StaticResource InfoBoxBorderStyle}"
                    Visibility="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Converter={StaticResource BTTVC}, ConverterParameter={StaticResource MinWidthDetailsView}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0"
                              Margin="20,0"
                              Header="{x:Static res:ItemLists.ExecutionDetails}">
                        <wms:WmsEnumIndicator EnumType="{x:Type enums:ItemListStatus}"
                                              EnumValue="{Binding Model.Status}"
                                              IconSize="48"
                                              ShowText="True" />
                    </GroupBox>
                    <GroupBox Grid.Row="1"
                              Margin="20,0"
                              Header="{x:Static res:General.OtherInformation}">
                        <StackPanel Orientation="Vertical">
                            <wms:InfoText HorizontalAlignment="Left"
                                          wms:ShowTitle.Show="True"
                                          Content="{Binding Path=Model.CreationDate}" />
                            <wms:InfoText HorizontalAlignment="Left"
                                          wms:ShowTitle.Show="True"
                                          Content="{Binding Path=Model.LastModificationDate}" />
                            <wms:InfoText HorizontalAlignment="Left"
                                          wms:ShowTitle.Show="True"
                                          Content="{Binding Path=Model.FirstExecutionDate}" />
                            <wms:InfoText HorizontalAlignment="Left"
                                          wms:ShowTitle.Show="True"
                                          Content="{Binding Path=Model.ExecutionEndDate}" />
                        </StackPanel>

                    </GroupBox>
                </Grid>

            </Border>

        </ScrollViewer>

    </Grid>
</wms:WmsView>

