<wms:WmsDialogView x:Class="Ferretto.WMS.Modules.ItemLists.ItemListRowAddDialogView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
                   xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls"
                   Title="{x:Static res:Navigation.ItemListRowAdd}"
                   d:DesignHeight="450"
                   d:DesignWidth="800"
                   AllowsTransparency="True"
                   Mode="DialogWindow"
                   Opacity="1"
                   ResizeMode="NoResize"
                   ShowInTaskbar="False"
                   WindowStyle="None"
                   mc:Ignorable="d">
    <Grid Margin="10,1,10,10"
          HorizontalAlignment="Stretch"
          Background="White"
          Opacity="1">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Margin="14,12,0,0"
                   FontSize="{DynamicResource FontSizeMedium}"
                   Text="{x:Static res:Navigation.ItemListRowAdd}" />

        <ScrollViewer Grid.Row="1"
                      Margin="10,0,10,10"
                      Focusable="False"
                      IsTabStop="True"
                      Visibility="{Binding Model, Converter={StaticResource RTVC}}">
            <Grid IsEnabled="{Binding IsBusy, Converter={StaticResource BNC}}">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="0"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:General.GeneralInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <wms:TextBox Grid.Row="0"
                                     Grid.Column="0"
                                     HorizontalAlignment="Stretch"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Model.Code, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

                        <wms:SpinEdit x:Name="QuantityText"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      HorizontalAlignment="Stretch"
                                      wms:AdditionalInfo.Text="{Binding Model.ItemUnitMeasure}"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Model.RequestedQuantity, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource SpinEditDecimalStyle}" />

                        <wms:SpinEdit Grid.Row="2"
                                      Grid.Column="0"
                                      HorizontalAlignment="Stretch"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.Priority, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="0"
                          Grid.Column="1"
                          Grid.ColumnSpan="2"
                          Margin="20,0,0,0"
                          Header="{x:Static res:General.ItemInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <wms:LookUpEdit Grid.ColumnSpan="3"
                                        Margin="0,0,20,0"
                                        wms:ShowTitle.Show="True"
                                        BusinessObjectValue="{Binding Model.ItemId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                        DisplayMember="Description"
                                        ItemsSource="{Binding ItemsDataSource, Mode=OneWay}"
                                        PopupWidth="800"
                                        ValueMember="Id">
                            <wms:LookUpEdit.PopupContentTemplate>
                                <ControlTemplate>
                                    <wms:WmsGridControl x:Name="PART_GridControl"
                                                        ItemsSource="{Binding ItemsDataSource, Mode=OneWay}">
                                        <wms:WmsGridControl.Columns>
                                            <dxg:GridColumn Width="10*"
                                                            FieldName="Code" />
                                            <dxg:GridColumn Width="20*"
                                                            FieldName="Description" />
                                            <dxg:GridColumn Width="10*"
                                                            FieldName="ItemCategoryDescription" />
                                            <dxg:GridColumn Width="10*"
                                                            FieldName="AbcClassDescription" />
                                            <dxg:GridColumn Width="10*"
                                                            FieldName="Image">
                                                <dxg:GridColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel Margin="2"
                                                                    HorizontalAlignment="Center">
                                                            <wms:WmsImage Width="100"
                                                                          Height="100"
                                                                          BorderBrush="{DynamicResource CommonSecondaryLight}"
                                                                          BorderThickness="1"
                                                                          Path="{Binding Data.Image, Mode=OneWay}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </dxg:GridColumn.CellTemplate>
                                            </dxg:GridColumn>
                                        </wms:WmsGridControl.Columns>
                                        <wms:WmsGridControl.View>
                                            <dxg:TableView RowStyle="{DynamicResource AutoHeightRowControlStyle}" />
                                        </wms:WmsGridControl.View>
                                        <wms:WmsGridControl.SortInfo>
                                            <dxg:GridSortInfo FieldName="Code"
                                                              SortOrder="Ascending" />
                                        </wms:WmsGridControl.SortInfo>
                                    </wms:WmsGridControl>
                                </ControlTemplate>
                            </wms:LookUpEdit.PopupContentTemplate>
                        </wms:LookUpEdit>



                        <wms:TextBox Grid.Row="1"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     HorizontalAlignment="Stretch"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Model.Lot, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="2"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     HorizontalAlignment="Stretch"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Model.RegistrationNumber, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />


                        <wms:TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Margin="0,0,20,0"
                                     HorizontalAlignment="Stretch"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Model.Sub1, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="2"
                                     Grid.Column="1"
                                     Margin="0,0,20,0"
                                     HorizontalAlignment="Stretch"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Model.Sub2, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />


                        <wms:ComboBox x:Name="MaterialStatus"
                                      Grid.Row="1"
                                      Grid.Column="2"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.MaterialStatusId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Path=Model.MaterialStatusChoices}" />

                        <wms:ComboBox x:Name="PackageType"
                                      Grid.Row="2"
                                      Grid.Column="2"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.PackageTypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Path=Model.PackageTypeChoices}" />

                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>

        <wms:ActionBar Grid.Row="2"
                       Margin="10,20,20,20"
                       HorizontalAlignment="Right"
                       Style="{DynamicResource ActionBarNotCustomizable}">

            <wms:ActionBarItem Command="{Binding CreateCommand}"
                               Content="{x:Static res:General.Create}"
                               CustomGlyphSize="36,36"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/icons8-create-36.png"
                               GlyphSize="Custom"
                               IsEnabled="{Binding IsBusy, Converter={StaticResource BNC}}" />

            <wms:ActionBarItem Command="{Binding ClearCommand}"
                               Content="{x:Static res:General.Clear}"
                               CustomGlyphSize="36,36"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/icons8-erase-36.png"
                               GlyphSize="Custom"
                               IsEnabled="{Binding IsBusy, Converter={StaticResource BNC}}" />

            <wms:ActionBarItem Command="{Binding CloseDialogCommand}"
                               Content="{x:Static res:General.Cancel}"
                               CustomGlyphSize="36,36"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_highlight_off_black_36dp.png"
                               GlyphSize="Custom" />
        </wms:ActionBar>

        <TextBlock Grid.Row="2"
                   MaxWidth="500"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Style="{DynamicResource TextBlockErrorMessageStyle}"
                   Text="{Binding Model.Error}"
                   Visibility="{Binding Model.IsValidationEnabled, Converter={StaticResource BTVC}}" />
    </Grid>
</wms:WmsDialogView>
