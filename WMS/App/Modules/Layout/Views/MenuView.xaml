<ctrls:WmsView x:Class="Ferretto.WMS.App.Modules.Layout.MenuView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:ctrls="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
               xmlns:dxnav="http://schemas.devexpress.com/winfx/2008/xaml/navigation"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               d:DesignHeight="450"
               d:DesignWidth="800"
               mc:Ignorable="d">
    <Grid Height="75">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Image Width="110"
               Height="39"
               Margin="20,10,0,0"
               HorizontalAlignment="Left"
               Focusable="False"
               Source="pack://application:,,,/Ferretto.WMS.App.Themes;component/Images/FGLogo.png" />

        <DockPanel Grid.Column="1"
                   Background="{DynamicResource CommonBackground}">
            <dxnav:TileBar x:Name="WMSTileNav"
                           Margin="5,10,5,0"
                           Padding="2,0,2,0"
                           ctrls:CustomMenuTileFlyoutPosition.Enabled="True"
                           AllowItemSelection="False"
                           Background="Transparent"
                           DockPanel.Dock="Top"
                           FlyoutShowMode="Adorner"
                           ItemContainerStyle="{DynamicResource TileBarItemFirstLevelStyleExtended}"
                           ItemsSource="{Binding Items}"
                           Orientation="Horizontal" />
            <ScrollViewer Name="PART_Options"
                          dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                          DockPanel.Dock="Right"
                          Focusable="False"
                          HorizontalScrollBarVisibility="Disabled" />
        </DockPanel>

        <Grid Grid.Column="2"
              Margin="0,0,25,0"
              HorizontalAlignment="Right"
              VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ctrls:WmsIcon Width="18"
                           Height="18"
                           VerticalAlignment="Center"
                           ColorizeBrush="{DynamicResource CommonSecondaryDark}"
                           SymbolName="UserProfile" />
            <TextBlock Grid.Column="1"
                       Padding="5,0,0,0"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource CommonSecondaryDark}"
                       Text="Warehouse Manager" />
        </Grid>
    </Grid>
</ctrls:WmsView>
