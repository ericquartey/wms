<wms:WmsView x:Class="Ferretto.WMS.App.Modules.Scheduler.MissionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.WMS.App.Resources;assembly=Ferretto.WMS.App.Resources"
             xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls"
             xmlns:enums="clr-namespace:Ferretto.Common.Resources.Enums;assembly=Ferretto.Common.Resources"
             Title="{x:Static res:Navigation.Missions}"
             MinHeight="300"
             d:DesignHeight="450"
             d:DesignWidth="800"
             EnableHistoryView="True"
             mc:Ignorable="d">
    <wms:WmsView.Resources>
        <wms:StringFormatConverter x:Key="SFC" />

        <DataTemplate x:Key="CellDisplayTemplateRequestedQuantity">
            <TextBlock Style="{DynamicResource TextBlockCell}">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource SFC}">
                        <Binding Source="{x:Static res:General.QuantityWithUnitMeasure}" />
                        <Binding Path="Data.RequestedQuantity"
                                 TargetNullValue="" />
                        <Binding Path="Data.ItemMeasureUnitDescription"
                                 TargetNullValue="" />
                    </MultiBinding>
                </TextBlock.Text>
                <TextBlock.ToolTip>
                    <MultiBinding Converter="{StaticResource SFC}">
                        <Binding Source="{x:Static res:General.QuantityWithUnitMeasure}" />
                        <Binding Path="Data.RequestedQuantity"
                                 TargetNullValue="" />
                        <Binding Path="Data.ItemMeasureUnitDescription"
                                 TargetNullValue="" />
                    </MultiBinding>
                </TextBlock.ToolTip>
            </TextBlock>
        </DataTemplate>

        <DataTemplate x:Key="CellDisplayTemplateDispatchedQuantity">
            <TextBlock Style="{DynamicResource TextBlockCell}">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource SFC}">
                        <Binding Source="{x:Static res:General.QuantityWithUnitMeasure}" />
                        <Binding Path="Data.DispatchedQuantity"
                                 TargetNullValue="" />
                        <Binding Path="Data.ItemMeasureUnitDescription"
                                 TargetNullValue="" />
                    </MultiBinding>
                </TextBlock.Text>
                <TextBlock.ToolTip>
                    <MultiBinding Converter="{StaticResource SFC}">
                        <Binding Source="{x:Static res:General.QuantityWithUnitMeasure}" />
                        <Binding Path="Data.DispatchedQuantity"
                                 TargetNullValue="" />
                        <Binding Path="Data.ItemMeasureUnitDescription"
                                 TargetNullValue="" />
                    </MultiBinding>
                </TextBlock.ToolTip>
            </TextBlock>
        </DataTemplate>

    </wms:WmsView.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"
                           MaxHeight="350" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <wms:Expander x:Name="FiltersExpander"
                      Grid.Column="0"
                      VerticalAlignment="Stretch"
                      VerticalContentAlignment="Stretch"
                      ExpandDirection="Left"
                      IsExpanded="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <wms:TileBar HorizontalAlignment="Right"
                             ItemsSource="{Binding Filters}"
                             SelectedItem="{Binding SelectedFilter, Mode=TwoWay}" />

            </Grid>
        </wms:Expander>

        <Grid Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="200" />
                </Grid.ColumnDefinitions>

                <wms:ActionBar Margin="5"
                               HorizontalAlignment="Left"
                               Style="{DynamicResource ActionBarNotCustomizable}">
                    <wms:ActionBarItem Content="{x:Static res:General.ShowDetails}"
                                       CustomGlyphSize="24,24"
                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_info_outline_black_24dp.png"
                                       GlyphSize="Custom"
                                       IsEnabled="{Binding EnableShowDetailsCommand}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="ItemClick">
                                <wms:WmsTooltipCellGridViewAppear Tooltip="Details" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </wms:ActionBarItem>
                    <wms:ActionBarItem Command="{Binding RefreshCommand}"
                                       Content="{x:Static res:General.Refresh}"
                                       CustomGlyphSize="24,24"
                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/navigation/1x_web/ic_refresh_black_24dp.png"
                                       GlyphSize="Custom" />
                </wms:ActionBar>

                <wms:WmsGridControl x:Name="MainGridControl"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="2"
                                    MaxWidth="2000"
                                    MaxHeight="5000"
                                    ItemsSource="{Binding SelectedFilterDataSource, Mode=OneWay}"
                                    ShowBorder="False">
                    <wms:WmsGridControl.Resources>
                        <Style TargetType="{x:Type ToolTip}" BasedOn="{StaticResource DetailToolTip}" />
                    </wms:WmsGridControl.Resources>

                    <dxg:GridControl.DetailDescriptor>
                        <dxg:DataControlDetailDescriptor ItemsSourceBinding="{Binding Operations}">
                            <dxg:DataControlDetailDescriptor.DataControl>
                                <dxg:GridControl CurrentItem="{Binding SelectedItem, Mode=TwoWay}">
                                    <dxg:GridControl.Columns>
                                        <dxg:GridColumn Width="100"
                                                        FieldName="Priority" />

                                        <dxg:GridColumn Width="120*"
                                                        FieldName="Status">
                                            <dxg:GridColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Grid HorizontalAlignment="Stretch">
                                                        <wms:WmsEnumIndicator Margin="5,0,0,0"
                                                                              VerticalAlignment="Center"
                                                                              EnumType="{x:Type enums:MissionOperationStatus}"
                                                                              EnumValue="{Binding Data.Status}"
                                                                              HideIcon="True"
                                                                              IconSize="8"
                                                                              ShowText="True" />
                                                    </Grid>
                                                </DataTemplate>
                                            </dxg:GridColumn.CellTemplate>
                                        </dxg:GridColumn>
                                        <dxg:GridColumn Width="100"
                                                        CellToolTipBinding="{Binding}"
                                                        FieldName="Details"
                                                        Header="{x:Static res:General.Details}">
                                            <dxg:GridColumn.CellTemplate>
                                                <DataTemplate>
                                                    <wms:ActionBar HorizontalAlignment="Center"
                                                                   Style="{DynamicResource ActionBarNotCustomizable}">
                                                        <wms:ActionBarItem CustomGlyphSize="18,18"
                                                                           Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_visibility_black_18dp.png"
                                                                           GlyphSize="Custom">
                                                            <i:Interaction.Triggers>
                                                                <i:EventTrigger EventName="ItemClick">
                                                                    <wms:WmsTooltipCellGridViewAppear Tooltip="Details" />
                                                                </i:EventTrigger>
                                                            </i:Interaction.Triggers>
                                                        </wms:ActionBarItem>
                                                    </wms:ActionBar>
                                                </DataTemplate>
                                            </dxg:GridColumn.CellTemplate>
                                            <dxg:GridColumn.CellToolTipTemplate>
                                                <DataTemplate>
                                                    <Grid MinWidth="400"
                                                          MaxHeight="350"
                                                          Margin="8,0,0,0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="Auto" />
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Margin="0,8,0,0"
                                                                   FontSize="14.66"
                                                                   FontWeight="SemiBold"
                                                                   Text="{x:Static res:General.Details}" />

                                                        <wms:InfoText Grid.Row="1"
                                                                      Grid.Column="0"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=Type, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <wms:InfoText Grid.Row="1"
                                                                      Grid.Column="1"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=Status, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <wms:InfoText Grid.Row="2"
                                                                      Grid.Column="0"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=RequestedQuantity, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <wms:InfoText Grid.Row="2"
                                                                      Grid.Column="1"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=DispatchedQuantity, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />

                                                        <wms:InfoText Grid.Row="3"
                                                                      Grid.Column="0"
                                                                      Margin="0,8,0,0"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=CompartmentType, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />

                                                        <wms:InfoText Grid.Row="4"
                                                                      Grid.Column="0"
                                                                      Margin="0,8,0,0"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=Sub1, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <wms:InfoText Grid.Row="4"
                                                                      Grid.Column="1"
                                                                      Margin="0,8,0,0"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=Sub2, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <wms:InfoText Grid.Row="5"
                                                                      Grid.Column="0"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=MaterialStatusDescription, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <wms:InfoText Grid.Row="5"
                                                                      Grid.Column="1"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=PackageTypeDescription, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <wms:InfoText Grid.Row="6"
                                                                      Grid.Column="0"
                                                                      Margin="0,0,0,8"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=RegistrationNumber, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
                                                        <wms:InfoText Grid.Row="6"
                                                                      Grid.Column="1"
                                                                      Margin="0,0,0,8"
                                                                      wms:ShowTitle.Show="True"
                                                                      Content="{Binding Path=Lot, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />

                                                        <Border Grid.RowSpan="7"
                                                                Grid.Column="2"
                                                                Margin="0"
                                                                Style="{StaticResource InfoBoxBorderStyle}">
                                                            <GroupBox Margin="3,0,5,5"
                                                                      Header="{x:Static res:General.OtherInformation}">
                                                                <StackPanel Orientation="Vertical">
                                                                    <wms:InfoText HorizontalAlignment="Left"
                                                                                  wms:ShowTitle.Show="True"
                                                                                  Content="{Binding Path=CreationDate}" />
                                                                    <wms:InfoText HorizontalAlignment="Left"
                                                                                  wms:ShowTitle.Show="True"
                                                                                  Content="{Binding Path=LastModificationDate}" />
                                                                    <wms:InfoText HorizontalAlignment="Left"
                                                                                  wms:ShowTitle.Show="True"
                                                                                  Content="{Binding Path=Priority}" />
                                                                </StackPanel>
                                                            </GroupBox>
                                                        </Border>
                                                    </Grid>
                                                </DataTemplate>
                                            </dxg:GridColumn.CellToolTipTemplate>
                                        </dxg:GridColumn>
                                        <dxg:GridColumn Width="260*"
                                                        FieldName="ItemDescription" />
                                        <dxg:GridColumn Width="90*"
                                                        CellDisplayTemplate="{StaticResource CellDisplayTemplateRequestedQuantity}"
                                                        FieldName="RequestedQuantity" />
                                        <dxg:GridColumn Width="90*"
                                                        CellDisplayTemplate="{StaticResource CellDisplayTemplateDispatchedQuantity}"
                                                        FieldName="DispatchedQuantity" />
                                        <dxg:GridColumn Width="120*"
                                                        FieldName="CreationDate">

                                            <dxg:GridColumn.CellTemplate>
                                                <DataTemplate>
                                                    <dxe:TextEdit Name="PART_Editor"
                                                                  DisplayFormatString="g" />
                                                </DataTemplate>
                                            </dxg:GridColumn.CellTemplate>
                                        </dxg:GridColumn>
                                        <dxg:GridColumn Width="160*"
                                                        FieldName="ItemListDescription" />
                                        <dxg:GridColumn Width="130*"
                                                        FieldName="ItemListRowDescription" />
                                        <dxg:GridColumn Width="120*"
                                                        FieldName="Type" />
                                    </dxg:GridControl.Columns>
                                </dxg:GridControl>
                            </dxg:DataControlDetailDescriptor.DataControl>
                        </dxg:DataControlDetailDescriptor>
                    </dxg:GridControl.DetailDescriptor>
                    <wms:WmsGridControl.Columns>
                        <dxg:GridColumn Width="100"
                                        FieldName="Priority" />
                        <dxg:GridColumn Width="120*"
                                        FieldName="Status">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid HorizontalAlignment="Stretch">
                                        <wms:WmsEnumIndicator Margin="5,0,0,0"
                                                              VerticalAlignment="Center"
                                                              EnumType="{x:Type enums:MissionStatus}"
                                                              EnumValue="{Binding Data.Status}"
                                                              HideIcon="True"
                                                              IconSize="8"
                                                              ShowText="True" />
                                    </Grid>
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>
                        <dxg:GridColumn Width="140*"
                                        FieldName="AreaName" />
                        <dxg:GridColumn Width="140*"
                                        FieldName="BayDescription" />
                        <dxg:GridColumn Width="100*"
                                        FieldName="LoadingUnitDescription" />

                        <dxg:GridColumn Width="120*"
                                        FieldName="CreationDate">
                            <dxg:GridColumn.CellTemplate>
                                <DataTemplate>
                                    <dxe:TextEdit Name="PART_Editor"
                                                  DisplayFormatString="g" />
                                </DataTemplate>
                            </dxg:GridColumn.CellTemplate>
                        </dxg:GridColumn>
                    </wms:WmsGridControl.Columns>

                    <wms:WmsGridControl.SortInfo>
                        <dxg:GridSortInfo FieldName="CreationDate"
                                          SortOrder="Descending" />
                    </wms:WmsGridControl.SortInfo>

                    <wms:WmsGridControl.TotalSummary>
                        <dxg:GridSummaryItem Alignment="Left"
                                             DisplayFormat="{x:Static res:DesktopApp.GridRowCounter}"
                                             SummaryType="Count" />
                    </wms:WmsGridControl.TotalSummary>

                </wms:WmsGridControl>
            </Grid>
        </Grid>
    </Grid>
</wms:WmsView>
