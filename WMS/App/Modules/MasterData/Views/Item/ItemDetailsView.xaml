<wms:WmsView x:Class="Ferretto.WMS.App.Modules.MasterData.ItemDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Ferretto.WMS.App.Core.Models;assembly=Ferretto.WMS.App.Core"
             xmlns:modules="clr-namespace:Ferretto.Common.Utils.Modules;assembly=Ferretto.Common.Utils"
             xmlns:mvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:res="clr-namespace:Ferretto.WMS.App.Resources;assembly=Ferretto.WMS.App.Resources"
             xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls"
             Title="{x:Static res:Navigation.ItemDetails}"
             MinWidth="200"
             d:DesignHeight="450"
             d:DesignWidth="800"
             EnableHistoryView="True"
             SubTitle="{Binding Model.Code, StringFormat={x:Static res:Title.ItemDetailsView}}"
             SubTitleVisibility="{Binding Model, Converter={StaticResource RTVC}}"
             mc:Ignorable="d">
    <wms:WmsView.Resources>
        <Style x:Key="inputAreaControlStyle"
               TargetType="{x:Type dxe:FlyoutControl}">
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="StaysOpen" Value="False" />
            <Setter Property="Settings">
                <Setter.Value>
                    <dxe:FlyoutSettings Placement="Right"
                                        ShowIndicator="True" />
                </Setter.Value>
            </Setter>
            <Setter Property="ContentTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid Height="Auto"
                              MinWidth="300"
                              DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock VerticalAlignment="Center"
                                       FontSize="14"
                                       Text="{x:Static res:MasterData.AvailableAreas}" />
                            <wms:ComboBox x:Name="SelectedArea"
                                          Grid.Row="1"
                                          MinWidth="200"
                                          wms:ShowTitle.Show="True"
                                          DisplayMember="Name"
                                          EditValue="{Binding ItemAreaInput.AreaId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                          ItemsSource="{Binding AvailableAreasDataSource}" />

                            <Grid Grid.Row="2"
                                  Height="20" />

                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="Error"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Bottom"
                                           Style="{DynamicResource TextBlockErrorMessageStyle}"
                                           Text="{Binding ItemAreaInput.Error}"
                                           Visibility="{Binding ItemAreaInput.IsValidationEnabled, Converter={StaticResource BTVHC}}" />

                                <wms:ActionBar x:Name="AssociateAreaBar"
                                               Grid.Column="1"
                                               MinWidth="100"
                                               HorizontalAlignment="Right"
                                               Style="{DynamicResource ActionBarNotCustomizable}">
                                    <wms:ActionBarItem
                                        Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.AssociateAreaCommand}"
                                        Content="{x:Static res:General.Add}"
                                        CustomGlyphSize="24,24"
                                        Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/Action/1x_web/ic_done_black_24dp.png"
                                        GlyphSize="Custom"
                                        Tag="AssociateAreaBarItem" />
                                    <wms:ActionBarItem
                                        Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type dxe:FlyoutControl}}, Path=CloseCommand}"
                                        Content="{x:Static res:General.Cancel}"
                                        CustomGlyphSize="24,24"
                                        Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/1x_web/ic_clear_black_24dp.png"
                                        GlyphSize="Custom" />
                                </wms:ActionBar>
                            </Grid>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </wms:WmsView.Resources>
    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          IsEnabled="{Binding IsBusy, Converter={StaticResource BNC}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"
                              MaxWidth="400" />
        </Grid.ColumnDefinitions>

        <dxc:WaitIndicator Grid.Row="1"
                           VerticalAlignment="Center"
                           Panel.ZIndex="1"
                           Content="{x:Static res:DesktopApp.Loading}"
                           DeferedVisibility="{Binding IsBusy}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <wms:NotifyControl SubTitleDimension="{Binding SubTitleDimension, RelativeSource={RelativeSource AncestorType={x:Type wms:WmsHistoryView}}, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                <wms:ActionBar Grid.Column="1"
                           MinWidth="100"
                           Margin="0,10,10,0"
                           HorizontalAlignment="Right"
                           Style="{DynamicResource ActionBarNotCustomizable}">
                    <wms:ActionBarItem Command="{Binding PickItemCommand}"
                                       Content="{x:Static res:MasterData.InstantPick}"
                                       CustomGlyphSize="24,24"
                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/Pick_24.png"
                                       GlyphSize="Custom"
                                       TooltipText="{Binding PickReason}" />
                    <wms:ActionBarItem Command="{Binding PutItemCommand}"
                                       Content="{x:Static res:MasterData.InstantPut}"
                                       CustomGlyphSize="24,24"
                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/Put_24.png"
                                       GlyphSize="Custom"
                                       TooltipText="{Binding PutReason}" />
                    <wms:ActionBarItem Command="{Binding SaveCommand}"
                                       Content="{x:Static res:General.Save}"
                                       CustomGlyphSize="24,24"
                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/1x_web/ic_save_black_24dp.png"
                                       GlyphSize="Custom"
                                       TooltipText="{Binding SaveReason}" />
                    <wms:ActionBarItem Command="{Binding RevertCommand}"
                                       Content="{x:Static res:General.Revert}"
                                       CustomGlyphSize="24,24"
                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/1x_web/ic_undo_black_24dp.png"
                                       GlyphSize="Custom" />

                    <wms:ActionBarItem Command="{Binding DeleteCommand}"
                                       Content="{x:Static res:General.Delete}"
                                       CustomGlyphSize="24,24"
                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_delete_black_24dp.png"
                                       GlyphSize="Custom"
                                       TooltipText="{Binding DeleteReason}" />

                    <wms:ActionBarItem Command="{Binding RefreshCommand}"
                                       Content="{x:Static res:General.Refresh}"
                                       CustomGlyphSize="24,24"
                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/navigation/1x_web/ic_refresh_black_24dp.png"
                                       GlyphSize="Custom" />
                </wms:ActionBar>
            </Grid>

            <TextBlock Grid.Row="1"
                       Grid.ColumnSpan="3"
                       Margin="0,0,10,5"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Style="{DynamicResource TextBlockErrorMessageStyle}"
                       Text="{Binding Model.Error}"
                       TextAlignment="Right"
                       Visibility="{Binding Model.Error, Converter={StaticResource STVC}}" />
        </Grid>
        <ScrollViewer Grid.Row="1"
                      Margin="10,0,10,10"
                      Focusable="False"
                      IsTabStop="True"
                      Visibility="{Binding Model, Converter={StaticResource RTVC}}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Row="0"
                              Header="{x:Static res:General.ItemInformation}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <wms:TextBox wms:ShowTitle.Show="True"
                                         EditValue="{Binding Path=Model.Code, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <wms:TextBox Grid.Row="1"
                                         wms:ShowTitle.Show="True"
                                         EditValue="{Binding Path=Model.Description, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            <wms:ComboBox Grid.Row="2"
                                          wms:ShowTitle.Show="True"
                                          EditValue="{Binding Path=Model.ItemCategoryId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                          ItemsSource="{Binding Path=Model.ItemCategoryChoices}" />
                            <wms:TextBox Grid.RowSpan="3"
                                         Grid.Column="1"
                                         MaxHeight="155"
                                         Margin="20,0,0,0"
                                         VerticalContentAlignment="Stretch"
                                         wms:ShowTitle.Show="True"
                                         EditValue="{Binding Path=Model.Note, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         IsMultiline="True" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Column="1"
                              MinWidth="100"
                              MaxWidth="340">
                        <GroupBox.HeaderTemplate>
                            <DataTemplate>
                                <Grid Margin="0,-5,0,0"
                                      DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type GroupBox}}}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               VerticalAlignment="Center"
                                               Style="{StaticResource GroupBoxHeaderTemplateTextBlockStyle}"
                                               Text="{x:Static res:MasterData.Areas}" />
                                    <wms:ActionBarInputPanelControl x:Name="flyoutInputPanel"
                                                                    AttachedActionBar="{Binding ElementName=AssociateAreaBar}"
                                                                    AttachedBarItem="AssociateAreaBarItem"
                                                                    FocusedStart="SelectedArea"
                                                                    IsOpen="{Binding IsAddAreaShown, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                    Style="{StaticResource inputAreaControlStyle}" />
                                    <wms:ActionBar x:Name="AssociateAreaBar"
                                                   Grid.Column="1"
                                                   MinWidth="100"
                                                   HorizontalAlignment="Right"
                                                   Style="{DynamicResource ActionBarNotCustomizable}">
                                        <wms:ActionBarItem Command="{Binding ShowAssociateAreaCommand}"
                                                           Content="{x:Static res:MasterData.AssociateArea}"
                                                           CustomGlyphSize="24,24"
                                                           Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/baseline-link-black-24dp.png"
                                                           GlyphSize="Custom"
                                                           Tag="AssociateAreaBarItem"
                                                           TooltipText="{Binding AssociateAreaReason}" />
                                        <wms:ActionBarItem Command="{Binding UnassociateAreaCommand}"
                                                           Content="{x:Static res:MasterData.UnassociateArea}"
                                                           CustomGlyphSize="24,24"
                                                           Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/baseline-link-off-black-24dp.png"
                                                           GlyphSize="Custom"
                                                           TooltipText="{Binding UnassociateAreaReason}" />
                                    </wms:ActionBar>
                                </Grid>
                            </DataTemplate>
                        </GroupBox.HeaderTemplate>
                        <Grid>
                            <wms:WmsGridControl MaxWidth="2000"
                                                MaxHeight="2000"
                                                Margin="0,0,-2,0"
                                                ItemsSource="{Binding AllowedItemAreasDataSource, Mode=OneWay}"
                                                SelectedBusinessObject="{Binding SelectedAllowedItemArea, Mode=TwoWay}">
                                <wms:WmsGridControl.Columns>
                                    <dxg:GridColumn Width="200*"
                                                    FieldName="Name" />
                                    <dxg:GridColumn Width="120*"
                                                    wms:AdditionalInfo.Text="{Binding Model.MeasureUnitDescription}"
                                                    FieldName="TotalStock" />
                                </wms:WmsGridControl.Columns>

                                <wms:WmsGridControl.SortInfo>
                                    <dxg:GridSortInfo FieldName="Name"
                                                      SortOrder="Ascending" />
                                </wms:WmsGridControl.SortInfo>

                            </wms:WmsGridControl>
                        </Grid>
                    </GroupBox>

                </Grid>

                <GroupBox Grid.Row="1"
                          Header="{x:Static res:MasterData.WarehousingInformation}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <wms:ComboBox Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.AbcClassId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Path=Model.AbcClassChoices}" />
                        <wms:SpinEdit Grid.Column="1"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.FifoTimePut, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Column="2"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.ReorderPoint, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Row="1"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.MeasureUnitId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Path=Model.MeasureUnitChoices}" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.FifoTimePick, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="2"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.ReorderQuantity, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Row="2"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.ManagementType, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                      ItemTemplate="{DynamicResource ComboBoxEditTranslation}">
                            <mvvm:Interaction.Behaviors>
                                <mvvm:EnumItemsSourceBehavior EnumType="{x:Type models:ItemManagementType}"
                                                              SortMode="DisplayName" />
                            </mvvm:Interaction.Behaviors>
                        </wms:ComboBox>
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1"
                          Grid.Column="1"
                          Margin="20,0,0,0"
                          Header="{x:Static res:MasterData.PhysicalInformation}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,18,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.Height, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource SpinEditDecimalStyle}" />
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="0,0,18,0"
                                      wms:AdditionalInfo.Text="{Binding Model.MeasureUnitDescription}"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.PickTolerance, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="2"
                                      Margin="0,0,18,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.AverageWeight, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="0"
                                      Margin="0,0,18,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.Depth, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource SpinEditDecimalStyle}" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,18,0"
                                      wms:AdditionalInfo.Text="{Binding Model.MeasureUnitDescription}"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.PutTolerance, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Row="2"
                                      Grid.Column="0"
                                      Margin="0,0,18,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.Width, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{DynamicResource SpinEditDecimalStyle}" />
                        <wms:SpinEdit Grid.Row="2"
                                      Grid.Column="1"
                                      Margin="0,0,18,0"
                                      wms:AdditionalInfo.Text="{Binding Model.MeasureUnitDescription}"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.InventoryTolerance, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2"
                          Grid.ColumnSpan="2">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <Grid DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type GroupBox}}}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock VerticalAlignment="Center"
                                           Style="{StaticResource GroupBoxHeaderTemplateTextBlockStyle}"
                                           Text="{x:Static res:MasterData.Compartments}" />

                                <wms:ActionBar Grid.Column="1"
                                               HorizontalAlignment="Right"
                                               Style="{DynamicResource ActionBarNotCustomizable}">
                                    <wms:ActionBarItem Command="{Binding AssociateCompartmentTypeCommand}"
                                                       Content="{x:Static res:MasterData.AssociateACompartmentType}"
                                                       CustomGlyphSize="24,24"
                                                       Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_aspect_ratio_black_24dp.png"
                                                       GlyphSize="Custom" />
                                </wms:ActionBar>
                            </Grid>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock HorizontalAlignment="Left"
                                   Text="{x:Static res:MasterData.ItemIsAllocatedInNoCompartment}"
                                   Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.ItemHasCompartments, Converter={StaticResource BTVIC}}" />

                        <wms:WmsGridControl Grid.Row="1"
                                            Grid.ColumnSpan="2"
                                            MinHeight="62"
                                            MaxWidth="2000"
                                            MaxHeight="2000"
                                            ItemsSource="{Binding CompartmentsDataSource, Mode=OneWay}"
                                            SelectedBusinessObject="{Binding SelectedCompartment, Mode=TwoWay}"
                                            Visibility="{Binding ItemHasCompartments, Converter={StaticResource BTVC}}">
                            <wms:WmsGridControl.View>
                                <dxg:TableView>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="RowDoubleClick">
                                            <wms:WmsHistoryViewAppear Id="{Binding SelectedCompartment.Id, Mode=OneWay}"
                                                                      StartModuleName="{wms:NameOf Type={x:Type modules:MasterData}}"
                                                                      StartViewName="{x:Static modules:MasterData.COMPARTMENTDETAILS}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </dxg:TableView>
                            </wms:WmsGridControl.View>

                            <wms:WmsGridControl.Columns>
                                <dxg:GridColumn Width="120*"
                                                FieldName="AreaName" />
                                <dxg:GridColumn Width="100*"
                                                FieldName="AisleName" />
                                <dxg:GridColumn Width="190*"
                                                FieldName="LoadingUnitCode" />
                                <dxg:GridColumn Width="100*"
                                                FieldName="Sub1" />
                                <dxg:GridColumn Width="100*"
                                                FieldName="Sub2" />
                                <dxg:GridColumn Width="200*"
                                                FieldName="Lot" />
                                <dxg:GridColumn Width="180*"
                                                FieldName="CompartmentStatusDescription" />
                                <dxg:GridColumn Width="120*"
                                                FieldName="Stock">
                                    <dxg:GridColumn.CellDisplayTemplate>
                                        <DataTemplate>
                                            <TextBlock VerticalAlignment="Center">
                                                <TextBlock.Text>
                                                    <MultiBinding Converter="{StaticResource SFC}">
                                                        <Binding Source="{x:Static res:General.QuantityWithUnitMeasure}" />
                                                        <Binding Path="Data.Stock"
                                                                 TargetNullValue="" />
                                                        <Binding Path="Data.ItemMeasureUnit"
                                                                 TargetNullValue="" />
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </DataTemplate>
                                    </dxg:GridColumn.CellDisplayTemplate>
                                </dxg:GridColumn>
                                <dxg:GridColumn Width="110*"
                                                CellDisplayTemplate="{DynamicResource BooleanCellTemplate}"
                                                FieldName="IsItemPairingFixed" />
                            </wms:WmsGridControl.Columns>

                            <wms:WmsGridControl.SortInfo>
                                <dxg:GridSortInfo FieldName="LoadingUnitCode"
                                                  SortOrder="Ascending" />
                            </wms:WmsGridControl.SortInfo>

                        </wms:WmsGridControl>
                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>

        <ScrollViewer Grid.RowSpan="2"
                      Grid.Column="1"
                      Focusable="False"
                      IsTabStop="False"
                      Visibility="{Binding Model, Converter={StaticResource RTVC}}">

            <Border Style="{StaticResource InfoBoxBorderStyle}"
                    Visibility="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Converter={StaticResource BTTVC}, ConverterParameter={StaticResource MinWidthDetailsView}}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <GroupBox Margin="20,0"
                              Header="{x:Static res:BusinessObjects.Image}">

                        <wms:WmsImageEdit MaxWidth="300"
                                          MaxHeight="400"
                                          BorderBrush="{DynamicResource CommonSecondaryLight}"
                                          BorderThickness="1"
                                          Filename="{Binding Path=Model.Image, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Path="{Binding Path=Model.ImagePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </GroupBox>
                    <GroupBox Grid.Row="1"
                              Margin="20,0"
                              Header="{x:Static res:General.OtherInformation}">
                        <StackPanel Orientation="Vertical">
                            <wms:InfoText HorizontalAlignment="Left"
                                          wms:ShowTitle.Show="True"
                                          Content="{Binding Path=Model.CreationDate}" />
                            <wms:InfoText HorizontalAlignment="Left"
                                          wms:ShowTitle.Show="True"
                                          Content="{Binding Path=Model.LastModificationDate}" />
                            <wms:InfoText HorizontalAlignment="Left"
                                          wms:ShowTitle.Show="True"
                                          Content="{Binding Path=Model.InventoryDate}" />
                            <wms:InfoText HorizontalAlignment="Left"
                                          wms:ShowTitle.Show="True"
                                          Content="{Binding Path=Model.LastPickDate}" />
                            <wms:InfoText HorizontalAlignment="Left"
                                          wms:ShowTitle.Show="True"
                                          Content="{Binding Path=Model.LastPutDate}" />
                        </StackPanel>
                    </GroupBox>
                </Grid>
