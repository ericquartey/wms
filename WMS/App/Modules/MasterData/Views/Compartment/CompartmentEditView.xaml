<UserControl x:Class="Ferretto.WMS.Modules.MasterData.CompartmentEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxa="http://schemas.devexpress.com/winfx/2008/xaml/accordion"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.WMS.App.Resources;assembly=Ferretto.WMS.App.Resources"
             xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <Grid MinWidth="300"
          Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <wms:ActionBar HorizontalAlignment="Right"
                       Style="{DynamicResource ActionBarNotCustomizable}"
                       Visibility="{Binding IsAdd, Converter={StaticResource BTVC}}">

            <wms:ActionBarItem Command="{Binding CreateCommand}"
                               Content="{x:Static res:General.Create}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/icons8-create-36.png"
                               GlyphSize="Custom"
                               IsVisible="{Binding IsAdd}" />

            <wms:ActionBarItem Command="{Binding CancelCommand}"
                               Content="{x:Static res:General.Cancel}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/navigation/1x_web/ic_cancel_black_24dp.png"
                               GlyphSize="Custom" />
        </wms:ActionBar>

        <wms:ActionBar HorizontalAlignment="Right"
                       Style="{DynamicResource ActionBarNotCustomizable}"
                       Visibility="{Binding IsAdd, Converter={StaticResource BTVIC}}">

            <wms:ActionBarItem Command="{Binding SaveCommand}"
                               Content="{x:Static res:General.Save}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/1x_web/ic_save_black_24dp.png"
                               GlyphSize="Custom"
                               TooltipText="{Binding SaveReason}" />

            <wms:ActionBarItem Command="{Binding DeleteCompartmentCommand}"
                               Content="{x:Static res:General.Delete}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_delete_black_24dp.png"
                               GlyphSize="Custom"
                               TooltipText="{Binding DeleteReason}" />

            <wms:ActionBarItem Command="{Binding CancelCommand}"
                               Content="{x:Static res:General.Cancel}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/navigation/1x_web/ic_cancel_black_24dp.png"
                               GlyphSize="Custom" />
        </wms:ActionBar>
        <ScrollViewer x:Name="ScrollView"
                      Grid.Row="1">

            <GroupBox Header="{Binding Title, Mode=OneWay}">
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <Grid HorizontalAlignment="Left"
                              DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type GroupBox}}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center"
                                       Style="{StaticResource GroupBoxHeaderTemplateTextBlockStyle}"
                                       Text="{Binding Title, Mode=OneWay}" />

                            <TextBlock Grid.Column="1"
                                       Margin="8,0,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       FontStyle="Italic">
                                <TextBlock.Text>
                                    <MultiBinding Converter="{StaticResource SFC}">
                                        <Binding Source="{x:Static res:MasterData.MinStep}" />
                                        <Binding Path="GlobalSettings.MinStepCompartment"
                                                 TargetNullValue="" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="10"
                                          MinWidth="10"
                                          MaxWidth="10" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <wms:SpinEdit x:Name="PositionXText"
                                  Grid.Row="0"
                                  Grid.Column="0"
                                  HorizontalAlignment="Stretch"
                                  wms:ShowTitle.Show="True"
                                  EditValue="{Binding Model.XPosition, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                  EnableCorrection="True"
                                  Increment="{Binding GlobalSettings.MinStepCompartment}"
                                  Style="{DynamicResource SpinEditDecimalStyle}" />

                    <wms:SpinEdit x:Name="PositionYText"
                                  Grid.Row="0"
                                  Grid.Column="2"
                                  HorizontalAlignment="Stretch"
                                  HorizontalContentAlignment="Right"
                                  wms:ShowTitle.Show="True"
                                  EditValue="{Binding Model.YPosition, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                  EnableCorrection="True"
                                  Increment="{Binding GlobalSettings.MinStepCompartment}"
                                  Style="{DynamicResource SpinEditDecimalStyle}" />

                    <wms:SpinEdit x:Name="WidthText"
                                  Grid.Row="1"
                                  Grid.Column="0"
                                  HorizontalAlignment="Stretch"
                                  wms:ShowTitle.Show="True"
                                  EditValue="{Binding Model.Width, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                  EnableCorrection="True"
                                  Increment="{Binding GlobalSettings.MinStepCompartment}"
                                  Style="{DynamicResource SpinEditDecimalStyle}" />

                    <wms:SpinEdit x:Name="HeightText"
                                  Grid.Row="1"
                                  Grid.Column="2"
                                  HorizontalAlignment="Stretch"
                                  wms:ShowTitle.Show="True"
                                  EditValue="{Binding Model.Height, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                  EnableCorrection="True"
                                  Increment="{Binding GlobalSettings.MinStepCompartment}"
                                  Style="{DynamicResource SpinEditDecimalStyle}" />

                    <wms:LookUpEdit Name="ItemLookUp"
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    wms:ShowTitle.Show="True"
                                    AllowUpdateTwoWayBoundPropertiesOnSynchronization="False"
                                    DisplayMember="Description"
                                    EditValue="{Binding Model.ItemId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                    ItemsSource="{Binding ItemsDataSource, Mode=OneWay}"
                                    PopupWidth="500"
                                    ValueMember="Id">
                        <wms:LookUpEdit.PopupContentTemplate>
                            <ControlTemplate>
                                <wms:WmsGridControl x:Name="PART_GridControl"
                                                    ItemsSource="{Binding ItemsDataSource, Mode=OneWay}"
                                                    SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                                    <wms:WmsGridControl.Columns>
                                        <dxg:GridColumn Width="10*"
                                                        FieldName="Code" />
                                        <dxg:GridColumn Width="20*"
                                                        FieldName="Description" />
                                        <dxg:GridColumn Width="10*"
                                                        FieldName="Image">
                                            <dxg:GridColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Margin="2"
                                                                HorizontalAlignment="Center">
                                                        <wms:WmsImage Width="100"
                                                                      Height="100"
                                                                      BorderBrush="{DynamicResource CommonSecondaryLight}"
                                                                      BorderThickness="1"
                                                                      Path="{Binding Row.Image, Mode=OneWay}" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </dxg:GridColumn.CellTemplate>
                                        </dxg:GridColumn>
                                    </wms:WmsGridControl.Columns>
                                    <wms:WmsGridControl.View>
                                        <dxg:TableView RowStyle="{DynamicResource AutoHeightRowControlStyle}" />
                                    </wms:WmsGridControl.View>
                                    <wms:WmsGridControl.SortInfo>
                                        <dxg:GridSortInfo FieldName="Code"
                                                          SortOrder="Ascending" />
                                    </wms:WmsGridControl.SortInfo>
                                </wms:WmsGridControl>
                            </ControlTemplate>
                        </wms:LookUpEdit.PopupContentTemplate>
                    </wms:LookUpEdit>

                    <wms:SpinEdit x:Name="QuantityText"
                                  Grid.Row="3"
                                  Grid.Column="0"
                                  MinWidth="90"
                                  HorizontalAlignment="Stretch"
                                  wms:ShowTitle.Show="True"
                                  EditValue="{Binding Model.Stock, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                  IsEnabled="{Binding Path=EditValue, ElementName=ItemLookUp, Converter={StaticResource OTBC}, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{DynamicResource SpinEditDecimalStyle}" />
                    <wms:SpinEdit x:Name="CapacityText"
                                  Grid.Row="3"
                                  Grid.Column="2"
                                  HorizontalAlignment="Stretch"
                                  wms:AdditionalInfo.Text="{Binding Model.ItemMeasureUnit}"
                                  wms:ShowTitle.Show="True"
                                  EditValue="{Binding Model.MaxCapacity, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                  IsEnabled="{Binding Path=EditValue, ElementName=ItemLookUp, Converter={StaticResource OTBC}, UpdateSourceTrigger=PropertyChanged}"
                                  Style="{DynamicResource SpinEditDecimalStyle}" />

                    <wms:WmsCheckEdit Grid.Row="4"
                                      Grid.Column="0"
                                      Content="{x:Static res:BusinessObjects.PairingFixed}"
                                      IsChecked="{Binding Path=Model.IsItemPairingFixed, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="{Binding Path=EditValue, ElementName=ItemLookUp, Converter={StaticResource OTBC}, UpdateSourceTrigger=PropertyChanged}" />

                    <dxa:AccordionControl Grid.Row="5"
                                          Grid.ColumnSpan="3"
                                          Margin="0,10,0,0"
                                          Background="Transparent"
                                          BorderThickness="0"
                                          IsCollapseButtonVisible="False"
                                          IsEnabled="{Binding IsItemDetailsEnabled}"
                                          RootItemExpandButtonPosition="Left">
                        <wms:AccordionItem FontSize="12"
                                           FontWeight="Normal"
                                           IsExpandButtonVisible="True"
                                           TitleHeader="{x:Static res:MasterData.AdvancedDetails}">
                            <Grid Margin="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <wms:ComboBox x:Name="MaterialStatus"
                                              wms:ShowTitle.Show="True"
                                              EditValue="{Binding Path=Model.MaterialStatusId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                              ItemsSource="{Binding Path=Model.MaterialStatusChoices}" />

                                <wms:TextBox Grid.Column="2"
                                             wms:ShowTitle.Show="True"
                                             EditValue="{Binding Model.Lot, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged, Delay=300}" />

                                <wms:TextBox Grid.Row="1"
                                             wms:ShowTitle.Show="True"
                                             EditValue="{Binding Path=Model.Sub1, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />


                                <wms:TextBox Grid.Row="1"
                                             Grid.Column="2"
                                             wms:ShowTitle.Show="True"
                                             EditValue="{Binding Path=Model.Sub2, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />

                                <wms:ComboBox x:Name="PackageType"
                                              Grid.Row="2"
                                              wms:ShowTitle.Show="True"
                                              EditValue="{Binding Path=Model.PackageTypeId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                              ItemsSource="{Binding Path=Model.PackageTypeChoices}" />

                                <wms:TextBox Grid.Row="2"
                                             Grid.Column="2"
                                             wms:ShowTitle.Show="True"
                                             EditValue="{Binding Path=Model.RegistrationNumber, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" />
                            </Grid>

                        </wms:AccordionItem>
                    </dxa:AccordionControl>

                </Grid>
            </GroupBox>

        </ScrollViewer>
        <TextBlock Grid.Row="2"
                   Grid.ColumnSpan="3"
                   MaxWidth="300"
                   Style="{DynamicResource TextBlockErrorMessageStyle}"
                   Text="{Binding Model.Error}"
                   Visibility="{Binding Model.IsValidationEnabled, Converter={StaticResource BTVC}}" />
    </Grid>
</UserControl>
