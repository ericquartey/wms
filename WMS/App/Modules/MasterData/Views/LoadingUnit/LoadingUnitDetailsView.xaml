<wms:WmsView x:Class="Ferretto.WMS.Modules.MasterData.LoadingUnitDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bm="clr-namespace:Ferretto.Common.BusinessModels;assembly=Ferretto.Common.BusinessModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:modules="clr-namespace:Ferretto.Common.Utils.Modules;assembly=Ferretto.Common.Utils"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
             Title="{x:Static res:Navigation.LoadingUnitDetails}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             EnableHistoryView="True"
             SubTitle="{Binding Model.Code, StringFormat={x:Static res:Title.LoadingUnitDetailsView}}"
             mc:Ignorable="d">
    <wms:WmsView.Resources>
        <wms:StringFormatConverter x:Key="SFC" />

        <DataTemplate x:Key="CellDisplayTemplateStock">
            <TextBlock VerticalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource SFC}">
                        <Binding Source="{x:Static res:MasterData.QuantityWithUnitMeasure}" />
                        <Binding Path="RowData.Row.Stock"
                                 TargetNullValue="" />
                        <Binding Path="RowData.Row.ItemMeasureUnit"
                                 TargetNullValue="" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </DataTemplate>

        <DataTemplate x:Key="CellDisplayTemplateMaxCapacity">
            <TextBlock VerticalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource SFC}">
                        <Binding Source="{x:Static res:MasterData.QuantityWithUnitMeasure}" />
                        <Binding Path="RowData.Row.MaxCapacity"
                                 TargetNullValue="" />
                        <Binding Path="RowData.Row.ItemMeasureUnit"
                                 TargetNullValue="" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
        </DataTemplate>
    </wms:WmsView.Resources>

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch"
          IsEnabled="{Binding IsBusy, Converter={StaticResource BNC}}">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"
                              MaxWidth="400" />
        </Grid.ColumnDefinitions>

        <wms:ActionBar Margin="10,10,10,0"
                       HorizontalAlignment="Right"
                       Style="{DynamicResource ActionBarNotCustomizable}">

            <wms:ActionBarItem Command="{Binding EditCommand}"
                               Content="{x:Static res:General.Edit}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/editor/ic_mode_edit_black_24dp.png"
                               GlyphSize="Custom"
                               IsVisible="{Binding Model.LoadingUnitTypeHasCompartments}" />
            <wms:ActionBarItem Command="{Binding SaveCommand}"
                               Content="{x:Static res:General.Save}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/ic_save_black_24dp.png"
                               GlyphSize="Custom" />
            <wms:ActionBarItem Command="{Binding RevertCommand, IsAsync=True}"
                               Content="{x:Static res:General.Revert}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/ic_undo_black_24dp.png"
                               GlyphSize="Custom" />
            <wms:ActionBarItem Command="{Binding WithdrawCommand}"
                               Content="{x:Static res:MasterData.Withdraw}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/av/ic_play_arrow_black_24dp.png"
                               GlyphSize="Custom" />
            <wms:ActionBarItem Command="{Binding RefreshCommand}"
                               Content="{x:Static res:General.Refresh}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/navigation/ic_refresh_black_24dp.png"
                               GlyphSize="Custom" />
        </wms:ActionBar>

        <ScrollViewer Grid.Row="1"
                      Margin="10,0,10,10"
                      Focusable="False"
                      IsTabStop="True">
            <Grid Margin="0,0,5,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:MasterData.LoadingUnitInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <wms:TextBox Grid.ColumnSpan="3"
                                     Margin="0,0,20,0"
                                     EditValue="{Binding Model.Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Row="1"
                                      Grid.ColumnSpan="3"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Model.LoadingUnitTypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Model.LoadingUnitTypeChoices}" />
                        <wms:ComboBox Grid.Row="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Model.LoadingUnitStatusId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Model.LoadingUnitStatusChoices}" />
                        <wms:ComboBox Grid.Row="2"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Model.AbcClassId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Model.AbcClassChoices}" />
                        <wms:ComboBox Grid.Row="2"
                                      Grid.Column="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Model.ReferenceType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemTemplate="{DynamicResource ComboBoxEditTranslation}">
                            <dxmvvm:Interaction.Behaviors>
                                <dxmvvm:EnumItemsSourceBehavior EnumType="{x:Type bm:ReferenceType}"
                                                                SortMode="DisplayName" />
                            </dxmvvm:Interaction.Behaviors>
                        </wms:ComboBox>

                        <wms:TextBox Grid.Row="3"
                                     Grid.ColumnSpan="3"
                                     Height="100"
                                     Margin="0,0,20,0"
                                     EditValue="{Binding Model.Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsMultiline="True" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="0"
                          Grid.Column="1"
                          Margin="0"
                          Header="{x:Static res:MasterData.CurrentCellInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <wms:ComboBox Grid.ColumnSpan="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Model.CellId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Path=Model.CellChoices}" />
                        <wms:ComboBox Grid.Row="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Model.CellPositionId}"
                                      ItemsSource="{Binding Model.CellPositionChoices}" />

                        <wms:WmsCheckEdit Grid.Row="1"
                                          Grid.Column="1"
                                          Margin="0,0,20,0"
                                          Content="{x:Static res:BusinessObjects.PairingFixed}"
                                          IsChecked="{Binding Path=Model.IsCellPairingFixed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1"
                          Grid.Column="1"
                          Margin="0"
                          Header="{x:Static res:MasterData.PhysicalInformation}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <wms:SpinEdit Margin="0,0,20,0"
                                      AllowNullInput="False"
                                      EditValue="{Binding Path=Model.Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      MinValue="1" />
                        <wms:SpinEdit Grid.Column="1"
                                      Margin="0,0,20,0"
                                      AllowNullInput="False"
                                      EditValue="{Binding Path=Model.Weight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Column="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Model.HandlingParametersCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Margin="0"
                          Header="{x:Static res:MasterData.CompartmentsLayoutOverview}"
                          Visibility="{Binding Model.LoadingUnitTypeHasCompartments, Converter={StaticResource BTVC}}">
                    <wms:WmsTrayControl Margin="0"
                                        MinHeight="150"
                                        IsCompartmentSelectable="{Binding IsCompartmentSelectableTray, Mode=OneWay}"
                                        IsReadOnly="{Binding ReadOnlyTray, Mode=OneWay}"
                                        SelectedColorFilterFunc="{Binding TrayColoringFunc, Mode=OneWay}"
                                        SelectedItem="{Binding SelectedCompartment, Mode=TwoWay}"
                                        ShowBackground="True"
                                        RulerInfo="mm"
                                        Compartments="{Binding Tray.Compartments}"
                                        DimensionWidth="{Binding Tray.Dimension.Width}"
                                        DimensionHeight="{Binding Tray.Dimension.Height}"
                                        OriginX="{Binding Tray.Origin.X}"
                                        OriginY="{Binding Tray.Origin.Y}"                                        
                                        ShowLittleMark="False"
                                        ShowMark="True"
                                        ShowMiddleMark="False"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        />
                </GroupBox>

                <GroupBox Grid.Row="3"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Margin="0"
                          Header="{x:Static res:MasterData.Compartments}"
                          Visibility="{Binding Model.LoadingUnitTypeHasCompartments, Converter={StaticResource BTVC}}">
                    <StackPanel Margin="0,5,0,0">
                        <TextBlock Text="{x:Static res:MasterData.LoadingUnitWithNoCompartment}"
                                   Visibility="{Binding LoadingUnitHasCompartments, Converter={StaticResource BTVIC}}" />
                        <wms:WmsGridControl MinHeight="200"
                                            MaxWidth="2000"
                                            MaxHeight="200"
                                            ItemsSource="{Binding CompartmentsDataSource, Mode=OneWay}"
                                            SelectedBusinessObject="{Binding SelectedCompartment, Mode=TwoWay}"
                                            Visibility="{Binding LoadingUnitHasCompartments, Converter={StaticResource BTVC}}">
                            <wms:WmsGridControl.View>
                                <dxg:TableView>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="RowDoubleClick">
                                            <wms:WmsHistoryViewAppear Id="{Binding SelectedCompartment.Id, Mode=OneWay}"
                                                                      StartModuleName="{wms:NameOf Type={x:Type modules:MasterData}}"
                                                                      StartViewName="{x:Static modules:MasterData.COMPARTMENTDETAILS}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </dxg:TableView>
                            </wms:WmsGridControl.View>

                            <wms:WmsGridControl.Columns>
                                <dxg:GridColumn Width="100*"
                                                FieldName="ItemCode" />
                                <dxg:GridColumn Width="280*"
                                                FieldName="ItemDescription" />
                                <dxg:GridColumn Width="100*"
                                                FieldName="Sub1" />
                                <dxg:GridColumn Width="100*"
                                                FieldName="Sub2" />
                                <dxg:GridColumn Width="180*"
                                                FieldName="Lot" />
                                <dxg:GridColumn Width="150*"
                                                FieldName="CompartmentStatusDescription" />
                                <dxg:GridColumn Width="100*"
                                                CellDisplayTemplate="{StaticResource CellDisplayTemplateStock}"
                                                FieldName="Stock" />
                                <dxg:GridColumn Width="100*"
                                                CellDisplayTemplate="{StaticResource CellDisplayTemplateMaxCapacity}"
                                                FieldName="MaxCapacity" />
                                <dxg:GridColumn Width="90*"
                                                CellDisplayTemplate="{DynamicResource BooleanCellTemplate}"
                                                FieldName="IsItemPairingFixed" />
                            </wms:WmsGridControl.Columns>

                            <wms:WmsGridControl.SortInfo>
                                <dxg:GridSortInfo FieldName="LoadingUnitCode"
                                                  SortOrder="Ascending" />
                            </wms:WmsGridControl.SortInfo>

                        </wms:WmsGridControl>

                    </StackPanel>

                </GroupBox>

            </Grid>
        </ScrollViewer>

        <ScrollViewer Grid.RowSpan="2"
                      Grid.Column="1"
                      Focusable="False"
                      IsTabStop="False">

            <Border Style="{StaticResource InfoBoxBorderStyle}">
                <GroupBox Margin="20,0"
                          Header="{x:Static res:MasterData.OtherInformation}">
                    <StackPanel Orientation="Vertical">
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Model.CreationDate}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Model.LastHandlingDate}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Model.InventoryDate}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Model.LastPickDate}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Model.LastStoreDate}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Model.InCycleCount}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Model.OutCycleCount}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Model.OtherCycleCount}" />
                    </StackPanel>
                </GroupBox>

            </Border>

        </ScrollViewer>

    </Grid>
</wms:WmsView>
