<wms:WmsDialogView x:Class="Ferretto.WMS.Modules.MasterData.LoadingUnitAddDialogView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:bm="clr-namespace:Ferretto.Common.BusinessModels;assembly=Ferretto.Common.BusinessModels"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                   xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
                   xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
                   Title="{x:Static res:Navigation.LoadingUnitAdd}"
                   d:DesignHeight="450"
                   d:DesignWidth="800"
                   AllowsTransparency="True"
                   Mode="DialogWindow"
                   Opacity="1"
                   ResizeMode="NoResize"
                   ShowInTaskbar="False"
                   WindowStyle="None"
                   mc:Ignorable="d">
    <dx:DXWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Ferretto.WMS.App.Themes;component/Themes/Light/DialogWindow.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </dx:DXWindow.Resources>
    <Grid Margin="50,10,50,10"
          HorizontalAlignment="Stretch"
          Background="White"
          IsEnabled="{Binding IsBusy, Converter={StaticResource BNC}}"
          Opacity="1">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="1"
                   Margin="14,12,0,0"
                   FontSize="{DynamicResource FontSizeMedium}"
                   Text="{x:Static res:Navigation.LoadingUnitAdd}" />

        <ScrollViewer Grid.Row="1"
                      Margin="40,0,20,10"
                      Focusable="False"
                      IsTabStop="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="0"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:MasterData.LoadingUnitInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <wms:TextBox Margin="0,0,20,0"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Model.Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Column="1"
                                      Grid.ColumnSpan="2"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      BusinessObjectValue="{Binding Model.LoadingUnitTypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                                      IsTextEditable="True"
                                      ItemsSource="{Binding Model.LoadingUnitTypeChoices}"
                                      NullText="{x:Static res:General.SelectValue}" />

                        <wms:ComboBox Grid.Row="2"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Model.LoadingUnitStatusId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Model.LoadingUnitStatusChoices}" />
                        <wms:ComboBox Grid.Row="2"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Model.AbcClassId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Model.AbcClassChoices}" />
                        <wms:ComboBox Grid.Row="2"
                                      Grid.Column="2"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      AllowNullInput="True"
                                      BusinessObjectValue="{Binding Model.ReferenceType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}"
                                      EditValue="{x:Null}"
                                      ItemTemplate="{DynamicResource ComboBoxEditTranslation}"
                                      NullText="{x:Static res:General.SelectValue}">
                            <dxmvvm:Interaction.Behaviors>
                                <dxmvvm:EnumItemsSourceBehavior EnumType="{x:Type bm:ReferenceType}"
                                                                SortMode="DisplayName" />
                            </dxmvvm:Interaction.Behaviors>
                        </wms:ComboBox>

                        <wms:TextBox Grid.Row="3"
                                     Grid.ColumnSpan="3"
                                     Height="100"
                                     Margin="0,0,20,0"
                                     wms:ShowTitle.Show="True"
                                     EditValue="{Binding Model.Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsMultiline="True" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:MasterData.PhysicalInformation}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <wms:SpinEdit Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      AllowNullInput="False"
                                      Style="{DynamicResource SpinEditPositiveDecimalStyle}"
                                      EditValue="{Binding Path=Model.Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnExceptions=True}" />
                        <wms:SpinEdit Grid.Column="1"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      AllowNullInput="False"
                                      EditValue="{Binding Path=Model.Weight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Column="2"
                                      Margin="0,0,20,0"
                                      wms:ShowTitle.Show="True"
                                      EditValue="{Binding Path=Model.HandlingParametersCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>

        <wms:ActionBar Grid.Row="2"
                       Margin="10,60,40,0"
                       HorizontalAlignment="Right"
                       Style="{DynamicResource ActionBarNotCustomizable}">

            <wms:ActionBarItem Command="{Binding CreateCommand}"
                               Content="{x:Static res:General.Create}"
                               CustomGlyphSize="36,36"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/icons8-create-36.png"
                               GlyphSize="Custom" />

            <wms:ActionBarItem Command="{Binding ClearCommand}"
                               Content="{x:Static res:General.Clear}"
                               CustomGlyphSize="36,36"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/icons8-erase-36.png"
                               GlyphSize="Custom" />

            <wms:ActionBarItem Command="{Binding CloseDialogCommand}"
                               Content="{x:Static res:General.Cancel}"
                               CustomGlyphSize="36,36"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/ic_highlight_off_black_36dp.png"
                               GlyphSize="Custom" />
        </wms:ActionBar>

        <TextBlock Grid.Row="2"
                   MaxWidth="500"
                   HorizontalAlignment="Left"
                   Style="{DynamicResource TextBlockErrorMessageStyle}"
                   Text="{Binding Model.Error}"
                   Visibility="{Binding IsEnableError, Converter={StaticResource BTVC}}" />
    </Grid>
</wms:WmsDialogView>
