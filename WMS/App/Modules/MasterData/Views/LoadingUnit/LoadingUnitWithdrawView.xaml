<wms:WmsDialogView x:Class="Ferretto.WMS.App.Modules.MasterData.LoadingUnitWithdrawView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:res="clr-namespace:Ferretto.WMS.App.Resources;assembly=Ferretto.WMS.App.Resources"
                   xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls"
                   Title="{x:Static res:Navigation.LoadingUnitWithdraw}"
                   d:DesignHeight="450"
                   d:DesignWidth="800"
                   AllowsTransparency="True"
                   Mode="DialogWindow"
                   Opacity="1"
                   ResizeMode="NoResize"
                   ShowInTaskbar="False"
                   WindowStyle="None"
                   mc:Ignorable="d">
    <Grid Margin="10,1,10,10"
          HorizontalAlignment="Stretch"
          Background="White"
          Opacity="1">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Margin="14,12,0,0"
                   FontSize="{DynamicResource FontSizeMedium}"
                   Text="{x:Static res:Navigation.LoadingUnitWithdraw}" />

        <ScrollViewer Grid.Row="1"
                      Margin="10,0,10,10"
                      Focusable="False"
                      IsTabStop="True">
            <Grid IsEnabled="{Binding IsBusy, Converter={StaticResource BNC}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <wms:InfoText Grid.Row="1"
                              Margin="0,10,0,0"
                              wms:ShowTitle.Show="True"
                              Content="{Binding Model.Code}" />

                <wms:InfoText Grid.Row="1"
                              Grid.Column="1"
                              Margin="0,10,0,0"
                              wms:ShowTitle.Show="True"
                              Content="{Binding Model.LoadingUnitStatusDescription}" />

                <wms:InfoText Grid.Row="2"
                              Margin="0,0,0,0"
                              wms:ShowTitle.Show="True"
                              Content="{Binding Model.LoadingUnitTypeDescription}" />

                <wms:InfoText Grid.Row="2"
                              Grid.Column="1"
                              Margin="0,0,0,0"
                              wms:ShowTitle.Show="True"
                              Content="{Binding Model.AreaName}" />

                <wms:ComboBox x:Name="SelectedBay"
                              Grid.Row="3"
                              Grid.Column="0"
                              Margin="0,10,20,0"
                              wms:ShowTitle.Show="True"
                              BusinessObjectValue="{Binding Model.BayId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding Model.BayChoices}" />
            </Grid>
        </ScrollViewer>

        <wms:ActionBar Grid.Row="2"
                       Grid.ColumnSpan="3"
                       Margin="10,10,10,0"
                       HorizontalAlignment="Right"
                       Style="{DynamicResource ActionBarNotCustomizable}">

            <wms:ActionBarItem Command="{Binding RunWithdrawCommand}"
                               Content="{x:Static res:MasterData.RunLoadingUnitWithdraw}"
                               CustomGlyphSize="36,36"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/av/1x_web/ic_play_circle_outline_black_36dp.png"
                               GlyphSize="Custom"
                               IsEnabled="{Binding IsBusy, Converter={StaticResource BNC}}" />

            <wms:ActionBarItem Command="{Binding CloseDialogCommand}"
                               Content="{x:Static res:General.Cancel}"
                               CustomGlyphSize="36,36"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_highlight_off_black_36dp.png"
                               GlyphSize="Custom" />
        </wms:ActionBar>

        <TextBlock Grid.Row="2"
                   MaxWidth="500"
                   Margin="15,0,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Style="{DynamicResource TextBlockErrorMessageStyle}"
                   Text="{Binding Model.Error}"
                   Visibility="{Binding Model.IsValidationEnabled, Converter={StaticResource BTVC}}" />
    </Grid>
</wms:WmsDialogView>
