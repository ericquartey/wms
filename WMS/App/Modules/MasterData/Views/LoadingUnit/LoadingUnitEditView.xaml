<wms:WmsView x:Class="Ferretto.WMS.Modules.MasterData.LoadingUnitEditView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Ferretto.Common.Controls.WPF;assembly=Ferretto.Common.Controls.WPF"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:masterData="clr-namespace:Ferretto.WMS.Modules.MasterData"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls"
             Title="{x:Static res:Navigation.LoadingUnitEdit}"
             MinHeight="300"
             d:DesignHeight="450"
             d:DesignWidth="800"
             EnableHistoryView="True"
             IsVisibleBackButton="{Binding IsSidePanelOpen, Converter={StaticResource BNC}}"
             SubTitle="{Binding SubTitle}"
             SubTitleVisibility="{Binding Model, Converter={StaticResource RTVC}}"
             mc:Ignorable="d">
    <Grid Margin="10,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              IsEnabled="{Binding IsSidePanelOpen, Converter={StaticResource BNC}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <wms:ActionBar Grid.Row="0"
                           Margin="10,10,10,0"
                           HorizontalAlignment="Right"
                           Style="{DynamicResource ActionBarNotCustomizable}">
                <wms:ActionBarItem Command="{Binding EditCompartmentCommand}"
                                   Content="{x:Static res:MasterData.EditCompartment}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/image/1x_web/ic_edit_black_24dp.png"
                                   GlyphSize="Custom" />
                <wms:ActionBarItem Command="{Binding AddCompartmentCommand}"
                                   Content="{x:Static res:MasterData.AddCompartment}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/1x_web/ic_add_circle_outline_black_24dp.png"
                                   GlyphSize="Custom"
                                   TooltipText="{Binding AddReason}" />
                <wms:ActionBarItem Command="{Binding BulkAddCompartmentCommand}"
                                   Content="{x:Static res:MasterData.BulkAddCompartment}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/image/1x_web/ic_photo_size_select_small_black_24dp.png"
                                   GlyphSize="Custom" />
            </wms:ActionBar>

            <GroupBox Grid.Row="1"
                      Header="{x:Static res:MasterData.CompartmentsLayoutOverview}">
                <ctrls:TrayControl x:Name="TrayControl"
                                   Margin="0,10,0,0"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   CommandDoubleClick="{Binding EditCompartmentCommand}"
                                   Compartments="{Binding Model.Compartments}"
                                   DimensionHeight="{Binding Model.Length}"
                                   DimensionWidth="{Binding Model.Width}"
                                   IsCompartmentSelectable="{Binding IsSidePanelOpen, Converter={StaticResource BNC}}"
                                   IsReadOnly="{Binding IsSidePanelOpen}"
                                   RulerFontSize="8"
                                   RulerInfo="mm"
                                   SelectedColorFilterFunc="{Binding FilterColorFunc}"
                                   SelectedItem="{Binding SelectedCompartmentTray, Mode=TwoWay}"
                                   ShowBackground="True"
                                   ShowRuler="True" />
            </GroupBox>

            <GroupBox Grid.Row="2"
                      Header="{x:Static res:MasterData.Compartments}">
                <wms:WmsGridControl MinHeight="50"
                                    MaxWidth="5000"
                                    MaxHeight="500"
                                    Margin="0,0,0,10"
                                    HorizontalAlignment="Left"
                                    ItemsSource="{Binding CompartmentsDataSource, Mode=OneWay}"
                                    SelectedBusinessObject="{Binding SelectedCompartmentTray, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <wms:WmsGridControl.View>
                        <dxg:TableView NavigationStyle="Row">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="RowDoubleClick">
                                    <i:InvokeCommandAction Command="{Binding EditCompartmentCommand}"
                                                           CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.SelectedCompartmentTray.Id, Mode=OneWay}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </dxg:TableView>
                    </wms:WmsGridControl.View>

                    <wms:WmsGridControl.Columns>
                        <dxg:GridColumn Width="100*"
                                        Header="{x:Static res:General.Position}">
                            <dxg:GridColumn.CellDisplayTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{DynamicResource TextBlockCell}">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource SFC}">
                                                <Binding Source="{x:Static res:General.PositionFormat}" />
                                                <Binding Path="Data.XPosition"
                                                         TargetNullValue="" />
                                                <Binding Path="Data.YPosition"
                                                         TargetNullValue="" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </dxg:GridColumn.CellDisplayTemplate>
                        </dxg:GridColumn>
                        <dxg:GridColumn Width="100*"
                                        Header="{x:Static res:General.Dimension}">
                            <dxg:GridColumn.CellDisplayTemplate>
                                <DataTemplate>
                                    <TextBlock Style="{DynamicResource TextBlockCell}">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource SFC}">
                                                <Binding Source="{x:Static res:General.DimensionFormat}" />
                                                <Binding Path="Data.Width"
                                                         TargetNullValue="" />
                                                <Binding Path="Data.Height"
                                                         TargetNullValue="" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </dxg:GridColumn.CellDisplayTemplate>
                        </dxg:GridColumn>
                        <dxg:GridColumn Width="100*"
                                        FieldName="ItemCode" />
                        <dxg:GridColumn Width="250*"
                                        FieldName="ItemDescription" />
                        <dxg:GridColumn Width="100*"
                                        FieldName="Sub1" />
                        <dxg:GridColumn Width="100*"
                                        FieldName="Sub2" />
                        <dxg:GridColumn Width="200*"
                                        FieldName="Lot" />
                        <dxg:GridColumn Width="120*"
                                        FieldName="CompartmentStatusDescription" />
                        <dxg:GridColumn Width="100*"
                                        FieldName="Stock">
                            <dxg:GridColumn.CellDisplayTemplate>
                                <DataTemplate>
                                    <TextBlock VerticalAlignment="Center">
                                        <TextBlock.Text>
                                            <MultiBinding Converter="{StaticResource SFC}">
                                                <Binding Source="{x:Static res:General.QuantityWithUnitMeasure}" />
                                                <Binding Path="Data.Stock"
                                                         TargetNullValue="" />
                                                <Binding Path="Data.ItemMeasureUnit"
                                                         TargetNullValue="" />
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </dxg:GridColumn.CellDisplayTemplate>
                        </dxg:GridColumn>
                        <dxg:GridColumn Width="100*"
                                        CellDisplayTemplate="{DynamicResource BooleanCellTemplate}"
                                        FieldName="IsItemPairingFixed" />
                    </wms:WmsGridControl.Columns>

                    <wms:WmsGridControl.SortInfo>
                        <dxg:GridSortInfo FieldName="LoadingUnitCode"
                                          SortOrder="Ascending" />
                    </wms:WmsGridControl.SortInfo>

                </wms:WmsGridControl>
            </GroupBox>
        </Grid>


        <wms:Expander x:Name="Expander"
                      Grid.Row="0"
                      Grid.Column="1"
                      VerticalAlignment="Stretch"
                      VerticalContentAlignment="Stretch"
                      ExpandDirection="Right"
                      HideToggleButton="True"
                      IsExpanded="{Binding IsSidePanelOpen}">

            <Border x:Name="BorderStyle"
                    Grid.Column="1"
                    Grid.ColumnSpan="1"
                    Style="{StaticResource InfoBoxBorderStyle}">

                <Grid x:Name="InputEdit"
                      HorizontalAlignment="Left">
                    <ContentControl Content="{Binding Path=ActiveSideViewModel}">
                        <ContentControl.Resources>
                            <DataTemplate DataType="{x:Type masterData:CompartmentEditViewModel}">
                                <masterData:CompartmentEditView />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type masterData:CompartmentAddViewModel}">
                                <masterData:CompartmentAddView />
                            </DataTemplate>
                            <DataTemplate DataType="{x:Type masterData:CompartmentAddBulkViewModel}">
                                <masterData:CompartmentAddBulkView />
                            </DataTemplate>
                        </ContentControl.Resources>
                    </ContentControl>

                </Grid>

            </Border>

        </wms:Expander>

    </Grid>
</wms:WmsView>
