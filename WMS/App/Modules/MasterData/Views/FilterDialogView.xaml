<wms:WmsDialogView x:Class="Ferretto.WMS.Modules.MasterData.FilterDialogView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
                   xmlns:dxfui="http://schemas.devexpress.com/winfx/2008/xaml/core/filteringui"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
                   xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
                   Title="{x:Static res:General.Filter}"
                   Width="500"
                   Height="600"
                   d:DesignHeight="500"
                   d:DesignWidth="500"
                   HeaderIsEnabled="{Binding IsBusy, Converter={StaticResource BNC}}"
                   ResizeMode="NoResize"
                   SizeToContent="Height"
                   mc:Ignorable="d">


    <wms:BusyIndicator Grid.Row="2"
                       Grid.ColumnSpan="2"
                       IsBusy="{Binding IsBusy}">
        <Grid Margin="5,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <dxfui:FilterEditorControl x:Name="filterEditor"
                                       Grid.Column="1"
                                       Context="{Binding Path=FilteringContext, ElementName=MainGridControl}"
                                       FilterChanged="FilterEditor_FilterChanged" />

            <wms:ActionBar Grid.Column="1"
                           Margin="5"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Style="{DynamicResource ActionBarNotCustomizable}">
                <wms:ActionBarItem Command="{Binding SimpleWithdrawCommand}"
                                   Content="{x:Static res:MasterData.SimpleWithdraw}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/Icons/Material/editor/ic_drag_handle_black_24dp.png"
                                   GlyphSize="Custom"
                                   IsVisible="{Binding AdvancedWithdraw}" />
                <wms:ActionBarItem Command="{Binding AdvancedWithdrawCommand}"
                                   Content="{x:Static res:MasterData.AdvancedWithdraw}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/Icons/Material/editor/ic_format_align_justify_black_24dp.png"
                                   GlyphSize="Custom"
                                   IsVisible="{Binding SimpleWithdraw}" />
                <wms:ActionBarItem Command="{Binding RunWithdrawCommand, IsAsync=True}"
                                   Content="{x:Static res:MasterData.RunItemWithdraw}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/Icons/Material/av/ic_play_circle_outline_black_24dp.png"
                                   GlyphSize="Custom" />
            </wms:ActionBar>

        </Grid>
    </wms:BusyIndicator>

</wms:WmsDialogView>
