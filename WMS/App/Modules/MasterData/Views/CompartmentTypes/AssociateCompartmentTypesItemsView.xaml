<wms:WmsWizardView x:Class="Ferretto.WMS.Modules.MasterData.AssociateCompartmentTypesStepsView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:modules="clr-namespace:Ferretto.Common.Utils.Modules;assembly=Ferretto.Common.Utils"
                   xmlns:res="clr-namespace:Ferretto.WMS.App.Resources;assembly=Ferretto.WMS.App.Resources"
                   xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls"
                   d:DesignHeight="450"
                   d:DesignWidth="800"
                   AllowsTransparency="True"
                   Mode="DialogWindow"
                   Opacity="1"
                   ResizeMode="NoResize"
                   ShowInTaskbar="False"
                   StartModuleName="{wms:NameOf Type={x:Type modules:MasterData}}"
                   StartViewName="{x:Static modules:MasterData.ASSOCIATECOMPARTMENTTYPES}"
                   WindowStyle="None"
                   mc:Ignorable="d">

    <Grid Height="500"
          Margin="10,30,10,10"
          HorizontalAlignment="Stretch"
          Background="White"
          Opacity="1">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ContentControl Tag="{x:Static res:General.WizardStep}" />

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <ScrollViewer Grid.Column="0"
                          MaxHeight="50"
                          Margin="10,10,10,0"
                          HorizontalAlignment="Left"
                          VerticalAlignment="Top"
                          Focusable="False"
                          IsTabStop="True">

                <TextBlock MaxWidth="400"
                           Margin="10,0,10,0"
                           Style="{DynamicResource TextBlockErrorMessageStyle}"
                           Text="{Binding Error}" />
            </ScrollViewer>

            <wms:ActionBar Grid.Column="1"
                           Margin="20,20,20,20"
                           HorizontalAlignment="Right"
                           Style="{DynamicResource ActionBarNotCustomizable}">


                <wms:ActionBarItem Command="{Binding GoToPreviousCommand}"
                                   Content="{x:Static res:General.Previous}"
                                   CustomGlyphSize="36,36"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/ferretto/logistics/baseline_keyboard_arrow_left_black_36dp.png"
                                   GlyphSize="Custom" />

                <wms:ActionBarItem Command="{Binding GoToNextCommand}"
                                   Content="{x:Static res:General.Next}"
                                   CustomGlyphSize="36,36"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/ferretto/logistics/baseline_keyboard_arrow_right_black_36dp.png"
                                   GlyphSize="Custom" />

                <wms:ActionBarItem Command="{Binding SaveCommand}"
                                   Content="{x:Static res:General.Done}"
                                   CustomGlyphSize="36,36"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/av/1x_web/ic_play_circle_outline_black_36dp.png"
                                   GlyphSize="Custom"
                                   IsVisible="{Binding IsSaveVisible}" />

                <wms:ActionBarItem Command="{Binding CancelCommand}"
                                   Content="{x:Static res:General.Cancel}"
                                   CustomGlyphSize="36,36"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/action/1x_web/ic_highlight_off_black_36dp.png"
                                   GlyphSize="Custom" />

            </wms:ActionBar>
        </Grid>
    </Grid>
</wms:WmsWizardView>
