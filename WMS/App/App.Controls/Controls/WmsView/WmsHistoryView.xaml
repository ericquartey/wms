<ContentControl x:Class="Ferretto.WMS.App.Controls.WmsHistoryView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls"
                mc:Ignorable="d">
    <ContentControl.Template>
        <ControlTemplate TargetType="wms:WmsHistoryView">

            <Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}">
                <Grid Width="{Binding SubTitleDimension}"
                      HorizontalAlignment="Left">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"
                                          MinWidth="8" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <wms:ActionBar x:Name="actionBarHistoryView"
                                   Margin="7,12,0,0"
                                   HorizontalAlignment="Left"
                                   Panel.ZIndex="100"
                                   Style="{DynamicResource ActionBarNotCustomizable}"
                                   Visibility="{Binding IsHeaderActionBarVisible, Converter={StaticResource BTVC}}">
                        <wms:ActionBarItem CustomGlyphSize="24,24"
                                           Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/navigation/1x_web/ic_arrow_back_black_24dp.png"
                                           GlyphSize="Custom"
                                           IsVisible="{Binding IsVisibleBackButton}"
                                           ItemClick="BackViewClick" />
                    </wms:ActionBar>
                    <TextBlock x:Name="SubTitle"
                               Grid.Column="1"
                               Margin="7,15,0,0"
                               FontSize="{DynamicResource FontSizeMedium}"
                               Text="{Binding SubTitle}"
                               Visibility="{Binding SubTitleVisibility}" />
                </Grid>
                <ContentPresenter />
            </Grid>
        </ControlTemplate>
    </ContentControl.Template>

</ContentControl>
