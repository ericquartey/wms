<UserControl x:Class="Ferretto.WMS.App.Controls.PieChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:local="clr-namespace:Ferretto.WMS.App.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <dxc:ChartControl Name="chartControl">
            <dxc:ChartControl.Diagram>
                <dxc:SimpleDiagram2D Width="300"
                                     HorizontalAlignment="Left">
                    <dxc:SimpleDiagram2D.Series>
                        <dxc:PieSeries2D x:Name="Series1"
                                         ArgumentDataMember="Argument"
                                         DataSource="{Binding Path=DataChart, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                         HoleRadiusPercent="50"
                                         LabelsVisibility="True"
                                         LegendTextPattern="{}{A}: {V}"
                                         ValueDataMember="Value">
                            <dxc:PieSeries2D.PointAnimation>
                                <dxc:Pie2DFlyInAnimation PointOrder="Random"
                                                         Duration="0:0:1.5" />
                            </dxc:PieSeries2D.PointAnimation>
                            <dxc:PieSeries2D.TotalLabel>
                                <dxc:PieTotalLabel FontSize="15"
                                                   TextPattern="Total:&#x0a;{TV}" />
                            </dxc:PieSeries2D.TotalLabel>
                            <dxc:PieSeries2D.Label>
                                <dxc:SeriesLabel dxc:PieSeries.LabelPosition="TwoColumns"
                                                 TextPattern="{}{A}, {VP:P0}" />
                            </dxc:PieSeries2D.Label>
                            <!--  region #Model  -->
                            <dxc:PieSeries2D.Model>
                                <dxc:SimplePie2DModel />
                                <!--<dxc:SemiRoundedRectanglePie2DModel />-->
                            </dxc:PieSeries2D.Model>
                            <!--  endregion #Model  -->
                            <dxc:PieSeries2D.PointOptions>
                                <dxc:PointOptions>
                                    <dxc:PointOptions.ValueNumericOptions>
                                        <dxc:NumericOptions Format="Percent"
                                                            Precision="0" />
                                    </dxc:PointOptions.ValueNumericOptions>
                                </dxc:PointOptions>
                            </dxc:PieSeries2D.PointOptions>
                        </dxc:PieSeries2D>
                    </dxc:SimpleDiagram2D.Series>
                </dxc:SimpleDiagram2D>
            </dxc:ChartControl.Diagram>
            <dxc:ChartControl.Legends>
                <dxc:Legend HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            HorizontalPosition="RightOutside"
                            Orientation="Vertical">
                    <dxc:Legend.Title>
                        <dxc:LegendTitle Content="Time" />
                    </dxc:Legend.Title>
                </dxc:Legend>
            </dxc:ChartControl.Legends>
        </dxc:ChartControl>
    </Grid>
</UserControl>
