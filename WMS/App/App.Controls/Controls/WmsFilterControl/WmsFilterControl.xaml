<UserControl
    x:Class="Ferretto.WMS.App.Controls.WmsFilterControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:res="clr-namespace:Ferretto.WMS.App.Resources;assembly=Ferretto.WMS.App.Resources"
    xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    x:Name="FilterControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel x:Name="FilterStackPanel">
        <ScrollViewer x:Name="FilterEditorContainer" HorizontalScrollBarVisibility="Auto">
            <dxe:FilterControl
                x:Name="filterEditor"
                SourceControl="{Binding Path=FilteringContext, ElementName=FilterControl}"
                FilterCriteria="{Binding Path=Filter, ElementName=FilterControl, Mode=OneWayToSource}"
                ShowBorder="False"/>
        </ScrollViewer>
        <wms:ActionBar
            Margin="5"
            HorizontalAlignment="Right"
            Style="{DynamicResource ActionBarNotCustomizable}">
            <wms:ActionBarItem
                Command="{Binding FilterCommand}"
                Content="{x:Static res:General.ApplyFilter}"
                CustomGlyphSize="18,18"
                Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/filter-36.png"
                GlyphSize="Custom" />
            <wms:ActionBarItem
                Command="{Binding ClearFilterCommand}"
                Content="{x:Static res:General.Clear}"
                CustomGlyphSize="18,18"
                Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/Ferretto/Logistics/icons8-erase-36.png"
                GlyphSize="Custom" />
        </wms:ActionBar>

    </StackPanel>

</UserControl>
