<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net471</TargetFramework>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
    <CodeAnalysisRuleSet>..\..\analysis.ruleset</CodeAnalysisRuleSet>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.2">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="SonarAnalyzer" Version="6.6.0.3969" />
    <PackageReference Include="SonarAnalyzer.CSharp" Version="7.10.0.7896" />
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="System.Xaml" />
    <Reference Include="WindowsBase" />
  </ItemGroup>

  <ItemGroup>
    <Page Include="**\*.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Icons\**\*.png" />
    <Content Remove="Images\**\*.png" />
    <Content Remove="Images\**\*.jpg" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Icons\**\*.png" />
    <Resource Include="Images\**\*.png" />
    <Resource Include="Images\**\*.jpg" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Common\Controls\Ferretto.Common.Controls.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="Themes\Light\BusyIndicator.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Themes\Light\PasswordBox.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>

</Project>
