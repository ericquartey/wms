<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:cs="colorscheme_ignorable_uri"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls"
                    mc:Ignorable="cs">

    <Style x:Key="ActionBarNotCustomizable"
           TargetType="wms:ActionBar">
        <Setter Property="AllowCustomizationMenu" Value="False" />
        <Setter Property="AllowQuickCustomization" Value="False" />
        <Setter Property="BarItemDisplayMode" Value="ContentAndGlyph" />
        <Setter Property="BarItemHorizontalIndent" Value="10" />
        <Setter Property="GlyphSize" Value="Small" />
        <Setter Property="ShowBackground" Value="False" />
    </Style>


</ResourceDictionary>

