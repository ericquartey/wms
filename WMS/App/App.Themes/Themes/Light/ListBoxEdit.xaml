<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls">

    <Style BasedOn="{StaticResource {dxdst:DefaultStyleThemeKey Type=dxe:ListBoxEdit,
                                                                ThemeName=Office2016White}}"
           TargetType="wms:RadioButton">
        <Setter Property="ShowBorder" Value="False" />
        <Setter Property="StyleSettings" Value="{dxe:RadioListBoxEditStyleSettings}" />
    </Style>

</ResourceDictionary>
