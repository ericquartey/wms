<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls">
    
    <Style TargetType="{x:Type ctrls:WmsRulerControl}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ctrls:WmsRulerControl}">
                    <Grid>
                        <Grid.Children>
                            <Line x:Name="verticalTrackLine"
                                  Width="100"
                                  Stroke="Black"
                                  StrokeDashArray="3"
                                  StrokeDashOffset="3"
                                  StrokeThickness="1"
                                  Visibility="Hidden"
                                  X1="300" />
                            <Line x:Name="horizontalTrackLine"
                                  Height="100"
                                  Stroke="Black"
                                  StrokeDashArray="3"
                                  StrokeDashOffset="3"
                                  StrokeThickness="1"
                                  Visibility="Hidden"
                                  Y1="300" />
                        </Grid.Children>
                    </Grid>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
