<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:wms="clr-namespace:Ferretto.WMS.App.Controls;assembly=Ferretto.WMS.App.Controls">

    <wms:BoolToVisibilityConverter x:Key="BTVC" />
    <wms:BoolToVisibilityConverter x:Key="BTVIC"
                                   Invert="True" />
    <wms:PropertyDescriptionConverter x:Key="DNC"
                                      Control="{x:Type wms:InfoText}"
                                      Property="{x:Static wms:InfoText.ContentProperty}" />

    <Style BasedOn="{StaticResource {dxdst:DefaultStyleThemeKey FullName=System.Windows.Controls.Label,
                                                                ThemeName=Office2016White}}"
           TargetType="{x:Type wms:InfoText}">
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type wms:InfoText}">
                    <Grid Name="ControlMainGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <wms:WmsLabel x:Name="TitleLabel"
                                      TrimTitle="False"
                                      Visibility="Collapsed" />
                        <StackPanel Grid.Row="1">
                            <Border x:Name="InnerTextEnumBorder"
                                    Background="{TemplateBinding BackgroundBrush}"
                                    CornerRadius="7"
                                    Visibility="{TemplateBinding IsPillVisible,
                                                                 Converter={StaticResource BTVC}}">
                                <Label x:Name="InnerTextEnum"
                                       Margin="8,0"
                                       Padding="0,1,0,1"
                                       HorizontalAlignment="Center"
                                       Content="{TemplateBinding ContentText}"
                                       FontFamily="{DynamicResource FontSmall}"
                                       FontSize="{DynamicResource FontSizeSmall}"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource CommonBackground}" />
                            </Border>

                            <Label x:Name="InnerTextValue"
                                   Padding="0,1,0,1"
                                   HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                   Content="{TemplateBinding ContentText}"
                                   FontFamily="{DynamicResource FontSmall}"
                                   FontSize="{DynamicResource FontSizeSmall}"
                                   FontWeight="Bold"
                                   Visibility="{TemplateBinding IsPillVisible,
                                                                Converter={StaticResource BTVIC}}">
                                <Label.Style>
                                    <Style TargetType="Label">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:InfoText}}, Path=IsPropertyNull}"
                                                         Value="True">
                                                <Setter Property="FontStyle" Value="Italic" />
                                                <Setter Property="Foreground" Value="{DynamicResource CommonSecondaryLight}" />
                                            </DataTrigger>

                                        </Style.Triggers>
                                    </Style>
                                </Label.Style>
                            </Label>

                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
