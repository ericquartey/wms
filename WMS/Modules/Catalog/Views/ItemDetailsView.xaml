<ctrls:WmsView x:Class="Ferretto.WMS.Modules.Catalog.ItemDetailsView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:ctrls="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               d:DesignHeight="450"
               d:DesignWidth="800"
               mc:Ignorable="d">
    <Grid Margin="0,0,5,0"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <ScrollViewer IsTabStop="True"
                      VerticalScrollBarVisibility="Visible">
            <WrapPanel>
                <Border Padding="5">
                    <ItemsControl>
                        <ItemsControl.Items>
                            <StackPanel Margin="0,0,0,2"
                                        Orientation="Horizontal">
                                <TextBlock Name="ArticleDetailSP"
                                           Text="Dettaglio Articolo" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,2"
                                        Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Id" />
                                <dxe:TextEdit Width="150"
                                              EditValue="{Binding Path=Item.Id, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              IsReadOnly="True" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,2"
                                        Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Codice Articolo" />
                                <dxe:TextEdit Width="100"
                                              EditValue="{Binding Path=Item.Code}"
                                              IsReadOnly="True" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,2"
                                        Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Descrizione" />
                                <dxe:TextEdit Width="100"
                                              EditValue="{Binding Path=Item.Description}"
                                              IsReadOnly="True" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,2"
                                        Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Classe" />
                                <dxe:TextEdit Width="100"
                                              Height="100"
                                              VerticalContentAlignment="Top"
                                              AcceptsReturn="True"
                                              EditValue="{Binding Path=Item.Class}"
                                              IsReadOnly="False"
                                              TextWrapping="Wrap"
                                              VerticalScrollBarVisibility="Auto" />
                            </StackPanel>

                            <StackPanel Margin="0,0,0,2"
                                        Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Note" />
                                <dxe:TextEdit Width="100"
                                              Height="100"
                                              VerticalContentAlignment="Top"
                                              AcceptsReturn="True"
                                              EditValue="{Binding Path=Item.Note}"
                                              IsReadOnly="True"
                                              TextWrapping="Wrap"
                                              VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                        </ItemsControl.Items>
                    </ItemsControl>
                </Border>

                <Border Padding="5">
                    <ItemsControl>
                        <ItemsControl.Items>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Unità di Misura" />
                                <dxe:TextEdit Width="150"
                                              EditValue="{Binding Path=Item.MeasureUnitId}"
                                              IsReadOnly="True" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Larghezza" />
                                <dxe:TextEdit Width="150"
                                              VerticalContentAlignment="Top"
                                              AcceptsReturn="True"
                                              EditValue="{Binding Path=Item.Width}"
                                              IsReadOnly="False"
                                              VerticalScrollBarVisibility="Auto" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Lunghezza" />
                                <dxe:TextEdit Width="150"
                                              VerticalContentAlignment="Top"
                                              AcceptsReturn="True"
                                              EditValue="{Binding Path=Item.Length}"
                                              IsReadOnly="False"
                                              VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Altezza" />
                                <dxe:TextEdit Width="150"
                                              VerticalContentAlignment="Top"
                                              AcceptsReturn="True"
                                              EditValue="{Binding Path=Item.Height}"
                                              IsReadOnly="False"
                                              VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Tipo gestione ID" />
                                <dxe:TextEdit Width="150"
                                              VerticalContentAlignment="Top"
                                              AcceptsReturn="True"
                                              EditValue="{Binding Path=Item.ItemManagementTypeId}"
                                              IsReadOnly="False"
                                              TextWrapping="Wrap"
                                              VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Periodo FIFO in versamento" />
                                <dxe:TextEdit Width="150"
                                              VerticalContentAlignment="Top"
                                              AcceptsReturn="True"
                                              EditValue="{Binding Path=Item.FifoTimeStore}"
                                              IsReadOnly="False"
                                              VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Periodo FIFO in prelievo" />
                                <dxe:TextEdit Width="150"
                                              VerticalContentAlignment="Top"
                                              AcceptsReturn="True"
                                              EditValue="{Binding Path=Item.FifoTimePick}"
                                              IsReadOnly="False"
                                              VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Punto di riordino" />
                                <dxe:TextEdit Width="150"
                                              VerticalContentAlignment="Top"
                                              AcceptsReturn="True"
                                              EditValue="{Binding Path=Item.ReorderPoint}"
                                              IsReadOnly="False"
                                              VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Qtà di riordino" />
                                <dxe:TextEdit Width="150"
                                              VerticalContentAlignment="Top"
                                              AcceptsReturn="True"
                                              EditValue="{Binding Path=Item.ReorderQuantity}"
                                              IsReadOnly="False"
                                              VerticalScrollBarVisibility="Auto" />
                            </StackPanel>
                        </ItemsControl.Items>
                    </ItemsControl>
                </Border>
                <Border Padding="5">
                    <ItemsControl>
                        <ItemsControl.Items>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Data Inventario" />
                                <dxe:DateEdit Width="150"
                                              EditValue="{Binding Path=Item.InventoryDate}"
                                              IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Quantita' minima di riordino" />
                                <dxe:TextEdit Width="150"
                                              EditValue="{Binding Path=Item.QuantitaMinimaDiRiordino}"
                                              IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Peso unitario" />
                                <dxe:TextEdit Width="150"
                                              EditValue="{Binding Path=Item.AverageWeight}"
                                              IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Tolleranza in prelievo" />
                                <dxe:TextEdit Width="150"
                                              EditValue="{Binding Path=Item.PickTolerance}"
                                              IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Tolleranza in versamento" />
                                <dxe:TextEdit Width="150"
                                              EditValue="{Binding Path=Item.StoreTolerance}"
                                              IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Tolleranza in inventario" />
                                <dxe:TextEdit Width="150"
                                              EditValue="{Binding Path=Item.InventoryTolerance}"
                                              IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Data di creazione" />
                                <dxe:DateEdit Width="150"
                                              EditValue="{Binding Path=Item.CreationDate}"
                                              IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Data di ultima modifica" />
                                <dxe:DateEdit Width="150"
                                              EditValue="{Binding Path=Item.LastModificationDate}"
                                              IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Data ultimo prelievo" />
                                <dxe:DateEdit Width="150"
                                              EditValue="{Binding Path=Item.LastPickDate}"
                                              IsReadOnly="True" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock MinWidth="150"
                                           Text="Data ultimo versamento" />
                                <dxe:DateEdit Width="150"
                                              EditValue="{Binding Path=Item.LastStoreDate}"
                                              IsReadOnly="True" />
                            </StackPanel>
                        </ItemsControl.Items>
                    </ItemsControl>
                </Border>


                <dxe:ImageEdit MaxWidth="200"
                               MaxHeight="200"
                               BorderBrush="LightGray"
                               Source="{Binding ImgArticle}" />
            </WrapPanel>
        </ScrollViewer>

    </Grid>
</ctrls:WmsView>
