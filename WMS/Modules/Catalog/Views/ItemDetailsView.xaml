<ctrls:WmsView x:Class="Ferretto.WMS.Modules.Catalog.ItemDetailsView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:catalog="clr-namespace:Ferretto.WMS.Modules.Catalog"
               xmlns:ctrls="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
               xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               d:DesignHeight="450"
               d:DesignWidth="800"
               mc:Ignorable="d">
    <Grid Margin="20"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <ScrollViewer IsTabStop="True"
                      VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"
                                      MinWidth="400" />
                    <ColumnDefinition Width="0.12*"
                                      MinWidth="20" />
                    <ColumnDefinition Width="*"
                                      MinWidth="400" />
                    <ColumnDefinition Width="0.12*"
                                      MinWidth="20" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ctrls:ContentGroup Label="Item Information">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ctrls:TextBox Label="Code"
                                       Text="{Binding Code}" />
                        <ctrls:TextBox Grid.Row="1"                                       
                                       Label="Description"
                                       Text="{Binding Description}" />
                    </Grid>
                </ctrls:ContentGroup>

                <ctrls:ContentGroup Grid.Column="2">
                    <ctrls:TextBox Margin="0,13,0,0"
                                   VerticalAlignment="Stretch"
                                   VerticalContentAlignment="Stretch"
                                   Label="Notes"
                                   Text="{Binding Notes}" />
                </ctrls:ContentGroup>

                <ctrls:ContentGroup Grid.Row="1"
                                    Label="Warehousing Informations">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="120"
                                              MaxWidth="120" />
                            <ColumnDefinition Width="*"
                                              MinWidth="20" />
                            <ColumnDefinition MinWidth="120"
                                              MaxWidth="120" />
                            <ColumnDefinition Width="*"
                                              MinWidth="20" />
                            <ColumnDefinition MinWidth="120"
                                              MaxWidth="120" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ctrls:TextBox Grid.Column="0"
                                       Label="ABC Class"
                                       Text="{Binding AbcClass.Description}" />
                        <ctrls:TextBox Grid.Column="2"
                                       Label="FIFO Store Time"
                                       Text="{Binding FifoTimeStore}" />
                        <ctrls:TextBox Grid.Column="4"
                                       Label="Reorder Point"
                                       Text="{Binding ReorderPoint}" />
                        <ctrls:TextBox Grid.Row="1"
                                       Grid.Column="0"
                                       Label="Measure Unit"
                                       Text="{Binding MeasureUnit.Description}" />
                        <ctrls:TextBox Grid.Row="1"
                                       Grid.Column="2"
                                       Label="FIFO Pick Time"
                                       Text="{Binding FifoTimePick}" />
                        <ctrls:TextBox Grid.Row="1"
                                       Grid.Column="4"
                                       Label="Reorder Quantity"
                                       Text="{Binding ReorderQuantity}" />
                        <ctrls:TextBox Grid.Row="2"
                                       Label="Management Type"
                                       Text="{Binding ItemManagementType.Description}" />
                    </Grid>
                </ctrls:ContentGroup>

                <ctrls:ContentGroup Grid.Row="1"
                                    Grid.Column="2"
                                    Label="Physical Informations">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="120"
                                              MaxWidth="120" />
                            <ColumnDefinition Width="*"
                                              MinWidth="20" />
                            <ColumnDefinition MinWidth="120"
                                              MaxWidth="120" />
                            <ColumnDefinition Width="*"
                                              MinWidth="20" />
                            <ColumnDefinition MinWidth="120"
                                              MaxWidth="120" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <ctrls:TextBox Grid.Column="0"
                                       Label="Height"
                                       Text="{Binding Height}" />
                        <ctrls:TextBox Grid.Column="2"
                                       Label="Length"
                                       Text="{Binding Length}" />
                        <ctrls:TextBox Grid.Column="4"
                                       Label="Pick Tolerance"
                                       Text="{Binding PickTolerance}" />
                        <ctrls:TextBox Grid.Row="1"
                                       Grid.Column="0"
                                       Label="Width"
                                       Text="{Binding Width}" />
                        <ctrls:TextBox Grid.Row="1"
                                       Grid.Column="2"
                                       Label="Average Weight"
                                       Text="{Binding AverageWeight}" />
                        <ctrls:TextBox Grid.Row="1"
                                       Grid.Column="4"
                                       Label="Store Tolerance"
                                       Text="{Binding StoreTolerance}" />
                        <ctrls:TextBox Grid.Row="2"
                                       Label="Inventory Tolerance"
                                       Text="{Binding InventoryTolerance}" />
                    </Grid>
                </ctrls:ContentGroup>

                <ctrls:ContentGroup Grid.Row="2"
                                    Grid.ColumnSpan="3"
                                    Label="Compartments">
                    <catalog:ItemsGridControl MaxWidth="2000"
                                              MaxHeight="5000"
                                              SelectionMode="Row">
                        <catalog:ItemsGridControl.View>
                            <dxg:TableView AllowEditing="False"
                                           AllowGrouping="False"
                                           AllowMoveColumnToDropArea="False"
                                           NavigationStyle="Row"
                                           SearchPanelHorizontalAlignment="Right"
                                           ShowGroupPanel="False"
                                           ShowIndicator="False"
                                           ShowSearchPanelMode="Always" />
                        </catalog:ItemsGridControl.View>
                        <dxg:GridColumn Width="100*"
                                        FieldName="Code"
                                        Header="Code" />
                        <dxg:GridColumn Width="300*"
                                        FieldName="LoadingUnit"
                                        Header="Loading Unit" />
                        <dxg:GridColumn Width="100*"
                                        FieldName="Sub1"
                                        Header="Sub 1" />
                        <dxg:GridColumn Width="100*"
                                        FieldName="Sub2"
                                        Header="Sub 2" />
                        <dxg:GridColumn Width="200*"
                                        FieldName="Lot"
                                        Header="Lot" />
                        <dxg:GridColumn Width="200*"
                                        FieldName="Status"
                                        Header="Status" />
                        <dxg:GridColumn Width="200*"
                                        FieldName="Stock"
                                        Header="Stock" />
                        <dxg:GridColumn Width="200*"
                                        FieldName="Pairing"
                                        Header="pairing" />
                    </catalog:ItemsGridControl>
                </ctrls:ContentGroup>

                <ctrls:ContentGroup Grid.RowSpan="3"
                                    Grid.Column="4"
                                    MinWidth="200"
                                    MaxWidth="500">
                    <StackPanel HorizontalAlignment="Center"
                                Orientation="Vertical">
                        <dxe:ImageEdit MinWidth="200"
                                       MinHeight="200"
                                       MaxWidth="500"
                                       MaxHeight="500"
                                       BorderBrush="LightGray"
                                       Source="{Binding ImgArticle}" />
                        <ctrls:Label Margin="20,3,0,0"
                                     HorizontalAlignment="Left"
                                     Content="Creation Date"
                                     Text="-" />
                        <ctrls:Label Margin="20,3,0,0"
                                     HorizontalAlignment="Left"
                                     Content="Last Modification Date"
                                     Text="-" />
                        <ctrls:Label Margin="20,3,0,0"
                                     HorizontalAlignment="Left"
                                     Content="Last Inventory Date"
                                     Text="-" />
                        <ctrls:Label Margin="20,3,0,0"
                                     HorizontalAlignment="Left"
                                     Content="Last Pick Date"
                                     Text="-" />
                        <ctrls:Label Margin="20,3,0,0"
                                     HorizontalAlignment="Left"
                                     Content="Last Store Date"
                                     Text="-" />
                    </StackPanel>
                </ctrls:ContentGroup>

            </Grid>
        </ScrollViewer>
    </Grid>
</ctrls:WmsView>
