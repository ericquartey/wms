<ctrls:WmsView x:Class="Ferretto.WMS.Modules.Compartment.LayoutView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:ctrls="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
               xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               d:DesignHeight="450"
               d:DesignWidth="800"
               mc:Ignorable="d">
    <Grid>
        <ctrls:WmsMainDockLayoutManager>
            <dxdo:LayoutGroup Name="HorizLayoutGroup"
                              Orientation="Horizontal">
                <dxdo:LayoutGroup Name="VertLayoutGroup"
                                  Orientation="Vertical">
                    <dxdo:LayoutGroup Name="MainDocumentGroupLayoutGroup"
                                      ItemHeight="0.7*"
                                      Orientation="Horizontal">
                        <dxdo:DocumentGroup Name="MainDocumentGroup"
                                            DestroyOnClosingChildren="False"
                                            MDIStyle="Tabbed" />
                    </dxdo:LayoutGroup>
                </dxdo:LayoutGroup>
            </dxdo:LayoutGroup>
        </ctrls:WmsMainDockLayoutManager>

        <!--  Preload GridControl, as mentioned in https://www.devexpress.com/Support/Center/Question/Details/Q366638/  -->
        <dxg:GridControl MaxWidth="1"
                         MaxHeight="1"
                         Visibility="Hidden" />
    </Grid>
</ctrls:WmsView>
