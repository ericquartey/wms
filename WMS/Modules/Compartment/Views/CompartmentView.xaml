<wms:WmsView x:Class="Ferretto.WMS.Modules.Compartment.CompartmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:compartment="clr-namespace:Ferretto.WMS.Modules.Compartment"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
             Title="Compartment"
             d:DesignHeight="1080"
             d:DesignWidth="1920"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="2*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="4*" />
        </Grid.RowDefinitions>


        <CheckBox Grid.Row="0"
                  IsChecked="{Binding ShowBackground}">
            SHOW TRAY's BACKGROUND
        </CheckBox>
        <compartment:InputCompartmentView Grid.Row="1" />
        <wms:ComboBox Grid.Row="2"
                      ItemsSource="{Binding FilterColoringCompartment}" />
        <wms:WmsTrayControl x:Name="Canvas"
                            Grid.Row="3"
                            Margin="0,0,0,0"
                            ColoringFuncCompartment="{Binding ColoringFuncCompartment}"
                            Compartments="{Binding Tray.Compartments, Mode=OneWay}"
                            SelectedItem="{Binding CompartmentSelected, Mode=TwoWay}"
                            ShowBackground="{Binding ShowBackground}"
                            TrayObject="{Binding Tray, Mode=OneWay}" />
        <compartment:ListCompartmentsView Grid.Row="4" />
    </Grid>

</wms:WmsView>
