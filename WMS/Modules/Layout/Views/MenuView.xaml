<ctrls:WmsView x:Class="Ferretto.WMS.Modules.Layout.MenuView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:ctrls="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
               xmlns:dxnav="http://schemas.devexpress.com/winfx/2008/xaml/navigation"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               d:DesignHeight="450"
               d:DesignWidth="800"
               mc:Ignorable="d">
    <Grid Height="75">
        <Image Width="110"
               Height="39"
               Margin="20,10,0,0"
               HorizontalAlignment="Left"
               Panel.ZIndex="1"
               Focusable="False"
               Source="pack://application:,,,/Ferretto.WMS.Themes;component/Images/FGLogo.png" />
        <DockPanel Background="{DynamicResource CommonBackground}">
            <dxnav:TileBar x:Name="WMSTileNav"
                           Padding="125,10,150,0"
                           ctrls:CustomMenuTileFlyoutPosition.Enabled="True"
                           AllowItemSelection="False"
                           Background="Transparent"
                           DockPanel.Dock="Top"
                           FlyoutShowMode="Adorner"
                           ItemContainerStyle="{DynamicResource TileBarItemFirstLevelStyleExtended}"
                           ItemsSource="{Binding Items}"
                           Orientation="Horizontal" />
            <ScrollViewer Name="PART_Options"
                          dx:ScrollBarExtensions.ScrollBarMode="TouchOverlap"
                          DockPanel.Dock="Right"
                          Focusable="False"
                          HorizontalScrollBarVisibility="Disabled"
                          VerticalScrollBarVisibility="Auto" />
        </DockPanel>
        <Grid Margin="0,22,25,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Image Width="18"
                   Height="18"
                   Source="pack://application:,,,/Ferretto.WMS.Themes;component/Icons/Material/social/ic_person_black_18dp.png"
                   VerticalAlignment="Center"/>
            <TextBlock Text="Warehouse Manager"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource CommonSecondaryDark}"
                       Padding="5,0,0,0"/>
        </Grid>
    </Grid>
</ctrls:WmsView>
