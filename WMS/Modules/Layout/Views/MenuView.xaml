<ctrls:WmsView x:Class="Ferretto.WMS.Modules.Layout.MenuView"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:ctrls="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
               xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
               xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
               xmlns:dxa="http://schemas.devexpress.com/winfx/2008/xaml/accordion"
               xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
               xmlns:r="clr-namespace:Ferretto.WMS.Modules.Layout.Resources"
               d:DesignHeight="450"
               d:DesignWidth="800"
               mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <dxa:AccordionControl x:Name="accordion"
                              BorderThickness="0"
                              CollapsedItemClickAction="Select"
                              ExpandMode="SingleOrNone"
                              IsCollapseButtonVisible="True"
                              ShowSearchControl="True"
                              SummaryItemHeader="All Filters"
                              VerticalScrollBarVisibility="Auto">
            <dxa:AccordionItem Header="{x:Static r:Resources.Nav_File}"
                               ShowInCollapsedMode="True">
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_File_Import}"
                                   IsExpanded="True" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_File_Export}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_File_Print}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_File_Exit}" />
            </dxa:AccordionItem>
            <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Catalog}"
                               ShowInCollapsedMode="True">
                <dxa:AccordionItem Command="{Binding CmdItem}"
                                   Header="{x:Static r:Resources.Nav_Catalog_Items}"
                                   IsExpanded="True" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Catalog_Cells}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Catalog_LoadingUnits}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Catalog_Compartments}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Catalog_DefaultLoadingUnits}" />
            </dxa:AccordionItem>
            <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Lists}"
                               ShowInCollapsedMode="True">
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Lists_Lists}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_PackingLists}" />
            </dxa:AccordionItem>
            <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Others}"
                               ShowInCollapsedMode="True">
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Others_UnderStock_Items}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Others_Reserved_Compartments}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Others_Items_Compacting}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Others_Inventory}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Others_Aisles_Status}" />
                <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Others_Loading_Units_Saturation}" />
            </dxa:AccordionItem>
            <dxa:AccordionItem Header="{x:Static r:Resources.Nav_Help}"
                               ShowInCollapsedMode="True" />

        </dxa:AccordionControl>
    </Grid>
</ctrls:WmsView>
