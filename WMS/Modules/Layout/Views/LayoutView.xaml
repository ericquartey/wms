<UserControl x:Class="Ferretto.WMS.Modules.Layout.LayoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://www.codeplex.com/prism"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ItemsControl x:Name="MenuContent"
                      Grid.Column="0"
                      prism:RegionManager.RegionName="Layout.Menu" />
        <dxdo:DockLayoutManager x:Name="DemoDockContainer"
                                Grid.Column="1"
                                FloatingMode="Desktop">
            <dxdo:LayoutGroup ShowCloseButton="False"
                              ShowTabHeaders="False">
                <dxdo:LayoutGroup MinWidth="400"
                                  ItemWidth="4*"
                                  Orientation="Vertical">
                    <dxdo:TabbedGroup Name="tabbedGroup1"
                                      ItemHeight="400"
                                      ShowCaptionImage="False"
                                      ShowCloseButton="False"
                                      ShowControlBox="False"
                                      ShowTabForSinglePage="False"
                                      ShowTabHeaders="False">
                        <dxdo:LayoutPanel Name="propertiesPanel"
                                          AutoHidden="False"
                                          AutoHideExpandState="Visible"
                                          Caption="Anagrafica articoli"
                                          ShowCaptionImage="False"
                                          ShowCloseButton="False"
                                          ShowExpandButton="False"
                                          ShowHideButton="False"
                                          ShowPinButton="False">
                            <ContentControl prism:RegionManager.RegionName="Catalog.Items" />
                        </dxdo:LayoutPanel>
                    </dxdo:TabbedGroup>
                    <dxdo:TabbedGroup Name="tabbedGroup2"
                                      ItemHeight="400">
                        <dxdo:LayoutPanel Name="LayoutPanelDetail"
                                          AutoHideExpandState="Hidden"
                                          Caption="Dettaglio articolo"
                                          ShowCaptionImage="False"
                                          ShowCloseButton="False"
                                          ShowHideButton="False"
                                          ShowPinButton="False">
                            <ContentControl prism:RegionManager.RegionName="Catalog.ItemDetails" />
                        </dxdo:LayoutPanel>
                    </dxdo:TabbedGroup>
                </dxdo:LayoutGroup>
            </dxdo:LayoutGroup>
        </dxdo:DockLayoutManager>
    </Grid>
</UserControl>
