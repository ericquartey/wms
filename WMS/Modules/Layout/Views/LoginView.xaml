<wms:WmsDialogView x:Class="Ferretto.WMS.Modules.Layout.LoginView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
                   xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
                   Title="{x:Static res:Layout.SignInToYourAccount}"
                   Width="600"
                   Height="700"
                   d:DesignHeight="600"
                   d:DesignWidth="700"
                   ResizeMode="NoResize"
                   SizeToContent="Height"
                   mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Image Height="40"
               Margin="0,0,10,0"
               HorizontalAlignment="Left"
               Focusable="False"
               Source="pack://application:,,,/Ferretto.WMS.App.Themes;component/Images/FGLogo.png" />

        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <wms:WmsIcon Width="18"
                         Height="18"
                         Margin="0,0,0,3"
                         VerticalAlignment="Bottom"
                         ColorizeBrush="{DynamicResource CommonSecondaryDark}"
                         SymbolName="UserProfile" />
            <wms:InfoText Grid.Row="0"
                          Grid.Column="1"
                          Margin="10,0,0,0"
                          VerticalAlignment="Center"
                          Content="{x:Static res:Layout.WmsAccess}" />
        </StackPanel>

        <wms:TextBox Grid.Row="2"
                     Grid.Column="1"
                     MaxLength="20"
                     Text="{Binding User.Login, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <wms:PasswordBox Grid.Row="3"
                         Grid.Column="1"
                         MaxLength="20"
                         Text="{Binding User.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <TextBlock Grid.Row="5"
                   Grid.Column="1"
                   Margin="5,0,0,0"
                   VerticalAlignment="Center"
                   Style="{DynamicResource TextBlockErrorMessageStyle}"
                   Text="{Binding ValidationError}" />

        <Border Grid.Row="5"
                Grid.Column="2"
                Width="67"
                Margin="2"
                HorizontalAlignment="Left"
                BorderBrush="{DynamicResource OnCommonSecondaryUltralight}"
                BorderThickness="1">
            <wms:ActionBar Grid.Row="5"
                           Grid.Column="2"
                           Margin="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           HorizontalContentAlignment="Stretch"
                           Style="{DynamicResource ActionBarNotCustomizable}">
                <wms:ActionBarItem Command="{Binding LoginCommand}"
                                   Content="{Binding LoginCheck}"
                                   CustomGlyphSize="24,24"
                                   Glyph="{Binding Status}"
                                   GlyphSize="Small" />
            </wms:ActionBar>
        </Border>
    </Grid>

</wms:WmsDialogView>
