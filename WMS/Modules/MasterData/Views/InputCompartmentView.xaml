<UserControl x:Class="Ferretto.WMS.Modules.MasterData.InputCompartmentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
             mc:Ignorable="d">
    <Grid > <!--DataContext="{Binding SelectedCompartmentTray}">-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"
                              MinWidth="100" />
            <ColumnDefinition Width="1*"
                              MinWidth="100" />
            <ColumnDefinition Width="2*"
                              MinWidth="100" />
            <ColumnDefinition Width="*"
                              MinWidth="100" />
            <ColumnDefinition Width="1*"
                              MinWidth="100" />
            <!--
                ColumnDefinition Width="auto"
                MinWidth="100" /
            -->

        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Grid.ColumnSpan="4"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Compartment Details" />

        <wms:SpinEdit x:Name="WidthText"
                      Grid.Row="1"
                      Grid.Column="0"
                      Width="100"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      EditValue="{Binding SelectedCompartmentTray.Width, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />

        <wms:SpinEdit x:Name="HeightText"
                      Grid.Row="1"
                      Grid.Column="1"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      EditValue="{Binding SelectedCompartmentTray.Height, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />

        <wms:TextBox x:Name="ArticleText"
                     Grid.Row="1"
                     Grid.Column="2"
                     Grid.ColumnSpan="2"
                     Width="250"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Foreground="White"
                     Text="{Binding SelectedCompartmentTray.ItemCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <wms:SpinEdit x:Name="QuantityText"
                      Grid.Row="1"
                      Grid.Column="3"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      EditValue="{Binding SelectedCompartmentTray.Stock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Foreground="White" />

        <wms:SpinEdit x:Name="RowText"
                      Grid.Row="1"
                      Grid.Column="4"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      EditValue="{Binding Row, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Foreground="White"
                      Visibility="Collapsed" />

        <wms:SpinEdit x:Name="PositionXText"
                      Grid.Row="2"
                      Grid.Column="0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Background="White"
                      EditValue="{Binding SelectedCompartmentTray.XPosition, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
        <wms:SpinEdit x:Name="PositionYText"
                      Grid.Row="2"
                      Grid.Column="1"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      EditValue="{Binding SelectedCompartmentTray.YPosition, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                      Foreground="White" />

        <wms:ComboBox Grid.Row="2"
                      Grid.Column="2"
                      Width="250"
                      HorizontalAlignment="Left"
                      EditValue="{Binding ItemPairing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      IsEnabled="True"
                      ItemsSource="{Binding Path=ItemPairingChoices}" />
        <wms:SpinEdit x:Name="CapacityText"
                      Grid.Row="2"
                      Grid.Column="3"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      EditValue="{Binding SelectedCompartmentTray.MaxCapacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Foreground="White" />

        <wms:SpinEdit x:Name="ColumnText"
                      Grid.Row="2"
                      Grid.Column="4"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      EditValue="{Binding Column, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                      Foreground="White"
                      Visibility="Collapsed" />

        <!--<Button x:Name="CreateCompartment"
                Grid.Row="2"
                Grid.Column="5"
                Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type wms:WmsView}}, Path=DataContext.CreateNewCompartmentCommand}"
                Content="Create"
                Visibility="Hidden" />-->

    </Grid>
</UserControl>
