<wms:WmsView x:Class="Ferretto.WMS.Modules.MasterData.CompartmentDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Ferretto.Common.BusinessModels;assembly=Ferretto.Common.BusinessModels"
             xmlns:modules="clr-namespace:Ferretto.Common.Utils.Modules;assembly=Ferretto.Common.Utils"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
             Title="{x:Static res:Navigation.CompartmentDetails}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             EnableHistoryView="True"
             Style="{DynamicResource SlideInRightToLeft}"
             mc:Ignorable="d">

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"
                              MaxWidth="400" />
        </Grid.ColumnDefinitions>

        <wms:ActionBar Margin="10,10,10,0"
                       HorizontalAlignment="Right"
                       Style="{DynamicResource ActionBarNotCustomizable}">
            <wms:ActionBarItem Command="{Binding SaveCommand}"
                               Content="{x:Static res:General.Save}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/ic_save_black_24dp.png"
                               GlyphSize="Custom" />
            <wms:ActionBarItem Command="{Binding RevertCommand}"
                               Content="{x:Static res:General.Revert}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/ic_undo_black_24dp.png"
                               GlyphSize="Custom" />
        </wms:ActionBar>

        <ScrollViewer Grid.Row="1"
                      Margin="10,0,10,10"                      
                      Focusable="False"
                      IsTabStop="True">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"
                                      MinWidth="200" />
                    <ColumnDefinition Width="*"
                                      MinWidth="300" />
                    <ColumnDefinition Width="*"
                                      MinWidth="300" />
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:MasterData.CompartmentInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400*" />
                            <ColumnDefinition Width="100*" />
                        </Grid.ColumnDefinitions>
                        <wms:TextBox Grid.Row="0"
                                     Grid.ColumnSpan="2"
                                     Text="{Binding Compartment.Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="1"
                                     Grid.ColumnSpan="2"
                                     IsEnabled="False"
                                     Text="{Binding Compartment.LoadingUnitCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Row="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.CompartmentTypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Compartment.CompartmentTypeChoices}" />
                        <wms:ComboBox Grid.Row="2"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.ItemPairing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Compartment.ItemPairingChoices}" />
                        <wms:ComboBox Grid.Row="3"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.CompartmentStatusId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False"
                                      ItemsSource="{Binding Compartment.CompartmentStatusChoices}" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="0"
                          Grid.Column="1"
                          Margin="20,0,0,0"
                          Header="{x:Static res:MasterData.PhysicalInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.XPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.YPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="2"
                          Margin="20,0,20,0"
                          Header="{x:Static res:MasterData.CurrentItemInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <wms:LookUpEdit Grid.Row="0"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        DisplayMember="Description"
                                        EditValue="{Binding Compartment.ItemId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        ItemsSource="{Binding AllowedItemsDataSource, Mode=OneWay}"
                                        ValueMember="Id">
                            <wms:LookUpEdit.PopupContentTemplate>
                                <ControlTemplate>
                                    <wms:WmsGridControl x:Name="PART_GridControl">
                                        <wms:WmsGridControl.Columns>
                                            <dxg:GridColumn FieldName="Code" Width="10*" />
                                            <dxg:GridColumn FieldName="Description" Width="20*" />
                                            <dxg:GridColumn FieldName="ItemCategoryDescription" Width="10*" />
                                            <dxg:GridColumn FieldName="AbcClassDescription" Width="10*" />
                                            <dxg:GridColumn FieldName="Image" Width="10*">
                                                <dxg:GridColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <StackPanel HorizontalAlignment="Center" Margin="2">
                                                            <wms:WmsImage MaxWidth="100"
                                                                          MaxHeight="100"
                                                                          BorderBrush="{DynamicResource CommonSecondaryLight}"
                                                                          BorderThickness="1"
                                                                          Path="{Binding Data.Image}"/>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </dxg:GridColumn.CellTemplate>
                                            </dxg:GridColumn>
                                        </wms:WmsGridControl.Columns>
                                        <wms:WmsGridControl.View>
                                            <dxg:TableView RowStyle="{DynamicResource AutoHeightRowControlStyle}" />
                                        </wms:WmsGridControl.View>
                                        <wms:WmsGridControl.SortInfo>
                                            <dxg:GridSortInfo FieldName="Code" SortOrder="Ascending" />
                                        </wms:WmsGridControl.SortInfo>
                                    </wms:WmsGridControl>
                                </ControlTemplate>
                            </wms:LookUpEdit.PopupContentTemplate>
                        </wms:LookUpEdit>
                        <wms:TextBox Grid.Row="1"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     Text="{Binding Compartment.Sub1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     Text="{Binding Compartment.Sub2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Row="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.MaterialStatusId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Compartment.MaterialStatusChoices}" />
                        <wms:SpinEdit Grid.Row="2"
                                      Grid.Column="1"
                                      EditValue="{Binding Compartment.FifoTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  />
                        <wms:TextBox Grid.Row="3"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     Text="{Binding Compartment.Lot, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Row="3"
                                      Grid.Column="1"
                                      EditValue="{Binding Compartment.PackageTypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Compartment.PackageTypeChoices}" />
                        <wms:TextBox Grid.Row="4"
                                     Grid.Column="0"
                                     Grid.ColumnSpan="2"
                                     Text="{Binding Compartment.RegistrationNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1"
                          Grid.Column="1"
                          Margin="20,0,0,0"
                          Header="{x:Static res:MasterData.ContentInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.MaxCapacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.ReservedForPick, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.Stock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Compartment.ReservedToStore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:MasterData.AllowedItems}">
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="{x:Static res:MasterData.CompartmentHasNoAllowedItems}"
                                   Visibility="{Binding CompartmentHasAllowedItems, Converter={StaticResource BTVIC}}" />
                        <wms:WmsGridControl MinHeight="150"
                                            MaxHeight="1000"
                                            CurrentItem="{Binding SelectedAllowedItem, Mode=TwoWay}"                                            
                                            ItemsSource="{Binding AllowedItemsDataSource, Mode=OneWay}"
                                            Visibility="{Binding CompartmentHasAllowedItems, Converter={StaticResource BTVC}}">
                            <wms:WmsGridControl.View>
                                <dxg:TableView>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="RowDoubleClick">
                                            <wms:WmsHistoryViewAppear Id="{Binding CurrentAllowedItemInCompartment.Id, Mode=OneWay}"
                                                                      StartModuleName="{wms:NameOf Type={x:Type modules:MasterData}}"
                                                                      StartViewName="{x:Static modules:MasterData.ITEMDETAILS}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </dxg:TableView>
                            </wms:WmsGridControl.View>

                            <wms:WmsGridControl.Columns>
                                <dxg:GridColumn Width="70*"
                                                FieldName="Code" />
                                <dxg:GridColumn Width="150*"
                                                FieldName="Description" />
                                <dxg:GridColumn Width="50*"
                                                FieldName="MaxCapacity" />
                            </wms:WmsGridControl.Columns>

                            <wms:WmsGridControl.SortInfo>
                                <dxg:GridSortInfo FieldName="Code"
                                                  SortOrder="Ascending" />
                            </wms:WmsGridControl.SortInfo>

                        </wms:WmsGridControl>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="2"
                          Grid.Column="1"
                          Grid.ColumnSpan="2"
                          Margin="20,0,0,0"
                          Header="{x:Static res:MasterData.CompartmentPosition}">

                    <wms:WmsTrayControl x:Name="TrayControl"
                                        Grid.Row="0"
                                        Margin="0,0,0,0"
                                        ShowBackground="True"
                                        IsCompartmentSelectable="{Binding IsCompartmentSelectableTray, Mode=OneWay}"
                                        IsReadOnly="{Binding ReadOnlyTray, Mode=OneWay}"
                                        SelectedItem="{Binding SelectedCompartmentTray, Mode=TwoWay}"
                                        Tray="{Binding Tray, Mode=OneWay}" />

                </GroupBox>

            </Grid>

        </ScrollViewer>

        <ScrollViewer Grid.RowSpan="2"
                      Grid.Column="1"
                      Focusable="False"
                      IsTabStop="False">

            <Border Style="{StaticResource InfoBoxBorderStyle}">

                <GroupBox Margin="20,0"
                          Header="{x:Static res:MasterData.OtherInformation}">
                    <StackPanel Orientation="Vertical">
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Compartment.CreationDate}"
                                      Visibility="{Binding Compartment.CreationDate, Converter={StaticResource RTVC}}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Compartment.LastHandlingDate}"
                                      Visibility="{Binding Compartment.LastHandlingDate, Converter={StaticResource RTVC}}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Compartment.InventoryDate}"
                                      Visibility="{Binding Compartment.InventoryDate, Converter={StaticResource RTVC}}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Compartment.FirstStoreDate}"
                                      Visibility="{Binding Compartment.FirstStoreDate, Converter={StaticResource RTVC}}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Compartment.LastStoreDate}"
                                      Visibility="{Binding Compartment.LastStoreDate, Converter={StaticResource RTVC}}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding Compartment.LastPickDate}"
                                      Visibility="{Binding Compartment.LastPickDate, Converter={StaticResource RTVC}}" />
                    </StackPanel>

                </GroupBox>

            </Border>

        </ScrollViewer>

    </Grid>

</wms:WmsView>
