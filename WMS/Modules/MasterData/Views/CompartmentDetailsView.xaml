<wms:WmsView x:Class="Ferretto.WMS.Modules.MasterData.CompartmentDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Ferretto.Common.Modules.BLL.Models;assembly=Ferretto.Common.Modules.BLL"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Style="{DynamicResource SlideInRightToLeft}"
             mc:Ignorable="d">

    <Grid x:Name="compartmentDetails"
          Margin="20"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <ScrollViewer DataContext="{Binding Compartment}"
                      IsTabStop="True"
                      VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Name="ToolbarGrid"
                      Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <wms:ActionBar Grid.Column="1"
                                   HorizontalAlignment="Right"
                                   Style="{DynamicResource ActionBarNotCustomizable}">
                        <wms:ActionBarItem Command="{Binding SaveCommand}"
                                           Content="{x:Static res:General.Save}"
                                           CustomGlyphSize="24,24"
                                           Glyph="pack://application:,,,/Ferretto.WMS.Themes;component/icons/material/content/ic_save_black_24dp.png"
                                           GlyphSize="Custom" />
                    </wms:ActionBar>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"
                                          MinWidth="300" />
                        <ColumnDefinition Width="*"
                                          MinWidth="400" />
                        <ColumnDefinition Width="*"
                                          MinWidth="400" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Row="0"
                              Grid.RowSpan="2"
                              Grid.Column="0"
                              Margin="0"
                              Header="{x:Static res:MasterData.CompartmentInformation}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="400*" />
                                <ColumnDefinition Width="100*" />
                            </Grid.ColumnDefinitions>
                            <wms:TextBox Grid.Row="0"
                                         Grid.ColumnSpan="2"
                                         FieldName="Code"
                                         IsEnabled="False" />
                            <wms:InfoText Grid.Row="1"
                                          Grid.ColumnSpan="2"
                                          Label="{x:Static res:BusinessObjects.LoadingUnit}"
                                          Text="{Binding Path=LoadingUnitCode}" />
                            <wms:ComboBox Grid.Row="2"
                                          Margin="0,0,20,0"
                                          IsEnabled="False"
                                          ItemsSource="{Binding Path=CompartmentTypeChoices}"
                                          Label="{x:Static res:BusinessObjects.CompartmentType}"
                                          SelectedValue="{Binding Path=CompartmentTypeId, Mode=TwoWay}"
                                          ValueMember="Id" />
                            <wms:TextBox Grid.Row="2"
                                         Grid.Column="1"
                                         FieldName="ItemPairingDescription"
                                         IsEnabled="False" />
                            <wms:ComboBox Grid.Row="3"
                                          Margin="0,0,20,0"
                                          IsEnabled="False"
                                          ItemsSource="{Binding Path=CompartmentStatusChoices}"
                                          Label="{x:Static res:BusinessObjects.CompartmentStatus}"
                                          SelectedValue="{Binding Path=CompartmentStatusId, Mode=TwoWay}"
                                          ValueMember="Id" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="0"
                              Grid.Column="1"
                              Margin="20,0,0,0"
                              Header="{x:Static res:MasterData.PhysicalInformation}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <wms:InfoText Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0,0,20,0"
                                          Label="{x:Static res:BusinessObjects.CompartmentHeight}"
                                          Text="{Binding Path=Height}" />
                            <wms:InfoText Grid.Row="0"
                                          Grid.Column="1"
                                          Label="{x:Static res:BusinessObjects.CompartmentWidth}"
                                          Text="{Binding Path=Width}" />
                            <wms:InfoText Grid.Row="1"
                                          Grid.Column="0"
                                          Margin="0,0,20,0"
                                          Label="{x:Static res:BusinessObjects.CompartmentXPosition}"
                                          Text="{Binding Path=XPosition}" />
                            <wms:InfoText Grid.Row="1"
                                          Grid.Column="1"
                                          Label="{x:Static res:BusinessObjects.CompartmentYPosition}"
                                          Text="{Binding Path=YPosition}" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="0"
                              Grid.RowSpan="2"
                              Grid.Column="2"
                              Margin="20,0,20,0"
                              Header="{x:Static res:MasterData.CurrentItemInformation}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <wms:TextBox Grid.Row="0"
                                         Grid.Column="0"
                                         Grid.ColumnSpan="2"
                                         FieldName="Item.Description"
                                         IsEnabled="False" />
                            <wms:TextBox Grid.Row="1"
                                         Grid.Column="0"
                                         Margin="0,0,20,0"
                                         FieldName="Sub1"
                                         IsEnabled="False" />
                            <wms:TextBox Grid.Row="1"
                                         Grid.Column="1"
                                         FieldName="Sub2"
                                         IsEnabled="False" />
                            <wms:ComboBox Grid.Row="2"
                                          Margin="0,0,20,0"
                                          IsEnabled="False"
                                          ItemsSource="{Binding Path=MaterialStatusChoices}"
                                          Label="{x:Static res:BusinessObjects.MaterialStatus}"
                                          SelectedValue="{Binding Path=MaterialStatusId, Mode=TwoWay}"
                                          ValueMember="Id" />
                            <wms:SpinEdit Grid.Row="2"
                                          Grid.Column="1"
                                          IsEnabled="False"
                                          Label="{x:Static res:BusinessObjects.CompartmentFifoTime}"
                                          EditValue="{Binding Path=Compartment.FifoTime}" />
                            <wms:TextBox Grid.Row="3"
                                         Grid.Column="0"
                                         Margin="0,0,20,0"
                                         FieldName="Lot"
                                         IsEnabled="False" />
                            <wms:ComboBox Grid.Row="3"
                                          Grid.Column="1"
                                          IsEnabled="False"
                                          ItemsSource="{Binding Path=PackageTypeChoices}"
                                          Label="{x:Static res:BusinessObjects.PackageType}"
                                          SelectedValue="{Binding Path=PackageTypeId, Mode=TwoWay}"
                                          ValueMember="Id" />
                            <wms:TextBox Grid.Row="4"
                                         Grid.Column="0"
                                         Grid.ColumnSpan="2"
                                         FieldName="RegistrationNumber"
                                         IsEnabled="False" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1"
                              Grid.Column="1"
                              Margin="20,0,0,0"
                              Header="{x:Static res:MasterData.ContentInformation}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <wms:SpinEdit Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0,0,20,0"
                                          IsEnabled="False"
                                          Label="{x:Static res:BusinessObjects.CompartmentMaxCapacity}"
                                          EditValue="{Binding Path=Compartment.MaxCapacity}" />
                            <wms:InfoText Grid.Row="0"
                                          Grid.Column="1"
                                          Label="{x:Static res:BusinessObjects.CompartmentReservedForPick}"
                                          Text="{Binding Path=ReservedForPick}" />
                            <wms:InfoText Grid.Row="1"
                                          Grid.Column="0"
                                          Margin="0,0,20,0"
                                          Label="{x:Static res:BusinessObjects.CompartmentStock}"
                                          Text="{Binding Path=Stock}" />
                            <wms:InfoText Grid.Row="1"
                                          Grid.Column="1"
                                          Label="{x:Static res:BusinessObjects.CompartmentReservedToStore}"
                                          Text="{Binding Path=ReservedToStore}" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="2"
                              Grid.Column="0"
                              Margin="0"
                              Header="{x:Static res:MasterData.AllowedItems}">
                        <wms:WmsGridControl MinHeight="300"
                                            MaxWidth="2000"
                                            MaxHeight="5000"
                                            CurrentDataSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.AllowedItemsSource, Mode=OneWay}"
                                            ItemType="{x:Type models:ItemInCompartment}"
                                            SelectionMode="Row">
                            <wms:WmsGridControl.View>
                                <dxg:TableView AllowEditing="False"
                                               AllowGrouping="False"
                                               AllowMoveColumnToDropArea="False"
                                               NavigationStyle="Row"
                                               ShowGroupPanel="False"
                                               ShowIndicator="False"
                                               ShowSearchPanelMode="Never" />
                            </wms:WmsGridControl.View>
                            <dxg:GridColumn Width="100*"
                                            FieldName="Code" />
                            <dxg:GridColumn Width="100*"
                                            FieldName="Description" />
                            <dxg:GridColumn Width="100*"
                                            FieldName="Capacity" />
                        </wms:WmsGridControl>
                    </GroupBox>

                    <GroupBox Grid.Row="2"
                              Grid.Column="1"
                              Grid.ColumnSpan="2"
                              Margin="20,0,0,0"
                              Header="{x:Static res:MasterData.CompartmentPosition}">
                        <Image HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"
                               Source="pack://application:,,,/Ferretto.WMS.Themes;component/images/udc_png" />
                    </GroupBox>

                    <StackPanel Grid.Row="0"
                                Grid.RowSpan="3"
                                Grid.Column="3"
                                Margin="0,10,0,0"
                                Orientation="Vertical">
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Label="{x:Static res:General.CreationDate}"
                                      Text="{Binding Path=CreationDate}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Label="{x:Static res:BusinessObjects.CompartmentHandlingDate}"
                                      Text="{Binding Path=LastHandlingDate}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Label="{x:Static res:BusinessObjects.CompartmentLastInventoryDate}"
                                      Text="{Binding Path=InventoryDate}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Label="{x:Static res:BusinessObjects.CompartmentFirstStoreDate}"
                                      Text="{Binding Path=LastStoreDate}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Label="{x:Static res:BusinessObjects.CompartmentLastStoreDate}"
                                      Text="{Binding Path=LastStoreDate}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Label="{x:Static res:BusinessObjects.CompartmentLastPickDate}"
                                      Text="{Binding Path=LastPickDate}" />
                    </StackPanel>
                </Grid>
            </Grid>

        </ScrollViewer>
    </Grid>
</wms:WmsView>
