<wms:WmsView x:Class="Ferretto.WMS.Modules.MasterData.CompartmentDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Ferretto.Common.BusinessModels;assembly=Ferretto.Common.BusinessModels"
             xmlns:modules="clr-namespace:Ferretto.Common.Utils.Modules;assembly=Ferretto.Common.Utils"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
             Title="{x:Static res:Navigation.CompartmentDetails}"
             d:DesignHeight="450"
             d:DesignWidth="800"
             EnableHistoryView="True"
             Style="{DynamicResource SlideInRightToLeft}"
             mc:Ignorable="d">

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"
                              MaxWidth="400" />
        </Grid.ColumnDefinitions>

        <wms:ActionBar Margin="10,10,10,0"
                       HorizontalAlignment="Right"
                       Style="{DynamicResource ActionBarNotCustomizable}">
            <wms:ActionBarItem Command="{Binding SaveCommand}"
                               Content="{x:Static res:General.Save}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/ic_save_black_24dp.png"
                               GlyphSize="Custom" />
            <wms:ActionBarItem Command="{Binding RevertCommand}"
                               Content="{x:Static res:General.Revert}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/ic_undo_black_24dp.png"
                               GlyphSize="Custom" />
        </wms:ActionBar>

        <ScrollViewer Grid.Row="1"
                      Margin="10,0,10,10"
                      DataContext="{Binding Compartment}"
                      Focusable="False"
                      IsTabStop="True">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"
                                      MinWidth="200" />
                    <ColumnDefinition Width="*"
                                      MinWidth="300" />
                    <ColumnDefinition Width="*"
                                      MinWidth="300" />
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:MasterData.CompartmentInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="400*" />
                            <ColumnDefinition Width="100*" />
                        </Grid.ColumnDefinitions>
                        <wms:TextBox Grid.Row="0"
                                     Grid.ColumnSpan="2"
                                     Text="{Binding Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="1"
                                     Grid.ColumnSpan="2"
                                     IsEnabled="False"
                                     Text="{Binding LoadingUnitCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Row="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding CompartmentTypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False"
                                      ItemsSource="{Binding Path=CompartmentTypeChoices}" />
                        <wms:ComboBox Grid.Row="2"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding ItemPairing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False"
                                      ItemsSource="{Binding Path=ItemPairingChoices}" />
                        <wms:ComboBox Grid.Row="3"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding CompartmentStatusId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False"
                                      ItemsSource="{Binding Path=CompartmentStatusChoices}" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="0"
                          Grid.Column="1"
                          Margin="20,0,0,0"
                          Header="{x:Static res:MasterData.PhysicalInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Width, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding XPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding YPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="2"
                          Margin="20,0,20,0"
                          Header="{x:Static res:MasterData.CurrentItemInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <wms:TextBox Grid.Row="0"
                                     Grid.Column="0"
                                     Grid.ColumnSpan="2"
                                     IsEnabled="False"
                                     Text="{Binding ItemDescription, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="1"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     IsEnabled="False"
                                     Text="{Binding Sub1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="1"
                                     Grid.Column="1"
                                     IsEnabled="False"
                                     Text="{Binding Sub2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Row="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding MaterialStatusId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False"
                                      ItemsSource="{Binding Path=MaterialStatusChoices}" />
                        <wms:SpinEdit Grid.Row="2"
                                      Grid.Column="1"
                                      EditValue="{Binding FifoTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:TextBox Grid.Row="3"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     IsEnabled="False"
                                     Text="{Binding Lot, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Row="3"
                                      Grid.Column="1"
                                      EditValue="{Binding PackageTypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False"
                                      ItemsSource="{Binding Path=PackageTypeChoices}" />
                        <wms:TextBox Grid.Row="4"
                                     Grid.Column="0"
                                     Grid.ColumnSpan="2"
                                     IsEnabled="False"
                                     Text="{Binding RegistrationNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1"
                          Grid.Column="1"
                          Margin="20,0,0,0"
                          Header="{x:Static res:MasterData.ContentInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding MaxCapacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding ReservedForPick, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Stock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding ReservedToStore, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      IsEnabled="False" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:MasterData.AllowedItems}">
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="{x:Static res:MasterData.CompartmentHasNoAllowedItems}"
                                   Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.CompartmentHasAllowedItems, Converter={StaticResource BTVIC}}" />
                        <wms:WmsGridControl MinHeight="150"
                                            MaxHeight="1000"
                                            CurrentItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.SelectedAllowedItem, Mode=TwoWay}"
                                            ItemType="{x:Type models:AllowedItemInCompartment}"
                                            ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.AllowedItemsDataSource, Mode=OneWay}"
                                            Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.CompartmentHasAllowedItems, Converter={StaticResource BTVC}}">
                            <wms:WmsGridControl.View>
                                <dxg:TableView AllowEditing="False"
                                               AllowGrouping="False"
                                               AllowMoveColumnToDropArea="False"
                                               NavigationStyle="Row"
                                               ShowGroupPanel="False"
                                               ShowIndicator="False"
                                               ShowSearchPanelMode="Never">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="RowDoubleClick">
                                            <wms:WmsHistoryViewAppear Id="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.CurrentAllowedItemInCompartment.Id, Mode=OneWay}"
                                                                      StartModuleName="{wms:NameOf Type={x:Type modules:MasterData}}"
                                                                      StartViewName="{x:Static modules:MasterData.ITEMDETAILS}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </dxg:TableView>
                            </wms:WmsGridControl.View>

                            <wms:WmsGridControl.Columns>
                                <dxg:GridColumn Width="70*"
                                                FieldName="Code" />
                                <dxg:GridColumn Width="150*"
                                                FieldName="Description" />
                                <dxg:GridColumn Width="50*"
                                                FieldName="MaxCapacity" />
                            </wms:WmsGridControl.Columns>

                            <wms:WmsGridControl.SortInfo>
                                <dxg:GridSortInfo FieldName="Code"
                                                  SortOrder="Ascending" />
                            </wms:WmsGridControl.SortInfo>

                        </wms:WmsGridControl>
                    </StackPanel>
                </GroupBox>

                <GroupBox Grid.Row="2"
                          Grid.Column="1"
                          Grid.ColumnSpan="2"
                          Margin="20,0,0,0"
                          Header="{x:Static res:MasterData.CompartmentPosition}">

                    <wms:WmsTrayControl x:Name="TrayControl"
                                        Grid.Row="0"
                                        Margin="0,0,0,0"
                                        ShowBackground="True"
                                        IsCompartmentSelectable="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.IsCompartmentSelectableTray, Mode=OneWay}"
                                        IsReadOnly="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.ReadOnlyTray, Mode=OneWay}"
                                        SelectedItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.SelectedCompartmentTray, Mode=TwoWay}"
                                        Tray="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.Tray, Mode=OneWay}" />

                </GroupBox>

            </Grid>

        </ScrollViewer>

        <ScrollViewer Grid.RowSpan="2"
                      Grid.Column="1"
                      Focusable="False"
                      IsTabStop="False">

            <Border DataContext="{Binding Compartment}"
                    Style="{StaticResource InfoBoxBorderStyle}">

                <GroupBox Margin="20,0"
                          Header="{x:Static res:MasterData.OtherInformation}">
                    <StackPanel Orientation="Vertical">
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding CreationDate}"
                                      Visibility="{Binding Path=CreationDate, Converter={StaticResource RTVC}}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding LastHandlingDate}"
                                      Visibility="{Binding Path=LastHandlingDate, Converter={StaticResource RTVC}}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding InventoryDate}"
                                      Visibility="{Binding Path=InventoryDate, Converter={StaticResource RTVC}}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding FirstStoreDate}"
                                      Visibility="{Binding Path=FirstStoreDate, Converter={StaticResource RTVC}}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding LastStoreDate}"
                                      Visibility="{Binding Path=LastStoreDate, Converter={StaticResource RTVC}}" />
                        <wms:InfoText HorizontalAlignment="Left"
                                      HorizontalContentAlignment="Left"
                                      Content="{Binding LastPickDate}"
                                      Visibility="{Binding Path=LastPickDate, Converter={StaticResource RTVC}}" />
                    </StackPanel>

                </GroupBox>

            </Border>

        </ScrollViewer>

    </Grid>

</wms:WmsView>
