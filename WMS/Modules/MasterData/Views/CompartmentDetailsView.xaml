<wms:WmsView x:Class="Ferretto.WMS.Modules.MasterData.CompartmentDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Ferretto.Common.BusinessModels;assembly=Ferretto.Common.BusinessModels"
             xmlns:modules="clr-namespace:Ferretto.Common.Utils.Modules;assembly=Ferretto.Common.Utils"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Style="{DynamicResource SlideInRightToLeft}"
             mc:Ignorable="d">

    <Grid x:Name="compartmentDetails"
          Margin="20"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Name="ToolbarGrid">
            <wms:ActionBar HorizontalAlignment="Right"
                           Style="{DynamicResource ActionBarNotCustomizable}">
                <wms:ActionBarItem Command="{Binding SaveCommand}"
                                   Content="{x:Static res:General.Save}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.Themes;component/icons/material/content/ic_save_black_24dp.png"
                                   GlyphSize="Custom" />
            </wms:ActionBar>
        </Grid>

        <ScrollViewer Grid.Row="1"
                      DataContext="{Binding Compartment}"
                      Focusable="False"
                      IsTabStop="True"
                      VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"
                                          MinWidth="300" />
                        <ColumnDefinition Width="*"
                                          MinWidth="400" />
                        <ColumnDefinition Width="*"
                                          MinWidth="400" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <GroupBox Grid.Row="0"
                              Grid.RowSpan="2"
                              Grid.Column="0"
                              Margin="0"
                              Header="{x:Static res:MasterData.CompartmentInformation}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="400*" />
                                <ColumnDefinition Width="100*" />
                            </Grid.ColumnDefinitions>
                            <wms:TextBox Grid.Row="0"
                                         Grid.ColumnSpan="2"
                                         FieldName="Code" />
                            <wms:TextBox Grid.Row="1"
                                         Grid.ColumnSpan="2"
                                         FieldName="LoadingUnitCode"
                                         IsEnabled="False" />
                            <wms:ComboBox Grid.Row="2"
                                          Margin="0,0,20,0"
                                          FieldName="CompartmentTypeId"
                                          IsEnabled="False"
                                          ItemsSource="{Binding Path=CompartmentTypeChoices}" />
                            <wms:TextBox Grid.Row="2"
                                         Grid.Column="1"
                                         FieldName="ItemPairing"
                                         IsEnabled="False" />
                            <wms:ComboBox Grid.Row="3"
                                          Margin="0,0,20,0"
                                          FieldName="CompartmentStatusId"
                                          IsEnabled="False"
                                          ItemsSource="{Binding Path=CompartmentStatusChoices}" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="0"
                              Grid.Column="1"
                              Margin="20,0,0,0"
                              Header="{x:Static res:MasterData.PhysicalInformation}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <wms:InfoText Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0,0,20,0"
                                          FieldName="Height" />
                            <wms:InfoText Grid.Row="0"
                                          Grid.Column="1"
                                          FieldName="Width" />
                            <wms:InfoText Grid.Row="1"
                                          Grid.Column="0"
                                          Margin="0,0,20,0"
                                          FieldName="XPosition" />
                            <wms:InfoText Grid.Row="1"
                                          Grid.Column="1"
                                          FieldName="YPosition" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="0"
                              Grid.RowSpan="2"
                              Grid.Column="2"
                              Margin="20,0,20,0"
                              Header="{x:Static res:MasterData.CurrentItemInformation}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <wms:TextBox Grid.Row="0"
                                         Grid.Column="0"
                                         Grid.ColumnSpan="2"
                                         FieldName="ItemDescription"
                                         IsEnabled="False" />
                            <wms:TextBox Grid.Row="1"
                                         Grid.Column="0"
                                         Margin="0,0,20,0"
                                         FieldName="Sub1"
                                         IsEnabled="False" />
                            <wms:TextBox Grid.Row="1"
                                         Grid.Column="1"
                                         FieldName="Sub2"
                                         IsEnabled="False" />
                            <wms:ComboBox Grid.Row="2"
                                          Margin="0,0,20,0"
                                          FieldName="MaterialStatusId"
                                          IsEnabled="False"
                                          ItemsSource="{Binding Path=MaterialStatusChoices}" />
                            <wms:SpinEdit Grid.Row="2"
                                          Grid.Column="1"
                                          FieldName="FifoTime"
                                          IsEnabled="False" />
                            <wms:TextBox Grid.Row="3"
                                         Grid.Column="0"
                                         Margin="0,0,20,0"
                                         FieldName="Lot"
                                         IsEnabled="False" />
                            <wms:ComboBox Grid.Row="3"
                                          Grid.Column="1"
                                          FieldName="PackageTypeId"
                                          IsEnabled="False"
                                          ItemsSource="{Binding Path=PackageTypeChoices}" />
                            <wms:TextBox Grid.Row="4"
                                         Grid.Column="0"
                                         Grid.ColumnSpan="2"
                                         FieldName="RegistrationNumber"
                                         IsEnabled="False" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="1"
                              Grid.Column="1"
                              Margin="20,0,0,0"
                              Header="{x:Static res:MasterData.ContentInformation}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <wms:SpinEdit Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0,0,20,0"
                                          FieldName="MaxCapacity"
                                          IsEnabled="False" />
                            <wms:InfoText Grid.Row="0"
                                          Grid.Column="1"
                                          FieldName="ReservedForPick" />
                            <wms:InfoText Grid.Row="1"
                                          Grid.Column="0"
                                          Margin="0,0,20,0"
                                          FieldName="Stock" />
                            <wms:InfoText Grid.Row="1"
                                          Grid.Column="1"
                                          FieldName="ReservedToStore" />
                        </Grid>
                    </GroupBox>

                    <GroupBox Grid.Row="2"
                              Grid.Column="0"
                              Margin="0"
                              Header="{x:Static res:MasterData.AllowedItems}">
                        <StackPanel Margin="0,10,0,0">
                            <TextBlock Text="{x:Static res:MasterData.CompartmentHasNoAllowedItems}"
                                       Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.CompartmentHasAllowedItems, Converter={StaticResource BTVIC}}" />
                            <wms:WmsGridControl MinHeight="200"
                                                MaxWidth="2000"
                                                MaxHeight="1000"
                                                CurrentItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.SelectedAllowedItem, Mode=TwoWay}"
                                                ItemType="{x:Type models:AllowedItemInCompartment}"
                                                ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.AllowedItemsSource, Mode=OneWay}"
                                                SelectionMode="Row"
                                                Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.CompartmentHasAllowedItems, Converter={StaticResource BTVC}}">
                                <wms:WmsGridControl.View>
                                    <dxg:TableView AllowEditing="False"
                                                   AllowGrouping="False"
                                                   AllowMoveColumnToDropArea="False"
                                                   NavigationStyle="Row"
                                                   ShowGroupPanel="False"
                                                   ShowIndicator="False"
                                                   ShowSearchPanelMode="Never">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="RowDoubleClick">
                                                <wms:WmsHistoryViewAppear Id="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.CurrentAllowedItemInCompartment.Id, Mode=OneWay}"
                                                                          StartModuleName="{wms:NameOf Type={x:Type modules:MasterData}}"
                                                                          StartViewName="{x:Static modules:MasterData.ITEMDETAILS}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </dxg:TableView>
                                </wms:WmsGridControl.View>
                                <dxg:GridColumn Width="70*"
                                                FieldName="Code" />
                                <dxg:GridColumn Width="150*"
                                                FieldName="Description" />
                                <dxg:GridColumn Width="50*"
                                                FieldName="MaxCapacity" />
                            </wms:WmsGridControl>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Grid.Row="2"
                              Grid.Column="1"
                              Grid.ColumnSpan="2"
                              Margin="20,0,0,0"
                              Header="{x:Static res:MasterData.CompartmentPosition}">
                        <Image HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"
                               Source="pack://application:,,,/Ferretto.WMS.Themes;component/images/udc_compartment.png" />
                    </GroupBox>

                    <StackPanel Grid.Row="0"
                                Grid.RowSpan="3"
                                Grid.Column="3"
                                Margin="0,10,0,0"
                                Orientation="Vertical">
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      FieldName="CreationDate" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      FieldName="LastHandlingDate" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      FieldName="InventoryDate" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      FieldName="FirstStoreDate" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      FieldName="LastStoreDate" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      FieldName="LastPickDate" />
                    </StackPanel>
                </Grid>
            </Grid>

        </ScrollViewer>
    </Grid>
</wms:WmsView>
