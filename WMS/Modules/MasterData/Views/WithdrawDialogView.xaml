<wms:WmsDialogView x:Class="Ferretto.WMS.Modules.MasterData.WmsDialogView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
                   xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
                   Title="{x:Static res:Navigation.ItemWithdraw}"
                   Width="500"
                   Height="600"
                   d:DesignHeight="500"
                   d:DesignWidth="500"
                   ResizeMode="NoResize"
                   SizeToContent="Height"
                   mc:Ignorable="d">
    <Grid Margin="5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0"
                  Margin="0"
                  Header="{x:Static res:MasterData.ItemInformation}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*" />
                    <ColumnDefinition Width="6*" />
                </Grid.ColumnDefinitions>
                <wms:InfoText Content="{Binding ItemWithdraw.ItemCode}" />
                <wms:InfoText Grid.Column="1"
                              Content="{Binding ItemWithdraw.ItemDescription}" />
                <wms:InfoText Grid.Row="1"
                              Content="{Binding ItemWithdraw.MeasureUnitDescription}" />
                <wms:InfoText Grid.Row="1"
                              Grid.Column="1"
                              Content="{Binding ItemWithdraw.ItemManagementTypeDescription}" />
            </Grid>
        </GroupBox>
        
        <GroupBox Grid.Row="1"
                  Margin="0"
                  Header="{x:Static res:MasterData.WithdrawOptions}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <wms:TextBox Margin="0,0,20,0"
                             Text="{Binding ItemWithdraw.Lot, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding AdvancedWithdraw, Converter={StaticResource BTVC}}" />
                <wms:TextBox Grid.Column="1"
                             Text="{Binding ItemWithdraw.RegistrationNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding AdvancedWithdraw, Converter={StaticResource BTVC}}" />
                <wms:TextBox Grid.Row="1"
                             Grid.Column="0"
                             Margin="0,0,20,0"
                             Text="{Binding ItemWithdraw.Sub1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding AdvancedWithdraw, Converter={StaticResource BTVC}}" />
                <wms:TextBox Grid.Row="1"
                             Grid.Column="1"
                             Text="{Binding ItemWithdraw.Sub2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Visibility="{Binding AdvancedWithdraw, Converter={StaticResource BTVC}}" />

                <wms:ComboBox x:Name="SelectedArea"
                              Grid.Row="3"
                              Grid.ColumnSpan="2"
                              DisplayMember="Name"
                              EditValue="{Binding ItemWithdraw.AreaId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding ItemWithdraw.AreaChoices}" />
                <wms:ComboBox x:Name="SelectedBay"
                              Grid.Row="4"
                              Grid.ColumnSpan="2"
                              EditValue="{Binding ItemWithdraw.BayId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              ItemsSource="{Binding ItemWithdraw.BayChoices}"
                              Visibility="{Binding ElementName=SelectedArea, Path=SelectedItem, Converter={StaticResource RTVC}}" />
                <wms:InfoText Grid.Row="5"
                              Content="{Binding ItemWithdraw.TotalAvailable}"
                              Visibility="{Binding ElementName=SelectedBay, Path=SelectedItem, Converter={StaticResource RTVC}}" />
                <wms:SpinEdit Grid.Row="5"
                              Grid.Column="1"
                              EditValue="{Binding ItemWithdraw.Quantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Visibility="{Binding ElementName=SelectedBay, Path=SelectedItem, Converter={StaticResource RTVC}}" />
            </Grid>
        </GroupBox>

        <Grid Grid.Row="2"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Margin="5"
                       Style="{DynamicResource TextBlockErrorMessageStyle}"
                       Text="{Binding ValidationError}" />

            <wms:ActionBar Grid.Column="1"
                           Margin="5"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Style="{DynamicResource ActionBarNotCustomizable}">
                <wms:ActionBarItem Command="{Binding SimpleWithdrawCommand}"
                                   Content="{x:Static res:MasterData.SimpleWithdraw}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/Icons/Material/editor/ic_drag_handle_black_24dp.png"
                                   GlyphSize="Custom"
                                   IsVisible="{Binding AdvancedWithdraw}" />
                <wms:ActionBarItem Command="{Binding AdvancedWithdrawCommand}"
                                   Content="{x:Static res:MasterData.AdvancedWithdraw}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/Icons/Material/editor/ic_format_align_justify_black_24dp.png"
                                   GlyphSize="Custom"
                                   IsVisible="{Binding SimpleWithdraw}" />
                <wms:ActionBarItem Command="{Binding RunWithdrawCommand}"
                                   Content="{x:Static res:MasterData.RunItemWithdraw}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/Icons/Material/av/ic_play_circle_outline_black_24dp.png"
                                   GlyphSize="Custom" />
            </wms:ActionBar>

        </Grid>

    </Grid>

</wms:WmsDialogView>
