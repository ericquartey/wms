<wms:WmsView x:Class="Ferretto.WMS.Modules.MasterData.LoadingUnitDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
             xmlns:modules="clr-namespace:Ferretto.Common.Utils.Modules;assembly=Ferretto.Common.Utils"
             xmlns:businessModels="clr-namespace:Ferretto.Common.BusinessModels;assembly=Ferretto.Common.BusinessModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Style="{DynamicResource SlideInRightToLeft}"
             mc:Ignorable="d">

    <Grid x:Name="loadingUnitDetails"
          Margin="20"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Name="ToolbarGrid">
            <wms:ActionBar HorizontalAlignment="Right"
                           Style="{DynamicResource ActionBarNotCustomizable}">
                <wms:ActionBarItem Command="{Binding SaveCommand}"
                                   Content="{x:Static res:General.Save}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.Themes;component/icons/material/content/ic_save_black_24dp.png"
                                   GlyphSize="Custom" />
                <wms:ActionBarItem Command="{Binding RevertCommand}"
                                   Content="{x:Static res:General.Revert}"
                                   CustomGlyphSize="24,24"
                                   Glyph="pack://application:,,,/Ferretto.WMS.Themes;component/icons/material/content/ic_undo_black_24dp.png"
                                   GlyphSize="Custom" />
            </wms:ActionBar>
        </Grid>

        <ScrollViewer Grid.Row="1"
                      DataContext="{Binding LoadingUnit}"
                      Focusable="False"
                      IsTabStop="True"
                      VerticalScrollBarVisibility="Auto">
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"
                                   MinHeight="100" />
                    <RowDefinition Height="Auto"
                                   MinHeight="100" />
                    <RowDefinition Height="Auto"
                                   MinHeight="100" />
                    <RowDefinition Height="Auto"
                                   MinHeight="100" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"
                                      MinWidth="400" />
                    <ColumnDefinition Width="*"
                                      MinWidth="400" />
                    <ColumnDefinition Width="Auto"
                                      MinWidth="200" />
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="0"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Margin="0"
                          Header="{x:Static res:MasterData.LoadingUnitInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>
                        <wms:TextBox Grid.ColumnSpan="3"
                                     Margin="0,0,20,0"
                                     Text="{Binding Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:ComboBox Grid.Row="1"
                                      Grid.ColumnSpan="3"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding LoadingUnitTypeId}"
                                      ItemsSource="{Binding Path=LoadingUnitTypeChoices}" />
                        <wms:ComboBox Grid.Row="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding LoadingUnitStatusId}"
                                      ItemsSource="{Binding Path=LoadingUnitStatusChoices}" />
                        <wms:ComboBox Grid.Row="2"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding AbcClassId}"
                                      ItemsSource="{Binding Path=AbcClassChoices}" />
                        <wms:ComboBox Grid.Row="2"
                                      Grid.Column="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding ReferenceType}"
                                      ItemsSource="{Binding Path=ReferenceTypeChoices}" />
                        <wms:TextBox Grid.RowSpan="3"
                                     Grid.Column="3"
                                     VerticalAlignment="Stretch"
                                     VerticalContentAlignment="Stretch"
                                     Text="{Binding Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     IsMultiline="True" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:MasterData.CurrentCellInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <wms:ComboBox Grid.ColumnSpan="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding CellId}"
                                      ItemsSource="{Binding Path=CellChoices}" />
                        <wms:ComboBox Grid.Row="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding CellPositionId}"
                                      ItemsSource="{Binding Path=CellPositionChoices}" />
                        <wms:ComboBox Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding CellPairing}"
                                      ItemsSource="{Binding Path=CellPairingChoices}" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1"
                          Grid.Column="1"
                          Margin="0"
                          Header="{x:Static res:MasterData.PhysicalInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <wms:SpinEdit Margin="0,0,20,0"
                                      EditValue="{Binding Height, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Row="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Weight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding HandlingParametersCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2"
                          Grid.Column="0"
                          Grid.ColumnSpan="2"
                          Margin="0"
                          Header="{x:Static res:MasterData.Compartments}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Image Height="216"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Source="pack://application:,,,/Ferretto.WMS.Themes;component/images/udc_compartment.png" />
                        <StackPanel Grid.Row="1">
                            <TextBlock Text="{x:Static res:MasterData.LoadingUnitWithNoCompartment}"
                                       Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.LoadingUnitHasCompartments, Converter={StaticResource BTVIC}}" />
                            <wms:WmsGridControl MinHeight="300"
                                                MaxWidth="2000"
                                                MaxHeight="5000"
                                                CurrentItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.SelectedCompartment, Mode=TwoWay}"
                                                ItemType="{x:Type businessModels:CompartmentDetails}"
                                                ItemsSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.CompartmentsDataSource, Mode=OneWay}"
                                                SelectionMode="Row"
                                                Visibility="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.LoadingUnitHasCompartments, Converter={StaticResource BTVC}}">
                                <wms:WmsGridControl.View>
                                    <dxg:TableView AllowEditing="False"
                                                   AllowGrouping="False"
                                                   AllowMoveColumnToDropArea="False"
                                                   NavigationStyle="Row"
                                                   ShowGroupPanel="False"
                                                   ShowIndicator="False"
                                                   ShowSearchPanelMode="Never">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="RowDoubleClick">
                                                <wms:WmsHistoryViewAppear Id="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.CurrentCompartment.Id, Mode=OneWay}"
                                                          StartModuleName="{wms:NameOf Type={x:Type modules:MasterData}}"
                                                          StartViewName="{x:Static modules:MasterData.COMPARTMENTDETAILS}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </dxg:TableView>
                                </wms:WmsGridControl.View>
                                <dxg:GridColumn Width="200*"
                                                FieldName="Code" />
                                <dxg:GridColumn Width="200*"
                                                FieldName="LoadingUnitCode" />
                                <dxg:GridColumn Width="100*"
                                                FieldName="Sub1" />
                                <dxg:GridColumn Width="100*"
                                                FieldName="Sub2" />
                                <dxg:GridColumn Width="200*"
                                                FieldName="Lot" />
                                <dxg:GridColumn Width="200*"
                                                FieldName="CompartmentStatusDescription" />
                                <dxg:GridColumn Width="100*"
                                                FieldName="Stock" />
                                <dxg:GridColumn Width="200*"
                                                FieldName="ItemPairing" />
                            </wms:WmsGridControl>

                        </StackPanel>

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="0"
                          Grid.RowSpan="3"
                          Grid.Column="2"
                          Margin="0"
                          Header="{x:Static res:MasterData.OtherInformation}">
                    <StackPanel>
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Content="{Binding CreationDate}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Content="{Binding LastHandlingDate}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Content="{Binding InventoryDate}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Content="{Binding LastPickDate}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Content="{Binding LastStoreDate}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Content="{Binding InCycleCount}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Content="{Binding OutCycleCount}" />
                        <wms:InfoText HorizontalAlignment="Right"
                                      HorizontalContentAlignment="Right"
                                      Content="{Binding OtherCycleCount}" />
                    </StackPanel>
                </GroupBox>

            </Grid>
        </ScrollViewer>
    </Grid>
</wms:WmsView>
