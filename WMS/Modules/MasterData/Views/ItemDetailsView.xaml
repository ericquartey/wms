<wms:WmsView x:Class="Ferretto.WMS.Modules.MasterData.ItemDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Ferretto.Common.Modules.BLL.Models;assembly=Ferretto.Common.Modules.BLL"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
             d:DesignHeight="450"
             d:DesignWidth="800"
             Style="{DynamicResource SlideInRightToLeft}"
             mc:Ignorable="d">

    <Grid x:Name="itemDetails"
          Margin="20"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <ScrollViewer DataContext="{Binding Item}"
                      IsTabStop="True"
                      VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"
                                      MinWidth="400" />
                    <ColumnDefinition Width="*"
                                      MinWidth="400" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Name="ToolbarGrid"
                      Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <wms:ActionBar Grid.Column="1"
                                   HorizontalAlignment="Right"
                                   Style="{DynamicResource ActionBarNotCustomizable}">
                        <wms:ActionBarItem Content="{x:Static res:MasterData.Withdraw}"
                                           CustomGlyphSize="24,24"
                                           Glyph="pack://application:,,,/Ferretto.WMS.Themes;component/icons/material/action/ic_get_app_black_24dp.png"
                                           GlyphSize="Custom" />
                        <wms:ActionBarItem Command="{Binding SaveCommand}"
                                           Content="{x:Static res:General.Save}"
                                           CustomGlyphSize="24,24"
                                           Glyph="pack://application:,,,/Ferretto.WMS.Themes;component/icons/material/content/ic_save_black_24dp.png"
                                           GlyphSize="Custom" />
                        <wms:ActionBarItem Content="{x:Static res:General.Revert}"
                                           CustomGlyphSize="24,24"
                                           Glyph="pack://application:,,,/Ferretto.WMS.Themes;component/icons/material/content/ic_undo_black_24dp.png"
                                           GlyphSize="Custom" />
                    </wms:ActionBar>
                </Grid>

                <GroupBox Grid.Row="1"
                          Grid.ColumnSpan="2"
                          Margin="0"
                          Header="{x:Static res:MasterData.ItemInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <wms:TextBox FieldName="Code" />
                        <wms:TextBox Grid.Row="1"
                                     FieldName="Description" />
                        <wms:ComboBox Grid.Row="2"
                                      Margin="0,0,20,0"
                                      ItemsSource="{Binding Path=ItemCategoryChoices}"
                                      Label="{x:Static res:BusinessObjects.ItemCategory}"
                                      SelectedValue="{Binding Path=ItemCategoryId, Mode=TwoWay}"
                                      ValueMember="Id" />
                        <wms:TextBox Grid.RowSpan="3"
                                     Grid.Column="1"
                                     Margin="20,0,0,0"
                                     VerticalAlignment="Stretch"
                                     VerticalContentAlignment="Stretch"
                                     FieldName="Note"
                                     IsMultiline="True" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2"
                          Header="{x:Static res:MasterData.WarehousingInformation}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="100" />
                            <ColumnDefinition MinWidth="100" />
                            <ColumnDefinition MinWidth="100" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <wms:ComboBox Margin="0,0,20,0"
                                      ItemsSource="{Binding Path=AbcClassChoices}"
                                      Label="{x:Static res:BusinessObjects.AbcClass}"
                                      SelectedValue="{Binding Path=AbcClassId, Mode=TwoWay}"
                                      ValueMember="Id" />
                        <wms:SpinEdit Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Item.FifoTimeStore, Mode=TwoWay}"
                                      Label="{x:Static res:BusinessObjects.ItemFifoStoreTime}" />
                        <wms:SpinEdit Grid.Column="2"
                                      EditValue="{Binding Path=Item.ReorderPoint, Mode=TwoWay}"
                                      Label="{x:Static res:BusinessObjects.ItemReorderPoint}" />
                        <wms:ComboBox Grid.Row="1"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      ItemsSource="{Binding Path=MeasureUnitChoices}"
                                      Label="{x:Static res:General.UnitOfMeasurement}"
                                      SelectedValue="{Binding Path=MeasureUnitId, Mode=TwoWay}"
                                      ValueMember="Id" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Item.FifoTimePick, Mode=TwoWay}"
                                      Label="{x:Static res:BusinessObjects.ItemFifoPickTime}" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="2"
                                      EditValue="{Binding Path=Item.ReorderQuantity, Mode=TwoWay}"
                                      Label="{x:Static res:BusinessObjects.ItemReorderQuantity}" />
                        <wms:ComboBox Grid.Row="2"
                                      Margin="0,0,20,0"
                                      ItemsSource="{Binding Path=ItemManagementTypeChoices}"
                                      Label="{x:Static res:BusinessObjects.ItemManagementType}"
                                      SelectedValue="{Binding Path=ItemManagementTypeId, Mode=TwoWay}"
                                      ValueMember="Id" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="2"
                          Grid.Column="1"
                          Margin="20,0,0,0"
                          Header="{x:Static res:MasterData.PhysicalInformation}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition MinWidth="100" />
                            <ColumnDefinition MinWidth="100" />
                            <ColumnDefinition MinWidth="100" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Item.Height, Mode=TwoWay}"
                                      Label="{x:Static res:BusinessObjects.ItemHeight}" />
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Item.PickTolerance}"
                                      Label="{x:Static res:BusinessObjects.ItemPickTolerance}" />
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="2"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Item.AverageWeight, Mode=TwoWay}"
                                      Label="{x:Static res:BusinessObjects.ItemAverageWeight}" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Item.Length, Mode=TwoWay}"
                                      Label="{x:Static res:BusinessObjects.ItemLength}" />
                        <wms:SpinEdit Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Item.StoreTolerance, Mode=TwoWay}"
                                      Label="{x:Static res:BusinessObjects.ItemStoreTolerance}" />
                        <wms:SpinEdit Grid.Row="2"
                                      Grid.Column="0"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Item.Width, Mode=TwoWay}"
                                      Label="{x:Static res:BusinessObjects.ItemWidth}" />
                        <wms:SpinEdit Grid.Row="2"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=Item.InventoryTolerance, Mode=TwoWay}"
                                      Label="{x:Static res:BusinessObjects.ItemInventoryTolerance}" />
                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="3"
                          Grid.ColumnSpan="2"
                          Header="{x:Static res:MasterData.Compartments}">
                    <StackPanel Margin="0,10,0,0">
                        <TextBlock Text="{x:Static res:MasterData.ItemIsAllocatedInNoCompartment}"
                                   Visibility="{Binding Path=ItemHasCompartments, Converter={StaticResource BTVIC}}" />
                        <wms:WmsGridControl MinHeight="300"
                                            MaxWidth="2000"
                                            MaxHeight="5000"
                                            CurrentDataSource="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.CompartmentsDataSource, Mode=OneWay}"
                                            CurrentItem="{Binding RelativeSource={RelativeSource AncestorType={x:Type wms:WmsView}}, Path=DataContext.SelectedCompartment, Mode=TwoWay}"
                                            ItemType="{x:Type models:Compartment}"
                                            SelectionMode="Row">
                            <wms:WmsGridControl.View>
                                <dxg:TableView AllowEditing="False"
                                               AllowGrouping="False"
                                               AllowMoveColumnToDropArea="False"
                                               NavigationStyle="Row"
                                               ShowGroupPanel="False"
                                               ShowIndicator="False"
                                               ShowSearchPanelMode="Never">
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="RowDoubleClick">
                                            <i:InvokeCommandAction Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type wms:WmsView}}, Path=DataContext.ViewCompartmentDetailsCommand}" />
                                        </i:EventTrigger>
                                    </i:Interaction.Triggers>
                                </dxg:TableView>
                            </wms:WmsGridControl.View>
                            <dxg:GridColumn Width="200*"
                                            FieldName="Code" />
                            <dxg:GridColumn Width="200*"
                                            FieldName="LoadingUnitCode" />
                            <dxg:GridColumn Width="100*"
                                            FieldName="Sub1" />
                            <dxg:GridColumn Width="100*"
                                            FieldName="Sub2" />
                            <dxg:GridColumn Width="200*"
                                            FieldName="Lot" />
                            <dxg:GridColumn Width="200*"
                                            FieldName="CompartmentStatusDescription" />
                            <dxg:GridColumn Width="100*"
                                            FieldName="Stock" />
                            <dxg:GridColumn Width="200*"
                                            FieldName="ItemPairing" />
                        </wms:WmsGridControl>
                    </StackPanel>
                </GroupBox>

                <StackPanel Grid.Row="0"
                            Grid.RowSpan="4"
                            Grid.Column="2"
                            MinWidth="200"
                            MaxWidth="400"
                            Margin="10,0"
                            HorizontalAlignment="Center"
                            Orientation="Vertical">
                    <wms:WmsImage MinWidth="200"
                                  MinHeight="200"
                                  MaxWidth="400"
                                  MaxHeight="500"
                                  BorderBrush="{DynamicResource CommonSecondaryLight}"
                                  Path="{Binding Path=Image}" />
                    <wms:InfoText HorizontalAlignment="Right"
                                  HorizontalContentAlignment="Right"
                                  FieldName="CreationDate" />
                    <wms:InfoText HorizontalAlignment="Right"
                                  HorizontalContentAlignment="Right"
                                  FieldName="LastModificationDate" />
                    <wms:InfoText HorizontalAlignment="Right"
                                  HorizontalContentAlignment="Right"
                                  FieldName="InventoryDate" />
                    <wms:InfoText HorizontalAlignment="Right"
                                  HorizontalContentAlignment="Right"
                                  FieldName="LastPickDate" />
                    <wms:InfoText HorizontalAlignment="Right"
                                  HorizontalContentAlignment="Right"
                                  FieldName="LastStoreDate" />
                </StackPanel>

            </Grid>
        </ScrollViewer>
    </Grid>
</wms:WmsView>
