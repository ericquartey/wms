<wms:WmsView x:Class="Ferretto.WMS.Modules.MasterData.ItemListRowDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
             xmlns:dxt="http://schemas.devexpress.com/winfx/2008/xaml/core"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:models="clr-namespace:Ferretto.Common.BusinessModels;assembly=Ferretto.Common.BusinessModels"
             xmlns:modules="clr-namespace:Ferretto.Common.Utils.Modules;assembly=Ferretto.Common.Utils"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
             Title="{x:Static res:Navigation.ListDetails}"
             MinHeight="300"
             d:DesignHeight="450"
             d:DesignWidth="800"
             EnableHistoryView="True"
             mc:Ignorable="d">
    <wms:WmsView.SubTitle>
        <MultiBinding Converter="{StaticResource SFC}">
            <Binding Source="{x:Static res:Title.ItemListDetailsView}" />
            <Binding Path="ItemList.ItemListTypeDescription"
                     TargetNullValue="" />
            <Binding Path="ItemList.Code"
                     TargetNullValue="" />
        </MultiBinding>
    </wms:WmsView.SubTitle>

    <Grid HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"
                              MaxWidth="400" />
        </Grid.ColumnDefinitions>

        <wms:ActionBar Margin="10,10,10,0"
                       HorizontalAlignment="Right"
                       Style="{DynamicResource ActionBarNotCustomizable}">


            <wms:ActionBarItem Command="{Binding SaveCommand}"
                               Content="{x:Static res:General.Save}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/ic_save_black_24dp.png"
                               GlyphSize="Custom" />
            <wms:ActionBarItem Command="{Binding RevertCommand, IsAsync=True}"
                               Content="{x:Static res:General.Revert}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/content/ic_undo_black_24dp.png"
                               GlyphSize="Custom" />
            <wms:ActionBarItem Command="{Binding ListExecuteCommand}"
                               Content="{x:Static res:MasterData.ListExecute}"
                               CustomGlyphSize="24,24"
                               Glyph="pack://application:,,,/Ferretto.WMS.App.Themes;component/icons/material/av/ic_play_arrow_black_24dp.png"
                               GlyphSize="Custom" />

        </wms:ActionBar>

        <ScrollViewer Grid.Row="1"
                      Margin="10,0,10,10"
                      Focusable="False"
                      IsTabStop="True">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"
                                      MinWidth="200" />
                    <ColumnDefinition Width="*"
                                      MinWidth="600" />

                </Grid.ColumnDefinitions>

                <GroupBox Grid.Row="0"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:MasterData.ItemListInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <wms:TextBox Grid.Row="0"
                                     Grid.Column="0"
                                     HorizontalAlignment="Stretch"
                                     EditValue="{Binding ItemListRow.Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <wms:TextBox Grid.Row="1"
                                     Grid.Column="0"
                                     HorizontalAlignment="Stretch"
                                     EditValue="{Binding ItemListRow.RegistrationNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1"
                          Grid.Column="0"
                          Margin="0"
                          Header="{x:Static res:MasterData.ItemListInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <wms:SpinEdit Grid.Row="0"
                                      Grid.Column="0"
                                      HorizontalAlignment="Stretch"
                                      AllowNullInput="False"
                                      EditValue="{Binding Path=ItemListRow.RowPriority, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      MinValue="1" />
                        <wms:ComboBox x:Name="ItemListRowStatus"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      EditValue="{Binding Path=ItemListRow.ItemListRowStatus, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Path=ItemListRow.ItemListRowStatusChoice}" />

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="0"
                          Grid.RowSpan="2"
                          Grid.Column="1"
                          Margin="0"
                          Header="{x:Static res:MasterData.ItemListInformation}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <wms:TextBox Grid.Row="0"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     HorizontalAlignment="Stretch"
                                     EditValue="{Binding ItemListRow.Lot, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="1"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     HorizontalAlignment="Stretch"
                                     EditValue="{Binding ItemListRow.Sub1, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:TextBox Grid.Row="2"
                                     Grid.Column="0"
                                     Margin="0,0,20,0"
                                     HorizontalAlignment="Stretch"
                                     EditValue="{Binding ItemListRow.Sub2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />


                        <wms:ComboBox x:Name="MaterialStatus"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=ItemListRow.MaterialStatusId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Path=ItemListRow.MaterialStatusChoices}" />

                        <wms:ComboBox x:Name="PackageType"
                                      Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,20,0"
                                      EditValue="{Binding Path=ItemListRow.PackageTypeId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      ItemsSource="{Binding Path=ItemListRow.PackageTypeChoices}" />


                        <wms:SpinEdit x:Name="QuantityText"
                                      Grid.Row="0"
                                      Grid.Column="2"
                                      Margin="0,0,20,0"
                                      HorizontalAlignment="Stretch"
                                      AllowNullInput="False"
                                      EditValue="{Binding ItemListRow.Stock, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        <wms:SpinEdit x:Name="CapacityText"
                                      Grid.Row="1"
                                      Grid.Column="2"
                                      Margin="0,0,20,0"
                                      HorizontalAlignment="Stretch"
                                      EditValue="{Binding ItemListRow.MaxCapacity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      MinValue="1" />
                    </Grid>
                </GroupBox>
            </Grid>
        </ScrollViewer>

        <ScrollViewer Grid.RowSpan="2"
                      Grid.Column="1"
                      Focusable="False"
                      IsTabStop="False">

            <Border Style="{StaticResource InfoBoxBorderStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <GroupBox Grid.Row="0"
                              Margin="20,0"
                              Header="{x:Static res:MasterData.ExecutionDetails}">
                        <wms:WmsEnumIndicator EnumType="{x:Type models:ItemListStatus}"
                                              EnumValue="{Binding ItemList.ItemListStatus}"
                                              IconSize="48"
                                              ShowText="True" />
                    </GroupBox>
                    <GroupBox Grid.Row="1"
                              Margin="20,0"
                              Header="{x:Static res:MasterData.OtherInformation}">
                        <StackPanel Orientation="Vertical">
                            <wms:InfoText HorizontalAlignment="Left"
                                          HorizontalContentAlignment="Left"
                                          Content="{Binding Path=ItemListRow.CreationDate}" />
                            <wms:InfoText HorizontalAlignment="Left"
                                          HorizontalContentAlignment="Left"
                                          Content="{Binding Path=ItemListRow.LastModificationDate}" />
                            <wms:InfoText HorizontalAlignment="Left"
                                          HorizontalContentAlignment="Left"
                                          Content="{Binding Path=ItemListRow.FirstExecutionDate}" />
                            <wms:InfoText HorizontalAlignment="Left"
                                          HorizontalContentAlignment="Left"
                                          Content="{Binding Path=ItemListRow.ExecutionEndDate}" />
                        </StackPanel>

                    </GroupBox>
                </Grid>

            </Border>

        </ScrollViewer>
    </Grid>
</wms:WmsView>
