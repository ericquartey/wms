                    </dxg:TableView>
                </wms:WmsGridControl.View>

                <wms:WmsGridControl.Columns>
                    <dxg:GridColumn Width="120*"
                                    FieldName="Status">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <wms:WmsEnumIndicator Margin="5,0,0,0"
                                                          VerticalAlignment="Center"
                                                          EnumType="{x:Type models:MissionStatus}"
                                                          EnumValue="{Binding Data.Status}"
                                                          HideIcon="True"
                                                          IconSize="8"
                                                          ShowText="True" />

                                </StackPanel>
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>
                    <dxg:GridColumn Width="80*"
                                    FieldName="Id"
                                    CellToolTipBinding="{Binding}">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <!--<Button Style="{StaticResource ImageButtonStyle}" >-->
                                    <Image  Width="16" Height="16">
                                        <Image.Source>
                                            <BitmapImage UriSource="pack://application:,,,/Ferretto.WMS.App.Themes;component/Icons/Material/action/ic_visibility_black_36dp.png"/>
                                        </Image.Source>
                                    </Image>
                                <!--</Button>-->
                                <!--UriSource="{StaticResource AddButtonImageBrush}"-->
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                        <dxg:GridColumn.CellToolTipTemplate>
                            <DataTemplate >
                                <dx:MeasurePixelSnapper MaxWidth="300" MaxHeight="300">
                                    <Border  Padding="2">
                                        <WrapPanel Orientation="Horizontal" >
                                            <!--DataContext="{Binding Path=Row}"-->
                                            <!--<TextBlock Text="{Binding Path=DataContext, Converter={StaticResource rowPropertyConverter}, ConverterParameter=ItemDescription}" Margin="5,0,5,0"/>-->
                                            <wms:InfoText Content="{Binding Path=RowData.Row.CellId}" />
                                            <wms:InfoText Grid.Row="0"
                                 Grid.Column="1"
                                     Content="{Binding Converter={StaticResource rowPropertyConverter}, ConverterParameter=Mission.CompartmentId}" />
                                            <wms:InfoText Grid.Row="1"
                                 Grid.Column="0"
                                     Content="{Binding Path=Data, Converter={StaticResource rowPropertyConverter}, ConverterParameter=Sub1}" />
                                            <wms:InfoText Grid.Row="1"
                                 Grid.Column="1"
                                     Content="{Binding Path=DataContext, Converter={StaticResource rowPropertyConverter}, ConverterParameter=Sub2}" />
                                            <wms:InfoText Grid.Row="2"
                                 Grid.Column="0"
                                     Content="{Binding Path=DataContext, Converter={StaticResource rowPropertyConverter}, ConverterParameter=MaterialStatusId}" />
                                            <wms:InfoText Grid.Row="2"
                                 Grid.Column="1"
                                     Content="{Binding Path=DataContext, Converter={StaticResource rowPropertyConverter}, ConverterParameter=PackageTypeId}" />
                                            <wms:InfoText Grid.Row="3"
                                 Grid.Column="0"
                                     Content="{Binding Path=DataContext, Converter={StaticResource rowPropertyConverter}, ConverterParameter=RegistrationNumber}" />
                                            <wms:InfoText Grid.Row="3"
                                 Grid.Column="1"
                                     Content="{Binding Path=DataContext, Converter={StaticResource rowPropertyConverter}, ConverterParameter=Lot}" />
                                        </WrapPanel>
                                    </Border>
                                </dx:MeasurePixelSnapper>
                            </DataTemplate>
                        </dxg:GridColumn.CellToolTipTemplate>
                    </dxg:GridColumn>

                    <dxg:GridColumn Width="140*"
                                    FieldName="BayDescription" />
                    <dxg:GridColumn Width="370*"
                                    FieldName="ItemDescription" />
                    <dxg:GridColumn Width="200*"
                                    FieldName="ItemListDescription" />
                    <dxg:GridColumn Width="190*"
                                    FieldName="ItemListRowDescription" />
                    <dxg:GridColumn Width="140*"
                                    FieldName="LoadingUnitDescription" />
                    <dxg:GridColumn Width="90*"
                                    FieldName="Priority" />
                    <dxg:GridColumn Width="90*"
                                    FieldName="RequiredQuantity" />
                    <dxg:GridColumn Width="120*"
                                    FieldName="Type" />
                    

                </wms:WmsGridControl.Columns>

                <wms:WmsGridControl.SortInfo>
                    <dxg:GridSortInfo FieldName="Priority"
                                      SortOrder="Descending" />
                </wms:WmsGridControl.SortInfo>

            </wms:WmsGridControl>
        </Grid>


