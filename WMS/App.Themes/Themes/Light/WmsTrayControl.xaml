<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys">


    <!--  colors - demo tray - compartment  -->
    <Color x:Key="LightGrey">#c5c7c4</Color>
    <Color x:Key="Azure">#BBDEFB</Color>
    <Color x:Key="LightBlue">#FF08A5FF</Color>
    <Color x:Key="MediumBlue">#FF0288F7</Color>
    <Color x:Key="LightBlack">#BDBDBD</Color>
    <SolidColorBrush x:Key="TrayBackground"
                     Color="{StaticResource Azure}" />
    <SolidColorBrush x:Key="TrayBackgroundDisenabled"
                     Color="{StaticResource LightGrey}" />
    <SolidColorBrush x:Key="FillMouseOver"
                     Color="{StaticResource LightBlue}" />
    <SolidColorBrush x:Key="StrokeMouseOver"
                     Color="{StaticResource MediumBlue}" />
    <SolidColorBrush x:Key="BorderTray"
                     Color="{StaticResource LightBlack}" />

    <!--  listbox  -->
    <Color x:Key="ControlLightColor">White</Color>
    <Color x:Key="BorderMediumColor">#FF888888</Color>
    <Color x:Key="DisabledControlLightColor">#FFE8EDF9</Color>
    <Color x:Key="DisabledBorderLightColor">#FFAAAAAA</Color>

    <!--  colors - filter compartment  -->
    <Color x:Key="DarkRed">#D50000</Color>
    <Color x:Key="LightRed">#F44336</Color>
    <Color x:Key="Orange">#FF9800</Color>
    <Color x:Key="LightGreen">#D4E157</Color>
    <Color x:Key="DarkGreen">#76FF03</Color>
    <SolidColorBrush x:Key="Full"
                     Color="{StaticResource DarkRed}" />
    <SolidColorBrush x:Key="AlmostFull"
                     Color="{StaticResource LightRed}" />
    <SolidColorBrush x:Key="Half"
                     Color="{StaticResource Orange}" />
    <SolidColorBrush x:Key="AlmostEmpty"
                     Color="{StaticResource LightGreen}" />
    <SolidColorBrush x:Key="Empty"
                     Color="{StaticResource DarkGreen}" />


    <Style x:Key="CanvasItemStyle"
           BasedOn="{StaticResource {dxdst:DefaultStyleThemeKey FullName=System.Windows.Controls.ListBoxItem,
                                                                ThemeName=Office2016White}}"
           TargetType="{x:Type ListBoxItem}">
        <Setter Property="Padding" Value="0" />
        <Setter Property="Canvas.Top" Value="{Binding Top, Mode=TwoWay}" />
        <Setter Property="Canvas.Left" Value="{Binding Left, Mode=TwoWay}" />
        <Setter Property="Margin" Value="0" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListBoxItem}">

                    <Border x:Name="BorderOfRectangle"
                            Width="{Binding Width, Mode=TwoWay}"
                            Height="{Binding Height, Mode=TwoWay}"
                            BorderBrush="{Binding Selected, Mode=TwoWay}"
                            BorderThickness="1">
                        <Grid>
                            <Rectangle x:Name="Rectangle"
                                       Fill="{Binding ColorFill, Mode=TwoWay}" />
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <!--<Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BorderOfRectangle" Property="BorderThickness" Value="3" />
                        </Trigger>-->
                        <!--<Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="BorderOfRectangle" Property="BorderThickness" Value="8" />
                        </Trigger>-->
                        <!--<Trigger Property="IsEnabled" Value="True">
                            <Setter TargetName="BorderOfRectangle" Property="BorderBrush" Value="{DynamicResource TrayBackgroundDisenabled}" />
                        </Trigger>-->
                        <DataTrigger Binding="{Binding ReadOnly}"
                                     Value="True">
                            <Setter TargetName="BorderOfRectangle" Property="BorderBrush" Value="{DynamicResource TrayBackgroundDisenabled}" />
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsSelectable}" Value="True" />
                                <Condition Binding="{Binding IsSelected, RelativeSource={RelativeSource Self}}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="BorderOfRectangle" Property="BorderThickness" Value="8" />
                        </MultiDataTrigger>

                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ReadOnly}" Value="False" />
                                <Condition Binding="{Binding IsMouseOver, RelativeSource={RelativeSource Self}}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter TargetName="BorderOfRectangle" Property="BorderThickness" Value="3" />
                        </MultiDataTrigger>
                        <!--<DataTrigger Binding="{Binding IsSelectable}"
                                     Value="True">
                            <Setter TargetName="BorderOfRectangle" Property="BorderThickness" Value="8" />
                        </DataTrigger>-->
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="CanvasListBox"
           BasedOn="{StaticResource {dxdst:DefaultStyleThemeKey FullName=System.Windows.Controls.ListBox,
                                                                ThemeName=Office2016White}}"
           TargetType="{x:Type ListBox}">
        <Setter Property="SnapsToDevicePixels" Value="true" />
        <Setter Property="OverridesDefaultStyle" Value="true" />
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="ScrollViewer.CanContentScroll" Value="true" />
        <Setter Property="MinWidth" Value="120" />
        <Setter Property="MinHeight" Value="95" />
        <Setter Property="ItemsPanel">
            <Setter.Value>
                <ItemsPanelTemplate>
                    <ctrls:WmsTrayCanvas x:Name="TrayCanvas"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top" />
                </ItemsPanelTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">

            <Setter.Value>
                <ControlTemplate TargetType="ListBox">

                    <Border x:Name="ListBoxBorder"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Panel.ZIndex="999"
                            BorderBrush="Black"
                            BorderThickness="1"
                            SnapsToDevicePixels="True">

                        <ItemsPresenter Margin="0" />

                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="false">
                            <Setter TargetName="ListBoxBorder" Property="BorderBrush">
                                <Setter.Value>
                                    <SolidColorBrush Color="{StaticResource LightGrey}" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
