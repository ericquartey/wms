<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls">

    <wms:BoolToVisibilityConverter x:Key="BTVC" />
    <wms:BoolToVisibilityConverter x:Key="BTVIC" Invert="True" />
    <wms:PropertyDescriptionConverter x:Key="DNC"
                                      Control="{x:Type wms:InfoText}"
                                      Property="{x:Static wms:InfoText.ContentProperty}" />

    <Style
        BasedOn="{StaticResource {dxdst:DefaultStyleThemeKey FullName=System.Windows.Controls.Label,
                                                                ThemeName=Office2016White}}"
        TargetType="{x:Type wms:InfoText}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type wms:InfoText}">
                    <Grid Name="InfoTextGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label x:Name="InnerLabel"
                               Style="{DynamicResource ControlLabelStyle}"
                               HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                               FontFamily="{DynamicResource FontSmall}"
                               FontSize="{DynamicResource FontSizeSmall}">
                            <Label.Content>
                                <MultiBinding Converter="{StaticResource DNC}">
                                    <Binding RelativeSource="{RelativeSource Self}" />
                                    <Binding Path="DataContext"
                                                 RelativeSource="{RelativeSource Self}" />
                                </MultiBinding>
                            </Label.Content>
                        </Label>

                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                            <Border x:Name="InnerTextEnumBorder"
                                    CornerRadius="8"
                                    Background="{TemplateBinding BackgroundBrush}"
                                    Visibility="{TemplateBinding IsPillVisible, Converter={StaticResource BTVC}}">
                                <Label x:Name="InnerTextEnum"
                                       Foreground="{DynamicResource CommonBackground}"
                                       Margin="8,0"
                                       Padding="0,1,0,1"
                                       Content="{TemplateBinding ContentText}"
                                       HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                       FontWeight="Bold"
                                       FontFamily="{DynamicResource FontSmall}"
                                       FontSize="{DynamicResource FontSizeSmall}" />
                            </Border>

                            <Label x:Name="InnerTextValue"
                                   Padding="0,1,0,1"
                                   Content="{TemplateBinding ContentText}"
                                   HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                   FontWeight="Bold"
                                   FontFamily="{DynamicResource FontSmall}"
                                   FontSize="{DynamicResource FontSizeSmall}"
                                   Visibility="{TemplateBinding IsPillVisible, Converter={StaticResource BTVIC}}" />

                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
