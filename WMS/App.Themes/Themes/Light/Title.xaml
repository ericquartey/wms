<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls">

    <wms:BoolToVisibilityConverter x:Key="BTVC" />
    <wms:BoolToVisibilityConverter x:Key="BTVIC"
                                   Invert="True" />
    <wms:PropertyDescriptionConverter x:Key="DNC"
                                      Control="{x:Type wms:Title}"
                                      Property="{x:Static wms:Title.ContentProperty}" />

    <Style BasedOn="{StaticResource {dxdst:DefaultStyleThemeKey FullName=System.Windows.Controls.Label,
                                                                ThemeName=Office2016White}}"
           TargetType="{x:Type wms:Title}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type wms:Title}">
                    <Grid Name="TitleGrid"
                          Height="60">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <Label x:Name="ColumnDefinition"
                               HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                               FontFamily="{DynamicResource FontSmall}"
                               FontSize="{DynamicResource FontSizeMedium}"
                               Style="{DynamicResource ControlLabelStyle}">
                            <Label.Content>
                                <MultiBinding Converter="{StaticResource DNC}">
                                    <Binding RelativeSource="{RelativeSource Self}" />
                                    <Binding Path="DataContext"
                                             RelativeSource="{RelativeSource Self}" />
                                </MultiBinding>
                            </Label.Content>
                        </Label>

                        <StackPanel Grid.Column="1">
                            <!--Border x:Name="InnerTextEnumBorder"
                                    Background="{TemplateBinding BackgroundBrush}"
                                    CornerRadius="7"
                                    Visibility="{TemplateBinding IsPillVisible,
                                                                 Converter={StaticResource BTVC}}">
                                <Label x:Name="InnerTextEnum"
                                       Margin="0,20,0,0"
                                       HorizontalAlignment="Center"
                                       Content="{TemplateBinding ContentText}"
                                       FontFamily="{DynamicResource FontSmall}"
                                       FontSize="{DynamicResource FontSizeMedium}"
                                       FontWeight="Bold"
                                       Foreground="{DynamicResource CommonBackground}" />
                            </-->

                            <Label x:Name="InnerTextValue"
                                   Margin="0,20,0,0"
                                   HorizontalAlignment="{TemplateBinding HorizontalAlignment}"
                                   Content="{TemplateBinding ContentText}"
                                   FontFamily="{DynamicResource FontSmall}"
                                   FontSize="{DynamicResource FontSizeMedium}"
                                   FontWeight="Bold" />

                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
