<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxdst="http://schemas.devexpress.com/winfx/2008/xaml/core/themekeys"
                    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                    xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls">

    <wms:PropertyDescriptionConverter x:Key="DNC" />

    <Style BasedOn="{StaticResource {dxdst:DefaultStyleThemeKey Type=dxe:ComboBoxEdit,
                                                                ThemeName=Office2016White}}"
           TargetType="wms:ComboBox">
        <Setter Property="DisplayMember" Value="Description" />
        <Setter Property="ValueMember" Value="Id" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type wms:ComboBox}">
                    <Grid Name="gridComboBox">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Label>
                            <Label.Content>
                                <MultiBinding Converter="{StaticResource DNC}"
                                              ConverterParameter="EditValue">
                                    <Binding RelativeSource="{RelativeSource Self}" />
                                    <Binding Path="DataContext"
                                             RelativeSource="{RelativeSource Self}" />
                                </MultiBinding>
                            </Label.Content>
                        </Label>
                        <dxe:ComboBoxEdit Name="dxeComboBoxEdit"
                                          Grid.Row="1"
                                          AllowDefaultButton="False"
                                          AllowNullInput="{TemplateBinding AllowNullInput}"
                                          AssignNullValueOnClearingEditText="False"
                                          AutoComplete="{TemplateBinding AutoComplete}"
                                          CausesValidation="False"
                                          DisplayMember="{TemplateBinding DisplayMember}"
                                          EditValue="{TemplateBinding EditValue}"
                                          ImmediatePopup="True"
                                          IncrementalFiltering="True"
                                          IsManipulationEnabled="True"
                                          IsTextEditable="{TemplateBinding IsTextEditable}"
                                          ItemsSource="{TemplateBinding ItemsSource}"
                                          ShowCustomItems="False"
                                          ValidateOnEnterKeyPressed="False"
                                          ValidateOnTextInput="False"
                                          ValueMember="{TemplateBinding ValueMember}">
                            <dxe:ComboBoxEdit.Buttons>
                                <dxe:ButtonInfo IsDefaultButton="True"
                                                Template="{DynamicResource ComboBoxEditCustomButtonTemplate}" />
                            </dxe:ComboBoxEdit.Buttons>
                        </dxe:ComboBoxEdit>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <DataTemplate x:Key="ComboBoxEditCustomButtonTemplate">
        <Button x:Name="PART_Item">
            <Button.Template>
                <ControlTemplate>
                    <Border Background="Transparent">
                        <wms:WmsIcon x:Name="Glyph"
                                     Width="18"
                                     ColorizeBrush="{DynamicResource CommonSecondaryMedium}"
                                     SymbolName="DropDown" />
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </DataTemplate>

</ResourceDictionary>
