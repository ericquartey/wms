<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrls="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls">


    <DataTemplate DataType="{x:Type ctrls:WmsCompartmentViewModel}">

        <Rectangle x:Name="Rectangle"
                   Width="{Binding Width, Mode=TwoWay}"
                   Height="{Binding Height, Mode=TwoWay}"
                   Fill="{Binding ColorFill, Mode=TwoWay}"
                   Stroke="{Binding Selected, Mode=TwoWay}"
                   StrokeThickness="{Binding RectangleBorderThickness, Mode=TwoWay}">
            <Rectangle.InputBindings>
                <MouseBinding Command="{Binding IsSelected}"
                              Gesture="LeftClick" />
            </Rectangle.InputBindings>
        </Rectangle>

        <DataTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter TargetName="Rectangle" Property="Fill" Value="#FF08A5FF" />
                <Setter TargetName="Rectangle" Property="Stroke" Value="#FF0288F7" />
                <Setter TargetName="Rectangle" Property="StrokeThickness" Value="2" />
            </Trigger>

        </DataTemplate.Triggers>
    </DataTemplate>

</ResourceDictionary>
