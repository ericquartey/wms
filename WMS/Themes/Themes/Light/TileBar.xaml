<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
                    xmlns:dxnavi="clr-namespace:DevExpress.Xpf.Navigation.Internal;assembly=DevExpress.Xpf.Controls.v18.1"
                    xmlns:dxwuit="http://schemas.devexpress.com/winfx/2008/xaml/windowsui/themekeys"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:wms="clr-namespace:Ferretto.Common.Controls;assembly=Ferretto.Common.Controls">

    <!--  converters  -->
    <wms:BoolToVisibilityConverter x:Key="BTVC" />
    <wms:IntToThousandsConverter x:Key="ITTC" />

    <Style x:Key="TileStyle"
           TargetType="{x:Type ListBoxItem}">
        <Setter Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border x:Name="TileBorder"
                            MinWidth="160"
                            MaxWidth="160"
                            Margin="5,10,10,5"
                            Padding="5,0"
                            BorderBrush="{DynamicResource OnCommonSecondaryLight}"
                            BorderThickness="1">

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <wms:WmsIcon x:Name="TileImage"
                                         Margin="0,5"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top"
                                         ColorizeBrush="{DynamicResource OnCommonSecondaryLight}"
                                         SnapsToDevicePixels="True"
                                         SymbolName="{Binding Image}" />
                            <Label x:Name="TileCountLabel"
                                   Grid.Column="1"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   Content="{Binding Count, Converter={StaticResource ITTC}}"
                                   FontSize="32"
                                   Foreground="{DynamicResource OnCommonSecondaryLight}" />
                            <Label x:Name="TileNameLabel"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   VerticalAlignment="Bottom"
                                   Content="{Binding Name}"
                                   Foreground="{DynamicResource OnCommonSecondaryLight}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
