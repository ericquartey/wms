<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Boolean x:Key="True">True</system:Boolean>
    <system:Boolean x:Key="False">False</system:Boolean>

    <SolidColorBrush x:Key="CommonDarkGrey"
                     Color="#525252" />

    <SolidColorBrush x:Key="CommonTextHighlighted"
                     Color="#400000" />

    <SolidColorBrush x:Key="CommonBackgroundHover"
                     Color="#dbdbdb" />

    <SolidColorBrush x:Key="CommonTextLightForeground"
                     Color="White" />

    <SolidColorBrush x:Key="CommonForeground"
                     Color="White" />

    <SolidColorBrush x:Key="CommonHighlight"
                     Color="#E2001A" />

    <SolidColorBrush x:Key="CommonHighlightLight"
                     Color="#dd8282" />

    <system:Double x:Key="MenuFontSize">14</system:Double>

    <system:Double x:Key="MenuTileHeight">55</system:Double>
    <system:Double x:Key="MenuTileWidth">140</system:Double>

</ResourceDictionary>
