<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Boolean x:Key="True">True</system:Boolean>
    <system:Boolean x:Key="False">False</system:Boolean>

    <SolidColorBrush x:Key="CommonDarkGrey"
                     Color="#525252" />

    <SolidColorBrush x:Key="CommonTextHighlighted"
                     Color="#400000" />

    <SolidColorBrush x:Key="CommonTextLightForeground" 
                     Color="White" />

    <SolidColorBrush x:Key="CommonForeground" 
                     Color="White" />

    <SolidColorBrush x:Key="CommonHighlight" 
                     Color="#E2001A" />

</ResourceDictionary>
