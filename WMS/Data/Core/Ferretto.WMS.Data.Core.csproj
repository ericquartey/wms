<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Library</OutputType>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <CodeAnalysisRuleSet>..\..\..\analysis.ruleset</CodeAnalysisRuleSet>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <RootNamespace>Ferretto.WMS.Data.Core</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="AutoMapper.Extensions.Microsoft.DependencyInjection" Version="6.1.1" />
      <PackageReference Include="Microsoft.AspNetCore.Http.Features" Version="2.2.0" />
      <PackageReference Include="DevExpress.Data" Version="18.2.5" />
      <PackageReference Include="Microsoft.AspNetCore.SignalR" Version="1.1.0" />
      <PackageReference Include="Microsoft.AspNetCore.StaticFiles" Version="2.2.0" />
    </ItemGroup>

    <ItemGroup Condition="'$(Configuration)'=='Debug'">
      <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.9.3">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      </PackageReference>
      <PackageReference Include="SonarAnalyzer.CSharp" Version="7.14.0.8411">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
      </PackageReference>
      <PackageReference Include="StyleCop.Analyzers" Version="1.1.118">
        <PrivateAssets>all</PrivateAssets>
        <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      </PackageReference>
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\..\Common\BLL.Interfaces\Ferretto.Common.BLL.Interfaces.csproj" />
        <ProjectReference Include="..\..\..\Common\EF\Ferretto.Common.EF.csproj" />
        <ProjectReference Include="..\..\..\Common\Utils\Ferretto.Common.Utils.csproj" />
        <ProjectReference Include="..\..\VW\Contracts\Ferretto.VW.MachineAutomationService.Contracts.csproj" />
        <ProjectReference Include="..\..\VW\Hubs\Ferretto.VW.MachineAutomationService.Hubs.csproj" />
        <ProjectReference Include="..\Hubs\Ferretto.WMS.Data.Hubs.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Compile Update="**\*.Policies.cs">
            <DependentUpon>$([System.String]::Copy('%(Filename)').Replace( '.Policies', '' ))%(Extension)</DependentUpon>
        </Compile>
    </ItemGroup>

</Project>
