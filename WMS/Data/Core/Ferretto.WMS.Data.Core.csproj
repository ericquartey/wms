<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Library</OutputType>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <CodeAnalysisRuleSet>..\..\..\analysis.ruleset</CodeAnalysisRuleSet>
        <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
        <RootNamespace>Ferretto.WMS.Data.Core</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="DevExpress.Data" Version="18.2.5" />
        <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.3">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>
        <PackageReference Include="SonarAnalyzer" Version="6.6.0.3969" />
        <PackageReference Include="SonarAnalyzer.CSharp" Version="7.11.0.8083">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
        </PackageReference>
        <PackageReference Include="StyleCop.Analyzers" Version="1.0.2" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\..\..\Common\BLL.Interfaces\Ferretto.Common.BLL.Interfaces.csproj" />
        <ProjectReference Include="..\..\..\Common\EF\Ferretto.Common.EF.csproj" />
        <ProjectReference Include="..\..\..\Common\Utils\Ferretto.Common.Utils.csproj" />
    </ItemGroup>

    <ItemGroup>
        <Compile Update="**\*.Policies.cs">
            <DependentUpon>$([System.String]::Copy('%(Filename)').Replace( '.Policies', '' ))%(Extension)</DependentUpon>
        </Compile>
    </ItemGroup>

</Project>
