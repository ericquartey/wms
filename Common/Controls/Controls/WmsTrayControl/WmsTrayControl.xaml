<UserControl x:Class="Ferretto.Common.Controls.WmsTrayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Ferretto.Common.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Border x:Name="CanvasBorder"
            BorderBrush="Black"
            BorderThickness="2">
        <ctrls:WmsCanvasItemsControl x:Name="CanvasItemsControl"
                                     Background="SkyBlue"
                                     ItemsSource="{Binding Items, Mode=TwoWay}">
            <!--<ListBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" />-->

            <!--  Selected="{Binding Path=(ItemsControls.AlternativeIndex)}"  -->
            <!--<ctrls:WmsCanvasItemsControl.Resources>
                <Style TargetType="Border">
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="BorderThickness" Value="0" />
                </Style>
            </ctrls:WmsCanvasItemsControl.Resources>-->
            <ctrls:WmsCanvasItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <ctrls:WmsTrayCanvas x:Name="TrayCanvas"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top"
                                         Background="Orange" />
                </ItemsPanelTemplate>
            </ctrls:WmsCanvasItemsControl.ItemsPanel>
            <ctrls:WmsCanvasItemsControl.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Canvas.Top" Value="{Binding Top, Mode=TwoWay}" />
                    <Setter Property="Canvas.Left" Value="{Binding Left, Mode=TwoWay}" />
                    <Setter Property="Margin" Value="0" />
                    <!--<Setter Property="FocusVisualStyle" Value="{x:Null}" />-->
                    <Style.Triggers>
                        <!--<EventTrigger RoutedEvent="Mouse.MouseEnter">
                            <EventTrigger.Actions>
                                <BeginStoryboard>
                        -->
                        <!--<Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="MaxHeight"
                                                         To="90"
                                                         Duration="0:0:0.2" />
                                    </Storyboard>-->
                        <!--
                                </BeginStoryboard>
                            </EventTrigger.Actions>
                        </EventTrigger>-->
                        <Trigger Property="IsSelected" Value="True">
                            <!--<Setter Property="Opacity" Value="1.0" />-->
                            <Setter Property="Background" Value="Red" />
                            <Setter Property="BorderBrush" Value="Red" />
                            <Setter Property="BorderThickness" Value="3" />
                        </Trigger>
                        <!--<Trigger Property="IsSelect" Value="True">
                            <Setter Property="Opacity" Value="1.0" />
                            <Setter Property="Background" Value="Red" />
                            <Setter Property="BorderBrush" Value="Red" />
                            <Setter Property="BorderThickness" Value="3" />
                        </Trigger>-->
                        <Trigger Property="Control.IsMouseOver" Value="True">
                            <Setter Property="Control.ToolTip" Value="Compartment" />
                            <Setter Property="BorderBrush" Value="Red" />
                            <Setter Property="BorderThickness" Value="3" />
                            <Setter Property="Background" Value="Yellow" />
                        </Trigger>

                    </Style.Triggers>
                </Style>

            </ctrls:WmsCanvasItemsControl.ItemContainerStyle>
            <!--<ctrls:WmsCanvasItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Top" Value="{Binding Top, Mode=TwoWay}" />
                    <Setter Property="Canvas.Left" Value="{Binding Left, Mode=TwoWay}" />
                </Style>
            </ctrls:WmsCanvasItemsControl.ItemContainerStyle>-->
        </ctrls:WmsCanvasItemsControl>
    </Border>

</UserControl>

