<UserControl x:Class="Ferretto.Common.Controls.WmsTrayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Ferretto.Common.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Border x:Name="CanvasBorder"
            BorderBrush="Black"
            BorderThickness="2">
        <ctrls:WmsCanvasListBoxControl x:Name="CanvasListBoxControl"
                                       ItemsSource="{Binding Items, Mode=TwoWay}">
            <ctrls:WmsCanvasListBoxControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <ctrls:WmsTrayCanvas x:Name="TrayCanvas"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top" />
                </ItemsPanelTemplate>
            </ctrls:WmsCanvasListBoxControl.ItemsPanel>
            <ctrls:WmsCanvasListBoxControl.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Canvas.Top" Value="{Binding Top, Mode=TwoWay}" />
                    <Setter Property="Canvas.Left" Value="{Binding Left, Mode=TwoWay}" />
                    <Setter Property="Margin" Value="0" />
                </Style>

            </ctrls:WmsCanvasListBoxControl.ItemContainerStyle>

        </ctrls:WmsCanvasListBoxControl>
    </Border>

</UserControl>

