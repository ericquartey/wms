<UserControl x:Class="Ferretto.Common.Controls.WmsTrayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Ferretto.Common.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Border x:Name="CanvasBorder"
            BorderBrush="Black"
            BorderThickness="2">
        <!--  BorderThickness="{Binding PenThickness, Mode=TwoWay}"  -->
        <ctrls:WmsCanvasItemsControl x:Name="CanvasItemsControl"
                                     Height="{Binding TrayHeight, Mode=TwoWay}"
                                     HorizontalAlignment="Stretch"
                                     VerticalAlignment="Stretch"
                                     ItemsSource="{Binding Items, Mode=TwoWay}"
                                     Background="SkyBlue">
            <!--
                Width="{Binding TrayWidth, Mode=TwoWay}"
                Width="{Binding ElementName=CanvasItemsControl, Path=ActualWidth}"
                Height="{Binding ElementName=CanvasItemsControl, Path=ActualHeight}"
            -->

            <ctrls:WmsCanvasItemsControl.Resources />
            <ctrls:WmsCanvasItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <ctrls:WmsTrayCanvas x:Name="TrayCanvas"
                                         
                                         >
                        <!--<ctrls:WmsTrayCanvas.Background>

                            <DrawingBrush AlignmentX="Right"
                                          AlignmentY="Top"
                                          Stretch="None">
                                <DrawingBrush.Drawing>
                                    <DrawingGroup>
                                        <GeometryDrawing Brush="PaleGreen">
                                            <GeometryDrawing.Geometry>
                                                <RectangleGeometry Rect="-60,-60,120,120" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                        <GeometryDrawing Brush="Green">
                                            <GeometryDrawing.Geometry>
                                                <EllipseGeometry RadiusX="60.0"
                                                                 RadiusY="60.0" />
                                            </GeometryDrawing.Geometry>
                                        </GeometryDrawing>
                                    </DrawingGroup>
                                </DrawingBrush.Drawing>
                            </DrawingBrush>>
                        </ctrls:WmsTrayCanvas.Background-->
                    </ctrls:WmsTrayCanvas>
                </ItemsPanelTemplate>
            </ctrls:WmsCanvasItemsControl.ItemsPanel>
            <ctrls:WmsCanvasItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Top" Value="{Binding Top, Mode=TwoWay}" />
                    <Setter Property="Canvas.Left" Value="{Binding Left, Mode=TwoWay}" />
                </Style>
            </ctrls:WmsCanvasItemsControl.ItemContainerStyle>
        </ctrls:WmsCanvasItemsControl>
    </Border>

</UserControl>

