<UserControl x:Class="Ferretto.Common.Controls.WmsTrayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Ferretto.Common.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <ctrls:WmsCanvasItemsControl x:Name="CanvasItemsControl"
                                 Width="{Binding ElementName=CanvasItemsControl, Path=ActualWidth}"
                                 Height="{Binding ElementName=CanvasItemsControl, Path=ActualHeight}"
                                 ItemsSource="{Binding Items, Mode=TwoWay}">
        <ctrls:WmsCanvasItemsControl.Resources />
        <ctrls:WmsCanvasItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <ctrls:WmsTrayCanvas x:Name="TrayCanvas" />
            </ItemsPanelTemplate>
        </ctrls:WmsCanvasItemsControl.ItemsPanel>
        <ctrls:WmsCanvasItemsControl.ItemContainerStyle>
            <Style TargetType="ContentPresenter">
                <Setter Property="Canvas.Top" Value="{Binding Top, Mode=TwoWay}" />
                <Setter Property="Canvas.Left" Value="{Binding Left, Mode=TwoWay}" />
            </Style>
        </ctrls:WmsCanvasItemsControl.ItemContainerStyle>
    </ctrls:WmsCanvasItemsControl>
</UserControl>

