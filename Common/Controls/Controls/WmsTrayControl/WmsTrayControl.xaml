<UserControl x:Class="Ferretto.Common.Controls.WmsTrayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Ferretto.Common.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <ctrls:WmsRulerControl x:Name="horizontalRuler"
                               Width="{Binding Tray.Ruler.Dimension.Width}"
                               Height="25"
                               Margin="26,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Panel.ZIndex="10000"
                               BorderBrush="Black"
                               BorderThickness="0,1,1,0"
                               MajorIntervalHorizontal="200"
                               Orientation="Horizontal" />
        <ctrls:WmsRulerControl x:Name="verticalRuler"
                               Width="25"
                               Height="{Binding Tray.Ruler.Dimension.Height}"
                               Margin="0,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Bottom"
                               Panel.ZIndex="1000"
                               BorderBrush="Black"
                               BorderThickness="1,1,0,0"
                               MajorIntervalHorizontal="1000"
                               Orientation="Vertical" />

        <Border x:Name="CanvasBorder"
                Margin="25,25,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Panel.ZIndex="1000"
                BorderBrush="Black"
                BorderThickness="1" />

        <ctrls:WmsCanvasListBoxControl x:Name="CanvasListBoxControl"
                                       Margin="25,28,0,0"
                                       BorderThickness="0"
                                       ItemsSource="{Binding Items, Mode=TwoWay}">
            <ctrls:WmsCanvasListBoxControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <ctrls:WmsTrayCanvas x:Name="TrayCanvas"
                                         Margin="0,0,0,0"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top" />
                    <!--  Margin="1,1,1,1"  -->
                </ItemsPanelTemplate>
            </ctrls:WmsCanvasListBoxControl.ItemsPanel>
            <ctrls:WmsCanvasListBoxControl.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="0" />
                    <Setter Property="Canvas.Top" Value="{Binding Top, Mode=TwoWay}" />
                    <Setter Property="Canvas.Left" Value="{Binding Left, Mode=TwoWay}" />
                    <Setter Property="Margin" Value="0" />
                </Style>

            </ctrls:WmsCanvasListBoxControl.ItemContainerStyle>

        </ctrls:WmsCanvasListBoxControl>

    </Grid>

</UserControl>

