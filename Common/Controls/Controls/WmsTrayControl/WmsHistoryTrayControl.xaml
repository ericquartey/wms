<ContentControl x:Class="Ferretto.Common.Controls.WmsHistoryTrayControl"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:wms="clr-namespace:Ferretto.Common.Controls"
                mc:Ignorable="d">
    <ContentControl.Template>
        <ControlTemplate TargetType="wms:WmsHistoryTrayControl">
            <wms:WmsCanvas Background=""
                           LoadingUnit="{Binding LoadingUnit}"
                           ReadOnly="{Binding ReadOnly}">
                <wms:WmsCanvas.Background>
                    <DrawingBrush x:Name="DrawingBrush"
                                  TileMode="Tile">
                        <DrawingBrush.Drawing>
                            <GeometryDrawing>
                                <GeometryDrawing.Pen>
                                    <Pen Brush="{Binding PenBrush}"
                                         Thickness="{Binding PenThickness}" />
                                </GeometryDrawing.Pen>
                            </GeometryDrawing>
                        </DrawingBrush.Drawing>
                    </DrawingBrush>
                </wms:WmsCanvas.Background>
            </wms:WmsCanvas>
        </ControlTemplate>
    </ContentControl.Template>

</ContentControl>
