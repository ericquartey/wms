<UserControl x:Class="Ferretto.Common.Controls.FilterBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxb="http://schemas.devexpress.com/winfx/2008/xaml/bars"
             xmlns:dxnav="http://schemas.devexpress.com/winfx/2008/xaml/navigation"
             xmlns:local="clr-namespace:Ferretto.Common.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <ListBox x:Name="itemsControl"
             BorderThickness="0"
             ItemContainerStyle="{StaticResource SelectionStyle}"
             ItemsSource="{Binding Filters}"
             SelectedItem="{Binding SelectedDataSource}" />

</UserControl>
