<UserControl x:Class="Ferretto.Common.Controls.TextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls"
             d:DesignHeight="80"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid x:Name="GridTextBox">

        <Grid.Resources>
            <wms:BoolToTextWrappingConverter x:Key="BTTWC" />
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label x:Name="InnerLabel"
               Content="{Binding Path=Label}"
               Style="{DynamicResource ControlLabelStyle}" />
        <TextBox x:Name="InnerTextBox"
                 Grid.Row="1"
                 AcceptsReturn="{Binding Path=IsMultiline}"
                 Style="{DynamicResource TextBoxStyleHover}"
                 TextWrapping="{Binding Path=IsMultiline, Converter={StaticResource BTTWC}}" />
    </Grid>
</UserControl>
