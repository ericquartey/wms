<local:FormControl x:Class="Ferretto.Common.Controls.DateEdit"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                   xmlns:local="clr-namespace:Ferretto.Common.Controls"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   d:DesignHeight="80"
                   d:DesignWidth="300"
                   mc:Ignorable="d">
    <Grid x:Name="GridDateEdit">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="{Binding Path=Label}"
               Style="{DynamicResource ControlLabelStyle}" />
        <dxe:DateEdit x:Name="InnerDateEdit"
                      Grid.Row="1"
                      MinWidth="100"
                      AllowDefaultButton="False"
                      Mask="{Binding Path=Mask}"
                      MaskType="{Binding Path=MaskType}">
            <dxe:DateEdit.Buttons>
                <dxe:ButtonInfo IsDefaultButton="True"
                                Template="{DynamicResource DateEditCustomButtonTemplate}" />
            </dxe:DateEdit.Buttons>
        </dxe:DateEdit>
    </Grid>
</local:FormControl>
