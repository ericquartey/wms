<UserControl x:Class="Ferretto.Common.Controls.SpinEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:local="clr-namespace:Ferretto.Common.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="80"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <Grid x:Name="GridSpinEdit">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="{Binding Path=Label}"
               Style="{DynamicResource ControlLabelStyle}" />
        <dxe:SpinEdit Grid.Row="1"
                      MinWidth="100"
                      EditValueType="{x:Type sys:Int32}"
                      EditValue="{Binding Path=EditValue, Mode=TwoWay }"
                      Mask="{Binding Path=Mask}"
                      MaskType="{Binding Path=MaskType}"
                      AllowNullInput="True"
                      IsFloatValue="False"
                      IsTextEditable="True">
        </dxe:SpinEdit>
    </Grid>
</UserControl>
