<UserControl x:Class="Ferretto.Common.Controls.ComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid Name="gridComboBox">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Label Content="{Binding Label}" />
        <dxe:ComboBoxEdit Name="dxeComboBoxEdit"
                          Grid.Row="1"
                          AllowDefaultButton="False"
                          AllowNullInput="{Binding AllowNullInput}"
                          AssignNullValueOnClearingEditText="False"
                          AutoComplete="{Binding AutoComplete}"
                          CausesValidation="False"
                          DisplayMember="{Binding DisplayMember}"
                          EditValue="{Binding SelectedValue, Mode=TwoWay}"
                          ImmediatePopup="True"
                          IncrementalFiltering="True"
                          IsManipulationEnabled="True"
                          IsTextEditable="{Binding IsTextEditable}"
                          ItemsSource="{Binding ItemsSource}"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                          ShowCustomItems="False"
                          Text="{Binding SelectedText, Mode=TwoWay}"
                          ValidateOnEnterKeyPressed="False"
                          ValidateOnTextInput="False"
                          ValueMember="{Binding ValueMember}">
            <dxe:ComboBoxEdit.Buttons>
                <dxe:ButtonInfo IsDefaultButton="True"
                                Template="{DynamicResource ComboBoxEditCustomButtonTemplate}" />
            </dxe:ComboBoxEdit.Buttons>
        </dxe:ComboBoxEdit>
    </Grid>
</UserControl>
