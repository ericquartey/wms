<UserControl x:Class="Ferretto.Common.Controls.WmsEnumIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:wms="clr-namespace:Ferretto.Common.Controls"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">

    <StackPanel DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type wms:WmsEnumIndicator}}}"
                Orientation="Horizontal">
        <TextBlock x:Name="textBlock"
                   VerticalAlignment="Center" />
        <wms:WmsIcon x:Name="icon"
                     Width="{Binding Path=IconSize}"
                     Height="{Binding Path=IconSize}"
                     ColorizeBrush="{Binding Path=BackgroundBrush, Mode=OneWay}"
                     SymbolName="{Binding Path=SymbolName, Mode=OneWay}" />
    </StackPanel>
</UserControl>
