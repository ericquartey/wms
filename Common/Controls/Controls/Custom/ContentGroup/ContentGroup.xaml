<UserControl x:Class="Ferretto.Common.Controls.ContentGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
             xmlns:local="clr-namespace:Ferretto.Common.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="ctrlGroup"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Content="{Binding Path=Label}"
               Typography.Capitals="AllSmallCaps" />
        <dxdo:FlowLayoutControl Grid.Row="1">
            <ContentPresenter Content="{Binding InnerContent, ElementName=ctrlGroup}" />
        </dxdo:FlowLayoutControl>
    </Grid>
</UserControl>
