<UserControl x:Class="Ferretto.Common.Controls.ContentGroup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.Common.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=local:ContentGroup}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               Content="{Binding Path=Label}"
               Foreground="{DynamicResource CommonTextHighlighted}"
               TextBlock.FontWeight="DemiBold"
               Typography.Capitals="AllSmallCaps" />
        <ContentPresenter Grid.Row="1"
                          Content="{Binding ControlContent}" />
    </Grid>
</UserControl>
