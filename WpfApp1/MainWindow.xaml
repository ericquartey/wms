<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="300.424"
        Height="389.936"
        mc:Ignorable="d">
    <Grid>
        <Button Name="btnSend"
                Width="92"
                Height="30"
                Margin="104,271,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click"
                Content="Send" />
        <TextBox Name="TextBoxerrors"
                 Width="120"
                 Height="23"
                 Margin="89,307,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text="TextErrors"
                 TextWrapping="Wrap" />
        <Button x:Name="btnCreateVerticalAxisClass"
                Width="210"
                Height="30"
                Margin="42,197,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnCreateVerticalAxisClass_Click"
                Content="Create VerticalAxis class" />
        <Label x:Name="lbStateConnection"
               Width="158"
               Height="32"
               Margin="74,92,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="State" />
        <Button x:Name="btnConnectInverter"
                Width="165"
                Height="30"
                Margin="57,46,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnConnectInverter_Click"
                Content="Connect inverter" />

    </Grid>
</Window>
