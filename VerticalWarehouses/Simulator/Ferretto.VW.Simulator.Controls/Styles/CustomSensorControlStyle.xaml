<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:custom="clr-namespace:Ferretto.VW.Simulator.Controls.Controls"
                    xmlns:local="clr-namespace:Ferretto.VW.Simulator.Controls.Styles"
                    xmlns:local2="clr-namespace:Ferretto.VW.App.Controls.Styles">
    <Style x:Key="VWSIM_CustomSensorControlStyle"
           TargetType="{x:Type custom:CustomSensorControl}">
        <Style.Triggers>
            <Trigger Property="SensorState" Value="true">
                <Setter Property="BulletColor" Value="{DynamicResource VWAPP_CustomControlSensor_BulletBrush_Up}" />
            </Trigger>
            <Trigger Property="SensorState" Value="false">
                <Setter Property="BulletColor" Value="{DynamicResource VWAPP_CustomControlSensor_BulletBrush_Down}" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
