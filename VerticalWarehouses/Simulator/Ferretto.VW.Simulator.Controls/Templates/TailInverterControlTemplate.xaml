<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctrl="clr-namespace:Ferretto.VW.Simulator.Controls.Controls;assembly=Ferretto.VW.Simulator.Controls">

    <ControlTemplate x:Key="VWSIM_Grid_Inverter">
        <Border Style="{StaticResource ResourceKey=VWSIM_Border_Inverter}">
            <Grid Margin="-1"
                      Background="{StaticResource FerrettoMediumGray}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid Grid.Row="0"
                          Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="3"
                                       VerticalAlignment="Top"
                                       Style="{StaticResource VWAPP_CustomLabel_ContentTextBlockStyle}"
                                       Text="{Binding InverterRole, StringFormat='INVERTER {0} '}"
                                       ToolTip="Inverter Role" />

                        <TextBlock Grid.Row="1"
                                       Grid.Column="0"
                                       VerticalAlignment="Top"
                                       Style="{StaticResource VWAPP_CustomLabel_LabelTextBlockStyle}"
                                       Text="{Binding InverterType, StringFormat='{}{0} '}"
                                       ToolTip="Inverter Type" />

                        <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       VerticalAlignment="Top"
                                       Style="{StaticResource VWAPP_CustomLabel_LabelTextBlockStyle}"
                                       Text="{Binding OperationMode, StringFormat='- {0} '}"
                                       ToolTip="Operation Mode" />

                        <TextBlock Grid.Row="1"
                                       Grid.Column="2"
                                       VerticalAlignment="Top"
                                       Style="{StaticResource VWAPP_CustomLabel_LabelTextBlockStyle}"
                                       Text="{Binding AxisPosition, StringFormat='- {0}'}"
                                       ToolTip="Axis Position" />
                    </Grid>

                    <custom:VWIcon Grid.Column="1"
                                       Height="36"
                                       HorizontalAlignment="Right"
                                       ColorizeBrush="{DynamicResource VWAPP_ActionButton_Foreground_Normal}"
                                       Source="pack://application:,,,/Ferretto.VW.Simulator;Component/Icons/inverter.png" />
                </Grid>

                <ItemsControl Grid.Row="1"
                                  Margin="0,5"
                                  ItemsSource="{Binding DigitalIO}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <ctrl:CustomSensorSquareControl Margin="2,5,3,5"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                LabelText="{Binding Description}"
                                                                SensorState="{Binding Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                                Style="{StaticResource VWSIM_CustomSensorSquareControlStyle}" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Grid Grid.Row="2"
                          Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                                   Grid.Column="0"
                                   HorizontalAlignment="Right"
                                   Style="{StaticResource VWAPP_CustomLabel_LabelTextBlockStyle}"
                                   Text="Control Word:" />

                    <TextBlock Grid.Row="0"
                                   Grid.Column="1"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   FontSize="12"
                                   Style="{StaticResource VWSIM_CustomLabel_LabelInverseTextBlockStyle}"
                                   Text="{Binding ControlWordBinary, FallbackValue='0000000000000000'}" />

                    <TextBlock Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalAlignment="Right"
                                   Style="{StaticResource VWAPP_CustomLabel_LabelTextBlockStyle}"
                                   Text="Status Word:" />

                    <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Bottom"
                                   FontSize="12"
                                   Style="{StaticResource VWSIM_CustomLabel_LabelInverseTextBlockStyle}"
                                   Text="{Binding StatusWordBinary, FallbackValue='0000000000000000'}" />

                </Grid>

            </Grid>
        </Border>
    </ControlTemplate>

</ResourceDictionary>
