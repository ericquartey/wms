<Project Sdk="Microsoft.NET.Sdk">


    <PropertyGroup>
        <LanguageTargets>$(MSBuildToolsPath)\Microsoft.CSharp.targets</LanguageTargets>
        <TargetFramework>net471</TargetFramework>
    </PropertyGroup>

    <ItemGroup>
        <Reference Include="PresentationCore" />
        <Reference Include="PresentationFramework" />
        <Reference Include="System.Xaml" />
        <Reference Include="WindowsBase" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Prism.Core" Version="7.1.0.431" />
        <PackageReference Include="System.Windows.Interactivity.WPF" Version="2.0.20525" />
    </ItemGroup>

    <ItemGroup>
        <Compile Update="**\*.xaml.cs">
            <DependentUpon>%(Filename)</DependentUpon>
            <SubType>Code</SubType>
        </Compile>
        <Page Include="**\*.xaml" Exclude="App.xaml">
            <Generator>MSBuild:Compile</Generator>
            <SubType>Designer</SubType>
        </Page>
    </ItemGroup>

    <ItemGroup>
        <Content Remove="Fonts\*.*" />
    </ItemGroup>

    <ItemGroup>
        <Resource Include="Fonts\*.*" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="Controls\CustomSensorSmallControl.xaml" />
      <None Remove="Skins\DarkCustomControlSensor.xaml" />
      <None Remove="Skins\DarkCustomLabelTextBlock.xaml" />
      <None Remove="Skins\DarkSkin.xaml" />
      <None Remove="Skins\LightCustomControlSensor.xaml" />
      <None Remove="Skins\LightCustomLabelTextBlock.xaml" />
      <None Remove="Skins\LightSkin.xaml" />
      <None Remove="Styles\CustomLabelTextBlockStyle.xaml" />
      <None Remove="Templates\ActionButtonControlTemplate.xaml" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\..\Common\Common_Utils\Ferretto.VW.CommonUtils.csproj" />
      <ProjectReference Include="..\..\Panel PC UI\CustomControls\Ferretto.VW.App.Controls.csproj" />
      <ProjectReference Include="..\..\Panel PC UI\Utils\Ferretto.VW.Utils.csproj" />
      <ProjectReference Include="..\Ferretto.VW.Simulator.Resources\Ferretto.VW.Simulator.Resources.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Update="Controls\CustomSensorControl.xaml">
          <Generator>MSBuild:Compile</Generator>
        </None>
        <None Update="CustomSensorControlStyle.xaml">
          <Generator>MSBuild:Compile</Generator>
        </None>
        <None Update="Fonts\Microsoft-sans-serif.ttf">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Fonts\RobotoCondensed-Regular.ttf">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Skins\Shared.xaml">
          <Generator>MSBuild:Compile</Generator>
        </None>
        <None Update="Styles\CustomSensorControlStyle.xaml">
          <Generator>MSBuild:Compile</Generator>
        </None>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Properties\" />
    </ItemGroup>

</Project>
