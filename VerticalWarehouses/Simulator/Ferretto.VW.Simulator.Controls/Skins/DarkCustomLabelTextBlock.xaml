<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.Simulator.Controls.Skins"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Double x:Key="VWSIM_CustomLabel_ContentInverseTextBlock_FontSize">17</sys:Double>
    <FontFamily x:Key="VWSIM_CustomLabel_ContentInverseTextBlock_FontFamily">pack://application:,,,/Fonts/#HelveticaNeue-LightCond.otf</FontFamily>
    <sys:Double x:Key="VWSIM_CustomLabel_LabelInverseTextBlock_FontSize">14</sys:Double>
    <FontFamily x:Key="VWSIM_CustomLabel_LabelInverseTextBlock_FontFamily">pack://application:,,,/Fonts/#HelveticaNeue-LightCond.otf</FontFamily>

    <SolidColorBrush x:Key="VWSIM_CustomLabel_ContentInverseTextBlock_Foreground_Normal"
                     Color="{DynamicResource ColorFerrettoBlack}" />
    <SolidColorBrush x:Key="VWSIM_CustomLabel_LabelInverseTextBlock_Foreground_Normal"
                     Color="{DynamicResource ColorFerrettoBlack}" />

    <SolidColorBrush x:Key="VWSIM_CustomLabel_ContentInverseTextBlock_Foreground_Disabled"
                     Color="{DynamicResource ColorFerrettoMediumGray}" />
    <SolidColorBrush x:Key="VWSIM_CustomLabel_LabelInverseTextBlock_Foreground_Disabled"
                     Color="{DynamicResource ColorFerrettoMediumGray}" />

</ResourceDictionary>
