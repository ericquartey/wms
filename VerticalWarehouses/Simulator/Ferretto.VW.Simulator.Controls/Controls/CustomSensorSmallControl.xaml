<UserControl x:Class="Ferretto.VW.Simulator.Controls.Controls.CustomSensorSmallControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel x:Name="LayoutRoot"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal">
        <Grid Width="20"
              Height="20">
            <Grid.InputBindings>
                <MouseBinding Command="{Binding LeftClickCommand}"
                              Gesture="LeftClick" />
            </Grid.InputBindings>
            <Ellipse Width="20"
                     Height="20"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Fill="{DynamicResource VWAPP_CustomControlSensor_BulletBackground_Normal}" />
            <Ellipse Width="18"
                     Height="18"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Fill="{Binding BulletColor, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <TextBlock Margin="10,0,0,0"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_CustomControlSensor_TextBlockStyle}"
                   Text="{Binding LabelText, UpdateSourceTrigger=PropertyChanged, FallbackValue=''}" />
    </StackPanel>
</UserControl>
