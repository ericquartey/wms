<UserControl x:Class="Ferretto.VW.Simulator.Controls.Controls.CustomSensorSquareControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.Simulator.Controls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="50"
             d:DesignWidth="80"
             mc:Ignorable="d">
    <Viewbox Stretch="Uniform"
             StretchDirection="Both">

        <Grid x:Name="LayoutRoot"
              Width="19"
              Height="19"
              HorizontalAlignment="Center"
              VerticalAlignment="Center">
            <Grid.InputBindings>
                <MouseBinding Command="{Binding LeftClickCommand}"
                              Gesture="LeftClick" />
            </Grid.InputBindings>

            <Rectangle Width="19"
                       Height="19"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Fill="{DynamicResource VWAPP_CustomControlSensor_BulletBackground_Normal}" />
            <Rectangle Width="17"
                       Height="17"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Fill="{Binding BulletColor}" />

            <TextBlock Margin="0,1,0,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Style="{StaticResource PpcSensorControlLabelStyle}"
                       Text="{Binding LabelText, FallbackValue='00'}" />
        </Grid>

    </Viewbox>
</UserControl>
