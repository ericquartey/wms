<UserControl x:Class="Ferretto.VW.Simulator.Controls.Controls.CustomSensorSquareControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.Simulator.Controls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="50"
             d:DesignWidth="80"
             mc:Ignorable="d">
    <StackPanel x:Name="LayoutRoot"
                HorizontalAlignment="Stretch"
                Orientation="Horizontal">
        <Grid Width="16"
              Height="16">
            <Grid.InputBindings>
                <MouseBinding Command="{Binding LeftClickCommand}"
                              Gesture="LeftClick" />
            </Grid.InputBindings>
            <Rectangle Width="16"
                       Height="16"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Fill="{DynamicResource VWAPP_CustomControlSensor_BulletBackground_Normal}" />
            <Rectangle Width="14"
                       Height="14"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Fill="{Binding BulletColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <TextBlock Margin="5,0,0,0"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_CustomControlSensor_TextBlockStyle}"
                   Text="{Binding LabelText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue=''}" />
    </StackPanel>
</UserControl>
