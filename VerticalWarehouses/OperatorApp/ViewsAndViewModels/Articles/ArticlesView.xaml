<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Articles.ArticlesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.Articles"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1"
                   Style="{StaticResource IAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:OperatorApp.InstantArticle}" />
        <Grid Grid.Row="1"
              Grid.Column="1"
              ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Button Grid.Row="0"
                    Width="80"
                    Command="{Binding}"
                    Content="{x:Static res:General.Top}"
                    Style="{StaticResource IAPP_ViewButtonStyle}" />
            <Button Grid.Row="1"
                    Width="80"
                    Command="{Binding}"
                    Content="{x:Static res:General.Up}"
                    Style="{StaticResource IAPP_ViewButtonStyle}" />
            <Button Grid.Row="2"
                    Width="80"
                    Command="{Binding}"
                    Content="{x:Static res:General.Down}"
                    Style="{StaticResource IAPP_ViewButtonStyle}" />
            <Button Grid.Row="3"
                    Width="80"
                    Command="{Binding}"
                    Content="{x:Static res:General.Bottom}"
                    Style="{StaticResource IAPP_ViewButtonStyle}" />
        </Grid>
        <custom:CustomInputFieldControl Grid.Row="2"
                                        Grid.Column="1"
                                        LabelText="{x:Static res:OperatorApp.SearchCode}" />
        <Grid Grid.Row="3"
              Grid.Column="1"
              Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Command="{Binding}"
                    Content="{x:Static res:OperatorApp.Search}"
                    Style="{StaticResource IAPP_ViewButtonStyle}" />
            <Button Grid.Column="3"
                    Command="{Binding}"
                    Content="{x:Static res:OperatorApp.Confirm}"
                    Style="{StaticResource IAPP_ViewButtonStyle}" />
            <custom:CustomLabelTextBlockControl Grid.Column="1"
                                                LabelText="{x:Static res:OperatorApp.Availability}" />
            <custom:CustomLabelTextBlockControl Grid.Column="2"
                                                LabelText="{x:Static res:OperatorApp.RequestedQuantity}" />
        </Grid>

    </Grid>
</UserControl>
