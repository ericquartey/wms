<Window x:Class="UICVA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:UICVA"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="543.424"
        Height="551.333"
        mc:Ignorable="d">
    <Grid Margin="0,0,-8,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="136*" />
            <ColumnDefinition Width="135*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="0*" />
        </Grid.RowDefinitions>
        <Button Name="btnSend"
                Width="165"
                Height="30"
                Margin="67,186,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click"
                Content="START Calibrate" />
        <TextBox Name="TextMessages"
                 Grid.ColumnSpan="2"
                 Width="165"
                 Height="23"
                 Margin="191,104,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text="None operation"
                 TextWrapping="Wrap" />
        <Button x:Name="btnCreateVerticalAxisClass"
                Width="165"
                Height="30"
                Margin="67,141,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnCreateVerticalAxisClass_Click"
                Content="Create VerticalAxis class" />
        <Label x:Name="lbStateConnection"
               Grid.ColumnSpan="2"
               Width="165"
               Height="32"
               Margin="191,57,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="State" />
        <Button x:Name="btnConnectInverter"
                Grid.ColumnSpan="2"
                Width="165"
                Height="30"
                Margin="191,11,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnConnectInverter_Click"
                Content="Connect inverter" />
        <Button Grid.ColumnSpan="2"
                Width="165"
                Height="31"
                Margin="191,273,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Red"
                Click="btnStopInverter_Click"
                Content="STOP"
                Foreground="White" />
        <Button Name="btnVerticalPos"
                Grid.Column="1"
                Width="165"
                Height="30"
                Margin="32,141,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnVerticalPos_Click"
                Content="Create VerticalPos class" />
        <Button Name="btnCreatePositioningClass"
                Grid.Column="1"
                Width="165"
                Height="32"
                Margin="32,184,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnCreatePositioning_Click"
                Content="START Positioning" />
        <Button Name="btnHaltPositioning"
                Grid.Column="1"
                Width="165"
                Height="30"
                Margin="32,230,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Red"
                Click="btnHaltPositioning_Click"
                Content="HALT Positioning"
                Foreground="White" />
        <Button Name="btnCurrentPosition"
                Grid.Column="1"
                Width="164"
                Height="30"
                Margin="33,317,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnCurrentPosition_Click"
                Content="Current Position"
                RenderTransformOrigin="0.587,0.4" />
        <TextBox Name="CurrentPosition"
                 Grid.Column="1"
                 Width="164"
                 Height="23"
                 Margin="33,361,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text="Current position"
                 TextWrapping="Wrap" />
        <Button Name="btnNewPosition"
                Grid.Column="1"
                Width="164"
                Height="30"
                Margin="33,398,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="btnNewPosition_Click"
                Content="Set Position" />
        <TextBox Name="NewPosition"
                 Grid.Column="1"
                 Width="164"
                 Height="23"
                 Margin="33,444,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text="New position"
                 TextWrapping="Wrap" />

    </Grid>
</Window>
