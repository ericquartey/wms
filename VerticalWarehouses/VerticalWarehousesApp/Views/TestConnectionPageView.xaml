<Page x:Class="Ferretto.VW.VerticalWarehousesApp.Views.TestConnectionPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Ferretto.VW.VerticalWarehousesApp.Views"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      Title="TestConnectionPageView"
      Width="341.419"
      Height="538.665"
      mc:Ignorable="d">

    <Grid Margin="0,0,2,-47"
          Background="LightGray">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Name="Connect_Button"
                Grid.Column="1"
                Width="120"
                Height="20"
                Margin="31,77,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Gray"
                Click="Connect_Click"
                Content="Initialize"
                Foreground="Black" />

        <Button x:Name="Disconnect_Button"
                Grid.Column="1"
                Width="120"
                Height="20"
                Margin="195,77,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Gray"
                Click="Disconnect_Click"
                Content="Terminate"
                Foreground="Black" />
        <TextBox x:Name="tbReceivedMsg"
                 Grid.Column="1"
                 Width="298"
                 Height="65"
                 Margin="17,428,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 BorderThickness="3"
                 IsEnabled="True"
                 Text="This message is sent from the server."
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Visible" />
        <TextBox x:Name="txtIP"
                 Grid.ColumnSpan="2"
                 Width="170"
                 Height="25"
                 Margin="85,10,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text="IP"
                 TextWrapping="Wrap" />
        <TextBox x:Name="txtPort"
                 Grid.ColumnSpan="2"
                 Width="170"
                 Height="25"
                 Margin="85,35,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Text="Port"
                 TextWrapping="Wrap" />
        <TextBox x:Name="tbStatus"
                 Grid.ColumnSpan="2"
                 Width="305"
                 Height="20"
                 Margin="27,122,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Background="Black"
                 Foreground="Gray"
                 Text="TextBox"
                 TextWrapping="Wrap" />
        <Button x:Name="btnClose"
                Grid.ColumnSpan="2"
                Width="120"
                Height="39"
                Margin="106,513,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Gray"
                Click="btnClose_Click"
                Content="Close"
                Foreground="Black" />
        <ComboBox x:Name="cbxCommands"
                  Grid.ColumnSpan="2"
                  Width="284"
                  Height="27"
                  Margin="31,205,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  IsEditable="False"
                  SelectedIndex="0">
            <ComboBoxItem>0. Set Vertical Axis Origin</ComboBoxItem>
            <ComboBoxItem>1. Move Along Vertical Axis To Point</ComboBoxItem>
            <ComboBoxItem>2. Select Movement</ComboBoxItem>
            <ComboBoxItem>3. Move Along Horizontal Axis With Profile</ComboBoxItem>
            <ComboBoxItem>5. Run Shutter</ComboBoxItem>
            <ComboBoxItem>6. Run Drawer Weight Routine</ComboBoxItem>
            <ComboBoxItem>7. Get Drawer Weight</ComboBoxItem>
            <ComboBoxItem>8. Stop</ComboBoxItem>
            <ComboBoxItem>9. Get Main State</ComboBoxItem>
            <ComboBoxItem>A. Get IO State</ComboBoxItem>
            <ComboBoxItem>B. Get IO Emergency State</ComboBoxItem>
            <ComboBoxItem>C. Set</ComboBoxItem>

        </ComboBox>
        <Button Name="btn_SM"
                Grid.ColumnSpan="2"
                Margin="134,388,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Gray"
                Click="Button_Click"
                Content="Execute"
                Foreground="Black" />
