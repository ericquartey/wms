<Page
    x:Class="Ferretto.VW.VerticalWarehousesApp.Views.SwitchCameraPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Ferretto.VW.VerticalWarehousesApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SwitchCamera"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Slider
            Width="361"
            Height="21"
            Margin="232,198,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="36"
            IsSnapToTickEnabled="True"
            Maximum="1"
            TickFrequency="1"
            ValueChanged="Slider_ValueChanged">
            <Slider.LayoutTransform>
                <ScaleTransform
                    CenterX="15"
                    CenterY="15"
                    ScaleY="4.9" />
            </Slider.LayoutTransform>
        </Slider>
        <TextBlock
            Margin="620,221,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="36"
            TextWrapping="Wrap"><Run Background="White" Text="ON" /></TextBlock>
        <TextBlock
            Margin="139,222,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontSize="36"
            TextWrapping="Wrap"><Run Background="White" Text="OFF" /></TextBlock>
        <Label
            Margin="307,84,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="White"
            Content="CAMERA"
            FontSize="48" />
        <Button
            Width="107"
            Margin="620,373,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click"
            Content="AVANTI"
            FontSize="24" />

    </Grid>
</Page>
