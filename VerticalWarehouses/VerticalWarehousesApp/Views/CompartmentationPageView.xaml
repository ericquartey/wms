<Page x:Class="Ferretto.VW.VerticalWarehousesApp.Views.CompartmentationPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ferretto.VW.VerticalWarehousesApp.Views"
      xmlns:MyNamespace="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompartmentationPageView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Border BorderBrush="White" BorderThickness="2" Margin="3">
            <StackPanel Name="DrawButtonsStackPanel" Orientation="Horizontal" FlowDirection="LeftToRight">
                
                <Button Name="ButtonDrawCompartments" Margin="5" Background="Transparent" BorderThickness="1"
                        Foreground="White" FontSize="20" Click="ButtonSetActionToDrawCompartment" BorderBrush="White"
                        Content="Draw Compartments"/>


                <Button Name="ButtonDoNothing" Margin="5" Background="Transparent" BorderThickness="1" BorderBrush="White"
                        Foreground="White" FontSize="20" Click="ButtonSetActionToCreateCompartment" Content="Create Compartments"/>
                
            </StackPanel>
        </Border>
        <Canvas Grid.Row="1" Name="cnvImage" MouseDown="ImageMouseDown" MouseMove="ImageMouseMove"
                MouseUp="ImageMouseUp" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="Transparent" Margin="5">
            <Image Source="/Assets/simple_tray.png" Height="{Binding ElementName=cnvImage, Path=ActualHeight}"
                   Width="{Binding ElementName=cnvImage, Path=ActualWidth}" Stretch="Fill"></Image>
        </Canvas>
    </Grid>
</Page>
