<Page x:Class="Ferretto.VW.VerticalWarehousesApp.Views.CompartmentationPageView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Ferretto.VW.VerticalWarehousesApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CompartmentationPageView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" FlowDirection="LeftToRight">
            <Border BorderBrush="White" BorderThickness="1" Margin="5" IsEnabled="True">
                <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="20"
                        Click="ButtonSetActionToCreateCompartment" Content="Create Compartment" Margin="2,0"/>
            </Border>
            <Border BorderBrush="White" BorderThickness="1" Margin="5" IsEnabled="True">
                <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="20"
                        Click="ButtonSetActionToDoNothing" Content="Do Nothing" Margin="2,0"/>
            </Border>
        </StackPanel>
        <Canvas Grid.Row="1" Name="cnvImage" MouseDown="imgCamera_MouseDown" MouseMove="imgCamera_MouseMove"
                MouseUp="imgCamera_MouseUp" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                Background="Transparent" Margin="5">
            <Image Source="/Assets/simple_tray.png" Height="{Binding ElementName=cnvImage, Path=ActualHeight}"
                   Width="{Binding ElementName=cnvImage, Path=ActualWidth}" Stretch="Fill"></Image>
        </Canvas>
    </Grid>
</Page>
