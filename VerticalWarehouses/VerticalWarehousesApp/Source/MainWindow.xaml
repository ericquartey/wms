<Window x:Class="Ferretto.VW.VerticalWarehousesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ferretto.VW.VerticalWarehousesApp"
        mc:Ignorable="d"
        Title="MainWindow" Loaded="VMLoaded"
        Height="768" Width="1024" Background="Gray">
    <DockPanel>
        <Border BorderBrush="White" BorderThickness="2" Height="100" Margin="2"
                    HorizontalAlignment="Stretch" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft">
                <Border BorderBrush="White" BorderThickness="1" Margin="2" Width="200">
                    <DockPanel>
                        <Button Background="Transparent" HorizontalAlignment="Stretch" Width="170" BorderThickness="0" Click="OpenUserLogInPopUp">
                            <TextBlock Foreground="White" FontSize="30" Text="Login"></TextBlock>
                        </Button>
                        <Rectangle Name="UserLoggedRect"  Width="20" Height="20" Fill="Red" HorizontalAlignment="Left"
                                   VerticalAlignment="Center" Visibility="Visible" DockPanel.Dock="Left" Margin="5"></Rectangle>
                    </DockPanel>
                </Border>
                <Border BorderBrush="White" BorderThickness="1" Margin="2" Width="200">
                    <Button Background="Transparent" Foreground="White" FontSize="30" BorderThickness="0">MAN</Button>
                </Border>
                <Border BorderBrush="White" BorderThickness="1" Margin="2" Width="200">
                    <Button Background="Transparent" Foreground="White" FontSize="30" BorderThickness="0">OFF</Button>
                </Border>
                <Border BorderBrush="White" BorderThickness="1" Margin="2" Width="390">
                    <Image Source="C:\Users\npadovani\Desktop\FERRETTO\Produzione\VerticalWarehouse\Warehouse Management System\VerticalWarehouses\VerticalWarehousesApp\Assets\ferrettologo_768x162.jpg"
                           Stretch="Fill"></Image>
                </Border>
            </StackPanel>
        </Border>
        <Border BorderBrush="White" BorderThickness="2" DockPanel.Dock="Left" Margin="2"
                Width="200">
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <StackPanel Name="ButtonRegionStackPanel">
                    <Border BorderBrush="White" BorderThickness="1" Margin="5" Height="100" IsEnabled="False">
                        <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="20">NavigateToView0</Button>
                    </Border>
                    <Border BorderBrush="White" BorderThickness="1" Margin="5" Height="100" IsEnabled="False">
                        <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="20">NavigateToView1</Button>
                    </Border>
                    <Border BorderBrush="White" BorderThickness="1" Margin="5" Height="100" IsEnabled="False">
                        <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="20">NavigateToView2</Button>
                    </Border>
                    <Border BorderBrush="White" BorderThickness="1" Margin="5" Height="100" IsEnabled="False">
                        <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="20">NavigateToView3</Button>
                    </Border>
                    <Border BorderBrush="White" BorderThickness="1" Margin="5" Height="100" IsEnabled="False">
                        <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="20">NavigateToView4</Button>
                    </Border>
                    <Border BorderBrush="White" BorderThickness="1" Margin="5" Height="100" IsEnabled="False">
                        <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="20">NavigateToView5</Button>
                    </Border>
                    <Border BorderBrush="White" BorderThickness="1" Margin="5" Height="100" IsEnabled="False">
                        <Button Background="Transparent" BorderThickness="0" Foreground="White" FontSize="20">NavigateToView6</Button>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <Border BorderBrush="White" BorderThickness="2" Margin="2">
            <ContentControl>

            </ContentControl>
        </Border>

        <Popup Height="300" Width="500" Name="UserLoginPopup" Placement="Center" IsOpen="False">
            <Border BorderBrush="Yellow" BorderThickness="5" Background="LightCyan">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="50"></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBlock FontSize="30" TextAlignment="Center" VerticalAlignment="Center">USER LOG IN</TextBlock>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" TextAlignment="Center" Foreground="Black" VerticalAlignment="Center" FontSize="25" Margin="5">USER:</TextBlock>
                        <TextBox Grid.Row="0" Grid.Column="1" TextAlignment="Center" Foreground="Black" VerticalAlignment="Center" FontSize="25" Margin="5"></TextBox>
                        <TextBlock Grid.Row="1" Grid.Column="0" TextAlignment="Center" Foreground="Black" VerticalAlignment="Center" FontSize="25" Margin="5">PASSWORD:</TextBlock>
                        <TextBox Grid.Row="1" Grid.Column="1" TextAlignment="Center" Foreground="Black" VerticalAlignment="Center" FontSize="25" Margin="5"></TextBox>
                    </Grid>
                    <Border BorderBrush="Yellow" Margin="5,0,5,0" BorderThickness="2" Grid.Row="2" Width="200" Height="45">
                        <Button HorizontalAlignment="Stretch" Background="Aqua" BorderThickness="0" Click="CloseUserLogInPopUp">LOG IN</Button>
                    </Border>
            </Grid>
            </Border>
        </Popup>
    </DockPanel>
</Window>
