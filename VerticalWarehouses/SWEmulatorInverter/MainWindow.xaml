<Window x:Class="Ferretto.VW.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ferretto.VW.InverterDriver"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Name="MainWin"
        Title="Emulator Inverter"
        Width="543.667"
        Height="435.67"
        mc:Ignorable="d">
    <Grid Margin="0,-2,-8,2"
          RenderTransformOrigin="0.515,0.545">
        <Button Name="Btn_Start"
                Width="79"
                Height="20"
                Margin="247,72,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click_Start"
                Content="START" />
        <Button Name="Btn_Stop"
                Width="79"
                Height="20"
                Margin="338,72,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Click_Stop"
                Content="STOP" />
        <TextBox Name="TextBox"
                 Width="186"
                 Height="23"
                 Margin="20,32,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontWeight="Bold"
                 IsReadOnly="True"
                 Text="IP Address"
                 TextAlignment="Center"
                 TextWrapping="Wrap" />
        <TextBox Name="TextBoxAS"
                 Width="79"
                 Height="20"
                 Margin="338,43,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontWeight="Bold"
                 Foreground="Red"
                 RenderTransformOrigin="0.311,0.549"
                 Text="SPENTO"
                 TextAlignment="Center"
                 TextWrapping="Wrap" />
        <Label Width="79"
               Height="28"
               Margin="247,39,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="STATUS"
               RenderTransformOrigin="0.079,0.538" />
        <Border Width="186"
                Height="70"
                Margin="240,33,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="Black"
                BorderThickness="1" />
        <Border Width="186"
                Height="37"
                Margin="20,66,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="Black"
                BorderThickness="1" />
        <TextBox Name="TextBox1"
                 Width="36"
                 Height="20"
                 Margin="27,75,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 RenderTransformOrigin="0.511,0.573"
                 Text="0"
                 TextAlignment="Right"
                 TextWrapping="Wrap" />
        <Label Width="106"
               Height="26"
               Margin="70,71,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="TOTAL MESSAGES"
               RenderTransformOrigin="0.079,0.538" />
        <TextBox Name="TextBoxArea"
                 Width="486"
                 Height="80"
                 Margin="20,159,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 AcceptsReturn="True"
                 IsReadOnly="True"
                 Text="TextBox"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Visible" />
        <Button Name="BtnEsci"
                Width="50"
                Height="23"
                Margin="456,33,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Esci"
                Content="EXIT"
                Foreground="White" />
        <Button Name="BtnDone"
                Width="50"
                Height="23"
                Margin="456,72,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Done"
                Content="DONE"
                RenderTransformOrigin="0.52,0.391" />
        <Button Name="BtnError"
                Width="50"
                Height="23"
                Margin="456,112,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Button_Error"
                Content="ERROR" />
        <ListView Name="CmdList"
                  Width="486"
                  Height="133"
                  Margin="20,254,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  AlternationCount="2"
                  Background="Transparent"
                  ItemsSource="{Binding Cmd}">
            <ListView.Resources>
                <Style x:Key="itemstyle"
                       TargetType="{x:Type ListViewItem}">
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="BorderBrush" Value="#BABABE" />
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Lunghezza}"
                                    Header="Length (Bytes)" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding CodeOp}"
                                    Header="OP Code" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param1}"
                                    Header="Param 1" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param2}"
                                    Header="Param 2" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param3}"
                                    Header="Param 3" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param4}"
                                    Header="Param 4" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param5}"
                                    Header="Param 5" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param6}"
                                    Header="Param 6" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param7}"
                                    Header="Param 7" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param8}"
                                    Header="Param 8" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param9}"
                                    Header="Param 9" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param10}"
                                    Header="Param 10" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param11}"
                                    Header="Param 11" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param12}"
                                    Header="Param 12" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param13}"
                                    Header="Param 13" />
                    <GridViewColumn Width="80"
                                    DisplayMemberBinding="{Binding Param14}"
                                    Header="Param 14" />
                </GridView>

            </ListView.View>
        </ListView>
        <Border Width="186"
                Height="37"
                Margin="240,112,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="Black"
                BorderThickness="1">
            <Label Margin="7,3,107,3"
                   Content="Operative"
                   FontWeight="Bold" />
        </Border>
        <!--  Group Name "OP" for Operative  -->
        <RadioButton Name="RBYES"
                     Margin="330,122,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Checked="RBYES_Checked"
                     Content="YES"
                     GroupName="OP" />
        <RadioButton Name="RBNO"
                     Margin="378,122,0,0"
                     HorizontalAlignment="Left"
                     VerticalAlignment="Top"
                     Checked="RBNO_Checked"
                     Content="NO"
                     GroupName="OP"
                     IsChecked="True" />
    </Grid>
</Window>
