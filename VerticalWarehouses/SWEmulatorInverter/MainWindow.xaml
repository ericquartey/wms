<Window
    x:Class="Ferretto.VW.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Ferretto.VW.InverterDriver"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Name="MainWin"
    Title="Server"
    Width="344.667"
    Height="372"
    mc:Ignorable="d">
    <Grid Margin="-3,-2,-5,2" RenderTransformOrigin="0.515,0.545">
        <Button
            Name="Btn_Start"
            Width="79"
            Margin="83,166,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_Start"
            Content="Avvia Server" />
        <Button
            Name="Btn_Stop"
            Width="79"
            Margin="174,166,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Click_Stop"
            Content="Arresta Server" />
        <TextBox
            Name="TextBox"
            Width="186"
            Height="23"
            Margin="76,32,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Bold"
            IsReadOnly="True"
            Text="Indirizzo IP"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <TextBox
            Name="TextBox1"
            Width="36"
            Height="20"
            Margin="83,77,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.511,0.573"
            Text="0"
            TextAlignment="Right"
            TextWrapping="Wrap" />
        <TextBox
            Name="TextBoxAS"
            Width="79"
            Height="20"
            Margin="174,137,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Bold"
            Foreground="Red"
            RenderTransformOrigin="0.311,0.549"
            Text="SPENTO"
            TextAlignment="Center"
            TextWrapping="Wrap" />
        <Label
            Width="127"
            Height="26"
            Margin="126,73,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Messaggi ricevuti"
            RenderTransformOrigin="0.079,0.538" />
        <Label
            Width="79"
            Height="28"
            Margin="83,133,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Stato Server"
            RenderTransformOrigin="0.079,0.538" />
        <Border
            Width="186"
            Height="70"
            Margin="76,127,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1" />
        <Border
            Width="186"
            Height="38"
            Margin="76,68,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderBrush="Black"
            BorderThickness="1" />
        <TextBox
            Name="TextBoxArea"
            Width="302"
            Height="115"
            Margin="20,210,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            AcceptsReturn="True"
            IsReadOnly="True"
            Text="TextBox"
            TextWrapping="Wrap"
            VerticalScrollBarVisibility="Visible" />
        <Button
            Name="BtnEsci"
            Width="50"
            Height="23"
            Margin="269,32,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Button_Esci"
            Content="Esci"
            Foreground="White" />
    </Grid>
</Window>
