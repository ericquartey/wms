{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Error",
      "Microsoft": "Error"
    },
    "Console": {
      "IncludeScopes": false,
      "LogLevel": {
        "Ferretto.VW.MAS.DataLayer.LogEntriesProvider": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AutomationServicePrimary": "Data Source='Database/MachineAutomationService.Primary.db'",
    "AutomationServiceSecondary": "Data Source='Database/MachineAutomationService.Secondary.db'"
  },
  "Vertimag": {
    "DataLayer": {
      "ConfigurationFile": "configuration/vertimag-configuration.json"
    }
  },
  "WMS": {
    "IsEnabled": true,
    "ServiceUrl": "http://localhost:10000",
    "ServiceHubUrl": "http://localhost:10000/hubs/data"
  },
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://*:5000/"
      }
    }
  }
}
