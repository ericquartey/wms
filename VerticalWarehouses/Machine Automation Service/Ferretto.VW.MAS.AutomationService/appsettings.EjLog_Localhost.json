{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Error",
      "Microsoft": "Error"
    }
  },
  "ConnectionStrings": {
    "AutomationServicePrimary": "Data Source='Database/MachineAutomationService.EjLog.Primary.db'",
    "AutomationServiceSecondary": "Data Source='Database/MachineAutomationService.EjLog.Secondary.db'"
  },
  "WMS": {
    "IsEnabled": true,
    "ServiceHubUrl": "http://localhost:10000/hubs/data",
    "ServiceUrl": "http://localhost:10000"
  },
  "Vertimag": {
    "Drivers": {
      "Inverter": {
        "UseMock": "false",
        "ReadTimeoutMilliseconds": -1
      },
      "RemoteIO": {
        "UseMock": "false",
        "ReadTimeoutMilliseconds": -1
      }
    },
    "DataLayer": {
      "ConfigurationFile": "configuration/vertimag-configuration.EjLog.json",
      "CacheExpirationTimespan": "1.00:00:00"
    }
  }
}
