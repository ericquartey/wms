<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions ="true">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <variable name="logDirectory" value="./Logs"/>
  <variable name="archiveDirectory" value="./Logs/Archive"/>

  <targets>
    <default-wrapper xsi:type="AsyncWrapper" />
    <default-target-parameters
      xsi:type="File"
      keepFileOpen="true"
      openFileCacheTimeout="30"
      autoFlush="false"
      archiveNumbering="Date"
      archiveDateFormat="yyyy-MM-dd"
      archiveEvery="Day"
      maxArchiveFiles="30" />

    <target 
      name="allfile"
      xsi:type="File"
      fileName="${logDirectory}/all.log"
      layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message} ${exception:format=tostring}"
      archiveFileName="${archiveDirectory}/{#}-all.log"/>

    <target
      name="sqlfile"
      xsi:type="File"
      fileName="${logDirectory}/sql.log"
      layout="${longdate}|${message}"
      archiveFileName="${archiveDirectory}/{#}-sql.log"/>

    <target
      name="eventAggregator"
      xsi:type="File"
      fileName="${logDirectory}/event-aggregator.log"
      layout="${longdate}|${message}"
      archiveFileName="${archiveDirectory}/{#}-event-aggregator.log" />

    <target
      name="missionfile"
      xsi:type="File"
      fileName="${logDirectory}/mission.log"
      layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message}"
      archiveFileName="${archiveDirectory}/{#}-mission.log" />

    <target
      name="ErrorLogFile"
      xsi:type="File"
      fileName="${logDirectory}/errors.log"
      layout="${longdate}|${callsite}|${message}&#13;&#10;${exception:format=data:exceptionDataSeparator=\r\n}&#13;&#10;${exception:format=tostring}"
      archiveFileName="${archiveDirectory}/{#}-errors.log" />

  </targets>

  <rules>
    <!-- Final rule for LogEntriesProvider, to be kept as first rule at the top-->
    <logger name="*.LogEntriesProvider" minlevel="Trace" writeTo="eventAggregator" final="true" />
    <logger name="Ferretto.*" writeTo="allfile" />
    <logger name="Ferretto.VW.MAS.AutomationService.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.MissionManager.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.MachineManager.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.Utils.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.AutomationService.Program" minlevel="Trace" writeTo="allfile, missionfile, eventAggregator" />
    <logger name="*.DataLayerContext" minlevel="Trace" writeTo="sqlfile" />
    <logger name="*" minlevel="Error" writeTo="ErrorLogFile" />
    
    <!--Skip non-critical Microsoft logs and so log only own logs, blackHole without writeTo-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" />
  </rules>
</nlog>
