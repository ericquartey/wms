<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions ="true">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>

    <!-- write logs to file  -->
    <target name="allfile" xsi:type="AsyncWrapper" queueLimit="5000" overflowAction="Discard">
      <target xsi:type="File"
        fileName=".\Logs\${shortdate}-all.log"
        keepFileOpen="true"
        openFileCacheTimeout="30"
        autoFlush="false"
        layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message}"/>
    </target>
    <target name="missionfile" xsi:type="AsyncWrapper" queueLimit="5000" overflowAction="Discard">
      <target xsi:type="File"
        keepFileOpen="true"
        openFileCacheTimeout="30"
        autoFlush="false"
        fileName=".\Logs\${shortdate}-mission.log"
        layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message}"/>
    </target>

    <!-- another file log, only own logs. Uses some ASP.NET core renderers -->
    <target xsi:type="File"
      name="ownFile-web"
      fileName=".\Logs\${shortdate}-own.log"
      layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message}"/>

  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="Ferretto.VW.MAS.AutomationService.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.MissionManager.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.MachineManager.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.DataLayer.*" minlevel="Info" writeTo="" />
    <logger name="Ferretto.VW.MAS.DeviceManager.*" minlevel="Trace" writeTo="allfile" />
    <logger name="Ferretto.VW.MAS.InverterDriver.*" minlevel="Trace" writeTo="allfile" />
    <logger name="Ferretto.VW.MAS.IODriver.*" minlevel="Trace" writeTo="allfile" />

    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" /> <!-- BlackHole without writeTo -->
  </rules>
</nlog>
