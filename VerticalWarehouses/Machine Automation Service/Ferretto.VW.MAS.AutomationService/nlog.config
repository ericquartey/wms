<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions ="true">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>

    <!-- write logs to file  -->
    <target name="allfile" xsi:type="AsyncWrapper" queueLimit="5000" overflowAction="Discard">
      <target xsi:type="File"
        fileName=".\Logs\${shortdate}-all.log"
        keepFileOpen="true"
        openFileCacheTimeout="30"
        autoFlush="false"
        layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message} ${exception:format=tostring}"
        archiveFileName="./Logs/Archive/{#}-all.log"
        archiveNumbering="Date"
        archiveDateFormat="yyyy-MM-dd"
        archiveEvery="Day"/>
    </target>

    <target name="sqlfile" xsi:type="AsyncWrapper" queueLimit="5000" overflowAction="Discard">
      <target xsi:type="File"
        fileName=".\Logs\${shortdate}-sql.log"
        keepFileOpen="true"
        openFileCacheTimeout="30"
        autoFlush="false"
        layout="${longdate}|${message}"
        archiveFileName="./Logs/Archive/{#}-sql.log"
        archiveNumbering="Date"
        archiveDateFormat="yyyy-MM-dd"
        archiveEvery="Day"/>
    </target>

    <target name="eventAggregator" xsi:type="AsyncWrapper" queueLimit="5000" overflowAction="Discard">
      <target xsi:type="File"
        fileName=".\Logs\${shortdate}-eventAggregator.log"
        keepFileOpen="true"
        openFileCacheTimeout="30"
        autoFlush="false"
        layout="${longdate}|${message}"
        archiveFileName="./Logs/Archive/{#}-eventAggregator.log"
        archiveNumbering="Date"
        archiveDateFormat="yyyy-MM-dd"
        archiveEvery="Day"/>
    </target>

    <target name="missionfile" xsi:type="AsyncWrapper" queueLimit="5000" overflowAction="Discard">
      <target xsi:type="File"
        keepFileOpen="true"
        openFileCacheTimeout="30"
        autoFlush="false"
        fileName=".\Logs\${shortdate}-mission.log"
        layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message}"
        archiveFileName="./Logs/Archive/{#}-mission.log"
        archiveNumbering="Date"
        archiveDateFormat="yyyy-MM-dd"
        archiveEvery="Day"/>
    </target>

    <!-- another file log, only own logs. Uses some ASP.NET core renderers -->
    <target xsi:type="File"
      name="ownFile-web"
      fileName=".\Logs\${shortdate}-own.log"
      layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message}"
      archiveFileName="./Logs/Archive/{#}-own.log"
      archiveNumbering="Date"
      archiveDateFormat="yyyy-MM-dd"
      archiveEvery="Day"/>

    <target name="ErrorLogFile" xsi:type="AsyncWrapper" queueLimit="5000" overflowAction="Discard">
      <target
            xsi:type="File"
            fileName="./Logs/${shortdate}-errors.log"
            keepFileOpen="true"
            openFileCacheTimeout="30"
            autoFlush="false"
            layout="${longdate}|${callsite}|${message}&#13;&#10;${exception:format=data:exceptionDataSeparator=\r\n}&#13;&#10;${exception:format=tostring}"
            archiveFileName="./Logs/Archive/{#}-errors.log"
            archiveNumbering="Date"
            archiveDateFormat="yyyy-MM-dd"
            archiveEvery="Day"/>
    </target>
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="Ferretto.VW.MAS.AutomationService.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.MissionManager.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.MachineManager.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.Utils.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="Ferretto.VW.MAS.DataLayer.LogEntriesProvider" minlevel="Trace" writeTo="eventAggregator" />
    <logger name="Ferretto.VW.MAS.AutomationService.Program" minlevel="Trace" writeTo="allfile, missionfile, eventAggregator" />
    <logger name="Ferretto.VW.MAS.DeviceManager.*" minlevel="Trace" writeTo="allfile" />
    <logger name="Ferretto.VW.MAS.InverterDriver.*" minlevel="Trace" writeTo="allfile" />
    <logger name="Ferretto.VW.MAS.IODriver.*" minlevel="Trace" writeTo="allfile" />
    <logger name="Ferretto.VW.MAS.DataLayer.DatabaseContext.DataLayerContext" minlevel="Trace" writeTo="sqlfile" />
    <logger name="*" minlevel="Error" writeTo="ErrorLogFile" />
    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" /> <!-- BlackHole without writeTo -->
  </rules>
</nlog>
