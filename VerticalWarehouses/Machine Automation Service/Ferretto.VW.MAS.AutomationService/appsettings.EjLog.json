{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Error",
      "Microsoft": "Error"
    }
  },
  "ConnectionStrings": {
    "AutomationServicePrimary": "Data Source='Database/MachineAutomationService.Simulation.Primary.db'",
    "AutomationServiceSecondary": "Data Source='Database/MachineAutomationService.Simulation.Secondary.db'"
  },
  "WMS": {
    "IsEnabled": true,
    "ServiceUrl": "http://localhost:10000",
    "ServiceHubUrl": "http://localhost:10000/hubs/data"
  },
  "Vertimag": {
    "Drivers": {
      "Inverter": {
        "UseMock": "false",
        "ReadTimeoutMilliseconds": -1
      },
      "RemoteIO": {
        "UseMock": "false",
        "ReadTimeoutMilliseconds": -1
      }
    },
    "DataLayer": {
      "ConfigurationFile": "configuration/vertimag-configuration.Simulation.json",
      "CacheExpirationTimespan": "1.00:00:00",
      "OverrideSetupStatus": "true"
    }
  }
}
