<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Info"
      internalLogFile=".\internal-nlog.txt"
      throwExceptions ="true">

  <!-- enable asp.net core layout renderers -->
  <extensions>
    <add assembly="NLog.Web.AspNetCore"/>
    <add assembly="Ferretto.VW.Common.Logging.SQLiteTarget"/>
  </extensions>

  <!-- the targets to write to -->
  <targets>
    
    <!-- write logs to file  -->
    <target xsi:type="File" name="allfile" fileName=".\nlog-all-${shortdate}.log"
            layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message}" deleteOldFileOnStartup="true"/>

    <target xsi:type="File" name="missionfile" fileName=".\nlog-mission-${shortdate}.log"
            layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message}" deleteOldFileOnStartup="true"/>

    <!-- another file log, only own logs. Uses some ASP.NET core renderers -->
    <target xsi:type="File" name="ownFile-web" fileName=".\nlog-own-${shortdate}.log"
            layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${callsite:padding=-110:fixedLength=true}|${message}" deleteOldFileOnStartup="true"/>

      <!-- another file log, only own logs. Uses some ASP.NET core renderers -->
      <target xsi:type="File" name="notify-web" fileName=".\nlog-notify-${shortdate}.log"
              layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${message}" deleteOldFileOnStartup="true"/>

      <!-- another file log, only own logs. Uses some ASP.NET core renderers -->
      <target xsi:type="File" name="field-web" fileName=".\nlog-field-${shortdate}.log"
              layout="${longdate}|Thread id: ${threadid:padding=-3:fixedLength=true}|${message}" deleteOldFileOnStartup="true"/>

      <target xsi:type="SQLite" name="dbLog" DbName="MachineAutomationServiceLog.db" />
  </targets>

  <!-- rules to map from logger name to target -->
  <rules>
    <!--All logs, including from Microsoft-->
    <logger name="*.MAS.AutomationService.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="*.MAS.MissionsManager.*" minlevel="Trace" writeTo="missionfile" />
    <logger name="*.MAS.DataLayer.*" minlevel="Info" writeTo="" />
    <logger name="*.MAS.FiniteStateMachines.*" minlevel="Trace" writeTo="allfile" />
    <logger name="*.MAS.InverterDriver.*" minlevel="Trace" writeTo="allfile" />
    <logger name="*.MAS.IODriver.*" minlevel="Trace" writeTo="allfile" />
      <logger name="Ferretto.VW.CommonUtils.Messages.*" minlevel="Trace" writeTo="notify-web" />
      <logger name="Ferretto.VW.MAS.Utils.Messages.*" minlevel="Trace" writeTo="field-web" />

    <!--Skip non-critical Microsoft logs and so log only own logs-->
    <logger name="Microsoft.*" maxlevel="Info" final="true" /> <!-- BlackHole without writeTo -->
  </rules>
</nlog>
