<Window x:Class="Ferretto.VW.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:installer="clr-namespace:Ferretto.VW.Installer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="1000"
        Height="450"
        WindowStyle="None"
        mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <installer:StatusToIconNameConverter x:Key="STIC" />
            <installer:StatusToColorConverter x:Key="STCC" />
            <installer:TimespanConverter x:Key="TSC" />
        </Grid.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0"
                     HorizontalContentAlignment="Stretch"
                     ItemsSource="{Binding Steps}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>


                            <icon:PackIconMaterial Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"
                                                   Foreground="{Binding Status, Converter={StaticResource STCC}}"
                                                   Kind="{Binding Status, Converter={StaticResource STIC}}" />
                            <TextBlock Grid.Column="1"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="{Binding Title}"
                                       TextAlignment="Left" />

                            <TextBlock Grid.Column="2"
                                       Margin="0,0,10,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Text="{Binding Duration, Converter={StaticResource TSC}}" />

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBox Grid.Column="1"
                     IsReadOnly="True"
                     Text="{Binding SelectedStep.Log, Mode=OneWay}" />
        </Grid>
    </Grid>
</Window>
