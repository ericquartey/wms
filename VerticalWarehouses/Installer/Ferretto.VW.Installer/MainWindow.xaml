<Window x:Class="Ferretto.VW.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Ferretto.VW.Installer.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:installer="clr-namespace:Ferretto.VW.Installer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.VW.Installer.Properties"
        Title="{x:Static res:Resources.MainWindowTitle}"
        Width="1024"
        Height="768"
        Style="{StaticResource MainWindowStyle}"
        WindowStartupLocation="Manual"
        mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.Resources>
            <installer:StatusToIconNameConverter x:Key="STIC" />
            <installer:StatusToColorConverter x:Key="STCC" />
            <installer:TimespanConverter x:Key="TSC" />
            <installer:StatusToFocusableConverter x:Key="STFC" />
            <installer:StatusToStringConverter x:Key="STSC" />
        </Grid.Resources>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1"
                        Margin="0,10,0,0"
                        Orientation="Horizontal">

                <icon:PackIconMaterial Width="24"
                                       Height="24"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding SelectedStep.Status, Converter={StaticResource STCC}}"
                                        
                                       Kind="{Binding SelectedStep.Status, Converter={StaticResource STIC}}" />

                <TextBlock Style="{StaticResource HeadingTextBlockStyle}"
                           Text="{Binding SelectedStep.Title}" />


            </StackPanel>
            <TextBlock Grid.Row="1"
                       Grid.Column="1"
                       Style="{StaticResource SubHeadingTextBlockStyle}"
                       Margin="34,0,0,10"
                       Text="{Binding SelectedStep.Description}" />

            <ListBox Grid.Row="2"
                     ItemsSource="{Binding Steps}"
                     ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}"
                     Style="{StaticResource SidePanelListBoxStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <icon:PackIconMaterial Width="18"
                                                   Height="18"
                                                   VerticalAlignment="Center"
                                                   Foreground="{Binding Status, Converter={StaticResource STCC}}"
                                                   Kind="{Binding Status, Converter={StaticResource STIC}}" />
                            <TextBlock Grid.Column="1"
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"
                                       Text="{Binding Title}"
                                       TextAlignment="Left" />

                            <TextBlock Grid.Row="1"
                                       Grid.Column="1"
                                       Margin="10,0,0,5"
                                       VerticalAlignment="Center"
                                       Foreground="{Binding Status, Converter={StaticResource STCC}}"
                                       FontSize="12"
                                       Text="{Binding Status, Converter={StaticResource STSC}}"
                                       TextAlignment="Left" />

                            <TextBlock Grid.Column="3"
                                       Margin="0,0,10,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Text="{Binding Duration, Converter={StaticResource TSC}}" />

                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBox Grid.Row="2"
                     Grid.Column="1"
                     HorizontalScrollBarVisibility="Auto"
                     Style="{StaticResource TextBoxConsoleStyle}"
                     Text="{Binding SelectedStep.Log, Mode=OneWay}"
                     VerticalScrollBarVisibility="Auto" />

            <!--
            <controls:BindableRichTextBox Grid.Row="1"
                                          Grid.Column="1"
                                          HorizontalScrollBarVisibility="Auto"
                                          IsReadOnly="True"
                                          Source="{Binding SelectedStep.Log, Mode=OneWay}"
                                          Style="{StaticResource RichTextBoxConsoleStyle}" />-->
            <Button Grid.Row="3"
                    Grid.Column="1"
                    Width="100"
                    Margin="0,10,0,0"
                    Padding="10"
                    HorizontalAlignment="Right"
                    Background="{StaticResource BackgroundBrush}"
                    BorderThickness="2"
                    Content="Annulla" />
        </Grid>
    </Grid>
</Window>
