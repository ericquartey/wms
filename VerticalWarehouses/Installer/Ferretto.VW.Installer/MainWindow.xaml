<Window x:Class="Ferretto.VW.Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:installer="clr-namespace:Ferretto.VW.Installer"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="1000"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <installer:StatusToIconNameConverter x:Key="STIC" />
            <installer:TimespanConverter x:Key="TSC" />
        </Grid.Resources>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ListBox Grid.Column="0"
                     ItemsSource="{Binding Steps}"
                     SelectedItem="{Binding SelectedStep, Mode=TwoWay}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <icon:PackIconMaterial Width="24"
                                                   Height="24"
                                                   VerticalAlignment="Center"
                                                   BorderThickness="1"
                                                   Kind="{Binding Status, Converter={StaticResource STIC}}" />
                            <TextBlock Margin="10,0,0,0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"
                                       Text="{Binding Title}" />

                            <TextBlock Margin="10,0,0,0"
                                       HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       Text="{Binding Duration, Converter={StaticResource TSC}}" />

                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBox Grid.Column="1"
                     IsReadOnly="True"
                     Text="{Binding SelectedStep.Log}" />
        </Grid>
    </Grid>
</Window>
