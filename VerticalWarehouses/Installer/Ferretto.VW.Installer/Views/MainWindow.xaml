<Window x:Class="Ferretto.VW.Installer.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.VW.Installer.Properties"
        xmlns:views="clr-namespace:Ferretto.VW.Installer.Views"
        xmlns:viewModels="clr-namespace:Ferretto.VW.Installer.ViewModels"
        mc:Ignorable="d"
        Title="{x:Static res:Resources.MainWindowTitle}"
        Width="1024"
        Height="768"
        Style="{StaticResource MainWindowStyle}"
        WindowStartupLocation="Manual">
    <Window.Resources>
        <DataTemplate DataType="{x:Type viewModels:InstallTypeViewModel}">
            <views:InstallTypeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:InstallBayViewModel}">
            <views:InstallBayView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:UpdateViewModel}">
            <views:UpdateView />
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl Content="{Binding CurrentMode}" />
    </Grid>
</Window>
