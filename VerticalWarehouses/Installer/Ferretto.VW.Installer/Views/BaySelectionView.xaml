<UserControl x:Class="Ferretto.VW.Installer.Views.BaySelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid x:Name="Root"
          Margin="50">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="Title"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   FontSize="36"
                   Style="{DynamicResource TitleTextStyle}"
                   Text="Configurazione baia" />

        <StackPanel Grid.Row="1"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Left"
                    Orientation="Vertical">

            <TextBlock x:Name="InfoInstallModelTB"
                       Grid.ColumnSpan="3"
                       VerticalAlignment="Top"
                       Style="{DynamicResource TitleTextStyle}"
                       Text="{Binding Machine.ModelName, StringFormat={}Macchina {0}}" />

            <TextBlock x:Name="InfoInstallWeightTB"
                       Grid.ColumnSpan="3"
                       VerticalAlignment="Top"
                       Style="{DynamicResource TitleTextStyle}"
                       Text="{Binding Machine.MaxGrossWeight, StringFormat={}Peso {0}}" />

            <TextBlock x:Name="InfoInstallSerialTB"
                       Grid.ColumnSpan="3"
                       VerticalAlignment="Top"
                       Style="{DynamicResource TitleTextStyle}"
                       Text="{Binding Machine.SerialNumber, StringFormat={}seriale {0}}" />
        </StackPanel>

        <TextBlock Grid.Row="3"
                   Margin="0,20,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource TitleTextStyle}"
                   Text="Seleziona tipo baia Panel Pc" />

        <StackPanel Grid.Row="4"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

            <Button Margin="0,0,0,0"
                    BorderBrush="{DynamicResource FerrettoLightGray}"
                    Command="{Binding SelectBayOneCommand}"
                    Content="Baia 1"
                    FontSize="38"
                    FontWeight="Light"
                    IsEnabled="True"
                    Style="{DynamicResource PpcButtonMenuBayStyle}"
                    Visibility="{Binding IsBayOneVisible, Converter={StaticResource BTVC}}" />

            <Button Margin="20,0,0,0"
                    BorderBrush="{DynamicResource FerrettoLightGray}"
                    Command="{Binding SelectBayTwoCommand}"
                    Content="Baia 2"
                    IsEnabled="True"
                    Style="{DynamicResource PpcButtonMenuBayStyle}"
                    Visibility="{Binding IsBayTwoVisible, Converter={StaticResource BTVC}}" />

            <Button Margin="20,0,0,0"
                    BorderBrush="{DynamicResource FerrettoLightGray}"
                    Command="{Binding SelectBayThreeCommand}"
                    Content="Baia 3"
                    IsEnabled="True"
                    Style="{DynamicResource PpcButtonMenuBayStyle}"
                    Visibility="{Binding IsBayThreeVisible, Converter={StaticResource BTVC}}" />

        </StackPanel>

        <TextBlock Grid.Row="5"
                   Margin="0,20,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{DynamicResource TitleTextStyle}"
                   Text="{Binding SelectedBayInfo}" />

        <Button Grid.Row="6"
                Grid.ColumnSpan="3"
                Margin="15,15,15,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding NextCommand}"
                Content="Procedi" />
    </Grid>
</UserControl>
