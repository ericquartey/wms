<UserControl x:Class="Ferretto.VW.Installer.Views.RoleSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Ferretto.VW.Installer.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid x:Name="Root"
          Margin="50">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />

            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <TextBlock x:Name="Title"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   FontSize="36"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Benvenuto installazione Vertimag" />

        <TextBlock x:Name="InfoInstallTB"
                   Grid.Row="1"
                   Grid.ColumnSpan="3"
                   Margin="0,20,0,0"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{Binding PanelPcVersion}" />

        <TextBlock x:Name="InfoInstall1TB"
                   Grid.Row="2"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{Binding MasVersion}" />


        <RadioButton Grid.Row="4"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Margin="10,20,10,0"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Stretch"
                     GroupName="test"
                     IsChecked="{Binding IsMasConfiguration, Mode=TwoWay}">
            <RadioButton.Content>
                <StackPanel Orientation="Vertical">
                    <TextBlock Grid.Row="2"
                               Margin="0,20"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                               Text="Baia Master" />
                    <Grid IsEnabled="{Binding IsMasConfiguration}">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                                   Margin="0,25"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   FontSize="{DynamicResource FontSize_High}"
                                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="Apri file di configurazione" />
                        <ctrls:PpcButton Grid.Column="1"
                                         Width="100"
                                         Height="60"
                                         Margin="20,0,20,0"
                                         Command="{Binding OpenFileCommand}"
                                         Content="Apri file"
                                         FontSize="18"
                                         Style="{StaticResource ButtonStyle}" />
                        <TextBlock Grid.Row="1"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   FontSize="{DynamicResource FontSize_Normal}"
                                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="{Binding MessageMaster}"
                                   TextWrapping="Wrap" />
                    </Grid>
                </StackPanel>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton Grid.Row="5"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Margin="10,0,10,0"
                     GroupName="test">
            <RadioButton.Content>
                <StackPanel Orientation="Vertical">
                    <TextBlock Margin="0,10"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                               Text="Baia slave" />
                    <Grid IsEnabled="{Binding IsMasConfiguration, Converter={StaticResource BNC}}">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Grid.Row="0"
                                       Margin="0,25"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       FontSize="{DynamicResource FontSize_High}"
                                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                                       Text="IP servizio di automazione " />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox Width="460"
                                         Height="60"
                                         Margin="20,0"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top"
                                         FontSize="34"
                                         Text="{Binding MasIpAddress, Mode=TwoWay, Converter={StaticResource IPATSC}}" />
                                <ctrls:PpcButton Grid.Column="1"
                                                 Width="100"
                                                 Height="60"
                                                 Margin="10,0,0,10"
                                                 Command="{Binding CheckMasConfigurationCommand}"
                                                 Content="Carica"
                                                 FontSize="18"
                                                 Style="{StaticResource ButtonStyle}" />
                            </Grid>
                        </StackPanel>
                        <TextBlock Grid.Row="1"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   FontSize="{DynamicResource FontSize_Normal}"
                                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="{Binding MessageSlave}"
                                   TextWrapping="Wrap" />
                    </Grid>
                </StackPanel>
            </RadioButton.Content>
        </RadioButton>

        <ctrls:PpcButton Grid.Row="7"
                         Grid.ColumnSpan="3"
                         Width="100"
                         Height="60"
                         Margin="15,15,15,0"
                         HorizontalAlignment="Right"
                         VerticalAlignment="Bottom"
                         Command="{Binding NextCommand}"
                         Content="Continua"
                         FontSize="18"
                         Style="{StaticResource ButtonStyle}" />
    </Grid>
</UserControl>
