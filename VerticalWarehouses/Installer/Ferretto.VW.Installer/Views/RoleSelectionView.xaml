<UserControl x:Class="Ferretto.VW.Installer.Views.RoleSelectionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Ferretto.VW.Installer.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <Grid Margin="50">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="Title"
                   Grid.ColumnSpan="2"
                   Style="{DynamicResource TitleTextStyle}"
                   Text="Installazione Software Vertimag" />

        <TextBlock x:Name="AppVersionLabel"
                   Grid.Row="1"
                   Margin="0,0,25,0"
                   Style="{DynamicResource LabelTextStyle}"
                   Text="Application Version" />

        <TextBlock x:Name="AppVersionValue"
                   Grid.Row="2"
                   Style="{DynamicResource ValueTextStyle}"
                   Text="{Binding UiVersion, TargetNullValue=Unknown}" />

        <TextBlock x:Name="ServiceVersionLabel"
                   Grid.Row="1"
                   Grid.Column="1"
                   Style="{DynamicResource LabelTextStyle}"
                   Text="Service Version" />

        <TextBlock x:Name="ServiceVersionValue"
                   Grid.Row="2"
                   Grid.Column="1"
                   Style="{DynamicResource ValueTextStyle}"
                   Text="{Binding ServiceVersion, TargetNullValue=Unknown}" />

        <StackPanel Grid.Row="4"
                    Grid.ColumnSpan="2"
                    Margin="0,50,0,0"
                    Orientation="Vertical">
            <RadioButton Margin="0,0,0,25"
                         Content="Baia Principale"
                         GroupName="test"
                         IsChecked="{Binding IsMasConfiguration, Mode=TwoWay}" />

            <Grid IsEnabled="{Binding IsMasConfiguration}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Margin="50,0,0,0"
                            Orientation="Vertical">
                    <TextBlock HorizontalAlignment="Left"
                               Style="{DynamicResource LabelTextStyle}"
                               Text="File di configurazione selezionato" />
                    <TextBlock HorizontalAlignment="Left"
                               Style="{DynamicResource ValueTextStyle}"
                               Text="{Binding MachineConfigurationFileName, TargetNullValue=Nessuno}" />
                </StackPanel>

                <Button Grid.Column="1"
                        Command="{Binding OpenFileCommand}"
                        Content="Seleziona file" />
                <TextBlock Grid.Row="1"
                           Grid.ColumnSpan="2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Style="{DynamicResource ValueTextStyle}"
                           Text="{Binding MessageMaster}"
                           TextWrapping="Wrap" />
            </Grid>

            <RadioButton Margin="0,0,0,25"
                         Content="Baia Secondaria"
                         GroupName="test" />

            <Grid IsEnabled="{Binding IsMasConfiguration, Converter={StaticResource BNC}}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="50,25"
                                Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Style="{DynamicResource LabelTextStyle}"
                                   Text="Indirizzo IP della Baia Principale" />
                        <ctrls:IPAddressBox Width="460"
                                            Height="60"
                                            Margin="0,20,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            FontSize="34"
                                            IPAddress="{Binding MasIpAddress, Mode=TwoWay}" />
                    </StackPanel>

                    <Button HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding CheckMasConfigurationCommand}"
                            Content="Carica" />

                </StackPanel>
                <TextBlock Grid.Row="1"
                           Grid.ColumnSpan="2"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="{DynamicResource FontSize_Normal}"
                           Style="{DynamicResource TitleTextStyle}"
                           Text="{Binding MessageSlave}"
                           TextWrapping="Wrap" />
            </Grid>
        </StackPanel>

        <Button Grid.Row="7"
                Grid.Column="1"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding NextCommand}"
                Content="Continua" />

    </Grid>
</UserControl>
