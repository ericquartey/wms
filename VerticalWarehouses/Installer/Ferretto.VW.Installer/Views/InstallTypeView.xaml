<UserControl x:Class="Ferretto.VW.Installer.Views.InstallTypeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:ctrls="clr-namespace:Ferretto.VW.App.Scaffolding.Controls"
             mc:Ignorable="d">
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:OpenFileDialogService Title="{Binding Title}"/>
    </dxmvvm:Interaction.Behaviors>
    <UserControl.Resources>
        <sys:Double x:Key="FontSize_High">18</sys:Double>
        <Style x:Key="HeadingTextBlockStyle"
           TargetType="TextBlock">
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Margin" Value="10,0,0,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}" />
        </Style>

        <Style x:Key="VWAPP_ViewTitleTextBlockStyle"
           TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource FerrettoPureWhite}" />
            <Setter Property="FontFamily" Value="{DynamicResource VWAPP_TitleFont}" />
            <Setter Property="FontSize" Value="{DynamicResource FontSize_Very_High}" />
            <Setter Property="FontWeight" Value="Light" />
            <Setter Property="Margin" Value="0,0,0,20" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Left" />
        </Style>

    </UserControl.Resources>


    <Grid x:Name="Root"
          Margin="50">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--<TextBlock x:Name="Title"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{Binding SoftwareVersion}" />-->

        <TextBlock x:Name="Title"                   
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   FontSize="36"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Benvenuto installazione Vertimag" />


        <!--Text="{Binding PanelPcMasVersion}"-->
        <TextBlock x:Name="InfoInstallTB"
                   Margin="0 20 0 0"
                   Grid.Row="1"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="PanelPc versione 1.1.0" />
        
        <TextBlock x:Name="InfoInstall1TB"
                   Grid.Row="2"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Servizio automazione versione 1.1.0" />


        <RadioButton Grid.Row="4"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Margin="50,30,50,0"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Stretch"
                     GroupName="test"
                     IsChecked="{Binding IsMasConfiguration, Mode=TwoWay}">
            <RadioButton.Content>
                <StackPanel Orientation="Vertical">
                    <TextBlock Grid.Row="2"
                               Margin="0,25"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"                               
                               Text="Baia Master" />
                    <Grid IsEnabled="{Binding IsMasConfiguration}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                               Margin="0,25"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="{DynamicResource FontSize_High}"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                               Text="Apri file di configurazione" />
                        <Button Margin="20 0 20 0"
                                Grid.Column="1"
                                Width="100"
                                Height="60"
                                FontSize="18"
                                Content="Apri file"
                                Style="{StaticResource ButtonStyle}"
                                Command="{Binding OpenFileCommand}">
                        </Button>
                    </Grid>
                </StackPanel>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton Grid.Row="5"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Margin="50,0,50,0"
                     GroupName="test"
                     IsChecked="{Binding IsAuto, Mode=TwoWay}"
                     IsEnabled="{Binding CanGoAutoSync}">
            <RadioButton.Content>
                <StackPanel Orientation="Vertical">
                    <TextBlock Margin="0,25"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"                           
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="Baia slave" />
                    <Grid IsEnabled="{Binding IsMasConfiguration, Converter={StaticResource BNC}}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Grid.Row="0"
                               Margin="0,25"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="{DynamicResource FontSize_High}"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                               Text="IP servizio di automazione " />
                            <ctrls:IPAddressBox
                               Margin="20,0"
                               Width="460"
                               Height="60"
                               FontSize="34"                               
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               IPAddress="{Binding MasIpAddress, Mode=TwoWay}"
                              />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </RadioButton.Content>
        </RadioButton>

        <Button Grid.Row="7"
                Grid.ColumnSpan="3"
                Margin="15,15,15,0"
                Width="100"
                Height="60"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding NextCommand}"
                Content="Continua" />
    </Grid>
</UserControl>
