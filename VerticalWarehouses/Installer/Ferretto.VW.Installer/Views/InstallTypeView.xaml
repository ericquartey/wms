<UserControl x:Class="Ferretto.VW.Installer.Views.InstallTypeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui"
             xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
             xmlns:ctrls="clr-namespace:Ferretto.VW.Installer.Controls"
             mc:Ignorable="d">
    <!--<dxmvvm:Interaction.Behaviors>
        <dxmvvm:OpenFileDialogService Title="{Binding Title}"/>
    </dxmvvm:Interaction.Behaviors>-->

    <Grid x:Name="Root"
          Margin="50">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="Title"                   
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   FontSize="36"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Benvenuto installazione Vertimag" />

        <TextBlock x:Name="InfoInstallTB"
                   Margin="0 20 0 0"
                   Grid.Row="1"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{Binding PanelPcVersion}" />
        
        <TextBlock x:Name="InfoInstall1TB"
                   Grid.Row="2"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"                   
                   Text="{Binding MasVersion}" />


        <RadioButton Grid.Row="4"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Margin="10,20,10,0"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Stretch"
                     GroupName="test"
                     IsChecked="{Binding IsMasConfiguration, Mode=TwoWay}">
            <RadioButton.Content>
                <StackPanel Orientation="Vertical">
                    <TextBlock Grid.Row="2"
                               Margin="0,20"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"                               
                               Text="Baia Master" />
                    <Grid IsEnabled="{Binding IsMasConfiguration}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0"
                               Margin="0,25"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="{DynamicResource FontSize_High}"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                               Text="Apri file di configurazione" />
                        <Button Margin="20 0 20 0"
                                Grid.Column="1"
                                Width="100"
                                Height="60"
                                FontSize="18"
                                Content="Apri file"
                                Style="{StaticResource ButtonStyle}"
                                Command="{Binding OpenFileCommand}">
                        </Button>
                        <TextBlock
                               Grid.Row="1"
                               Grid.ColumnSpan="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="{DynamicResource FontSize_Normal}"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                               Text="{Binding MessageMaster}" />
                    </Grid>
                </StackPanel>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton Grid.Row="5"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Margin="10,0,10,0"
                     GroupName="test">
            <RadioButton.Content>
                <StackPanel Orientation="Vertical">
                    <TextBlock Margin="0,10"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"                           
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="Baia slave" />
                    <Grid IsEnabled="{Binding IsMasConfiguration, Converter={StaticResource BNC}}">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Grid.Row="0"
                               Margin="0,25"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="{DynamicResource FontSize_High}"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                               Text="IP servizio di automazione " />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ctrls:IPAddressBox
                                   Margin="20,0"
                                   Width="460"
                                   Height="60"
                                   FontSize="34"                               
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   IPAddress="{Binding MasIpAddress, Mode=TwoWay}" />
                                <Button Margin="10 0 0 10"
                                    Grid.Column="1"
                                    Width="100"
                                    Height="60"
                                    FontSize="18"
                                    Content="Carica"
                                    Style="{StaticResource ButtonStyle}"
                                    Command="{Binding CheckMasConfigurationCommand}">
                                </Button>
                            </Grid>
                        </StackPanel>
                        <TextBlock
                                   Grid.Row="1"
                                   Grid.ColumnSpan="2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"                            
                                   FontSize="{DynamicResource FontSize_Normal}"
                                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="{Binding MessageSlave}" />
                    </Grid>
                </StackPanel>
            </RadioButton.Content>
        </RadioButton>

        <Button Grid.Row="7"
                Grid.ColumnSpan="3"
                Margin="15,15,15,0"
                Width="100"
                Height="60"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding NextCommand}"
                Content="Continua" />
    </Grid>
</UserControl>
