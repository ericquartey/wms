<Grid x:Class="Ferretto.VW.Installer.Controls.PpcMessageBox"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Ferretto.VW.Installer.Controls"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      d:DesignHeight="450"
      d:DesignWidth="800"
      mc:Ignorable="d">
    <Grid>
        <Border Background="White"
                Opacity="0.5" />
        <Border Margin="0,100,0,100"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                Background="{StaticResource FerrettoDarkGray}">
            <StackPanel Orientation="Vertical">
                <TextBlock Margin="50,50,50,0"
                           Style="{StaticResource TitleTextStyle}">
                    An error occurred
                </TextBlock>
                <TextBlock Margin="50"
                           Style="{StaticResource VWAPP_PpcTextBox_TextBlockStyle}"
                           Text="{Binding ErrorMessage}" />
                <Button Command="{Binding CloseCommand}"
                        Content="Abort" />
            </StackPanel>

        </Border>
    </Grid>
</Grid>
