<Window x:Class="Ferretto.VW.InstallationApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
        Title="Window1"
        Width="1024"
        Height="768"
        mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="StandardMainWindowButtonStyle"
                   TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{StaticResource FerrettoLightGray}" />
                <Setter Property="BorderBrush" Value="{StaticResource FerrettoMediumGray}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Foreground" Value="{StaticResource FerrettoPureWhite}" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontFamily" Value="{StaticResource HelveticaNeue-LightCond}" />
                <Setter Property="Margin" Value="5" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Grid.Column="0"
                Background="{StaticResource FerrettoPureWhite}"
                BorderThickness="0">
            <Image Margin="5"
                   Source="/Ferretto.VW.CustomControls;Component/Assets/ferrettologo_768x162.jpg"
                   Stretch="Uniform" />
        </Border>
        <Border Grid.Row="0"
                Grid.Column="1"
                Background="{StaticResource FerrettoPureWhite}"
                BorderThickness="0">
            <StackPanel FlowDirection="RightToLeft"
                        Orientation="Horizontal">
                <StackPanel Margin="0,0,40,0"
                            FlowDirection="RightToLeft"
                            Orientation="Horizontal">
                    <Label Width="100"
                           HorizontalContentAlignment="Right"
                           VerticalContentAlignment="Center"
                           FontSize="20">
                        Installer
                    </Label>
                    <Image Height="40"
                           Margin="5,0,5,0"
                           Source="/Ferretto.VW.CustomControls;Component/Assets/user_icon.png" />
                </StackPanel>
                <ComboBox Width="130"
                          Margin="5"
                          IsEditable="False"
                          Style="{StaticResource StandardComboBoxStyle}">
                    <ComboBoxItem Content="{x:Static res:InstallationApp.On}"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Off}"
                                  IsSelected="True"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                </ComboBox>
                <ComboBox Width="130"
                          Margin="5"
                          IsEditable="False"
                          Style="{StaticResource StandardComboBoxStyle}">
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Manual}"
                                  IsSelected="True"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Auto}"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Error}"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                </ComboBox>
            </StackPanel>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="{StaticResource FerrettoPureWhite}"
                BorderThickness="0">
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <Button Height="60"
                            Command="{Binding VerifyCircuitIntegrityButtonCommand}"
                            Content="{x:Static res:InstallationApp.VerifyCircuitIntegrity}"
                            Style="{StaticResource StandardMainWindowButtonStyle}" />
                    <Button Height="60"
                            Command="{Binding LowSpeedMovementsTestButtonCommand}"
                            Content="{x:Static res:InstallationApp.LowSpeedMovementsTest}"
                            Style="{StaticResource StandardMainWindowButtonStyle}" />
                    <Button Height="60"
                            Command="{Binding VerticalAxisCalibrationButtonCommand}"
                            Content="{x:Static res:InstallationApp.VerticalAxisCalibration}"
                            Style="{StaticResource StandardMainWindowButtonStyle}" />
                    <Button x:Name="OpenVerifyPanelPositionPageButton"
                            Height="60"
                            Content="{x:Static res:InstallationApp.VerifyPanelPosition}"
                            IsEnabled="False"
                            Style="{StaticResource StandardMainWindowButtonStyle}" />
                    <Button x:Name="OpenBelBurnishingPageButton"
                            Height="60"
                            Content="{x:Static res:InstallationApp.BeltBurnishing}"
                            IsEnabled="False"
                            Style="{StaticResource StandardMainWindowButtonStyle}" />
                    <Button x:Name="OpenGateSetUpPageButton"
                            Height="60"
                            Content="{x:Static res:InstallationApp.GateSetUp}"
                            IsEnabled="False"
                            Style="{StaticResource StandardMainWindowButtonStyle}" />
                    <Button x:Name="OpenVerifyWeightControllerPageButton"
                            Height="60"
                            Content="{x:Static res:InstallationApp.VerifyWeightController}"
                            IsEnabled="False"
                            Style="{StaticResource StandardMainWindowButtonStyle}" />
                </StackPanel>
            </ScrollViewer>
        </Border>
        <ContentControl x:Name="InstallationPageRegionContentControl"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="730"
                        Height="610"
                        Content="{Binding CurrentPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
