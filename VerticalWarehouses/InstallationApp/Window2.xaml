<Window x:Class="Ferretto.VW.InstallationApp.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
        Title="Window2"
        Width="1024"
        Height="768"
        mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <Style x:Key="StandardMainWindowButtonStyle"
                   TargetType="{x:Type Button}">
                <Setter Property="Background" Value="{StaticResource FerrettoLightGray}" />
                <Setter Property="BorderBrush" Value="{StaticResource FerrettoMediumGray}" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Foreground" Value="{StaticResource FerrettoPureWhite}" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontFamily" Value="{StaticResource HelveticaNeue-LightCond}" />
                <Setter Property="Margin" Value="5" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="170" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Grid.Column="0"
                Background="{StaticResource FerrettoPureWhite}"
                BorderBrush="{StaticResource FerrettoLightGray}"
                BorderThickness="0">
            <Image Margin="5"
                   Source="/Ferretto.VW.CustomControls;Component/Assets/FGLogo.png"
                   Stretch="Uniform" />
        </Border>
        <Border Grid.Row="0"
                Grid.Column="1"
                Background="{StaticResource FerrettoPureWhite}"
                BorderBrush="{StaticResource FerrettoLightGray}"
                BorderThickness="0">
            <StackPanel FlowDirection="RightToLeft"
                        Orientation="Horizontal">
                <ComboBox Width="270"
                          Margin="5"
                          IsEditable="False"
                          Style="{StaticResource StandardComboBoxStyle}"
                          Template="{DynamicResource StandardMainMenuComboBoxTemplate}">
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Installer}"
                                  IsSelected="True"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.LogOff}">
                        <ComboBoxItem.Style>
                            <Style TargetType="ComboBoxItem">
                                <EventSetter Event="ComboBoxItem.PreviewMouseDown"
                                             Handler="BackToVWAppButtonMethod" />
                                <Setter Property="Background" Value="{StaticResource FerrettoLightGray}" />
                                <Setter Property="Foreground" Value="{StaticResource FerrettoPureWhite}" />
                                <Setter Property="FontFamily" Value="{StaticResource HelveticaNeue-LightCond}" />
                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="Height" Value="80" />
                            </Style>
                        </ComboBoxItem.Style>
                    </ComboBoxItem>
                </ComboBox>
                <ComboBox Width="270"
                          Margin="5"
                          IsEditable="False"
                          Style="{StaticResource StandardComboBoxStyle}"
                          Template="{DynamicResource StandardMainMenuComboBoxTemplate}">
                    <ComboBoxItem Content="{x:Static res:InstallationApp.On}"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Off}"
                                  Foreground="{StaticResource FerrettoRed}"
                                  IsSelected="True"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                </ComboBox>
                <ComboBox Width="270"
                          Margin="5"
                          IsEditable="False"
                          Style="{StaticResource StandardComboBoxStyle}"
                          Template="{DynamicResource StandardMainMenuComboBoxTemplate}">
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Manual}"
                                  IsSelected="True"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Auto}"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Error}"
                                  Foreground="{StaticResource FerrettoRed}"
                                  Style="{StaticResource StandardMainWindowComboBoxItemStyle}" />
                </ComboBox>
            </StackPanel>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="{StaticResource FerrettoPureWhite}"
                BorderBrush="{StaticResource FerrettoLightGray}"
                BorderThickness="0">
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <Button Height="60"
                            Command="{Binding VerifyCircuitIntegrityButtonCommand}"
                            Style="{StaticResource StandardMainWindowButtonStyle}">
                        <Image Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/circuit_icon.png" />
                    </Button>
                    <Button Height="60"
                            Command="{Binding LowSpeedMovementsTestButtonCommand}"
                            Style="{StaticResource StandardMainWindowButtonStyle}">
                        <Image Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/movement_icon.png" />
                    </Button>
                    <Button Height="60"
                            Command="{Binding VerticalAxisCalibrationButtonCommand}"
                            Style="{StaticResource StandardMainWindowButtonStyle}">
                        <Image Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/calibration_icon.png" />
                    </Button>
                    <Button x:Name="OpenVerifyPanelPositionPageButton"
                            Height="60"
                            IsEnabled="False"
                            Style="{StaticResource StandardMainWindowButtonStyle}">
                        <Image Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/gear_icon.png" />
                    </Button>
                    <Button x:Name="OpenVerifyPanelPositionPageButton0"
                            Height="60"
                            IsEnabled="False"
                            Style="{StaticResource StandardMainWindowButtonStyle}">
                        <Image Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/gear_icon.png" />
                    </Button>
                    <Button x:Name="OpenVerifyPanelPositionPageButton1"
                            Height="60"
                            IsEnabled="False"
                            Style="{StaticResource StandardMainWindowButtonStyle}">
                        <Image Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/gear_icon.png" />
                    </Button>
                    <Button x:Name="OpenVerifyPanelPositionPageButton2"
                            Height="60"
                            IsEnabled="False"
                            Style="{StaticResource StandardMainWindowButtonStyle}">
                        <Image Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/gear_icon.png" />
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>
        <ContentControl x:Name="InstallationPageRegionContentControl"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="830"
                        Height="640"
                        Content="{Binding CurrentPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
