<Window x:Class="Ferretto.VW.InstallationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gatesControl="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.GatesControl"
        xmlns:gatesHeightControl="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.GatesHeightControl"
        xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
        xmlns:lowSpeedMovements="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.LowSpeedMovements"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
        xmlns:sensorsState="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.SensorsState"
        xmlns:singleViews="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.SingleViews"
        xmlns:viewsAndViewModels="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels"
        Title="MainWindow"
        Width="1024"
        Height="768"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d">

    <Window.Resources>
        <DataTemplate DataType="{x:Type sensorsState:SSNavigationButtonsViewModel}">
            <sensorsState:SSNavigationButtonsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type sensorsState:SSVerticalAxisViewModel}">
            <sensorsState:SSVerticalAxisView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type sensorsState:SSCradleViewModel}">
            <sensorsState:SSCradleView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type sensorsState:SSBaysViewModel}">
            <sensorsState:SSBaysView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type sensorsState:SSGateViewModel}">
            <sensorsState:SSGateView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type sensorsState:SSVariousInputsViewModel}">
            <sensorsState:SSVariousInputsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type lowSpeedMovements:LSMTGateEngineViewModel}">
            <lowSpeedMovements:LSMTGateEngineView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type lowSpeedMovements:LSMTHorizontalEngineViewModel}">
            <lowSpeedMovements:LSMTHorizontalEngineView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type lowSpeedMovements:LSMTVerticalEngineViewModel}">
            <lowSpeedMovements:LSMTVerticalEngineView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type lowSpeedMovements:LSMTNavigationButtonsViewModel}">
            <lowSpeedMovements:LSMTNavigationButtonsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type singleViews:VerticalAxisCalibrationViewModel}">
            <singleViews:VerticalAxisCalibrationView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type singleViews:ResolutionCalibrationVerticalAxisViewModel}">
            <singleViews:ResolutionCalibrationVerticalAxisView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type singleViews:BeltBurnishingViewModel}">
            <singleViews:BeltBurnishingView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type singleViews:WeightControlViewModel}">
            <singleViews:WeightControlView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type singleViews:CellsPanelsControlViewModel}">
            <singleViews:CellsPanelsControlView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type singleViews:VerticalOffsetCalibrationViewModel}">
            <singleViews:VerticalOffsetCalibrationView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type singleViews:InstallationStateViewModel}">
            <singleViews:InstallationStateView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type singleViews:CellsControlViewModel}">
            <singleViews:CellsControlView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type singleViews:GetLocalIPViewModel}">
            <singleViews:GetLocalIpView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type gatesControl:GatesControlNavigationButtonsViewModel}">
            <gatesControl:GatesControlNavigationButtonsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type gatesControl:Gate1ControlViewModel}">
            <gatesControl:Gate1ControlView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type gatesControl:Gate2ControlViewModel}">
            <gatesControl:Gate2ControlView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type gatesControl:Gate3ControlViewModel}">
            <gatesControl:Gate3ControlView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type gatesHeightControl:Gate1HeightControlViewModel}">
            <gatesHeightControl:Gate1HeightControlView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type gatesHeightControl:Gate2HeightControlViewModel}">
            <gatesHeightControl:Gate2HeightControlView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type gatesHeightControl:Gate3HeightControlViewModel}">
            <gatesHeightControl:Gate3HeightControlView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type gatesHeightControl:GatesHeightControlNavigationButtonsViewModel}">
            <gatesHeightControl:GatesHeightControlNavigationButtonsView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewsAndViewModels:MainWindowNavigationButtonsViewModel}">
            <viewsAndViewModels:MainWindowNavigationButtonsView />
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{DynamicResource VWAPP_BACKGROUND}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Name="upperRow"
                           Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Grid.Column="0"
                Background="{DynamicResource VWAPP_BACKGROUND}"
                BorderThickness="0">
            <Image Margin="35,15,0,0"
                   Source="/Ferretto.VW.CustomControls;Component/Assets/ferrettologo_768x162.jpg"
                   Stretch="Uniform" />
        </Border>
        <Border Grid.Row="0"
                Grid.Column="1"
                Background="{DynamicResource VWAPP_BACKGROUND}"
                BorderThickness="0">
            <StackPanel FlowDirection="RightToLeft"
                        Orientation="Horizontal">
                <ComboBox Name="userComboBox"
                          Width="150"
                          Margin="10,10,2,2"
                          HorizontalContentAlignment="Right"
                          VerticalContentAlignment="Center"
                          FontSize="25"
                          Foreground="{DynamicResource IAPP_MainWindowUserComboBox_Foreground_Normal}"
                          Style="{StaticResource IAPP_MainWindowUserComboBoxTemplate}">
                    <ComboBoxItem Height="{Binding ElementName=userComboBox, Path=ActualHeight}"
                                  Content="{x:Static res:InstallationApp.Installer}"
                                  IsSelected="True"
                                  Style="{StaticResource IAPP_MainWindowUserComboBoxItemStyle}"
                                  Template="{StaticResource IAPP_MainWindowUserComboBoxItemTemplate}" />
                    <ComboBoxItem Height="{Binding ElementName=userComboBox, Path=ActualHeight}"
                                  Content="{x:Static res:InstallationApp.LogOff}">
                        <ComboBoxItem.Style>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Background" Value="{DynamicResource IAPP_MainWindowUserComboBox_Background_Normal}" />
                                <Setter Property="Foreground" Value="{DynamicResource IAPP_MainWindowUserComboBox_Foreground_Normal}" />
                                <Setter Property="FontFamily" Value="{DynamicResource IAPP_BodyFont}" />
                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="HorizontalContentAlignment" Value="Center" />
                                <Setter Property="VerticalContentAlignment" Value="Center" />
                                <EventSetter Event="PreviewMouseDown"
                                             Handler="BackToVWAppButtonMethod" />
                            </Style>
                        </ComboBoxItem.Style>
                    </ComboBoxItem>
                </ComboBox>
                <Image Height="30"
                       Margin="0,10,30,2"
                       Source="/Ferretto.VW.CustomControls;Component/Assets/ic_account_circle_black_48dp.png" />
                <Grid Margin="2,10,2,2"
                      Background="{DynamicResource IAPP_MainWindowMachineStateComboBox_Background_Normal}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ComboBox Name="machineModeComboBox"
                              Grid.Column="1"
                              Width="110"
                              Margin="5"
                              HorizontalContentAlignment="Center"
                              VerticalContentAlignment="Center"
                              FontSize="25"
                              Foreground="{DynamicResource IAPP_MainWindowMachineStateComboBox_Foreground_Normal}"
                              SelectedIndex="{Binding MachineModeSelectionInt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Style="{StaticResource IAPP_MainWindowMachineStateComboBoxStyle}"
                              Template="{StaticResource IAPP_MainWindowMachineStateComboBoxTemplate}">
                        <ComboBoxItem Height="{Binding ElementName=machineModeComboBox, Path=ActualHeight}"
                                      Content="{x:Static res:InstallationApp.Manual}"
                                      IsSelected="True"
                                      Style="{StaticResource IAPP_MainWindowMachineStateComboBoxItemStyle}"
                                      Template="{DynamicResource IAPP_MainWindowMachineStateComboBoxItemTemplate}" />
                        <ComboBoxItem Height="{Binding ElementName=machineModeComboBox, Path=ActualHeight}"
                                      Content="{x:Static res:InstallationApp.Auto}"
                                      Style="{StaticResource IAPP_MainWindowMachineStateComboBoxItemStyle}"
                                      Template="{DynamicResource IAPP_MainWindowMachineStateComboBoxItemTemplate}" />
                    </ComboBox>
                    <custom:CustomControlHighlightableBullet Grid.Column="0"
                                                             Width="30"
                                                             Height="30"
                                                             Margin="5"
                                                             SensorState="{Binding MachineModeSelectionBool, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource IAPP_ViewCustomSensorControlMachineModeStyle}" />
                </Grid>
                <Grid Margin="2,10,2,2"
                      Background="{DynamicResource IAPP_MainWindowMachineStateComboBox_Background_Normal}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <ComboBox Name="machineOnMarchComboBox"
                              Grid.Column="1"
                              Width="110"
                              Margin="5"
                              HorizontalContentAlignment="Center"
                              VerticalContentAlignment="Center"
                              FontSize="25"
                              Foreground="{DynamicResource IAPP_MainWindowMachineStateComboBox_Foreground_Normal}"
                              SelectedIndex="{Binding MachineOnMarchSelectionInt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              Template="{StaticResource IAPP_MainWindowMachineStateComboBoxTemplate}">
                        <ComboBoxItem Height="{Binding ElementName=machineOnMarchComboBox, Path=ActualHeight}"
                                      Content="{x:Static res:InstallationApp.Off}"
                                      IsSelected="True"
                                      Style="{StaticResource IAPP_MainWindowMachineStateComboBoxItemStyle}"
                                      Template="{StaticResource IAPP_MainWindowMachineStateComboBoxItemTemplate}" />
                        <ComboBoxItem Height="{Binding ElementName=machineOnMarchComboBox, Path=ActualHeight}"
                                      Content="{x:Static res:InstallationApp.On}"
                                      Style="{StaticResource IAPP_MainWindowMachineStateComboBoxItemStyle}"
                                      Template="{DynamicResource IAPP_MainWindowMachineStateComboBoxItemTemplate}" />
                    </ComboBox>
                    <custom:CustomControlHighlightableBullet Grid.Column="0"
                                                             Width="30"
                                                             Height="30"
                                                             Margin="5"
                                                             SensorState="{Binding MachineOnMarchSelectionBool, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                             Style="{StaticResource IAPP_ViewCustomSensorControlMachineMarchStyle}" />
                </Grid>
                <Button Height="70"
                        Margin="5,0,0,0"
                        VerticalAlignment="Bottom"
                        VerticalContentAlignment="Bottom"
                        BorderBrush="Transparent"
                        Command="{Binding ChangeSkinButtonCommand}"
                        Content="{DynamicResource IAPP_ImageChangeSkin}" />
            </StackPanel>
        </Border>
        <ContentControl x:Name="InstallationPageRegionContentControl"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="730"
                        Height="610"
                        Content="{Binding ContentRegionCurrentViewModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <ContentControl x:Name="InstallationPageNavigationButtonsRegionContentControl"
                        Grid.Row="1"
                        Grid.Column="0"
                        Width="260"
                        Height="610"
                        Margin="20,10,0,0"
                        VerticalAlignment="Center"
                        Content="{Binding NavigationRegionCurrentViewModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
