<Window x:Class="Ferretto.VW.InstallationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
        Title="MainWindow"
        Width="1024"
        Height="768"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Ferretto.VW.CustomControls;Component/Styles/FontsAndColors.xaml" />
                <ResourceDictionary Source="/Ferretto.VW.CustomControls;Component/Styles/ComboBoxStyles.xaml" />
                <ResourceDictionary Source="/Ferretto.VW.CustomControls;Component/Styles/TextStyles.xaml" />
                <ResourceDictionary Source="/Ferretto.VW.CustomControls;Component/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="/Ferretto.VW.CustomControls;Component/Templates/ComboBoxTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0"
                Grid.Column="0"
                Background="{StaticResource FerrettoLightGray}"
                BorderBrush="{StaticResource FerrettoMediumGray}"
                BorderThickness="2">
            <Image Margin="5"
                   Source="/Ferretto.VW.CustomControls;Component/Assets/ferrettologo_768x162.jpg"
                   Stretch="Uniform" />
        </Border>
        <Border Grid.Row="0"
                Grid.Column="1"
                Background="{StaticResource FerrettoLightGray}"
                BorderBrush="{StaticResource FerrettoMediumGray}"
                BorderThickness="0,2,2,2">
            <StackPanel FlowDirection="RightToLeft"
                        Orientation="Horizontal">
                <ComboBox Width="235"
                          Margin="5"
                          IsEditable="False"
                          Style="{StaticResource StandardComboBoxStyle}"
                          Template="{DynamicResource StandardComboBoxTemplate}">
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Installer}"
                                  IsSelected="True"
                                  Style="{StaticResource StandardComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.LogOff}">
                        <ComboBoxItem.Style>
                            <Style TargetType="ComboBoxItem">
                                <EventSetter Event="ComboBoxItem.PreviewMouseDown"
                                             Handler="BackToVWAppButtonMethod" />
                                <Setter Property="Background" Value="{StaticResource FerrettoDarkGray}" />
                                <Setter Property="Foreground" Value="{StaticResource FerrettoPureWhite}" />
                                <Setter Property="FontFamily" Value="{StaticResource HelveticaNeue-LightCond}" />
                                <Setter Property="FontSize" Value="20" />
                            </Style>
                        </ComboBoxItem.Style>
                    </ComboBoxItem>
                </ComboBox>
                <ComboBox Width="235"
                          Margin="5"
                          IsEditable="False"
                          Style="{StaticResource StandardComboBoxStyle}"
                          Template="{DynamicResource StandardComboBoxTemplate}">
                    <ComboBoxItem Content="{x:Static res:InstallationApp.On}"
                                  Style="{StaticResource StandardComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Off}"
                                  IsSelected="True"
                                  Style="{StaticResource StandardComboBoxItemStyle}" />
                </ComboBox>
                <ComboBox Width="235"
                          Margin="5"
                          IsEditable="False"
                          Style="{StaticResource StandardComboBoxStyle}"
                          Template="{DynamicResource StandardComboBoxTemplate}">
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Manual}"
                                  IsSelected="True"
                                  Style="{StaticResource StandardComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Auto}"
                                  Style="{StaticResource StandardComboBoxItemStyle}" />
                    <ComboBoxItem Content="{x:Static res:InstallationApp.Error}"
                                  Style="{StaticResource StandardComboBoxItemStyle}" />
                </ComboBox>
            </StackPanel>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="0"
                Background="{StaticResource FerrettoLightGray}"
                BorderBrush="{StaticResource FerrettoMediumGray}"
                BorderThickness="2,0,2,2">
            <ScrollViewer VerticalScrollBarVisibility="Hidden">
                <StackPanel>
                    <Button Height="60"
                            Click="OpenVerifyCircuitIntegrityViewButtonMethod"
                            Content="{x:Static res:InstallationApp.VerifyCircuitIntegrity}"
                            Style="{StaticResource StandardButtonStyle}" />
                    <Button Height="60"
                            Click="OpenLowSpeedMovementsTestViewButtonMethod"
                            Content="{x:Static res:InstallationApp.LowSpeedMovementsTest}"
                            Style="{StaticResource StandardButtonStyle}" />
                    <Button Height="60"
                            Click="OpenVerticalAxisCalibrationViewButtonMethod"
                            Content="{x:Static res:InstallationApp.VerticalAxisCalibration}"
                            Style="{StaticResource StandardButtonStyle}" />
                    <Button x:Name="OpenVerifyPanelPositionPageButton"
                            Height="60"
                            Content="{x:Static res:InstallationApp.VerifyPanelPosition}"
                            IsEnabled="False"
                            Style="{StaticResource StandardButtonStyle}" />
                    <Button x:Name="OpenBelBurnishingPageButton"
                            Height="60"
                            Content="{x:Static res:InstallationApp.BeltBurnishing}"
                            IsEnabled="False"
                            Style="{StaticResource StandardButtonStyle}" />
                    <Button x:Name="OpenGateSetUpPageButton"
                            Height="60"
                            Content="{x:Static res:InstallationApp.GateSetUp}"
                            IsEnabled="False"
                            Style="{StaticResource StandardButtonStyle}" />
                    <Button x:Name="OpenVerifyWeightControllerPageButton"
                            Height="60"
                            Content="{x:Static res:InstallationApp.VerifyWeightController}"
                            IsEnabled="False"
                            Style="{StaticResource StandardButtonStyle}" />
                </StackPanel>
            </ScrollViewer>
        </Border>
        <ContentControl x:Name="InstallationPageRegionContentControl"
                        Grid.Row="1"
                        Grid.Column="1"
                        Width="730"
                        Height="610" />
    </Grid>
</Window>
