<Window x:Class="Ferretto.VW.InstallationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:gatesControl="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.GatesControl"
        xmlns:gatesHeightControl="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.GatesHeightControl"
        xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
        xmlns:lowSpeedMovements="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.LowSpeedMovements"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
        xmlns:sensorsState="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.SensorsState"
        xmlns:singleViews="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.SingleViews"
        xmlns:viewsAndViewModels="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels"
        Title="MainWindow"
        Width="1024"
        Height="768"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">

    <Window.Resources>
        <ResourceDictionary Source="Resources/Views.xaml" />
    </Window.Resources>

    <Grid Background="{DynamicResource VWAPP_BACKGROUND}">
        <Grid.RowDefinitions>
            <RowDefinition Name="upperRow"
                           Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Background="{DynamicResource VWAPP_BACKGROUND}"
                    BorderThickness="0">
                <Image Margin="5,10,0,0"
                       Source="{DynamicResource Ferretto_Logo}"
                       Stretch="Uniform" />
            </Border>
            <Border Grid.Column="1"
                    Background="{DynamicResource VWAPP_BACKGROUND}"
                    BorderThickness="0">
                <StackPanel FlowDirection="RightToLeft"
                            Orientation="Horizontal">
                    <ComboBox Name="userComboBox"
                              Width="150"
                              Margin="10,15,2,5"
                              HorizontalContentAlignment="Right"
                              VerticalContentAlignment="Center"
                              FontSize="25"
                              Foreground="{DynamicResource VWAPP_MainWindowUserComboBox_Foreground_Normal}"
                              Style="{StaticResource IAPP_MainWindowUserComboBoxTemplate}">
                        <ComboBoxItem Height="{Binding ElementName=userComboBox, Path=ActualHeight}"
                                      Content="{x:Static res:InstallationApp.Installer}"
                                      IsSelected="True"
                                      Style="{StaticResource IAPP_MainWindowUserComboBoxItemStyle}"
                                      Template="{StaticResource IAPP_MainWindowUserComboBoxItemTemplate}" />
                        <ComboBoxItem Height="{Binding ElementName=userComboBox, Path=ActualHeight}"
                                      Content="{x:Static res:InstallationApp.LogOff}">
                            <ComboBoxItem.Style>
                                <Style TargetType="ComboBoxItem">
                                    <Setter Property="Background" Value="{DynamicResource VWAPP_MainWindowUserComboBox_Background_Normal}" />
                                    <Setter Property="Foreground" Value="{DynamicResource VWAPP_MainWindowUserComboBox_Foreground_Normal}" />
                                    <Setter Property="FontFamily" Value="{DynamicResource VWAPP_BodyFont}" />
                                    <Setter Property="FontSize" Value="20" />
                                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                                    <Setter Property="VerticalContentAlignment" Value="Center" />
                                    <EventSetter Event="PreviewMouseDown"
                                                 Handler="BackToVWAppButtonMethod" />
                                </Style>
                            </ComboBoxItem.Style>
                        </ComboBoxItem>
                    </ComboBox>
                    <Image Height="30"
                           Margin="0,10,30,2"
                           Source="/Ferretto.VW.CustomControls;Component/Assets/ic_account_circle_black_48dp.png" />
                    <custom:CustomMachineModeToggleButton CustomCommand="{Binding MachineModeCustomCommand}"
                                                          MachineModeState="{Binding MachineModeSelectionBool, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                          Style="{StaticResource VWAPP_CustomMachineModeToggleButtonStyle}" />
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <ContentControl x:Name="InstallationPageRegionContentControl"
                            Grid.Column="1"
                            Width="730"
                            Height="610"
                            Content="{Binding ContentRegionCurrentViewModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <ContentControl x:Name="InstallationPageNavigationButtonsRegionContentControl"
                            Grid.Column="0"
                            Width="210"
                            Height="610"
                            VerticalAlignment="Center"
                            Content="{Binding NavigationRegionCurrentViewModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </Grid>
</Window>
