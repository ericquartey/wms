<UserControl x:Class="Ferretto.VW.InstallationApp.HelpWindows.HelpLowSpeedMovements"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.HelpWindows"            
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls" 
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             mc:Ignorable="d">
    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">

        <Image Width="200" Height="60"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,20,0,0"
                    Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpLSMTTitle}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,50,0,0"
                    Width="670" Height="50"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpLSMTDescription}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,140,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpLSMTActualPosition}" />
        
        <Controls:CustomLabelTextBlockControl  VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,140,0,0"
                                               Width="180"
                                               ContentText="1235,2"
                                               LabelText="{x:Static res:InstallationApp.ActualPosition}"  />
        
        <Button     x:Name="VerticalEngineUp"
                    VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,210,0,0"
                    Content="{x:Static res:InstallationApp.Up}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}"  />
        
        <Button     x:Name="VerticalEngineDown"
                    VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,280,0,0"
                    Content="{x:Static res:InstallationApp.Down}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}"  />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,210,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpLSMTMoveUp}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,280,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpLSMTMoveDown}" />

    </Grid>
</UserControl>
