<myType:BaseView x:Class="Ferretto.VW.InstallationApp.ViewsAndViewModels.MainWindowNavigationButtonsView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
                 xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
                 mc:Ignorable="d">
    <Grid Height="610">
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="45" />
            <RowDefinition Height="500" />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <RepeatButton Grid.Row="1"
                      Margin="15,0,0,0"
                      Click="ScrollUpButtonClick"
                      Content="UP"
                      Style="{StaticResource InstallationAppNavigationRepeatButtonStyle}" />
        <RepeatButton Grid.Row="3"
                      Height="38"
                      Margin="15,0,0,0"
                      Click="ScrollDownButtonClick"
                      Content="DOWN"
                      Style="{StaticResource InstallationAppNavigationRepeatButtonStyle}" />

        <ScrollViewer Name="NavigationButtonScrollViewer"
                      Grid.Row="2"
                      VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <Button Command="{Binding DataContext.InstallationStateButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.InstallationState}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Command="{Binding DataContext.SSNavigationButtonsButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.SensorsState}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Command="{Binding DataContext.LowSpeedMovementsTestButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.LowSpeedMovementsTest}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Command="{Binding DataContext.GatesControlButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.GateControl}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Command="{Binding DataContext.VerticalAxisCalibrationButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.OriginVerticalAxis}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Command="{Binding DataContext.ResolutionCalibrationVerticalAxisButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.ResolutionCalibration}"
                        IsEnabled="{Binding IsSetYResolutionButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Command="{Binding DataContext.BeltBurnishingButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.BeltBurnishing}"
                        IsEnabled="{Binding IsBeltBurnishingButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Command="{Binding DataContext.GateHeightControlButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.GateHeightControl}"
                        IsEnabled="{Binding IsGateHeightControlButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Content="{x:Static res:InstallationApp.GateSetUp}"
                        IsEnabled="False"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Command="{Binding DataContext.WeightControlButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.WeightControl}"
                        IsEnabled="{Binding IsWeightControlButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Command="{Binding DataContext.VerticalOffsetCalibrationButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.VerticalOffsetCalibration}"
                        IsEnabled="{Binding IsVerticalOffsetCalibrationButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
                <Button Command="{Binding DataContext.CellsPanelControlButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.CellsPanelControl}"
                        IsEnabled="{Binding IsCellsPanelControlButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource InstallationAppNavigationButtonStyle}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</myType:BaseView>
