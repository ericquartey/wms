<myType:BaseView x:Class="Ferretto.VW.InstallationApp.ViewsAndViewModels.MainWindowNavigationButtonsView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
                 xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
                 mc:Ignorable="d">
    <Border Background="{StaticResource FerrettoPureWhite}"
            BorderThickness="0">
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <Rectangle Height="20" />
                <Button Height="60"
                        Margin="15,0,0,5"
                        Command="{Binding DataContext.SSNavigationButtonsButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.SensorsState}"
                        Style="{StaticResource StandardMainWindowButtonStyle}" />
                <Button Height="60"
                        Margin="15,0,0,5"
                        Command="{Binding DataContext.LowSpeedMovementsTestButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.LowSpeedMovementsTest}"
                        Style="{StaticResource StandardMainWindowButtonStyle}" />
                <Button Height="60"
                        Margin="15,0,0,5"
                        Command="{Binding DataContext.VerticalAxisCalibrationButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:InstallationApp.VerticalAxisCalibration}"
                        Style="{StaticResource StandardMainWindowButtonStyle}" />
                <Button x:Name="OpenVerifyPanelPositionPageButton"
                        Height="60"
                        Margin="15,0,0,5"
                        Content="{x:Static res:InstallationApp.ResolutionCalibration}"
                        IsEnabled="{Binding IsSetYResolutionButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource StandardMainWindowButtonStyle}" />
                <Button x:Name="OpenBelBurnishingPageButton"
                        Height="60"
                        Margin="15,0,0,5"
                        Content="{x:Static res:InstallationApp.BeltBurnishing}"
                        IsEnabled="{Binding IsBeltBurnishingButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource StandardMainWindowButtonStyle}" />
                <Button x:Name="OpenGateSetUpPageButton"
                        Height="60"
                        Margin="15,0,0,5"
                        Content="{x:Static res:InstallationApp.GateSetUp}"
                        IsEnabled="False"
                        Style="{StaticResource StandardMainWindowButtonStyle}" />
                <Button x:Name="OpenVerifyWeightControllerPageButton"
                        Height="60"
                        Margin="15,0,0,5"
                        Content="{x:Static res:InstallationApp.VerifyWeightController}"
                        IsEnabled="False"
                        Style="{StaticResource StandardMainWindowButtonStyle}" />
            </StackPanel>
        </ScrollViewer>
    </Border>
</myType:BaseView>
