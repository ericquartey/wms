<myType:BaseView x:Class="Ferretto.VW.InstallationApp.ViewsAndViewModels.LowSpeedMovements.LSMTNavigationButtonsView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.LowSpeedMovements"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
                 xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
                 mc:Ignorable="d">
    <Border Height="630"
            Background="{StaticResource FerrettoPureWhite}">
        <StackPanel>
            <Rectangle Height="20" />
            <Button Height="60"
                    Margin="15,0,0,5"
                    Command="{Binding DataContext.LSMTVerticalEngineButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                    Content="{x:Static res:InstallationApp.LSMTVerticalEngineButton}"
                    Style="{StaticResource InstallationAppNavigationButtonStyle}" />
            <Button Height="60"
                    Margin="15,0,0,5"
                    Command="{Binding DataContext.LSMTHorizontalEngineButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                    Content="{x:Static res:InstallationApp.LSMTHorizontalEngineButton}"
                    Style="{StaticResource InstallationAppNavigationButtonStyle}" />
            <Button Height="60"
                    Margin="15,0,0,5"
                    Command="{Binding DataContext.LSMTGateEngineButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                    Content="{x:Static res:InstallationApp.LSMTGateEngineButton}"
                    Style="{StaticResource InstallationAppNavigationButtonStyle}" />
            <Rectangle Height="320" />
            <Button Height="60"
                    Margin="15,0,0,5"
                    Command="{Binding DataContext.BackToMainWindowNavigationButtonsViewButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                    Content="{x:Static res:General.Back}"
                    Style="{StaticResource InstallationAppNavigationButtonStyle}" />
        </StackPanel>
    </Border>
</myType:BaseView>
