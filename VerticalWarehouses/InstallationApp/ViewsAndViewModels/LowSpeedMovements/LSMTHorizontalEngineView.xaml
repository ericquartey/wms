<myType:BaseView x:Class="Ferretto.VW.InstallationApp.LSMTHorizontalEngineView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
                 xmlns:prism="http://prismlibrary.com/"
                 xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
                 prism:ViewModelLocator.AutoWireViewModel="True"
                 mc:Ignorable="d">
    <Grid Width="774"
          Height="608">

        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,30,0,0"
                     Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                     Text="{x:Static res:InstallationApp.LSMTHorizontalEngineTitle}"  />

        <custom:CustomLabelTextBlockControl     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,160,0,0"
                                                ContentText="980,8"
                                                LabelText="{x:Static res:InstallationApp.ActualPosition}"  />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="440,160,0,0"
                    Content="{x:Static res:InstallationApp.Forward}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}"  />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="440,280,0,0"
                    Content="{x:Static res:InstallationApp.Backward}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
    </Grid>
</local:BaseView>
