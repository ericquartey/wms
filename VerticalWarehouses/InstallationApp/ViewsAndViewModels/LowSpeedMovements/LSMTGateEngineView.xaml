<myType:BaseView x:Class="Ferretto.VW.InstallationApp.LSMTGateEngineView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
                 xmlns:prism="http://prismlibrary.com/"
                 xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
                 prism:ViewModelLocator.AutoWireViewModel="True"
                 mc:Ignorable="d">
    <Grid Width="774"
          Height="608">
        
        <TextBlock     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="180,30,0,0"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{x:Static res:InstallationApp.LSMTGateEngineTitle}"  />

        <custom:CustomLabelTextBlockControl   Name="ActualPositionLabel"
                                              HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,160,0,0"       
                                              ContentText="Aperta"
                                              LabelText="{x:Static res:InstallationApp.ActualPosition}" />
        <Button    Name="GateEngineUp"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="450,160,0,0"
                   Content="{x:Static res:InstallationApp.Up}"
                   Template="{StaticResource VWAPP_ActionButton_ControlTemplate}"  />
        
        <Button    Name="GateEngineDown"
                   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="450,280,0,0"
                   Content="{x:Static res:InstallationApp.Down}"
                   Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
    </Grid>
</myType:BaseView>
