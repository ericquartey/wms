<UserControl x:Class="Ferretto.VW.InstallationApp.CellsControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <Grid    Width="1024"
             Height="608">
        <TextBlock Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.CellsControl}" Margin="163,10,0,562" />
        <custom:CustomLabelTextBlockControl ContentText="{Binding CurrentCell, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.CurrentCell}" Margin="163,228,581,310" />
        <custom:CustomLabelTextBlockControl ContentText="{Binding CellHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.CellHeight}" Margin="163,158,581,380" />
        <custom:CustomLabelTextBlockControl Margin="163,375,581,163"
                                                ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.CurrentHeight}" />
        <custom:CustomInputFieldControlFocusable Margin="163,303,581,233"
                                                 Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
                                                     InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     LabelText="{x:Static res:InstallationApp.StepValue}" />
        <custom:CustomLabelTextBlockControl Margin="163,450,581,93"
                                                ContentText="{Binding PanelCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.CellCorrection}" />
        <Button Margin="645,158,0,380"
                    HorizontalAlignment="Left"
                    Content="{x:Static res:InstallationApp.SetPosition}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        <Button Margin="645,233,0,303"
                    HorizontalAlignment="Left"
                    Content="{x:Static res:InstallationApp.StepUp}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        <Button Margin="645,317,0,226"
                    HorizontalAlignment="Left"
                    Content="{x:Static res:InstallationApp.StepDown}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        <Button Margin="645,402,0,141"
                    HorizontalAlignment="Left"
                    Content="{x:Static res:InstallationApp.Correct}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

    </Grid>
</UserControl>
