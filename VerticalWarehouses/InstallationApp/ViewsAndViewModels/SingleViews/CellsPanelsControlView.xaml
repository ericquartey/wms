<UserControl x:Class="Ferretto.VW.InstallationApp.ViewsAndViewModels.SingleViews.CellsPanelsControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.SingleViews"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             d:DesignHeight="610"
             d:DesignWidth="730"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="530" />
        </Grid.RowDefinitions>
        <Label Grid.Column="1"
               Content="{x:Static res:InstallationApp.PanelsControl}"
               Style="{StaticResource InstallationViewsTitleTextStyle}" />
        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="40" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="40" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ComboBox Grid.Row="1"
                      Margin="0,0,100,0"
                      Background="Transparent">
                <ComboBoxItem Content="{x:Static res:General.Back}"
                              IsSelected="True" />
                <ComboBoxItem Content="{x:Static res:General.Front}" />
            </ComboBox>
            <custom:CustomLabelTextBlockControl Grid.Row="2"
                                                Margin="0,0,100,0"
                                                ContentText="{Binding TotalPanels, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.TotalPanels}" />
            <custom:CustomLabelTextBlockControl Grid.Row="3"
                                                Margin="0,0,100,0"
                                                ContentText="{Binding CurrentPanel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.CurrentPanel}" />
            <custom:CustomLabelTextBlockControl Grid.Row="2"
                                                Grid.Column="2"
                                                ContentText="{Binding CurrentCell, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.CurrentCell}" />
            <custom:CustomLabelTextBlockControl Grid.Row="3"
                                                Grid.Column="2"
                                                ContentText="{Binding CellHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.CellHeight}" />
            <custom:CustomLabelTextBlockControl Grid.Row="6"
                                                Margin="0,0,100,0"
                                                ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.CurrentHeight}" />
            <custom:CustomInputFieldControl Grid.Row="5"
                                            Margin="0,0,100,0"
                                            InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:InstallationApp.StepValue}" />
            <custom:CustomLabelTextBlockControl Grid.Row="7"
                                                Margin="0,0,100,0"
                                                ContentText="{Binding PanelCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.PanelCorrection}" />
            <Button Grid.Row="4"
                    HorizontalAlignment="Left"
                    Content="{x:Static res:General.Next}"
                    Style="{StaticResource InstallationAppViewsButtonStyle}" />
            <Button Grid.Row="4"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Content="{x:Static res:InstallationApp.SetPosition}"
                    Style="{StaticResource InstallationAppViewsButtonStyle}" />
            <Button Grid.Row="5"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Content="{x:Static res:InstallationApp.StepUp}"
                    Style="{StaticResource InstallationAppViewsButtonStyle}" />
            <Button Grid.Row="6"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Content="{x:Static res:InstallationApp.StepDown}"
                    Style="{StaticResource InstallationAppViewsButtonStyle}" />
            <Button Grid.Row="7"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Content="{x:Static res:InstallationApp.Correct}"
                    Style="{StaticResource InstallationAppViewsButtonStyle}" />

        </Grid>
    </Grid>
</UserControl>
