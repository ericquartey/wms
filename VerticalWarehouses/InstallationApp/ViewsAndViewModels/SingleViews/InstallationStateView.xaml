<UserControl x:Class="Ferretto.VW.InstallationApp.ViewsAndViewModels.SingleViews.InstallationStateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.SingleViews"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             Width="730"
             Height="610"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="530" />
        </Grid.RowDefinitions>
        <Label Grid.Column="1"
               Content="{x:Static res:InstallationApp.InstallationState}"
               Style="{StaticResource InstallationViewsTitleTextStyle}" />
        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <custom:CustomSensorControl Grid.Row="0"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.VerticalAxisHomedDone}" />
            <custom:CustomSensorControl Grid.Row="1"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.HorizontalAxisHomedDone}" />
            <custom:CustomSensorControl Grid.Row="2"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.VerticalResolutionDone}" />
            <custom:CustomSensorControl Grid.Row="3"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.BeltBurnishingDone}" />
            <custom:CustomSensorControl Grid.Row="4"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.Gate1Done}" />
            <custom:CustomSensorControl Grid.Row="5"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.Gate2Done}" />
            <custom:CustomSensorControl Grid.Row="6"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.Gate3Done}" />
            <custom:CustomSensorControl Grid.Row="7"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.Shape1Done}" />
            <custom:CustomSensorControl Grid.Row="8"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.Shape2Done}" />
            <custom:CustomSensorControl Grid.Row="9"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.Shape3Done}" />
            <custom:CustomSensorControl Grid.Row="10"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.Laser1Done}" />
            <custom:CustomSensorControl Grid.Row="11"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.Laser2Done}" />
            <custom:CustomSensorControl Grid.Row="12"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.Laser3Done}" />
            <custom:CustomSensorControl Grid.Row="13"
                                        BulletColor="{StaticResource FerrettoGreen}"
                                        LabelText="{x:Static res:InstallationApp.MachineDone}" />
        </Grid>
    </Grid>
</UserControl>
