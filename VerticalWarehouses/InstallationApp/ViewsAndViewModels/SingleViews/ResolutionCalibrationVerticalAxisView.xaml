<UserControl x:Class="Ferretto.VW.InstallationApp.ViewsAndViewModels.SingleViews.ResolutionCalibrationVerticalAxisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.SingleViews"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             Width="730"
             Height="610"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Column="1"
               Content="{x:Static res:InstallationApp.VerticalResolutionCalibration}"
               Style="{StaticResource InstallationViewsTitleTextStyle}" />
        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <custom:CustomInputFieldControlFocusable Grid.Row="0"
                                                     Grid.Column="0"
                                                     BorderColor="{Binding Input1BorderColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     InputScope="Number"
                                                     InputText="{Binding DesiredInitialPosition, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                     LabelText="{x:Static res:InstallationApp.DesiredInitialPosition}" />
            <custom:CustomInputFieldControlFocusable Grid.Row="1"
                                                     Grid.Column="0"
                                                     BorderColor="{Binding Input2BorderColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     InputScope="Number"
                                                     InputText="{Binding RepositionLenght, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                     IsEnabled="{Binding IsRepositionTextInputActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     LabelText="{x:Static res:InstallationApp.DesiredMovement}" />
            <custom:CustomInputFieldControlFocusable Grid.Row="2"
                                                     Grid.Column="0"
                                                     BorderColor="{Binding Input3BorderColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     InputScope="Number"
                                                     InputText="{Binding MesuredLenght, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                     IsEnabled="{Binding IsMesuredLenghtTextInputActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     LabelText="{x:Static res:InstallationApp.MesuredMovement}" />
            <custom:CustomLabelTextBlockControl Grid.Row="3"
                                                Grid.Column="0"
                                                ContentText="{Binding CurrentResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.CurrentResolution}" />
            <custom:CustomInputFieldControl Grid.Row="4"
                                            Grid.Column="0"
                                            InputScope="Number"
                                            InputText="{Binding NewResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:InstallationApp.NewResolution}" />
            <custom:CustomLabelTextBlockControl Grid.Row="3"
                                                Grid.Column="2"
                                                ContentText="{Binding NoteString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.Output}" />
            <Button Grid.Row="0"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Command="{Binding SetPositionButtonCommand}"
                    Content="{x:Static res:InstallationApp.SetPosition}"
                    IsEnabled="{Binding IsSetPositionButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource InstallationAppViewsButtonStyle}" />
            <Button Grid.Row="1"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Command="{Binding MoveButtonCommand}"
                    Content="{x:Static res:InstallationApp.Move}"
                    IsEnabled="{Binding IsMoveButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource InstallationAppViewsButtonStyle}" />
            <Button Grid.Row="5"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Command="{Binding CancelButtonCommand}"
                    Content="{x:Static res:General.Cancel}"
                    Style="{StaticResource InstallationAppViewsButtonStyle}" />
            <Button Grid.Row="5"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Command="{Binding AcceptButtonCommand}"
                    Content="{x:Static res:General.Accept}"
                    IsEnabled="{Binding IsAcceptButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Style="{StaticResource InstallationAppViewsButtonStyle}" />
            <Button Grid.Row="6"
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Command="{Binding DataContext.BackToMainWindowNavigationButtonsViewButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                    Content="{x:Static res:General.Back}"
                    Style="{StaticResource InstallationAppViewsButtonStyle}" />
        </Grid>
    </Grid>
</UserControl>
