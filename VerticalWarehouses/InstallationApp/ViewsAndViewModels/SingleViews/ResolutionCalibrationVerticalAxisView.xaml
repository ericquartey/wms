<UserControl x:Class="Ferretto.VW.InstallationApp.ResolutionCalibrationVerticalAxisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             Width="1024"
             Height="620">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="120" />
            <RowDefinition Height="330" />
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="1"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.VerticalResolutionCalibration}" />
        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="1"
                  Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <custom:CustomInputFieldControlFocusable Grid.Row="0"
                                                         Highlighted="False"
                                                         InputScope="Number"
                                                         InputText="{Binding DesiredInitialPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         LabelText="{x:Static res:InstallationApp.DesiredInitialPosition}"
                                                         Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />
                <custom:CustomInputFieldControlFocusable Grid.Row="1"
                                                         Highlighted="{Binding IsMesuredInitialPositionHighlighted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         InputScope="Number"
                                                         InputText="{Binding MesuredInitialPosition, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                         IsEnabled="{Binding IsMesuredInitialPositionTextInputActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         LabelText="{x:Static res:InstallationApp.MesuredInitialPosition}"
                                                         Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />
            </Grid>
            <Grid Grid.Row="2"
                  Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <custom:CustomInputFieldControlFocusable Grid.Row="0"
                                                         Grid.Column="0"
                                                         Highlighted="{Binding Input2Highlighted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         InputScope="Number"
                                                         InputText="{Binding RepositionLenght, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         LabelText="{x:Static res:InstallationApp.DesiredMovement}"
                                                         Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />
                <custom:CustomInputFieldControlFocusable Grid.Row="1"
                                                         Grid.Column="0"
                                                         Highlighted="{Binding IsMesuredMovementHighlighted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         InputScope="Number"
                                                         InputText="{Binding MesuredLenght, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                         IsEnabled="{Binding IsMesuredLenghtTextInputActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         LabelText="{x:Static res:InstallationApp.MesuredMovement}"
                                                         Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />
            </Grid>
            <Grid Grid.Row="3"
                  Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <custom:CustomLabelTextBlockControl Grid.Row="0"
                                                    Grid.Column="0"
                                                    ContentText="{Binding CurrentResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    LabelText="{x:Static res:InstallationApp.CurrentResolution}" />
                <custom:CustomLabelTextBlockControl Grid.Row="1"
                                                    Grid.Column="0"
                                                    ContentText="{Binding NewResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                    LabelText="{x:Static res:InstallationApp.NewResolution}" />
            </Grid>
            <Button Grid.Row="1"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Command="{Binding SetPositionButtonCommand}"
                    Content="{x:Static res:InstallationApp.SetPosition}"
                    IsEnabled="{Binding IsSetPositionButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
            <Button Grid.Row="2"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Command="{Binding MoveButtonCommand}"
                    Content="{x:Static res:InstallationApp.Move}"
                    IsEnabled="{Binding IsMoveButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

            <Button Grid.Row="3"
                    Grid.Column="2"
                    HorizontalAlignment="Left"
                    Command="{Binding AcceptButtonCommand}"
                    Content="{x:Static res:General.Accept}"
                    IsEnabled="{Binding IsAcceptButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        </Grid>
        <custom:CustomLabelTextBlockControl Grid.Row="2"
                                            Grid.Column="1"
                                            ContentText="{Binding NoteString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:InstallationApp.Output}" />
    </Grid>
</UserControl>
