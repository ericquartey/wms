<UserControl x:Class="Ferretto.VW.InstallationApp.ResolutionCalibrationVerticalAxisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources">
    <Grid Width="1024"
          Height="608">

        <TextBlock    HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="140,30,0,0" 
                      Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                      Text="{x:Static res:InstallationApp.VerticalResolutionCalibration}" />

        <custom:CustomInputFieldControlFocusable         HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="420,119,0,0"
                                                         Highlighted="{Binding IsMesuredMovementHighlighted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         InputScope="Number"
                                                         InputText="{Binding MesuredLenght, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                         IsEnabled="{Binding IsMesuredLenghtTextInputActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         LabelText="{x:Static res:InstallationApp.MesuredMovement}"
                                                         Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"  />

        <custom:CustomInputFieldControlFocusable         HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="140,119,0,0" 
                                                         Highlighted="False"
                                                         InputScope="Number"
                                                         InputText="{Binding DesiredInitialPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         LabelText="{x:Static res:InstallationApp.DesiredInitialPosition}"
                                                         Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

        <custom:CustomInputFieldControlFocusable         HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="140,394,0,0"
                                                         Highlighted="{Binding IsMesuredInitialPositionHighlighted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         InputScope="Number"
                                                         InputText="{Binding MesuredInitialPosition, Mode=TwoWay, UpdateSourceTrigger=Explicit}"
                                                         IsEnabled="{Binding IsMesuredInitialPositionTextInputActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                         LabelText="{x:Static res:InstallationApp.RequestedFinalPosition}"
                                                         Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"  />

        <custom:CustomLabelTextBlockControl   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="420,324,0,0" 
                                              ContentText="{Binding CurrentResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static res:InstallationApp.CurrentResolution}"/>

        <custom:CustomLabelTextBlockControl   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="420,394,0,0"
                                              ContentText="{Binding NewResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static res:InstallationApp.NewResolution}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,199,0,0"
                    Command="{Binding SetPositionButtonCommand}"
                    Content="{x:Static res:InstallationApp.StartResolutionProcedure}"
                    IsEnabled="{Binding IsSetPositionButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="140,474,0,0"
                    Command="{Binding MoveButtonCommand}"
                    Content="{x:Static res:InstallationApp.Move}"
                    IsEnabled="{Binding IsMoveButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="420,474,0,0"
                    Command="{Binding AcceptButtonCommand}"
                    Content="{x:Static res:General.Accept}"
                    IsEnabled="{Binding IsAcceptButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="700,375,0,0"
                    Command="{Binding SetPositionButtonCommand}"
                    Content="{x:Static res:InstallationApp.GoToInitialPosition}"
                    IsEnabled="{Binding IsSetPositionButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="700,474,0,0"
                    Command="{Binding SetPositionButtonCommand}"
                    Content="{x:Static res:InstallationApp.CloseProcedure}"
                    IsEnabled="{Binding IsSetPositionButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

    </Grid>
</UserControl>
