<UserControl x:Class="Ferretto.VW.InstallationApp.ViewsAndViewModels.SingleViews.ResolutionCalibrationVerticalAxisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.SingleViews"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             d:DesignHeight="610"
             d:DesignWidth="730"
             mc:Ignorable="d">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Column="1"
                   Content="{x:Static res:InstallationApp.OriginVerticalAxis}"
                   Style="{StaticResource InstallationViewsTitleTextStyle}" />
            <Grid Grid.Row="1"
                  Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="300" />
                </Grid.ColumnDefinitions>
                <custom:CustomInputFieldControl Grid.Row="0"
                                                Grid.Column="0"
                                                InputText=""
                                                LabelText="{x:Static res:InstallationApp.ActualPosition}" />
                <custom:CustomInputFieldControl Grid.Row="1"
                                                Grid.Column="0"
                                                InputText=""
                                                LabelText="{x:Static res:InstallationApp.RepositionLenght}" />
                <custom:CustomInputFieldControl Grid.Row="2"
                                                Grid.Column="0"
                                                InputText=""
                                                LabelText="{x:Static res:InstallationApp.MesuredLenght}" />
                <custom:CustomInputFieldControl Grid.Row="3"
                                                Grid.Column="0"
                                                InputText=""
                                                LabelText="{x:Static res:InstallationApp.ActualResolution}" />
                <custom:CustomInputFieldControl Grid.Row="4"
                                                Grid.Column="0"
                                                InputText=""
                                                LabelText="{x:Static res:InstallationApp.NewResolution}" />
                <custom:CustomLabelTextBlockControl Grid.Row="3"
                                                    Grid.Column="2"
                                                    ContentText="{x:Static res:InstallationApp.TheoricResolution}"
                                                    LabelText="{x:Static res:InstallationApp.Output}" />
                <Button Grid.Row="0"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        Content="{x:Static res:InstallationApp.SetPosition}"
                        Style="{StaticResource InstallationAppViewsButtonStyle}" />
                <Button Grid.Row="1"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        Content="{x:Static res:InstallationApp.Move}"
                        Style="{StaticResource InstallationAppViewsButtonStyle}" />
                <Button Grid.Row="5"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Content="{x:Static res:General.Cancel}"
                        Style="{StaticResource InstallationAppViewsButtonStyle}" />
                <Button Grid.Row="5"
                        Grid.Column="2"
                        HorizontalAlignment="Left"
                        Content="{x:Static res:General.Accept}"
                        Style="{StaticResource InstallationAppViewsButtonStyle}" />
                <Button Grid.Row="6"
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Content="{x:Static res:General.Back}"
                        Style="{StaticResource InstallationAppViewsButtonStyle}" />
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>
