<UserControl x:Class="Ferretto.VW.InstallationApp.BeltBurnishingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <Grid              Width="1024"
             Height="608">
        <TextBlock Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.BeltBurnishing}" Margin="160,7,0,565" />
        <custom:CustomLabelTextBlockControl Margin="160,445,544,0"
                                                ContentText="4500"
                                                LabelText="{x:Static res:InstallationApp.UpperBound}" Height="85" VerticalAlignment="Top" />
        <custom:CustomLabelTextBlockControl Margin="160,355,544,168"
                                                ContentText="4500"
                                                LabelText="{x:Static res:InstallationApp.LowerBound}" />
        <custom:CustomLabelTextBlockControl
                                                Margin="160,265,544,258"
                                                ContentText="4500"
                                                LabelText="{x:Static res:InstallationApp.CurrentPosition}" />
        <custom:CustomLabelTextBlockControl
                                                Margin="160,175,544,348"
                                                ContentText="4500"
                                                LabelText="{x:Static res:InstallationApp.CompletedCicles}" />
        <custom:CustomInputFieldControlFocusable Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
                                                     Margin="160,85,544,438"
                                                     LabelText="{x:Static res:InstallationApp.RequiredCicles}" />
        <Button Content="{x:Static res:InstallationApp.Start}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" Margin="240,530,620,10" />
        <Button
                    Content="{x:Static res:InstallationApp.Stop}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" Margin="691,530,169,10" />
    </Grid>
</UserControl>
