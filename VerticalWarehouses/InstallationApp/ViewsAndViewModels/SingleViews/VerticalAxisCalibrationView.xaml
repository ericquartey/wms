<UserControl x:Class="Ferretto.VW.InstallationApp.VerticalAxisCalibrationView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
                 xmlns:prism="http://prismlibrary.com/"
                 xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
                 prism:ViewModelLocator.AutoWireViewModel="True"
                 mc:Ignorable="d">
    <Grid Width="1024"
                 Height="608">
        <TextBlock Grid.Row="0"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.OriginVerticalAxis}" Margin="160,13,0,559" />
        <custom:CustomLabelTextBlockControl
                                                Grid.Column="0"
                                                Margin="160,402,544,138"
                                                ContentText="165,15"
                                                LabelText="{x:Static res:InstallationApp.Resolution}" />
        <custom:CustomLabelTextBlockControl
                                                Grid.Column="0"
                                                Margin="160,329,544,211"
                                                ContentText="150"
                                                LabelText="{x:Static res:InstallationApp.Offset}" />
        <custom:CustomLabelTextBlockControl
                                                ContentText="10350,5"
                                                LabelText="{x:Static res:InstallationApp.UpperBound}" Margin="160,256,544,284" />
        <custom:CustomLabelTextBlockControl
                                                ContentText="100,0"
                                                LabelText="{x:Static res:InstallationApp.LowerBound}" Margin="160,169,544,371" />
        <custom:CustomLabelTextBlockControl
                                                ContentText="{Binding NoteString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.Output}" Margin="160,101,544,439" />
        <Button Grid.Column="0"
                    Command="{Binding StartButtonCommand}"
                    Content="{x:Static res:InstallationApp.Start}"
                    IsEnabled="{Binding EnableStartButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" Margin="541,101,319,439" />
        <Button
                    Command="{Binding StopButtonCommand}"
                    Content="{x:Static res:InstallationApp.Stop}"
                    IsEnabled="{Binding IsStopButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" Margin="541,256,319,284" />
    </Grid>
</UserControl>
