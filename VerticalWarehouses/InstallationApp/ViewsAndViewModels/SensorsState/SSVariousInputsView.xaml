<UserControl x:Class="Ferretto.VW.InstallationApp.SSVariousInputsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <Grid              Width="774"
             Height="608">
        <TextBlock Grid.Row="0"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{x:Static res:InstallationApp.VariousInputs}" Margin="160,10,0,562" />
        <custom:CustomSensorControl Margin="160,522,400,38"
                                            LabelText="{x:Static res:InstallationApp.SecurityFunctionActive}"
                                            SensorState="{Binding SecurityFunctionActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        <custom:CustomSensorControl Margin="160,85,400,475"
                                            LabelText="{x:Static res:InstallationApp.MushroomHeadButton}"
                                            SensorState="{Binding MushroomHeadButton, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        <custom:CustomSensorControl Margin="0,155,400,405"
                                            LabelText="{x:Static res:InstallationApp.MicroCarterLeftSide}"
                                            SensorState="{Binding MicroCarterLeftSide, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource VWAPP_CustomSensorControlStyle}" HorizontalAlignment="Right" Width="214" />
        <custom:CustomSensorControl Margin="160,230,400,330"
                                            LabelText="{x:Static res:InstallationApp.MicroCarterRightSide}"
                                            SensorState="{Binding MicroCarterRightSide, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        <custom:CustomSensorControl Margin="160,301,400,259"
                                            LabelText="{x:Static res:InstallationApp.AntiIntrusionGate}"
                                            SensorState="{Binding AntiIntrusionGate, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        <custom:CustomSensorControl Margin="160,375,400,185"
                                            LabelText="{x:Static res:InstallationApp.ElevatorEngineSelected}"
                                            SensorState="{Binding ElevatorEngineSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        <custom:CustomSensorControl Margin="160,450,400,110"
                                            LabelText="{x:Static res:InstallationApp.CradleEngineSelected}"
                                            SensorState="{Binding CradleEngineSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
    </Grid>
</UserControl>
