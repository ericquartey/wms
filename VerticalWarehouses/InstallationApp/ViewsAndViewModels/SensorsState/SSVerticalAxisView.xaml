<myType:BaseView x:Class="Ferretto.VW.InstallationApp.ViewsAndViewModels.SensorsState.SSVerticalAxisView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.SensorsState"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
                 xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
                 d:DesignHeight="450"
                 d:DesignWidth="800"
                 mc:Ignorable="d">
    <DockPanel>
        <Label Margin="20,0,0,0"
               HorizontalAlignment="Left"
               Content="{x:Static res:InstallationApp.VerticalAxis}"
               DockPanel.Dock="Top"
               Style="{StaticResource StandardTitleTextStyle}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="1"
                        Grid.Column="1">
                <custom:CustomSensorControl Margin="10"
                                            BulletColor="{Binding VerticalZeroSensorFillColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:InstallationApp.ZeroVerticalSensor}" />
                <custom:CustomSensorControl Margin="10"
                                            BulletColor="{Binding EmergencyEndRunFillColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:InstallationApp.EmergencyEndRun}" />
                <custom:CustomSensorControl Margin="10"
                                            BulletColor="{Binding BrakeResistanceOverTemperatureFillColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:InstallationApp.BrakeResistanceOvertemperature}" />
            </StackPanel>
        </Grid>
    </DockPanel>
</myType:BaseView>
