<myType:BaseView x:Class="Ferretto.VW.InstallationApp.SSVerticalAxisView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
                 xmlns:prism="http://prismlibrary.com/"
                 xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
                 prism:ViewModelLocator.AutoWireViewModel="True"
                 mc:Ignorable="d">
    <Grid Width="774"
                 Height="608">
        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,30,0,0"
                     Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                     Text="{x:Static res:InstallationApp.VerticalAxis}"  />

        <custom:CustomSensorControl   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,100,0,0"
                                      LabelText="{x:Static res:InstallationApp.EmergencyEndRun}"
                                      SensorState="{Binding EmergencyEndRun, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,140,0,0"
                                      LabelText="{x:Static res:InstallationApp.ZeroVerticalSensor}"
                                      SensorState="{Binding ZeroVerticalSensor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <TextBlock    HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="250,290,0,0"
                      Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                      Text="{x:Static res:InstallationApp.Cradle}" />

        <custom:CustomSensorControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,360,0,0"
                                     LabelText="{x:Static res:InstallationApp.ZeroPawlSensor}"
                                     SensorState="{Binding ZeroPawlSensor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,400,0,0"
                                     LabelText="{x:Static res:InstallationApp.LuPresenceOnMachineCradleSide}"
                                     SensorState="{Binding LuPresentInMachineSide, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,440,0,0"
                                     LabelText="{x:Static res:InstallationApp.LuPresenceOnOperatorCradleSide}"
                                     SensorState="{Binding LuPresentInOperatorSide, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
    </Grid>
</myType:BaseView>
