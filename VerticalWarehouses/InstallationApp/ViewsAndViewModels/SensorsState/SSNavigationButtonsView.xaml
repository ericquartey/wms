<myType:BaseView x:Class="Ferretto.VW.InstallationApp.ViewsAndViewModels.SensorsState.SSNavigationButtonsView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.ViewsAndViewModels.SensorsState"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
                 xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
                 d:DesignHeight="450"
                 d:DesignWidth="800"
                 mc:Ignorable="d">
    <Border Height="630"
            Background="{StaticResource FerrettoPureWhite}">
        <StackPanel>
            <Rectangle Height="20" />
            <Button Height="60"
                    Margin="15,0,0,5"
                    Command="{Binding SsVerticalAxisButtonCommand}"
                    Content="{x:Static res:InstallationApp.VerticalAxis}"
                    Style="{StaticResource StandardMainWindowButtonStyle}" />
            <Button Height="60"
                    Margin="15,0,0,5"
                    Command="{Binding}"
                    Content="{x:Static res:InstallationApp.Cradle}"
                    Style="{StaticResource StandardMainWindowButtonStyle}" />
            <Button Height="60"
                    Margin="15,0,0,5"
                    Command="{Binding}"
                    Content="{x:Static res:InstallationApp.Bays}"
                    Style="{StaticResource StandardMainWindowButtonStyle}" />
            <Button x:Name="OpenVerifyPanelPositionPageButton"
                    Height="60"
                    Margin="15,0,0,5"
                    Command="{Binding}"
                    Content="{x:Static res:InstallationApp.Gate}"
                    Style="{StaticResource StandardMainWindowButtonStyle}" />
            <Button x:Name="OpenBeltBurnishingPageButton"
                    Height="60"
                    Margin="15,0,0,5"
                    Command="{Binding SsProvaViewButtonCommand}"
                    Content="{x:Static res:InstallationApp.VariousInputs}"
                    Style="{StaticResource StandardMainWindowButtonStyle}" />
            <Rectangle Height="190" />
            <Button x:Name="OpenVerifyWeightControllerPageButton"
                    Height="60"
                    Margin="15,0,0,5"
                    Command="{Binding BackToMainWindowNavigationButtonsViewCommand}"
                    Content="{x:Static res:General.Back}"
                    Style="{StaticResource StandardMainWindowButtonStyle}" />
        </StackPanel>
    </Border>
</myType:BaseView>
