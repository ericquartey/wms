<UserControl x:Class="Ferretto.VW.InstallationApp.Gate1ControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <Grid Height="608"
          Width="1024">

        <TextBlock   Grid.Row="0"
                     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="260,30,0,0"
                     Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                     Text="{x:Static res:InstallationApp.Gate1Control}" />

        <custom:CustomInputFieldControlFocusable  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,170,0,0"
                                                  Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" 
                                                  LabelText="{x:Static res:InstallationApp.RequiredCicles}" />

        <custom:CustomInputFieldControlFocusable HorizontalAlignment="Left" VerticalAlignment="Top" Margin="560,170,0,0"
                                                 Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
                                                 LabelText="{x:Static res:InstallationApp.DelayBetweenCicles}" />

        <custom:CustomLabelTextBlockControl   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,300,0,0"
                                              LabelText="{x:Static res:InstallationApp.CompletedCicles}" />

        <ContentControl Name="SensorRegionContentControl"
                        HorizontalAlignment="Left" VerticalAlignment="Top" Margin="560,240,0,0" 
                        Width="200"
                        Height="180" />

        <Button Grid.Column="0"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="560,450,0,0"
                Content="{x:Static res:InstallationApp.Start}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Margin="260,450,0,0"
                Content="{x:Static res:InstallationApp.Stop}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <custom:CustomSensorControl   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="560,290,0,0"
                                      LabelText="{x:Static res:InstallationApp.GateSensorABay1}"
                                      SensorState="{Binding LuPresentInBay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="560,330,0,0"
                                      LabelText="{x:Static res:InstallationApp.GateSensorBBay1}"
                                      SensorState="{Binding LuPresentInBay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                      Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

    </Grid>
</UserControl>
