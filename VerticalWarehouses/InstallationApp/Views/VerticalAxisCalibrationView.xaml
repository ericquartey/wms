<UserControl x:Class="Ferretto.VW.InstallationApp.Views.VerticalAxisCalibrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             mc:Ignorable="d">
    <DockPanel>
        <Label HorizontalAlignment="Center"
               DockPanel.Dock="Top"
               Style="{StaticResource StandardTitleTextStyle}">
            Vertical Axis Calibration
        </Label>
        <Grid DockPanel.Dock="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="4"
                    Height="60"
                    Content="{x:Static res:InstallationApp.NextButton}"
                    Style="{StaticResource StandardButtonStyle}" />
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource StandardButtonStyle}">
                START
            </Button>
            <Button Grid.Row="4"
                    Grid.Column="1"
                    Style="{StaticResource StandardButtonStyle}">
                STOP
            </Button>
            <Label Grid.Row="1"
                   Grid.Column="3"
                   Style="{StaticResource StandardBodyTextStyle}">
                Resolution
            </Label>
            <Label Grid.Row="2"
                   Grid.Column="3"
                   Style="{StaticResource StandardBodyTextStyle}">
                Offset
            </Label>
            <Label Grid.Row="3"
                   Grid.Column="3"
                   Style="{StaticResource StandardBodyTextStyle}">
                Upper Bound
            </Label>
            <Label Grid.Row="4"
                   Grid.Column="3"
                   Style="{StaticResource StandardBodyTextStyle}">
                Lower Bound
            </Label>
            <Label Grid.Row="5"
                   Grid.Column="3"
                   Style="{StaticResource StandardBodyTextStyle}">
                Output:
            </Label>
            <TextBox Name="VerticalAxisCalibrationResolutionTextBox"
                     Grid.Row="1"
                     Grid.Column="4"
                     Margin="2"
                     Style="{StaticResource StandardBodyTextStyle}" />
            <TextBox Name="VerticalAxisCalibrationOffsetTextBox"
                     Grid.Row="2"
                     Grid.Column="4"
                     Margin="2"
                     Style="{StaticResource StandardBodyTextStyle}" />
            <TextBox Name="VerticalAxisCalibrationUpperBoundTextBox"
                     Grid.Row="3"
                     Grid.Column="4"
                     Margin="2"
                     Style="{StaticResource StandardBodyTextStyle}" />
            <TextBox Name="VerticalAxisCalibrationLowerBoundTextBox"
                     Grid.Row="4"
                     Grid.Column="4"
                     Margin="2"
                     Style="{StaticResource StandardBodyTextStyle}" />
            <TextBlock Name="VerticalAxisCalibrationOutputTextBlock"
                       Grid.Row="5"
                       Grid.Column="4"
                       Margin="2"
                       VerticalAlignment="Center"
                       Style="{StaticResource StandardBodyTextBlockStyle}">
                Axis not calibrated yet.
            </TextBlock>
        </Grid>
    </DockPanel>
</UserControl>
