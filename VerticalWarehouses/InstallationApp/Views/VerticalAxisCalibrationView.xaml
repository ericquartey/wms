<UserControl x:Class="Ferretto.VW.InstallationApp.Views.VerticalAxisCalibrationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0"
               HorizontalAlignment="Center"
               Style="{StaticResource StandardTitleTextStyle}">
            Vertical Axis Calibration
        </Label>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0"
                    Grid.Column="0"
                    Style="{StaticResource StandardButtonStyle}">
                START
            </Button>
            <Button Grid.Row="3"
                    Grid.Column="0"
                    Style="{StaticResource StandardButtonStyle}">
                STOP
            </Button>
            <Label Grid.Row="0"
                   Grid.Column="2"
                   Style="{StaticResource StandardBodyTextStyle}">
                Resolution
            </Label>
            <Label Grid.Row="1"
                   Grid.Column="2"
                   Style="{StaticResource StandardBodyTextStyle}">
                Offset
            </Label>
            <Label Grid.Row="2"
                   Grid.Column="2"
                   Style="{StaticResource StandardBodyTextStyle}">
                Upper Bound
            </Label>
            <Label Grid.Row="3"
                   Grid.Column="2"
                   Style="{StaticResource StandardBodyTextStyle}">
                Lower Bound
            </Label>
            <Label Grid.Row="4"
                   Grid.Column="2"
                   Style="{StaticResource StandardBodyTextStyle}">
                Output:
            </Label>
            <TextBox Name="VerticalAxisCalibrationResolutionTextBox"
                     Grid.Row="0"
                     Grid.Column="3"
                     Margin="2"
                     Style="{StaticResource StandardBodyTextStyle}" />
            <TextBox Name="VerticalAxisCalibrationOffsetTextBox"
                     Grid.Row="1"
                     Grid.Column="3"
                     Margin="2"
                     Style="{StaticResource StandardBodyTextStyle}" />
            <TextBox Name="VerticalAxisCalibrationUpperBoundTextBox"
                     Grid.Row="2"
                     Grid.Column="3"
                     Margin="2"
                     Style="{StaticResource StandardBodyTextStyle}" />
            <TextBox Name="VerticalAxisCalibrationLowerBoundTextBox"
                     Grid.Row="3"
                     Grid.Column="3"
                     Margin="2"
                     Style="{StaticResource StandardBodyTextStyle}" />
            <TextBlock Name="VerticalAxisCalibrationOutputTextBlock"
                       Grid.Row="4"
                       Grid.Column="3"
                       Margin="2"
                       VerticalAlignment="Center"
                       Style="{StaticResource StandardBodyTextBlockStyle}">
                Axis not calibrated yet.
            </TextBlock>
            <Button Grid.Row="5"
                    Grid.Column="4"
                    Style="{StaticResource StandardButtonStyle}">
                Next &gt;
            </Button>
        </Grid>
    </Grid>
</UserControl>
