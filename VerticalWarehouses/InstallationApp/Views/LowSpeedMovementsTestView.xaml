<UserControl x:Class="Ferretto.VW.InstallationApp.Views.LowSpeedMovementsTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <DockPanel>
        <Label HorizontalAlignment="Center"
               DockPanel.Dock="Top"
               Style="{StaticResource StandardTitleTextStyle}">
            Low Speed Movements Test
        </Label>
        <TabControl DockPanel.Dock="Bottom">
            <TabItem Header="Vertical Engine"
                     Style="{StaticResource StandardBodyTextStyle}">
                <Frame Source="LSMTVerticalEngineView.xaml" />
            </TabItem>
            <TabItem Header="Horizontal Engine"
                     Style="{StaticResource StandardBodyTextStyle}" />
            <TabItem Header="Gate Engine"
                     Style="{StaticResource StandardBodyTextStyle}" />
        </TabControl>
    </DockPanel>
</UserControl>
