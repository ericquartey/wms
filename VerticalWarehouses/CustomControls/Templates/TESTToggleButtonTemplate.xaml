<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Templates">
    <ControlTemplate x:Key="TESTToggleButtonTemplate"
                     TargetType="{x:Type ToggleButton}">
        <Grid>
            <Border x:Name="Border"
                    Grid.ColumnSpan="2"
                    Background="{DynamicResource VWAPP_MainWindowMachineStateComboBox_Background_Normal}"
                    BorderBrush="{DynamicResource VWAPP_MainWindowMachineStateComboBox_Background_Normal}"
                    BorderThickness="1" />
            <Border Grid.Column="0"
                    Margin="1"
                    Background="{DynamicResource VWAPP_MainWindowMachineStateComboBox_Background_Normal}" />
            <VisualStateManager.VisualStateGroups>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="Pressed" />
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>
</ResourceDictionary>
