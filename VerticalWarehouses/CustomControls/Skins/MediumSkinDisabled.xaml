<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Skins">

    <SolidColorBrush x:Key="IAPP_NavigationButton_Background_Inactive"
                     Color="Transparent" />
    <SolidColorBrush x:Key="IAPP_NavigationButton_Foreground_Inactive"
                     Color="{DynamicResource ColorFerrettoLightGray}" />
    <SolidColorBrush x:Key="IAPP_NavigationButton_BorderBrush_Inactive"
                     Color="Transparent" />

    <SolidColorBrush x:Key="IAPP_ViewButton_Background_Inactive"
                     Color="Transparent" />
    <SolidColorBrush x:Key="IAPP_ViewButton_Foreground_Inactive"
                     Color="#646464" />
    <SolidColorBrush x:Key="IAPP_ViewButton_BorderBrush_Inactive"
                     Color="Transparent" />

    <SolidColorBrush x:Key="VWAPP_MainWindowMachineStateComboBox_Background_Inactive"
                     Color="{DynamicResource ColorFerrettoLightGray}" />
    <SolidColorBrush x:Key="VWAPP_MainWindowMachineStateComboBox_Foreground_Inactive"
                     Color="{DynamicResource ColorFerrettoMediumGray}" />
    <SolidColorBrush x:Key="VWAPP_MainWindowMachineStateComboBox_BorderBrush_Inactive"
                     Color="{DynamicResource ColorFerrettoLightGray}" />

    <SolidColorBrush x:Key="VWAPP_MainWindowUserComboBox_Background_Inactive"
                     Color="{DynamicResource ColorFerrettoDarkGray}" />
    <SolidColorBrush x:Key="VWAPP_MainWindowUserComboBox_Foreground_Inactive"
                     Color="{DynamicResource ColorFerrettoLightGray}" />
    <SolidColorBrush x:Key="VWAPP_MainWindowUserComboBox_BorderBrush_Inactive"
                     Color="{DynamicResource ColorFerrettoDarkGray}" />

</ResourceDictionary>
