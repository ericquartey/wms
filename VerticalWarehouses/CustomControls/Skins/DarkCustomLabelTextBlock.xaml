<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Skins"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <sys:Double x:Key="VWAPP_CustomLabel_ContentTextBlock_FontSize">14</sys:Double>
    <FontFamily x:Key="VWAPP_CustomLabel_ContentTextBlock_FontFamily">pack://application:,,,/Fonts/#HelveticaNeue-LightCond.otf</FontFamily>
    <sys:Double x:Key="VWAPP_CustomLabel_LabelTextBlock_FontSize">12</sys:Double>
    <FontFamily x:Key="VWAPP_CustomLabel_LabelTextBlock_FontFamily">pack://application:,,,/Fonts/#HelveticaNeue-LightCond.otf</FontFamily>

    <SolidColorBrush x:Key="VWAPP_CustomLabel_ContentTextBlock_Foreground_Normal"
                     Color="{DynamicResource ColorFerrettoPureWhite}" />
    <SolidColorBrush x:Key="VWAPP_CustomLabel_LabelTextBlock_Foreground_Normal"
                     Color="{DynamicResource ColorFerrettoPureWhite}" />

    <SolidColorBrush x:Key="VWAPP_CustomLabel_ContentTextBlock_Foreground_Disabled"
                     Color="{DynamicResource ColorFerrettoMediumGray}" />
    <SolidColorBrush x:Key="VWAPP_CustomLabel_LabelTextBlock_Foreground_Disabled"
                     Color="{DynamicResource ColorFerrettoMediumGray}" />

</ResourceDictionary>
