<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Styles">
    <Style x:Key="StandardBodyTextStyle"
           TargetType="{x:Type Control}">
        <Setter Property="Foreground" Value="{StaticResource FerrettoBlack}" />
        <Setter Property="FontFamily" Value="{StaticResource HelveticaNeue-LightCond}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>
    <Style x:Key="StandardTitleTextStyle"
           TargetType="{x:Type Control}">
        <Setter Property="Foreground" Value="{StaticResource FerrettoBlack}" />
        <Setter Property="FontFamily" Value="{StaticResource RobotoCondensed-Regular}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>
    <Style x:Key="StandardBodyTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource FerrettoBlack}" />
        <Setter Property="FontFamily" Value="{StaticResource HelveticaNeue-LightCond}" />
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style x:Key="UserBodyTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{StaticResource FerrettoBlack}" />
        <Setter Property="FontFamily" Value="{StaticResource HelveticaNeue-LightCond}" />
        <Setter Property="FontSize" Value="20" />
    </Style>
</ResourceDictionary>
