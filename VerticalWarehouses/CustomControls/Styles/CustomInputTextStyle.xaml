<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls"
                    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Styles">
    <Style x:Key="VWAPP_CustomInputText_Style"
           TargetType="{x:Type custom:CustomInputText}">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="true">
                <Setter Property="Foreground" Value="{DynamicResource VWAPP_CustomInputText_Label_Foreground_Normal}" />
                <Setter Property="TextBoxBorderBrush" Value="{DynamicResource VWAPP_CustomInputText_TextBox_BorderdBrush_Normal}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Foreground" Value="{DynamicResource VWAPP_CustomInputText_Label_Foreground_Disabled}" />
                <Setter Property="TextBoxBorderBrush" Value="{DynamicResource VWAPP_CustomInputText_TextBox_BorderdBrush_Disabled}" />
            </Trigger>
            <Trigger Property="IsHighlighted" Value="true">
                <Setter Property="TextBoxBorderBrush" Value="red" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
