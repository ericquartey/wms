<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls"
                    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Styles">
    <Style x:Key="VWAPP_ViewErrorTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource VWAPP_ErrorTextBlock_Foreground_Normal}" />
        <Setter Property="FontFamily" Value="{DynamicResource VWAPP_BodyFont}" />
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style x:Key="VWAPP_ViewTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource VWAPP_ViewBodyTextBlock_Foreground_Normal}" />
        <Setter Property="FontFamily" Value="{DynamicResource VWAPP_BodyFont}" />
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style x:Key="VWAPP_ViewCustomControlLabelTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource VWAPP_CCLabelTextBlock_Foreground_Normal}" />
        <Setter Property="FontFamily" Value="{DynamicResource VWAPP_BodyFont}" />
        <Setter Property="FontSize" Value="16" />
    </Style>
    <Style x:Key="VWAPP_SplashScreenTitleTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource VWAPP_SSTitleViewTextBlock_Foreground_Normal}" />
        <Setter Property="FontFamily" Value="{DynamicResource VWAPP_TitleFont}" />
        <Setter Property="FontSize" Value="50" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style x:Key="VWAPP_SplashScreenSubTitleTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource VWAPP_SSSubtitleTextBlock_Foreground_Normal}" />
        <Setter Property="FontFamily" Value="{DynamicResource VWAPP_BodyFont}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="VerticalAlignment" Value="Center" />
    </Style>
    <Style x:Key="VWAPP_ViewTitleTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource VWAPP_ViewTitleViewTextBlock_Foreground_Normal}" />
        <Setter Property="FontFamily" Value="{DynamicResource VWAPP_TitleFont}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Left" />
    </Style>
</ResourceDictionary>
