<ResourceDictionary x:Class="Ferretto.VW.CustomControls.Styles.ComboBoxStyles"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Styles">
    <Style x:Key="StandardComboBoxStyle"
           TargetType="{x:Type ComboBox}">
        <Setter Property="Background" Value="{StaticResource FerrettoDarkGray}" />
        <Setter Property="Foreground" Value="{StaticResource FerrettoPureWhite}" />
        <Setter Property="FontFamily" Value="{StaticResource HelveticaNeue-LightCond}" />
        <Setter Property="FontSize" Value="30" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <EventSetter Event="PreviewMouseDown"
                     Handler="OpenDropDownList" />
    </Style>
    <Style x:Key="StandardComboBoxItemStyle"
           TargetType="{x:Type ComboBoxItem}">
        <Setter Property="Background" Value="{StaticResource FerrettoDarkGray}" />
        <Setter Property="Foreground" Value="{StaticResource FerrettoPureWhite}" />
        <Setter Property="FontFamily" Value="{StaticResource HelveticaNeue-LightCond}" />
        <Setter Property="FontSize" Value="20" />
    </Style>
    <Style x:Key="StandardMainWindowComboBoxItemStyle"
           TargetType="{x:Type ComboBoxItem}">
        <Setter Property="Background" Value="{StaticResource FerrettoLightGray}" />
        <Setter Property="Foreground" Value="{StaticResource FerrettoPureWhite}" />
        <Setter Property="FontFamily" Value="{StaticResource HelveticaNeue-LightCond}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Height" Value="80" />
    </Style>
</ResourceDictionary>
