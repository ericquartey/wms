<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomComboBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Button Name="rootButton"
            SnapsToDevicePixels="True">
        <Popup Name="itemsPopup"
               IsOpen="{Binding IsItemsPopUpOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               Placement="Bottom">
            <ItemsPresenter Name="ItemsPresenter" />
        </Popup>
    </Button>
</UserControl>
