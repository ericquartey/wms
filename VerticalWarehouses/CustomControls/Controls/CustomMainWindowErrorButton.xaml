<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomMainWindowErrorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="60"
             d:DesignWidth="120"
             mc:Ignorable="d">
    <Button Background="Transparent"
            BorderBrush="{Binding VWAPP_CustomMainWindowErrorButton_BorderBrush_Normal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="80" />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0"
                       Width="40"
                       Height="58"
                       HorizontalAlignment="Left"
                       Fill="Red" />
            <TextBlock Grid.Column="1" />
        </Grid>
    </Button>
</UserControl>
