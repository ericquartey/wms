<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomMainWindowErrorButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="60"
             d:DesignWidth="120"
             mc:Ignorable="d">
    <Button Name="LayoutRoot"
            Width="120"
            Height="60"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent"
            Command="{Binding CustomCommand}"
            Template="{StaticResource VWAPP_CustomMachineOnMarchToggleButton_ControlTemplate}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="1"
                       Width="40"
                       Height="58"
                       Fill="Red" />
            <TextBlock Grid.Column="0"
                       Style="{StaticResource VWAPP_CustomMainWindowErrorButton_TextBlockStyle}"
                       Text="{Binding ContentText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
    </Button>
</UserControl>
