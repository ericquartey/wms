<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomControlHighlightableBullet"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="40"
             d:DesignWidth="40"
             mc:Ignorable="d">
    <Grid Name="root">
        <Ellipse Width="{Binding ElementName=root, Path=Height}"
                 Height="{Binding ElementName=root, Path=Height}"
                 Fill="{Binding BulletColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
