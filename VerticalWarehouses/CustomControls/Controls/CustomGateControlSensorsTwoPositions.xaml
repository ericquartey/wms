<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomGateControlSensorsTwoPositions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <local:CustomSensorControl Grid.Row="0"
                                   Margin="0,2,0,2"
                                   BulletColor="{StaticResource FerrettoGreen}"
                                   LabelText="{x:Static res:InstallationApp.Open}" />
        <local:CustomSensorControl Grid.Row="1"
                                   Margin="0,2,0,2"
                                   BulletColor="{StaticResource FerrettoMediumGray}"
                                   LabelText="{x:Static res:InstallationApp.Closed}" />
    </Grid>
</UserControl>
