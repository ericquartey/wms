<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomOuputText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="80"
             d:DesignWidth="200"
             mc:Ignorable="d">
    <Grid Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="{DynamicResource VWAPP_CustomOutputText_FontFamily}"
                   FontSize="{DynamicResource VWAPP_CustomOutputText_FontSize_Label}"
                   Foreground="{DynamicResource VWAPP_CustomOutputText_Foreground_Normal}"
                   Text="{Binding LabelText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   TextAlignment="Left" />
        <TextBlock Grid.Row="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   FontFamily="{DynamicResource VWAPP_CustomOutputText_FontFamily}"
                   FontSize="{DynamicResource VWAPP_CustomOutputText_FontSize_Output}"
                   Foreground="{DynamicResource VWAPP_CustomOutputText_Foreground_Normal}"
                   Text="{Binding OutputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   TextAlignment="Left" />
    </Grid>
</UserControl>
