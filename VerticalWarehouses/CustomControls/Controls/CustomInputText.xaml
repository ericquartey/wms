<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomInputText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="80"
             d:DesignWidth="200"
             mc:Ignorable="d">
    <Grid Name="LayoutRoot">
        <TextBox BorderBrush="{Binding TextBoxBorderBrush, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 BorderThickness="4" />
    </Grid>
</UserControl>
