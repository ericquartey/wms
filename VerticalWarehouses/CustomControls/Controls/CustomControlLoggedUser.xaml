<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomControlLoggedUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             mc:Ignorable="d">
    <Grid Name="LayoutRoot">
        <Button Name="ButtonRoot"
                Width="{DynamicResource VWAPP_CustomControlLoggedUser_Width}"
                Height="{DynamicResource VWAPP_CustomControlLoggedUser_Height}"
                VerticalContentAlignment="Center"
                Background="Transparent"
                BorderBrush="Transparent"
                Command="{Binding OpenClosePopupCommand}"
                Content="{Binding UserText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                FontFamily="{DynamicResource VWAPP_CustomControlLoggedUser_FontFamily_Normal}"
                FontSize="{DynamicResource VWAPP_CustomControlLoggedUser_FontSize_Normal}"
                Foreground="{DynamicResource VWAPP_CustomControlLoggedUser_Foreground_Normal}" />
        <Popup Width="{Binding ElementName=ButtonRoot, Path=ActualWidth}"
               Height="240"
               VerticalAlignment="Top"
               AllowsTransparency="True"
               IsOpen="{Binding IsPopupOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               PlacementTarget="{Binding ElementName=ButtonRoot}">
            <StackPanel Height="160"
                        VerticalAlignment="Top"
                        Background="Transparent">
                <TextBlock Width="{Binding ElementName=ButtonRoot, Path=ActualWidth}"
                           Margin="0,30"
                           HorizontalAlignment="Center"
                           Background="Transparent"
                           FontFamily="{DynamicResource VWAPP_CustomControlLoggedUser_FontFamily_Normal}"
                           FontSize="{DynamicResource VWAPP_CustomControlLoggedUser_FontSize_Normal}"
                           Foreground="{DynamicResource VWAPP_CustomControlLoggedUser_Foreground_Normal}"
                           Text="{Binding UserText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                           TextAlignment="Center" />
                <Button Width="{Binding ElementName=ButtonRoot, Path=ActualWidth}"
                        Height="80"
                        Background="{DynamicResource VWAPP_BACKGROUND}"
                        BorderBrush="Transparent"
                        Command="{Binding LogOffCommand}"
                        FontFamily="{DynamicResource VWAPP_CustomControlLoggedUser_FontFamily_Normal}"
                        FontSize="{DynamicResource VWAPP_CustomControlLoggedUser_FontSize_Normal}"
                        Foreground="{DynamicResource VWAPP_CustomControlLoggedUser_Foreground_Normal}">
                    <Button.Content>
                        <TextBlock Background="Transparent"
                                   HorizontalAlignment="Center"
                                   FontFamily="{DynamicResource VWAPP_CustomControlLoggedUser_FontFamily_Normal}"
                                   FontSize="{DynamicResource VWAPP_CustomControlLoggedUser_FontSize_Normal}"
                                   Foreground="{DynamicResource VWAPP_CustomControlLoggedUser_Foreground_Normal}"
                                   Text="{x:Static res:InstallationApp.LogOff}" />
                    </Button.Content>
                </Button>
            </StackPanel>
        </Popup>
    </Grid>
</UserControl>
