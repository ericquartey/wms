<UserControl x:Class="Ferretto.VW.App.Operator.ViewsAndViewModels.DrawerOperations.DrawerActivityRefillingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:WmsControls="clr-namespace:Ferretto.Common.Controls.WPF;assembly=Ferretto.Common.Controls.WPF"
             xmlns:converter="clr-namespace:Ferretto.VW.App.Controls.Converters;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="608">
        <Grid.Resources>
            <converter:ImageToSourceConverter x:Key="ImageToSourceConverter" />
        </Grid.Resources>
        <TextBlock Margin="60,20,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.DrawerActivityRefillingHeader}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="60,280,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding ListCode, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static Resources:OperatorApp.CommonListCode}" />

        <Button Margin="0,0,20,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding ConfirmCommand}"
                Content="{x:Static Resources:OperatorApp.CommonButtonConfirm}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <WmsControls:TrayControl Width="900"
                                 Height="200"
                                 Margin="60,60,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 Compartments="{Binding Compartments, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                 DefaultCompartmentColor="#0a0a0a"
                                 DimensionHeight="650"
                                 DimensionWidth="4250"
                                 IsEnabled="False"
                                 IsReadOnly="True"
                                 OriginHorizontal="Left"
                                 OriginVertical="Bottom"
                                 SelectedColorFilterFunc="{Binding CompartmentColoringFunction}"
                                 SelectedItem="{Binding SelectedCompartment, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                 ShowBackground="True"
                                 ShowRuler="False" />
        <Image Width="180"
               Height="180"
               Margin="60,0,0,20"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom"
               Source="{Binding ItemImage, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ImageToSourceConverter}}"
               Stretch="Uniform" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="60,330,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding ItemCode, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static Resources:OperatorApp.CommonItemCode}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="150"
                                              Margin="280,380,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding CompartmentPosition, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static Resources:OperatorApp.CommonCompartmentPosition}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="500"
                                              Margin="280,280,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding ListDescription, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static Resources:OperatorApp.CommonListDescription}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="500"
                                              Margin="280,330,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding ItemDescription, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static Resources:OperatorApp.CommonItemDescription}" />

        <Controls:PpcTextBox MaxWidth="160"
                                                   Margin="844,410,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   InputText="{Binding ActualQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   LabelText="{x:Static Resources:OperatorApp.DrawerActivityRefillingQtyRefilled}"
                                                   Style="{StaticResource VWAPP_PpcTextBoxStyle}" />

        <Button Margin="280,0,0,20"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Command="{Binding DrawerActivityRefillingDetailsButtonCommand}"
                Content="{x:Static Resources:OperatorApp.CommonButtonDetail}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="654,0,0,20"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Content="{x:Static Resources:OperatorApp.DrawerActivityRefillingCapacityMaxAdjust}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="844,330,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="12"
                                              LabelText="{x:Static Resources:OperatorApp.DrawerActivityRefillingQtyToRefill}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="500"
                                              Margin="280,430,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="Note inserite ad uso operatore in baia..."
                                              LabelText="{x:Static Resources:OperatorApp.CommonNote}" />

    </Grid>
</UserControl>
