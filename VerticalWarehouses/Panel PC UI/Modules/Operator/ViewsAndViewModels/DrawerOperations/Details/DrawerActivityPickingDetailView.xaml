<UserControl x:Class="Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.DrawerOperations.Details.DrawerActivityPickingDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converter="clr-namespace:Ferretto.VW.App.Controls.Converters;assembly=Ferretto.VW.App.Controls"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid Width="1024" Height="608">
        <Grid.Resources>
            <converter:ImageToSourceConverter x:Key="ImageToSourceConverter" />
        </Grid.Resources>
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,20,0,0"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static Resources:OperatorApp.DrawerActivityPickingDetailHeader}" />

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,90,0,0" MaxWidth="200"
                                               ContentText="{Binding ListCode, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.CommonListCode}"/>

        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,360,0,0" Width="180" Height="180"
               Source="{Binding Image, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource ImageToSourceConverter}}"
               Stretch="Uniform" />

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,290,0,0" MaxWidth="200"
                                               ContentText="{Binding ItemCode, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.CommonItemCode}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="440,490,0,0" MaxWidth="200"
                                               ContentText="{Binding Position, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.CommonCompartmentPosition}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,150,0,0" MaxWidth="500"
                                               ContentText="{Binding ListDescription, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.CommonListDescription}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="440,290,0,0" MaxWidth="500"
                                               ContentText="{Binding ItemDescription, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.CommonItemDescription}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,210,0,0" MaxWidth="200"
                                               ContentText="{Binding ListRow, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityPickingDetailRowList}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="440,370,0,0" MaxWidth="200"
                                               ContentText="{Binding ProductionDate, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityPickingDetailProductionDate}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="440,430,0,0" MaxWidth="200"
                                               ContentText="{Binding MaterialStatus, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityPickingDetailMaterialStatus}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="680,370,0,0" MaxWidth="200"
                                               ContentText="{Binding Batch, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityPickingDetailLotto}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="680,430,0,0" MaxWidth="200"
                                               ContentText="{Binding PackagingType, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityPickingDetailPackagingType}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,90,0,0" MaxWidth="200"
                                               ContentText="{Binding PackingListCode, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.CommonPackingListCode}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,150,0,0" MaxWidth="500"
                                               ContentText="{Binding PackingListDescription, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.CommonPackingListDescription}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="680,490,0,0" MaxWidth="200"
                                               ContentText="{Binding RequestedQuantity, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityPickingDetailQtyRequest}"/>

    </Grid>
</UserControl>
