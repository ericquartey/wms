<UserControl x:Class="Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.Other.MaintenanceMainPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.App.Modules.Operator"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="608">

        <TextBlock Margin="110,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.MaintenanceMainPageHeader}" />

        <ContentControl HorizontalAlignment="Left"
                        Height="310"
                        Margin="110,200,0,0"
                        VerticalAlignment="Top"
                        Width="700"
                        Content="{Binding DataGridViewModel}">
        </ContentControl>

        <Button  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,240,20,0"
                 Content="{x:Static Resources:OperatorApp.CommonUp}"
                 Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,305,20,0"
                 Content="{x:Static Resources:OperatorApp.CommonDown}"
                 Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="0,0,20,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding MaintenanceDetailButtonCommand}"
                Content="{x:Static Resources:OperatorApp.CommonButtonDetail}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomLabelTextBlockControl Width="255"
                                              Margin="110,90,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="VRT EF 84 L 990-BIS H 6345"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageModel}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="110,140,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="VW_190012"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageSerial}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="380,90,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="15-04-2017"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageInstallationDate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="380,140,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="20-04-2018"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageLastMaintenanceDate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="580,90,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="20-04-2019"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageNextMaintenanceDate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="620,140,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="Manutenzione richiesta"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageStateMachine}" />

        <Rectangle Width="25"
                   Height="25"
                   Margin="580,146,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="Red" />

    </Grid>
</UserControl>
