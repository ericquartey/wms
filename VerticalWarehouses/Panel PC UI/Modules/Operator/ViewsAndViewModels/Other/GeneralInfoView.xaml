<UserControl x:Class="Ferretto.VW.App.Operator.ViewsAndViewModels.Other.GeneralInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:converters="clr-namespace:Ferretto.VW.App.Controls.Converters;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.App.Operator"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">

    <Grid Width="774"
          Height="608">

        <Grid.Resources>
            <converters:MachineServiceStatusEnumConverter x:Key="MSSEC" />
        </Grid.Resources>

        <TextBlock MaxWidth="500"
                   Margin="90,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.GeneralInfoHeader}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="90,100,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding Model.ModelName}"
                                              LabelText="{x:Static Resources:OperatorApp.GeneralInfoModel}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="90,260,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding Model.InstallationDate}"
                                              LabelText="{x:Static Resources:OperatorApp.GeneralInfoInstallationDate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="90,160,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding Model.TrayCount}"
                                              LabelText="{x:Static Resources:OperatorApp.GeneralInfoTotDrawers}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="440,100,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding Model.SerialNumber}"
                                              LabelText="{x:Static Resources:OperatorApp.GeneralInfoSerial}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="440,160,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding SoftwareVersion}"
                                              LabelText="{x:Static Resources:OperatorApp.GeneralInfoSwRelease}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="440,260,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding Model.NextServiceDate}"
                                              LabelText="{x:Static Resources:OperatorApp.GeneralInfoNextMaintenanceDate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="90,320,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding Model.LastServiceDate}"
                                              LabelText="{x:Static Resources:OperatorApp.GeneralInfoLastMaintenanceDate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="480,320,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding Model.ServiceStatus, Converter={StaticResource MSSEC}}"
                                              LabelText="{x:Static Resources:OperatorApp.GeneralInfoOperativeStatus}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="130,420,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding WmsServicesStatusDescription}"
                                              LabelText="{x:Static Resources:OperatorApp.GeneralInfoWmsStatus}" />

        <Rectangle Name="WmsServicesStatusIndicator"
                   Width="25"
                   Height="25"
                   Margin="90,426,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="{Binding WmsServicesStatusBrush}" />

        <Rectangle Width="25"
                   Height="25"
                   Margin="440,326,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="{Binding MachineServiceStatusBrush}" />

    </Grid>
</UserControl>
