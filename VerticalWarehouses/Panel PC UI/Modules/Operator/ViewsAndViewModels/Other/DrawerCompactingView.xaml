<UserControl x:Class="Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.Other.DrawerCompactingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             mc:Ignorable="d" >

    <Grid    Width="1024" Height="608">

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,40,0,0" MaxWidth="500"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static Resources:OperatorApp.DrawerCompactingHeader}" />

        <controls:PpcButton    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,460,0,0"
                  Content="{x:Static Resources:OperatorApp.DrawerCompactingAntStop}"
                   />

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,170,0,0" MaxWidth="300" IsEnabled="False"
                                               ContentText="8"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerCompactingFragmentNumber}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,230,0,0" MaxWidth="300" IsEnabled="False"
                                               ContentText="200"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerCompactingMaxSpaceRecoverable}"/>

        <controls:PpcButton    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,460,0,0" IsEnabled="False"
                  Content="{x:Static Resources:OperatorApp.DrawerCompactingRearCompact}"
                   />

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,170,0,0" MaxWidth="300" IsEnabled="False"
                                               ContentText="6"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerCompactingFragmentNumber}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,230,0,0" MaxWidth="300" IsEnabled="False"
                                               ContentText="150"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerCompactingMaxSpaceRecoverable}"/>

        <controls:PpcTextBox  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,290,0,0" MaxWidth="300" IsEnabled="False"
                                                    Style="{StaticResource VWAPP_PpcTextBoxStyle}"
                                                    LabelText="{x:Static Resources:OperatorApp.DrawerCompactingSpaceToRecover}" />

        <controls:PpcTextBox  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,290,0,0" MaxWidth="300" IsEnabled="False"
                                                    Style="{StaticResource VWAPP_PpcTextBoxStyle}"
                                                    LabelText="{x:Static Resources:OperatorApp.DrawerCompactingSpaceToRecover}" />
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,110,0,0" MaxWidth="500"
            Style="{StaticResource VWAPP_GeneralTextBlockStyle}"
            Text="{x:Static Resources:OperatorApp.DrawerCompactingFront}" />
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,110,0,0" MaxWidth="500"
            Style="{StaticResource VWAPP_GeneralTextBlockStyle}"
            Text="{x:Static Resources:OperatorApp.DrawerCompactingRear}" />
        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,370,0,0" MaxWidth="300"
            ContentText="Compattazione in corso"
            LabelText="{x:Static Resources:OperatorApp.DrawerCompactingProcedureStatus}"/>
        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,370,0,0" MaxWidth="300" IsEnabled="False"
            ContentText="In attesa"
            LabelText="{x:Static Resources:OperatorApp.DrawerCompactingProcedureStatus}"/>
        <controls:PpcButton  Margin="0,0,20,20"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Command="{Binding DrawerCompactingDetailButtonCommand}"
            Content="{x:Static Resources:OperatorApp.CommonButtonDetail}"
             />

    </Grid>
</UserControl>
