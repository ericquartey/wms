<Window x:Class="Ferretto.VW.App.Modules.Operator.HelpWindows.HelpMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.App.Modules.Operator.HelpWindows"
             xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels"
             xmlns:viewmodelswaitinglists="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.WaitingLists"
             xmlns:viewmodelssearchitem="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.SearchItem"
             xmlns:viewmodelsother="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.Other"
             xmlns:viewmodelsotherstatistics="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.Other.Statistics"
             xmlns:viewsAndViewModels="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels"
             xmlns:helpWindows="clr-namespace:Ferretto.VW.App.Modules.Operator.HelpWindows"
             xmlns:viewmodelsdraweroperation="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.DrawerOperations"
             xmlns:viewmodelsdraweroperationdetails="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.DrawerOperations.Details"
             xmlns:viewmodelswaitinglistslistdetail="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.WaitingLists.ListDetail"
             xmlns:waitingLists="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.WaitingLists"
             xmlns:searchItem="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.SearchItem"
             xmlns:other="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.Other"
             xmlns:statistics="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewsAndViewModels.Other.Statistics"
             Width="1024"
             Height="768"
             mc:Ignorable="d"
             ResizeMode="NoResize"
             WindowStartupLocation="CenterScreen"
             WindowStyle="None">
    <Window.Resources>

        <DataTemplate DataType="{x:Type viewsAndViewModels:IdleViewModel}">
            <helpWindows:HelpInitialPage></helpWindows:HelpInitialPage>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperation:DrawerWaitViewModel}">
            <helpWindows:HelpDrawerWait></helpWindows:HelpDrawerWait>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperation:DrawerActivityPickingViewModel}">
            <helpWindows:HelpDrawerActivityPicking></helpWindows:HelpDrawerActivityPicking>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperationdetails:DrawerActivityPickingDetailViewModel}">
            <helpWindows:HelpDrawerActivityPickingDetail></helpWindows:HelpDrawerActivityPickingDetail>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperationdetails:DrawerActivityRefillingDetailViewModel}">
            <helpWindows:HelpDrawerActivityRefillingDetail></helpWindows:HelpDrawerActivityRefillingDetail>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperationdetails:DrawerActivityInventoryDetailViewModel}">
            <helpWindows:HelpDrawerActivityInventoryDetail></helpWindows:HelpDrawerActivityInventoryDetail>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperation:DrawerActivityRefillingViewModel}">
            <helpWindows:HelpDrawerActivityRefilling></helpWindows:HelpDrawerActivityRefilling>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperation:DrawerActivityInventoryViewModel}">
            <helpWindows:HelpDrawerActivityInventory></helpWindows:HelpDrawerActivityInventory>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelswaitinglistslistdetail:DetailListInWaitViewModel}">
            <helpWindows:HelpDetailListInWait></helpWindows:HelpDetailListInWait>
        </DataTemplate>

        <DataTemplate DataType="{x:Type waitingLists:ListsInWaitViewModel}">
            <helpWindows:HelpListsInWait></helpWindows:HelpListsInWait>
        </DataTemplate>

        <DataTemplate DataType="{x:Type searchItem:ItemSearchViewModel}">
            <helpWindows:HelpItemSearch></helpWindows:HelpItemSearch>
        </DataTemplate>

        <DataTemplate DataType="{x:Type searchItem:ItemDetailViewModel}">
            <helpWindows:HelpItemSearchDetail></helpWindows:HelpItemSearchDetail>
        </DataTemplate>

        <DataTemplate DataType="{x:Type other:ImmediateDrawerCallViewModel}">
            <helpWindows:HelpImmediateDrawerCall></helpWindows:HelpImmediateDrawerCall>
        </DataTemplate>

        <DataTemplate DataType="{x:Type other:DrawerCompactingViewModel}">
            <helpWindows:HelpDrawerCompacting></helpWindows:HelpDrawerCompacting>
        </DataTemplate>

        <DataTemplate DataType="{x:Type other:DrawerCompactingDetailViewModel}">
            <helpWindows:HelpDrawerCompactingDetail></helpWindows:HelpDrawerCompactingDetail>
        </DataTemplate>

        <DataTemplate DataType="{x:Type statistics:DrawerSpaceSaturationViewModel}">
            <helpWindows:HelpDrawerSpaceSaturation></helpWindows:HelpDrawerSpaceSaturation>
        </DataTemplate>

        <DataTemplate DataType="{x:Type statistics:DrawerWeightSaturationViewModel}">
            <helpWindows:HelpDrawerWeightSaturation></helpWindows:HelpDrawerWeightSaturation>
        </DataTemplate>

        <DataTemplate DataType="{x:Type statistics:MachineStatisticsViewModel}">
            <helpWindows:HelpMachineStatistics></helpWindows:HelpMachineStatistics>
        </DataTemplate>

        <DataTemplate DataType="{x:Type statistics:StatisticsGeneralDataViewModel}">
            <helpWindows:HelpStatisticsGeneralData></helpWindows:HelpStatisticsGeneralData>
        </DataTemplate>

        <DataTemplate DataType="{x:Type statistics:CellsStatisticsViewModel}">
            <helpWindows:HelpCellsStatistics></helpWindows:HelpCellsStatistics>
        </DataTemplate>

        <DataTemplate DataType="{x:Type statistics:ErrorsStatisticsViewModel}">
            <helpWindows:HelpErrorsStatistics></helpWindows:HelpErrorsStatistics>
        </DataTemplate>

        <DataTemplate DataType="{x:Type other:MaintenanceMainPageViewModel}">
            <helpWindows:HelpMaintenanceMainPage></helpWindows:HelpMaintenanceMainPage>
        </DataTemplate>

        <DataTemplate DataType="{x:Type other:MaintenanceDetailViewModel}">
            <helpWindows:HelpMaintenanceDetail></helpWindows:HelpMaintenanceDetail>
        </DataTemplate>

        <DataTemplate DataType="{x:Type other:GeneralInfoViewModel}">
            <helpWindows:HelpGeneralInfo></helpWindows:HelpGeneralInfo>
        </DataTemplate>

    </Window.Resources>

    <Grid Width="1024" Height="768"
          Background="{DynamicResource VWAPP_BACKGROUND}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="688"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        
        <ContentPresenter Name="HelpContentRegion" Grid.Row="0"
                          Height="688"
                          Width="1024"
                          Content="{Binding ContentRegionCurrentViewModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </ContentPresenter>
        
        <Button Grid.Row="1"
                Content="Back"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Click="Button_Click"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}">

        </Button>
    </Grid>

</Window>
