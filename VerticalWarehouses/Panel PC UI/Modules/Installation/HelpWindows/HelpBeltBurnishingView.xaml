<UserControl x:Class="Ferretto.VW.App.Installation.HelpWindows.BeltBurnishingHelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             mc:Ignorable="d">
    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">
        <Image Grid.Row="0"
               Width="200"
               Height="60"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,20,0,0"
                   Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.BeltBurnishing}" />

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0"
            ContentText="4500" Width="180"
            LabelText="{x:Static res:InstallationApp.UpperBound}"/>

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,210,0,0"
            ContentText="500" Width="180"
            LabelText="{x:Static res:InstallationApp.LowerBound}" />

        <controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,280,0,0"
            ContentText="3500" Width="180"
            LabelText="{x:Static res:InstallationApp.CurrentPosition}" />

        <controls:CustomLabelTextBlockControl     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,420,0,0"
            ContentText="4500" Width="180"
            LabelText="{x:Static res:InstallationApp.CompletedCicles}" />

        <controls:PpcTextBox  Style="{StaticResource VWAPP_PpcTextBoxStyle}"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,350,0,0"
            Highlighted="True" IsEnabled="True"
            Width="180"
            LabelText="{x:Static res:InstallationApp.RequiredCicles}"/>

        <controls:PpcButton      Content="{x:Static res:InstallationApp.Start}"

            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,140,0,0" />

        <controls:PpcButton      Content="{x:Static res:InstallationApp.Stop}"

            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,210,0,0" />

        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,50,0,0"
                   Width="670" Height="60"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.BeltBurnishingFunctionDescription}" />

        <TextBlock Grid.Row="0"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,140,0,0"
                   Width="260" Height="70"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.BeltBurnishingUpLimit}" />

        <TextBlock Grid.Row="0"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,210,0,0"
            Width="260" Height="70"
            Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
            Text="{x:Static res:HelpDescriptions.BeltBurnishingDownLimit}" />

        <TextBlock Grid.Row="0"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,280,0,0"
            Width="260" Height="70"
            Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
            Text="{x:Static res:HelpDescriptions.BeltBurnishingActualPosition}" />

        <TextBlock Grid.Row="0"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,350,0,0"
            Width="260" Height="70"
            Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
            Text="{x:Static res:HelpDescriptions.BeltBurnishingRequiredCycles}" />

        <TextBlock Grid.Row="0"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,420,0,0"
            Width="260" Height="70"
            Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
            Text="{x:Static res:HelpDescriptions.BeltBurnishingCompletedCycles}" />

        <TextBlock Grid.Row="0"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,140,0,0"
            Width="260" Height="70"
            Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
            Text="{x:Static res:HelpDescriptions.BeltBurnishingStartCycle}" />

        <TextBlock Grid.Row="0"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,210,0,0"
            Width="260" Height="70"
            Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
            Text="{x:Static res:HelpDescriptions.BeltBurnishingStopCycle}" />





    </Grid>
</UserControl>
