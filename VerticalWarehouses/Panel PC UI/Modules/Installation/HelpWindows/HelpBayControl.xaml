<UserControl x:Class="Ferretto.VW.App.Installation.HelpWindows.HelpBayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">

        <Image Width="200"
               Height="60"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock   VerticalAlignment="Top" Margin="320,20,0,0"
                    Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                    Text="{x:Static res:InstallationApp.BayControlHeader}" />

        <TextBlock   Margin="320,50,0,0"
                    Width="670" Height="60"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRDescription}" />

        <TextBlock   Margin="220,140,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRSelectedBay}" />

        <TextBlock    Margin="730,140,0,0"
                     Width="260" Height="70"
                     Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpBCTRMoveToPosition}" />

        <controls:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0"
                                                 Width="180"
                                                 ContentText="1"
                                                 LabelText="{x:Static res:InstallationApp.BayControlSelectedBay}"  />

        <controls:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,210,0,0"
                                                 Width="180"
                                                 ContentText="1"
                                                 LabelText="{x:Static res:InstallationApp.BayControlSelectedPosition}"  />

        <controls:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,280,0,0"
                                                 Width="180"
                                                 LabelText="{x:Static res:InstallationApp.BayControlPositionHeight}"
                                                 ContentText="1256,5" />

        <controls:PpcTextBox  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,350,0,0"
                                                    Width="180"
                                                    Highlighted="True" IsEnabled="True"
                                                    InputText="0,5"
                                                    Style="{StaticResource VWAPP_PpcTextBoxStyle}"
                                                    LabelText="{x:Static res:InstallationApp.BayControlStepValue}" />

        <controls:CustomLabelTextBlockControl      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,420,0,0"
                                                   Width="180"
                                                   ContentText="1258,0"
                                                   LabelText="{x:Static res:InstallationApp.BayControlActualHeight}" />

        <controls:CustomLabelTextBlockControl      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,490,0,0"
                                                   Width="180"
                                                   ContentText="1,5"
                                                   LabelText="{x:Static res:InstallationApp.BayControlCorrectionValue}" />

        <controls:PpcButton      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,140,0,0"
                    Content="{x:Static res:InstallationApp.BayControlMoveToPosition}"
                     />

        <controls:PpcButton      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,210,0,0"
                    Content="{x:Static res:InstallationApp.BayControlStepPiu}"
                     />

        <controls:PpcButton      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,280,0,0"
                    Content="{x:Static res:InstallationApp.BayControlStepMeno}"
                     />

        <controls:PpcButton      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,350,0,0"
                    Content="{x:Static res:InstallationApp.BayControlAdjust}"
                     />

        <controls:PpcButton      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,420,0,0"
                    Content="{x:Static res:InstallationApp.BayControlNextPosition}"
                     />

        <TextBlock  Margin="220,210,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRSelectedPosition}" />

        <TextBlock   Margin="220,280,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRPositionHeight}" />

        <TextBlock  Margin="220,350,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRStepValue}" />

        <TextBlock   Margin="220,420,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRActualHeight}" />

        <TextBlock   Margin="220,490,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRCorrectionValue}" />

        <TextBlock  Margin="730,210,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRStepPiu}" />

        <TextBlock  Margin="730,280,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRStepMeno}" />

        <TextBlock   Margin="730,350,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRAdjust}" />

        <TextBlock   Margin="730,420,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRNextPosition}" />

    </Grid>
</UserControl>
