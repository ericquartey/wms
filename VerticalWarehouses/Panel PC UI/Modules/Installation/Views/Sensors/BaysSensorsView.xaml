<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.BaysSensorsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:iom="clr-namespace:Ferretto.VW.CommonUtils.Enumerations;assembly=Ferretto.VW.CommonUtils"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:views="clr-namespace:Ferretto.VW.App.Installation.Views"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="0,30,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <views:SensorsNavigationView />

        <Grid Grid.Column="1"
              Margin="130,0,90,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{x:Static res:InstallationApp.Bays}" />

            <StackPanel Grid.Row="1"
                        Orientation="Vertical">
                <TextBlock VerticalAlignment="Top"
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="{x:Static res:InstallationApp.Bay1}" />
                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.LuPresentInBay}"
                                           SensorPort="{x:Static iom:IOMachineSensors.LUPresentInBay1}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />

                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.LUPresentMiddleBottomBay}"
                                           SensorPort="{x:Static iom:IOMachineSensors.LUPresentMiddleBottomBay1}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />

                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.HeightControlCheck}"
                                           SensorPort="{x:Static iom:IOMachineSensors.BarrierCalibrationBay1}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />

                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.ShutterSensorA}"
                                           SensorPort="{x:Static iom:IOMachineSensors.AGLSensorAShutterBay1}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />

                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.ShutterSensorB}"
                                           SensorPort="{x:Static iom:IOMachineSensors.AGLSensorBShutterBay1}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Grid.Column="1"
                        Orientation="Vertical">
                <TextBlock VerticalAlignment="Top"
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="{x:Static res:InstallationApp.Bay2}" />
                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.LuPresentInBay}"
                                           SensorPort="{x:Static iom:IOMachineSensors.LUPresentInBay2}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />
                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.LUPresentMiddleBottomBay}"
                                           SensorPort="{x:Static iom:IOMachineSensors.LUPresentMiddleBottomBay2}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />

                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.HeightControlCheck}"
                                           SensorPort="{x:Static iom:IOMachineSensors.BarrierCalibrationBay2}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />

                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.ShutterSensorA}"
                                           SensorPort="{x:Static iom:IOMachineSensors.AGLSensorAShutterBay2}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />

                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.ShutterSensorB}"
                                           SensorPort="{x:Static iom:IOMachineSensors.AGLSensorBShutterBay2}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />
            </StackPanel>

            <StackPanel Grid.Row="2"
                        Orientation="Vertical">
                <TextBlock VerticalAlignment="Top"
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="{x:Static res:InstallationApp.Bay3}" />
                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.LuPresentInBay}"
                                           SensorPort="{x:Static iom:IOMachineSensors.LUPresentInBay3}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />
                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.LUPresentMiddleBottomBay}"
                                           SensorPort="{x:Static iom:IOMachineSensors.LUPresentMiddleBottomBay3}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />
                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.HeightControlCheck}"
                                           SensorPort="{x:Static iom:IOMachineSensors.BarrierCalibrationBay3}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />

                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.ShutterSensorA}"
                                           SensorPort="{x:Static iom:IOMachineSensors.AGLSensorAShutterBay3}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />

                <controls:PpcSensorControl LabelText="{x:Static res:InstallationApp.ShutterSensorB}"
                                           SensorPort="{x:Static iom:IOMachineSensors.AGLSensorBShutterBay3}"
                                           Sensors="{Binding SensorsStates}"
                                           Style="{StaticResource PpcSensorControlStyle}" />
            </StackPanel>
        </Grid>
    </Grid>
</ctrls:View>
