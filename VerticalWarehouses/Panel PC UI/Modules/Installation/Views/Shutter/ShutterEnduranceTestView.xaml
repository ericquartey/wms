<controls1:View x:Class="Ferretto.VW.App.Installation.Views.ShutterEnduranceTestView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
                xmlns:controls1="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:prism="http://prismlibrary.com/"
                xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
                prism:ViewModelLocator.AutoWireViewModel="True"
                mc:Ignorable="d">
    <Grid>

        <TextBlock Grid.Row="0"
                   Margin="260,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.Gate1Control}" />

        <controls:PpcTextBox Margin="260,170,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             InputText="{Binding RequiredCycles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             LabelText="{x:Static res:InstallationApp.RequiredCicles}"
                             Style="{StaticResource VWAPP_PpcTextBoxStyle}" />

        <controls:PpcTextBox Margin="560,170,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             InputText="{Binding DelayBetweenCycles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             LabelText="{x:Static res:InstallationApp.DelayBetweenCicles}"
                             Style="{StaticResource VWAPP_PpcTextBoxStyle}" />

        <controls:CustomLabelTextBlockControl Margin="260,300,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              LabelText="{x:Static res:InstallationApp.CompletedCicles}" />

        <Grid Width="200"
              Height="180"
              Margin="560,240,0,0"
              HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <controls:PpcSensorControl Grid.Row="0"
                                       Margin="0,2,0,2"
                                       BulletColor="{StaticResource FerrettoGreen}"
                                       LabelText="{x:Static res:InstallationApp.Open}" />
            <!--  - optional sensor  -->
            <controls:PpcSensorControl Grid.Row="1"
                                       Margin="0,2,0,2"
                                       BulletColor="{StaticResource FerrettoMediumGray}"
                                       LabelText="{x:Static res:InstallationApp.Middle}" />
            <controls:PpcSensorControl Grid.Row="2"
                                       Margin="0,2,0,2"
                                       BulletColor="{StaticResource FerrettoMediumGray}"
                                       LabelText="{x:Static res:InstallationApp.Closed}" />

        </Grid>

        <controls:PpcButton Grid.Column="0"
                            Margin="560,450,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding StartButtonCommand}"
                            Content="{x:Static res:InstallationApp.Start}"
                            IsEnabled="{Binding IsStartButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <controls:PpcButton Margin="260,450,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding StopButtonCommand}"
                            Content="{x:Static res:InstallationApp.Stop}"
                            IsEnabled="{Binding IsStopButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <controls:PpcSensorControl Margin="560,290,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   LabelText="{x:Static res:InstallationApp.ShutterSensorA}"
                                   SensorState="{Binding LuPresentInBay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource PpcSensorControlStyle}" />

        <controls:PpcSensorControl Margin="560,330,0,0"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   LabelText="{x:Static res:InstallationApp.ShutterSensorB}"
                                   SensorState="{Binding LuPresentInBay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   Style="{StaticResource PpcSensorControlStyle}" />

    </Grid>
</controls1:View>
