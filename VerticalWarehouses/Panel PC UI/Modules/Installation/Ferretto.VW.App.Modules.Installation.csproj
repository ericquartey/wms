<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LanguageTargets>$(MSBuildToolsPath)\Microsoft.CSharp.targets</LanguageTargets>
    <TargetFramework>net471</TargetFramework>
    <OutputType>Library</OutputType>
  </PropertyGroup>

  <PropertyGroup>
    <OutputPath>..\..\VWApp\bin\$(Configuration)</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="System.Xaml" />
    <Reference Include="WindowsBase" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNet.WebApi.Client" Version="5.2.7" />
    <PackageReference Include="Microsoft.AspNetCore.SignalR.Client" Version="1.1.0" />
    <PackageReference Include="Prism.Core" Version="7.1.0.431" />
    <PackageReference Include="Prism.Unity" Version="7.1.0.431" />
    <PackageReference Include="Prism.Wpf" Version="7.1.0.431" />
    <PackageReference Include="System.Configuration.ConfigurationManager" Version="4.5.0" />
    <PackageReference Include="System.Windows.Interactivity.WPF" Version="2.0.20525" />
    <PackageReference Include="Unity" Version="4.0.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\..\Common\Common_Utils\Ferretto.VW.CommonUtils.csproj" />
    <ProjectReference Include="..\..\..\Common\Resources\Ferretto.VW.App.Resources.csproj" />
    <ProjectReference Include="..\..\..\Ferretto.VW.App.Services\Ferretto.VW.App.Services.csproj" />
    <ProjectReference Include="..\..\..\Machine Automation Service\AutomationService.Contracts\Ferretto.VW.MAS.AutomationService.Contracts.csproj" />
    <ProjectReference Include="..\..\CustomControls\Ferretto.VW.App.Controls.csproj" />
    <ProjectReference Include="..\..\Utils\Ferretto.VW.Utils.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <Page Include="**\*.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="ViewsAndViewModels\SensorsState\**" />
    <EmbeddedResource Remove="ViewsAndViewModels\SensorsState\**" />
    <None Remove="ViewsAndViewModels\SensorsState\**" />
    <Page Remove="ViewsAndViewModels\SensorsState\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Views\InstallatorMenuView.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\ManualMovements\CarouselManualMovementsView.xaml.cs">
      <DependentUpon>CarouselManualMovementsView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\ManualMovements\HorizontalAxisManualMovementsView.xaml.cs">
      <DependentUpon>HorizontalAxisManualMovementsView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\ManualMovements\ShutterEngineManualMovementsView.xaml.cs">
      <DependentUpon>ShutterEngineManualMovementsView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\ManualMovements\VerticalEngineManualMovementsView.xaml.cs">
      <DependentUpon>VerticalEngineManualMovementsView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\ManualMovements\ManualMovementsNavigationView.xaml.cs">
      <DependentUpon>ManualMovementsNavigationView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Sensors\ShutterSensorsView.xaml.cs">
      <DependentUpon>ShutterSensorsView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Sensors\CradleSensorsView.xaml.cs">
      <DependentUpon>CradleSensorsView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\InstallatorMenuView.xaml.cs">
      <DependentUpon>InstallatorMenuView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Sensors\BaysSensorsView.xaml.cs">
      <DependentUpon>BaysSensorsView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Sensors\OtherSensorsView.xaml.cs">
      <DependentUpon>OtherSensorsView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Sensors\SensorsNavigationView.xaml.cs">
      <DependentUpon>SensorsNavigationView.xaml</DependentUpon>
    </Compile>
    <Compile Update="Views\Sensors\VerticalAxisSensorsView.xaml.cs">
      <DependentUpon>VerticalAxisSensorsView.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="App.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Views\Elevator\VerticalAxisCalibrationView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Views\Elevator\VerticalOffsetCalibrationView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Views\Sensors\BaysSensorsView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="ViewsAndViewModels\SingleViews\DrawerStoreRecallView.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
  </ItemGroup>

</Project>
