<UserControl x:Class="Ferretto.VW.App.Modules.Layout.Views.HeaderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:enums="clr-namespace:Ferretto.VW.App.Services;assembly=Ferretto.VW.App.Services"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             d:DesignHeight="450"
             d:DesignWidth="800"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">

    <Grid Margin="15">

        <Image Width="180"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               RenderOptions.BitmapScalingMode="HighQuality"
               Source="{DynamicResource Ferretto_Logo}" />

        <StackPanel FlowDirection="RightToLeft"
                    Orientation="Horizontal">

            <ctrls:PpcControl VerticalContentAlignment="Center"
                              Items="{Binding States}"
                              PresentationType="{x:Static enums:PresentationTypes.Help}"
                              Visibility="{Binding IsVisible, Converter={StaticResource BTVC}}">
                <controls:PpcButton Width="60"
                                    Height="60"
                                    BorderThickness="0"
                                    Command="{Binding OpenHelpWindow}">

                    <controls:PpcIcon Height="24"
                                      ColorizeBrush="{DynamicResource PpcButtonForeground}"
                                      Source="pack://application:,,,/Ferretto.VW.App.Themes;Component/Icons/help.png" />




                </controls:PpcButton>
            </ctrls:PpcControl>

            <controls:CustomControlLoggedUser Margin="15,0,15,0"
                                              IsPopupOpen="{Binding IsPopupOpen, Mode=TwoWay}"
                                              Items="{Binding States}"
                                              LogOffCommand="{Binding LogOffCommand}"
                                              OpenClosePopupCommand="{Binding OpenClosePopupCommand}"
                                              UserText="{Binding UserName}"
                                              Visibility="{Binding IsVisible, Converter={StaticResource BTVC}}" />

            <controls:CustomMachineModeToggleButton Margin="15,0,0,0"
                                                    Items="{Binding States}"
                                                    Visibility="{Binding IsVisible, Converter={StaticResource BTVC}}" />

            <controls:CustomMachineOnMarchToggleButton Margin="15,0,0,0"
                                                       Items="{Binding States}"
                                                       Visibility="{Binding IsVisible, Converter={StaticResource BTVC}}" />

            <controls:CustomMainWindowErrorButton Margin="15,0,0,0"
                                                  Items="{Binding States}"
                                                  Visibility="{Binding IsVisible, Converter={StaticResource BTVC}}" />

            <controls:CustomMainWindowDebugButton Margin="15,0,0,0"
                                                  Items="{Binding States}"
                                                  Visibility="{Binding IsVisible, Converter={StaticResource BTVC}}" />

        </StackPanel>

        <StackPanel Name="LoginHeader"
                    HorizontalAlignment="Right"
                    FlowDirection="LeftToRight"
                    Orientation="Horizontal">

            <!--  ToggleThemeCommand  -->
            <ctrls:PpcControl Margin="0,0,15,0"
                              VerticalAlignment="Center"
                              Items="{Binding States}"
                              PresentationType="{x:Static enums:PresentationTypes.Theme}"
                              Visibility="{Binding IsVisible, Converter={StaticResource BTVC}}">
                <controls:PpcButton Command="{Binding ExecuteCommand}">
                    <Button.Content>
                        <StackPanel Height="60"
                                    Orientation="Horizontal">
                            <controls:PpcIcon Height="36"
                                              Margin="15,0"
                                              ColorizeBrush="{DynamicResource PpcButtonForeground}"
                                              Source="{DynamicResource ThemeImageSource}" />

                            <TextBlock Margin="0,0,10,0"
                                       VerticalAlignment="Center">
                                <TextBlock.Style>
                                    <Style>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsDarkThemeActive}"
                                                         Value="True">
                                                <Setter Property="TextBlock.Text" Value="Tema Scuro" />
                                                <Setter Property="TextBlock.Foreground" Value="White" />
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding IsDarkThemeActive}"
                                                         Value="False">
                                                <Setter Property="TextBlock.Text" Value="Tema Chiaro" />
                                                <Setter Property="TextBlock.Foreground" Value="Black" />
                                            </DataTrigger>

                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </StackPanel>
                    </Button.Content>

                </controls:PpcButton>
            </ctrls:PpcControl>

            <!--  SwitchOffCommand  -->
            <ctrls:PpcControl Grid.Row="0"
                              HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Items="{Binding States}"
                              PresentationType="{x:Static enums:PresentationTypes.Shutdown}"
                              Visibility="{Binding IsVisible, Converter={StaticResource BTVC}}">
                <controls:PpcButton Command="{Binding ExecuteCommand}"
                                    Content="{x:Static res:VWApp.SwitchOff}" />
            </ctrls:PpcControl>
        </StackPanel>

    </Grid>
</UserControl>
