<view:View x:Class="Ferretto.VW.App.Modules.Login.Views.LoginView"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:prism="http://prismlibrary.com/"
           xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
           xmlns:view="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
           d:DesignHeight="450"
           d:DesignWidth="800"
           prism:ViewModelLocator.AutoWireViewModel="True"
           mc:Ignorable="d">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="100" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Image Grid.RowSpan="5"
               Grid.Column="2"
               Width="300"
               Height="520"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               RenderOptions.BitmapScalingMode="HighQuality"
               Source="pack://application:,,,/Ferretto.VW.App.Controls;Component/Assets/background_machine.png"
               Stretch="Fill" />

        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   Style="{StaticResource VWAPP_SplashScreenTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.InitializingWithEllipsis}"
                   Visibility="{Binding MachineIdentity, Converter={StaticResource RTVIC}}" />

        <TextBlock Grid.Row="1"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   Style="{StaticResource VWAPP_SplashScreenTitleTextBlockStyle}"
                   Text="{Binding MachineIdentity.ModelName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />

        <StackPanel Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Visibility="{Binding MachineIdentity, Converter={StaticResource RTVC}}">

            <TextBlock VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_SplashScreenSubTitleTextBlockStyle}"
                       Text="Serial Number: " />

            <TextBlock VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_SplashScreenSubTitleTextBlockStyle}"
                       Text="{Binding MachineIdentity.SerialNumber, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />

        </StackPanel>

        <StackPanel Name="LoginForm"
                    Grid.Row="4"
                    Grid.Column="1">

            <ctrls:PpcTextBox Width="200"
                              Margin="0,10"
                              HorizontalAlignment="Left"
                              InputText="{Binding UserLogin.UserName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                              LabelText="{x:Static res:VWApp.UserLogin_UserName}"
                              Style="{StaticResource VWAPP_PpcTextBoxStyle}" />

            <ctrls:PpcTextBox Width="200"
                              Margin="0,10"
                              HorizontalAlignment="Left"
                              InputText="{Binding UserLogin.Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                              LabelText="{x:Static res:VWApp.UserLogin_Password}"
                              Style="{StaticResource VWAPP_PpcTextBoxStyle}" />

            <Button Margin="0,20"
                    HorizontalAlignment="Left"
                    Command="{Binding LoginCommand}"
                    Content="{x:Static res:General.Login}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        </StackPanel>

    </Grid>

</view:View>
