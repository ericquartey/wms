<ctrls:View x:Class="Ferretto.VW.App.Menu.Views.AccessoriesMenuView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:acc="clr-namespace:Ferretto.VW.Utils.Modules;assembly=Ferretto.VW.Utils"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Menu.ViewModels"
            xmlns:views="clr-namespace:Ferretto.VW.App.Menu.Views"
            d:DataContext="{d:DesignInstance Type=viewmodels:AccessoriesMenuViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Margin="15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <views:InstallationNavigationMenuView Grid.Row="1" />
        </Grid>

        <Grid Grid.Column="1"
              Margin="15,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{x:Static res:Menu.AccessoriesMenuName}" />

            <Grid Grid.Row="1">
                <WrapPanel>

                    <controls:PpcButton Title="{x:Static res:Menu.AccessoriesAlphaNumBarMenuTitle}"
                                        Height="130"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.6.1"
                                        BorderBrush="{DynamicResource FerrettoBlue}"
                                        Command="{Binding OpenSettingsCommand}"
                                        CommandParameter="{x:Static acc:Accessories.AlphaNumericBar}"
                                        Content="{x:Static res:Menu.AccessoriesAlphaNumBarMenuDescription}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}"
                                        Visibility="{Binding IsAlphaNumericBarAvailable, Converter={StaticResource BTVC}}" />

                    <controls:PpcButton Title="{x:Static res:Menu.AccessoriesBarcodeReaderMenuTitle}"
                                        Height="130"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.6.2"
                                        BorderBrush="{DynamicResource FerrettoBlue}"
                                        Command="{Binding OpenSettingsCommand}"
                                        CommandParameter="{x:Static acc:Accessories.BarcodeReader}"
                                        Content="{x:Static res:Menu.AccessoriesBarcodeReaderMenuDescription}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}"
                                        Visibility="{Binding IsBarcodeReaderAvailable, Converter={StaticResource BTVC}}" />

                    <controls:PpcButton Title="{x:Static res:Menu.AccessoriesCardReaderMenuTitle}"
                                        Height="130"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.6.3"
                                        BorderBrush="{DynamicResource FerrettoBlue}"
                                        Command="{Binding OpenSettingsCommand}"
                                        CommandParameter="{x:Static acc:Accessories.CardReader}"
                                        Content="{x:Static res:Menu.AccessoriesCardReaderMenuDescription}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}"
                                        Visibility="{Binding IsCardReaderAvailable, Converter={StaticResource BTVC}}" />

                    <controls:PpcButton Title="{x:Static res:Menu.AccessoriesLabelPrinterMenuTitle}"
                                        Height="130"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.6.4"
                                        BorderBrush="{DynamicResource FerrettoBlue}"
                                        Command="{Binding OpenSettingsCommand}"
                                        CommandParameter="{x:Static acc:Accessories.LabelPrinter}"
                                        Content="{x:Static res:Menu.AccessoriesLabelPrinterMenuDescription}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}"
                                        Visibility="{Binding IsLabelPrinterAvailable, Converter={StaticResource BTVC}}" />

                    <controls:PpcButton Title="{x:Static res:Menu.AccessoriesLaserMenuTitle}"
                                        Height="130"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.6.5"
                                        BorderBrush="{DynamicResource FerrettoBlue}"
                                        Command="{Binding OpenSettingsCommand}"
                                        CommandParameter="{x:Static acc:Accessories.LaserPointer}"
                                        Content="{x:Static res:Menu.AccessoriesLaserMenuDescription}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}"
                                        Visibility="{Binding IsLaserPointerAvailable, Converter={StaticResource BTVC}}" />

                    <controls:PpcButton Title="{x:Static res:Menu.AccessoriesTokenReaderMenuTitle}"
                                        Height="130"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.6.6"
                                        BorderBrush="{DynamicResource FerrettoBlue}"
                                        Command="{Binding OpenSettingsCommand}"
                                        CommandParameter="{x:Static acc:Accessories.TokenReader}"
                                        Content="{x:Static res:Menu.AccessoriesTokenReaderMenuDescription}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}"
                                        Visibility="{Binding IsTokenReaderAvailable, Converter={StaticResource BTVC}}" />

                    <controls:PpcButton Title="{x:Static res:Menu.AccessoriesWeightingScaleMenuTitle}"
                                        Height="130"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.6.7"
                                        BorderBrush="{DynamicResource FerrettoBlue}"
                                        Command="{Binding OpenSettingsCommand}"
                                        CommandParameter="{x:Static acc:Accessories.WeightingScale}"
                                        Content="{x:Static res:Menu.AccessoriesWeightingScaleMenuDescription}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}"
                                        Visibility="{Binding IsWeightingScaleAvailable, Converter={StaticResource BTVC}}" />

                </WrapPanel>
            </Grid>

            <views:InstallationNavigationFooterView Grid.Row="2"
                                                    HorizontalAlignment="Right" />

        </Grid>
    </Grid>
</ctrls:View>
