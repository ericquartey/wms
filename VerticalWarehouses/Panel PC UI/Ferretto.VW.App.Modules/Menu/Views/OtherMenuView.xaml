<ctrls:View x:Class="Ferretto.VW.App.Menu.Views.OtherMenuView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Menu.ViewModels"
            xmlns:views="clr-namespace:Ferretto.VW.App.Menu.Views"
            d:DataContext="{d:DesignInstance Type=viewmodels:OtherMenuViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Margin="15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <views:InstallationNavigationMenuView Grid.Row="1" />
        </Grid>

        <Grid Grid.Column="1"
              Margin="15,0">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{x:Static res:Menu.OtherMenuName}" />

            <WrapPanel Grid.Row="1">

                <controls:PpcButton Title="{x:Static res:InstallationApp.ManageUserMenuTitle}"
                                    Margin="0,0,30,30"
                                    Padding="-2,1,0,0"
                                    Abbrevation="4.7.1"
                                    BorderBrush="{DynamicResource FerrettoRed}"
                                    Command="{Binding MenuUsersCommand}"
                                    Content="{x:Static res:InstallationApp.manageUserMenuDescription}"
                                    IsEnabled="False"
                                    Kind="Account"
                                    Style="{DynamicResource PpcButtonMenuCardStyle}" />

                <controls:PpcButton Title="{x:Static res:InstallationApp.WMSComunicationMenuTitle}"
                                    Margin="0,0,30,30"
                                    Padding="-2,1,0,0"
                                    Abbrevation="4.7.2"
                                    BorderBrush="{DynamicResource FerrettoRed}"
                                    Command="{Binding MenuComunicationWmsCommand}"
                                    Content="{x:Static res:InstallationApp.WMSComunicationMenuDescription}"
                                    IsEnabled="True"
                                    Kind="Account"
                                    Style="{DynamicResource PpcButtonMenuCardStyle}" />

                <controls:PpcButton Title="{x:Static res:InstallationApp.ParametersMenuTitle}"
                                    Margin="0,0,30,30"
                                    Padding="-2,1,0,0"
                                    Abbrevation="4.7.3"
                                    BorderBrush="{DynamicResource FerrettoRed}"
                                    Command="{Binding MenuParametersCommand}"
                                    Content="{x:Static res:InstallationApp.ParametersMenuDescription}"
                                    Kind="Account"
                                    Style="{DynamicResource PpcButtonMenuCardStyle}" />

                <controls:PpcButton Title="{x:Static res:InstallationApp.InverterParameterizationMenuTitle}"
                                    Margin="0,0,30,30"
                                    Padding="-2,1,0,0"
                                    Abbrevation="4.7.4"
                                    BorderBrush="{DynamicResource FerrettoRed}"
                                    Command="{Binding MenuParameterInverterCommand}"
                                    Content="{x:Static res:InstallationApp.InverterParameterizationMenuDescription}"                                    
                                    Kind="Account"
                                    Style="{DynamicResource PpcButtonMenuCardStyle}" />

                <controls:PpcButton Title="{x:Static res:InstallationApp.DateTimeMenuTitle}"
                                    Margin="0,0,30,30"
                                    Padding="-2,1,0,0"
                                    Abbrevation="4.7.5"
                                    BorderBrush="{DynamicResource FerrettoRed}"
                                    Command="{Binding MenuDateTimeCommand}"
                                    Content="{x:Static res:InstallationApp.DateTimeMenuDescription}"
                                    Kind="Account"
                                    Style="{DynamicResource PpcButtonMenuCardStyle}" />

            </WrapPanel>

            <views:InstallationNavigationFooterView Grid.Row="2"
                                                    HorizontalAlignment="Right" />
        </Grid>


    </Grid>
</ctrls:View>
