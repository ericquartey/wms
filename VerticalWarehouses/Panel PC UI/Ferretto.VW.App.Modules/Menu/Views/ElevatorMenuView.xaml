<ctrls:View x:Class="Ferretto.VW.App.Menu.Views.ElevatorMenuView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Menu.ViewModels"
            xmlns:views="clr-namespace:Ferretto.VW.App.Menu.Views"
            d:DataContext="{d:DesignInstance Type=viewmodels:ElevatorMenuViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Margin="15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <views:InstallationNavigationMenuView Grid.Row="1" />
        </Grid>

        <Grid Grid.Column="1"
              Margin="15,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="Menu Elevatore" />

            <Grid Grid.Row="1">
                <WrapPanel>

                    <controls:PpcButton Title="Origine asse verticale"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.2.1"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding VerticalOriginCalibrationCommand}"
                                        Content="Effettua la calibrazione dell'origine dell'asse verticale"
                                        IsCompleted="{Binding IsHoming}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Risoluzione asse verticale"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.2.2"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding VerticalResolutionCalibrationCommand}"
                                        Content="Effettua la calibrazione della risoluzione dell'asse verticale"
                                        IsCompleted="{Binding IsVerticalResolutionCalibration}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Offset asse verticale"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.2.3"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding VerticalOffsetCalibrationCommand}"
                                        Content="Effettua la calibrazione dell'offset dell'asse verticale"
                                        IsCompleted="{Binding IsVerticalOffsetProcedure}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Analisi profilo peso"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.2.4"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding WeightAnalysisCommand}"
                                        Content="Effettua il campionamento dei valori di corrente per l'acquisizione del peso"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}"
                                        Visibility="Collapsed" />

                    <controls:PpcButton Title="Rodaggio cinghia"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.2.4"
                                        BorderBrush="{DynamicResource FerrettoOrange}"
                                        Command="{Binding BeltBurnishingCommand}"
                                        Content="Effettua una serie di cicli di spostamento dell'asse verticale"
                                        IsCompleted="{Binding IsBeltBurnishing}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />


                    <controls:PpcButton Title="Imbarco / Sbarco"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.2.5"
                                        BorderBrush="{DynamicResource FerrettoOrange}"
                                        Command="{Binding TestDepositAndPickUpCommand}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />


                </WrapPanel>
            </Grid>

            <views:InstallationNavigationFooterView Grid.Row="2"
                                                    HorizontalAlignment="Right" />

        </Grid>

    </Grid>

</ctrls:View>
