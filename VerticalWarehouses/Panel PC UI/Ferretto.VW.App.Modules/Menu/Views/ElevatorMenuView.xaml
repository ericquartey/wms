<ctrls:View x:Class="Ferretto.VW.App.Menu.Views.ElevatorMenuView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Menu.ViewModels"
            d:DataContext="{d:DesignInstance Type=viewmodels:ElevatorMenuViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid Margin="80">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Menu Elevatore" />

        <Grid Grid.Row="1"
              Margin="15">
            <WrapPanel>

                <controls:PpcButton Width="175"
                                    Margin="15"
                                    Command="{Binding VerticalOriginCalibrationCommand}"
                                    Content="Calibrazione origine asse verticale" />

                <controls:PpcButton Width="175"
                                    Margin="15"
                                    Command="{Binding VerticalResolutionCalibrationCommand}"
                                    Content="Calibrazione risoluzione asse verticale" />

                <controls:PpcButton Width="175"
                                    Margin="15"
                                    Command="{Binding VerticalOffsetCalibrationCommand}"
                                    Content="Calibrazione offset asse verticale" />

                <controls:PpcButton Width="175"
                                    Margin="15"
                                    Command="{Binding WeightMeasurementCommand}"
                                    Visibility="Collapsed"
                                    Content="Controllo Peso" />

                <controls:PpcButton Width="175"
                                    Margin="15"
                                    Command="{Binding WeightAnalysisCommand}"
                                    Visibility="Collapsed"
                                    Content="Analisi profilo peso" />

            </WrapPanel>
        </Grid>

        <TextBlock Grid.Row="3"
                   Grid.ColumnSpan="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Test" />

        <Grid Grid.Row="4"
              Margin="15">
            <WrapPanel>

                <controls:PpcButton Width="175"
                                    Margin="15"
                                    Command="{Binding BeltBurnishingCommand}"
                                    Content="Rodaggio cinghia" />

            </WrapPanel>
        </Grid>

    </Grid>
</ctrls:View>
