<UserControl x:Class="Ferretto.VW.App.Menu.Views.InstallationNavigationMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             d:DesignHeight="700"
             d:DesignWidth="1024"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:PpcButton Grid.Row="0"
                            Margin="0"
                            Padding="-2,1,0,0"
                            Abbrevation="4.1"
                            BorderBrush="{DynamicResource FerrettoRed}"
                            Command="{Binding MenuInstallatorCommand}"
                            Content="{res:Loc Menu.Installation}"
                            IsActive="{Binding IsGeneralActive}"
                            Kind="Magnify"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

        <controls:PpcButton Grid.Row="1"
                            Margin="0,15,0,0"
                            Padding="-2,1,0,0"
                            Abbrevation="4.2"
                            BorderBrush="{DynamicResource FerrettoRed}"
                            Command="{Binding MenuElevatorCommand}"
                            Content="{res:Loc Menu.MenuElevator}"
                            IsActive="{Binding IsElevatorActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

        <controls:PpcButton Grid.Row="2"
                            Margin="0,15,0,0"
                            Padding="-2,1,0,0"
                            Abbrevation="4.3"
                            BorderBrush="{DynamicResource FerrettoRed}"
                            Command="{Binding MenuBaysCommand}"
                            Content="{res:Loc Menu.Bay}"
                            IsActive="{Binding IsBaysActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

        <controls:PpcButton Grid.Row="3"
                            Margin="0,15,0,0"
                            Padding="-2,1,0,0"
                            Abbrevation="4.4"
                            BorderBrush="{DynamicResource FerrettoRed}"
                            Command="{Binding MenuCellsCommand}"
                            Content="{res:Loc Menu.MenuCells}"
                            IsActive="{Binding IsCellsActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

        <controls:PpcButton Grid.Row="4"
                            Margin="0,15,0,0"
                            Padding="-2,1,0,0"
                            Abbrevation="4.5"
                            BorderBrush="{DynamicResource FerrettoRed}"
                            Command="{Binding MenuLoadingUnitsCommand}"
                            Content="{res:Loc Menu.MenuLoadingUnits}"
                            IsActive="{Binding IsLoadingUnitsActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

        <controls:PpcButton Grid.Row="5"
                            Margin="0,15,0,0"
                            Padding="-2,1,0,0"
                            Abbrevation="4.6"
                            BorderBrush="{DynamicResource FerrettoRed}"
                            Command="{Binding MenuAccessoriesCommand}"
                            Content="{res:Loc Menu.MenuAccessories}"
                            IsActive="{Binding IsAccessoriesActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

        <controls:PpcButton Grid.Row="6"
                            Margin="0,15,0,0"
                            Padding="-2,1,0,0"
                            Abbrevation="4.7"
                            BorderBrush="{DynamicResource FerrettoRed}"
                            Command="{Binding MenuOtherCommand}"
                            Content="{res:Loc Menu.Other}"
                            IsActive="{Binding IsOtherActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

    </Grid>
</UserControl>
