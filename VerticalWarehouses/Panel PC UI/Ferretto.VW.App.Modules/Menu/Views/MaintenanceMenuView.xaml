<ctrls:View x:Class="Ferretto.VW.App.Menu.Views.MaintenanceMenuView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Menu.ViewModels"
            d:DataContext="{d:DesignInstance Type=viewmodels:MaintenanceMenuViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Menu Manutenzione" />

        <Grid Grid.Row="0"
              Margin="15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <controls:PpcButton Grid.Row="0"
                                Margin="0,0,15,15"
                                HorizontalAlignment="Left"
                                Command="{Binding MenuMaintenanceCommand}"
                                Content="Manutenzione" />

            <controls:PpcButton Grid.Row="1"
                                Margin="0,0,15,15"
                                HorizontalAlignment="Left"
                                Command="{Binding MenuCompactionCommand}"
                                Content="Compattazione" />

            <controls:PpcButton Grid.Row="2"
                                Margin="0,0,15,15"
                                HorizontalAlignment="Left"
                                Command="{Binding MenuParametersCommand}"
                                Content="Parametri" />

            <controls:PpcButton Grid.Row="3"
                                Margin="0,0,15,15"
                                HorizontalAlignment="Left"
                                Command="{Binding MenuBackupCommand}"
                                Content="Backup" />

            <controls:PpcButton Grid.Row="5"
                                Margin="0,0,15,15"
                                HorizontalAlignment="Left"
                                Command="{Binding MenuRestoreCommand}"
                                Content="Restore" />

            <controls:PpcButton Grid.Row="6"
                                Margin="0,0,15,15"
                                HorizontalAlignment="Left"
                                Command="{Binding MenuUpdateCommand}"
                                Content="Aggiornamento" />

            <controls:PpcButton Grid.Row="7"
                                Margin="0,0,15,15"
                                HorizontalAlignment="Left"
                                Command="{Binding MenuUsersCommand}"
                                Content="Gestione Utenti" />

            <controls:PpcButton Grid.Row="8"
                                Margin="0,0,15,15"
                                HorizontalAlignment="Left"
                                Command="{Binding MenuComunicationWmsCommand}"
                                Content="Comunicazione WMS" />
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="1" />

    </Grid>
</ctrls:View>
