<ctrls:View x:Class="Ferretto.VW.App.Menu.Views.CellsMenuView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Menu.ViewModels"
            xmlns:views="clr-namespace:Ferretto.VW.App.Menu.Views"
            d:DataContext="{d:DesignInstance Type=viewmodels:CellsMenuViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Margin="15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <views:InstallationNavigationMenuView Grid.Row="1" />
        </Grid>

        <Grid Grid.Column="1"
              Margin="15,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="Menu Celle" />

            <Grid Grid.Row="1">
                <WrapPanel>

                    <controls:PpcButton Title="Gestione celle"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.4.1"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding CellsCommand}"
                                        IsEnabled="False"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Controllo pannelli mensola"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.4.2"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding CellPanelsCheckCommand}"
                                        Content="Verifica la quota delle celle, suddivise per pannello, tenendo traccia dei posizionamenti di verifica effettuati"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Controllo quote celle"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.4.3"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding CellsHeightCheckCommand}"
                                        Content="Verifica la quota di una o più celle"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Modifica blocco celle"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.4.4"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding CellsBlockTuningCommand}"
                                        Content="Applica una correzione ad un gruppo di celle"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Test celle"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.4.5"
                                        BorderBrush="{DynamicResource FerrettoOrange}"
                                        Command="{Binding BayFirstLoadingUnitCommand}"
                                        Content="Carico primo cassetto e test celle"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                </WrapPanel>
            </Grid>

            <views:InstallationNavigationFooterView Grid.Row="2"
                                                    HorizontalAlignment="Right" />

        </Grid>
    </Grid>
</ctrls:View>
