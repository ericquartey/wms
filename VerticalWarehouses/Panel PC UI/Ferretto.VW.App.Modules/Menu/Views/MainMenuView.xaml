<ctrls:View x:Class="Ferretto.VW.App.Menu.Views.MainMenuView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Menu.ViewModels"
            d:DataContext="{d:DesignInstance Type=viewmodels:MainMenuViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Grid.RowSpan="2"
              Grid.Column="1"
              Margin="0,0,70,20">
            <Image Margin="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   Source="pack://application:,,,/Ferretto.VW.App.Controls;Component/Assets/background_machine.png"
                   Stretch="Uniform" />
        </Grid>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="50,25">

            <TextBlock Grid.Row="1"
                       Margin="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_SplashScreenTitleTextBlockStyle}"
                       Text="{Binding MachineIdentity.ModelName, FallbackValue='ModelName'}" />

            <TextBlock Grid.Row="2"
                       Margin="0,25"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_SplashScreenSubTitleTextBlockStyle}"
                       Text="{Binding MachineIdentity.SerialNumber, StringFormat={x:Static res:VWApp.SerialNumber}, FallbackValue='SerialNumber'}" />

        </StackPanel>

        <Grid Grid.Row="1"
              Margin="30,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <WrapPanel Margin="0,0,30,80"
                       VerticalAlignment="Center">

                <controls:PpcMenuButton Height="140"
                                        Margin="30,30,0,0"
                                        Abbreviation="O"
                                        Command="{Binding MenuOperationCommand}"
                                        Kind="Account"
                                        MenuBrush="{StaticResource FerrettoGreen}"
                                        Text="{x:Static res:Menu.MenuOperation}" />

                <controls:PpcMenuButton Height="140"
                                        Margin="30,30,0,0"
                                        Abbreviation="M"
                                        Command="{Binding MenuMaintenanceCommand}"
                                        Kind="Settings"
                                        MenuBrush="{StaticResource FerrettoOrange}"
                                        Permition="Installer"
                                        Text="{x:Static res:Menu.MenuMaintenance}" />

                <controls:PpcMenuButton Height="140"
                                        Margin="30,30,0,0"
                                        Abbreviation="I"
                                        Command="{Binding MenuInstalationCommand}"
                                        Kind="AutoFix"
                                        MenuBrush="{StaticResource FerrettoRed}"
                                        Permition="Installer"
                                        Text="{x:Static res:Menu.MenuInstalation}" />

                <controls:PpcMenuButton Height="140"
                                        Margin="30,30,0,0"
                                        Abbreviation="A"
                                        Command="{Binding MenuAboutCommand}"
                                        Kind="AlertCircleOutline"
                                        MenuBrush="{StaticResource FerrettoBlue}"
                                        Text="{x:Static res:Menu.MenuAbout}" />

            </WrapPanel>

        </Grid>

        <controls:PpcBadge Grid.RowSpan="2"
                           Grid.ColumnSpan="2"
                           Margin="30,30"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           TextBadge="{Binding BayNumber, StringFormat={x:Static res:VWApp.BayNumber}}" />
        <!--  , FallbackValue='1'  -->
    </Grid>
</ctrls:View>
