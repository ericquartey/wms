<ctrls:View x:Class="Ferretto.VW.App.Menu.Views.MainMenuView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Menu.ViewModels"
            d:DataContext="{d:DesignInstance Type=viewmodels:MainMenuViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Grid.RowSpan="2"
              Grid.Column="1"
              Margin="50,50">
            <Image Grid.Row="1"
                   Grid.Column="2"
                   Margin="0"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Bottom"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   Source="pack://application:,,,/Ferretto.VW.App.Controls;Component/Assets/background_machine.png"
                   Stretch="Uniform" />
        </Grid>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="50,25">

            <TextBlock Grid.Row="1"
                       Margin="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_SplashScreenTitleTextBlockStyle}"
                       Text="{Binding MachineIdentity.ModelName, FallbackValue='ModelName'}" />

            <TextBlock Grid.Row="2"
                       Margin="0,25"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_SplashScreenSubTitleTextBlockStyle}"
                       Text="{Binding MachineIdentity.SerialNumber, StringFormat={x:Static res:VWApp.SerialNumber}, FallbackValue='SerialNumber'}" />

        </StackPanel>

        <Grid Grid.Row="1"
              Margin="30,30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <WrapPanel Grid.Row="1"
                           Margin="0,0,50,50">

                    <controls:PpcButton Margin="50,50,0,0"
                                        Command="{Binding MenuOperationCommand}"
                                        Content="{x:Static res:Menu.MenuOperation}" />

                    <controls:PpcButton Margin="50,50,0,0"
                                        Command="{Binding MenuMaintenanceCommand}"
                                        Content="{x:Static res:Menu.MenuMaintenance}"
                                        Permition="SuperUser" />

                    <controls:PpcButton Margin="50,50,0,0"
                                        Command="{Binding MenuInstalationCommand}"
                                        Content="{x:Static res:Menu.MenuInstalation}"
                                        Permition="Admin" />

                    <controls:PpcButton Margin="50,50,0,0"
                                        Command="{Binding MenuAboutCommand}"
                                        Content="{x:Static res:Menu.MenuAbout}"
                                        Permition="User" />
                </WrapPanel>

            </Grid>
        </Grid>

        <controls:PpcBadge Grid.RowSpan="2"
                           Grid.ColumnSpan="2"
                           Margin="30,30"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           LabelText="{Binding BayNumber, StringFormat={x:Static res:VWApp.BayNumber}, FallbackValue='Baia 1'}" />
    </Grid>
</ctrls:View>
