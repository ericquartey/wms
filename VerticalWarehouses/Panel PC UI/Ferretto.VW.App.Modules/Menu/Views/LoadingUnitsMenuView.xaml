<ctrls:View x:Class="Ferretto.VW.App.Menu.Views.LoadingUnitsMenuView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Menu.ViewModels"
            xmlns:views="clr-namespace:Ferretto.VW.App.Menu.Views"
            d:DataContext="{d:DesignInstance Type=viewmodels:LoadingUnitsMenuViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Margin="15,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <views:InstallationNavigationMenuView Grid.Row="1" />
        </Grid>

        <Grid Grid.Column="1"
              Margin="15,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="Menu Cassetti" />

            <Grid Grid.Row="1"
                  Grid.RowSpan="2">
                <WrapPanel>

                    <controls:PpcButton Title="Gestione cassetto"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.5.1"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding LoadingUnitsCommand}"
                                        IsEnabled="False"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Inserimento"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.5.2"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding InsertionLoadingUnitsCommand}"
                                        Content="Procedura di inserimento nuovo cassetto"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Rimozione"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.5.3"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding ExtractionLoadingUnitsCommand}"
                                        Content="Procedura di rimozione cassetto"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Spostamento"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.5.4"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding MoveLoadingUnitsCommand}"
                                        Content="Procedura di spostamento cassetto da cella a cella"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Spostamento da Baia a Baia"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.5.5"
                                        BorderBrush="{DynamicResource FerrettoRed}"
                                        Command="{Binding LoadingUnitsBayToBayCommand}"
                                        Content="Procedura di spostamento cassetto da baia a baia"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                    <controls:PpcButton Title="Completo"
                                        Margin="0,0,30,30"
                                        Padding="-2,1,0,0"
                                        Abbrevation="4.5.6"
                                        BorderBrush="{DynamicResource FerrettoOrange}"
                                        Command="{Binding TestCompleteCommand}"
                                        Kind="Account"
                                        Style="{DynamicResource PpcButtonMenuCardStyle}" />

                </WrapPanel>
            </Grid>

            <views:InstallationNavigationFooterView Grid.Row="2"
                                                    HorizontalAlignment="Right" />

        </Grid>
    </Grid>
</ctrls:View>
