<ctrls:View x:Class="Ferretto.VW.App.Modules.Errors.Views.ErrorDetailsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            d:DesignHeight="608"
            d:DesignWidth="774"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       MinHeight="100"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{x:Static res:VWApp.ErrorRecoveryProcedure}" />

            <StackPanel Grid.Row="1"
                        MinHeight="100"
                        HorizontalAlignment="Left"
                        Orientation="Vertical">
                <TextBlock Margin="0,1,5,1"
                           Style="{StaticResource VWAPP_CustomLabel_LabelTextBlockStyle}"
                           Text="{x:Static res:VWApp.ErrorCode}" />
                <TextBlock Margin="0,1,5,1"
                           Padding="10,5,10,5"
                           Background="Red"
                           Style="{StaticResource VWAPP_CustomLabel_ContentTextBlockStyle}"
                           Text="{Binding Error.Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue={x:Static res:General.TargetNullValue}}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
            </StackPanel>

            <local:PpcLabeledText Grid.Row="1"
                                               Grid.Column="1"
                                               MinHeight="100"
                                               HorizontalAlignment="Left"
                                               ContentText="{Binding Error.Definition.Description}"
                                               LabelText="{x:Static res:VWApp.ErrorDescription}" />

            <local:PpcLabeledText Grid.Row="2"
                                               Grid.ColumnSpan="2"
                                               MinHeight="100"
                                               HorizontalAlignment="Left"
                                               ContentText="{Binding Error.Definition.Reason}"
                                               LabelText="{x:Static res:VWApp.ErrorReason}" />


            <local:PpcButton Grid.Row="3"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Command="{Binding MarkAsResolvedCommand}"
                             Content="Marca come risolto" />

        </Grid>
    </Grid>
</ctrls:View>
