<ctrls:View x:Class="Ferretto.VW.App.Modules.Errors.Views.ErrorLoadunitMissingView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Modules.Errors.ViewModels"
            d:DataContext="{d:DesignInstance Type=viewmodels:ErrorLoadunitMissingViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="608"
            d:DesignWidth="774"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="15,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Cassetto sconosciuto" />

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <controls:PpcLabeledText HorizontalAlignment="Left"
                                     ContentText="{Binding Error.Definition.Description}"
                                     LabelText="{x:Static res:VWApp.ErrorDescription}" />

            <StackPanel Grid.Column="1"
                        Margin="0,0,15,0"
                        HorizontalAlignment="Right"
                        Orientation="Vertical">
                <TextBlock Margin="0"
                           Style="{DynamicResource VWAPP_CustomLabel_LabelTextBlockStyle}"
                           Text="{x:Static res:VWApp.ErrorCode}" />
                <TextBlock Margin="0"
                           Background="{DynamicResource FerrettoRed}"
                           Style="{DynamicResource VWAPP_CustomLabel_ContentTextBlockStyle}"
                           Text="{Binding Error.Code, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, TargetNullValue={x:Static res:General.TargetNullValue}}"
                           TextAlignment="Center"
                           TextWrapping="Wrap" />
            </StackPanel>

            <controls:PpcLabeledText Grid.Column="2"
                                     Margin="0,0,15,0"
                                     HorizontalAlignment="Right"
                                     ContentText="{Binding ErrorTime}"
                                     LabelText="{x:Static res:VWApp.FirstSeen}" />

            <controls:PpcLabeledText Grid.Column="3"
                                     HorizontalAlignment="Right"
                                     ContentText="{Binding Error.Id}"
                                     LabelText="Id" />

            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.ColumnSpan="3"
                                     Margin="0,15,0,0"
                                     HorizontalAlignment="Left"
                                     ContentText="{Binding Error.Definition.Reason}"
                                     LabelText="{x:Static res:VWApp.ErrorReason}" />

            <controls:PpcButton Grid.Row="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                Command="{Binding MarkAsResolvedCommand}"
                                Content="{x:Static res:VWApp.MarkAsResolved}" />


            <ctrls:PpcSpinEdit Grid.Row="2"
                               Grid.Column="2"
                               Margin="0,0,15,0"
                               HorizontalAlignment="Right"
                               VerticalAlignment="Bottom"
                               EditValue="{Binding InputLoadingUnitId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               IsEnabled="{Binding CanInputLoadingUnitId}"
                               KeyboardCloseCommand="{Binding KeyboardCloseCommand}"
                               KeyboardOpenCommand="{Binding KeyboardOpenCommand}"
                               LabelText=""
                               Mask="#0"
                               WidthNumber="200" />

            <controls:PpcButton Grid.Row="2"
                                Grid.Column="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Command="{Binding MoveLoadunitCommand}"
                                Content="Rientra cassetto" />

        </Grid>
    </Grid>
</ctrls:View>
