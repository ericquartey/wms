<Window x:Class="Ferretto.VW.App.Modules.Operator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Width="1024"
        Height="768"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <!--<Window.Resources>
        <ResourceDictionary Source="Resources/Views.xaml" />
    </Window.Resources>-->

    <Grid Background="{DynamicResource VWAPP_BACKGROUND}">
        <Grid.RowDefinitions>
            <RowDefinition Name="upperRow"
                           Height="80" />
            <RowDefinition Height="608" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    Background="{DynamicResource VWAPP_BACKGROUND}"
                    BorderThickness="0">
                <Image Width="250"
                       Height="50"
                       Margin="10,15,0,0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       RenderOptions.BitmapScalingMode="HighQuality"
                       Source="{DynamicResource Ferretto_Logo}"
                       Stretch="Uniform" />
            </Border>
            <Border Grid.Column="1"
                    Background="{DynamicResource VWAPP_BACKGROUND}"
                    BorderThickness="0">
                <StackPanel FlowDirection="RightToLeft"
                            Orientation="Horizontal"
                            ScrollViewer.CanContentScroll="True">
                    <controls:PpcButton Width="60"
                                        Height="60"
                                        Margin="10,0,10,0"
                                        VerticalContentAlignment="Center"
                                        Background="{DynamicResource VWAPP_BACKGROUND}"
                                        BorderBrush="{DynamicResource VWAPP_CustomMachineModeToggleButton_BorderBrush_Normal}"
                                        BorderThickness="1"
                                        Command="{Binding OpenHelpWindow}">
                        <TextBlock FontSize="25"
                                   Foreground="{DynamicResource FerrettoPureWhite}"
                                   TextAlignment="Center">
                            ?
                        </TextBlock>
                    </controls:PpcButton>
                    <controls:CustomControlLoggedUser Margin="20,0,20,0" />

                    <!--
                        IsPopupOpen="{Binding IsPopupOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        LogOffCommand="{Binding LogOffCommand}"
                        OpenClosePopupCommand="{Binding OpenClosePopupCommand}"
                        UserText="{Binding LoggedUser, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    -->

                    <controls:CustomMachineModeToggleButton Name="MachineModeControl" />
                    <controls:CustomMachineOnMarchToggleButton Name="MachineOnMarchControl"
                                                               Margin="10,0,0,0" />
                    <controls:CustomMainWindowErrorButton Margin="10,0,0,0"
                                                          Visibility="Collapsed" />
                    <!--<controls:CustomMainWindowServiceButton Margin="10,0,0,0"
                                                            ContentText="Service"
                                                            CustomCommand="{Binding ErrorButtonCommand}"
                                                            Visibility="Collapsed" />-->
                </StackPanel>
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <ContentControl Name="InstallationPageRegionContentControl"
                            Grid.Column="1"
                            Width="auto"
                            Height="610"
                            Content="{Binding ContentRegionCurrentViewModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <ContentControl Name="InstallationPageNavigationButtonsRegionContentControl"
                            Grid.Column="0"
                            Height="610"
                            Content="{Binding NavigationRegionCurrentViewModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <ContentControl Grid.Row="2"
                        Content="{Binding ExitViewButtonRegionCurrentViewModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</Window>
