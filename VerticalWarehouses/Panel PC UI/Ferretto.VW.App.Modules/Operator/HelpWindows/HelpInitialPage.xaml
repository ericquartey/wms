<UserControl x:Class="Ferretto.VW.App.Modules.Operator.HelpWindows.HelpInitialPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.App.Modules.Operator.HelpWindows"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">

        <Image Width="200"
               Height="60"
               Margin="10,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock Margin="320,20,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainPageHeadr}" />

        <TextBlock Width="670"
                   Height="60"
                   Margin="320,50,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainPageDescription}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="190,120,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainManu}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="740,120,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainUser}" />

        <controls:PpcButton Margin="510,260,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static res:OperatorApp.NavigationMainMenuDrawerOperation}"
                            IsEnabled="True"
                            Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <controls:PpcButton Margin="510,330,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static res:OperatorApp.NavigationMainMenuItems}"
                            IsEnabled="True"
                            Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <controls:PpcButton Margin="510,400,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static res:OperatorApp.NavigationMainMenuLists}"
                            IsEnabled="True"
                            Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <controls:PpcButton Margin="510,470,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static res:OperatorApp.NavigationMainMenuOther}"
                            IsEnabled="{Binding IsLowSpeedMovementsTestButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <controls:PpcButton Width="60"
                            Height="60"
                            Margin="510,190,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            VerticalContentAlignment="Center"
                            Background="{DynamicResource VWAPP_BACKGROUND}"
                            BorderBrush="{DynamicResource VWAPP_CustomMachineModeToggleButton_BorderBrush_Normal}"
                            BorderThickness="1">

            <TextBlock FontSize="25"
                       Foreground="{DynamicResource FerrettoPureWhite}"
                       TextAlignment="Center"><Run Text="?" />
            </TextBlock>

        </controls:PpcButton>

        <controls:CustomControlLoggedUser Margin="510,120,0,0"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top" />
        <!--
            IsPopupOpen="False"
            UserText="Operator"
        -->

        <controls:CustomMachineModeToggleButton Margin="20,120,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top" />

        <controls:CustomMachineModeToggleButton Margin="20,190,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top" />

        <controls:CustomMachineOnMarchToggleButton Margin="20,260,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top" />

        <controls:CustomMachineOnMarchToggleButton Margin="20,330,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top" />

        <controls:CustomMainWindowServiceButton Margin="20,400,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                ContentText="Service" />

        <controls:CustomMainWindowServiceButton Margin="20,470,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                ContentText="Service" />


        <controls:CustomMainWindowErrorButton Margin="20,540,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Visibility="Visible" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="190,190,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainAuto}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="190,260,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainOff}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="190,330,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainOn}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="190,400,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainServiceAdvice}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="190,470,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainServiceAllert}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="190,540,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainError}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="740,190,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainHelp}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="740,260,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainDrawerOp}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="740,330,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainItem}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="740,400,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainLists}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="740,470,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpOpMainOther}" />

    </Grid>
</UserControl>
