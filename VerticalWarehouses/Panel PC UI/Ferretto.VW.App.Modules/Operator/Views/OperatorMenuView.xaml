<ctrls:View x:Class="Ferretto.VW.App.Modules.Operator.Views.OperatorMenuView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewModels"
            d:DataContext="{d:DesignInstance Type=viewmodels:OperatorMenuViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="0,10,50,0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top">
            <TextBlock x:Name="txtTime"
                       Margin="0"
                       HorizontalAlignment="Center"
                       FontSize="56"
                       Foreground="{DynamicResource FerrettoPureWhite}"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="10:10" />
            <TextBlock x:Name="txtDate"
                       Margin="0"
                       HorizontalAlignment="Center"
                       FontSize="24"
                       Foreground="{DynamicResource FerrettoPureWhite}"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="12/12/2019" />
        </StackPanel>

        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Margin="50,25,0,0">

            <TextBlock Grid.Row="1"
                       Margin="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{Binding MachineIdentity.ModelName, FallbackValue='ModelName'}" />

            <TextBlock Grid.Row="2"
                       Margin="0,25"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       FontSize="{DynamicResource FontSize_High}"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{Binding MachineIdentity.SerialNumber, StringFormat={x:Static res:General.SerialNumber}, FallbackValue='SerialNumber'}" />

        </StackPanel>

        <Grid Grid.Row="1">

            <Grid.Background>
                <ImageBrush AlignmentX="Left"
                            AlignmentY="Bottom"
                            ImageSource="{DynamicResource LoginBackground}"
                            Opacity="0.3"
                            Stretch="UniformToFill" />
            </Grid.Background>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <controls:PpcMenuButton Title="{x:Static res:OperatorApp.NavigationMainMenuDrawerOperation}"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Width="400"
                                    Height="120"
                                    Margin="15"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Abbreviation="{x:Static res:OperatorApp.NavigationMainMenuDrawerOperationAbbreviation}"
                                    Command="{Binding DrawerActivityButtonCommand}"
                                    Description="{x:Static res:OperatorApp.NavigationMainMenuDrawerOperationDescription}"
                                    Kind="HandPointingRight"
                                    MenuBrush="{StaticResource FerrettoBlue}"
                                    Number="1.1" />

            <controls:PpcMenuButton Title="{x:Static res:OperatorApp.NavigationMainMenuItems}"
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Width="400"
                                    Height="120"
                                    Margin="15"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Bottom"
                                    Abbreviation="{x:Static res:OperatorApp.NavigationMainMenuListsAbbreviation}"
                                    Command="{Binding ShowItemSearchCommand}"
                                    Description="{x:Static res:OperatorApp.NavigationMainMenuListsDescription}"
                                    Kind="Magnify"
                                    MenuBrush="{StaticResource FerrettoBlue}"
                                    Number="1.3" />

            <controls:PpcMenuButton Title="{x:Static res:OperatorApp.NavigationMainMenuLists}"
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Width="400"
                                    Height="120"
                                    Margin="15"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Abbreviation="{x:Static res:OperatorApp.NavigationMainMenuListsAbbreviation}"
                                    Command="{Binding ShowItemListsCommand}"
                                    Description="{x:Static res:OperatorApp.NavigationMainMenuListsDescription}"
                                    Kind="PlaylistCheck"
                                    MenuBrush="{StaticResource FerrettoBlue}"
                                    Number="1.2" />

            <controls:PpcMenuButton Title="{x:Static res:OperatorApp.OtherNavigationImmediateDrawerCall}"
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Width="400"
                                    Height="120"
                                    Margin="15"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Abbreviation="{x:Static res:OperatorApp.OtherNavigationImmediateDrawerCallAbbreviation}"
                                    Command="{Binding ImmediateLoadingUnitCallMenuCommand}"
                                    Description="{x:Static res:OperatorApp.OtherNavigationImmediateDrawerCallDescription}"
                                    Kind="AccountBoxOutline"
                                    MenuBrush="{StaticResource FerrettoBlue}"
                                    Number="1.4" />



        </Grid>

        <controls:PpcBadge Grid.RowSpan="2"
                           Grid.ColumnSpan="2"
                           Margin="15,15,30,-10"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           TextBadge="{Binding BayNumber, StringFormat={x:Static res:General.BayNumber}}"
                           Visibility="Collapsed" />

    </Grid>

</ctrls:View>
