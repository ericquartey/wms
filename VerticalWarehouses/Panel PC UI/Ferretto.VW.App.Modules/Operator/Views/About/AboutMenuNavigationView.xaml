<ctrls:View x:Class="Ferretto.VW.App.Operator.Views.AboutMenuNavigationView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid Grid.Row="0"
          Margin="15,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <controls:PpcButton Grid.Row="0"
                            Margin="0,0,15,15"
                            Padding="-1,1,0,0"
                            Abbrevation="3.1"
                            BorderBrush="{DynamicResource FerrettoGreen}"
                            Command="{Binding GeneralCommand}"
                            Content="Generali"
                            IsActive="{Binding IsGeneralActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

        <controls:PpcButton Grid.Row="1"
                            Margin="0,0,15,15"
                            Padding="-1,1,0,0"
                            Abbrevation="3.2"
                            BorderBrush="{DynamicResource FerrettoGreen}"
                            Command="{Binding CountersCommand}"
                            Content="Contatori"
                            IsActive="{Binding IsGeneralActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}"
                            Visibility="Collapsed" />

        <controls:PpcButton Grid.Row="2"
                            Margin="0,0,15,15"
                            Padding="-1,1,0,0"
                            Abbrevation="3.2"
                            BorderBrush="{DynamicResource FerrettoGreen}"
                            Command="{Binding StatisticsCommand}"
                            Content="Statistiche"
                            IsActive="{Binding IsStatisticsActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

        <controls:PpcButton Grid.Row="3"
                            Margin="0,0,15,15"
                            Padding="-1,1,0,0"
                            Abbrevation="3.3"
                            BorderBrush="{DynamicResource FerrettoGreen}"
                            Command="{Binding AllarmCommand}"
                            Content="Allarmi"
                            IsActive="{Binding IsAlarmActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

        <controls:PpcButton Grid.Row="4"
                            Margin="0,0,15,15"
                            Padding="-1,1,0,0"
                            Abbrevation="3.4"
                            BorderBrush="{DynamicResource FerrettoGreen}"
                            Command="{Binding DiagnosticsCommand}"
                            Content="Diagnostica"
                            IsActive="{Binding IsDiagnosticsActive}"
                            Kind="Account"
                            Style="{DynamicResource PpcButtonMenuStyle}" />

    </Grid>

</ctrls:View>
