<ctrls:View x:Class="Ferretto.VW.App.Modules.Operator.Views.InverterDiagnosticsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewModels"
            xmlns:views="clr-namespace:Ferretto.VW.App.Modules.Operator.Views"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{Resources:Loc OperatorApp.InvDiagnostics}" />

        <views:AboutMenuNavigationView Grid.RowSpan="2" />

        <Grid Grid.Row="1"
              Grid.Column="1">

            <StackPanel Orientation="Vertical">

                <Grid>
                    <TextBlock Style="{StaticResource VWAPP_CustomLabelBig_LabelTextBlockStyle}"
                               Text="" />
                    <Border Margin="0,50,20,0"
                            VerticalAlignment="Top"
                            Background="{DynamicResource PpcBackground}">
                        <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                                BorderThickness="{DynamicResource PpcBorderThickness}">
                            <Grid Height="80">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0"
                                      Grid.ColumnSpan="3">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Margin="0,10,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Style="{DynamicResource VWAPP_CardSensor}"
                                               Text="{res:Loc OperatorApp.InvSerialNumber}"
                                               TextAlignment="Left" />

                                    <TextBlock Grid.Row="1"
                                               Margin="0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Style="{DynamicResource VWAPP_CardSensor_Data}"
                                               Text="{Binding InvSerialNumber}" />

                                    <Border Grid.RowSpan="2"
                                            Grid.Column="1"
                                            Margin="0,20"
                                            VerticalAlignment="Stretch"
                                            BorderBrush="{DynamicResource FerrettoMediumGray}"
                                            BorderThickness="1" />
                                </Grid>

                                <Grid Grid.Column="3"
                                      Grid.ColumnSpan="3">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Margin="0,10,0,0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Style="{DynamicResource VWAPP_CardSensor}"
                                               Text="{res:Loc OperatorApp.InvSoftwareVersion}"
                                               TextAlignment="Left" />

                                    <TextBlock Grid.Row="1"
                                               Margin="0"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Top"
                                               Style="{DynamicResource VWAPP_CardSensor_Data}"
                                               Text="{Binding InvSoftwareVersion}" />
                                </Grid>
                            </Grid>
                        </Border>
                    </Border>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0"
                          Margin="0,0,7,0">
                        <TextBlock Margin="0,20,0,0"
                                   Style="{StaticResource VWAPP_CustomLabelBig_LabelTextBlockStyle}"
                                   Text="{res:Loc OperatorApp.InvEnergy}"
                                   TextWrapping="WrapWithOverflow">
                        </TextBlock>
                        <Border Margin="0,50,15,15"
                                VerticalAlignment="Top"
                                Background="{DynamicResource PpcBackground}">
                            <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                                    BorderThickness="{DynamicResource PpcBorderThickness}">
                                <Grid Height="80">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0"
                                          Grid.ColumnSpan="3">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Margin="0,10,0,0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource VWAPP_CardSensor}"
                                                   Text="{res:Loc OperatorApp.InvEnergyConsumed}"
                                                   TextAlignment="Left" />

                                        <TextBlock Grid.Row="1"
                                                   Margin="0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Top"
                                                   Style="{DynamicResource VWAPP_CardSensor_Data}"
                                                   Text="{Binding InvEnergy}" />

                                        <Border Grid.RowSpan="2"
                                                Grid.Column="1"
                                                Margin="0,20"
                                                VerticalAlignment="Stretch"
                                                BorderBrush="{DynamicResource FerrettoMediumGray}"
                                                BorderThickness="1"
                                                Visibility="Hidden" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </Border>
                    </Grid>

                    <Grid Grid.Column="1"
                          Margin="7,0,0,0">
                        <TextBlock Margin="0,20,0,0"
                                   Style="{StaticResource VWAPP_CustomLabelBig_LabelTextBlockStyle}"
                                   Text="{res:Loc OperatorApp.InvTemperature}" />
                        <Border Margin="0,50,20,15"
                                VerticalAlignment="Top"
                                Background="{DynamicResource PpcBackground}">
                            <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                                    BorderThickness="{DynamicResource PpcBorderThickness}">
                                <Grid Height="80">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0"
                                          Grid.ColumnSpan="3">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Margin="0,10,0,0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource VWAPP_CardSensor}"
                                                   Text="{res:Loc OperatorApp.InvInsideTemp}"
                                                   TextAlignment="Left" />

                                        <TextBlock Grid.Row="1"
                                                   Margin="0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Top"
                                                   Style="{DynamicResource VWAPP_CardSensor_Data}"
                                                   Text="{Binding InvInsideTemp}" />

                                        <Border Grid.RowSpan="2"
                                                Grid.Column="1"
                                                Margin="0,20"
                                                VerticalAlignment="Stretch"
                                                BorderBrush="{DynamicResource FerrettoMediumGray}"
                                                BorderThickness="1" />
                                    </Grid>

                                    <Grid Grid.Column="3"
                                          Grid.ColumnSpan="3">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Margin="0,10,0,0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   Style="{DynamicResource VWAPP_CardSensor}"
                                                   Text="{res:Loc OperatorApp.InvSyncTemp}" />

                                        <TextBlock Grid.Row="1"
                                                   Margin="0"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Top"
                                                   Style="{DynamicResource VWAPP_CardSensor_Data}"
                                                   Text="{Binding InvSyncTemp}" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </Border>
                    </Grid>
                </Grid>
            </StackPanel>

            <controls:PpcGauge MinValue="0"
                               MaxValue="100"

                               Margin="0,0,250,0"
                               Grid.Row="3"

                               LabelHead="Motore 1"
                               LabelUnitsType="m/s"

                               LabelHeadFontSize="18"
                               LabelUnitsTypeFontSize="10"
                               LabelValueFontSize="30"
                               LabelFontSize="10"

                               Height="175"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Left"

                               Value="{Binding TestValue}" />

            <controls:PpcGauge MinValue="0"
                               MaxValue="100"

                               Margin="250,0,0,0"
                               Grid.Row="3"

                               LabelHead="Motore 2"
                               LabelUnitsType="m/s"

                               LabelHeadFontSize="24"
                               LabelUnitsTypeFontSize="15"
                               LabelValueFontSize="50"
                               LabelFontSize="14"

                               Height="250"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Left"

                               Value="{Binding TestValue}" />

            
        </Grid>
    </Grid>
</ctrls:View>
