<ctrls:View x:Class="Ferretto.VW.App.Operator.Views.GeneralView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Operator.ViewModels"
            xmlns:views="clr-namespace:Ferretto.VW.App.Operator.Views"
            d:DataContext="{d:DesignInstance Type=viewmodels:GeneralViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Informazioni generali" />

        <views:AboutMenuNavigationView Grid.RowSpan="2" />

        <Grid Grid.Row="1"
              Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="30" />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <controls:PpcLabeledText Grid.Row="0"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding Model.ModelName}"
                                     LabelText="{x:Static Resources:OperatorApp.GeneralInfoModel}" />

            <controls:PpcLabeledText Grid.Row="0"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding Model.SerialNumber}"
                                     LabelText="{x:Static Resources:OperatorApp.GeneralInfoSerial}" />

            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding Model.TrayCount}"
                                     LabelText="{x:Static Resources:OperatorApp.GeneralInfoTotDrawers}" />

            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding SoftwareVersion}"
                                     LabelText="{x:Static Resources:OperatorApp.GeneralInfoSwRelease}" />

            <controls:PpcLabeledText Grid.Row="3"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding Model.InstallationDate}"
                                     LabelText="{x:Static Resources:OperatorApp.GeneralInfoInstallationDate}" />

            <controls:PpcLabeledText Grid.Row="3"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding Model.NextServiceDate}"
                                     LabelText="{x:Static Resources:OperatorApp.GeneralInfoNextMaintenanceDate}" />

            <controls:PpcLabeledText Grid.Row="4"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding Model.LastServiceDate}"
                                     LabelText="{x:Static Resources:OperatorApp.GeneralInfoLastMaintenanceDate}" />

            <Grid Grid.Row="4"
                  Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Rectangle Width="25"
                           Height="25"
                           Margin="0,0,15,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Fill="{Binding MachineServiceStatusBrush}" />

                <controls:PpcLabeledText Grid.Column="1"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top"
                                         ContentText="{Binding Model.ServiceStatus, Converter={StaticResource MSSEC}}"
                                         LabelText="{x:Static Resources:OperatorApp.GeneralInfoOperativeStatus}" />
            </Grid>

            <Grid Grid.Row="5"
                  Grid.Column="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Rectangle Name="WmsServicesStatusIndicator"
                           Width="25"
                           Height="25"
                           Margin="0,0,15,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Fill="{Binding WmsServicesStatusBrush}" />

                <controls:PpcLabeledText Grid.Column="1"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Top"
                                         ContentText="{Binding WmsServicesStatusDescription}"
                                         LabelText="{x:Static Resources:OperatorApp.GeneralInfoWmsStatus}" />
            </Grid>

        </Grid>

    </Grid>
</ctrls:View>
