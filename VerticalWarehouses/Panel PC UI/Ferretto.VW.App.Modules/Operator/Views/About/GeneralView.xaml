<ctrls:View x:Class="Ferretto.VW.App.Operator.Views.GeneralView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Operator.ViewModels"
            xmlns:views="clr-namespace:Ferretto.VW.App.Operator.Views"
            d:DataContext="{d:DesignInstance Type=viewmodels:GeneralViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Informazioni generali" />

        <views:AboutMenuNavigationView Grid.RowSpan="2" />

        <Grid Grid.Row="1"
              Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid Grid.RowSpan="5"
                  Grid.ColumnSpan="12"
                  Margin="0,0,15,0">
                <Image HorizontalAlignment="Center"
                       Opacity="0.7"
                       Source="{DynamicResource BgMilestone}"
                       Stretch="UniformToFill">
                    <Image.Effect>
                        <BlurEffect Radius="15" />
                    </Image.Effect>
                </Image>
            </Grid>

            <Border Grid.ColumnSpan="7"
                    BorderBrush="{DynamicResource VWAPP_BACKGROUND}"
                    BorderThickness="0,0,10,10">
                <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                        BorderThickness="{DynamicResource PpcBorderThickness}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Margin="10,10,5,5"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                   Text="{x:Static Resources:OperatorApp.GeneralInfoModel}"
                                   TextAlignment="Right" />
                        <TextBlock Grid.Column="1"
                                   Margin="5,10,5,5"
                                   VerticalAlignment="Center"
                                   FontSize="22"
                                   Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="{Binding Model.ModelName}"
                                   TextWrapping="Wrap" />


                        <TextBlock Grid.Row="1"
                                   Margin="10,5,5,10"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                   Text="Seriale"
                                   TextAlignment="Right" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   Margin="5,5,5,10"
                                   VerticalAlignment="Center"
                                   FontSize="22"
                                   Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="{Binding Model.SerialNumber}"
                                   TextWrapping="Wrap" />

                        <!--<controls:PpcLabeledText Grid.Row="1"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top"
                                             ContentText="{Binding Model.SerialNumber}"
                                             LabelText="{x:Static Resources:OperatorApp.GeneralInfoSerial}" />-->
                    </Grid>
                </Border>
            </Border>

            <Border Grid.Column="7"
                    Grid.ColumnSpan="5"
                    BorderBrush="{DynamicResource VWAPP_BACKGROUND}"
                    BorderThickness="10,0,15,10">
                <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                        BorderThickness="{DynamicResource PpcBorderThickness}">
                    <Grid>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Margin="10"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                   Text="{x:Static Resources:OperatorApp.GeneralInfoSwRelease}"
                                   TextAlignment="Right" />

                        <TextBlock Grid.Column="1"
                                   Margin="10"
                                   VerticalAlignment="Center"
                                   FontSize="36"
                                   Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="{Binding SoftwareVersion}"
                                   TextWrapping="Wrap" />

                    </Grid>
                </Border>
            </Border>

            <Border Grid.Row="1"
                    Grid.ColumnSpan="5"
                    BorderBrush="{DynamicResource VWAPP_BACKGROUND}"
                    BorderThickness="0,10,10,10">
                <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                        BorderThickness="{DynamicResource PpcBorderThickness}">
                    <Grid Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Margin="10,5"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                   Text="{x:Static Resources:OperatorApp.GeneralInfoInstallationDate}"
                                   TextAlignment="Right" />
                        <TextBlock Grid.Column="1"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   FontSize="22"
                                   Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="{Binding Model.InstallationDate, TargetNullValue='-', StringFormat={}{0:dd/MM/yyyy}}"
                                   TextWrapping="Wrap" />

                        <TextBlock Grid.Row="1"
                                   Margin="10,5"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                   Text="{x:Static Resources:OperatorApp.GeneralInfoNextMaintenanceDate}"
                                   TextAlignment="Right" />
                        <TextBlock Grid.Row="1"
                                   Grid.Column="1"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   FontSize="22"
                                   Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="{Binding Model.NextServiceDate, TargetNullValue='18/12/2017', StringFormat={}{0:dd/MM/yyyy}}"
                                   TextWrapping="Wrap" />

                        <TextBlock Grid.Row="2"
                                   Margin="10,5"
                                   VerticalAlignment="Center"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                   Text="{x:Static Resources:OperatorApp.GeneralInfoLastMaintenanceDate}"
                                   TextAlignment="Right" />
                        <TextBlock Grid.Row="2"
                                   Grid.Column="1"
                                   Margin="5"
                                   VerticalAlignment="Center"
                                   FontSize="22"
                                   Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="{Binding Model.LastServiceDate, TargetNullValue='18/12/2017', StringFormat={}{0:dd/MM/yyyy}}"
                                   TextWrapping="Wrap" />
                    </Grid>
                </Border>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="5"
                    Grid.ColumnSpan="3"
                    BorderBrush="{DynamicResource VWAPP_BACKGROUND}"
                    BorderThickness="10">
                <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                        BorderThickness="{DynamicResource PpcBorderThickness}">
                    <Grid>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>


                        <TextBlock Margin="10,25,10,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Bottom"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                   Text="Numero macchina"
                                   TextAlignment="Left" />

                        <TextBlock Grid.Row="1"
                                   Margin="10,0,10,10"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   FontSize="36"
                                   Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                   Text="1"
                                   TextWrapping="Wrap" />
                    </Grid>
                </Border>
            </Border>

            <Border Grid.Row="1"
                    Grid.Column="8"
                    Grid.ColumnSpan="4"
                    BorderBrush="{DynamicResource VWAPP_BACKGROUND}"
                    BorderThickness="10,10,15,10">
                <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                        BorderThickness="{DynamicResource PpcBorderThickness}">
                    <Grid Margin="5">

                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Margin="10,5"
                                   VerticalAlignment="Bottom"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                   Text="{x:Static Resources:OperatorApp.GeneralInfoOperativeStatus}"
                                   TextAlignment="Right" />
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Bottom"
                                    Orientation="Horizontal">
                            <Ellipse Width="8"
                                     Height="8"
                                     Margin="10,0"
                                     VerticalAlignment="Center"
                                     Fill="{Binding MachineServiceStatusBrush}" />
                            <TextBlock Margin="5,5,20,5"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                       Text="{Binding Model.ServiceStatus, Converter={StaticResource MSSEC}}"
                                       TextWrapping="Wrap" />
                        </StackPanel>


                        <TextBlock Grid.Row="1"
                                   Margin="10,5"
                                   VerticalAlignment="Top"
                                   FontSize="{DynamicResource FontSize_Small}"
                                   Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                   Text="{x:Static Resources:OperatorApp.GeneralInfoWmsStatus}"
                                   TextAlignment="Right" />
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    VerticalAlignment="Top"
                                    Orientation="Horizontal">
                            <Ellipse Width="8"
                                     Height="8"
                                     Margin="10,0"
                                     VerticalAlignment="Center"
                                     Fill="{Binding WmsServicesStatusBrush}" />
                            <TextBlock Margin="5,5,20,5"
                                       VerticalAlignment="Center"
                                       FontSize="16"
                                       Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                       Text="{Binding WmsServicesStatusDescription}"
                                       TextWrapping="Wrap" />
                        </StackPanel>

                    </Grid>
                </Border>
            </Border>

            <Border Grid.Row="2"
                    Grid.ColumnSpan="12"
                    BorderBrush="{DynamicResource VWAPP_BACKGROUND}"
                    BorderThickness="0,10,15,0">
                <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                        BorderThickness="{DynamicResource PpcBorderThickness}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="2"
                              Grid.ColumnSpan="3">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>


                            <TextBlock Margin="0,20,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="{DynamicResource FontSize_Small}"
                                       Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                       Text="Totale cassetti"
                                       TextAlignment="Left" />

                            <TextBlock Grid.Row="1"
                                       Margin="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       FontSize="36"
                                       Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                       Text="{Binding Model.TrayCount}"
                                       TextWrapping="Wrap" />

                            <Border Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Margin="0,25"
                                    VerticalAlignment="Stretch"
                                    BorderBrush="{DynamicResource FerrettoDarkGray}"
                                    BorderThickness="1" />

                        </Grid>

                        <Grid Grid.Row="2"
                              Grid.Column="3"
                              Grid.ColumnSpan="3">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>


                            <TextBlock Margin="0,20,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="{DynamicResource FontSize_Small}"
                                       Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                       Text="Totale missioni" />

                            <TextBlock Grid.Row="1"
                                       Margin="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       FontSize="36"
                                       Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                       Text="1.254.450"
                                       TextWrapping="Wrap" />

                            <Border Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Margin="0,25"
                                    VerticalAlignment="Stretch"
                                    BorderBrush="{DynamicResource FerrettoDarkGray}"
                                    BorderThickness="1" />

                        </Grid>

                        <Grid Grid.Row="2"
                              Grid.Column="6"
                              Grid.ColumnSpan="3">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>


                            <TextBlock Margin="0,20,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="{DynamicResource FontSize_Small}"
                                       Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                       Text="Totale km percorsi"
                                       TextAlignment="Left" />

                            <TextBlock Grid.Row="1"
                                       Margin="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       FontSize="36"
                                       Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                       Text="35.205"
                                       TextWrapping="Wrap" />

                            <Border Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Margin="0,25"
                                    VerticalAlignment="Stretch"
                                    BorderBrush="{DynamicResource FerrettoDarkGray}"
                                    BorderThickness="1" />

                        </Grid>

                        <Grid Grid.Row="2"
                              Grid.Column="9"
                              Grid.ColumnSpan="3"
                              Margin="0,0,15,0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <TextBlock Margin="0,20,0,0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="{DynamicResource FontSize_Small}"
                                       Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                                       Text="Totale peso macchina"
                                       TextAlignment="Left" />

                            <TextBlock Grid.Row="1"
                                       Margin="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Top"
                                       FontSize="36"
                                       Style="{DynamicResource VWAPP_ViewTitleTextBlockStyle}"
                                       Text="45.120"
                                       TextWrapping="Wrap" />

                        </Grid>

                    </Grid>
                </Border>
            </Border>


            <controls:PpcButton Grid.Row="6"
                                Grid.Column="0"
                                Grid.ColumnSpan="12"
                                Width="60"
                                Margin="0,0,15,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom"
                                Command="{Binding ViewStatusSensorsCommand}"
                                Foreground="{StaticResource FerrettoPureWhite}"
                                Kind="LightbulbOn" />
        </Grid>

    </Grid>
</ctrls:View>
