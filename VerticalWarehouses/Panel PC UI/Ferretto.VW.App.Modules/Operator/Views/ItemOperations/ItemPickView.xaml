<ctrls:View x:Class="Ferretto.VW.App.Operator.Views.ItemPickView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:WmsControls="clr-namespace:Ferretto.Common.Controls.WPF;assembly=Ferretto.Common.Controls.WPF"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:converter="clr-namespace:Ferretto.VW.App.Controls.Converters;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid Margin="100,30,100,0">
        <Grid.Resources>
            <converter:ImageToSourceConverter x:Key="ImageToSourceConverter" />
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static resources:OperatorApp.DrawerActivityPickingPageHeader}" />

        <WmsControls:TrayControl Grid.Row="1"
                                 Margin="0"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Stretch"
                                 Compartments="{Binding Compartments}"
                                 DefaultCompartmentColor="#323232"
                                 DimensionHeight="{Binding LoadingUnitDepth}"
                                 DimensionWidth="{Binding LoadingUnitWidth}"
                                 GridLinesColor="#3c3c3c"
                                 IsEnabled="False"
                                 IsReadOnly="True"
                                 SelectedColorFilterFunc="{Binding CompartmentColoringFunction}"
                                 SelectedItem="{Binding SelectedCompartment}"
                                 ShowBackground="False"
                                 ShowRuler="False" />

        <Grid Grid.Row="2"
              Margin="0,15,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <controls:PpcLabeledText HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding MissionOperation.ItemListCode}"
                                     LabelText="{x:Static resources:OperatorApp.CommonListCode}" />


            <controls:PpcLabeledText Grid.Column="1"
                                     Grid.ColumnSpan="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding MissionOperation.ItemListDescription}"
                                     LabelText="{x:Static resources:OperatorApp.CommonListDescription}" />

            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding MissionOperation.ItemCode}"
                                     LabelText="{x:Static resources:OperatorApp.CommonItemCode}" />
            <Image Grid.Row="2"
                   Grid.RowSpan="3"
                   Grid.Column="0"
                   Width="180"
                   Height="180"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Source="{Binding ItemImage, Converter={StaticResource ImageToSourceConverter}}"
                   Stretch="UniformToFill" />

            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding MissionOperation.ItemDescription}"
                                     LabelText="{x:Static resources:OperatorApp.CommonItemDescription}" />


            <controls:PpcLabeledText Grid.Row="2"
                                     Grid.RowSpan="2"
                                     Grid.Column="1"
                                     Grid.ColumnSpan="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding MissionOperation.ItemNotes}"
                                     LabelText="{x:Static resources:OperatorApp.CommonNote}" />

            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.Column="3"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding MissionOperation.RequestedQuantity}"
                                     LabelText="{x:Static resources:OperatorApp.QuantityToPick}" />

            <controls:PpcTextBox Grid.Row="2"
                                 Grid.Column="3"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 InputText="{Binding InputQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 LabelText="{x:Static resources:OperatorApp.PickedQuantity}" />

            <controls:PpcButton Grid.Row="4"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Command="{Binding ShowDetailsCommand}"
                                Content="{x:Static resources:OperatorApp.Details}" />


            <controls:PpcButton Grid.Row="4"
                                Grid.Column="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Command="{Binding AbortOperationCommand}"
                                Content="{x:Static resources:OperatorApp.Abort}"
                                IsBusy="{Binding IsBusyAbortingOperation}" />

            <controls:PpcButton Grid.Row="4"
                                Grid.Column="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Command="{Binding ConfirmOperationCommand}"
                                Content="{x:Static resources:OperatorApp.Confirm}"
                                IsBusy="{Binding IsBusyConfirmingOperation}" />

        </Grid>
    </Grid>
</ctrls:View>
