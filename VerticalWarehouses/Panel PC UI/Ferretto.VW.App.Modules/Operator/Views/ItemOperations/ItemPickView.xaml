<ctrls:View x:Class="Ferretto.VW.App.Operator.Views.ItemPickView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:converter="clr-namespace:Ferretto.VW.App.Controls.Converters;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:localControls="clr-namespace:Ferretto.VW.App.Operator.Views"
            xmlns:resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid Margin="50,30,50,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static resources:OperatorApp.DrawerActivityPickingPageHeader}" />

        <localControls:LoadinUnitControlView
                              Grid.Row="1" Margin="50 0 0 0"   />
        

        <Grid Grid.Row="2"
              Margin="0,15,0,0">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions> 
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <localControls:ItemInfoView Grid.RowSpan="5" Grid.ColumnSpan="3"  />


            <controls:PpcLabeledText  Grid.Row="1"
                                     Grid.Column="2"
                                     Grid.ColumnSpan="2"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Top"
                                     Margin="0 5 150 0"
                                     ContentText="{Binding MissionOperation.RequestedQuantity}"
                                     LabelText="{x:Static resources:OperatorApp.QuantityToPick}" />

            <ctrls:PpcSpinEdit   Grid.Row="2"
                                 Grid.RowSpan="2"
                                 Grid.Column="2"
                                 Grid.ColumnSpan="2"
                                 HorizontalAlignment="Right"
                                 Margin="0 0 10 0"
                                 VerticalAlignment="Top"
                                 EditValue="{Binding InputQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 LabelText="{x:Static resources:OperatorApp.PickedQuantity}" />

            <StackPanel Grid.Row="4" Orientation="Horizontal" Grid.ColumnSpan="4" HorizontalAlignment="Right">

                <controls:PpcButton Grid.Row="4"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Command="{Binding ShowDetailsCommand}"
                                Content="{x:Static resources:OperatorApp.Details}" />


                <controls:PpcButton Grid.Row="4"
                                Grid.Column="2"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="40 0 0 0"
                                Command="{Binding AbortOperationCommand}"
                                Content="{x:Static resources:OperatorApp.Abort}"
                                IsBusy="{Binding IsBusyAbortingOperation}" />

                <controls:PpcButton Grid.Row="4"
                                Grid.Column="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Margin="40 0 60 0"
                                Command="{Binding ConfirmOperationCommand}"
                                Content="{x:Static resources:OperatorApp.Confirm}"
                                IsBusy="{Binding IsBusyConfirmingOperation}" />
               </StackPanel>
        </Grid>
    </Grid>
</ctrls:View>
