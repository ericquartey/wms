<UserControl x:Class="Ferretto.VW.App.Operator.Views.LoadingUnitDataGridView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources">
    <Grid>
        <ctrls:PpcDataGrid Name="DataGrid"
                  Width="auto"
                  Height="auto"                 
                  ItemsSource="{Binding LoadingUnits}"
              
                  SelectedItem="{Binding SelectedLoadingUnit}"
                 >

            <ctrls:PpcDataGrid.Columns>
                <DataGridTextColumn x:Name="Column1"
                                    Width="1*"
                                    Binding="{Binding Path=Code}"
                                    Header="{x:Static Resources:OperatorApp.OtherDrawerDataGridHeaderDrawer}">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="1,0,0,0" />
                            <Setter Property="BorderBrush" Value="{DynamicResource PpcButtonBorderBrush}" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Column2"
                                    Width="1*"
                                    Binding="{Binding Path=Height}"
                                    Header="{x:Static Resources:OperatorApp.OtherDrawerDataGridHeaderHeight}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Column3"
                                    Width="1*"
                                    Binding="{Binding Path=GrossWeight}"
                                    Header="{x:Static Resources:OperatorApp.OtherDrawerDataGridHeaderWeight}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Column4"
                                    Width="1*"
                                    Binding="{Binding Path=CellId}"
                                    Header="{x:Static Resources:OperatorApp.OtherDrawerDataGridHeaderCell}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Column5"
                                    Width="1*"
                                    Binding="{Binding Path=Cell.Side, Converter={StaticResource EWSC}}"
                                    Header="{x:Static Resources:OperatorApp.OtherDrawerDataGridHeaderSide}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Column6"
                                    Width="1*"
                                    Binding="{Binding Path=Status}"
                                    Header="{x:Static Resources:OperatorApp.OtherDrawerDataGridHeaderState}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </ctrls:PpcDataGrid.Columns>
        </ctrls:PpcDataGrid>
    </Grid>
</UserControl>
