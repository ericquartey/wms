<ctrls:View x:Class="Ferretto.VW.App.Operator.Views.ImmediateDrawerCallView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:customviewsandviewmodels="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <ctrls:View.Resources>
        <ResourceDictionary>
            <DataTemplate DataType="{x:Type customviewsandviewmodels:CustomControlDrawerDataGridViewModel}">
                <customviewsandviewmodels:CustomControlDrawerDataGrid />
            </DataTemplate>
        </ResourceDictionary>
    </ctrls:View.Resources>
    <Grid Margin="100,30,0,30">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.ImmediateDrawerCallHeader}" />

        <ContentControl Grid.Row="1"
                        Margin="0,0,0,15"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="{Binding DataGridViewModel}" />

        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Vertical">
            <customviewsandviewmodels:PpcButton Margin="15,0,20,15"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Content="{x:Static Resources:OperatorApp.CommonUp}" />

            <customviewsandviewmodels:PpcButton Margin="15,15,20,15"
                                                HorizontalAlignment="Right"
                                                VerticalAlignment="Top"
                                                Content="{x:Static Resources:OperatorApp.CommonDown}" />
        </StackPanel>


        <customviewsandviewmodels:PpcButton Grid.Row="2"
                                            Grid.Column="1"
                                            Margin="15,0,20,15"
                                            HorizontalAlignment="Right"
                                            VerticalAlignment="Bottom"
                                            Content="{x:Static Resources:OperatorApp.ImmediateDrawerCallDrawerCall}" />

        <Grid Grid.Row="3">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <customviewsandviewmodels:PpcLabeledText HorizontalAlignment="Left"
                                                     VerticalAlignment="Top"
                                                     ContentText="Cassetto bloccato."
                                                     LabelText="{x:Static Resources:OperatorApp.CommonNote}" />

            <customviewsandviewmodels:PpcTextBox Grid.Column="1"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 LabelText="{x:Static Resources:OperatorApp.ImmediateDrawerCallRequiredDrawer}" />

        </Grid>

    </Grid>
</ctrls:View>
