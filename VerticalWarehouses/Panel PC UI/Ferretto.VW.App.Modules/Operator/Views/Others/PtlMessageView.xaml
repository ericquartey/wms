<ctrls:View x:Class="Ferretto.VW.App.Modules.Operator.Views.PtlMessageView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:converters="clr-namespace:Ferretto.VW.App.Controls.Converters;assembly=Ferretto.VW.App.Controls"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="15,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Margin="0,0,0,0"
                       VerticalAlignment="Top"
                       FontSize="25"
                       Text="Put to Light"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}" />
            <!--<Border Margin="0,15,15,0"
                    Padding="15,5"
                    Height="50"
                    Background="{Binding PtlMessage.NotificationSeverity, Converter={StaticResource NSTBC}}"
                    Visibility="{Binding PtlMessage.Msg, Converter={StaticResource RTVC}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <iconPacks:PackIconModern Width="32"
                                              Height="32"
                                              Margin="0,0,15,0"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Foreground="{Binding PtlMessage.NotificationSeverity, Converter={StaticResource NSTFC}}"
                                              Kind="{Binding PtlMessage.NotificationSeverity, Converter={StaticResource NSTINC}}" />
                    <TextBlock Grid.Column="1"
                               Margin="0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Foreground="{Binding PtlMessage.NotificationSeverity, Converter={StaticResource NSTFC}}"
                               Style="{StaticResource VWAPP_ViewErrorTextBlockStyle}"
                               Text="{Binding PtlMessage.Msg}"
                               TextWrapping="Wrap" />
                </Grid>
            </Border>-->

            <ctrls:PpcDataGrid Margin="0,0,15,0"
                               RowHeight="60"
                               IsReadOnly="True"
                               Height="300"
                               VerticalScrollBarVisibility="Auto"
                               ItemsSource="{Binding ListPtlMessage}">
                <ctrls:PpcDataGrid.Columns>
                    <DataGridTemplateColumn Width="*">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border Padding="15,5"
                                        Margin="5"
                                        Background="{Binding NotificationSeverity, Converter={StaticResource NSTBC}}"
                                        Visibility="{Binding Msg, Converter={StaticResource RTVC}}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <iconPacks:PackIconModern Width="32"
                                                                  Height="32"
                                                                  Margin="0,0,15,0"
                                                                  HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"
                                                                  Foreground="{Binding NotificationSeverity, Converter={StaticResource NSTFC}}"
                                                                  Kind="{Binding NotificationSeverity, Converter={StaticResource NSTINC}}" />
                                        <TextBlock Grid.Column="1"
                                                   Margin="0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Center"
                                                   Foreground="{Binding NotificationSeverity, Converter={StaticResource NSTFC}}"
                                                   Style="{StaticResource VWAPP_ViewErrorTextBlockStyle}"
                                                   Text="{Binding Msg}"
                                                   TextWrapping="Wrap" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="DataGridCell">
                                <Setter Property="BorderThickness"
                                        Value="1,0,0,0" />
                                <Setter Property="BorderBrush"
                                        Value="{DynamicResource PpcButtonBorderBrush}" />
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                    </DataGridTemplateColumn>
                </ctrls:PpcDataGrid.Columns>
            </ctrls:PpcDataGrid>

            <Grid Background="{StaticResource GrayA}">
                <controls:PpcButton Width="54"
                                    Height="50"
                                    Grid.Row="5"
                                    Grid.Column="2"
                                    Margin="5,8,15,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Command="{Binding ShowBarcodeReaderCommand}"
                                    KindMaterial="BarcodeScan"
                                    Visibility="{Binding IsBarcodeActive, Converter={StaticResource BTVC}}" />
                <StackPanel Margin="5,7,15,0"
                            Visibility="{Binding IsVisibleBarcodeReader, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource BTVC}}"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Orientation="Horizontal">
                    <controls:PpcTextBox Grid.Row="0"
                                         Grid.Column="1"
                                         Width="auto"
                                         HorizontalAlignment="Stretch"
                                         InputText="{Binding BarcodeString, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
                                         LabelText="{res:Loc OperatorApp.EnterBarcode}" />
                    <controls:PpcButton Margin="15,0"
                                        Command="{Binding BarcodeReaderCancelCommand}"
                                        Content="{res:Loc General.Cancel}" />

                    <controls:PpcButton Command="{Binding BarcodeReaderConfirmCommand}"
                                        Content="{res:Loc General.Confirm}" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</ctrls:View>
