<ctrls:View x:Class="Ferretto.VW.App.Modules.Operator.Views.DrawerCompactingDetailView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="100,30,100,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.DrawerCompactingDetailHeader}" />

        <Grid Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <controls:PpcLabeledText Grid.Row="0"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="1008"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingDetailDrawer}" />
            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="201"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingDetailSourceCell}" />
            <controls:PpcLabeledText Grid.Row="2"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="135"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingDetailDestinationCell}" />

            <controls:PpcLabeledText Grid.Row="4"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="Spostamento a sorgente"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingDetailActualStep}" />
            <controls:PpcLabeledText Grid.Row="5"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="4352,5"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingDetailVerticalPosition}" />
            <controls:PpcLabeledText Grid.Row="6"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="15789,4"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingDetailOrizzontalPosition}" />

            <controls:PpcLabeledText Grid.Row="0"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="4"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingDetailRemainingFragment}" />
            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="250"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingDetailRecoveredSpace}" />
            <controls:PpcLabeledText Grid.Row="2"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="350"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingDetailSpaceToRecover}" />

        </Grid>

    </Grid>
</ctrls:View>
