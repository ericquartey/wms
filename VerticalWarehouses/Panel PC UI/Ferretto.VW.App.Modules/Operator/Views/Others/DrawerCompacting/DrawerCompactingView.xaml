<ctrls:View x:Class="Ferretto.VW.App.Modules.Operator.Views.DrawerCompactingView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Modules.Operator.ViewModels"
            d:DataContext="{d:DesignInstance Type=viewmodels:DrawerCompactingViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="15,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.ColumnSpan="4"
                    Orientation="Horizontal">
            <TextBlock Margin="0,10,15,10"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="2.3" />
            <TextBlock Margin="0,10,15,10"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{x:Static res:OperatorApp.DrawerCompactingHeader}" />
        </StackPanel>

        <TextBlock Grid.Row="1"
                   Grid.ColumnSpan="4"
                   Height="Auto"
                   Margin="0,0,15,0"
                   VerticalAlignment="Top"
                   Style="{DynamicResource VWAPP_ViewTitleDescriptionTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpDrawerCompactingDetailDescription}" />

        <controls:CardSensorAxisVertical Grid.Row="2"
                                         Grid.Column="0"
                                         Height="90"
                                         Margin="0,30,15,0" />
        <controls:CardSensorAxisHorizontal Grid.Row="2"
                                           Grid.Column="1"
                                           Height="90"
                                           Margin="0,30,15,0" />
        <controls:CardSensorPosition Grid.Row="2"
                                     Grid.Column="2"
                                     Height="90"
                                     Margin="0,30,15,0" />
        <controls:CardSensorDrawer Grid.Row="2"
                                   Grid.Column="3"
                                   Height="90"
                                   Margin="0,30,15,0" />

        <Border Grid.Row="3"
                Grid.ColumnSpan="4"
                Margin="0,15,15,0"
                Background="{DynamicResource PpcBackground}">
            <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                    BorderThickness="{DynamicResource PpcBorderThickness}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.ColumnSpan="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource VWAPP_CardSensor}"
                                   Text="{x:Static res:OperatorApp.DrawerSpaceSaturazionTotalDrawers}"
                                   TextAlignment="Left" />

                        <TextBlock Grid.Row="1"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Style="{DynamicResource VWAPP_CardSensor_Data}"
                                   Text="{Binding TotalDrawers}" />
                        <!--  Text="{Binding LowerBound}"  -->
                        <Border Grid.RowSpan="2"
                                Grid.Column="1"
                                Margin="0,25"
                                VerticalAlignment="Stretch"
                                BorderBrush="{DynamicResource FerrettoMediumGray}"
                                BorderThickness="1" />

                    </Grid>

                    <Grid Grid.Column="3"
                          Grid.ColumnSpan="3">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>


                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource VWAPP_CardSensor}"
                                   Text="{x:Static res:OperatorApp.FragmentFront}"
                                   TextAlignment="Left" />

                        <TextBlock Grid.Row="1"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Style="{DynamicResource VWAPP_CardSensor_Data}">
                            <Run Text="{Binding FragmentFrontPercent}" /><Run Text="%" />
                        </TextBlock>
                        <!--  Text="{Binding UpperBound}"  -->
                        <Border Grid.RowSpan="2"
                                Grid.Column="1"
                                Margin="0,25"
                                VerticalAlignment="Stretch"
                                BorderBrush="{DynamicResource FerrettoMediumGray}"
                                BorderThickness="1" />

                    </Grid>

                    <Grid Grid.Column="6"
                          Grid.ColumnSpan="3">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>


                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource VWAPP_CardSensor}"
                                   Text="{x:Static res:OperatorApp.FragmentBack}" />

                        <TextBlock Grid.Row="1"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Style="{DynamicResource VWAPP_CardSensor_Data}">
                            <Run Text="{Binding FragmentBackPercent}" /><Run Text="%" />
                        </TextBlock>

                        <!--  Text="{Binding Offset, StringFormat={}{0:F2}}"  -->
                        <Border Grid.RowSpan="2"
                                Grid.Column="1"
                                Margin="0,25"
                                VerticalAlignment="Stretch"
                                BorderBrush="{DynamicResource FerrettoMediumGray}"
                                BorderThickness="1" />

                    </Grid>

                    <Grid Grid.Column="9"
                          Grid.ColumnSpan="3"
                          Margin="0,0,15,0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Style="{DynamicResource VWAPP_CardSensor}"
                                   Text="{x:Static res:OperatorApp.FragmentTotal}"
                                   TextAlignment="Left" />

                        <TextBlock Grid.Row="1"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   Style="{DynamicResource VWAPP_CardSensor_Data}">
                            <Run Text="{Binding FragmentTotalPercent}" /><Run Text="%" />
                        </TextBlock>
                        <!--  Text="{Binding Resolution, StringFormat={}{0:F6}}"  -->
                    </Grid>

                </Grid>
            </Border>
        </Border>

        <StackPanel Grid.Row="4"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">

            <controls:PpcButton Margin="0,0,15,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Command="{Binding CompactingStartCommand}"
                                Content="{x:Static Resources:OperatorApp.DrawerCompacting}" />

            <controls:PpcButton Margin="0,0,15,0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Command="{Binding CompactingStopCommand}"
                                Content="{x:Static Resources:General.Stop}"
                                IsBusy="{Binding IsStopPressed}" />
        </StackPanel>

    </Grid>
</ctrls:View>
