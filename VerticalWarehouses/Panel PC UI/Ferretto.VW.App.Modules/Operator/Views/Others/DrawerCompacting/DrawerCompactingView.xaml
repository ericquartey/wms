<ctrls:View x:Class="Ferretto.VW.App.Operator.Views.DrawerCompactingView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="100,30">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="90" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.DrawerCompactingHeader}" />

        <Grid Grid.Row="1"
              Grid.Column="0"
              Grid.ColumnSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock Grid.Column="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_GeneralTextBlockStyle}"
                       Text="{x:Static Resources:OperatorApp.DrawerCompactingFront}" />

            <TextBlock Grid.Column="1"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_GeneralTextBlockStyle}"
                       Text="{x:Static Resources:OperatorApp.DrawerCompactingRear}" />

            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="8"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingFragmentNumber}" />

            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="6"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingFragmentNumber}" />

            <controls:PpcLabeledText Grid.Row="2"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="200"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingMaxSpaceRecoverable}" />

            <controls:PpcLabeledText Grid.Row="2"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="150"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingMaxSpaceRecoverable}" />

            <controls:PpcTextBox Grid.Row="3"
                                 Grid.Column="0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 LabelText="{x:Static Resources:OperatorApp.DrawerCompactingSpaceToRecover}" />

            <controls:PpcTextBox Grid.Row="3"
                                 Grid.Column="1"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 LabelText="{x:Static Resources:OperatorApp.DrawerCompactingSpaceToRecover}" />

            <controls:PpcLabeledText Grid.Row="4"
                                     Grid.Column="0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="Compattazione in corso"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingProcedureStatus}" />

            <controls:PpcLabeledText Grid.Row="4"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="In attesa"
                                     LabelText="{x:Static Resources:OperatorApp.DrawerCompactingProcedureStatus}" />

            <controls:PpcButton Grid.Row="5"
                                Grid.Column="0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="{x:Static Resources:OperatorApp.DrawerCompactingAntStop}"
                                IsEnabled="False" />


            <controls:PpcButton Grid.Row="5"
                                Grid.Column="1"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="{x:Static Resources:OperatorApp.DrawerCompactingRearCompact}"
                                IsEnabled="False" />

        </Grid>

        <controls:PpcButton Grid.Row="3"
                            Grid.Column="2"
                            Margin="15,15,20,15"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Command="{Binding DrawerCompactingDetailButtonCommand}"
                            Content="{x:Static Resources:OperatorApp.CommonButtonDetail}"
                            IsEnabled="True" />

    </Grid>
</ctrls:View>
