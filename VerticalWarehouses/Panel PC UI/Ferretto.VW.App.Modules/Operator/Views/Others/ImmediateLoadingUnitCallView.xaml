<ctrls:View x:Class="Ferretto.VW.App.Operator.Views.ImmediateLoadingUnitCallView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:views="clr-namespace:Ferretto.VW.App.Operator.Views"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid Margin="100,30,0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.ImmediateDrawerCallHeader}" />

        <views:LoadingUnitDataGridView Grid.Row="1"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Stretch" />

        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Vertical">
            <controls:PpcButton Margin="15,0,15,15"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Command="{Binding UpSelectionCommand}"
                                Content="{x:Static Resources:OperatorApp.CommonUp}" />

            <controls:PpcButton Margin="15,0,15,15"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Command="{Binding DownSelectionCommand}"
                                Content="{x:Static Resources:OperatorApp.CommonDown}" />
        </StackPanel>

        <controls:PpcButton Grid.Row="1"
                            Grid.Column="2"
                            Margin="15,0,15,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Command="{Binding LoadingUnitsMissionsCommand}"
                            Content="{x:Static Resources:OperatorApp.MissionsList}" />


        <controls:PpcButton Grid.Row="2"
                            Grid.Column="1"
                            Margin="15,15,15,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Command="{Binding LoadingUnitCallCommand}"
                            Content="{x:Static Resources:OperatorApp.ImmediateDrawerCallDrawerCall}" />

        <Grid Grid.Row="3"
              Margin="0,15,0,0">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <controls:PpcLabeledText HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding SelectedLoadingUnit.Description, TargetNullValue={x:Static Resources:General.TargetNullValue}, FallbackValue={x:Static Resources:General.TargetNullValue}}"
                                     LabelText="{x:Static Resources:OperatorApp.CommonNote}" />

            <ctrls:PpcSpinEdit Grid.Column="1"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               EditValue="{Binding LoadingUnitId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               LabelText="{x:Static Resources:OperatorApp.ImmediateDrawerCallRequiredDrawer}" />

        </Grid>

    </Grid>
</ctrls:View>
