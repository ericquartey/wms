<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.LoadFirstDrawerView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid IsEnabled="False">

        <TextBlock Margin="240,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.LoadFirstDrawerPageHeader}" />

        <controls:PpcLabeledText Margin="240,140,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="4"
                                 LabelText="{x:Static res:InstallationApp.LoadFirstDrawerTotCellsToCheck}" />
          <!--ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"-->  

        <controls:PpcLabeledText Margin="240,240,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="2"
                                 LabelText="{x:Static res:InstallationApp.LoadFirstDrawerTotCellsChecked}" />
          <!--ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"-->  

        <controls:PpcLabeledText Margin="240,328,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="234"
                                 LabelText="{x:Static res:InstallationApp.LoadFirstDrawerActualCellToCheck}" />

        <controls:PpcTextBox Margin="580,140,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             InputText="1"
                             LabelText="{x:Static res:InstallationApp.LoadFirstDrawerDrawerToInsert}" />
          <!--InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"-->  

        <controls:PpcLabeledText Margin="580,240,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="500"
                                 LabelText="{x:Static res:InstallationApp.LoadFirstDrawerMaxWeight}" />
          <!--ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"-->  

        <controls:PpcButton Margin="240,480,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static res:InstallationApp.LoadFirstDrawerRecallDrawer}" />

        <controls:PpcButton Margin="580,480,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="{x:Static res:InstallationApp.LoadFirstDrawerStartLoading}" />



    </Grid>
</ctrls:View>
