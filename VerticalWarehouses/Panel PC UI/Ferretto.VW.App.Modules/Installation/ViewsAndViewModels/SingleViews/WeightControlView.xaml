<UserControl x:Class="Ferretto.VW.App.Installation.Views.WeightControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <Grid Width="1024"
          Height="608">

        <TextBlock Margin="250,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.WeightControl}" />

        <controls:PpcTextBox Margin="600,120,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             InputText="{Binding InsertedWeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             LabelText="{x:Static res:InstallationApp.InsertedWeight}" />

        <controls:PpcLabeledText Margin="250,120,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding AcceptableWeightTolerance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 LabelText="{x:Static res:InstallationApp.AcceptableWeightTolerance}" />

        <controls:PpcTextBox Margin="250,210,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             InputText="{Binding TestRun, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             LabelText="{x:Static res:InstallationApp.TestRun}" />

        <controls:PpcLabeledText Margin="600,210,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding MeasuredWeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 LabelText="{x:Static res:InstallationApp.MeasuredWeight}" />

        <controls:PpcLabeledText Width="500"
                                 Margin="250,320,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding NoteText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 LabelText="{x:Static res:InstallationApp.Output}" />

        <controls:PpcButton Margin="600,460,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding SetBeginButtonCommand}"
                            Content="{x:Static res:InstallationApp.Start}"
                            IsEnabled="{Binding IsSetBeginButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <controls:PpcButton Margin="250,460,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding SetStopButtonCommand}"
                            Content="{x:Static res:InstallationApp.Stop}"
                            IsEnabled="{Binding IsSetStopButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</UserControl>
