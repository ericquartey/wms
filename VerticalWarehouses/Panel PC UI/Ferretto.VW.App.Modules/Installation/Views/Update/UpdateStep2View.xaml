<ctrls:View x:Class="Ferretto.VW.App.Modules.Installation.Views.UpdateStep2View"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:views="clr-namespace:Ferretto.VW.App.Operator.Views"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid Margin="100,30,0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
            <RowDefinition Height="150" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Grid.ColumnSpan="2"
                   HorizontalAlignment="Left"                   
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Installazione" />

        <views:UpdatesDataGridView Grid.Row="1" Grid.Column="0" VerticalAlignment="Stretch" />

        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <controls:PpcButton Grid.Row="0"
                                Margin="15,0,15,15"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Command="{Binding UpCommand}"
                                Content="{x:Static Resources:OperatorApp.CommonUp}" />

            <controls:PpcButton Grid.Row="1"
                                Margin="15,0,15,15"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Command="{Binding DownCommand}"
                                Content="{x:Static Resources:OperatorApp.CommonDown}" />

        </Grid>

        <Border Name="InstallLogBorder"
                Grid.Row="2"
                Grid.RowSpan="2"                
                VerticalAlignment="Stretch"
                HorizontalAlignment="Stretch"                
                Background="{DynamicResource PpcButtonBackground}"                 
                Padding="15,20,15,0" 
                BorderThickness="1"
                BorderBrush="{DynamicResource PpcButtonBorderBrush}"                                                
                CornerRadius="{DynamicResource PpcCornerRadius}">
            <TextBlock Grid.Row="0"
                   Grid.Column="1"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="12"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{Binding UpdatesInfo}" />
        </Border>

        <controls:PpcButton Grid.Row="3"
                            Grid.Column="1"
                            Margin="0 0 15 0"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Command="{Binding UpdateCommand}"
                                Content="Sart Update" />
    </Grid>
</ctrls:View>
