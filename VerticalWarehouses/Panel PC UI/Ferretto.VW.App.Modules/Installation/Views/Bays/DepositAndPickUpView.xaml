<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.DepositAndPickUpTestView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="130,30,0,0">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="50" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="2"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.DLUTestHeader}" />

        <controls:PpcLabeledText Grid.Row="3"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding CurrentPosition, FallbackValue=0}"
                                 LabelText="{x:Static res:InstallationApp.ElevatorVerticalPosition}" />

        <Border Grid.Row="1"
                Margin="0,5,5,5"
                Background="{DynamicResource PpcButtonBackground}">
            <Grid Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="Elevatore" />
                <Border Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ElevatorVerticalPosition}" />
                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding ElevatorVerticalPosition, StringFormat=0}" />

                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.EmbarkedTray}" />
                <TextBlock Grid.Row="3"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding EmbarkedLoadingUnit.Id, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />

                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ElevatorHorizontalPosition}" />
                <TextBlock Grid.Row="4"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding ElevatorHorizontalPosition, StringFormat=0, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />
                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.TrayWeight}" />
                <TextBlock Grid.Row="5"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding EmbarkedLoadingUnit.Weight, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />

                <TextBlock Grid.Row="6"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ZeroPawlSensor}" />
                <controls:PpcSensorControl Grid.Row="6"
                                           Grid.Column="1"
                                           Margin="0,5"
                                           SensorState="{Binding IsZeroChain}" />



                <TextBlock Grid.Row="7"
                           Grid.ColumnSpan="2"
                           Margin="0,5,0,0"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="Cella" />
                <Border Grid.Row="8"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />

                <TextBlock Grid.Row="9"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.TrayInCell}" />
                <TextBlock Grid.Row="9"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding LoadingUnitInCell.Code, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />
                <TextBlock Grid.Row="10"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.CellHeight}" />
                <TextBlock Grid.Row="10"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding SelectedCell.Position, StringFormat=0, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />

                <TextBlock Grid.Row="11"
                           Grid.ColumnSpan="2"
                           Margin="0,20,0,0"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="Baia" />
                <Border Grid.Row="12"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />

                <TextBlock Grid.Row="13"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.BayHeight}" />
                <TextBlock Grid.Row="13"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding BayPositionHeight}" />
                <TextBlock Grid.Row="14"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.TrayInBay}" />
                <TextBlock Grid.Row="14"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding LoadingUnitInBay.Code, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />

                <TextBlock Grid.Row="15"
                           Grid.ColumnSpan="2"
                           Margin="0,20,0,0"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="Serranda" />
                <Border Grid.Row="16"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />

                <TextBlock Grid.Row="17"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ShutterOpen}" />
                <controls:PpcSensorControl Grid.Row="17"
                                           Grid.Column="1"
                                           Margin="0,5"
                                           SensorState="{Binding ShutterSensors.Open}" />

                <TextBlock Grid.Row="18"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ShutterMidWay}" />
                <controls:PpcSensorControl Grid.Row="18"
                                           Grid.Column="1"
                                           Margin="0,5"
                                           SensorState="{Binding ShutterSensors.MidWay}" />

                <TextBlock Grid.Row="19"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ShutterClosed}" />
                <controls:PpcSensorControl Grid.Row="19"
                                           Grid.Column="1"
                                           Margin="0,5"
                                           SensorState="{Binding ShutterSensors.Closed}" />

            </Grid>
        </Border>

        <controls:PpcTextBox Grid.Row="1"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             InputText="{Binding InputRequiredCycles, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue='0'}"
                             IsEnabled="{Binding IsExecutingProcedure, Converter={StaticResource BNC}}"
                             LabelText="{x:Static res:InstallationApp.RequiredCycles}" />

        <controls:PpcTextBox Grid.Row="2"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             InputText="{Binding InputDelay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsExecutingProcedure, Converter={StaticResource BNC}}"
                             LabelText="{x:Static res:InstallationApp.DelayBetweenCycles}" />

        <StackPanel Grid.Row="3"
                    Grid.Column="1"
                    Orientation="Horizontal">
            <controls:PpcLabeledText Grid.Row="3"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding CompletedCycles, FallbackValue = 10}"
                                     LabelText="{x:Static res:InstallationApp.CompletedCycles}" />

            <controls:PpcLabeledText Grid.Row="3"
                                     Grid.Column="2"
                                     Margin="80,0,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding TotalCompletedCycles}"
                                     LabelText="{x:Static res:InstallationApp.TotalCompletedCycles}" />
        </StackPanel>

        <controls:PpcButton Grid.Row="4"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding StartCommand}"
                            Content="{x:Static res:InstallationApp.Start}" />

        <controls:PpcButton Grid.Row="4"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding StopCommand}"
                            Content="{x:Static res:InstallationApp.Stop}" />


        <controls:PpcButton Grid.Row="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding ResetCommand}"
                            Content="{x:Static res:InstallationApp.Reset}" />
    </Grid>
</ctrls:View>
