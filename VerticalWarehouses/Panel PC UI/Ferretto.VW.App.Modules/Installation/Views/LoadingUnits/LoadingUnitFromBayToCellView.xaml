<ctrls:View    x:Class="Ferretto.VW.App.Modules.Installation.Views.LoadingUnitFromBayToCellView"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
                xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:prism="http://prismlibrary.com/"
                xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
                prism:ViewModelLocator.AutoWireViewModel="True"
                mc:Ignorable="d" 
                d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="80,15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"
                           MinHeight="100" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto"
                              MinWidth="280" />
            <ColumnDefinition Width="Auto"
                              MinWidth="280" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.InsertLoadingUnitFromBayToCell}" />

        <Border Grid.Row="1"
                Grid.RowSpan="3"
                Margin="0,5,5,5"
                Background="{DynamicResource PpcButtonBackground}">
            <Grid Margin="10">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="50" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Margin="0,10,0,0"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.Bay}" />
                <Border Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.BayHeight}" />
                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding BayPositionHeight}" />

                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.TrayInBay}" />

                <TextBlock Grid.Row="3"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding IsLoadingUnitInBay, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />

                <TextBlock Grid.Row="7"
                           Grid.ColumnSpan="2"
                           Margin="0,30,0,0"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="Elevatore" />
                <Border Grid.Row="8" 
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />

                <TextBlock Grid.Row="9"
                           Grid.Column="0"
                           Foreground="White"
                           Text="Cassetto su Elevatore" />

                <TextBlock Grid.Row="9"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding IsLoadingUnitOnElevator, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />


                <TextBlock Grid.Row="10"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ElevatorVerticalPosition}" />
                <TextBlock Grid.Row="10"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding ElevatorVerticalPosition, StringFormat=0}" />

                <TextBlock Grid.Row="11"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ElevatorHorizontalPosition}" />
                <TextBlock Grid.Row="11"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding ElevatorHorizontalPosition, StringFormat=0}" />

                <TextBlock Grid.Row="11"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ZeroPawlSensor}" />
                <controls:PpcSensorControl Grid.Row="11"
                                           Grid.Column="1"
                                           Margin="0,20"
                                           SensorState="{Binding IsZeroChain}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}" />

                <!-- Shuttter -->
                <TextBlock Grid.Row="12"
                           Grid.ColumnSpan="2"
                           Margin="0,20,0,0"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.Shutter}" />
                <Border Grid.Row="13"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />

                <TextBlock Grid.Row="14"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ShutterOpen}" />
                <controls:PpcSensorControl Grid.Row="14"
                                           Grid.Column="1"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding ShutterSensors.Open}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}" />

                <TextBlock Grid.Row="15"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ShutterMidWay}"
                           Visibility="{Binding IsShutterTwoSensors, Converter={StaticResource BTVIC}}" />
                <controls:PpcSensorControl Grid.Row="15"
                                           Grid.Column="1"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding ShutterSensors.MidWay}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}"
                                           Visibility="{Binding IsShutterTwoSensors, Converter={StaticResource BTVIC}}" />

                <TextBlock Grid.Row="16"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ShutterClosed}" />
                <controls:PpcSensorControl Grid.Row="16"
                                           Grid.Column="1"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding ShutterSensors.Closed}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}" />


            </Grid>
        </Border>

        <StackPanel Grid.Row="1"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">

            <controls:PpcButton Margin="5"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding SelectBayPosition1Command}"
                                Content="{x:Static res:InstallationApp.BayPosition1}"
                                IsActive="{Binding IsPosition1Selected}"
                                Visibility="{Binding BayIsMultiPosition, Converter={StaticResource BTVIC}}" />

            <controls:PpcButton Margin="15"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Command="{Binding SelectBayPosition2Command}"
                                Content="{x:Static res:InstallationApp.BayPosition2}"
                                IsActive="{Binding IsPosition2Selected}"
                                Visibility="{Binding BayIsMultiPosition, Converter={StaticResource BTVC}}" />
        </StackPanel>

        <ctrls:PpcSpinEdit Grid.Row="2"
                           Grid.Column="1"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           EditValue="{Binding LoadingUnitId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue='2'}"
                           IsEnabled="{Binding IsExecutingProcedure, Converter={StaticResource BNC}}"
                           LabelText="{x:Static res:InstallationApp.InsertDesiredLoadingUnitId}" />
        
        <ctrls:PpcSpinEdit Grid.Row="2"
                           Grid.Column="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           EditValue="{Binding CellId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, FallbackValue='2'}"
                           IsEnabled="{Binding IsExecutingProcedure, Converter={StaticResource BNC}}"
                           LabelText="{x:Static res:InstallationApp.InsertDestinationCellId}" />
        
        <controls:PpcButton Grid.Row="3"
                            Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding StartCommand}"
                            Content="{x:Static res:InstallationApp.Start}" />

        <controls:PpcButton Grid.Row="3"
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding StopCommand}"
                            Content="{x:Static res:InstallationApp.Stop}"
                            IsBusy="{Binding IsStopping}" />

    </Grid>
</ctrls:View>
