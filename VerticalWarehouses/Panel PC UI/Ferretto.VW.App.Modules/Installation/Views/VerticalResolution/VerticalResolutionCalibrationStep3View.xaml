<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.VerticalResolutionCalibrationStep3View"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:views="clr-namespace:Ferretto.VW.App.Installation.Views"
            prism:ViewModelLocator.AutoWireViewModel="True">

    <Grid Margin="140,30,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="90" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />

        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="3"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.VerticalResolutionCalibration}" />

        <views:VerticalResolutionCalibrationNavigationView Grid.Row="1"
                                                           Grid.ColumnSpan="3"
                                                           VerticalAlignment="Top" />

        <controls:PpcLabeledText Grid.Row="2"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding CurrentResolution, StringFormat={}{0:F6}}"
                                 LabelText="{x:Static res:InstallationApp.CurrentResolution}" />

        <controls:PpcLabeledText Grid.Row="3"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding InitialPosition}"
                                 LabelText="{x:Static res:InstallationApp.InitialPosition}" />

        <controls:PpcLabeledText Grid.Row="3"
                                 Grid.Column="1"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding FinalPosition}"
                                 LabelText="{x:Static res:InstallationApp.FinalPosition}" />

        <controls:PpcLabeledText Grid.Row="4"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding MeasuredInitialPosition}"
                                 LabelText="{x:Static res:InstallationApp.MeasuredInitialPosition}" />

        <controls:PpcTextBox Grid.Row="4"
                             Grid.Column="1"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             InputScope="Number"
                             InputText="{Binding InputMeasuredFinalPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=200}"
                             LabelText="{x:Static res:InstallationApp.MeasuredFinalPosition}" />

        <controls:PpcLabeledText Grid.Row="4"
                                 Grid.Column="2"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding MeasuredDistance}"
                                 LabelText="{x:Static res:InstallationApp.MeasuredDistance}" />

        <controls:PpcLabeledText Grid.Row="5"
                                 Grid.Column="1"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 IsEnabled="{Binding IsRetrievingNewResolution, Converter={StaticResource BNC}}"
                                 ContentText="{Binding NewResolution, StringFormat={}{0:F6},TargetNullValue={x:Static res:General.TargetNullValue}}"
                                 LabelText="{x:Static res:InstallationApp.NewResolution}" />

        <controls:PpcButton Grid.Row="6"
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding AcceptCommand}"
                            Content="{x:Static res:InstallationApp.Accept}" />

    </Grid>
</ctrls:View>
