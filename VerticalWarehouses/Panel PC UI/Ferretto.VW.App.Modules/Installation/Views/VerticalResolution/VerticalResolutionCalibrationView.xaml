<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.VerticalResolutionCalibrationView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid Width="1024"
          Height="608">

        <TextBlock Margin="140,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.VerticalResolutionCalibration}" />

        <controls:PpcTextBox Margin="140,100,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Highlighted="{Binding IsInitialPositionHighlighted}"
                             InputScope="Number"
                             InputText="{Binding InitialPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             LabelText="{x:Static res:InstallationApp.InitialPosition}" />
        <controls:PpcTextBox Margin="410,100,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Highlighted="{Binding IsMeasuredInitialPositionHighlighted}"
                             InputScope="Number"
                             InputText="{Binding MeasuredInitialPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsMeasuredInitialPositionActive}"
                             LabelText="{x:Static res:InstallationApp.MeasuredInitialPosition}" />
        <controls:PpcTextBox Margin="140,180,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Highlighted="{Binding IsDesiredFinalPositionHighlighted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             InputScope="Number"
                             InputText="{Binding DesiredFinalPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsDesiredFinalPositionActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             LabelText="{x:Static res:InstallationApp.FinalPosition}" />
        <controls:PpcTextBox Margin="410,180,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Highlighted="{Binding IsReadFinalPositionHighlighted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             InputScope="Number"
                             InputText="{Binding ReadFinalPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsReadFinalPositionActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             LabelText="{x:Static res:InstallationApp.ReadFinalPosition}" />
        <controls:PpcTextBox Margin="140,290,0,0"
                             HorizontalAlignment="Left"
                             VerticalAlignment="Top"
                             Highlighted="{Binding IsMeasuredMovementHighlighted, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             InputScope="Number"
                             InputText="{Binding MeasuredMovement, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             IsEnabled="{Binding IsMeasuredMovementActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             LabelText="{x:Static res:InstallationApp.MeasuredMovement}" />

        <controls:PpcLabeledText Margin="410,290,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding CurrentResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 LabelText="{x:Static res:InstallationApp.CurrentResolution}" />

        <controls:PpcLabeledText Margin="411,350,0,0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding NewResolution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 LabelText="{x:Static res:InstallationApp.NewResolution}" />

        <controls:PpcButton Margin="700,100,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding SetPositionButtonCommand}"
                            IsEnabled="{Binding IsSetPositionButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <StackPanel Orientation="Horizontal">
                <Grid Margin="10">

                    <Border Padding="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Background="Blue"
                            CornerRadius="5">
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Foreground="White"
                                   Text="Passo 1" />
                    </Border>
                </Grid>

                <TextBlock VerticalAlignment="Center"
                           Text="{x:Static res:InstallationApp.StartResolutionProcedure}" />
            </StackPanel>
        </controls:PpcButton>
        <controls:PpcButton Margin="700,180,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding MoveButtonCommand}"
                            Content="{x:Static res:InstallationApp.Move}"
                            IsEnabled="{Binding IsMoveButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <controls:PpcButton Margin="700,260,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding UpdateResolutionCommand}"
                            Content="{x:Static res:InstallationApp.UpdateResolution}"
                            IsEnabled="{Binding IsUpdateResolutionButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <controls:PpcButton Margin="700,340,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding AcceptButtonCommand}"
                            Content="{x:Static res:General.Accept}"
                            IsEnabled="{Binding IsAcceptButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <controls:PpcButton Margin="700,420,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding InitialPositionButtonCommand}"
                            Content="{x:Static res:InstallationApp.GoToInitialPosition}"
                            IsEnabled="{Binding IsGoToInitialPositionButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <controls:PpcButton Margin="700,500,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Command="{Binding CloseProcedureButtonCommand}"
                            Content="{x:Static res:InstallationApp.CloseProcedure}"
                            IsEnabled="{Binding IsCloseProcedureButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </Grid>
</ctrls:View>
