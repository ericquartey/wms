<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.WmsSettingsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:behaviors="clr-namespace:Ferretto.VW.App.Scaffolding.Behaviors;assembly=Ferretto.VW.App.Scaffolding"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrlBehaviors="clr-namespace:Ferretto.VW.App.Controls.Behaviors;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrlsScaff="clr-namespace:Ferretto.VW.App.Scaffolding.Controls;assembly=Ferretto.VW.App.Scaffolding"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:interactivity="http://schemas.microsoft.com/xaml/behaviors"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <ctrls:View.Resources>
        <Style x:Key="IPAddressSeparator"
               TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{DynamicResource IPAddressDotColor}" />
            <Setter Property="Margin" Value="4,0,6,10" />
            <Setter Property="FontSize" Value="{DynamicResource FontSize_High}" />
            <Setter Property="VerticalAlignment" Value="Bottom" />
            <Setter Property="Text" Value=":" />
        </Style>

        <Style x:Key="ByteTextBox"
               BasedOn="{StaticResource VWAPP_PpcTextBox_TextBoxStyle}"
               TargetType="{x:Type TextBox}">
            <Setter Property="MaxLength" Value="5" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
    </ctrls:View.Resources>

    <Grid x:Name="Root"
          Margin="40,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="Title"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   FontSize="36"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.WmsSetting}" />

        <RadioButton Grid.Row="2"
                     Margin="10,20,10,0"
                     HorizontalAlignment="Stretch"
                     HorizontalContentAlignment="Stretch"
                     GroupName="test">
            <RadioButton.Content>
                <TextBlock Grid.Row="2"
                           Margin="0,20"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="Disabled" />
            </RadioButton.Content>
        </RadioButton>

        <RadioButton Grid.Row="3"
                     Margin="10,0,10,0"
                     GroupName="test"
                     IsChecked="{Binding IsWmsEnabled, Mode=TwoWay}">
            <RadioButton.Content>
                <TextBlock Margin="0,10"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="Enabled" />
            </RadioButton.Content>

        </RadioButton>

        <Grid Grid.Row="4"
              Grid.ColumnSpan="2"
              Margin="55,0,0,0"
              IsEnabled="{Binding IsWmsEnabled}">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock Grid.Row="0"
                           Margin="0,0"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="{DynamicResource FontSize_High}"
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="{x:Static res:InstallationApp.IpAutomationService}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ctrlsScaff:IPAddressBox Width="460"
                                             Height="60"
                                             HorizontalAlignment="Left"
                                             VerticalAlignment="Top"
                                             FontSize="34"
                                             IPAddress="{Binding IPEndPoint.Address, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}" />

                    <TextBlock Grid.Column="1"
                               Style="{DynamicResource IPAddressSeparator}" />
                    <TextBox Grid.Column="2"
                             Width="100"
                             Height="60"
                             VerticalAlignment="Top"
                             Style="{StaticResource ByteTextBox}"
                             Text="{Binding Path=IPEndPoint.Port, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource I32TSC}}">
                        <interactivity:Interaction.Behaviors>
                            <ctrlBehaviors:KeyboardPopupBehavior KeyboardLayoutCode="Numpad" />
                            <ctrlBehaviors:TextBoxAutoSelectBehavior />
                        </interactivity:Interaction.Behaviors>
                    </TextBox>
                    <controls:PpcButton Grid.Column="3"
                                        Width="100"
                                        Height="60"
                                        Margin="10,0,0,10"
                                        Command="{Binding CheckEndpointCommand}"
                                        Content="{x:Static res:InstallationApp.Check}"
                                        FontSize="18" />
                </Grid>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Orientation="Horizontal">
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="{DynamicResource FontSize_Normal}"
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="{x:Static res:InstallationApp.WmsState}" />
                <TextBlock HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="{DynamicResource FontSize_Normal}"
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="{Binding Path=HealthStatus, Converter={StaticResource ETHSC}}" />
            </StackPanel>

        </Grid>

        <controls:PpcButton Grid.Row="5"
                            Grid.Column="1"
                            Grid.ColumnSpan="3"
                            Width="160"
                            Height="60"
                            Margin="15,15,15,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Command="{Binding SaveCommand}"
                            Content="{x:Static res:InstallationApp.Save}"
                            FontSize="18" />
    </Grid>
</ctrls:View>
