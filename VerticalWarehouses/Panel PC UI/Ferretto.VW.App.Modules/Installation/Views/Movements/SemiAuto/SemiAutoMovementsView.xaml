<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.SemiAutoMovementsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:system="clr-namespace:System;assembly=mscorlib"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="50,15">

        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="2"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Movimenti semi-automatici" />

        <Border Grid.Row="1"
                Margin="0,4,4,4"
                Background="{DynamicResource PpcButtonBackground}">
            <Grid Margin="8">

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="35" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="Elevatore" />
                <Border Grid.Row="1"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />

                <TextBlock Grid.Row="2"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ElevatorVerticalPosition}" />
                <TextBlock Grid.Row="2"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding ElevatorVerticalPosition, StringFormat={}{0:F1}}" />

                <TextBlock Grid.Row="3"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.LoadedTray}" />
                <TextBlock Grid.Row="3"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding EmbarkedLoadingUnit.Id, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />

                <TextBlock Grid.Row="4"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ElevatorHorizontalPosition}" />
                <TextBlock Grid.Row="4"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding ElevatorHorizontalPosition, StringFormat={}{0:F1}, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />
                <TextBlock Grid.Row="5"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.TrayWeight}" />
                <TextBlock Grid.Row="5"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding EmbarkedLoadingUnit.Weight, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />

                <TextBlock Grid.Row="6"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ZeroPawlSensor}" />
                <controls:PpcSensorControl Grid.Row="6"
                                           Grid.Column="1"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding IsZeroChain}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}" />

                <TextBlock Grid.Row="7"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.LuPresenceOnMachineCradle}" />
                <controls:PpcSensorControl Grid.Row="7"
                                           Grid.Column="1"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding Sensors.LuPresentInMachineSideBay1}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}" />

                <TextBlock Grid.Row="8"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.LuPresenceOnOperatorCradle}" />
                <controls:PpcSensorControl Grid.Row="8"
                                           Grid.Column="1"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding Sensors.LuPresentInOperatorSideBay1}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}" />

                <TextBlock Grid.Row="9"
                           Grid.ColumnSpan="2"
                           Margin="0,5,0,0"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="Cella" />
                <Border Grid.Row="10"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />

                <TextBlock Grid.Row="11"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.TrayInCell}" />
                <TextBlock Grid.Row="11"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding LoadingUnitInCell.Code, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />
                <TextBlock Grid.Row="12"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.CellHeight}" />
                <TextBlock Grid.Row="12"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding SelectedCell.Position, StringFormat={}{0:F1}, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />

                <TextBlock Grid.Row="13"
                           Grid.ColumnSpan="2"
                           Margin="0,20,0,0"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="Baia" />
                <Border Grid.Row="14"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />
                <TextBlock Grid.Row="15"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.BayHeight}" />
                <TextBlock Grid.Row="15"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding BayPositionHeight}" />
                <TextBlock Grid.Row="16"
                           Grid.Column="0"
                           Foreground="White"
                           Text="Posizione Catena" />
                <TextBlock Grid.Row="16"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding BayChainHorizontalPosition}" />
                <TextBlock Grid.Row="17"
                           Grid.Column="0"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.TrayInBay}" />
                <TextBlock Grid.Row="17"
                           Grid.Column="1"
                           Foreground="White"
                           Text="{Binding LoadingUnitInBay.Code, TargetNullValue={x:Static res:General.TargetNullValue}, FallbackValue={x:Static res:General.TargetNullValue}}" />
                <TextBlock Grid.Row="18"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ZeroChain}" />
                <controls:PpcSensorControl Grid.Row="18"
                                           Grid.Column="1"
                                           Margin="0,5,0,0"
                                           SensorState="{Binding Sensors.ACUBay1S3IND}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}"
                                           Visibility="{Binding Bay1ZeroChainIsVisible, Converter={StaticResource BTVC}}" />
                <controls:PpcSensorControl Grid.Row="18"
                                           Grid.Column="1"
                                           Margin="0,5,0,0"
                                           SensorState="{Binding Sensors.ACUBay2S3IND}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}"
                                           Visibility="{Binding Bay2ZeroChainIsVisible, Converter={StaticResource BTVC}}" />
                <controls:PpcSensorControl Grid.Row="18"
                                           Grid.Column="1"
                                           Margin="0,5,0,0"
                                           SensorState="{Binding Sensors.ACUBay3S3IND}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}"
                                           Visibility="{Binding Bay3ZeroChainIsVisible, Converter={StaticResource BTVC}}" />
                <TextBlock Grid.Row="19"
                           Grid.ColumnSpan="2"
                           Margin="0,20,0,0"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.Shutter}" />
                <Border Grid.Row="20"
                        Grid.ColumnSpan="2"
                        Margin="0,10,0,5"
                        BorderBrush="Black"
                        BorderThickness="0,2,0,0" />

                <TextBlock Grid.Row="21"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ShutterOpen}" />
                <controls:PpcSensorControl Grid.Row="21"
                                           Grid.Column="1"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding ShutterSensors.Open}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}" />

                <TextBlock Grid.Row="22"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ShutterMidWay}"
                           Visibility="{Binding IsShutterTwoSensors, Converter={StaticResource BTVC}}" />
                <controls:PpcSensorControl Grid.Row="22"
                                           Grid.Column="1"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding ShutterSensors.MidWay}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}"
                                           Visibility="{Binding IsShutterTwoSensors, Converter={StaticResource BTVC}}" />

                <TextBlock Grid.Row="23"
                           Grid.Column="0"
                           VerticalAlignment="Center"
                           Foreground="White"
                           Text="{x:Static res:InstallationApp.ShutterClosed}" />
                <controls:PpcSensorControl Grid.Row="23"
                                           Grid.Column="1"
                                           Margin="0"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding ShutterSensors.Closed}"
                                           Template="{StaticResource PpcSensorControlSmallTemplate}" />

            </Grid>
        </Border>

        <Grid Grid.Row="1"
              Grid.Column="1"
              VerticalAlignment="Top">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <ctrls:PpcSpinEdit Grid.Column="0"
                               Margin="4,4,4,0"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"
                               EditValue="{Binding InputHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               IsEnabled="{Binding CanInputHeight}"
                               Keyboard="Numpad"
                               LabelText="{x:Static res:InstallationApp.Position}"
                               Mask="####0"
                               WidthNumber="210" />

            <controls:PpcButton Grid.Row="1"
                                Grid.Column="0"
                                Margin="4,0,4,4"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Command="{Binding MoveToHeightCommand}"
                                Content="{x:Static res:InstallationApp.GoToPosition}"
                                IsBusy="{Binding IsElevatorMovingToHeight}" />

            <ctrls:PpcSpinEdit Grid.Column="1"
                               Margin="4,4,4,0"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"
                               EditValue="{Binding InputCellId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               IsEnabled="{Binding CanInputCellId}"
                               LabelText="{x:Static res:InstallationApp.CellNumber}"
                               Mask="##0"
                               WidthNumber="210" />

            <controls:PpcButton Grid.Row="1"
                                Grid.Column="1"
                                Margin="4,0,4,4"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Command="{Binding MoveToCellHeightCommand}"
                                Content="{x:Static res:InstallationApp.MoveToCellHeight}"
                                IsBusy="{Binding IsElevatorMovingToCell}" />

            <ctrls:PpcSpinEdit Grid.Column="2"
                               Margin="4,4,4,0"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"
                               EditValue="{Binding InputLoadingUnitId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               IsEnabled="{Binding CanInputLoadingUnitId}"
                               LabelText="{x:Static res:InstallationApp.DrawerNumber}"
                               Mask="#0"
                               WidthNumber="210" />

            <controls:PpcButton Grid.Row="1"
                                Grid.Column="2"
                                Margin="4,0,4,4"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Command="{Binding MoveToLoadingUnitHeightCommand}"
                                Content="{x:Static res:InstallationApp.GoToDrawer}"
                                IsBusy="{Binding IsElevatorMovingToLoadingUnit}" />

            <controls:PpcButton Grid.Row="2"
                                Grid.Column="0"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding EmbarkBackwardsCommand}"
                                Content="{x:Static res:InstallationApp.EmbarkBackwards}"
                                IsBusy="{Binding IsElevatorEmbarking}"
                                Visibility="{Binding EmbarkedLoadingUnit, Converter={StaticResource RTVC}}" />

            <controls:PpcButton Grid.Row="2"
                                Grid.Column="0"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding DisembarkBackwardsCommand}"
                                Content="{x:Static res:InstallationApp.DisembarkBackwards}"
                                IsBusy="{Binding IsElevatorDisembarking}"
                                Visibility="{Binding EmbarkedLoadingUnit, Converter={StaticResource RTVIC}}" />


            <controls:PpcButton Grid.Row="2"
                                Grid.Column="1"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding EmbarkForwardsCommand}"
                                Content="{x:Static res:InstallationApp.EmbarkForwards}"
                                IsBusy="{Binding IsElevatorEmbarking}"
                                Visibility="{Binding EmbarkedLoadingUnit, Converter={StaticResource RTVC}}" />

            <controls:PpcButton Grid.Row="2"
                                Grid.Column="1"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding DisembarkForwardsCommand}"
                                Content="{x:Static res:InstallationApp.DisembarkForwards}"
                                IsBusy="{Binding IsElevatorDisembarking}"
                                Visibility="{Binding EmbarkedLoadingUnit, Converter={StaticResource RTVIC}}" />

            <controls:PpcButton Grid.Row="3"
                                Grid.Column="0"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding TuningChainCommand}"
                                Content="{x:Static res:InstallationApp.ChainCalibration}"
                                IsBusy="{Binding IsTuningChain}" />

            <controls:PpcButton Grid.Row="3"
                                Grid.Column="1"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding TuningBayCommand}"
                                Content="{x:Static res:InstallationApp.BayCalibration}"
                                IsBusy="{Binding IsTuningBay}" />

            <controls:PpcButton Grid.Row="4"
                                Grid.Column="0"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding MoveToBayHeightCommand}"
                                Content="{x:Static res:InstallationApp.GoToBay}"
                                IsBusy="{Binding IsElevatorMovingToBay}" />

            <controls:PpcButton Grid.Row="4"
                                Grid.Column="1"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectBayPosition1Command}"
                                Content="{x:Static res:InstallationApp.BayPosition1}"
                                IsActive="{Binding IsPosition1Selected}"
                                Visibility="{Binding BayIsMultiPosition, Converter={StaticResource BTVC}}" />

            <controls:PpcButton Grid.Row="4"
                                Grid.Column="2"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding SelectBayPosition2Command}"
                                Content="{x:Static res:InstallationApp.BayPosition2}"
                                IsActive="{Binding IsPosition2Selected}"
                                Visibility="{Binding BayIsMultiPosition, Converter={StaticResource BTVC}}" />

            <controls:PpcButton Grid.Row="5"
                                Grid.Column="0"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding OpenShutterCommand}"
                                Content="{x:Static res:InstallationApp.GateOpen}" />

            <controls:PpcButton Grid.Row="5"
                                Grid.Column="1"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding IntermediateShutterCommand}"
                                Content="{x:Static res:InstallationApp.IntermediatePosition}"
                                Visibility="{Binding BayIsMultiPosition, Converter={StaticResource BTVC}}" />

            <controls:PpcButton Grid.Row="5"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding ClosedShutterCommand}"
                                Content="{x:Static res:InstallationApp.GateClose}">
                <controls:PpcButton.Style>
                    <Style BasedOn="{StaticResource PpcButtonStyle}"
                           TargetType="{x:Type controls:PpcButton}">
                        <Setter Property="Grid.Column" Value="2" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding BayIsMultiPosition}"
                                         Value="False">
                                <Setter Property="Grid.Column" Value="1" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </controls:PpcButton.Style>
            </controls:PpcButton>


            <controls:PpcButton Grid.Row="6"
                                Grid.Column="0"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding CarouselUpCommand}"
                                Content="{x:Static res:InstallationApp.CarouselUp}"
                                Visibility="{Binding HasCarousel, Converter={StaticResource BTVC}}" />

            <controls:PpcButton Grid.Row="6"
                                Grid.Column="1"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding CarouselDownCommand}"
                                Content="{x:Static res:InstallationApp.CarouselDown}"
                                Visibility="{Binding HasCarousel, Converter={StaticResource BTVC}}" />

            <controls:PpcButton Grid.Row="6"
                                Grid.Column="2"
                                Margin="5"
                                HorizontalAlignment="Center"
                                Command="{Binding StopMovingCommand}"
                                Content="{x:Static res:InstallationApp.Stop}" />
        </Grid>

    </Grid>

</ctrls:View>
