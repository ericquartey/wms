<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.ManualMovementsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:views="clr-namespace:Ferretto.VW.App.Installation.Views"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="30,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.26*" />
            <ColumnDefinition Width="0.4*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="0.34*" />
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="4"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.ManualMovements}" />

        <ctrls:SensorsPanel Grid.Row="1"
                            Grid.RowSpan="5"
                            Margin="0,0,5,0" />

        <views:EngineManualMovementsView Grid.Row="1"
                                         Grid.Column="1"
                                         DataContext="{Binding EngineManualMovementsViewModel}" />

        <views:ShutterEngineManualMovementsView Grid.Row="1"
                                                Grid.Column="3"
                                                DataContext="{Binding ShutterEngineManualMovementsViewModel}" />

        <views:ExternalBayManualMovementsView Grid.Row="3"
                                              Grid.Column="1"
                                              DataContext="{Binding ExternalBayManualMovementsViewModel}"
                                              Visibility="{Binding Path=DataContext.IsBayExternal, Converter={StaticResource BTVC}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ctrls:View}}}"/>

        <views:CarouselManualMovementsView Grid.Row="3"
                                           Grid.Column="3"
                                           DataContext="{Binding CarouselManualMovementsViewModel}"
                                           Visibility="{Binding Path=DataContext.HasCarousel, Converter={StaticResource BTVC}, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ctrls:View}}}" />

        <Line Grid.Row="2"
              Grid.Column="1"
              Margin="20,0,20,0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Center"
              Stretch="Uniform"
              Stroke="{DynamicResource VWAPP_CustomLabel_LabelTextBlock_Foreground_Disabled}"
              StrokeThickness="1"
              X1="0"
              X2="1"
              Y1="0"
              Y2="0" />

        <Line Grid.Row="2"
              Grid.Column="3"
              Margin="20,0,20,0"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Center"
              Stretch="Uniform"
              Stroke="{DynamicResource VWAPP_CustomLabel_LabelTextBlock_Foreground_Disabled}"
              StrokeThickness="1"
              X1="0"
              X2="1"
              Y1="0"
              Y2="0" />

        <Line Grid.Row="1"
              Grid.Column="2"
              Margin="0,20,0,20"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Stretch="Uniform"
              Stroke="{DynamicResource VWAPP_CustomLabel_LabelTextBlock_Foreground_Disabled}"
              StrokeThickness="1"
              X1="0"
              X2="0"
              Y1="0"
              Y2="1" />
        <Line Grid.Row="3"
              Grid.Column="2"
              Margin="0,20,0,20"
              HorizontalAlignment="Center"
              VerticalAlignment="Stretch"
              Stretch="Uniform"
              Stroke="{DynamicResource VWAPP_CustomLabel_LabelTextBlock_Foreground_Disabled}"
              StrokeThickness="1"
              X1="0"
              X2="0"
              Y1="0"
              Y2="1" />
    </Grid>

</ctrls:View>
