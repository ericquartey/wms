<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.ExternalBayManualMovementsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="10"
          IsEnabled="{Binding IsEnabled}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.ExternalBayManualMovements}" />

        <controls:PpcButton Grid.Row="1"
                            HorizontalAlignment="Center"
                            Content="{x:Static res:InstallationApp.Forwards}"
                            IsEnabled="{Binding CanExecuteMoveForwardsCommand}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="PreviewMouseDown">
                    <i:InvokeCommandAction Command="{Binding MoveForwardsCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="PreviewMouseUp">
                    <i:InvokeCommandAction Command="{Binding StopMovementCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </controls:PpcButton>

        <controls:PpcButton Grid.Row="2"
                            Margin="0,15,0,0"
                            HorizontalAlignment="Center"
                            Content="{x:Static res:InstallationApp.Backwards}"
                            IsEnabled="{Binding CanExecuteMoveBackwardsCommand}">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="PreviewMouseDown">
                    <i:InvokeCommandAction Command="{Binding MoveBackwardsCommand}" />
                </i:EventTrigger>
                <i:EventTrigger EventName="PreviewMouseUp">
                    <i:InvokeCommandAction Command="{Binding StopMovementCommand}" />
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </controls:PpcButton>

    </Grid>

</ctrls:View>
