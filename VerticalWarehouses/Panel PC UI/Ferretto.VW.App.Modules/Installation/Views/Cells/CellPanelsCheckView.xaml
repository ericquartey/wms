<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.CellPanelsCheckView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:convertes="clr-namespace:Ferretto.VW.App.Controls.Converters;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:local="clr-namespace:Ferretto.VW.App.Installation.Views"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            UseLayoutRounding="True"
            mc:Ignorable="d">
    <Grid Margin="15,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <!--#region Title-->
        <StackPanel Grid.ColumnSpan="4"
                    Orientation="Horizontal">
            <TextBlock Margin="0,10,15,10"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="4.4.2" />
            <TextBlock Grid.ColumnSpan="2"
                       Margin="0,10,15,10"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="Controllo quote celle" />
        </StackPanel>
        <!--#endregion-->

        <!--#region Description-->
        <TextBlock Grid.Row="1"
                   Grid.ColumnSpan="4"
                   Height="Auto"
                   Margin="0,0,15,0"
                   VerticalAlignment="Top"
                   FontSize="{DynamicResource FontSize_Small}"
                   Style="{DynamicResource VWAPP_ViewTitleSmallTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpVPPMDescription}"
                   TextWrapping="Wrap" />
        <!--#endregion-->

        <!--#region Tails-->

        <Border Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Margin="3,30,15,0"
                Background="{DynamicResource PpcBackground}">
            <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                    BorderThickness="{DynamicResource PpcBorderThickness}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.ColumnSpan="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Normal}"
                                   FontWeight="Normal"
                                   Foreground="{DynamicResource FerrettoLightGray}"
                                   Text="{x:Static res:InstallationApp.CurrentPanel}"
                                   TextAlignment="Left" />

                        <TextBlock Grid.Row="1"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   FontSize="{StaticResource FontSize_Very_High}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding CurrentPanelNumber}"
                                   TextWrapping="Wrap" />

                        <Border Grid.RowSpan="2"
                                Grid.Column="1"
                                Margin="0,25"
                                VerticalAlignment="Stretch"
                                BorderBrush="{DynamicResource FerrettoMediumGray}"
                                BorderThickness="1" />

                    </Grid>

                    <Grid Grid.Column="3"
                          Grid.ColumnSpan="3">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Normal}"
                                   FontWeight="Normal"
                                   Foreground="{DynamicResource FerrettoLightGray}"
                                   Text="{x:Static res:InstallationApp.CellHeight}"
                                   TextAlignment="Left" />

                        <TextBlock Grid.Row="1"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   FontSize="{StaticResource FontSize_Very_High}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding CurrentCell.Position}"
                                   TextWrapping="Wrap" />

                        <Border Grid.RowSpan="2"
                                Grid.Column="1"
                                Margin="0,25"
                                VerticalAlignment="Stretch"
                                BorderBrush="{DynamicResource FerrettoMediumGray}"
                                BorderThickness="1" />

                    </Grid>

                    <Grid Grid.Column="6"
                          Grid.ColumnSpan="3">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Normal}"
                                   FontWeight="Normal"
                                   Foreground="{DynamicResource FerrettoLightGray}"
                                   Text="{x:Static res:InstallationApp.Side}" />

                        <TextBlock Grid.Row="1"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   FontSize="{StaticResource FontSize_Very_High}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding CurrentPanel.Side, Converter={StaticResource EWSC}}"
                                   TextWrapping="Wrap" />

                        <Border Grid.RowSpan="2"
                                Grid.Column="1"
                                Margin="0,25"
                                VerticalAlignment="Stretch"
                                BorderBrush="{DynamicResource FerrettoMediumGray}"
                                BorderThickness="1" />

                    </Grid>

                    <Grid Grid.Column="9"
                          Grid.ColumnSpan="3"
                          Margin="0,0,15,0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>

                        <TextBlock Margin="0,20,0,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Normal}"
                                   FontWeight="Normal"
                                   Foreground="{DynamicResource FerrettoLightGray}"
                                   Text="{x:Static res:InstallationApp.Displacement}"
                                   TextAlignment="Left" />

                        <TextBlock Grid.Row="1"
                                   Margin="0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Top"
                                   FontSize="{StaticResource FontSize_Very_High}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding Displacement, StringFormat={}{0:F1}, FallbackValue=0}"
                                   TextWrapping="Wrap" />

                    </Grid>

                </Grid>
            </Border>
        </Border>

        <controls:CardSensorAxisVertical Grid.Row="3"
                                         Grid.Column="0"
                                         Width="230"
                                         Height="90"
                                         MinHeight="90"
                                         Margin="0,15,15,0" />
        <controls:CardSensorAxisHorizontal Grid.Row="3"
                                           Grid.Column="1"
                                           Width="230"
                                           Height="90"
                                           MinHeight="90"
                                           Margin="0,15,15,0" />
        <controls:CardSensorDrawer Grid.Row="3"
                                   Grid.Column="2"
                                   Width="230"
                                   Height="90"
                                   MinHeight="90"
                                   Margin="0,15,15,0" />

        <Border Grid.Row="3"
                Grid.Column="3"
                Height="90"
                Margin="0,15,15,0"
                Background="{DynamicResource PpcBackground}">
            <Border BorderBrush="{DynamicResource PpcBorderBrush}"
                    BorderThickness="{DynamicResource PpcBorderThickness}">

                <Grid Grid.Column="8"
                      Grid.ColumnSpan="4">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Margin="8,4"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_Normal}"
                               FontWeight="Normal"
                               Foreground="{DynamicResource FerrettoLightGray}"
                               Text="Pannelli testati" />

                    <StackPanel Grid.Row="1"
                                Margin="4"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">

                        <TextBlock Margin="4,0,4,4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_High}"
                                   Foreground="{DynamicResource PpcForeground}">
                            <Run Text="{Binding PanelsCheck, FallbackValue=0, Mode=OneWay}" />
                            <Run Text="/" />
                            <Run Text="{Binding Panels.Count, FallbackValue=0, Mode=OneWay}" />
                        </TextBlock>

                    </StackPanel>

                    <controls:PpcProgressBar Grid.Row="2"
                                             Height="8"
                                             Margin="8,4,8,8"
                                             Color1="{DynamicResource FerrettoGreen}"
                                             Color2="Green"
                                             Maximum="100"
                                             Minimum="0"
                                             Value="{Binding PanelsCheckPercent, Mode=OneWay}" />

                </Grid>
            </Border>
        </Border>

        <TextBlock Grid.Row="4"
                   Grid.ColumnSpan="3"
                   Margin="0,15,0,15"
                   FontSize="18"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="Correggere la posizione dell'elevatore fino al perfetto allineamento e premere Avanti."
                   TextWrapping="Wrap" />

        <TextBlock Grid.Row="4"
                   Grid.Column="3"
                   Margin="0,15,15,15"
                   HorizontalAlignment="Right"
                   FontSize="18"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   TextWrapping="Wrap">
            <TextBlock.Text>
                <MultiBinding StringFormat="Misurazione {0} di {1}">
                    <Binding Path="PanelsCheck"
                             TargetNullValue="{x:Static res:General.TargetNullValue}" />
                    <Binding Path="Panels.Count"
                             TargetNullValue="{x:Static res:General.TargetNullValue}" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>

        <ctrls:PpcSpinEdit Grid.Row="5"
                           Grid.Column="0"
                           Height="90"
                           Margin="0,15,15,0"
                           VerticalAlignment="Center"
                           EditValue="{Binding CurrentCellId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                           IsEnabled="{Binding IsCanStartPosition}"
                           LabelText="Cella selezionata"
                           MaxValue="999"
                           MinValue="1" />

        <controls:PpcButton Grid.Row="5"
                            Grid.Column="1"
                            Margin="0,15,15,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding MoveToCellCommand}"
                            Content="Vai a quota"
                            Style="{DynamicResource WizardIntoButton}" />

        <ctrls:PpcSpinEdit Grid.Row="6"
                           Grid.Column="0"
                           Height="90"
                           Margin="0,15,15,0"
                           VerticalAlignment="Center"
                           EditValue="{Binding StepValue, Mode=TwoWay}"
                           Increment="0.5"
                           IsEnabled="{Binding IsCanStepValue}"
                           LabelText="{x:Static res:InstallationApp.StepValue}"
                           Mask="#0.0" />

        <controls:PpcButton Grid.Row="6"
                            Grid.Column="1"
                            Margin="0,15,15,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Command="{Binding DisplacementCommand}"
                            Content="Sposta elevatore"
                            Style="{DynamicResource WizardIntoButton}" />

        <!--#region Body-->

        <Grid Grid.Row="6"
              Grid.RowSpan="2"
              Grid.ColumnSpan="4"
              Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>


            <StackPanel Grid.Row="2"
                        Grid.Column="1"
                        Grid.ColumnSpan="3"
                        Orientation="Horizontal"
                        Visibility="Collapsed">

                <controls:PpcButton Width="110"
                                    Margin="0,0,10,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Command="{Binding GoToPreviousPanelCommand}"
                                    Content="{x:Static res:InstallationApp.PreviousPanel}" />

                <controls:PpcButton Width="110"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    Command="{Binding GoToNextPanelCommand}"
                                    Content="{x:Static res:InstallationApp.NextPanel}" />
            </StackPanel>

            <ctrls:PpcSpinEdit Grid.Row="4"
                               Grid.RowSpan="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               EditValue="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                               LabelText="{x:Static res:InstallationApp.StepValue}"
                               Visibility="Collapsed" />

            <controls:PpcLabeledText Grid.Row="4"
                                     Grid.RowSpan="2"
                                     Grid.Column="1"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     ContentText="{Binding InitialPosition, StringFormat={}{0:F1}}"
                                     LabelText="{x:Static res:InstallationApp.InitialPosition}"
                                     Visibility="Collapsed" />

            <controls:PpcLabeledText Grid.Row="4"
                                     Grid.RowSpan="2"
                                     Grid.Column="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     ContentText="{Binding CurrentHeight, StringFormat={}{0:F1}}"
                                     LabelText="{x:Static res:InstallationApp.CurrentHeight}"
                                     Visibility="Collapsed" />

            <controls:PpcButton Grid.Row="3"
                                Grid.Column="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Command="{Binding GoToCellHeightCommand}"
                                Content="{x:Static res:InstallationApp.MoveToCellHeight}"
                                IsBusy="{Binding IsElevatorMovingToCell}"
                                Visibility="Collapsed" />

            <controls:PpcButton Grid.Row="4"
                                Grid.Column="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Command="{Binding MoveUpCommand}"
                                Content="{x:Static res:InstallationApp.Up}"
                                IsBusy="{Binding IsElevatorMovingUp}"
                                Visibility="Collapsed" />

            <controls:PpcButton Grid.Row="5"
                                Grid.Column="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Command="{Binding MoveDownCommand}"
                                Content="{x:Static res:InstallationApp.Down}"
                                IsBusy="{Binding IsElevatorMovingDown}"
                                Visibility="Collapsed" />

            <controls:PpcButton Grid.Row="6"
                                Grid.Column="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Command="{Binding ApplyCorrectionCommand}"
                                Content="{x:Static res:InstallationApp.ApplyCorrection}"
                                Visibility="Collapsed" />

        </Grid>

        <!--#endregion-->

        <controls:PpcButton Grid.Row="7"
                            Grid.Column="3"
                            Margin="0,15,15,0"
                            Command="{Binding StopCommand}"
                            Content="{x:Static res:InstallationApp.Stop}" />
        <!--#endregion-->

    </Grid>

</ctrls:View>
