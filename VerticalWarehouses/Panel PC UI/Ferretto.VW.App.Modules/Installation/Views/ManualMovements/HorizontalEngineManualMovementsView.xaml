<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.HorizontalEngineManualMovementsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:views="clr-namespace:Ferretto.VW.App.Installation.Views"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid Margin="0,30,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <views:ManualMovementsNavigationView />

        <Grid Grid.Column="1"
              Margin="130,0,130,10">

            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="110" />
                <RowDefinition Height="110" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock Grid.ColumnSpan="2"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{x:Static res:InstallationApp.LSMTHorizontalAxisTitle}" />

            <controls:PpcLabeledText Grid.Row="1"
                                     Grid.ColumnSpan="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{x:Static res:InstallationApp.LSMTComandNote}"
                                     LabelText="{x:Static res:InstallationApp.LSMTNoteHeader}" />

            <controls:PpcLabeledText Grid.Row="2"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Top"
                                     ContentText="{Binding CurrentPosition}"
                                     LabelText="{x:Static res:InstallationApp.ElevatorHorizontalPosition}" />

            <StackPanel Grid.Row="2"
                        Grid.Column="1"
                        HorizontalAlignment="Left">
                <controls:PpcButton Margin="0,0,0,30"
                                    Content="{x:Static res:InstallationApp.Forwards}"
                                    IsEnabled="{Binding CanExecuteMoveForwardsCommand}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseDown">
                            <i:InvokeCommandAction Command="{Binding MoveForwardsCommand}" />
                        </i:EventTrigger>
                        <i:EventTrigger EventName="PreviewMouseUp">
                            <i:InvokeCommandAction Command="{Binding StopMovementCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </controls:PpcButton>

                <controls:PpcButton Content="{x:Static res:InstallationApp.Backwards}"
                                    IsEnabled="{Binding CanExecuteMoveBackwardsCommand}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="PreviewMouseDown">
                            <i:InvokeCommandAction Command="{Binding MoveBackwardsCommand}" />
                        </i:EventTrigger>
                        <i:EventTrigger EventName="PreviewMouseUp">
                            <i:InvokeCommandAction Command="{Binding StopMovementCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </controls:PpcButton>
            </StackPanel>


        </Grid>
    </Grid>

</ctrls:View>
