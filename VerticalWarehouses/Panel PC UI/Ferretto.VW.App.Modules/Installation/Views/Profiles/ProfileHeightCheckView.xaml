<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.ProfileHeightCheckView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:convertes="clr-namespace:Ferretto.VW.App.Controls.Converters;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:local="clr-namespace:Ferretto.VW.App.Installation.Views"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            UseLayoutRounding="True"
            mc:Ignorable="d">

    <ctrls:View.Resources>
        <!--#region Converters-->
        <convertes:BoolToBrushConverter x:Key="BoolToBrushConverter"
                                        FalseBrushResourceName="PpcBackground"
                                        TrueBrush="{StaticResource FerrettoBlue}" />
        <!--#endregion-->

        <!--#region DataTemplate Body-->
        <DataTemplate x:Key="DataTemplateInitialize">
            <Grid Margin="20"
                  DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType={x:Type ctrls:View}}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="2">
                    <TextBlock Style="{DynamicResource VWAPP_WizardTitleTextBlockStyle}"
                               Text="{res:Loc InstallationApp.UnitBay}" />

                    <TextBlock Grid.ColumnSpan="2"
                               Style="{DynamicResource VWAPP_WizardDescriptionTextBlockStyle}"
                               Text="{res:Loc InstallationApp.ProfileHeighCheckDescription}" />
                </StackPanel>

                <ctrls:PpcSpinEdit Grid.Row="1"
                                   Grid.Column="0"
                                   Height="90"
                                   Margin="15,5"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center"
                                   EditValue="{Binding Path=LoadingUnitId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                   IsEnabled="{Binding CanLoadingUnitId}"
                                   LabelText="{res:Loc InstallationApp.DrawerNumber}"
                                   Mask="##0"
                                   MinValue="1" />

                <controls:PpcButton Grid.Row="1"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Command="{Binding CallLoadunitToBayCommand}"
                                    Content="{res:Loc InstallationApp.CallUnit}"
                                    Style="{StaticResource WizardIntoButton}" />

                <StackPanel Grid.Row="2"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Orientation="Horizontal"
                            Visibility="{Binding AdminCalibration}">
                    <ctrls:PpcSpinEdit Width="200"
                                       Margin="15,5,5,5"
                                       EditValue="{Binding Path=ProfileCorrectDistance, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                       LabelText="{res:Loc InstallationApp.CorrectDistance}"
                                       Mask="N1" />

                    <ctrls:PpcSpinEdit Width="200"
                                       Margin="5"
                                       EditValue="{Binding Path=ProfileDegrees, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                       LabelText="{res:Loc InstallationApp.TemplateInclination}"
                                       Mask="N1" />

                    <ctrls:PpcSpinEdit Width="200"
                                       Margin="5,5,15,5"
                                       EditValue="{Binding Path=ProfileTotalDistance, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                       LabelText="{res:Loc InstallationApp.TemplateLenght}"
                                       Mask="N1" />
                </StackPanel>

                <controls:PpcButton Grid.Row="2"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Command="{Binding OpenShutterCommand}"
                                    Content="{res:Loc InstallationApp.GateOpen}"
                                    Style="{StaticResource WizardIntoButton}"
                                    Visibility="Collapsed" />

                <controls:PpcButton Grid.Row="2"
                                    Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Command="{Binding CloseShutterCommand}"
                                    Content="{res:Loc InstallationApp.GateClose}"
                                    Style="{StaticResource WizardIntoButton}"
                                    Visibility="Collapsed" />
                <StackPanel Grid.Row="3"
                            Grid.ColumnSpan="2"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                    <controls:PpcButton Margin="15,15,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Command="{Binding SaveParametersCommand}"
                                        Content="{res:Loc InstallationApp.SaveParameters}"
                                        Visibility="{Binding AdminCalibration}" />


                    <controls:PpcButton Margin="15,15,0,0"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Bottom"
                                        Command="{Binding MoveToElevatorPositionCommand}"
                                        Content="{res:Loc InstallationApp.Forwards}"
                                        Style="{StaticResource WizardConfirmButton}" />

                </StackPanel>

            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DataTemplateElevatorPosition">
            <Grid Margin="20"
                  DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType={x:Type ctrls:View}}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="2">
                    <TextBlock Style="{DynamicResource VWAPP_WizardTitleTextBlockStyle}"
                               Text="{res:Loc InstallationApp.ElevatorInPosition}" />

                    <TextBlock Grid.ColumnSpan="2"
                               Style="{DynamicResource VWAPP_WizardDescriptionTextBlockStyle}"
                               Text="{res:Loc InstallationApp.PositionElevatorBayHeight}" />
                </StackPanel>

                <ctrls:PpcSpinEdit Grid.Row="1"
                                   Grid.Column="0"
                                   Height="90"
                                   Margin="15,5"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Center"
                                   EditValue="{Binding BayPosition.Height}"
                                   IsEnabled="False"
                                   LabelText="{res:Loc InstallationApp.BayPosition}"
                                   Mask="####0.00"
                                   MinValue="1" />

                <controls:PpcButton Grid.Row="1"
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Command="{Binding GoToBayCommand}"
                                    Content="{res:Loc InstallationApp.GoToBay}"
                                    Style="{StaticResource WizardIntoButton}" />

                <controls:PpcButton Grid.Row="2"
                                    Grid.Column="0"
                                    VerticalAlignment="Center"
                                    Command="{Binding OpenShutterCommand}"
                                    Content="{res:Loc InstallationApp.GateOpen}"
                                    Style="{StaticResource WizardIntoButton}"
                                    Visibility="Collapsed" />

                <controls:PpcButton Grid.Row="2"
                                    Grid.Column="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Command="{Binding CloseShutterCommand}"
                                    Content="{res:Loc InstallationApp.GateClose}"
                                    Style="{StaticResource WizardIntoButton}"
                                    Visibility="Collapsed" />

                <controls:PpcButton Grid.Row="3"
                                    Grid.Column="1"
                                    Margin="15,15,0,0"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Command="{Binding MoveToShapePositionDxCommand}"
                                    Content="{res:Loc InstallationApp.Forwards}"
                                    Style="{StaticResource WizardConfirmButton}" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DataTemplateShapePositionDx">
            <Grid Margin="20"
                  DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType={x:Type ctrls:View}}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.ColumnSpan="2">
                    <TextBlock Style="{DynamicResource VWAPP_WizardTitleTextBlockStyle}">
                        <Run Text="{res:Loc InstallationApp.PositioningTemplate}" />
                        <Run FontWeight="Bold"
                             Text="{res:Loc InstallationApp.Right}" />
                        <Run Text=":" />
                    </TextBlock>

                    <TextBlock Style="{DynamicResource VWAPP_WizardDescriptionTextBlockStyle}"
                               Text="{res:Loc InstallationApp.ProfileHeighCheckProcedureDescription}" />
                    <TextBlock Style="{DynamicResource VWAPP_WizardDescriptionTextBlockStyle}"
                               Text="{res:Loc InstallationApp.TemplateMeasurement}" />
                </StackPanel>

                <Image Grid.Row="1"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"
                       Source="{DynamicResource PHCSagoma1}"
                       Stretch="Uniform" />

                <StackPanel Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom">

                    <controls:PpcButton Grid.Row="2"
                                        Grid.Column="0"
                                        Margin="15,15,0,0"
                                        VerticalAlignment="Center"
                                        Command="{Binding OpenShutterCommand}"
                                        Content="{res:Loc InstallationApp.GateOpen}"
                                        Style="{StaticResource WizardIntoButton}"
                                        Visibility="{Binding HasShutter, Converter={StaticResource BTVC}}" />

                    <controls:PpcButton Margin="15,15,0,0"
                                        Command="{Binding MensurationDxCommand}"
                                        Content="{res:Loc InstallationApp.RightSideMeasurement}"
                                        Style="{StaticResource WizardConfirmButton}" />
                </StackPanel>

            </Grid>
        </DataTemplate>

