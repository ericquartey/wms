                                           TextWrapping="Wrap" />

                                <Border Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Margin="0,25"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{DynamicResource FerrettoMediumGray}"
                                        BorderThickness="1" />

                            </Grid>

                            <Grid Grid.Column="3"
                                  Grid.ColumnSpan="3">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Margin="0,20,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource FontSize_Normal}"
                                           FontWeight="Normal"
                                           Foreground="{DynamicResource FerrettoLightGray}"
                                           Text="{res:Loc InstallationApp.GateCorrection2}"
                                           TextAlignment="Left" />

                                <TextBlock Grid.Row="1"
                                           Margin="0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           FontSize="{StaticResource FontSize_High}"
                                           Foreground="{DynamicResource PpcForeground}"
                                           Text="{Binding GateCorrection, StringFormat={}{0:F1} (mm), TargetNullValue=''}"
                                           TextWrapping="Wrap" />

                                <Border Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Margin="0,25"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{DynamicResource FerrettoMediumGray}"
                                        BorderThickness="1" />

                            </Grid>

                            <Grid Grid.Column="6"
                                  Grid.ColumnSpan="3">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Margin="0,20,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource FontSize_Normal}"
                                           FontWeight="Normal"
                                           Foreground="{DynamicResource FerrettoLightGray}"
                                           Text="{res:Loc InstallationApp.SystemError}" />

                                <TextBlock Grid.Row="1"
                                           Margin="0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           FontSize="{StaticResource FontSize_High}"
                                           Foreground="{DynamicResource PpcForeground}"
                                           Text="{Binding SystemError, StringFormat={}{0:F1} (mm), TargetNullValue=''}"
                                           TextWrapping="Wrap" />

                                <Border Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Margin="0,25"
                                        VerticalAlignment="Stretch"
                                        BorderBrush="{DynamicResource FerrettoMediumGray}"
                                        BorderThickness="1" />

                            </Grid>

                            <Grid Grid.Column="9"
                                  Grid.ColumnSpan="3"
                                  Margin="0,0,15,0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>

                                <TextBlock Margin="0,20,0,0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="{StaticResource FontSize_Normal}"
                                           FontWeight="Normal"
                                           Foreground="{DynamicResource FerrettoLightGray}"
                                           Text="{res:Loc InstallationApp.Output}"
                                           TextAlignment="Left" />

                                <TextBlock Grid.Row="1"
                                           Margin="0"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Top"
                                           FontSize="{StaticResource FontSize_High}"
                                           Foreground="{DynamicResource PpcForeground}"
                                           Text="{Binding NoteText}"
                                           TextWrapping="Wrap" />

                            </Grid>

                        </Grid>
                    </Border>
                </Border>

                <controls:PpcSensorControl Grid.Row="2"
                                           Grid.Column="1"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding SensorsService.ProfileCalibrationBay}"
                                           Text="{res:Loc InstallationApp.HeightReaced}" />

                <TextBlock Grid.Row="3"
                           Grid.ColumnSpan="3"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Bottom"
                           Style="{DynamicResource VWAPP_WizardDescriptionTextBlockStyle}"
                           Text="{res:Loc InstallationApp.PageChangeAutomatically}" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DataTemplateShapePositionSx">
            <Grid Margin="20"
                  DataContext="{Binding Path=DataContext, RelativeSource={RelativeSource AncestorType={x:Type ctrls:View}}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
