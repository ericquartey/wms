<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.ProfileHeightCheckStep1View"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Installation.ViewModels"
            xmlns:views="clr-namespace:Ferretto.VW.App.Installation.Views"
            d:DataContext="{d:DesignInstance Type=viewmodels:ProfileHeightCheckStep1ViewModel,
                                             IsDesignTimeCreatable=False}"
            d:DesignHeight="700"
            d:DesignWidth="1024"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <views:ProfileHeightCheckNavigationView Grid.ColumnSpan="3"
                                                VerticalAlignment="Top" />

        <controls:PpcLabeledText Grid.Row="1"
                                 Grid.ColumnSpan="3"
                                 Margin="15"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{x:Static res:InstallationApp.PHC1ComandNote}"
                                 LabelText="{x:Static res:InstallationApp.PHC1NoteHeader}" />

        <StackPanel Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

            <ctrls:PpcSpinEdit Margin="15,5"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Top"
                               EditValue="{Binding Path=InputLoadingUnitId, Mode=TwoWay, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                               IsEnabled="{Binding CanInputLoadingUnitId}"
                               LabelText="{x:Static res:InstallationApp.DrawerNumber}"
                               Mask="#0" />

            <StackPanel Orientation="Vertical">

                <controls:PpcLabeledText Margin="15,5"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Bottom"
                                         LabelText="{x:Static res:InstallationApp.LuPresentInBay}" />

                <controls:PpcSensorControl Margin="15,5"
                                           VerticalAlignment="Center"
                                           SensorState="{Binding LUPresentInBay}" />

            </StackPanel>


        </StackPanel>

        <controls:PpcCheckBox Grid.Row="3"
                              Grid.Column="0"
                              Grid.ColumnSpan="3"
                              HorizontalAlignment="Center"
                              IsChecked="{Binding LodingUnitManual, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              LabelText="Cassetto caricato manualmente" />

        <StackPanel Grid.Row="4"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">
            <controls:PpcButton Margin="0,0,15,0"
                                Command="{Binding StopCommand}"
                                Content="{x:Static res:InstallationApp.Stop}" />

            <controls:PpcButton Command="{Binding StartCommand}"
                                Content="{x:Static res:InstallationApp.Start}" />

        </StackPanel>

    </Grid>
</ctrls:View>
