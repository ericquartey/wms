<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.ProfileHeightCheckStep1View"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:views="clr-namespace:Ferretto.VW.App.Installation.Views"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid Margin="130,30">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <views:ProfileHeightCheckNavigationView Grid.ColumnSpan="3"
                                                VerticalAlignment="Top" />

        <controls:PpcLabeledText Grid.Row="1"
                                 Grid.ColumnSpan="3"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{x:Static res:InstallationApp.PHC1ComandNote}"
                                 LabelText="{x:Static res:InstallationApp.PHC1NoteHeader}" />

        <controls:PpcLabeledText Grid.Row="2"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{x:Static res:InstallationApp.ShutterState}" />

        <controls:PpcSensorControl Grid.Row="2"
                                   Grid.Column="1"
                                   VerticalAlignment="Center"
                                   SensorState="{Binding Sensors.Open}"
                                   Text="{x:Static res:InstallationApp.ShutterOpen}" />

        <controls:PpcSensorControl Grid.Row="2"
                                   Grid.Column="2"
                                   VerticalAlignment="Center"
                                   SensorState="{Binding Sensors.Closed}"
                                   Text="{x:Static res:InstallationApp.ShutterClosed}" />


        <StackPanel Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">

            <controls:PpcButton Margin="0,0,30,0"
                                Command="{Binding OpenCommand}"
                                Content="{x:Static res:InstallationApp.Open}"
                                IsEnabled="{Binding CanExecuteOpenCommand}" />

            <controls:PpcButton Command="{Binding ClosedCommand}"
                                Content="{x:Static res:InstallationApp.Closed}"
                                IsEnabled="{Binding CanExecuteClosedCommand}" />

        </StackPanel>

        <controls:PpcButton Grid.Row="4"
                            Grid.Column="2"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Command="{Binding Step2Command}"
                            Content="{x:Static res:InstallationApp.Next}" />

    </Grid>

</ctrls:View>
