<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.ProfileHeightCheckStep6View"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:views="clr-namespace:Ferretto.VW.App.Installation.Views"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid Margin="130,30,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="95" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="130" />
        </Grid.ColumnDefinitions>

        <views:ProfileHeightCheckNavigationView Grid.ColumnSpan="3"
                                                VerticalAlignment="Top" />


        <controls:PpcLabeledText Grid.Row="1"
                                 Grid.ColumnSpan="3"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{x:Static res:InstallationApp.PHC6ComandNote}"
                                 LabelText="{x:Static res:InstallationApp.PHC6NoteHeader}" />

        <Grid Grid.Row="2"
              Grid.ColumnSpan="3"
              Margin="0,15"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <Image HorizontalAlignment="Stretch"
                   VerticalAlignment="Stretch"
                   Source="{DynamicResource PHCSagoma1}"
                   Stretch="Uniform" />

        </Grid>

        <controls:PpcButton Grid.Row="3"
                            Grid.Column="2"
                            Grid.ColumnSpan="2"
                            Margin="15,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Command="{Binding SaveCommand}"
                            Content="{x:Static res:InstallationApp.SaveConfig}" />

    </Grid>

</ctrls:View>
