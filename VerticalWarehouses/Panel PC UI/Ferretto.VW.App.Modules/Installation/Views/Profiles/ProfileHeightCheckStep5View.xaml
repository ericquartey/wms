<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.ProfileHeightCheckStep5View"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:views="clr-namespace:Ferretto.VW.App.Installation.Views"
            d:DesignHeight="450"
            d:DesignWidth="800"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid Margin="130,30,130,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="95" />
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <views:ProfileHeightCheckNavigationView Grid.ColumnSpan="3"
                                                VerticalAlignment="Top" />

        <controls:PpcLabeledText Grid.Row="1"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 FontWeight="Bold"
                                 LabelText="Operazione 1 di 4" />

        <controls:PpcLabeledText Grid.Row="2"
                                 Grid.Column="0"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding CurrentHeight}"
                                 LabelText="{x:Static res:InstallationApp.CurrentHeight}" />

        <controls:PpcLabeledText Grid.Row="2"
                                 Grid.Column="1"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding Tolerance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 LabelText="{x:Static res:InstallationApp.Tolerance}" />

        <controls:PpcLabeledText Grid.Row="2"
                                 Grid.Column="2"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding GateCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 LabelText="{x:Static res:InstallationApp.GateCorrection}" />

        <controls:PpcLabeledText Grid.Row="3"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding SystemError}"
                                 LabelText="{x:Static res:InstallationApp.SystemErrorMM}" />

        <controls:PpcSensorControl Grid.Row="3"
                                   Grid.Column="1"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   SensorState="{Binding LuPresentInBay}"
                                   Text="{x:Static res:InstallationApp.HeightReaced}" />

        <controls:PpcLabeledText Grid.Row="4"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"
                                 ContentText="{Binding NoteText}"
                                 LabelText="{x:Static res:InstallationApp.Output}" />

        <StackPanel Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal">

            <controls:PpcButton Margin="0,0,30,0"
                                Command="{Binding StartCommand}"
                                Content="{x:Static res:InstallationApp.Start}"
                                IsEnabled="{Binding CanExecuteStartCommand}" />

            <controls:PpcButton Command="{Binding StopCommand}"
                                Content="{x:Static res:InstallationApp.Stop}"
                                IsEnabled="{Binding CanExecuteStopCommand}" />

        </StackPanel>

    </Grid>

</ctrls:View>
