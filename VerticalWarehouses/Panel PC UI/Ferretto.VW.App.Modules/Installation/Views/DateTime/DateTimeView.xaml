<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.DateTimeView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">

    <Grid x:Name="Root"
          Margin="15,0,0,0">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <TextBlock x:Name="Title"
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.SystemDateTime}" />

        <RadioButton Grid.Row="2"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     GroupName="test"
                     IsChecked="{Binding IsManual, Mode=TwoWay}"
                     IsEnabled="{Binding IsManualEnabled}">
            <RadioButton.Content>
                <StackPanel Orientation="Vertical">
                    <TextBlock Grid.Row="2"
                               Margin="0,25"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               FontSize="{DynamicResource FontSize_High}"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                               Text="{x:Static res:InstallationApp.SetManualSystemDateTime}" />
                </StackPanel>
            </RadioButton.Content>
        </RadioButton>

        <RadioButton Grid.Row="4"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     GroupName="test"
                     IsChecked="{Binding IsAuto, Mode=TwoWay}"
                     IsEnabled="{Binding CanGoAutoSync}">
            <RadioButton.Content>
                <TextBlock Margin="0,25"
                           HorizontalAlignment="Left"
                           VerticalAlignment="Top"
                           FontSize="{DynamicResource FontSize_High}"
                           Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                           Text="{x:Static res:InstallationApp.WMSAutoSync}" />
            </RadioButton.Content>
        </RadioButton>

        <Grid Grid.Row="3"
              Grid.Column="1"
              Grid.ColumnSpan="3"
              Margin="40,0,0,15"
              HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <StackPanel IsEnabled="{Binding IsAuto, Converter={StaticResource BNC}}"
                        Orientation="Horizontal">
                <ctrls:PpcSpinEdit MinWidth="200"
                                   MinHeight="91"
                                   EditValue="{Binding Hour, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   LabelText="{x:Static res:InstallationApp.Hour}"
                                   Mask="##00"
                                   MaxValue="23"
                                   MinValue="0" />
                <ctrls:PpcSpinEdit MinWidth="200"
                                   MinHeight="91"
                                   Margin="15,0,0,0"
                                   EditValue="{Binding Minute, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   LabelText="{x:Static res:InstallationApp.Minutes}"
                                   Mask="##00"
                                   MaxValue="59"
                                   MinValue="0" />
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Margin="0,15,0,0"
                        IsEnabled="{Binding IsAuto, Converter={StaticResource BNC}}"
                        Orientation="Horizontal">
                <ctrls:PpcSpinEdit MinWidth="200"
                                   MinHeight="91"
                                   EditValue="{Binding Day, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   LabelText="{x:Static res:InstallationApp.Day}"
                                   Mask="##"
                                   MaxValue="31"
                                   MinValue="1" />
                <ctrls:PpcSpinEdit MinWidth="200"
                                   MinHeight="91"
                                   Margin="15,0,0,0"
                                   EditValue="{Binding Month, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   LabelText="{x:Static res:InstallationApp.Month}"
                                   Mask="##"
                                   MaxValue="12"
                                   MinValue="1" />
                <ctrls:PpcSpinEdit MinWidth="200"
                                   MinHeight="91"
                                   Margin="15,0,0,0"
                                   EditValue="{Binding Year, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                   LabelText="{x:Static res:InstallationApp.Year}"
                                   Mask="####"
                                   MaxValue="3000"
                                   MinValue="2020" />
            </StackPanel>
        </Grid>

        <controls:PpcButton Grid.Row="5"
                            Grid.ColumnSpan="3"
                            Margin="15,15,15,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Command="{Binding SaveCommand}"
                            Content="{x:Static res:General.Save}"
                            IsBusy="{Binding IsBusy}" />
    </Grid>
</ctrls:View>
