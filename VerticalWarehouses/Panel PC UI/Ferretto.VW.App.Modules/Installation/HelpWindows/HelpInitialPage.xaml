<UserControl x:Class="Ferretto.VW.App.Installation.HelpWindows.HelpInitialPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">
    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">

        <Image Width="200"
               Height="60"
               Margin="10,10,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock Margin="320,20,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpIPGHeder}" />

        <TextBlock Width="670"
                   Height="60"
                   Margin="320,50,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpIPGDescription}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="180,140,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpIPGError}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="730,140,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpIPGUp}" />

        <controls:CustomMainWindowErrorButton Margin="20,140,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              Visibility="Visible" />

        <controls:CustomMachineOnMarchToggleButton Margin="20,280,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top" />

        <controls:CustomMachineOnMarchToggleButton Margin="20,210,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top" />

        <controls:CustomControlLoggedUser Height="60"
                                          Margin="20,350,0,0"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          IsPopupOpen="False"
                                          RenderTransformOrigin="0.5,0.5"
                                          UserText="Installer">
            <controls:CustomControlLoggedUser.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform />
                    <TranslateTransform Y="-15" />
                </TransformGroup>
            </controls:CustomControlLoggedUser.RenderTransform>
        </controls:CustomControlLoggedUser>

        <controls:PpcButton  Width="60"
                Height="60"
                Margin="20,420,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="{DynamicResource VWAPP_BACKGROUND}"
                BorderBrush="{DynamicResource VWAPP_CustomMachineModeToggleButton_BorderBrush_Normal}"
                BorderThickness="1">
            <TextBlock FontSize="25"
                       Foreground="{DynamicResource FerrettoPureWhite}"
                       TextAlignment="Center"><Run Text="?" />
            </TextBlock>
        </controls:PpcButton>

        <RepeatButton Margin="470,130,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      IsEnabled="True"
                      RenderTransformOrigin="0.5,0.5"
                      Template="{StaticResource VWAPP_NavigationRepeatButton_ControlTemplate}">
            <RepeatButton.LayoutTransform>
                <RotateTransform Angle="180" />
            </RepeatButton.LayoutTransform>
        </RepeatButton>
        <RepeatButton Margin="470,280,0,0"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      IsEnabled="True"
                      RenderTransformOrigin="0.5,0.5"
                      Template="{StaticResource VWAPP_NavigationRepeatButton_ControlTemplate}">
            <RepeatButton.LayoutTransform>
                <RotateTransform Angle="0" />
            </RepeatButton.LayoutTransform>
        </RepeatButton>

        <controls:PpcButton  Margin="500,210,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.InstallationState}"
                IsEnabled="True"
                Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="180,210,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpIPGOff}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="180,280,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpIPGOn}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="180,350,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpIPGInstaller}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="180,420,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpIPGHelp}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="730,210,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpIPGButton}" />

        <TextBlock Width="260"
                   Height="70"
                   Margin="730,280,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.HelpIPGDown}" />

    </Grid>
</UserControl>
