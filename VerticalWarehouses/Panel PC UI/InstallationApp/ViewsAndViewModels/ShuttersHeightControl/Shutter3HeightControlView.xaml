<UserControl x:Class="Ferretto.VW.InstallationApp.Shutter3HeightControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             Width="1024"
             Height="620"
             mc:Ignorable="d">
    <Grid Width="1024"
             Height="608">
        <TextBlock Grid.Row="0"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.Gate3HeightControl}" Margin="120,19,0,543" Height="46" />
        <custom:CustomInputFieldControlFocusable Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
                                                     Margin="120,155,624,405"
                                                     InputText="{Binding Speed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     LabelText="{x:Static res:InstallationApp.SpeedMMSec}" />
        <custom:CustomLabelTextBlockControl
                                                ContentText="{Binding Tolerance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.Tolerance}" Margin="430,155,244,400" />
        <custom:CustomLabelTextBlockControl
                                                Grid.Column="0"
                                                ContentText="{Binding SystemError, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.SystemErrorMM}" Margin="430,220,304,335" />
        <custom:CustomLabelTextBlockControl
                                                ContentText="{Binding ActiveRaysQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.ActiveRaysQuantity}" Margin="430,303,304,252" />
        <custom:CustomLabelTextBlockControl
                                                ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.CurrentHeight}" Margin="430,385,300,170" />
        <custom:CustomLabelTextBlockControl
                                                ContentText="{Binding GateCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.GateCorrection}" Margin="120,385,620,170" />
        <custom:CustomLabelTextBlockControl
                                                ContentText="{Binding NoteText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.Output}" Margin="120,485,630,55" />
        <Button
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Content="{x:Static res:InstallationApp.Start}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" Margin="430,485,0,55" />
        <Button
                    HorizontalAlignment="Left"
                    Content="{x:Static res:InstallationApp.Stop}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" Margin="655,485,0,55" />
    </Grid>
</UserControl>
