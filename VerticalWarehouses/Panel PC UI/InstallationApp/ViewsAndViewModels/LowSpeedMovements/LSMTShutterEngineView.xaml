<UserControl x:Class="Ferretto.VW.InstallationApp.LSMTShutterEngineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <Grid Width="774"
          Height="608">

        <TextBlock Margin="170,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.LSMTGateEngineTitle}" />

        <custom:CustomLabelTextBlockControl Name="ActualPositionLabel"
                                            Margin="170,300,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            ContentText="Aperta"
                                            LabelText="{x:Static res:InstallationApp.ActualPosition}" />
        <Button Name="GateEngineUp"
                Margin="440,300,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.Up}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Name="GateEngineDown"
                Margin="440,420,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.Down}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        <custom:CustomLabelTextBlockControl     HorizontalAlignment="Left" VerticalAlignment="Top"   Margin="170,130,0,0" Width="500" Height="100"
            LabelText="{x:Static res:InstallationApp.LSMTNoteHeader}"
            ContentText="{x:Static res:InstallationApp.LSMTComandNote}" />
    </Grid>
</UserControl>
