<UserControl x:Class="Ferretto.VW.InstallationApp.LSMTHorizontalEngineView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    <Grid Width="774"
          Height="608">

        <TextBlock Margin="170,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.LSMTHorizontalEngineTitle}" />

        <custom:CustomLabelTextBlockControl Margin="170,160,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            ContentText="980,8"
                                            LabelText="{x:Static res:InstallationApp.ActualPosition}" />

        <Button Margin="440,160,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.Forward}"
                PreviewMouseDown="MoveForwardHorizontalAxisHandler"
                PreviewMouseUp="StopHorizontalAxisHandler"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="440,280,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                PreviewMouseDown="MoveBackHorizontalAxisHandler"
                PreviewMouseUp="StopHorizontalAxisHandler"
                Content="{x:Static res:InstallationApp.Backward}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
    </Grid>
</UserControl>
