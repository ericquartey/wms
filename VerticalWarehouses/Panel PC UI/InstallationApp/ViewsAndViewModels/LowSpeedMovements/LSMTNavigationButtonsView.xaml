<UserControl x:Class="Ferretto.VW.InstallationApp.LSMTNavigationButtonsView"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
                 xmlns:prism="http://prismlibrary.com/"
                 xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
                 mc:Ignorable="d">
    <Grid Height="608"
          Margin="25,0,0,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="130" />
            <RowDefinition Height="350" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Top">
            <Button Command="{Binding VerticalEngineButtonCommand}"
                    Content="{x:Static res:InstallationApp.LSMTVerticalEngineButton}"
                    Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />
            <Button Command="{Binding HorizontalEngineButtonCommand}"
                    Content="{x:Static res:InstallationApp.LSMTHorizontalEngineButton}"
                    Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />
            <Button Command="{Binding ShutterEngineButtonCommand}"
                    Content="{x:Static res:InstallationApp.LSMTGateEngineButton}"
                    Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />
            <Button Command="{Binding CarouselButtonCommand}"
                    Content="{x:Static res:InstallationApp.LSMTCarouselButton}"
                    Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />
        </StackPanel>
    </Grid>
</UserControl>
