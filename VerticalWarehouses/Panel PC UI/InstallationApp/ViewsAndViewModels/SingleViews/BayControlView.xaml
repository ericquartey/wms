<UserControl x:Class="Ferretto.VW.App.Installation.ViewsAndViewModels.SingleViews.BayControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="608">
        <TextBlock Margin="200,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.BayControlHeader}" />

        <custom:CustomLabelTextBlockControl Margin="200,120,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            ContentText="1"
                                            LabelText="{x:Static res:InstallationApp.BayControlSelectedBay}" />
        <!--  ContentText="{Binding CurrentCell, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  -->

        <custom:CustomLabelTextBlockControl Margin="200,190,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            ContentText="1"
                                            LabelText="{x:Static res:InstallationApp.BayControlSelectedPosition}" />
        <!--  ContentText="{Binding CurrentCell, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  -->

        <custom:PpcTextBox Margin="200,270,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 LabelText="{x:Static res:InstallationApp.BayControlStepValue}"
                                                 Style="{StaticResource VWAPP_PpcTextBoxStyle}" />


        <custom:CustomLabelTextBlockControl Margin="420,120,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            ContentText="1256,5"
                                            LabelText="{x:Static res:InstallationApp.BayControlPositionHeight}" />
        <!--  ContentText="{Binding CellHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  -->

        <custom:CustomLabelTextBlockControl Margin="420,270,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:InstallationApp.BayControlActualHeight}" />


        <custom:CustomLabelTextBlockControl Margin="420,420,0,0"
                                            HorizontalAlignment="Left"
                                            VerticalAlignment="Top"
                                            ContentText="{Binding PanelCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:InstallationApp.BayControlCorrectionValue}" />

        <Button Margin="700,120,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.BayControlMoveToPosition}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="700,230,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.BayControlStepPiu}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="700,300,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.BayControlStepMeno}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="700,420,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.BayControlAdjust}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="700,510,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.BayControlNextPosition}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />



    </Grid>
</UserControl>
