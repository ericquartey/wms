<UserControl x:Class="Ferretto.VW.InstallationApp.LoadFirstDrawerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">
    
    <Grid    Width="1024" Height="608">
        
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,30,0,0"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.LoadFirstDrawerPageHeader}" />

        <custom:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,140,0,0"
                                               ContentText="4"
                                               LabelText="{x:Static res:InstallationApp.LoadFirstDrawerTotCellsToCheck}"  />
                                               <!--  ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" -->

        <custom:CustomLabelTextBlockControl   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,240,0,0"
                                              ContentText="2"
                                              LabelText="{x:Static res:InstallationApp.LoadFirstDrawerTotCellsChecked}"  />
                                              <!--  ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" -->

        <custom:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,328,0,0"
                                               ContentText="234"
                                               LabelText="{x:Static res:InstallationApp.LoadFirstDrawerActualCellToCheck}"  />

        <custom:CustomInputFieldControlFocusable  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="580,140,0,0"
                                                  InputText="1"
                                                  Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
                                                  LabelText="{x:Static res:InstallationApp.LoadFirstDrawerDrawerToInsert}" />
                                                  <!--  InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" -->

        <custom:CustomLabelTextBlockControl   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="580,240,0,0"
                                              ContentText="500"
                                              LabelText="{x:Static res:InstallationApp.LoadFirstDrawerMaxWeight}"/>
                                              <!--  ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" -->
                                          
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,480,0,0"
                    Content="{x:Static res:InstallationApp.LoadFirstDrawerRecallDrawer}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="580,480,0,0"
                    Content="{x:Static res:InstallationApp.LoadFirstDrawerStartLoading}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />



    </Grid>
</UserControl>
