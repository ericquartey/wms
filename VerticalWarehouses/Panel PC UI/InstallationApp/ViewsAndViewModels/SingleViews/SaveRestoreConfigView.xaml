<UserControl x:Class="Ferretto.VW.InstallationApp.SaveRestoreConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">
    
    <Grid    Width="1024"
             Height="608">

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,30,0,0"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static res:InstallationApp.SaveRestoreConfigPageHeader}" />
        
        <custom:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,100,0,0"
                                               ContentText="F:\VW_190012"
                                               LabelText="{x:Static res:InstallationApp.SaveRestoreConfigSelectedFolder}"  />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,180,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigConfirmSaveButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" IsEnabled="False" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="640,100,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigSaveButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="640,180,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigAbortSaveButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" IsEnabled="False" />
        
         <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,350,0,0"
                     Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                     Text="{x:Static res:InstallationApp.SaveRestoreConfigPageHeader2}"  />
        
         <custom:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,420,0,0"
                                                ContentText="F:"
                                                LabelText="{x:Static res:InstallationApp.SaveRestoreConfigSelectedFolder}" IsEnabled="False" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,500,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigConfirmRestoreButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" IsEnabled="False" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="640,420,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigRestoreButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" IsEnabled="False" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="640,500,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigAbortRestoreButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" IsEnabled="False" />

    </Grid>
</UserControl>
