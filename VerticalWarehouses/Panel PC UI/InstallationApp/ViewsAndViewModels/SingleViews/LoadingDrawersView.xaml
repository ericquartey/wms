<UserControl x:Class="Ferretto.VW.InstallationApp.LoadingDrawersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls" 
             mc:Ignorable="d">

    <Grid Width="1024" Height="608">

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,30,0,0"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.LoadingDrawersPageHeader}" />

        <Controls:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,140,0,0"
                                                 ContentText="{Binding CurrentCell, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 LabelText="{x:Static res:InstallationApp.LoadingDrawersTotalDrawers}"  />

        <Controls:CustomLabelTextBlockControl  ContentText="{Binding CellHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            HorizontalAlignment="Left" VerticalAlignment="Top" Margin="580,140,0,0"
            LabelText="{x:Static res:InstallationApp.LoadingDrawersInsertedDrawers}"  />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,240,0,0"
            ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            LabelText="{x:Static res:InstallationApp.LoadingDrawersMaxWeight}" />

        <Controls:CustomInputFieldControlFocusable HorizontalAlignment="Left" VerticalAlignment="Top" Margin="580,240,0,0"
            Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
            InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            LabelText="{x:Static res:InstallationApp.LoadingDrawersDrawerToInsert}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="580,480,0,0"
            Content="{x:Static res:InstallationApp.LoadingDrawersStartInsertion}"
            Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,480,0,0"
            Content="{x:Static res:InstallationApp.LoadingDrawersNextDrawer}"
            Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

    </Grid>
</UserControl>
