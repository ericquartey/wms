<UserControl x:Class="Ferretto.VW.App.Installation.ViewsAndViewModels.SingleViews.DrawerLoadingUnloadingTestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="608">

        <TextBlock Margin="200,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.DLUTestHeader}" />

        <Controls:CustomInputFieldControlFocusable Margin="200,270,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   LabelText="{x:Static res:InstallationApp.DLUTestFeedRate}"
                                                   Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />


        <Controls:CustomLabelTextBlockControl Margin="420,370,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="12"
                                              LabelText="{x:Static res:InstallationApp.DLUTestCompletedCycles}" />
        <!--  ContentText="{Binding CellHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  -->

        <Controls:CustomLabelTextBlockControl Margin="200,370,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static res:InstallationApp.DLUTestActualposition}" />

        <Controls:CustomInputFieldControlFocusable Margin="420,270,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   LabelText="{x:Static res:InstallationApp.DLUTestCycleRequired}"
                                                   Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

        <Button Margin="640,120,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.BayControlMoveToPosition}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="420,510,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.DLUTestStop}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="640,510,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static res:InstallationApp.DLUTestStart}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomInputFieldControlFocusable Margin="200,120,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   LabelText="{x:Static res:InstallationApp.BayControlSelectedBay}"
                                                   Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

        <Controls:CustomInputFieldControlFocusable Margin="420,120,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   LabelText="{x:Static res:InstallationApp.BayControlSelectedPosition}"
                                                   Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

    </Grid>
</UserControl>
