<UserControl x:Class="Ferretto.VW.InstallationApp.CellsControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">
    <Grid    Width="1024"
             Height="608">

        <TextBlock Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,30,0,0" 
                   Text="{x:Static res:InstallationApp.CellsControl}" />

        <custom:CustomLabelTextBlockControl    ContentText="{Binding CurrentCell, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,120,0,0"
                                               LabelText="{x:Static res:InstallationApp.CurrentCell}"  />

        <custom:CustomLabelTextBlockControl  ContentText="{Binding CellHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             HorizontalAlignment="Left" VerticalAlignment="Top" Margin="436,120,0,0"
                                             LabelText="{x:Static res:InstallationApp.ReferenceCellHeight}"  />

        <custom:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="436,300,0,0"
                                             ContentText="{Binding CurrentHeight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             LabelText="{x:Static res:InstallationApp.CurrentHeight}" />

        <custom:CustomInputFieldControlFocusable HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,300,0,0"
                                                 Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
                                                 InputText="{Binding StepValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 LabelText="{x:Static res:InstallationApp.StepValue}" />

        <custom:CustomLabelTextBlockControl   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="436,480,0,0"
                                              ContentText="{Binding PanelCorrection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static res:InstallationApp.CellCorrection}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="670,120,0,0"
                    Content="{x:Static res:InstallationApp.GoToInitialPosition}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="670,260,0,0"
                    Content="{x:Static res:InstallationApp.StepUp}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="670,330,0,0"
                    Content="{x:Static res:InstallationApp.StepDown}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="670,480,0,0"
                    Content="{x:Static res:InstallationApp.Correct}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

    </Grid>
</UserControl>
