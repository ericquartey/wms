<UserControl x:Class="Ferretto.VW.App.Installation.ViewsAndViewModels.SensorsState.SSCradleView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">
    <Grid Width="774"
          Height="608">
        <TextBlock Margin="160,10,0,562"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.Cradle}" />
        <custom:CustomSensorControl Margin="160,335,319,215"
                                    LabelText="{x:Static res:InstallationApp.ZeroPawlSensor}"
                                    SensorState="{Binding ZeroPawlSensor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        <custom:CustomSensorControl Margin="160,422,319,128"
                                    LabelText="{x:Static res:InstallationApp.LuPresenceOnOperatorCradleSide}"
                                    SensorState="{Binding LuPresentInOperatorSide, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        <custom:CustomSensorControl Margin="160,235,319,315"
                                    LabelText="{x:Static res:InstallationApp.LuPresenceOnMachineCradleSide}"
                                    SensorState="{Binding LuPresentInMachineSide, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
    </Grid>
</UserControl>
