<UserControl x:Class="Ferretto.VW.InstallationApp.SSVerticalAxisView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:myType="clr-namespace:Ferretto.VW.Utils.Source;assembly=Ferretto.VW.Utils"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">
    <Grid Width="774"
          Height="608">
        <TextBlock Margin="230,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.VerticalAxis}" />

        <custom:CustomSensorControl Margin="230,100,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.EmergencyEndRun}"
                                    SensorState="{Binding EmergencyEndRun, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="230,140,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.ZeroVerticalSensor}"
                                    SensorState="{Binding ZeroVerticalSensor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="230,180,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.ElevatorEngineSelected}"
                                    SensorState="{Binding ElevatorEngineSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="230,220,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.CradleEngineSelected}"
                                    SensorState="{Binding CradleEngineSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <TextBlock Margin="230,300,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.Cradle}" />

        <custom:CustomSensorControl Margin="230,370,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.ZeroPawlSensor}"
                                    SensorState="{Binding ZeroPawlSensor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="230,410,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.LuPresenceOnMachineCradleSide}"
                                    SensorState="{Binding LuPresentInMachineSide, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="230,450,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.LuPresenceOnOperatorCradleSide}"
                                    SensorState="{Binding LuPresentInOperatorSide, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
    </Grid>
</UserControl>
