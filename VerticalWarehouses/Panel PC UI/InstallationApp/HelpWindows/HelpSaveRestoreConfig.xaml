<UserControl x:Class="Ferretto.VW.InstallationApp.HelpWindows.HelpSaveRestoreConfig"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.HelpWindows"            
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls" 
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             mc:Ignorable="d">
    
    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">

        <Image Width="200"
               Height="60"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,20,0,0"
                    Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpSRCPageHeader}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,50,0,0"
                    Width="670" Height="60"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpSRCDescription}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,165,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpSRCSaveFolder}" />

        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,165,0,0"
                     Width="260" Height="70"
                     Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpSRCSaveFolder}" />

        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,125,0,0"
                     Width="300"
                     Style="{StaticResource VWAPP_ViewHelpStepTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpSRCSaveSide}" />
        
        <Controls:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,165,0,0" Width="180"
                                                 ContentText="F:\VW_190012"
                                                 LabelText="{x:Static res:InstallationApp.SaveRestoreConfigSelectedFolder}"  />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,305,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigConfirmSaveButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" IsEnabled="True" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,235,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigSaveButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,375,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigAbortSaveButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" IsEnabled="True" />
        
        <Controls:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,165,0,0" Width="180"
                                                 ContentText="F:\VW_190012"
                                                 LabelText="{x:Static res:InstallationApp.SaveRestoreConfigSelectedFolder}" IsEnabled="True" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,305,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigConfirmRestoreButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" IsEnabled="True" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,235,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigRestoreButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" IsEnabled="True" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,375,0,0"
                    Content="{x:Static res:InstallationApp.SaveRestoreConfigAbortRestoreButton}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" IsEnabled="True" />
        
        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,125,0,0"
                     Width="300"
                     Style="{StaticResource VWAPP_ViewHelpStepTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpSRCLoadSide}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,235,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpSRCSaveButton}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,305,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpSRCSaveConfirmButton}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,375,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpSRCSaveAbortButton}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,235,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpSRCLoadButton}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,305,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpSRCLoadConfirmButton}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,375,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpSRCLoadAbortButton}" />

    </Grid>
</UserControl>
