<UserControl x:Class="Ferretto.VW.InstallationApp.HelpWindows.HelpInstallationState"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.HelpWindows"            
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d" >

    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">
        
        <Image Width="200"
               Height="60"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,20,0,0"
                   Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.InstallationState}" />
        
        <Controls:CustomSensorControl   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,140,0,0" Width="180"
                                        LabelText="{x:Static res:InstallationApp.VerticalAxisHomedDone}"
                                        SensorState="False"
                                        Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        
        <Controls:CustomSensorControl   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,210,0,0" Width="180"
                                        LabelText="{x:Static res:InstallationApp.VerticalOffsetVerify}"
                                        SensorState="True"
                                        Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        
        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,50,0,0"
                     Width="670" Height="60"
                     Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpInstallationStateDescription}" />
        
        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,140,0,0"
                     Width="260" Height="70"
                     Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpInstallationStateToDo}" />
        
        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,210,0,0"
                     Width="260" Height="70"
                     Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpInstallationStateDone}" />

    </Grid>
</UserControl>
