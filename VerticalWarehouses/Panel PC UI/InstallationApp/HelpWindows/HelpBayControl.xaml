<UserControl x:Class="Ferretto.VW.InstallationApp.HelpWindows.HelpBayControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.HelpWindows"            
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">
    
    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">

        <Image Width="200"
               Height="60"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,20,0,0"
                    Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                    Text="{x:Static res:InstallationApp.BayControlHeader}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,50,0,0"
                    Width="670" Height="60"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRDescription}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,140,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRSelectedBay}" />

        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,140,0,0"
                     Width="260" Height="70"
                     Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpBCTRMoveToPosition}" />
        
        <Controls:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,140,0,0"
                                                 Width="180"
                                                 ContentText="1"
                                                 LabelText="{x:Static res:InstallationApp.BayControlSelectedBay}"  />
        
        <Controls:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,210,0,0"
                                                 Width="180"
                                                 ContentText="1"
                                                 LabelText="{x:Static res:InstallationApp.BayControlSelectedPosition}"  />
        
        <Controls:CustomLabelTextBlockControl    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,280,0,0"
                                                 Width="180"
                                                 LabelText="{x:Static res:InstallationApp.BayControlPositionHeight}"  
                                                 ContentText="1256,5" />
        
        <Controls:CustomInputFieldControlFocusable  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,350,0,0"
                                                    Width="180"
                                                    Highlighted="True" IsEnabled="True"
                                                    InputText="0,5"
                                                    Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
                                                    LabelText="{x:Static res:InstallationApp.BayControlStepValue}" />
        
        <Controls:CustomLabelTextBlockControl      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,420,0,0"
                                                   Width="180"
                                                   ContentText="1258,0"
                                                   LabelText="{x:Static res:InstallationApp.BayControlActualHeight}" />
        
        <Controls:CustomLabelTextBlockControl      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,490,0,0"
                                                   Width="180"
                                                   ContentText="1,5"
                                                   LabelText="{x:Static res:InstallationApp.BayControlCorrectionValue}" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,140,0,0"
                    Content="{x:Static res:InstallationApp.BayControlMoveToPosition}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,210,0,0"
                    Content="{x:Static res:InstallationApp.BayControlStepPiu}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,280,0,0"
                    Content="{x:Static res:InstallationApp.BayControlStepMeno}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,350,0,0"
                    Content="{x:Static res:InstallationApp.BayControlAdjust}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,420,0,0"
                    Content="{x:Static res:InstallationApp.BayControlNextPosition}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,210,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRSelectedPosition}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,280,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRPositionHeight}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,350,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRStepValue}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,420,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRActualHeight}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,490,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRCorrectionValue}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,210,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRStepPiu}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,280,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRStepMeno}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,350,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRAdjust}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,420,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpBCTRNextPosition}" />

    </Grid>
</UserControl>
