<Window x:Class="Ferretto.VW.App.Installation.HelpWindows.HelpMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewmodels="clr-namespace:Ferretto.VW.App.Installation.ViewsAndViewModels.SingleViews"
             xmlns:helpWindows="clr-namespace:Ferretto.VW.App.Installation.HelpWindows"
             xmlns:sensorsState="clr-namespace:Ferretto.VW.App.Installation.ViewsAndViewModels.SensorsState"
             xmlns:lowSpeedMovements="clr-namespace:Ferretto.VW.App.Installation.ViewsAndViewModels.LowSpeedMovements"
             xmlns:shuttersControl="clr-namespace:Ferretto.VW.App.Installation.ViewsAndViewModels.ShuttersControl"
             xmlns:shuttersHeightControl="clr-namespace:Ferretto.VW.App.Installation.ViewsAndViewModels.ShuttersHeightControl"
             Width="1024"
             Height="768"
             mc:Ignorable="d"
             ResizeMode="NoResize"
             WindowStartupLocation="CenterScreen"
             WindowStyle="None">
    <Window.Resources>
        
        <DataTemplate DataType="{x:Type viewmodels:BeltBurnishingViewModel}">
            <helpWindows:BeltBurnishingHelpView></helpWindows:BeltBurnishingHelpView>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:CellsControlViewModel}">
            <helpWindows:CellsControlHelpView></helpWindows:CellsControlHelpView>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:ResolutionCalibrationVerticalAxisViewModel}">
            <helpWindows:ResolutionCalibrationVerticalAxisHelpView></helpWindows:ResolutionCalibrationVerticalAxisHelpView>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type viewmodels:InstallationStateViewModel}">
            <helpWindows:HelpInstallationState></helpWindows:HelpInstallationState>
        </DataTemplate>

        <DataTemplate DataType="{x:Type sensorsState:SSMainViewModel}">
            <helpWindows:HelpSensorState></helpWindows:HelpSensorState>
        </DataTemplate>

        <DataTemplate DataType="{x:Type lowSpeedMovements:LSMTMainViewModel}">
            <helpWindows:HelpLowSpeedMovements></helpWindows:HelpLowSpeedMovements>
        </DataTemplate>

        <DataTemplate DataType="{x:Type shuttersControl:Shutter1ControlViewModel}">
            <helpWindows:HelpShutterControl></helpWindows:HelpShutterControl>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:VerticalAxisCalibrationViewModel}">
            <helpWindows:HelpVerticalAxisCalibration></helpWindows:HelpVerticalAxisCalibration>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:CellsPanelsControlViewModel}">
            <helpWindows:HelpCellsPanelControl></helpWindows:HelpCellsPanelControl>
        </DataTemplate>

        <DataTemplate DataType="{x:Type shuttersHeightControl:Shutter1HeightControlViewModel}">
            <helpWindows:HelpShutterHeightControl></helpWindows:HelpShutterHeightControl>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:WeightControlViewModel}">
            <helpWindows:HelpWeightControl></helpWindows:HelpWeightControl>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:VerticalOffsetCalibrationViewModel}">
            <helpWindows:HelpVerticalOffsetCalibration></helpWindows:HelpVerticalOffsetCalibration>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:CellsSideControlViewModel}">
            <helpWindows:HelpCellsSideControl></helpWindows:HelpCellsSideControl>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:LoadFirstDrawerViewModel}">
            <helpWindows:HelpLoadFirstDrawer></helpWindows:HelpLoadFirstDrawer>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:LoadingDrawersViewModel}">
            <helpWindows:HelpLoadingDrawers></helpWindows:HelpLoadingDrawers>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:BayControlViewModel}">
            <helpWindows:HelpBayControl></helpWindows:HelpBayControl>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:IdleViewModel}">
            <helpWindows:HelpInitialPage></helpWindows:HelpInitialPage>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:DrawerLoadingUnloadingTestViewModel}">
            <helpWindows:HelpDLUTest></helpWindows:HelpDLUTest>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodels:SaveRestoreConfigViewModel}">
            <helpWindows:HelpSaveRestoreConfig></helpWindows:HelpSaveRestoreConfig>
        </DataTemplate>


    </Window.Resources>
    <Grid Width="1024"
          Height="768"
          Background="{DynamicResource VWAPP_BACKGROUND}">
        <Grid.RowDefinitions>
            <RowDefinition Height="688"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <ContentPresenter Name="HelpContentRegion" Grid.Row="0"
                          Height="688"
                          Width="1024"
                          Content="{Binding ContentRegionCurrentViewModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </ContentPresenter>
        <Button Grid.Row="1"
                Content="Back"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Click="Button_Click"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}">

        </Button>
    </Grid>
</Window>
