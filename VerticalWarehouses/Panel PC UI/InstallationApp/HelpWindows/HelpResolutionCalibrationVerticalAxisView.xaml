<UserControl x:Class="Ferretto.VW.InstallationApp.HelpWindows.ResolutionCalibrationVerticalAxisHelpView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.HelpWindows"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls" 
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             mc:Ignorable="d" >
    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">

        <Image Width="200" Height="60"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,20,0,0"
                   Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.VerticalResolutionCalibration}" />

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,50,0,0"
                   Width="670" Height="50"
                   Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.ResolutionCalibrationFunctionDescription}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,155,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationInitialPositionHelp}" />

        <Controls:CustomInputFieldControlFocusable     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,155,0,0"
                                                       Width="180"
                                                       Highlighted="True" IsEnabled="True"
                                                       InputText="1025,5"
                                                       LabelText="{x:Static res:InstallationApp.DesiredInitialPosition}"
                                                       Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,295,0,0"
                    Content="{x:Static res:InstallationApp.StartResolutionProcedure}"
                    IsEnabled="True"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,295,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationInitialStartHelp}" />

        <Controls:CustomInputFieldControlFocusable    HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,450,0,0"
                                                      Width="180"
                                                      Highlighted="True" IsEnabled="True"
                                                      InputText="5150.0"
                                                      LabelText="{x:Static res:InstallationApp.RequestedFinalPosition}"
                                                      Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"  />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,590,0,0"
                    Content="{x:Static res:InstallationApp.Move}"
                    IsEnabled="True"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,450,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationFinalPositionHelp}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,590,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationFinalPosizionStartHelp}" />

        <Controls:CustomInputFieldControlFocusable     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="530,155,0,0"
                                                       Width="180"
                                                       Highlighted="True" IsEnabled="True"
                                                       InputText="4250,5"
                                                       LabelText="{x:Static res:InstallationApp.MesuredMovement}"
                                                       Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"  />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,155,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationMeasuredeValueHelp}" />

        <Controls:CustomLabelTextBlockControl   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="530,225,0,0"
                                                Width="180"
                                                ContentText="125,36"
                                                LabelText="{x:Static res:InstallationApp.CurrentResolution}"/>

        <Controls:CustomLabelTextBlockControl   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="530,295,0,0"
                                                Width="180"
                                                ContentText="127,12"
                                                LabelText="{x:Static res:InstallationApp.NewResolution}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="530,365,0,0"
                    Content="{x:Static res:General.Accept}"
                    IsEnabled="True"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,526,0,0"
                    Content="{x:Static res:InstallationApp.GoToInitialPosition}"
                    IsEnabled="True"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button     HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,599,0,0"
                    Content="{x:Static res:InstallationApp.CloseProcedure}"
                    IsEnabled="True"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,225,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationActualResolutionHelp}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,295,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationNewResolutionHelp}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,365,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationAcceptNewResolution}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,526,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationGoToInitialPosizion}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,599,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationCloseProcedure}" />

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,115,0,0"
                   Width="300"
                   Style="{StaticResource VWAPP_ViewHelpStepTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.VerticalResolutionCalibrationStep1}" />
        
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,410,0,0"
                   Width="300"
                   Style="{StaticResource VWAPP_ViewHelpStepTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.VerticalResolutionCalibrationStep2}" />
        
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,115,0,0"
                   Width="300"
                   Style="{StaticResource VWAPP_ViewHelpStepTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.VerticalResolutionCalibrationStep3}" />
        
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,480,0,0"
                   Width="300"
                   Style="{StaticResource VWAPP_ViewHelpStepTextBlockStyle}"
                   Text="{x:Static res:HelpDescriptions.VerticalResolutionCalibrationStep4}" />
        
        <Controls:CustomInputFieldControlFocusable   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,225,0,0" 
                                                     Highlighted="True"
                                                     InputText="875,5"
                                                     LabelText="{x:Static res:InstallationApp.ReadInitialPosition}"
                                                     Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

        <Controls:CustomInputFieldControlFocusable     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,520,0,0"
                                                       Highlighted="True"
                                                       InputText="5045,5"
                                                       IsEnabled="True"
                                                       LabelText="{x:Static res:InstallationApp.ReadFinalPosition}"
                                                       Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"  />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,225,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationInitialReadValueHelp}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,520,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.ResolutionCalibrationFinalReadValueHelp}" />

    </Grid>
</UserControl>
