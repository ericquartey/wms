<UserControl x:Class="Ferretto.VW.InstallationApp.HelpWindows.HelpVerticalAxisCalibration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.InstallationApp.HelpWindows"            
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">
    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">

        <Image Width="200"
               Height="60"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,20,0,0"
                    Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                    Text="{x:Static res:InstallationApp.OriginVerticalAxis}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,50,0,0"
                    Width="670" Height="60"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpVACDescription}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,140,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpVACDownLimit}" />

        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,140,0,0"
                     Width="260" Height="70"
                     Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpVacStart}" />
        
        <Controls:CustomLabelTextBlockControl     VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,140,0,0" Width="180"
                                                  ContentText="100,0"
                                                  LabelText="{x:Static res:InstallationApp.LowerBound}" />
        
        <Controls:CustomLabelTextBlockControl     VerticalAlignment="Top" HorizontalAlignment="Left"  Margin="20,210,0,0" Width="180"
                                                  ContentText="10350,5"
                                                  LabelText="{x:Static res:InstallationApp.UpperBound}" />
        
        <Controls:CustomLabelTextBlockControl     VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,420,0,0" Width="180"
                                                  ContentText="{Binding NoteString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                  LabelText="{x:Static res:InstallationApp.Output}"  />
        
        <Controls:CustomLabelTextBlockControl     VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,280,0,0" Width="180"
                                                  ContentText="150,0"
                                                  LabelText="{x:Static res:InstallationApp.Offset}" />

        <Controls:CustomLabelTextBlockControl     VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,350,0,0" Width="180"
                                                  ContentText="165,15"
                                                  LabelText="{x:Static res:InstallationApp.Resolution}" />
        
        <Button    VerticalAlignment="Top" HorizontalAlignment="Left" Margin="530,210,0,0"
                   Content="{x:Static res:InstallationApp.Stop}"
                   IsEnabled="True"
                   Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button   VerticalAlignment="Top" HorizontalAlignment="Left" Margin="530,140,0,0"
                  Content="{x:Static res:InstallationApp.Start}"
                  IsEnabled="True"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}"  />
        
        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,210,0,0"
                     Width="260" Height="70"
                     Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpVACStop}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,210,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpVACUpLimit}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,280,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpVACOffset}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,350,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpVACResolution}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,420,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpVACFinalResult}" />

    </Grid>
</UserControl>
