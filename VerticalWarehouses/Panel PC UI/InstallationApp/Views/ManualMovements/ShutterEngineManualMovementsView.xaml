<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.ShutterEngineManualMovementsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:custom="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            xmlns:views="clr-namespace:Ferretto.VW.App.Installation.Views"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <views:ManualMovementsNavigationView Margin="0,30,0,0" />

        <Grid Grid.Column="1">
            <TextBlock Margin="170,30,0,0"
                       VerticalAlignment="Top"
                       Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                       Text="{x:Static res:InstallationApp.LSMTGateEngineTitle}" />

            <custom:CustomLabelTextBlockControl Name="ActualPositionLabel"
                                                Margin="170,300,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                ContentText="{Binding CurrentPosition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                LabelText="{x:Static res:InstallationApp.ActualPosition}" />
            <Button Name="GateEngineUp"
                    Margin="440,300,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="{x:Static res:InstallationApp.Up}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="PreviewMouseDown">
                        <i:InvokeCommandAction Command="{Binding MoveUpCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="PreviewMouseUp">
                        <i:InvokeCommandAction Command="{Binding StopMovementCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>

            <Button Name="GateEngineDown"
                    Margin="440,420,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="{x:Static res:InstallationApp.Down}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="PreviewMouseDown">
                        <i:InvokeCommandAction Command="{Binding MoveDownCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="PreviewMouseUp">
                        <i:InvokeCommandAction Command="{Binding StopMovementCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            <custom:CustomLabelTextBlockControl Width="500"
                                                Height="100"
                                                Margin="170,130,0,0"
                                                HorizontalAlignment="Left"
                                                VerticalAlignment="Top"
                                                ContentText="{x:Static res:InstallationApp.LSMTComandNote}"
                                                LabelText="{x:Static res:InstallationApp.LSMTNoteHeader}" />
        </Grid>
    </Grid>
</ctrls:View>
