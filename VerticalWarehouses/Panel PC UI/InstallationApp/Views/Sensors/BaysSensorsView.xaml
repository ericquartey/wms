<ctrls:View x:Class="Ferretto.VW.App.Installation.Views.BaysSensorsView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:custom="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:iom="clr-namespace:Ferretto.VW.CommonUtils.Enumerations;assembly=Ferretto.VW.CommonUtils"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:prism="http://prismlibrary.com/"
            xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
            prism:ViewModelLocator.AutoWireViewModel="True"
            mc:Ignorable="d">
    <Grid>

        <TextBlock Margin="100,30,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:InstallationApp.Bays}" />

        <custom:CustomSensorControl Margin="100,110,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.LuPresentInBay}"
                                    SensorPort="{x:Static iom:IOMachineSensors.LUPresentInBay1}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="100,150,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.LUPresentMiddleBottomBay1}"
                                    SensorPort="{x:Static iom:IOMachineSensors.LUPresentMiddleBottomBay1}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="100,190,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.HeightControlCheck1}"
                                    SensorPort="{x:Static iom:IOMachineSensors.BarrierCalibrationBay1}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="100,230,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.ShutterSensorABay1}"
                                    SensorPort="{x:Static iom:IOMachineSensors.AGLSensorAShutterBay1}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="100,270,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.ShutterSensorBBay1}"
                                    SensorPort="{x:Static iom:IOMachineSensors.AGLSensorBShutterBay1}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="100,345,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.LuPresentInBay2}"
                                    SensorPort="{x:Static iom:IOMachineSensors.LUPresentInBay2}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="100,425,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.HeightControlCheck2}"
                                    SensorPort="{x:Static iom:IOMachineSensors.BarrierCalibrationBay2}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="100,465,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.ShutterSensorABay2}"
                                    SensorPort="{x:Static iom:IOMachineSensors.AGLSensorAShutterBay2}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="100,505,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.ShutterSensorBBay2}"
                                    SensorPort="{x:Static iom:IOMachineSensors.AGLSensorBShutterBay2}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="450,110,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.LuPresentInBay3}"
                                    SensorPort="{x:Static iom:IOMachineSensors.LUPresentInBay3}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="450,190,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.HeightControlCheck3}"
                                    SensorPort="{x:Static iom:IOMachineSensors.BarrierCalibrationBay3}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="450,230,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.ShutterSensorABay3}"
                                    SensorPort="{x:Static iom:IOMachineSensors.AGLSensorAShutterBay3}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />

        <custom:CustomSensorControl Margin="450,270,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.ShutterSensorBBay3}"
                                    SensorPort="{x:Static iom:IOMachineSensors.AGLSensorBShutterBay3}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        <custom:CustomSensorControl Margin="450,150,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.LUPresentMiddleBottomBay3}"
                                    SensorPort="{x:Static iom:IOMachineSensors.LUPresentMiddleBottomBay3}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />
        <custom:CustomSensorControl Margin="100,385,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Top"
                                    LabelText="{x:Static res:InstallationApp.LUPresentMiddleBottomBay2}"
                                    SensorPort="{x:Static iom:IOMachineSensors.LUPresentMiddleBottomBay2}"
                                    Sensors="{Binding SensorsStates}"
                                    Style="{StaticResource VWAPP_CustomSensorControlStyle}" />


    </Grid>
</ctrls:View>
