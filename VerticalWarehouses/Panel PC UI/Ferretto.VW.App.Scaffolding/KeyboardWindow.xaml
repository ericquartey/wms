<Window x:Class="Ferretto.VW.App.Scaffolding.KeyboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ferretto.VW.App.Scaffolding"
        xmlns:keyboards="clr-namespace:Ferretto.VW.App.Keyboards;assembly=Ferretto.VW.App.Keyboards"
        mc:Ignorable="d"
        Title="KeyboardWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox />

        <Grid Grid.Row="1" Margin="0,15,0,0" x:Name="keyboard">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <keyboards:KeyboardButton x:Name="dotCom" />
            <keyboards:KeyboardButton Grid.Column="1" x:Name="backSpace" />
        </Grid>

        <Button Content="QWERTY" Grid.Row="2" Padding="15" Click="Button_Click" />
    </Grid>
</Window>
