<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Skins"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="VWAPP_NavigationRepeatButton_Foreground_Normal"
                     Color="{DynamicResource EDBGrayC}" />
    <sys:Double x:Key="VWAPP_NavigationRepeatButton_Width_Normal">250</sys:Double>
    <sys:Double x:Key="VWAPP_NavigationRepeatButton_Height_Normal">65</sys:Double>

    <SolidColorBrush x:Key="VWAPP_NavigationRepeatButton_Foreground_Pressed"
                     Color="{DynamicResource EDBGrayA}" />

    <SolidColorBrush x:Key="VWAPP_NavigationRepeatButton_Foreground_Disabled"
                     Color="{DynamicResource ColorFerrettoMediumGray}" />

</ResourceDictionary>
