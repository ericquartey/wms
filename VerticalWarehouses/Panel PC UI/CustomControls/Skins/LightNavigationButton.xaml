<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Skins"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="VWAPP_NavigationButton_Background_Normal"
                     Color="Transparent" />
    <SolidColorBrush x:Key="VWAPP_NavigationButton_BorderBrush_Normal"
                     Color="{DynamicResource ColorFerrettoDarkGray}" />
    <SolidColorBrush x:Key="VWAPP_NavigationButton_Foreground_Normal"
                     Color="{DynamicResource EDBGrayC}" />
    <sys:Double x:Key="VWAPP_NavigationButton_Width_Normal">200</sys:Double>
    <sys:Double x:Key="VWAPP_NavigationButton_Height_Normal">60</sys:Double>
    <Thickness x:Key="VWAPP_NavigationButton_BorderThickness_Normal">1</Thickness>
    <sys:Double x:Key="VWAPP_NavigationButton_FontSize_Normal">14</sys:Double>
    <FontFamily x:Key="VWAPP_NavigationButton_FontFamily_Normal">pack://application:,,,/Fonts/#HelveticaNeue-LightCond.otf</FontFamily>

    <SolidColorBrush x:Key="VWAPP_NavigationButton_Background_Pressed"
                     Color="Transparent" />
    <SolidColorBrush x:Key="VWAPP_NavigationButton_BorderBrush_Pressed"
                     Color="{DynamicResource EDBGrayA}" />
    <SolidColorBrush x:Key="VWAPP_NavigationButton_Foreground_Pressed"
                     Color="{DynamicResource EDBGrayA}" />

    <SolidColorBrush x:Key="VWAPP_NavigationButton_Background_Disabled"
                     Color="Transparent" />
    <SolidColorBrush x:Key="VWAPP_NavigationButton_BorderBrush_Disabled"
                     Color="Transparent" />
    <SolidColorBrush x:Key="VWAPP_NavigationButton_Foreground_Disabled"
                     Color="{DynamicResource ColorFerrettoMediumGray}" />

</ResourceDictionary>
