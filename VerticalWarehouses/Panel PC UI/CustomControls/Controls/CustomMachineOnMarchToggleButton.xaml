<ctrls:PpcControl x:Class="Ferretto.VW.App.Controls.Controls.CustomMachineOnMarchToggleButton"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls"
                  xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  d:DesignHeight="60"
                  d:DesignWidth="100"
                  mc:Ignorable="d">

    <controls:PpcButton x:Name="LayoutRoot"
                        Width="100"
                        Height="60"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Command="{Binding CustomCommand}"
                        Template="{StaticResource VWAPP_CustomMachineOnMarchToggleButton_ControlTemplate}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="47" />
                <RowDefinition Height="13" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="{DynamicResource PpcFontFamily}"
                       FontSize="{DynamicResource PpcButtonFontSize}"
                       Foreground="{DynamicResource PpcButtonForeground}"
                       Text="{Binding MachineOnMarchString}"
                       TextAlignment="Center" />
            <Rectangle Grid.Row="1"
                       Width="98"
                       Height="12"
                       Fill="{Binding RectangleBrush}" />
        </Grid>
    </controls:PpcButton>
</ctrls:PpcControl>
