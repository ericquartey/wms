<ctrls:PpcControl x:Class="Ferretto.VW.App.Controls.Controls.CustomMachineOnMarchToggleButton"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Controls"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  d:DesignHeight="60"
                  d:DesignWidth="100"
                  mc:Ignorable="d">

    <Button Name="LayoutRoot"
            Width="100"
            Height="60"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Command="{Binding CustomCommand}"
            Template="{StaticResource VWAPP_CustomMachineOnMarchToggleButton_ControlTemplate}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="47" />
                <RowDefinition Height="13" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="{DynamicResource VWAPP_ActionButton_FontFamily_Normal}"
                       FontSize="{DynamicResource VWAPP_ActionButton_FontSize_Normal}"
                       Foreground="{DynamicResource VWAPP_ActionButton_Foreground_Normal}"
                       Text="{Binding MachineOnMarchString}"
                       TextAlignment="Center" />
            <Rectangle Grid.Row="1"
                       Width="98"
                       Height="12"
                       Fill="{Binding RectangleBrush}" />
        </Grid>
    </Button>
</ctrls:PpcControl>
