<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomSensorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel x:Name="LayoutRoot"
                Orientation="Horizontal">
        <Grid Width="24"
              Height="24">
            <Ellipse Width="24"
                     Height="24"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"                     
                     Fill="{DynamicResource VWAPP_CustomControlSensor_BulletBackground_Normal}" />
            <Ellipse Width="22"
                     Height="22"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Fill="{Binding BulletColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <TextBlock Margin="10,0,0,0"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_CustomControlSensor_TextBlockStyle}"
                   Text="{Binding LabelText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
</UserControl>
