<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomInputFieldControlFocusable"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <StackPanel x:Name="LayoutRoot"
                VerticalAlignment="Center">
        <TextBlock Margin="0,1,5,1"
                   Style="{StaticResource VWAPP_CustomInputFieldControlFocusable_TextBlockStyle}"
                   Text="{Binding LabelText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox Name="InputTextBox"
                 Margin="0,3,5,5"
                 BorderBrush="{Binding BorderColor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 KeyDown="OnKeyDownHandler"
                 Style="{StaticResource VWAPP_CustomInputFieldControlFocusable_TextBoxStyle}"
                 Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    </StackPanel>
</UserControl>
