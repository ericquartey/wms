<UserControl x:Class="Ferretto.VW.App.Controls.Controls.CustomControlArticleDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Behaviors="clr-namespace:Ferretto.VW.App.Controls.Behaviours"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:conv="clr-namespace:Ferretto.VW.App.Controls.Converters"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity">


    <UserControl.Resources>
        <conv:MachinesToStringConverter x:Key="MTSC" />
    </UserControl.Resources>

    <Grid>
        <DataGrid Name="DataGrid"
                  Width="auto"
                  Height="auto"
                  AutoGenerateColumns="False"
                  Background="{DynamicResource VWAPP_BACKGROUND}"
                  BorderThickness="0"
                  CanUserReorderColumns="False"
                  CanUserResizeColumns="False"
                  CanUserResizeRows="False"
                  CanUserSortColumns="False"
                  FontSize="18"
                  HeadersVisibility="Column"
                  HorizontalGridLinesBrush="{DynamicResource PpcButtonBorderBrush}"
                  IsHitTestVisible="False"
                  IsReadOnly="True"
                  ItemsSource="{Binding Items}"
                  RowHeight="30"
                  SelectedItem="{Binding SelectedItem}"
                  SelectionMode="Single"
                  VerticalGridLinesBrush="{DynamicResource PpcButtonBorderBrush}"
                  VerticalScrollBarVisibility="Hidden">
            <DataGrid.Style>
                <Style TargetType="DataGrid">
                    <Setter Property="Background" Value="{DynamicResource VWAPP_BACKGROUND}" />
                    <Setter Property="FontFamily" Value="{StaticResource VWAPP_GridFont}" />
                    <Setter Property="FontStyle" Value="Normal" />
                </Style>
            </DataGrid.Style>
            <i:Interaction.Behaviors>
                <Behaviors:ScrollIntoViewDataGridBehaviour />
            </i:Interaction.Behaviors>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_HighlightBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_ControlBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_HighlightTextBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_ControlTextBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_InactiveSelectionHighlightBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_InactiveSelectionHighlightTextBrushKey}" />
                    </Style.Resources>
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="BorderBrush" Value="{DynamicResource PpcButtonBorderBrush}" />
                    <Setter Property="Foreground" Value="{DynamicResource VWAPP_ViewBodyTextBlock_Foreground_Normal}" />
                </Style>
            </DataGrid.CellStyle>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_HighlightBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_ControlBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_HighlightTextBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_ControlTextBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_InactiveSelectionHighlightBrushKey}" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                         Color="{DynamicResource VWAPP_DataGrid_CellStyle_InactiveSelectionHighlightTextBrushKey}" />
                    </Style.Resources>
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="Background" Value="{DynamicResource VWAPP_BACKGROUND}" />
                    <Setter Property="Foreground" Value="{DynamicResource VWAPP_ViewBodyTextBlock_Foreground_Normal}" />
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn x:Name="Column1"
                                    Width="1*"
                                    Binding="{Binding Path=Code}"
                                    Header="{x:Static Resources:OperatorApp.ItemSearchGridItem}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Height" Value="40" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Setter Property="BorderBrush" Value="{DynamicResource PpcButtonBorderBrush}" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Background" Value="{DynamicResource VWAPP_BACKGROUND}" />
                            <Setter Property="Foreground" Value="{DynamicResource VWAPP_ViewBodyTextBlock_Foreground_Normal}" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="1,0,0,0" />
                            <Setter Property="BorderBrush" Value="{DynamicResource PpcButtonBorderBrush}" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Column2"
                                    Width="4*"
                                    Binding="{Binding Path=Description}"
                                    Header="{x:Static Resources:OperatorApp.ItemSearchGridDescription}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Background" Value="{DynamicResource VWAPP_BACKGROUND}" />
                            <Setter Property="Foreground" Value="{DynamicResource VWAPP_ViewBodyTextBlock_Foreground_Normal}" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Setter Property="BorderBrush" Value="{DynamicResource PpcButtonBorderBrush}" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="BorderBrush" Value="{DynamicResource PpcButtonBorderBrush}" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Right" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn x:Name="Column3"
                                    Width="*"
                                    Binding="{Binding Path=Machines, Converter={StaticResource MTSC}}"
                                    Header="{x:Static Resources:OperatorApp.ItemSearchGridMachine}">
                    <DataGridTextColumn.HeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Setter Property="BorderBrush" Value="{DynamicResource PpcButtonBorderBrush}" />
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Background" Value="{DynamicResource VWAPP_BACKGROUND}" />
                            <Setter Property="Foreground" Value="{DynamicResource VWAPP_ViewBodyTextBlock_Foreground_Normal}" />
                        </Style>
                    </DataGridTextColumn.HeaderStyle>
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="BorderBrush" Value="{DynamicResource PpcButtonBorderBrush}" />
                        </Style>
                    </DataGridTextColumn.CellStyle>
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
