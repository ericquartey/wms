<UserControl x:Class="Ferretto.VW.CustomControls.Controls.CustomMainWindowServiceButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="60"
             d:DesignWidth="100"
             mc:Ignorable="d">
    <Button Name="LayoutRoot"
            Width="100"
            Height="60"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Background="Transparent"
            Command="{Binding CustomCommand}"
            Template="{StaticResource VWAPP_CustomMachineOnMarchToggleButton_ControlTemplate}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="47" />
                <RowDefinition Height="13" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Style="{StaticResource VWAPP_CustomMainWindowErrorButton_TextBlockStyle}"
                       Text="{Binding ContentText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       TextAlignment="Center"/>

            <Rectangle Grid.Row="1"
                       Width="98"
                       Height="12"
                       Fill="Orange" />
        </Grid>
    </Button>
</UserControl>
