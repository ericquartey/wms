<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Styles">

    <Style x:Key="VWAPP_CustomLabel_ContentTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource VWAPP_CustomLabel_ContentTextBlock_Foreground_Normal}" />
        <Setter Property="FontFamily" Value="{DynamicResource VWAPP_CustomLabel_ContentTextBlock_FontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource VWAPP_CustomLabel_ContentTextBlock_FontSize}" />
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Foreground" Value="{DynamicResource VWAPP_CustomLabel_ContentTextBlock_Foreground_Disabled}" />
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="VWAPP_CustomLabel_LabelTextBlockStyle"
           TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource VWAPP_CustomLabel_LabelTextBlock_Foreground_Normal}" />
        <Setter Property="FontFamily" Value="{DynamicResource VWAPP_CustomLabel_LabelTextBlock_FontFamily}" />
        <Setter Property="FontSize" Value="{DynamicResource VWAPP_CustomLabel_LabelTextBlock_FontSize}" />
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Foreground" Value="{DynamicResource VWAPP_CustomLabel_LabelTextBlock_Foreground_Disabled}" />
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>
