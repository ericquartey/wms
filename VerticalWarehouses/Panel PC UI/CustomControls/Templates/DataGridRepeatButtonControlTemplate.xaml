<ResourceDictionary x:Class="Ferretto.VW.CustomControls.Templates.DataGridRepeatButtonControlTemplate"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Templates"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">
    <ControlTemplate x:Key="VWAPP_DataGridRepeatButton_ControlTemplate"
                     TargetType="RepeatButton">
        <Border Name="Root_NavigationRepeatButtonBorder"
                Width="60"
                Height="60"
                Background="{DynamicResource VWAPP_ActionButton_Background_Normal}"
                BorderBrush="{DynamicResource VWAPP_ActionButton_BorderBrush_Normal}"
                BorderThickness="{DynamicResource VWAPP_ActionButton_BorderThickness_Normal}">
            <TextBlock Name="ActionButtonTextBlock"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="{DynamicResource VWAPP_ActionButton_FontFamily_Normal}"
                       FontSize="{DynamicResource VWAPP_ActionButton_FontSize_Normal}"
                       Foreground="{DynamicResource VWAPP_ActionButton_Foreground_Normal}"
                       Text="{TemplateBinding Content}"
                       TextAlignment="Center"
                       TextWrapping="Wrap" />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsPressed" Value="true">
                <Setter TargetName="Root_NavigationRepeatButtonBorder" Property="Background" Value="{DynamicResource VWAPP_ActionButton_Background_Pressed}" />
                <Setter TargetName="Root_NavigationRepeatButtonBorder" Property="BorderBrush" Value="{DynamicResource VWAPP_ActionButton_BorderBrush_Pressed}" />
                <Setter TargetName="ActionButtonTextBlock" Property="Foreground" Value="{DynamicResource VWAPP_NavigationRepeatButton_Foreground_Pressed}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="false">
                <Setter TargetName="Root_NavigationRepeatButtonBorder" Property="Background" Value="{DynamicResource VWAPP_ActionButton_Background_Disabled}" />
                <Setter TargetName="Root_NavigationRepeatButtonBorder" Property="BorderBrush" Value="{DynamicResource VWAPP_ActionButton_BorderBrush_Disabled}" />
                <Setter TargetName="ActionButtonTextBlock" Property="Foreground" Value="{DynamicResource VWAPP_NavigationRepeatButton_Foreground_Disabled}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>
