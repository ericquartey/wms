<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Templates">

    <ControlTemplate x:Key="VWAPP_CustomMachineOnMarchToggleButton_ControlTemplate"
                     TargetType="Button">
        <Border Name="Root_CustomMachineOnMarchToggleButtonBorder"
                Background="{DynamicResource VWAPP_ActionButton_Background_Normal}"
                BorderBrush="{DynamicResource VWAPP_ActionButton_BorderBrush_Normal}"
                BorderThickness="{DynamicResource VWAPP_ActionButton_BorderThickness_Normal}">
            <ContentPresenter />
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsPressed" Value="true">
                <Setter TargetName="Root_CustomMachineOnMarchToggleButtonBorder" Property="Background" Value="{DynamicResource VWAPP_ActionButton_Background_Pressed}" />
                <Setter TargetName="Root_CustomMachineOnMarchToggleButtonBorder" Property="BorderBrush" Value="{DynamicResource VWAPP_ActionButton_BorderBrush_Pressed}" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="false">
                <Setter TargetName="Root_CustomMachineOnMarchToggleButtonBorder" Property="Background" Value="{DynamicResource VWAPP_ActionButton_Background_Disabled}" />
                <Setter TargetName="Root_CustomMachineOnMarchToggleButtonBorder" Property="BorderBrush" Value="{DynamicResource VWAPP_ActionButton_BorderBrush_Disabled}" />
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>
