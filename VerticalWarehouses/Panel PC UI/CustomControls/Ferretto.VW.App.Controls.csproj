<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LanguageTargets Condition="$(VisualStudioVersion) &gt;= 16">$(MSBuildExtensionsPath)\Current\Bin\Microsoft.CSharp.targets</LanguageTargets>
    <LanguageTargets Condition="$(VisualStudioVersion) &lt; 16">$(MSBuildExtensionsPath)\$(VisualStudioVersion)\Bin\Microsoft.CSharp.targets</LanguageTargets>
    <TargetFramework>net471</TargetFramework>
    <CodeAnalysisRuleSet>..\..\analysis.ruleset</CodeAnalysisRuleSet>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="System.Xaml" />
    <Reference Include="WindowsBase" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Include="Prism.Core" Version="7.1.0.431" />
    <PackageReference Include="System.Windows.Interactivity.WPF" Version="2.0.20525" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="2.6.3">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="SonarAnalyzer.CSharp" Version="7.11.0.8083">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers</IncludeAssets>
    </PackageReference>
    <PackageReference Include="StyleCop.Analyzers" Version="1.0.2">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <Page Include="**\*.xaml" Exclude="App.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Assets\*.*" />
    <Content Remove="Fonts\*.*" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\*.*" />
    <Resource Include="Fonts\*.*" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Controls\BusyButton.xaml" />
    <None Remove="Controls\BusyIndicator.xaml" />
    <None Remove="Controls\CustomControlCellStatisticsDataGrid.xaml" />
    <None Remove="Controls\CustomControlDrawerDataGrid.xaml" />
    <None Remove="Controls\CustomControlDrawerSaturationDataGrid.xaml" />
    <None Remove="Controls\CustomControlDrawerWeightSaturationDataGrid.xaml" />
    <None Remove="Controls\CustomControlErrorsDataGrid.xaml" />
    <None Remove="Controls\CustomControlItemStatisticsDataGrid.xaml" />
    <None Remove="Controls\CustomControlListDataGrid.xaml" />
    <None Remove="Controls\CustomControlListDetailDataGrid.xaml" />
    <None Remove="Controls\CustomControlMaintenanceDataGrid.xaml" />
    <None Remove="Controls\CustomControlMaintenanceDetailDataGrid.xaml" />
    <None Remove="Controls\CustomProgressBarControl.xaml" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="Controls\CustomControlArticleDataGrid.xaml" />
    <None Remove="Skins\DarkCustomControlDataGrid.xaml" />
    <None Remove="Skins\LightCustomControlDataGrid.xaml" />
    <None Remove="Styles\CustomControlArticleDataGridStyle.xaml" />
    <None Remove="Templates\DataGridRepeatButtonControlTemplate.xaml" />
    <None Remove="Templates\DataGridScrollButtonControlTemplate.xaml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Common\Resources\Ferretto.VW.App.Resources.csproj" />
    <ProjectReference Include="..\Utils\Ferretto.VW.Utils.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Controls\CustomProgressBarControl.xaml.cs">
      <DependentUpon>CustomProgressBarControl.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\CustomShutterControlSensorsTwoPositions.xaml.cs">
      <DependentUpon>CustomShutterControlSensorsTwoPositions.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\CustomShutterControlSensorsThreePositions.xaml.cs">
      <DependentUpon>CustomShutterControlSensorsThreePositions.xaml</DependentUpon>
    </Compile>
    <Compile Update="Controls\VWIcon\VWIcon.xaml.cs">
      <DependentUpon>VWIcon.xaml</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <None Update="Controls\Icon\WmsIcon.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Controls\VWIcon\VWIcon.xaml">
      <Generator>MSBuild:Compile</Generator>
    </None>
    <None Update="Fonts\Microsoft-sans-serif.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Fonts\RobotoCondensed-Regular.ttf">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

 

</Project>

