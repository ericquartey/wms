<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <LanguageTargets>$(MSBuildToolsPath)\Microsoft.CSharp.targets</LanguageTargets>
    <TargetFramework>net471</TargetFramework>
    <OutputType>WinExe</OutputType>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <StartupObject>Ferretto.VW.App.App</StartupObject>
    <RunPostBuildEvent>Always</RunPostBuildEvent>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DefineConstants>TRACE;DEBUG</DefineConstants>
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <PlatformTarget>x64</PlatformTarget>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="PresentationCore" />
    <Reference Include="PresentationFramework" />
    <Reference Include="System.Xaml" />
    <Reference Include="WindowsBase" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Prism.Unity" Version="7.1.0.431" />
    <PackageReference Include="Unity.NLog" Version="1.0.2" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Common\Resources\Ferretto.VW.App.Resources.csproj" />
    <ProjectReference Include="..\..\Ferretto.VW.App.Services\Ferretto.VW.App.Services.csproj" />
    <ProjectReference Include="..\..\Machine Automation Service\Ferretto.VW.MAS_Utils\Ferretto.VW.MAS.Utils.csproj" />
    <ProjectReference Include="..\CustomControls\Ferretto.VW.App.Controls.csproj" />
    <ProjectReference Include="..\Ferretto.VW.WmsCommunication\Ferretto.VW.WmsCommunication.csproj" />
    <ProjectReference Include="..\Utils\Ferretto.VW.Utils.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ApplicationDefinition Include="App.xaml">
      <SubType>Designer</SubType>
      <Generator>MSBuild:Compile</Generator>
    </ApplicationDefinition>
  </ItemGroup>

  <ItemGroup>
    <Compile Update="**\*.xaml.cs">
      <DependentUpon>%(Filename)</DependentUpon>
      <SubType>Code</SubType>
    </Compile>
    <Page Include="**\*.xaml" Exclude="App.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="publish\**" />
    <Content Remove="Images\*.*" />
    <Content Remove="Icons\*.*" />
    <Resource Include="Images\*.*" />
    <Resource Include="Icons\*.*" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="publish\**" />
    <None Remove="publish\**" />
    <Page Remove="publish\**" />
  </ItemGroup>

  <ItemGroup>
    <None Update="App.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
      <None Remove="nlog.config" />
      <None Update="nlog.config">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="mkdir  &quot;$(ProjectDir)publish\$(ConfigurationName)&quot;&#xD;&#xA;copy &quot;$(ProjectDir)bin\$(ConfigurationName)\net471\Ferretto.VW.App.Installation.dll&quot; &quot;$(ProjectDir)publish\$(ConfigurationName)\Ferretto.VW.App.Installation.dll&quot;&#xD;&#xA;copy &quot;$(ProjectDir)bin\$(ConfigurationName)\net471\Ferretto.VW.App.Operator.dll&quot; &quot;$(ProjectDir)publish\$(ConfigurationName)\Ferretto.VW.App.Operator.dll&quot;" />
  </Target>

</Project>

   
