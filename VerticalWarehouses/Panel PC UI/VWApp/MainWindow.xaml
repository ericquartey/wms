<Window x:Class="Ferretto.VW.VWApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ferretto.VW.VWApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
        Title="MainWindow"
        Width="1024"
        Height="768"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">

    <Grid Background="{DynamicResource VWAPP_BACKGROUND}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               Grid.Column="0"
               Width="250"
               Height="50"
               Margin="15,0,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Fill" />

        <Image Grid.Row="1"
               Width="300"
               Height="520"
               Margin="540,70,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/background_machine.png"
               Stretch="Fill" />

        <TextBlock Grid.Row="1"
                   Width="420"
                   Margin="80,70,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_SplashScreenTitleTextBlockStyle}"
                   Text="VRT EF 84 L 990-BIS H 6345" />
        <!--  ="{Binding MachineModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  -->

        <TextBlock Grid.Row="1"
                   Margin="80,150,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_SplashScreenSubTitleTextBlockStyle}"
                   Text="Serial n. : VW_190012" />
        <!--  ="{Binding SerialNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" /  -->


        <custom:CustomInputFieldControlFocusable Grid.Row="1"
                                                 Width="200"
                                                 Margin="80,370,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 InputText="{Binding UserLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                 LabelText="{x:Static res:VWApp.UserLogin}"
                                                 Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

        <custom:CustomInputFieldControlFocusable Grid.Row="1"
                                                 Width="200"
                                                 Margin="80,430,0,0"
                                                 HorizontalAlignment="Left"
                                                 VerticalAlignment="Top"
                                                 InputText="{Binding PasswordLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 LabelText="{x:Static res:VWApp.PasswordLogin}"
                                                 Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

        <Button Grid.Row="0"
                Margin="0,0,15,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Command="{Binding SwitchOffCommand}"
                Content="{x:Static res:VWApp.SwitchOff}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <custom:BusyButton Grid.Row="1"
                           HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,510,0,0"
                           ButtonCommand="{Binding LoginButtonCommand}"
                           ButtonContent="{x:Static res:General.Login}"
                           IsWorking="{Binding IsLoginButtonWorking, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

        <!--<Button Grid.Row="1"
                Margin="80,530,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Command="{Binding LoginButtonCommand}"
                Content="{x:Static res:General.Login}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />-->

        <TextBlock Grid.Row="2"
                   Height="40"
                   Margin="100,2,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Style="{StaticResource VWAPP_ViewErrorTextBlockStyle}"
                   Text="{Binding LoginErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   TextWrapping="WrapWithOverflow" />
        
        <CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Margin="80,310,0,0" Grid.Row="1"
                  Content="{x:Static res:General.CheckBoxDark}"
                  FontFamily="Microsoft Sans Serif" FontSize="14" FontWeight="Thin" Background="{DynamicResource FerrettoPureWhite}"
                  Foreground="{DynamicResource FerrettoPureWhite}" BorderBrush="{DynamicResource FerrettoLightGray}" IsChecked="True" />
    </Grid>
</Window>
