<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="NotificationSeverityInfo"
                     Color="{DynamicResource ColorFerrettoBlue}" />
    <SolidColorBrush x:Key="NotificationSeverityError"
                     Color="{DynamicResource ColorFerrettoRed}" />
    <SolidColorBrush x:Key="NotificationSeverityWarning"
                     Color="{DynamicResource ColorFerrettoOrange}" />
    <SolidColorBrush x:Key="NotificationSeveritySuccess"
                     Color="{DynamicResource ColorFerrettoGreen}" />

</ResourceDictionary>
