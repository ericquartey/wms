<UserControl x:Class="Ferretto.VW.App.Controls.Controls.PpcMenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="MenuButton"
             Width="380"
             Height="100"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style TargetType="{x:Type controls:BaseMenuButton}">
            <Setter Property="Background" Value="{DynamicResource PpcButtonBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource PpcButtonForeground}" />
            <Setter Property="FontSize" Value="{StaticResource FontSize_High}" />
            <Setter Property="BorderBrush" Value="{DynamicResource PpcMenuButtonBorderBrush}" />
            <Setter Property="BorderThickness" Value="{DynamicResource PpcBorderThickness}" />
            <Setter Property="SnapsToDevicePixels" Value="True" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type controls:BaseMenuButton}">
                        <Grid>
                            <Border x:Name="ButtonBorder"
                                    Margin="1"
                                    Background="{x:Null}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{DynamicResource PpcBorderThickness}"
                                    CornerRadius="{DynamicResource PpcCornerRadius}">
                                <!--<Border.Effect>
                                    <DropShadowEffect BlurRadius="6"
                                                      Opacity="0.5"
                                                      RenderingBias="Quality"
                                                      ShadowDepth="3"
                                                      Color="{DynamicResource VWAPP_ShadowEffect_Color}" />
                                </Border.Effect>-->
                            </Border>

                            <Border Margin="1"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{x:Null}"
                                    BorderThickness="{DynamicResource PpcBorderThickness}"
                                    CornerRadius="{DynamicResource PpcCornerRadius}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0"
                                          Background="{TemplateBinding MenuBrush}"
                                          Opacity="0.8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5" />
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="25" />
                                            <ColumnDefinition Width="65" />
                                            <ColumnDefinition Width="5" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="5" />
                                        </Grid.RowDefinitions>


                                        <StackPanel Grid.Row="1"
                                                    Grid.Column="1"
                                                    VerticalAlignment="Center">
                                            <ContentPresenter Grid.Row="1"
                                                              Grid.RowSpan="2"
                                                              Grid.Column="1"
                                                              Margin="5,0,0,0"
                                                              HorizontalAlignment="Right"
                                                              VerticalAlignment="Top"
                                                              Content="{Binding ElementName=MenuButton, Path=Abbreviation, FallbackValue='INSTALL'}"
                                                              TextBlock.FontSize="18" />

                                            <ContentPresenter Grid.Row="3"
                                                              Grid.RowSpan="2"
                                                              Grid.Column="1"
                                                              Margin="0,-7,-3,0"
                                                              HorizontalAlignment="Right"
                                                              VerticalAlignment="Top"
                                                              Content="{Binding ElementName=MenuButton, Path=Number, FallbackValue='01'}"
                                                              TextBlock.FontSize="36" />
                                        </StackPanel>

                                        <Border Grid.Row="1"
                                                Grid.Column="2"
                                                Margin="5,25"
                                                HorizontalAlignment="Center"
                                                BorderThickness="2,0,0,0">
                                            <Border.BorderBrush>
                                                <DrawingBrush TileMode="Tile"
                                                              Viewport="0,0,8,8"
                                                              ViewportUnits="Absolute">
                                                    <DrawingBrush.Drawing>
                                                        <DrawingGroup>
                                                            <GeometryDrawing Brush="White">
                                                                <GeometryDrawing.Geometry>
                                                                    <GeometryGroup>
                                                                        <RectangleGeometry Rect="0,0,50,50" />
                                                                        <RectangleGeometry Rect="50,50,50,50" />
                                                                    </GeometryGroup>
                                                                </GeometryDrawing.Geometry>
                                                            </GeometryDrawing>
                                                        </DrawingGroup>
                                                    </DrawingBrush.Drawing>
                                                </DrawingBrush>
                                            </Border.BorderBrush>
                                        </Border>

                                        <Grid Grid.Row="1"
                                              Grid.Column="3"
                                              HorizontalAlignment="Left">

                                            <Ellipse Width="56"
                                                     Height="56"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"
                                                     Fill="{TemplateBinding MenuBrush}"
                                                     Stroke="White"
                                                     StrokeThickness="1">
                                                <Ellipse.BitmapEffect>
                                                    <DropShadowBitmapEffect Opacity="0.5"
                                                                            ShadowDepth="5" />
                                                </Ellipse.BitmapEffect>
                                            </Ellipse>

                                            <icon:PackIconMaterial Width="28"
                                                                   Height="28"
                                                                   HorizontalAlignment="Center"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="White"
                                                                   Kind="{Binding Path=Kind, RelativeSource={RelativeSource TemplatedParent}}" />
                                        </Grid>

                                    </Grid>


                                    <Grid Grid.Column="1"
                                          Background="{DynamicResource FerrettoDarkGray}">

                                        <Grid.RowDefinitions>
                                            <!--  Margine Top  -->
                                            <RowDefinition Height="10" />
                                            <!--  Title  -->
                                            <RowDefinition Height="Auto" />
                                            <!--  Body  -->
                                            <RowDefinition Height="*" />
                                            <!--  Margine Botton  -->
                                            <RowDefinition Height="10" />
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <!--  Margine Left  -->
                                            <ColumnDefinition Width="25" />
                                            <!--  Body  -->
                                            <ColumnDefinition Width="*" />
                                            <!--  Margine Right  -->
                                            <ColumnDefinition Width="25" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="1"
                                                   FontSize="24"
                                                   Foreground="{DynamicResource FerrettoPureWhite}"
                                                   Text="{Binding ElementName=MenuButton, Path=Title, FallbackValue='TITOLO'}" />

                                        <TextBlock Grid.Row="2"
                                                   Grid.Column="1"
                                                   FontSize="{DynamicResource FontSize_Small}"
                                                   Foreground="{DynamicResource FerrettoLightGray}"
                                                   Text="{Binding ElementName=MenuButton, Path=Description, FallbackValue='bla bla bla bla bla'}"
                                                   TextWrapping="Wrap" />

                                    </Grid>

                                </Grid>



                            </Border>

                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PpcButtonBackgroundPressed}" />
                                <!--<Setter Property="BorderBrush" Value="{DynamicResource PpcButtonBorderBrushPressed}" /> -->
                                <!--<Setter Property="Foreground" Value="{DynamicResource PpcButtonForegroundPressed}" />-->
                                <Setter Property="Cursor" Value="Hand" />
                                <!--<Setter TargetName="ButtonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect x:Name="BorderEffect"
                                                          BlurRadius="0"
                                                          Opacity="0.5"
                                                          RenderingBias="Quality"
                                                          ShadowDepth="0"
                                                          Color="{DynamicResource VWAPP_ShadowEffect_Color}" />
                                    </Setter.Value>
                                </Setter>-->
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="{DynamicResource PpcButtonBackgroundDisabled}" />
                                <Setter Property="BorderBrush" Value="{DynamicResource PpcButtonBorderBrushDisabled}" />
                                <Setter Property="Foreground" Value="{DynamicResource PpcButtonForegroundDisabled}" />
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>
    </UserControl.Resources>

    <controls:BaseMenuButton Abbreviation="{Binding ElementName=MenuButton, Path=Abbreviation, FallbackValue='A'}"
                             Command="{Binding ElementName=MenuButton, Path=Command}"
                             Content="{Binding ElementName=MenuButton, Path=Text, FallbackValue='01'}"
                             Kind="{Binding ElementName=MenuButton, Path=Kind, FallbackValue='Account'}"
                             MenuBrush="{Binding ElementName=MenuButton, Path=MenuBrush, FallbackValue='White'}" />

</UserControl>
