        <DataTemplate x:Key="DataTemplateShutter">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                           Margin="4,0"
                           FontSize="{StaticResource FontSize_Normal}"
                           FontWeight="Normal"
                           Foreground="{DynamicResource FerrettoLightGray}"
                           Text="{Binding ElementName=Card, Path=CardText}" />

                <TextBlock Grid.Row="1"
                           Grid.RowSpan="2"
                           Margin="4"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="{StaticResource FontSize_Very_High}"
                           Foreground="{DynamicResource PpcForeground}"
                           Text="{Binding ElementName=Card, Path=CardValue}">
                    <TextBlock.Style>
                        <Style>
                            <Style.Triggers>
                                <Trigger Property="TextBlock.Text" Value="">
                                    <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </Grid>
        </DataTemplate>

        <local:CardTemplateSelector x:Key="selector"
                                    EnumAxis="{StaticResource DataTemplateAxis}"
                                    EnumBay="{StaticResource DataTemplateBay}"
                                    EnumDrawer="{StaticResource DataTemplateDrawer}"
                                    EnumPosition="{StaticResource DataTemplatePosition}"
                                    EnumShutter="{StaticResource DataTemplateShutter}" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Border Background="{DynamicResource PpcBackground}"
                BorderBrush="{DynamicResource PpcBorderBrush}"
                BorderThickness="{DynamicResource PpcBorderThickness}"
                CornerRadius="{DynamicResource PpcCornerRadius}">
            <ContentControl Content="{Binding ElementName=Card, Path=Type}"
                            ContentTemplateSelector="{StaticResource selector}" />

        </Border>
    </Grid>
</UserControl>
