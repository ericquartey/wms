<UserControl x:Class="Ferretto.VW.App.Controls.Controls.CardSensor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Ferretto.VW.App.Controls.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             x:Name="Card"
             d:DesignHeight="120"
             d:DesignWidth="250"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanConverter x:Key="BooleanConverter" />

        <ControlTemplate x:Key="ButtonBaseControlTemplate1"
                         TargetType="{x:Type ButtonBase}">
            <Border x:Name="border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    SnapsToDevicePixels="True">
                <ContentPresenter x:Name="contentPresenter"
                                  Margin="0,-1.5,0,0"
                                  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                  Content="{TemplateBinding Content}"
                                  ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                  Focusable="False"
                                  RecognizesAccessKey="True"
                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
            </Border>
        </ControlTemplate>

        <DataTemplate x:Key="DataTemplateAxis">
            <Grid Margin="4"
                  UseLayoutRounding="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                           Margin="4,0"
                           FontSize="{StaticResource FontSize_Normal}"
                           FontWeight="Normal"
                           Style="{StaticResource VWAPP_Text_Foreground}"
                           Text="{Binding ElementName=Card, Path=CardText}" />

                <StackPanel Grid.Row="1"
                            Grid.RowSpan="2"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <StackPanel.Style>
                        <Style>
                            <Setter Property="Grid.ColumnSpan" Value="1" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=Card, Path=CardBadge1}" Value="{x:Null}" />
                                        <Condition Binding="{Binding ElementName=Card, Path=CardSensorLabel1}" Value="{x:Null}" />
                                    </MultiDataTrigger.Conditions>
                                    <MultiDataTrigger.Setters>
                                        <Setter Property="Grid.ColumnSpan" Value="2" />
                                    </MultiDataTrigger.Setters>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_High}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardValue}">
                        <TextBlock.Style>
                            <Style>
                                <Style.Triggers>
                                    <Trigger Property="TextBlock.Text" Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_Small}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardDescription}">
                        <TextBlock.Style>
                            <Style>
                                <Setter Property="TextBlock.Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardDescription}"
                                                 Value="{x:Null}">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardDescription}"
                                                 Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.RowSpan="3"
                            Grid.Column="1"
                            VerticalAlignment="Center">
                    <StackPanel.Style>
                        <Style>
                            <Setter Property="StackPanel.MinWidth" Value="45" />
                            <Setter Property="StackPanel.Visibility" Value="Visible" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=Card, Path=CardBadge1}" Value="" />
                                    </MultiDataTrigger.Conditions>
                                    <MultiDataTrigger.Setters>
                                        <Setter Property="StackPanel.MinWidth" Value="0" />
                                        <Setter Property="StackPanel.Visibility" Value="Collapsed" />
                                    </MultiDataTrigger.Setters>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <StackPanel Margin="4,0"
                                VerticalAlignment="Center">
                        <Border x:Name="BorderBadge"
                                Width="35"
                                Height="35"
                                Margin="4"
                                HorizontalAlignment="Center"
                                Background="{DynamicResource PpcBackground}"
                                BorderBrush="{DynamicResource PpcBorderBrush}"
                                BorderThickness="{DynamicResource PpcBorderThickness}"
                                CornerRadius="4">
                            <ToggleButton x:Name="ToggleButtonBadge"
                                          Margin="1"
                                          Padding="0"
                                          Background="{DynamicResource PpcBackground}"
                                          BorderThickness="0"
                                          Content="{Binding ElementName=Card, Path=CardBadge1}"
                                          FontSize="{StaticResource FontSize_High}"
                                          Foreground="{DynamicResource PpcForeground}"
                                          Template="{DynamicResource ButtonBaseControlTemplate1}" />
                            <Border.Style>
                                <Style>
                                    <Setter Property="Grid.RowSpan" Value="1" />
                                    <Setter Property="Border.Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge1}"
                                                     Value="">
                                            <Setter Property="Border.Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <Popup Height="90"
                               VerticalAlignment="Top"
                               AllowsTransparency="True"
                               HorizontalOffset="0"
                               IsOpen="{Binding IsChecked, ElementName=ToggleButtonBadge}"
                               Placement="Right"
                               PlacementTarget="{Binding ElementName=BorderBadge}"
                               SnapsToDevicePixels="True"
                               StaysOpen="False"
                               UseLayoutRounding="True"
                               VerticalOffset="-28">
                            <Grid>
                                <Border Grid.RowSpan="2"
                                        Grid.ColumnSpan="4"
                                        Margin="23,0,0,0"
                                        HorizontalAlignment="Left"
                                        Background="{StaticResource PpcBackground}"
                                        BorderBrush="{DynamicResource PpcBorderBrush}"
                                        BorderThickness="{DynamicResource PpcBorderThickness}"
                                        CornerRadius="10,10,10,10">
                                    <Grid Margin="4"
                                          Background="{StaticResource PpcBackground}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Bottom"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoLightGray}"
                                                   Text="{x:Static res:SensorCard.Weight}" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoLightGray}"
                                                   Text="{x:Static res:SensorCard.Height}" />

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="1"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Bottom"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoPureWhite}"
                                                   Text="{Binding ElementName=Card, Path=LuWeight, StringFormat={}{0} kg}" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="1"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoPureWhite}"
                                                   Text="{Binding ElementName=Card, Path=LuHeight, StringFormat={}{0} mm}" />

                                    </Grid>
                                </Border>

                                <Path Width="26"
                                      Height="26"
                                      Margin="0,32,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Data="M18,5L0,11 18,17"
                                      Fill="{StaticResource PpcBackground}"
                                      Stretch="Fill"
                                      Stroke="{StaticResource PpcBorderBrush}"
                                      StrokeThickness="1.5" />
                            </Grid>
                        </Popup>

                        <TextBlock Margin="1"
                                   HorizontalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardBadgeLabel1}">
                            <TextBlock.Style>
                                <Style>
                                    <Setter Property="TextBlock.Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge1}"
                                                     Value="">
                                            <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                </StackPanel>

                <StackPanel Grid.RowSpan="3"
                            Grid.Column="2"
                            VerticalAlignment="Center">
                    <StackPanel.Style>
                        <Style>
                            <Setter Property="StackPanel.MinWidth" Value="45" />
                            <Setter Property="StackPanel.Visibility" Value="Visible" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=Card, Path=CardBadge1}" Value="" />
                                        <Condition Binding="{Binding ElementName=Card, Path=CardSensorLabel1}" Value="{x:Null}" />
                                    </MultiDataTrigger.Conditions>
                                    <MultiDataTrigger.Setters>
                                        <Setter Property="StackPanel.MinWidth" Value="0" />
                                        <Setter Property="StackPanel.Visibility" Value="Collapsed" />
                                    </MultiDataTrigger.Setters>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Border Margin="4"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="Background" Value="{DynamicResource FerrettoGreen}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardSensorLabel1}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=Sensor1}"
                                                 Value="False">
                                        <Setter Property="Background" Value="{DynamicResource FerrettoMediumGray}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Margin="4,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardSensorLabel1}" />
                    </Border>

                    <Border Margin="4"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="Background" Value="{DynamicResource FerrettoGreen}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardSensorLabel2}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=Sensor2}"
                                                 Value="False">
                                        <Setter Property="Background" Value="{DynamicResource FerrettoMediumGray}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Margin="4,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardSensorLabel2}" />
                    </Border>

                    <Border Margin="4"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="Background" Value="{DynamicResource FerrettoGreen}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardSensorLabel3}"
                                                 Value="{x:Null}">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=Sensor3}"
                                                 Value="False">
                                        <Setter Property="Background" Value="{DynamicResource FerrettoMediumGray}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Margin="4,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardSensorLabel3}" />
                    </Border>
                </StackPanel>
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DataTemplateBay">
            <Grid Margin="4"
                  UseLayoutRounding="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                           Margin="4,0"
                           FontSize="{StaticResource FontSize_Normal}"
                           FontWeight="Normal"
                           Style="{StaticResource VWAPP_Text_Foreground}"
                           Text="{Binding ElementName=Card, Path=CardText}" />

                <StackPanel Grid.Row="1"
                            Grid.RowSpan="2"
                            Grid.ColumnSpan="2"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_High}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardValue}">
                        <TextBlock.Style>
                            <Style>
                                <Style.Triggers>
                                    <Trigger Property="TextBlock.Text" Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_Small}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardDescription, StringFormat='Target: {0}'}">
                        <TextBlock.Style>
                            <Style>
                                <Setter Property="TextBlock.Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardDescription}"
                                                 Value="{x:Null}">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardDescription}"
                                                 Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <Grid Grid.Row="0"
                      Grid.RowSpan="3"
                      Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0"
                                Margin="0"
                                VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style>
                                <Setter Property="StackPanel.Visibility" Value="Visible" />
                                <Setter Property="Grid.RowSpan" Value="1" />
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding ElementName=Card, Path=MachineService.BayFirstPositionIsUpper}" Value="true" />
                                            <Condition Binding="{Binding ElementName=Card, Path=MachineService.Bay.IsDouble}" Value="false" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Grid.RowSpan" Value="2" />
                                    </MultiDataTrigger>

                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardLuUp}"
                                                 Value="{x:Null}">
                                        <Setter Property="StackPanel.Visibility" Value="Collapsed" />
                                    </DataTrigger>

                                    <!--<MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding ElementName=Card, Path=CardLuUp}" Value="{x:Null}" />
                                            <Condition Binding="{Binding ElementName=Card, Path=MachineService.Bay.IsDouble}" Value="false" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="StackPanel.Visibility" Value="Collapsed" />
                                    </MultiDataTrigger>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding ElementName=Card, Path=CardLuUp}" Value="{x:Null}" />
                                            <Condition Binding="{Binding ElementName=Card, Path=CardLuDown}" Value="{x:Null}" />
                                            <Condition Binding="{Binding ElementName=Card, Path=MachineService.Bay.IsDouble}" Value="true" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="StackPanel.Visibility" Value="Collapsed" />
                                    </MultiDataTrigger>-->


                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <Border x:Name="BorderBadgeUp"
                                Width="35"
                                Height="35"
                                Margin="4"
                                HorizontalAlignment="Center"
                                Background="{DynamicResource PpcBackground}"
                                BorderBrush="{DynamicResource PpcBorderBrush}"
                                BorderThickness="{DynamicResource PpcBorderThickness}"
                                CornerRadius="4">
                            <ToggleButton x:Name="ToggleButtonBadgeUp"
                                          Margin="1"
                                          Padding="0"
                                          Background="{DynamicResource PpcBackground}"
                                          BorderThickness="0"
                                          Content="{Binding ElementName=Card, Path=CardLuUp.Id}"
                                          FontSize="{StaticResource FontSize_High}"
                                          Foreground="{DynamicResource PpcForeground}"
                                          Template="{DynamicResource ButtonBaseControlTemplate1}">
                                <ToggleButton.Style>
                                    <Style>
                                        <Setter Property="ToggleButton.Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=Card, Path=CardLuUp}"
                                                         Value="{x:Null}">
                                                <Setter Property="ToggleButton.Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </Border>

                        <Popup Height="90"
                               VerticalAlignment="Top"
                               AllowsTransparency="True"
                               HorizontalOffset="0"
                               IsOpen="{Binding IsChecked, ElementName=ToggleButtonBadgeUp}"
                               Placement="Right"
                               PlacementTarget="{Binding ElementName=BorderBadgeUp}"
                               SnapsToDevicePixels="True"
                               StaysOpen="False"
                               UseLayoutRounding="True"
                               VerticalOffset="-28">
                            <Grid>
                                <Border Grid.RowSpan="2"
                                        Grid.ColumnSpan="4"
                                        Margin="23,0,0,0"
                                        HorizontalAlignment="Left"
                                        Background="{StaticResource PpcBackground}"
                                        BorderBrush="{DynamicResource PpcBorderBrush}"
                                        BorderThickness="{DynamicResource PpcBorderThickness}"
                                        CornerRadius="10,10,10,10">
                                    <Grid Margin="4"
                                          Background="{StaticResource PpcBackground}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Bottom"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoLightGray}"
                                                   Text="{x:Static res:SensorCard.Weight}" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoLightGray}"
                                                   Text="{x:Static res:SensorCard.Height}" />

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="1"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Bottom"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoPureWhite}"
                                                   Text="{Binding ElementName=Card, Path=CardLuUp.NetWeight, StringFormat={}{0:F2} kg}" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="1"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoPureWhite}"
                                                   Text="{Binding ElementName=Card, Path=CardLuUp.Height, StringFormat={}{0:F2} mm}" />

                                    </Grid>
                                </Border>

                                <Path Width="26"
                                      Height="26"
                                      Margin="0,32,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Data="M18,5L0,11 18,17"
                                      Fill="{StaticResource PpcBackground}"
                                      Stretch="Fill"
                                      Stroke="{StaticResource PpcBorderBrush}"
                                      StrokeThickness="1.5" />
                            </Grid>
                        </Popup>

                    </StackPanel>

                    <StackPanel Margin="0"
                                VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style>
                                <Setter Property="StackPanel.Visibility" Value="Visible" />
                                <Setter Property="Grid.Row" Value="1" />
                                <Setter Property="Grid.RowSpan" Value="1" />
                                <Style.Triggers>

                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding ElementName=Card, Path=MachineService.BayFirstPositionIsUpper}" Value="false" />
                                            <Condition Binding="{Binding ElementName=Card, Path=MachineService.Bay.IsDouble}" Value="false" />
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Grid.RowSpan" Value="2" />
                                        <Setter Property="Grid.Row" Value="0" />
                                    </MultiDataTrigger>


                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardLuDown}"
                                                 Value="{x:Null}">
                                        <Setter Property="StackPanel.Visibility" Value="Collapsed" />
                                    </DataTrigger>


                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <Border x:Name="BorderBadgeDown"
                                Width="35"
                                Height="35"
                                Margin="4"
                                HorizontalAlignment="Center"
                                Background="{DynamicResource PpcBackground}"
                                BorderBrush="{DynamicResource PpcBorderBrush}"
                                BorderThickness="{DynamicResource PpcBorderThickness}"
                                CornerRadius="4">
                            <ToggleButton x:Name="ToggleButtonBadgeDown"
                                          Margin="1"
                                          Padding="0"
                                          Background="{DynamicResource PpcBackground}"
                                          BorderThickness="0"
                                          Content="{Binding ElementName=Card, Path=CardLuDown.Id}"
                                          FontSize="{StaticResource FontSize_High}"
                                          Foreground="{DynamicResource PpcForeground}"
                                          Template="{DynamicResource ButtonBaseControlTemplate1}">
                                <ToggleButton.Style>
                                    <Style>
                                        <Setter Property="ToggleButton.Visibility" Value="Visible" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ElementName=Card, Path=CardLuDown}"
                                                         Value="{x:Null}">
                                                <Setter Property="ToggleButton.Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ToggleButton.Style>
                            </ToggleButton>
                        </Border>

                        <Popup Height="90"
                               VerticalAlignment="Top"
                               AllowsTransparency="True"
                               HorizontalOffset="0"
                               IsOpen="{Binding IsChecked, ElementName=ToggleButtonBadgeDown}"
                               Placement="Right"
                               PlacementTarget="{Binding ElementName=BorderBadgeDown}"
                               SnapsToDevicePixels="True"
                               StaysOpen="False"
                               UseLayoutRounding="True"
                               VerticalOffset="-28">
                            <Grid>
                                <Border Grid.RowSpan="2"
                                        Grid.ColumnSpan="4"
                                        Margin="23,0,0,0"
                                        HorizontalAlignment="Left"
                                        Background="{StaticResource PpcBackground}"
                                        BorderBrush="{DynamicResource PpcBorderBrush}"
                                        BorderThickness="{DynamicResource PpcBorderThickness}"
                                        CornerRadius="10,10,10,10">
                                    <Grid Margin="4"
                                          Background="{StaticResource PpcBackground}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Bottom"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoLightGray}"
                                                   Text="{x:Static res:SensorCard.Weight}" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Margin="4"
