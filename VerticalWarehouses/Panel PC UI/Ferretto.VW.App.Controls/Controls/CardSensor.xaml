<UserControl x:Class="Ferretto.VW.App.Controls.Controls.CardSensor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="Card"
             d:DesignHeight="120"
             d:DesignWidth="250"
             mc:Ignorable="d">
    <Grid>
        <Border Margin="1"
                Background="{x:Null}"
                BorderBrush="Gray"
                BorderThickness="2"
                CornerRadius="4">
            <Border.Effect>
                <DropShadowEffect BlurRadius="6"
                                  Opacity="0.5"
                                  RenderingBias="Quality"
                                  ShadowDepth="3"
                                  Color="{DynamicResource VWAPP_ShadowEffect_Color}" />
            </Border.Effect>
        </Border>
        <Border Margin="1"
                Background="{DynamicResource FerrettoMediumGray}"
                BorderBrush="{x:Null}"
                BorderThickness="2"
                CornerRadius="4">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Grid Grid.RowSpan="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Margin="4,0"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{DynamicResource FerrettoLightGray}"
                               Text="{Binding ElementName=Card, Path=CardText}" />

                    <TextBlock Grid.Row="1"
                               Margin="4"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="28"
                               Foreground="{DynamicResource FerrettoPureWhite}"
                               Text="{Binding ElementName=Card, Path=CardValue}">
                        <TextBlock.Style>
                            <Style>
                                <Style.Triggers>
                                    <Trigger Property="TextBlock.Text" Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <StackPanel Grid.RowSpan="3"
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center">

                    <StackPanel Margin="4,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                        <TextBlock Margin="0,0,4,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource FerrettoLightGray}"
                                   Text="Zero" />
                        <Grid Width="19"
                              Height="19">
                            <Ellipse Width="19"
                                     Height="19"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="DarkGray" />
                            <Ellipse Width="16"
                                     Height="16"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="Green" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="4,4,4,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                        <TextBlock Margin="0,0,4,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource FerrettoLightGray}"
                                   Text="Front" />
                        <Grid Grid.Column="1"
                              Width="19"
                              Height="19">
                            <Ellipse Width="19"
                                     Height="19"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="DarkGray" />
                            <Ellipse Width="16"
                                     Height="16"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="Green" />
                        </Grid>
                    </StackPanel>

                    <StackPanel Margin="4,4,4,0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                        <TextBlock Margin="0,0,4,0"
                                   VerticalAlignment="Center"
                                   Foreground="{DynamicResource FerrettoLightGray}"
                                   Text="Back" />
                        <Grid Grid.Column="1"
                              Width="19"
                              Height="19">
                            <Ellipse Width="19"
                                     Height="19"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="DarkGray" />
                            <Ellipse Width="16"
                                     Height="16"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Fill="Green" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
