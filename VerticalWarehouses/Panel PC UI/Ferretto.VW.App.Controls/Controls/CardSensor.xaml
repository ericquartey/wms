<UserControl x:Class="Ferretto.VW.App.Controls.Controls.CardSensor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Ferretto.VW.App.Controls.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="Card"
             d:DesignHeight="120"
             d:DesignWidth="250"
             mc:Ignorable="d">
    <UserControl.Resources>
        <converters:BooleanConverter x:Key="BooleanConverter" />
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Border Margin="1"
                Background="{x:Null}"
                BorderBrush="{DynamicResource PpcBorderBrush}"
                BorderThickness="{DynamicResource PpcBorderThickness}"
                CornerRadius="{DynamicResource PpcCornerRadius}">
            <!--<Border.Effect>
                <DropShadowEffect BlurRadius="6"
                                  Opacity="0.5"
                                  RenderingBias="Quality"
                                  ShadowDepth="3"
                                  Color="{DynamicResource VWAPP_ShadowEffect_Color}" />
            </Border.Effect>-->
        </Border>
        <Border Margin="1"
                Background="{DynamicResource PpcBackground}"
                BorderBrush="{x:Null}"
                BorderThickness="{DynamicResource PpcBorderThickness}"
                CornerRadius="{DynamicResource PpcCornerRadius}">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                           Margin="4,0"
                           FontSize="{StaticResource FontSize_Normal}"
                           FontWeight="Bold"
                           Foreground="{DynamicResource PpcForeground}"
                           Text="{Binding ElementName=Card, Path=CardText}" />

                <TextBlock Grid.Row="1"
                           Grid.RowSpan="2"
                           Margin="4"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontSize="{StaticResource FontSize_Very_High}"
                           Foreground="{DynamicResource PpcForeground}"
                           Text="{Binding ElementName=Card, Path=CardValue}">
                    <TextBlock.Style>
                        <Style>
                            <Style.Triggers>
                                <Trigger Property="TextBlock.Text" Value="">
                                    <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <Grid Grid.Row="1"
                      Grid.RowSpan="2"
                      Grid.ColumnSpan="2">
                    <Grid.Style>
                        <Style TargetType="{x:Type Grid}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=Card, Path=HasWithBadge2}"
                                             Value="HasWithBadge2">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0"
                            Grid.Column="0"
                            Width="40"
                            Height="40"
                            Margin="2"
                            HorizontalAlignment="Center"
                            BorderBrush="{DynamicResource PpcBorderBrush}"
                            BorderThickness="{DynamicResource PpcBorderThickness}"
                            CornerRadius="4">
                        <TextBlock Margin="4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_High}"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardBadge1}" />
                    </Border>
                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_Small}"
                               FontStyle="Italic"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardBadgeLabel1}" />


                    <Border Grid.Row="0"
                            Grid.Column="1"
                            Width="40"
                            Height="40"
                            Margin="2"
                            HorizontalAlignment="Center"
                            BorderBrush="{DynamicResource PpcBorderBrush}"
                            BorderThickness="{DynamicResource PpcBorderThickness}"
                            CornerRadius="4">
                        <TextBlock Margin="4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_High}"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardBadge2}" />
                    </Border>
                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_Small}"
                               FontStyle="Italic"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardBadgeLabel2}" />

                </Grid>


                <StackPanel Grid.RowSpan="3"
                            Grid.Column="1"
                            Margin="4,0,0,0"
                            VerticalAlignment="Bottom">
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=Card, Path=HasWithBadge1}"
                                             Value="HasWithBadge1">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Border Width="45"
                            Height="45"
                            Margin="4"
                            BorderBrush="{DynamicResource PpcBorderBrush}"
                            BorderThickness="{DynamicResource PpcBorderThickness}"
                            CornerRadius="4">
                        <TextBlock Margin="4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_High}"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardBadge1}" />
                    </Border>


                </StackPanel>

                <StackPanel Grid.RowSpan="3"
                            Grid.Column="1"
                            Width="45"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="{x:Type StackPanel}">
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding ElementName=Card, Path=CardLabelSensor1}" Value="" />
                                        <Condition Binding="{Binding ElementName=Card, Path=CardLabelSensor2}" Value="" />
                                        <Condition Binding="{Binding ElementName=Card, Path=CardLabelSensor3}" Value="" />
                                    </MultiDataTrigger.Conditions>
                                    <MultiDataTrigger.Setters>
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </MultiDataTrigger.Setters>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Border Margin="4"
                            Background="{DynamicResource FerrettoGreen}"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardLabelSensor1}"
                                                 Value="">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Margin="4,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardLabelSensor1}" />
                    </Border>

                    <Border Margin="4"
                            Background="{DynamicResource FerrettoGreen}"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardLabelSensor2}"
                                                 Value="">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Margin="4,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardLabelSensor2}" />
                    </Border>

                    <Border Margin="4"
                            Background="{DynamicResource FerrettoGreen}"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardLabelSensor3}"
                                                 Value="">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Margin="4,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   FontStyle="Italic"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardLabelSensor3}" />
                    </Border>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
