                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge1}"
                                                 Value="{x:Null}">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Grid.Row="0"
                               Grid.Column="1"
                               Margin="15,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_High}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardBadge1, StringFormat={}{0} kg}">
                        <TextBlock.Style>
                            <Style>
                                <Setter Property="TextBlock.Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge1}"
                                                 Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge1}"
                                                 Value="{x:Null}">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Grid.Row="1"
                               Grid.Column="0"
                               Margin="20,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_Small}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardBadgeLabel2}">
                        <TextBlock.Style>
                            <Style>
                                <Setter Property="TextBlock.Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge2}"
                                                 Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge2}"
                                                 Value="{x:Null}">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <TextBlock Grid.Row="1"
                               Grid.Column="1"
                               Margin="15,0,0,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_High}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardBadge2, StringFormat={}{0} mm}">
                        <TextBlock.Style>
                            <Style>
                                <Setter Property="TextBlock.Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge2}"
                                                 Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge2}"
                                                 Value="{x:Null}">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="DataTemplatePosition">
            <Grid Margin="4"
                  UseLayoutRounding="True">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                           Margin="4,0"
                           FontSize="{StaticResource FontSize_Normal}"
                           FontWeight="Normal"
                           Style="{StaticResource VWAPP_Text_Foreground}"
                           Text="{Binding ElementName=Card, Path=CardText}" />

                <StackPanel Grid.Row="1"
                            Grid.RowSpan="2"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_High}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardValue}">
                        <TextBlock.Style>
                            <Style>
                                <Style.Triggers>
                                    <Trigger Property="TextBlock.Text" Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_Small}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardDescription, StringFormat={}{0}}">
                        <TextBlock.Style>
                            <Style>
                                <Setter Property="TextBlock.Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardDescription}"
                                                 Value="{x:Null}">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardDescription}"
                                                 Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.RowSpan="3"
                            Grid.Column="1"
                            Margin="4,0"
                            VerticalAlignment="Bottom">
                    <Border x:Name="BorderBadge"
                            Width="35"
                            Height="35"
                            Margin="4"
                            HorizontalAlignment="Center"
                            Background="{DynamicResource PpcBackground}"
                            BorderBrush="{DynamicResource PpcBorderBrush}"
                            BorderThickness="{DynamicResource PpcBorderThickness}"
                            CornerRadius="4">
                        <ToggleButton x:Name="ToggleButtonBadge"
                                      Margin="1"
                                      Padding="0"
                                      Background="{DynamicResource PpcBackground}"
                                      BorderThickness="0"
                                      Content="{Binding ElementName=Card, Path=CardBadge1}"
                                      FontSize="{StaticResource FontSize_High}"
                                      Foreground="{DynamicResource PpcForeground}"
                                      Template="{DynamicResource ButtonBaseControlTemplate1}" />
                        <Border.Style>
                            <Style>
                                <Setter Property="Grid.RowSpan" Value="1" />
                                <Setter Property="Border.Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge1}"
                                                 Value="">
                                        <Setter Property="Border.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                    </Border>

                    <Popup Height="90"
                           VerticalAlignment="Top"
                           AllowsTransparency="True"
                           HorizontalOffset="0"
                           IsOpen="{Binding IsChecked, ElementName=ToggleButtonBadge}"
                           Placement="Right"
                           PlacementTarget="{Binding ElementName=BorderBadge}"
                           SnapsToDevicePixels="True"
                           StaysOpen="True"
                           UseLayoutRounding="True"
                           VerticalOffset="-28">
                        <Grid>
                            <Border Grid.RowSpan="2"
                                    Grid.ColumnSpan="4"
                                    Margin="23,0,0,0"
                                    HorizontalAlignment="Left"
                                    Background="{StaticResource PpcBackground}"
                                    BorderBrush="{DynamicResource PpcBorderBrush}"
                                    BorderThickness="{DynamicResource PpcBorderThickness}"
                                    CornerRadius="10,10,10,10">
                                <Grid Margin="4"
                                      Background="{StaticResource PpcBackground}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               Margin="4"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Bottom"
                                               FontSize="16"
                                               Foreground="{DynamicResource PopupText_Foreground}"
                                               Text="{x:Static res:SensorCard.Weight}" />
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               Margin="4"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top"
                                               FontSize="16"
                                               Foreground="{DynamicResource PopupText_Foreground}"
                                               Text="{x:Static res:SensorCard.Height}" />


                                    <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               Margin="4"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Bottom"
                                               FontSize="16"
                                               Foreground="{DynamicResource PopupContent_Foreground}"
                                               Text="{Binding ElementName=Card, Path=LuWeight, StringFormat={}{0} kg}" />
                                    <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               Margin="4"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Top"
                                               FontSize="16"
                                               Foreground="{DynamicResource PopupContent_Foreground}"
                                               Text="{Binding ElementName=Card, Path=LuHeight, StringFormat={}{0} mm}" />

                                </Grid>
                            </Border>

                            <Path Width="26"
                                  Height="26"
                                  Margin="0,32,0,0"
                                  HorizontalAlignment="Left"
                                  VerticalAlignment="Top"
                                  Data="M18,5L0,11 18,17"
                                  Fill="{StaticResource PpcBackground}"
                                  Stretch="Fill"
                                  Stroke="{StaticResource PpcBorderBrush}"
                                  StrokeThickness="1.5" />
                        </Grid>
                    </Popup>

                    <TextBlock Margin="1"
                               HorizontalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_Small}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardBadgeLabel1}">
                        <TextBlock.Style>
                            <Style>
                                <Setter Property="TextBlock.Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge1}"
                                                 Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.RowSpan="3"
                            Grid.Column="1"
                            Margin="4,0"
                            VerticalAlignment="Bottom"
                            Visibility="Collapsed">

                    <Border Width="35"
                            Height="35"
                            Margin="4"
                            BorderBrush="{DynamicResource PpcBorderBrush}"
                            BorderThickness="{DynamicResource PpcBorderThickness}"
                            CornerRadius="4">
                        <Border.Style>
                            <Style>
