                <TextBlock Grid.Column="2"
                           Margin="0"
                           VerticalAlignment="Center"
                           FontSize="{StaticResource FontSize_Normal}"
                           FontWeight="Normal"
                           Style="{StaticResource VWAPP_Text_Foreground}"
                           Text="{Binding ElementName=Card, Path=CardDescription}" />

                <Grid Grid.Row="1"
                      Grid.RowSpan="2"
                      Grid.ColumnSpan="2">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>


                    <TextBlock Grid.Row="0"
                               Grid.Column="0"
                               Margin="20,0"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_Small}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardBadgeLabel1}">
                        <TextBlock.Style>
                            <Style>
                                <Setter Property="TextBlock.Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge1}"
