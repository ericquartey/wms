                </StackPanel>

                <Grid Grid.Row="0"
                      Grid.RowSpan="3"
                      Grid.Column="1">

                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0"
                            Width="35"
                            Height="35"
                            Margin="2"
                            HorizontalAlignment="Center"
                            BorderBrush="{DynamicResource PpcBorderBrush}"
                            BorderThickness="{DynamicResource PpcBorderThickness}"
                            CornerRadius="4">
                        <TextBlock Margin="4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
