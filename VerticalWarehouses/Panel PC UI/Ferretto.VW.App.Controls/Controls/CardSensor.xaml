                            CornerRadius="4">
                        <TextBlock Margin="4"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_High}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardBadge2}" />
                    </Border>
                </Grid>

                <StackPanel Grid.RowSpan="3"
                            Grid.Column="2"
                            Width="45"
                            Margin="4,0,0,0"
                            VerticalAlignment="Center">
                    <Border Margin="4"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="Background" Value="{DynamicResource FerrettoGreen}" />
