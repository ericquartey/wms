        </ControlTemplate>

        <DataTemplate x:Key="DataTemplateAxis">
            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.ColumnSpan="2"
                           Margin="4,0"
                           FontSize="{StaticResource FontSize_Normal}"
                           FontWeight="Normal"
                           Foreground="{DynamicResource FerrettoLightGray}"
                           Text="{Binding ElementName=Card, Path=CardText}" />

                <StackPanel Grid.Row="1"
                            Grid.RowSpan="2"
                            VerticalAlignment="Center"
                            Orientation="Vertical">
                    <TextBlock HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_High}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardValue}">
                        <TextBlock.Style>
                            <Style>
                                <Style.Triggers>
                                    <Trigger Property="TextBlock.Text" Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock HorizontalAlignment="Center"
                               FontSize="{StaticResource FontSize_Very_Small}"
                               Foreground="{DynamicResource PpcForeground}"
                               Text="{Binding ElementName=Card, Path=CardDescription, StringFormat='Target: {0}'}">
                        <TextBlock.Style>
                            <Style>
                                <Setter Property="TextBlock.Visibility" Value="Visible" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardDescription}"
                                                 Value="{x:Null}">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardDescription}"
                                                 Value="">
                                        <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>

                <StackPanel Grid.RowSpan="3"
                            Grid.Column="1"
                            MinWidth="45"
                            VerticalAlignment="Center">
                    <Border Margin="4"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="Background" Value="{DynamicResource FerrettoGreen}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardSensorLabel1}"
                                                 Value="">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=Sensor1}"
                                                 Value="False">
                                        <Setter Property="Background" Value="{DynamicResource FerrettoMediumGray}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Margin="4,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardSensorLabel1}" />
                    </Border>

                    <Border Margin="4"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="Background" Value="{DynamicResource FerrettoGreen}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardSensorLabel2}"
                                                 Value="">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=Sensor2}"
                                                 Value="False">
                                        <Setter Property="Background" Value="{DynamicResource FerrettoMediumGray}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Margin="4,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardSensorLabel2}" />
                    </Border>

                    <Border Margin="4"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="Background" Value="{DynamicResource FerrettoGreen}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardSensorLabel3}"
                                                 Value="">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=Sensor3}"
                                                 Value="False">
                                        <Setter Property="Background" Value="{DynamicResource FerrettoMediumGray}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <TextBlock Margin="4,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardSensorLabel3}" />
                    </Border>

                    <StackPanel Margin="4,0"
                                VerticalAlignment="Center">
                        <Border x:Name="BorderBadge"
                                Width="35"
                                Height="35"
                                Margin="4"
                                HorizontalAlignment="Center"
                                Background="{DynamicResource PpcBackground}"
                                BorderBrush="{DynamicResource PpcBorderBrush}"
                                BorderThickness="{DynamicResource PpcBorderThickness}"
                                CornerRadius="4">
                            <ToggleButton x:Name="ToggleButtonBadge"
                                          Margin="0"
                                          Background="{DynamicResource PpcBackground}"
                                          BorderThickness="0"
                                          Content="{Binding ElementName=Card, Path=CardBadge1}"
                                          FontSize="{StaticResource FontSize_High}"
                                          Foreground="{DynamicResource PpcForeground}"
                                          Template="{DynamicResource ButtonBaseControlTemplate1}" />
                            <Border.Style>
                                <Style>
                                    <Setter Property="Grid.RowSpan" Value="1" />
                                    <Setter Property="Border.Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge1}"
                                                     Value="">
                                            <Setter Property="Border.Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <Popup Width="315"
                               Height="70"
                               VerticalAlignment="Top"
                               AllowsTransparency="True"
                               HorizontalOffset="0"
                               IsOpen="{Binding IsChecked, ElementName=ToggleButtonBadge}"
                               Placement="Right"
                               PlacementTarget="{Binding ElementName=BorderBadge}"
                               SnapsToDevicePixels="True"
                               StaysOpen="False"
                               VerticalOffset="-18">
                            <Grid Width="300">
                                <Border Grid.RowSpan="2"
                                        Grid.ColumnSpan="4"
                                        Margin="15,0,0,0"
                                        HorizontalAlignment="Left"
                                        Background="{StaticResource FerrettoMediumGray}"
                                        BorderBrush="{DynamicResource PpcBorderBrush}"
                                        CornerRadius="10,10,10,10">
                                    <Grid Margin="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>

                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="0"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoPureWhite}"
                                                   Text="Peso" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="0"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoPureWhite}"
                                                   Text="Altezza" />

                                        <TextBlock Grid.Row="0"
                                                   Grid.Column="1"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoPureWhite}"
                                                   Text="{Binding ElementName=Card, Path=LuWeight, StringFormat={}{0} kg}" />
                                        <TextBlock Grid.Row="1"
                                                   Grid.Column="1"
                                                   Margin="4"
                                                   HorizontalAlignment="Left"
                                                   FontSize="16"
                                                   Foreground="{DynamicResource FerrettoPureWhite}"
                                                   Text="{Binding ElementName=Card, Path=LuHeight, StringFormat={}{0} mm}" />

                                    </Grid>
                                </Border>

                                <Path Width="15"
                                      Height="15"
                                      Margin="0,27,0,0"
                                      HorizontalAlignment="Left"
                                      VerticalAlignment="Top"
                                      Data="M0,10L15,15 15,5"
                                      Fill="{StaticResource FerrettoMediumGray}"
                                      Stretch="Fill"
                                      Stroke="{x:Null}" />
                            </Grid>
                        </Popup>

                        <TextBlock Margin="1"
                                   HorizontalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardBadgeLabel1}">
                            <TextBlock.Style>
                                <Style>
                                    <Setter Property="TextBlock.Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=Card, Path=CardBadge1}"
                                                     Value="">
                                            <Setter Property="TextBlock.Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>

                </StackPanel>
            </Grid>
        </DataTemplate>

