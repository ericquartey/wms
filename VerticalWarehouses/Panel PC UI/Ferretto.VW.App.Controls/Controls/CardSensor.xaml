                        </Border.Style>
                        <TextBlock Margin="4,0"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="{StaticResource FontSize_Very_Small}"
                                   Foreground="{DynamicResource PpcForeground}"
                                   Text="{Binding ElementName=Card, Path=CardSensorLabel2}" />
                    </Border>

                    <Border Margin="4"
                            CornerRadius="4">
                        <Border.Style>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="Visibility" Value="Visible" />
                                <Setter Property="Background" Value="{DynamicResource FerrettoGreen}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardSensorLabel3}"
                                                 Value="">
                                        <Setter Property="Visibility" Value="Collapsed" />
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding ElementName=Card, Path=CardSensorLabel3}"
