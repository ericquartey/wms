<UserControl x:Class="Ferretto.VW.App.Controls.Controls.CardSensorAxisHorizontal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
             xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             d:DesignHeight="150"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <local:CardSensor CardDescription="{Binding HorizontalTargetPosition, StringFormat={}{0:F2}}"
                      CardSensorLabel1="Zero"
                      CardSensorLabel2="Front"
                      CardSensorLabel3="Back"
                      CardText="Orizzontale (mm)"
                      CardValue="{Binding ElevatorHorizontalPosition, StringFormat={}{0:F2}}"
                      Sensor1="{Binding SensorsService.IsZeroChain}"
                      Sensor2="{Binding SensorsService.Sensors.LuPresentInMachineSide}"
                      Sensor3="{Binding SensorsService.Sensors.LuPresentInOperatorSide}"
                      Type="Axis" />

</UserControl>
