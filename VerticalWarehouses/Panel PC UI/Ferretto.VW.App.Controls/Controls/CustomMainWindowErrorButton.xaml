<ctrls:PpcControl x:Class="Ferretto.VW.App.Controls.Controls.CustomMainWindowErrorButton"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls"
                  xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
                  d:DesignHeight="60"
                  d:DesignWidth="100"
                  PresentationType="Error"
                  mc:Ignorable="d">

    <controls:PpcButton x:Name="LayoutRoot"
                        Command="{Binding ExecuteCommand}"
                        Content="{x:Static res:General.Error}"
                        Style="{DynamicResource PpcButtonMachineErrorHeaderStyle}" />
</ctrls:PpcControl>
