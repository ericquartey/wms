<UserControl x:Class="Ferretto.VW.App.Controls.Controls.PpcLabeledText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">
    <StackPanel x:Name="LayoutRoot"
                HorizontalAlignment="Left"
                VerticalAlignment="Top">
        <TextBlock Margin="0,1,5,1"
                   Text="{Binding LabelText}">
            <TextBlock.Style>
                <Style BasedOn="{StaticResource VWAPP_CustomLabel_LabelTextBlockStyle}"
                       TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
        <TextBlock Margin="0,1,5,1"
                   Background="Transparent"
                   Text="{Binding ContentText, TargetNullValue={x:Static res:General.TargetNullValue}}"
                   TextWrapping="Wrap">
            <TextBlock.Style>
                <Style BasedOn="{StaticResource VWAPP_CustomLabel_ContentTextBlockStyle}"
                       TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="Text" Value="{x:Null}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>

        </TextBlock>
    </StackPanel>
</UserControl>
