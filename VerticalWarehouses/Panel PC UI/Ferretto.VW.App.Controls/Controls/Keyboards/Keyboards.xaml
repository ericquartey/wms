<dialog:PpcDialogView x:Class="Ferretto.VW.App.Controls.Controls.Keyboards.Keyboards"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls.Controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:dialog="clr-namespace:Ferretto.VW.App.Controls"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      Width="1024"
                      Height="768"
                      Margin="0"
                      AllowsTransparency="True"
                      IsClosed="{Binding IsClosed}"
                      ResizeMode="CanResizeWithGrip"
                      ShowTitle="False"
                      WindowStartupLocation="CenterOwner"
                      WindowStyle="None"
                      mc:Ignorable="d">
    <dialog:PpcDialogView.Background>
        <SolidColorBrush Opacity="0.5"
                         Color="Snow" />
    </dialog:PpcDialogView.Background>

    <Grid Margin="5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*"
                           MinHeight="200" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Grid.ColumnSpan="4"
              Margin="50,15"
              Background="DimGray"
              Opacity="1">
            <TextBlock x:Name="TitleTB"
                       Margin="50,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Text="{Binding Title}"
                       TextAlignment="Center" />
        </Grid>

        <Border Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="DimGray"
                CornerRadius="4"
                Opacity="1">

            <Grid x:Name="Keyboard_Grid"
                  Margin="4" />
        </Border>


    </Grid>

</dialog:PpcDialogView>
