<dialog:PpcDialogView x:Class="Ferretto.VW.App.Controls.Controls.Keyboards.PpcKeyboard"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls.Controls"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:dialog="clr-namespace:Ferretto.VW.App.Controls"
                      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      Width="1024"
                      Height="768"
                      Margin="0"
                      AllowsTransparency="True"
                      IsClosed="{Binding IsClosed}"
                      ResizeMode="CanResizeWithGrip"
                      ShowTitle="False"
                      WindowStartupLocation="CenterOwner"
                      WindowStyle="None"
                      mc:Ignorable="d">
    <dialog:PpcDialogView.Background>
        <SolidColorBrush Opacity="0.5"
                         Color="Snow" />
    </dialog:PpcDialogView.Background>

    <dialog:PpcDialogView.InputBindings>
        <KeyBinding Key="Esc"
                    Command="{Binding EscCommand}" />
        <KeyBinding Key="Backspace"
                    Command="{Binding BackspaceCommand}" />
        <KeyBinding Key="Decimal"
                    Command="{Binding CommandKey}"
                    CommandParameter="." />
        <KeyBinding Key="OemPlus"
                    Command="{Binding MinPlusCommand}" />
        <KeyBinding Key="OemMinus"
                    Command="{Binding MinPlusCommand}" />
        <KeyBinding Key="Return"
                    Command="{Binding EnterCommand}" />
        <KeyBinding Key="NumPad0"
                    Command="{Binding CommandKey}"
                    CommandParameter="0" />
        <KeyBinding Key="NumPad1"
                    Command="{Binding CommandKey}"
                    CommandParameter="1" />
        <KeyBinding Key="NumPad2"
                    Command="{Binding CommandKey}"
                    CommandParameter="2" />
        <KeyBinding Key="NumPad3"
                    Command="{Binding CommandKey}"
                    CommandParameter="3" />
        <KeyBinding Key="NumPad4"
                    Command="{Binding CommandKey}"
                    CommandParameter="4" />
        <KeyBinding Key="NumPad5"
                    Command="{Binding CommandKey}"
                    CommandParameter="5" />
        <KeyBinding Key="NumPad6"
                    Command="{Binding CommandKey}"
                    CommandParameter="6" />
        <KeyBinding Key="NumPad7"
                    Command="{Binding CommandKey}"
                    CommandParameter="7" />
        <KeyBinding Key="NumPad8"
                    Command="{Binding CommandKey}"
                    CommandParameter="8" />
        <KeyBinding Key="NumPad9"
                    Command="{Binding CommandKey}"
                    CommandParameter="9" />
        <KeyBinding Key="Q"
                    Command="{Binding CommandKey}"
                    CommandParameter="q" />
        <KeyBinding Key="W"
                    Command="{Binding CommandKey}"
                    CommandParameter="w" />
        <KeyBinding Key="E"
                    Command="{Binding CommandKey}"
                    CommandParameter="e" />
        <KeyBinding Key="R"
                    Command="{Binding CommandKey}"
                    CommandParameter="r" />
        <KeyBinding Key="T"
                    Command="{Binding CommandKey}"
                    CommandParameter="t" />
        <KeyBinding Key="Y"
                    Command="{Binding CommandKey}"
                    CommandParameter="y" />
        <KeyBinding Key="U"
                    Command="{Binding CommandKey}"
                    CommandParameter="u" />
        <KeyBinding Key="I"
                    Command="{Binding CommandKey}"
                    CommandParameter="i" />
        <KeyBinding Key="O"
                    Command="{Binding CommandKey}"
                    CommandParameter="o" />
        <KeyBinding Key="P"
                    Command="{Binding CommandKey}"
                    CommandParameter="p" />
        <KeyBinding Key="A"
                    Command="{Binding CommandKey}"
                    CommandParameter="a" />
        <KeyBinding Key="S"
                    Command="{Binding CommandKey}"
                    CommandParameter="s" />
        <KeyBinding Key="D"
                    Command="{Binding CommandKey}"
                    CommandParameter="d" />
        <KeyBinding Key="F"
                    Command="{Binding CommandKey}"
                    CommandParameter="f" />
        <KeyBinding Key="G"
                    Command="{Binding CommandKey}"
                    CommandParameter="g" />
        <KeyBinding Key="H"
                    Command="{Binding CommandKey}"
                    CommandParameter="h" />
        <KeyBinding Key="J"
                    Command="{Binding CommandKey}"
                    CommandParameter="j" />
        <KeyBinding Key="K"
                    Command="{Binding CommandKey}"
                    CommandParameter="k" />
        <KeyBinding Key="L"
                    Command="{Binding CommandKey}"
                    CommandParameter="l" />
        <KeyBinding Key="Z"
                    Command="{Binding CommandKey}"
                    CommandParameter="z" />
        <KeyBinding Key="X"
                    Command="{Binding CommandKey}"
                    CommandParameter="x" />
        <KeyBinding Key="C"
                    Command="{Binding CommandKey}"
                    CommandParameter="c" />
        <KeyBinding Key="V"
                    Command="{Binding CommandKey}"
                    CommandParameter="v" />
        <KeyBinding Key="B"
                    Command="{Binding CommandKey}"
                    CommandParameter="b" />
        <KeyBinding Key="N"
                    Command="{Binding CommandKey}"
                    CommandParameter="n" />
        <KeyBinding Key="M"
                    Command="{Binding CommandKey}"
                    CommandParameter="m" />
    </dialog:PpcDialogView.InputBindings>

    <Grid Margin="5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*"
                           MinHeight="200" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Grid.ColumnSpan="4"
              Margin="50,15"
              Background="DimGray"
              Opacity="1">
            <TextBlock x:Name="TitleTB"
                       Margin="50,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20"
                       Text="{Binding Title}"
                       TextAlignment="Center" />
        </Grid>

        <Border Grid.Row="1"
                Grid.Column="1"
                Width="940"
                Height="500"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Background="DimGray"
                CornerRadius="4"
                Opacity="1">

            <Grid Margin="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid Grid.ColumnSpan="12"
                      Margin="4"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="White">
                    <TextBlock Margin="8"
                               HorizontalAlignment="Stretch"
                               VerticalAlignment="Center"
                               Background="White"
                               FontSize="40"
                               Foreground="Black"
                               Text="{Binding ScreenText}"
                               TextAlignment="Right" />
                </Grid>

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="0"
                                 Command="{Binding EscCommand}"
                                 Content="Esc"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="1"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="1"
                                 Content="1"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="2"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="2"
                                 Content="2"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="3"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="3"
                                 Content="3"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="4"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="4"
                                 Content="4"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="5"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="5"
                                 Content="5"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="6"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="6"
                                 Content="6"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="7"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="7"
                                 Content="7"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="8"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="8"
                                 Content="8"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="9"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="9"
                                 Content="9"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="10"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="0"
                                 Content="0"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="1"
                                 Grid.Column="11"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="?"
                                 Content="?"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="0"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="q"
                                 Content="q"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="1"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="w"
                                 Content="w"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="2"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="e"
                                 Content="e"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="3"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="r"
                                 Content="r"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="4"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="t"
                                 Content="t"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="5"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="y"
                                 Content="y"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="6"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="u"
                                 Content="u"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="7"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="i"
                                 Content="i"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="8"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="o"
                                 Content="o"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="9"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="p"
                                 Content="p"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="2"
                                 Grid.Column="10"
                                 Grid.ColumnSpan="2"
                                 Command="{Binding BackspaceCommand}"
                                 Style="{StaticResource PpcButtonNumKeyStyle}">
                    <iconPacks:PackIconFontAwesome Width="50"
                                                   Height="30"
                                                   Kind="BackspaceSolid" />
                </ctrls:PpcButton>

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="0"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="a"
                                 Content="a"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="1"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="s"
                                 Content="s"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="2"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="d"
                                 Content="d"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="3"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="f"
                                 Content="f"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="4"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="g"
                                 Content="g"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="5"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="h"
                                 Content="h"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="6"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="j"
                                 Content="j"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="7"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="k"
                                 Content="k"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="8"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="l"
                                 Content="l"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="9"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="@"
                                 Content="@"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.Column="10"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="#"
                                 Content="#"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="3"
                                 Grid.RowSpan="2"
                                 Grid.Column="11"
                                 Command="{Binding EnterCommand}"
                                 Style="{StaticResource PpcButtonNumKeyStyle}">
                    <iconPacks:PackIconMaterial Width="50"
                                                Height="30"
                                                Kind="KeyboardReturn" />
                </ctrls:PpcButton>

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="0"
                                 Style="{StaticResource PpcButtonNumKeyStyle}">
                    <iconPacks:PackIconMaterial Width="50"
                                                Height="30"
                                                Kind="AppleKeyboardShift" />
                </ctrls:PpcButton>

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="1"
                                 Command="{Binding CommandKey}"
                                 CommandParameter=""
                                 Content=""
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="2"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="z"
                                 Content="z"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="3"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="x"
                                 Content="x"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="4"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="c"
                                 Content="c"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="5"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="v"
                                 Content="v"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="6"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="b"
                                 Content="b"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="7"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="n"
                                 Content="n"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="8"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="m"
                                 Content="m"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="9"
                                 Command="{Binding CommandKey}"
                                 CommandParameter="."
                                 Content="."
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="4"
                                 Grid.Column="10"
                                 Command="{Binding CommandKey}"
                                 CommandParameter=","
                                 Content=","
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="5"
                                 Grid.Column="0"
                                 Grid.ColumnSpan="2"
                                 Content=""
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="5"
                                 Grid.Column="3"
                                 Grid.ColumnSpan="4"
                                 Command="{Binding CommandKey}"
                                 CommandParameter=" "
                                 Content="[                                ]"
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="5"
                                 Grid.Column="8"
                                 Grid.ColumnSpan="2"
                                 Content=""
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

                <ctrls:PpcButton Grid.Row="5"
                                 Grid.Column="10"
                                 Grid.ColumnSpan="2"
                                 Content=""
                                 Style="{StaticResource PpcButtonNumKeyStyle}" />

            </Grid>
        </Border>


    </Grid>

</dialog:PpcDialogView>
