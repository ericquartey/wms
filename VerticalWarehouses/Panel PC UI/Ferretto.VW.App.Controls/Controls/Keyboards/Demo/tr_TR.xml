<?xml version="1.0" encoding="utf-8" ?>

<KeyboardDefinition
  xmlns="http://www.w3schools.com"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.w3schools.com KeyboardLayout.xsd"

  ActiveLayout="Querty">

  <!-- Default complete qwerty layout without numpad -->
  <KeyboardLayout Id="Querty"
                  Width="790"
                  Height="485"
                  KeyWidth="51"
                  KeyHeight="51"
                  RowPadding="0"
                  KeyPadding="0"
                  RowLeftMargin="6">
   
    <Row>
      <Key Text="ESC" Action="EndEdit" Width="51" StyleSelector="highlight" />
      <Key Value="&quot;" ShiftValue="é" AltValue="&lt;"/>
      <Key Value="1" ShiftValue="!" AltValue="&gt;"/>
      <Key Value="2" ShiftValue="'" AltValue="£"/>
      <Key Value="3" ShiftValue="^" AltValue="#"/>
      <Key Value="4" ShiftValue="+" AltValue="$" />
      <Key Value="5" ShiftValue="%" AltValue="½"/>
      <Key Value="6" ShiftValue="&amp;" AltValue=" "/>
      <Key Value="7" ShiftValue="/" AltValue="{"/>
      <Key Value="8" ShiftValue="(" AltValue="["/>
      <Key Value="9" ShiftValue=")" AltValue="]"/>
      <Key Value="0" ShiftValue="=" AltValue="}"/>
      <Key Value="-" ShiftValue="_" AltValue="|"/>
      <Key Text="Canc" Action="Clear" Width="93" StyleSelector="highlight" />
    </Row>
    
    <Row>
      <Key Value="q" ShiftValue="Q" AltValue=" " ShiftAltValue=" "/>
      <Key Value="w" ShiftValue="W" AltValue=" " ShiftAltValue=" "/>
      <Key Value="e" ShiftValue="E" AltValue="è" ShiftAltValue=" "/>
      <Key Value="r" ShiftValue="R" AltValue="é" ShiftAltValue=" "/>
      <Key Value="t" ShiftValue="T" AltValue=" " ShiftAltValue=" "/>
      <Key Value="y" ShiftValue="Y" AltValue="ù" ShiftAltValue=" "/>
      <Key Value="u" ShiftValue="U" AltValue="ú" ShiftAltValue=" "/>
      <Key Value="ı" ShiftValue="I" AltValue="ì" ShiftAltValue=" "/>
      <Key Value="o" ShiftValue="O" AltValue="í" ShiftAltValue="õ"/>
      <Key Value="p" ShiftValue="P" AltValue="ò" ShiftAltValue=" "/>
      <Key Value="ğ" ShiftValue="Ğ" AltValue="ó" ShiftAltValue=" "/>
      <Key Value="ü" ShiftValue="Ü" AltValue=" " ShiftAltValue=" "/>
      <Key Value="," ShiftValue=";" AltValue=" " ShiftAltValue=" "/>
      <Key Text="" Value="\d8" SendAs="KeyDown" Width="93" StyleSelector="highlight backspace-key" />
    </Row>
    <Row>
      <Key Text="Caps Lock" Modifiers="Shift" Toggle="true" Width="82" StyleSelector="highlight capslock-key" />
      <Key Value="a" ShiftValue="A" AltValue="à" ShiftAltValue="ã"/>
      <Key Value="s" ShiftValue="S" AltValue="á" ShiftAltValue=" "/>
      <Key Value="d" ShiftValue="D" AltValue=" " ShiftAltValue=" "/>
      <Key Value="f" ShiftValue="F" AltValue=" " ShiftAltValue=" "/>
      <Key Value="g" ShiftValue="G" AltValue=" " ShiftAltValue=" "/>
      <Key Value="h" ShiftValue="H" AltValue=" " ShiftAltValue=" "/>
      <Key Value="j" ShiftValue="J" AltValue=" " ShiftAltValue=" "/>
      <Key Value="k" ShiftValue="K" AltValue=" " ShiftAltValue=" "/>
      <Key Value="l" ShiftValue="L" AltValue=" " ShiftAltValue=" "/>
      <Key Value="ş" ShiftValue="Ş" AltValue="ì" ShiftAltValue=" "/>
      <Key Value="i" ShiftValue="İ" AltValue="í" ShiftAltValue=" "/>
      <Key Text="Enter" Action="Accept" Width="113" RowSpan="2" StyleSelector="highlight enter-key" />
    </Row>
    <Row>
      <Key Text="Shift" Modifiers="Shift" Toggle="true" AutoRollback="true" Width="133" StyleSelector="highlight" />
      <Key Value="z" ShiftValue="Z" AltValue=" " ShiftAltValue=" "/>
      <Key Value="x" ShiftValue="X" AltValue=" " ShiftAltValue=" "/>
      <Key Value="c" ShiftValue="C" AltValue=" " ShiftAltValue=" "/>
      <Key Value="v" ShiftValue="V" AltValue=" " ShiftAltValue=" "/>
      <Key Value="b" ShiftValue="B" AltValue=" " ShiftAltValue=" "/>
      <Key Value="n" ShiftValue="N" AltValue=" " ShiftAltValue="ñ"/>
      <Key Value="m" ShiftValue="M" AltValue=" " ShiftAltValue=" "/>
      <Key Value="ö" ShiftValue="Ö" AltValue=" " ShiftAltValue=" "/>
      <Key Value="ç" ShiftValue="Ç" AltValue=" " ShiftAltValue=" "/>
      <Key Value="." ShiftValue=":" AltValue=" " ShiftAltValue=" "/>
    </Row>
    <Row>
      <Key Text="Alt" Modifiers="Alt" Toggle="true" AutoRollback="true" Width="56" StyleSelector="highlight" />
      <Key Text="&amp;123" SetLayout="SymbolsNumpad" ColSpan="2" StyleSelector="highlight2" />
      <Key Text="" Value="\d32" ColSpan="9" />
      <Key LayoutSelector="true" Text="Turco" Width="139" StyleSelector="key-lang" />
    </Row>
  </KeyboardLayout>

  <!-- This layout contains symbols and numbers and is meant to be used when user
  need input a lot of number or symbols in an easy way -->
  <KeyboardLayout Id="SymbolsNumpad"
                  Width="790"
                  Height="485"
                  KeyWidth="51"
                  KeyHeight="51"
                  RowPadding="0"
                  KeyPadding="0"
                  RowLeftMargin="6" >

    <Row>
      <!-- Symbols -->
      <Key Text="ESC" Width="65" Action="EndEdit" StyleSelector="highlight" />
      <Key Value="!" />
      <Key Value="?" />
      <Key Value="@" />
      <Key Value="#" />
      <Key Value="$" />
      <Key Value="%" />
      <Key Value="/" />

      <!-- Numpad -->
      <Key Value="*" Offset="2" Width="60" LeftMargin="-8" />
      <Key Value="-" Width="60" />
      <Key Text="" Value="\d8" SendAs="KeyDown" Width="60" StyleSelector="highlight backspace-key" />
      <Key Text="Canc" Action="Clear" Width="60" StyleSelector="highlight" />
    </Row>
    <Row>
      <!-- Symbols -->
      <Key Value="&amp;" />
      <Key Value="£" />
      <Key Value="~" />
      <Key Value="_" />
      <Key Value="\" />
      <Key Value="{" />
      <Key Value="}" />
      <Key Text="Enter" Value="\d13" Action="Accept" RowSpan="3" Width="65" StyleSelector="highlight enter-key" />

      <!-- Numpad -->
      <Key Value="7" Offset="2" Width="60" LeftMargin="-8" />
      <Key Value="8" Width="60" />
      <Key Value="9" Width="60" />
      <Key Value="+" RowSpan="2" Width="60" />
    </Row>
    <Row>
      <!-- Symbols -->
      <Key Value=":" />
      <Key Value="&quot;" />
      <Key Value="ì" />
      <Key Value="(" />
      <Key Value=")" />
      <Key Value="[" />
      <Key Value="]" />

      <!-- Numpad -->
      <Key Value="4" LeftMargin="6" Offset="3" Width="60" />
      <Key Value="5" Width="60" />
      <Key Value="6" Width="60" />
    </Row>
    <Row>
      <!-- Symbols -->
      <Key Value="." />
      <Key Value="," />
      <Key Value=";" />
      <Key Value="&lt;" />
      <Key Value="&gt;" />
      <Key Value="¥" />
      <Key Value="|" />

      <!-- Numpad -->
      <Key Value="1" LeftMargin="6" Offset="3" Width="60" />
      <Key Value="2" Width="60" />
      <Key Value="3" Width="60" />
      <Key Text="Enter" Action="Accept" RowSpan="2" StyleSelector="highlight enter-key" Width="60" />
    </Row>
    <Row>
      <!-- Symbols -->
      <Key Text="ABC" SetLayout="Querty" ColSpan="2" StyleSelector="highlight2" />
      <Key Text="" Value="\d32" Width="320" />

      <!-- Numpad -->
      <Key Value="0" ColSpan="2" Offset="2" Width="60" LeftMargin="-8" />
      <Key Value="." Width="60" />
    </Row>

  </KeyboardLayout>

  <!-- This layout contains only numbers and is meant to be used when user
  need input a lot of number in an easy way -->
  <KeyboardLayout Id="Numpad"
                  Width="300"
                  Height="440"
                  KeyWidth="55"
                  KeyHeight="55"
                  RowPadding="2"
                  KeyPadding="2"
                  RowLeftMargin="23"
                  ClearOnFirstDigit="true" >

    <Row>
      <Key Value="7" />
      <Key Value="8" />
      <Key Value="9" />
      <Key Text="ESC" Action="EndEdit" StyleSelector="highlight" />
    </Row>
    <Row>
      <Key Value="4" />
      <Key Value="5" />
      <Key Value="6" />
      <Key Text="" Value="\d8" SendAs="KeyDown" StyleSelector="highlight backspace-key" />
    </Row>
    <Row>
      <Key Value="1" />
      <Key Value="2" />
      <Key Value="3" />
      <Key Action="Accept" RowSpan="2" StyleSelector="highlight enter-key" />
    </Row>
    <Row>
      <Key Value="0" />
      <Key Text="," Action="InsertDecimalSeparator" StyleSelector="highligth" />
      <Key Text="+ / -" Action="ToggleSign" StyleSelector="highligth" />
    </Row>
  </KeyboardLayout>

  <!-- This layout contains only numbers and is meant to be used when user
  need input a lot of number in an easy way -->
  <KeyboardLayout Id="IPAddressInputPanel"
                  Width="353"
                  Height="440"
                  KeyWidth="55"
                  KeyHeight="55"
                  RowPadding="2"
                  KeyPadding="2"
                  RowLeftMargin="23" >

    <Row>
      <Key Text="ESC" Action="EndEdit" StyleSelector="highlight" />
      <Key Text="HOST NAME" SetLayout="Querty" ColSpan="3" StyleSelector="highlight" />
      <Key Action="Back" StyleSelector="highlight backspace-key" />
    </Row>
    <Row>
      <Key Value="1" Action="KeyDown" />
      <Key Value="2" Action="KeyDown" />
      <Key Value="3" Action="KeyDown" />
      <Key Value="4" Action="KeyDown" />
      <Key Text="|__|" Action="BackBlock" StyleSelector="highlight" />
    </Row>
    <Row>
      <Key Value="5" Action="KeyDown" />
      <Key Value="6" Action="KeyDown" />
      <Key Value="7" Action="KeyDown" />
      <Key Value="8" Action="KeyDown" />
      <Key Action="Accept" RowSpan="2" StyleSelector="highlight enter-key" />
    </Row>
    <Row>
      <Key Value="9" Action="KeyDown" />
      <Key Value="0" Action="KeyDown" />
      <Key Value="." Action="KeyDown" ColSpan="2" />
    </Row>
  </KeyboardLayout>

  <KeyboardLayout Id="Boolpad"
                  Width="300"
                  Height="325"
                  KeyWidth="55"
                  KeyHeight="55"
                  RowPadding="2"
                  KeyPadding="2"
                  RowLeftMargin="23"
                  TextEnteringMode="Overtype" >
    <Row>
      <Key Text="1" RowSpan="2" Value="1" />
      <Key Text="0" RowSpan="2" Value="0" />
      <Key Text="" Value="\d8" SendAs="KeyDown" StyleSelector="highlight backspace-key" />
      <Key Text="ESC" Action="EndEdit" StyleSelector="highlight" />
    </Row>
    <Row>
      <Key Action="Accept" Offset="2" LeftMargin="4" ColSpan="2" StyleSelector="highlight enter-key" />
    </Row>
  </KeyboardLayout>

</KeyboardDefinition>