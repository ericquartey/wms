<UserControl x:Class="Ferretto.VW.App.Controls.Controls.CardSensorAxisVertical"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             d:DesignHeight="150"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <local:CardSensor CardBadge1="{Binding EmbarkedLoadingUnit.Id}"
                      CardBadgeLabel1="Cassetto"
                      CardDescription="{Binding VerticalDescription}"
                      CardSensorLabel1="Zero"
                      CardSensorLabel2="Extra"
                      CardSensorLabel3="{x:Null}"
                      CardText="Verticale (mm)"
                      CardValue="{Binding ElevatorVerticalPosition, StringFormat={}{0:F2}}"
                      LuHeight="{Binding EmbarkedLoadingUnit.Height, StringFormat={}{0:F2}}"
                      LuWeight="{Binding EmbarkedLoadingUnit.GrossWeight, StringFormat={}{0:F2}}"
                      Sensor1="{Binding SensorsService.IsZeroChain}"
                      Sensor2="{Binding SensorsService.IsExtraChain}"
                      Sensor3="False"
                      Type="Axis" />

</UserControl>
