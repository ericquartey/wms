<UserControl x:Class="Ferretto.VW.App.Controls.Controls.CardSensorDrawer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             d:DesignHeight="150"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <local:CardSensor Grid.Row="1"
                      CardBadge1="{Binding MachineStatus.EmbarkedLoadingUnit.GrossWeight, StringFormat={}{0:F2} kg}"
                      CardBadge2="{Binding MachineStatus.EmbarkedLoadingUnit.Height, StringFormat={}{0:F2} mm}"
                      CardBadgeLabel1="Peso"
                      CardBadgeLabel2="Altezza"
                      CardDescription="Elevatore"
                      CardText="Cassetto"
                      Type="Drawer" />

</UserControl>
