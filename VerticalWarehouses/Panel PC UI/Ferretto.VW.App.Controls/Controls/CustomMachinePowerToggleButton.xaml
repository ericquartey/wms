<ctrls:PpcControl x:Class="Ferretto.VW.App.Controls.Controls.CustomMachinePowerToggleButton"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:controls="clr-namespace:Ferretto.VW.App.Controls.Controls"
                  xmlns:ctrls="clr-namespace:Ferretto.VW.App.Controls"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  d:DesignHeight="60"
                  d:DesignWidth="100"
                  PresentationType="MachineMarch"
                  mc:Ignorable="d">

    <controls:PpcButton x:Name="LayoutRoot"
                        Command="{Binding ExecuteCommand}"
                        IsBusy="{Binding IsBusy}"
                        Style="{DynamicResource PpcButtonMachinePowerHeaderStyle}" />
</ctrls:PpcControl>
