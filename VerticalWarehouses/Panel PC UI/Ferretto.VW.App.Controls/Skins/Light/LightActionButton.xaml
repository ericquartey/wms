<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Ferretto.VW.App.Controls.Skins"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <SolidColorBrush x:Key="PpcButtonBackground"
                     Color="{DynamicResource ColorFerrettoLightGray}" />
    <SolidColorBrush x:Key="PpcButtonBorderBrush"
                     Color="{DynamicResource ColorFerrettoMediumGray}" />
    <SolidColorBrush x:Key="PpcMenuButtonBorderBrush"
                     Color="{DynamicResource ColorFerrettoMediumGray}" />
    <SolidColorBrush x:Key="PpcButtonForeground"
                     Color="{DynamicResource ColorFerrettoBlack}" />
    <SolidColorBrush x:Key="Foreground"
                     Color="{DynamicResource ColorFerrettoBlack}" />

    <Thickness x:Key="PpcButtonBorderThicknessActive">2</Thickness>

    <SolidColorBrush x:Key="PpcButtonBackgroundPressed"
                     Color="{DynamicResource EDBGrayF}" />
    <SolidColorBrush x:Key="PpcButtonBorderBrushPressed"
                     Color="{DynamicResource EDBGrayG}" />
    <SolidColorBrush x:Key="PpcButtonForegroundPressed"
                     Color="{DynamicResource EDBGrayG}" />

    <LinearGradientBrush x:Key="PpcButtonBackgroundDisabled" MappingMode="Absolute" Opacity="10" SpreadMethod="Repeat" StartPoint="0,0" EndPoint="10,10">
        <GradientStop Offset="0" Color="Transparent" />
        <GradientStop Offset="0.5" Color="Transparent" />
        <GradientStop Offset="0.5" Color="{DynamicResource EDBGrayH1}" />
        <GradientStop Offset="1" Color="{DynamicResource EDBGrayH1}" />
    </LinearGradientBrush>

    <SolidColorBrush x:Key="PpcButtonBorderBrushDisabled"
                     Color="{DynamicResource ColorFerrettoMediumGray}" />
    <SolidColorBrush x:Key="PpcButtonForegroundDisabled"
                     Color="{DynamicResource EDBGrayA}" />

    <SolidColorBrush x:Key="MenuButtonBorderBrush"
                     Color="{DynamicResource ColorFerrettoBlack}" />

    <SolidColorBrush x:Key="MenuButtonStroke"
                     Color="{DynamicResource ColorFerrettoBlack}" />

</ResourceDictionary>
