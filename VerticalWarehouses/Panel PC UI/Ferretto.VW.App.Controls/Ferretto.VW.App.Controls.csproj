<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <TargetFrameworks>net471</TargetFrameworks>
    <UseWPF>true</UseWPF>
    <RunAnalyzersDuringBuild>false</RunAnalyzersDuringBuild>
  </PropertyGroup>

  <ItemGroup>
    <Reference Include="System.Web" />
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="DevExpress.Wpf.Core" Version="20.2.6" />
    <PackageReference Include="DevExpress.Wpf.Gauges" Version="20.2.6" />
    <PackageReference Include="DevExpress.Wpf.Navigation" Version="20.2.6" />
    <PackageReference Include="DevExpress.Wpf.PropertyGrid" Version="20.2.6" />
    <PackageReference Include="DevExpress.Wpf.Themes.Office2016Black" Version="20.2.6" />
    <PackageReference Include="DevExpress.Wpf.Themes.Office2016White" Version="20.2.6" />
    <PackageReference Include="MahApps.Metro.IconPacks" Version="4.8.0" />
    <PackageReference Include="Microsoft.CodeAnalysis.FxCopAnalyzers" Version="3.3.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
    <PackageReference Include="NLog" Version="4.7.9" />
    <PackageReference Include="Prism.Core" Version="7.1.0.431" />
    <PackageReference Include="Prism.Wpf" Version="7.1.0.431" />
    <PackageReference Include="System.Windows.Interactivity.WPF" Version="2.0.20525" />
    <!-- this is the current interactivity lib -->
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.31" />
  </ItemGroup>

  <ItemGroup>
    <Content Remove="Assets\*.*" />
    <Content Remove="Fonts\*.*" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\*.*" />
    <Resource Include="Fonts\*.*" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Ferretto.VW.App.Accessories.Interfaces\Ferretto.VW.App.Accessories.Interfaces.csproj" />
    <ProjectReference Include="..\Ferretto.VW.App.Keyboards\Ferretto.VW.App.Keyboards.csproj" />
    <ProjectReference Include="..\Ferretto.VW.App.Resources\Ferretto.VW.App.Resources.csproj" />
    <ProjectReference Include="..\Ferretto.VW.App.Services\Ferretto.VW.App.Services.csproj" />
  </ItemGroup>

</Project>

