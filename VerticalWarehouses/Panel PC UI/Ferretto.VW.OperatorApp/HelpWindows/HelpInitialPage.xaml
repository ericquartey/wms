<UserControl x:Class="Ferretto.VW.OperatorApp.HelpWindows.HelpInitialPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.HelpWindows"            
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:res="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             mc:Ignorable="d">
    
    <Grid Width="1024" Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">

        <Image Width="200" Height="60"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,20,0,0"
                    Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainPageHeadr}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,50,0,0"
                    Width="670" Height="60"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainPageDescription}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,120,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainManu}" />

        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="740,120,0,0"
                     Width="260" Height="70"
                     Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.HelpOpMainUser}" />

        <Button   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="510,260,0,0"
                  Content="{x:Static res:OperatorApp.NavigationMainMenuDrawerOperation}"
                  IsEnabled="True"
                  Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="510,330,0,0"
                  Content="{x:Static res:OperatorApp.NavigationMainMenuItems}"
                  IsEnabled="True"
                  Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="510,400,0,0"
                  Content="{x:Static res:OperatorApp.NavigationMainMenuLists}"
                  IsEnabled="True"
                  Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="510,470,0,0"
                  Content="{x:Static res:OperatorApp.NavigationMainMenuOther}"
                  IsEnabled="{Binding IsLowSpeedMovementsTestButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="510,190,0,0"  
                  Width="60"  Height="60"
                  VerticalContentAlignment="Center"
                  Background="{DynamicResource VWAPP_BACKGROUND}"
                  BorderBrush="{DynamicResource VWAPP_CustomMachineModeToggleButton_BorderBrush_Normal}"
                  BorderThickness="1" >

            <TextBlock FontSize="25"
                            Foreground="{DynamicResource FerrettoPureWhite}"
                            TextAlignment="Center"><Run Text="?"/>
            </TextBlock>
            
        </Button>

        <Controls:CustomControlLoggedUser   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="510,120,0,0"
                                            IsPopupOpen="False"
                                            UserText="Operator"  />

        <Controls:CustomMachineModeToggleButton HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,120,0,0"
                                                MachineModeState="False"
                                                Style="{StaticResource VWAPP_CustomMachineModeToggleButtonStyle}"  />

        <Controls:CustomMachineModeToggleButton HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,190,0,0"
                                                MachineModeState="True"
                                                Style="{StaticResource VWAPP_CustomMachineModeToggleButtonStyle}"  />

        <Controls:CustomMachineOnMarchToggleButton HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,260,0,0"
                                                   MachineOnMarchState="False"
                                                   Style="{StaticResource VWAPP_CustomMachineOnMarchToggleButtonStyle}" />

        <Controls:CustomMachineOnMarchToggleButton HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,330,0,0"
                                                   MachineOnMarchState="True"
                                                   Style="{StaticResource VWAPP_CustomMachineOnMarchToggleButtonStyle}" />

        <Controls:CustomMainWindowServiceButton    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,400,0,0"
                                                   ContentText="Service" />

        <Controls:CustomMainWindowServiceButton    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,470,0,0"
                                                   ContentText="Service" />


        <Controls:CustomMainWindowErrorButton      HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,540,0,0"
                                                   ContentText="Error"
                                                   Visibility="Visible" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,190,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainAuto}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,260,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainOff}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,330,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainOn}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,400,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainServiceAdvice}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,470,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainServiceAllert}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="190,540,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainError}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="740,190,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainHelp}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="740,260,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainDrawerOp}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="740,330,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainItem}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="740,400,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainLists}" />
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="740,470,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainOther}" />

    </Grid>
</UserControl>
