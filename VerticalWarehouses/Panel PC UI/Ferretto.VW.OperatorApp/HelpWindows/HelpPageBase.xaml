<UserControl x:Class="Ferretto.VW.OperatorApp.HelpWindows.HelpPageBase"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.HelpWindows"            
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls" 
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             mc:Ignorable="d">
    <Grid Width="1024"
          Height="688"
          Background="{DynamicResource VWAPP_BACKGROUND}">

        <Image Width="200"
               Height="60"
               HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,20,0,0"
                    Style="{StaticResource VWAPP_ViewHelpDescriptionTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainPageHeadr}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,50,0,0"
                    Width="670" Height="60"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.HelpOpMainPageDescription}" />

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="240,120,0,0"
                    Width="260" Height="70"
                    Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                    Text="{x:Static res:HelpDescriptions.BeltBurnishingUpLimit}" />

        <Controls:CustomLabelTextBlockControl          HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="530,140,0,0"
                                                       Width="180"
                                                       ContentText="125,36"
                                                       LabelText="{x:Static res:InstallationApp.CurrentResolution}"/>

        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="730,140,0,0"
                     Width="260" Height="70"
                     Style="{StaticResource VWAPP_ViewHelpTextBlockStyle}"
                     Text="{x:Static res:HelpDescriptions.ResolutionCalibrationActualResolutionHelp}" />

        <Button   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,120,0,0"
                  Content="{x:Static res:OperatorApp.NavigationMainMenuDrawerOperation}"
                  IsEnabled="True"
                  Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,190,0,0"
                  Content="{x:Static res:OperatorApp.NavigationMainMenuItems}"
                  IsEnabled="True"
                  Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,260,0,0"
                  Content="{x:Static res:OperatorApp.NavigationMainMenuLists}"
                  IsEnabled="True"
                  Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="20,330,0,0"
                  Content="{x:Static res:OperatorApp.NavigationMainMenuOther}"
                  IsEnabled="{Binding IsLowSpeedMovementsTestButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />
        <Controls:CustomInputFieldControlFocusable     HorizontalAlignment="Left" VerticalAlignment="Top"  Margin="530,210,0,0"
            Width="180"
            Highlighted="True" IsEnabled="True"
            InputText="1025,5"
            LabelText="{x:Static res:InstallationApp.DesiredInitialPosition}"
            Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />
        <TextBlock   HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,355,0,0"
            Width="300"
            Style="{StaticResource VWAPP_ViewHelpStepTextBlockStyle}"
            Text="{x:Static res:HelpDescriptions.VerticalResolutionCalibrationStep1}" />

    </Grid>
</UserControl>
