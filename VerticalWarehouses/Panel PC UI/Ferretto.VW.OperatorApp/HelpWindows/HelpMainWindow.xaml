<Window x:Class="Ferretto.VW.OperatorApp.HelpMainWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.HelpWindows"
             xmlns:viewmodels="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels"
             xmlns:viewmodelsdraweroperation="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.DrawerOperations"
             xmlns:viewmodelsdraweroperationdetails="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.DrawerOperations.Details"
             xmlns:viewmodelswaitinglists="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.WaitingLists"
             xmlns:viewmodelswaitinglistslistdetail="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.WaitingLists.ListDetail"
             Width="1024"
             Height="768"
             mc:Ignorable="d"
             ResizeMode="NoResize"
             WindowStartupLocation="CenterScreen"
             WindowStyle="None">
    <Window.Resources>

        <DataTemplate DataType="{x:Type viewmodels:IdleViewModel}">
            <local:HelpInitialPage></local:HelpInitialPage>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperation:DrawerWaitViewModel}">
            <local:HelpDrawerWait></local:HelpDrawerWait>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperation:DrawerActivityPickingViewModel}">
            <local:HelpDrawerActivityPicking></local:HelpDrawerActivityPicking>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperationdetails:DrawerActivityPickingDetailViewModel}">
            <local:HelpDrawerActivityPickingDetail></local:HelpDrawerActivityPickingDetail>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperationdetails:DrawerActivityRefillingDetailViewModel}">
            <local:HelpDrawerActivityRefillingDetail></local:HelpDrawerActivityRefillingDetail>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelsdraweroperation:DrawerActivityRefillingViewModel}">
            <local:HelpDrawerActivityRefilling></local:HelpDrawerActivityRefilling>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelswaitinglistslistdetail:DetailListInWaitViewModel}">
            <local:HelpDetailListInWait></local:HelpDetailListInWait>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewmodelswaitinglists:ListsInWaitViewModel}">
            <local:HelpListsInWait></local:HelpListsInWait>
        </DataTemplate>

    </Window.Resources>

    <Grid Width="1024"
          Height="768"
          Background="{DynamicResource VWAPP_BACKGROUND}">
        <Grid.RowDefinitions>
            <RowDefinition Height="688"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <ContentPresenter Name="HelpContentRegion" Grid.Row="0"
                          Height="688"
                          Width="1024"
                          Content="{Binding ContentRegionCurrentViewModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </ContentPresenter>
        <Button Grid.Row="1"
                Content="Back"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Click="Button_Click"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}">

        </Button>
    </Grid>

</Window>
