<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.SearchItem.ItemDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.SearchItem"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="608">

        <TextBlock Margin="200,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.ItemDetailHeader}" />
        <Image Width="170"
               Height="170"
               Margin="710,240,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/Ingranaggio.jpg"
               Stretch="Uniform" />
        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="201,130,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding ArticleCode, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static Resources:OperatorApp.DrawerActivityItem}" />
        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="201,210,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="FIFO"
                                              LabelText="{x:Static Resources:OperatorApp.ItemDetailManagement}" />
        <Controls:CustomLabelTextBlockControl MaxWidth="500"
                                              Margin="460,130,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding ArticleDescription, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static Resources:OperatorApp.DrawerActivityItemDescr}" />
        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="201,290,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="2019-02-12"
                                              LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailProductionDate}" />
        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="201,370,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="Collaudato"
                                              LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailMaterialStatus}" />
        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="460,290,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="045-25"
                                              LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailLotto}" />
        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="460,370,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="Boxed"
                                              LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailPackagingType}" />
        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="460,210,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="60"
                                              LabelText="{x:Static Resources:OperatorApp.ItemDetailPeriod}" />
        <Controls:CustomLabelTextBlockControl MaxWidth="500"
                                              Margin="201,450,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="Note varie per l'utente finale..."
                                              LabelText="{x:Static Resources:OperatorApp.ItemDetailNote}" />

    </Grid>
</UserControl>
