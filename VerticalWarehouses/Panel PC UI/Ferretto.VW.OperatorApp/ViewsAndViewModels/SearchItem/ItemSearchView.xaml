<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.SearchItem.ItemSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.SearchItem"
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid  Width="1024" Height="608">

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,20,0,0"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static Resources:OperatorApp.ItemSearchHeader}" />

        <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,70,20,0"
                  Content="{x:Static Resources:OperatorApp.ItemSearchTop}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,140,20,0"
                  Content="{x:Static Resources:OperatorApp.ItemSearchUp}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,450,0,0" MaxWidth="380"
                                               ContentText="1254"
                                               LabelText="{x:Static Resources:OperatorApp.ItemSearchKeySearch}"/>

        <DataGrid    HorizontalAlignment="Left" Height="350" Margin="170,70,0,0" VerticalAlignment="Top" Width="600" FontFamily="Helvetica Neue" FontSize="16"
                     Background="{DynamicResource FerrettoBlack}" BorderBrush="{DynamicResource FerrettoLightGray}"
                     HorizontalGridLinesBrush="{DynamicResource FerrettoLightGray}" VerticalGridLinesBrush="{DynamicResource FerrettoLightGray}"
                     RowBackground="{DynamicResource FerrettoLightGray}" AlternatingRowBackground="{DynamicResource FerrettoMediumGray}">

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Articolo" CanUserResize="False" MaxWidth="150" MinWidth="150"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Descrizione" MaxWidth="300" MinWidth="300"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Macchine"/>
            </DataGrid.Columns>

        </DataGrid>

        <Controls:CustomInputFieldControlFocusable  Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
                                                    HorizontalAlignment="Left" VerticalAlignment="Top" Margin="610,530,0,0" MaxWidth="200"
                                                    LabelText="{x:Static Resources:OperatorApp.ItemSearchQtyRequest}" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="610,450,0,0" MaxWidth="200"
                                               ContentText="14"
                                               LabelText="{x:Static Resources:OperatorApp.ItemSearchQtyAvailable}"/>

        <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,210,20,0"
                  Content="{x:Static Resources:OperatorApp.ItemSearchDown}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,280,20,0"
                  Content="{x:Static Resources:OperatorApp.ItemSearchBottom}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="170,0,0,20"
                  Content="{x:Static Resources:OperatorApp.ItemSearchSearch}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
                  Content="{x:Static Resources:OperatorApp.ItemSearchCall}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,370,20,0"
                  Content="{x:Static Resources:OperatorApp.ItemSearchDetail}"
                  Command="{Binding ItemDetailButtonCommand}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

    </Grid>
</UserControl>
