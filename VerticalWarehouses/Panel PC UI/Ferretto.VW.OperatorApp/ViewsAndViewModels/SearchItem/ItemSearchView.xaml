<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.SearchItem.ItemSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.SearchItem"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="608">

        <TextBlock Margin="170,20,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.ItemSearchHeader}" />

        <Button Margin="0,70,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="{x:Static Resources:OperatorApp.CommonUp}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <ContentControl Width="600"
                        Height="350"
                        Margin="170,70,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="{Binding DataGridViewModel}"
                        FontFamily="Helvetica Neue"
                        FontSize="16" />

        <Controls:CustomInputFieldControlFocusable MaxWidth="200"
                                                   Margin="610,520,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   LabelText="{x:Static Resources:OperatorApp.ItemSearchQtyRequest}"
                                                   Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="610,450,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding TestProperty, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static Resources:OperatorApp.ItemSearchQtyAvailable}" />

        <Button Margin="0,135,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="{x:Static Resources:OperatorApp.CommonDown}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="0,520,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="{x:Static Resources:OperatorApp.ItemSearchCall}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="0,250,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding ItemDetailButtonCommand}"
                Content="{x:Static Resources:OperatorApp.ItemSearchDetail}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        <Button Margin="170,520,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="{x:Static Resources:OperatorApp.ItemSearchChangeSearch}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        <Controls:CustomInputFieldControlFocusable MaxWidth="200"
                                                   Margin="170,450,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   InputText="{Binding SearchArticleCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   LabelText="{x:Static Resources:OperatorApp.ItemSearchKeySearch}"
                                                   Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

    </Grid>
</UserControl>
