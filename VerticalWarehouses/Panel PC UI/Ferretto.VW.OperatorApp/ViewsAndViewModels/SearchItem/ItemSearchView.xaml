<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.SearchItem.ItemSearchView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.SearchItem"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="608">

        <TextBlock Margin="170,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.ItemSearchHeader}" />

        <ContentControl Width="640" Height="340" Margin="170,90,0,0"
                        HorizontalAlignment="Left" VerticalAlignment="Top"
                        Content="{Binding DataGridViewModel}" />

        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,130,20,0"
                Command="{Binding UpDataGridButtonCommand}"
                Content="{x:Static Resources:OperatorApp.CommonUp}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,195,20,0"             
                Command="{Binding DownDataGridButtonCommand}"
                Content="{x:Static Resources:OperatorApp.CommonDown}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomInputFieldControlFocusable MaxWidth="200"
                                                   Margin="610,500,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   InputText="{Binding RequestedQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   LabelText="{x:Static Resources:OperatorApp.ItemSearchQtyRequest}"
                                                   Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="610,450,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding AvailableQuantity, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                              LabelText="{x:Static Resources:OperatorApp.ItemSearchQtyAvailable}" />

        <Button Margin="0,0,20,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding ItemCallCommand}"
                Content="{x:Static Resources:OperatorApp.ItemSearchCall}"
                IsEnabled="{Binding IsItemCallButtonActive, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,370,20,0"             
                Command="{Binding ItemDetailButtonCommand}"
                Content="{x:Static Resources:OperatorApp.CommonButtonDetail}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Controls:CustomInputFieldControlFocusable HorizontalAlignment="Left" VerticalAlignment="Top" Margin="170,450,0,0" MaxWidth="200"
                                                   InputText="{Binding SearchArticleCode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                   LabelText="{x:Static Resources:OperatorApp.ItemSearchKeySearch}"
                                                   Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />
        
        <Controls:BusyIndicator Width="40" Height="40"
                                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,450,0,0"
                                IsWorking="{Binding IsSearching, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />

    </Grid>
</UserControl>
