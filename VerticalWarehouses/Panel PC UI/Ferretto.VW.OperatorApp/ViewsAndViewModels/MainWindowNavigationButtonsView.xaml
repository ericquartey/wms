<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.MainWindowNavigationButtonsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels"
             xmlns:res="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             mc:Ignorable="d">
    
    <Grid Name="NavigationButtonViewRoot" Margin="30,30,0,0"
          Height="608">

            <StackPanel>
                
                <Button Margin="0,50,0,0"
                        Command="{Binding DataContext.DrawerActivityButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:OperatorApp.NavigationMainMenuDrawerOperation}"
                        IsEnabled="{Binding IsInstallationStateButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

                <Button Command="{Binding DataContext.ItemSearchButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:OperatorApp.NavigationMainMenuItems}"
                        IsEnabled="{Binding IsSensorsStateButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

                <Button Command="{Binding DataContext.ListsInWaitButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:OperatorApp.NavigationMainMenuLists}"
                        IsEnabled="{Binding IsLowSpeedMovementsTestButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

                <Button Margin="0,250,0,0"
                        Command="{Binding DataContext.LowSpeedMovementsTestButtonCommand, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Window}}}"
                        Content="{x:Static res:OperatorApp.NavigationMainMenuOther}"
                        IsEnabled="{Binding IsLowSpeedMovementsTestButtonActive, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Template="{StaticResource VWAPP_NavigationButton_ControlTemplate}" />

        </StackPanel>
    </Grid>
</UserControl>
