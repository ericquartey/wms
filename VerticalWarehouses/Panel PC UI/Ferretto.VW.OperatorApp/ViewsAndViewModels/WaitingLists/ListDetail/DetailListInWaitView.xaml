<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.WaitingLists.ListDetail.DetailListInWaitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.WaitingLists"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid Width="1024" Height="608">

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,40,0,0"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static Resources:OperatorApp.DetailListInWaitHeader}" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,530,0,0" MaxWidth="500"
                                               ContentText="E' possibile eseguire solo le righe evidenziate."
                                               LabelText="{x:Static Resources:OperatorApp.CommonNote}"/>

        <ContentControl HorizontalAlignment="Left"
                        Width="680"
                        Height="340"
                        Margin="140,150,0,0"
                        VerticalAlignment="Top"
                        Content="{Binding DataGridViewModel}">
        </ContentControl>
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,90,0,0" MaxWidth="500"
            ContentText="1256"
            LabelText="{x:Static Resources:OperatorApp.CommonListCode}"/>
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="430,90,0,0" MaxWidth="500"
            ContentText="Lista in attesa di essere eseguita"
            LabelText="{x:Static Resources:OperatorApp.CommonListDescription}"/>
        <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,190,20,0"
                  Content="{x:Static Resources:OperatorApp.CommonUp}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,255,20,0"
                  Content="{x:Static Resources:OperatorApp.CommonDown}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
                  Content="{x:Static Resources:OperatorApp.ListsInWaitExecute}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,90,0,0" MaxWidth="500"
                                               ContentText="Prelievo"
                                               LabelText="{x:Static Resources:OperatorApp.CommonListType}"/>

    </Grid>
</UserControl>
