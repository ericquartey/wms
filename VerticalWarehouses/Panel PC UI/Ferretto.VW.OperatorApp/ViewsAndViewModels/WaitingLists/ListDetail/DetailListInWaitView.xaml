<UserControl x:Class="Ferretto.VW.App.Operator.ViewsAndViewModels.WaitingLists.ListDetail.DetailListInWaitView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:conv="clr-namespace:Ferretto.VW.App.Controls.Converters;assembly=Ferretto.VW.App.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <UserControl.Resources>
        <conv:ItemListTypeEnumConverter x:Key="ILTEC" />
    </UserControl.Resources>


    <Grid Width="1024"
          Height="608">

        <TextBlock Margin="140,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.DetailListInWaitHeader}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="500"
                                              Margin="140,530,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="E' possibile eseguire solo le righe evidenziate."
                                              LabelText="{x:Static Resources:OperatorApp.CommonNote}" />

        <Controls:CustomControlListDetailDataGrid Width="680"
                                                  Height="340"
                                                  Margin="140,150,0,0"
                                                  HorizontalAlignment="Left"
                                                  VerticalAlignment="Top" />

        <Controls:CustomLabelTextBlockControl MaxWidth="500"
                                              Margin="280,90,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding List.Code}"
                                              LabelText="{x:Static Resources:OperatorApp.CommonListCode}" />
        <Controls:CustomLabelTextBlockControl MaxWidth="500"
                                              Margin="430,90,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding List.Description}"
                                              LabelText="{x:Static Resources:OperatorApp.CommonListDescription}" />
        <Button Margin="0,190,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding UpDataGridButtonCommand}"
                Content="{x:Static Resources:OperatorApp.CommonUp}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="0,255,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding DownDataGridButtonCommand}"
                Content="{x:Static Resources:OperatorApp.CommonDown}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="0,0,20,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Command="{Binding ListExecuteCommand}"
                Content="{x:Static Resources:OperatorApp.ListsInWaitExecute}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="500"
                                              Margin="140,90,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="{Binding List.ItemListType, Converter={StaticResource ILTEC}}"
                                              LabelText="{x:Static Resources:OperatorApp.CommonListType}" />

    </Grid>
</UserControl>
