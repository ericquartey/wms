<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.DrawerActivityDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid Width="1024" Height="608">

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,20,0,0"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static Resources:OperatorApp.DrawerActivityDetailHeader}" />
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,100,0,0" MaxWidth="200"
                                               ContentText="147"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityList}"/>
        
        <Controls:CustomInputFieldControlFocusable  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,490,0,0" MaxWidth="200"
                                                    Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
                                                    LabelText="{x:Static Resources:OperatorApp.DrawerActivityQtyReq}" />
        
        <Image HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="740,0,0,70" Width="170" Height="170"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/Ingranaggio.jpg"
               Stretch="Uniform" />
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,270,0,0" MaxWidth="200"
                                               ContentText="1258445984"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityItem}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,490,0,0" MaxWidth="200"
                                               ContentText="F-3"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityPosition}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,100,0,0" MaxWidth="500"
                                               ContentText="Gruppo riduzione secondaria"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDescrList}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,270,0,0" MaxWidth="500"
                                               ContentText="Ingranaggio a denti dritti Z-45 e con innesti frontali"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityItemDescr}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,170,0,0" MaxWidth="200"
                                               ContentText="4"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityRowList}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="201,340,0,0" MaxWidth="200"
                                               ContentText="2019-02-12"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailProductionDate}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,410,0,0" MaxWidth="200"
                                               ContentText="Collaudato"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailMaterialStatus}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,340,0,0" MaxWidth="200"
                                               ContentText="045-25"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailLotto}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,410,0,0" MaxWidth="200"
                                               ContentText="Boxed"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailPackagingType}"/>

    </Grid>
</UserControl>
