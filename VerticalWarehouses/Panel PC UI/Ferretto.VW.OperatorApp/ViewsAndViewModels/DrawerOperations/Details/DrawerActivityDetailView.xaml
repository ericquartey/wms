<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.DrawerOperations.Details.DrawerActivityDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.DrawerOperations.Details"
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid Width="1024" Height="608">

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,20,0,0"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static Resources:OperatorApp.DrawerActivityDetailHeader}" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,90,0,0" MaxWidth="200"
                                               ContentText="147"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityList}"/>

        <Image HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="724,0,0,50" Width="180" Height="180"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/Ingranaggio.jpg"
               Stretch="Uniform" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,290,0,0" MaxWidth="200"
                                               ContentText="1258445984"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityItem}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,510,0,0" MaxWidth="200"
                                               ContentText="F-3"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityPosition}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,150,0,0" MaxWidth="500"
                                               ContentText="Gruppo riduzione secondaria"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDescrList}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,290,0,0" MaxWidth="500"
                                               ContentText="Ingranaggio a denti dritti Z-45 e con innesti frontali"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityItemDescr}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,210,0,0" MaxWidth="200"
                                               ContentText="4"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityRowList}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="181,360,0,0" MaxWidth="200"
                                               ContentText="2019-02-12"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailProductionDate}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="180,430,0,0" MaxWidth="200"
                                               ContentText="Collaudato"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailMaterialStatus}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,360,0,0" MaxWidth="200"
                                               ContentText="045-25"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailLotto}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,430,0,0" MaxWidth="200"
                                               ContentText="Boxed"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailPackagingType}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,90,0,0" MaxWidth="200"
                                               ContentText="1012"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailPackingListCode}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,150,0,0" MaxWidth="500"
                                               ContentText="Packing list selezionata"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityDetailPackingListDescription}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="420,510,0,0" MaxWidth="200"
                                               ContentText="8"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityQtyReq}"/>

    </Grid>
</UserControl>
