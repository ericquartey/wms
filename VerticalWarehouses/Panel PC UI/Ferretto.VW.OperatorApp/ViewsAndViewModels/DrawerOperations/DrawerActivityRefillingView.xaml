<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.DrawerOperations.DrawerActivityRefillingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp.ViewsAndViewModels.DrawerOperations"
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid Width="1024" Height="608">
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,20,0,0"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static Resources:OperatorApp.DrawerActivityRefillingHeader}" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,280,0,0" MaxWidth="200"
                                               ContentText="V-02541"
                                               LabelText="{x:Static Resources:OperatorApp.CommonListCode}"/>

        <Button   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
                  Content="{x:Static Resources:OperatorApp.CommonButtonConfirm}"
                  Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Image HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,60,0,0" Width="900" Height="200"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/Mappa_Cassetto_2.png"
               Stretch="Uniform" />

        <Image HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="60,0,0,20" Width="180" Height="180"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/Ingranaggio.jpg"
               Stretch="Uniform" />
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="60,330,0,0" MaxWidth="200"
                                               ContentText="108510025"
                                               LabelText="{x:Static Resources:OperatorApp.CommonItemCode}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,380,0,0" MaxWidth="150"
                                               ContentText="H-5"
                                               LabelText="{x:Static Resources:OperatorApp.CommonCompartmentPosition}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,280,0,0" MaxWidth="500"
                                               ContentText="Scatola cambio per sollevamento."
                                               LabelText="{x:Static Resources:OperatorApp.CommonListDescription}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,330,0,0" MaxWidth="500"
                                               ContentText="Ingranaggio Z=45 e con innesti frontali."
                                               LabelText="{x:Static Resources:OperatorApp.CommonItemDescription}"/>
        
        <Controls:CustomInputFieldControlFocusable  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="844,410,0,0" MaxWidth="160"
                                                    Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}"
                                                    LabelText="{x:Static Resources:OperatorApp.DrawerActivityRefillingQtyRefilled}"  />
        
        <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="280,0,0,20"
                 Content="{x:Static Resources:OperatorApp.CommonButtonDetail}"
                 Command="{Binding DrawerActivityRefillingDetailsButtonCommand}"
                 Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Button  HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="654,0,0,20"
                 Content="{x:Static Resources:OperatorApp.DrawerActivityRefillingCapacityMaxAdjust}"
                 Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="844,330,0,0" MaxWidth="200"
                                               ContentText="12"
                                               LabelText="{x:Static Resources:OperatorApp.DrawerActivityRefillingQtyToRefill}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="280,430,0,0" MaxWidth="500"
                                               ContentText="Note inserite ad uso operatore in baia..."
                                               LabelText="{x:Static Resources:OperatorApp.CommonNote}"/>

    </Grid>
</UserControl>
