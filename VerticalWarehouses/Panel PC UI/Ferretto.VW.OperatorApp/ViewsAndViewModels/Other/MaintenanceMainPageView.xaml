<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.MaintenanceMainPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid  Width="1024" Height="608">
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,40,0,0"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static Resources:OperatorApp.MaintenanceMainPageHeader}" />

        <ContentControl HorizontalAlignment="Left"
                        Height="300"
                        Margin="160,210,0,0"
                        VerticalAlignment="Top"
                        Width="600"
                        Content="{Binding DataGridViewModel}">
        </ContentControl>

        <Button  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,200,20,0"
                 Content="{x:Static Resources:OperatorApp.CommonUp}"
                 Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,265,20,0"
                 Content="{x:Static Resources:OperatorApp.CommonDown}"
                 Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button  HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
                 Content="{x:Static Resources:OperatorApp.CommonButtonDetail}"
                 Command="{Binding MaintenanceDetailButtonCommand}"
                 Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,90,0,0" Width="255"
                                               ContentText="VRT EF 84 L 990-BIS H 6345"
                                               LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageModel}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="110,140,0,0" MaxWidth="200"
                                               ContentText="VW_190012"
                                               LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageSerial}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="380,90,0,0" MaxWidth="200"
                                               ContentText="15-04-2017"
                                               LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageInstallationDate}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="380,140,0,0" MaxWidth="200"
                                               ContentText="20-04-2018"
                                               LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageLastMaintenanceDate}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="580,90,0,0" MaxWidth="200"
                                               ContentText="20-04-2019"
                                               LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageNextMaintenanceDate}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="620,140,0,0" MaxWidth="200"
                                               ContentText="Manutenzione richiesta"
                                               LabelText="{x:Static Resources:OperatorApp.MaintenanceMainPageStateMachine}"/>

        <Rectangle HorizontalAlignment="Left" VerticalAlignment="Top" Margin="580,146,0,0"
                   Width="25" Height="25"
                   Fill="Red"  />

    </Grid>
</UserControl>
