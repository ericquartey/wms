<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.MaintenanceDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid Width="1024" Height="608">
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,40,0,0"
            Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
            Text="{x:Static Resources:OperatorApp.MaintenanceDetailHeader}" />

        <DataGrid    HorizontalAlignment="Left" Height="280" Margin="160,300,0,0" VerticalAlignment="Top" Width="600" FontFamily="Helvetica Neue" FontSize="16"
            Background="{DynamicResource FerrettoBlack}" BorderBrush="{DynamicResource FerrettoLightGray}"
            HorizontalGridLinesBrush="{DynamicResource FerrettoLightGray}" VerticalGridLinesBrush="{DynamicResource FerrettoLightGray}"
            RowBackground="{DynamicResource FerrettoLightGray}" AlternatingRowBackground="{DynamicResource FerrettoMediumGray}">

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Elemento" Width="120" />
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Descrizione" Width="350"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Quantita'" Width="100"/>
            </DataGrid.Columns>

        </DataGrid>

        <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,300,20,0"
            Content="{x:Static Resources:OperatorApp.CommonUp}"
            Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,365,20,0"
            Content="{x:Static Resources:OperatorApp.CommonDown}"
            Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
            Content="{x:Static Resources:OperatorApp.MaintenanceDetailContactRequired}"
            Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="480,90,0,0" MaxWidth="255"
            ContentText="Manutenzione richiesta"
            LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailElementStatus}"/>
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="480,140,0,0" MaxWidth="200"
            ContentText="3"
            LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailStopRequired}"/>
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,90,0,0" MaxWidth="200"
            ContentText="30.235"
            LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailTotalCycles}"/>
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,140,0,0" MaxWidth="200"
            ContentText="15.000"
            LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailCyclesBetweenTwoMaintenance}"/>
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,190,0,0" MaxWidth="200"
            ContentText="15.235"
            LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailCyclesFromLastMaintenance}"/>
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="480,190,0,0" MaxWidth="200"
            ContentText="NO"
            LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailPlatformRequired}"/>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Margin="160,265,0,0"
            Width="550" Height="25"
            Style="{StaticResource VWAPP_GeneralTextBlockStyle}"
            Text="{x:Static Resources:OperatorApp.MaintenanceDetailComponents}" />


    </Grid>
</UserControl>
