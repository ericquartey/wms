<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.MaintenanceDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="608">

        <TextBlock Margin="110,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.MaintenanceDetailHeader}" />

        <ContentControl HorizontalAlignment="Left"
                        Height="310"
                        Margin="110,200,0,0"
                        VerticalAlignment="Top"
                        Width="700"
                        Content="{Binding DataGridViewModel}" />

        <Button Margin="0,200,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="{x:Static Resources:OperatorApp.CommonUp}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="0,265,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="{x:Static Resources:OperatorApp.CommonDown}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="0,0,20,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Content="{x:Static Resources:OperatorApp.MaintenanceDetailContactRequired}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="255"
                                              Margin="380,140,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="Manutenzione richiesta"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailElementStatus}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="600,90,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="3"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailStopRequired}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="110,90,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="30.235"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailTotalCycles}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="110,140,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="15.000"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailCyclesBetweenTwoMaintenance}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="340,90,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="15.235"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailCyclesFromLastMaintenance}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="200"
                                              Margin="600,140,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="NO"
                                              LabelText="{x:Static Resources:OperatorApp.MaintenanceDetailPlatformRequired}" />

        <TextBlock Margin="366,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.MaintenanceDetailHeaderKit}" />

        <Rectangle Width="25"
                   Height="25"
                   Margin="340,146,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Fill="Red" />

    </Grid>
</UserControl>
