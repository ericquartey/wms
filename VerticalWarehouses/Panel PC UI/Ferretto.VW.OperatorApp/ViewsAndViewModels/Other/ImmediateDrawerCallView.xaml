<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.ImmediateDrawerCallView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="608">

        <TextBlock Margin="140,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.ImmediateDrawerCallHeader}" />

        <ContentControl Width="600"
                        Height="350"
                        Margin="170,90,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="{Binding DataGridViewModel}" />

        <Button Margin="0,90,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="{x:Static Resources:OperatorApp.CommonUp}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="0,155,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Content="{x:Static Resources:OperatorApp.CommonDown}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Button Margin="0,0,20,20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Content="{x:Static Resources:OperatorApp.ImmediateDrawerCallDrawerCall}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="350"
                                              Margin="380,520,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="Cassetto bloccato."
                                              LabelText="{x:Static Resources:OperatorApp.CommonNote}" />

        <Controls:CustomInputFieldControlFocusable MaxWidth="300"
                                                   Margin="140,520,0,0"
                                                   HorizontalAlignment="Left"
                                                   VerticalAlignment="Top"
                                                   LabelText="{x:Static Resources:OperatorApp.ImmediateDrawerCallRequiredDrawer}"
                                                   Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />

    </Grid>
</UserControl>
