<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.Statistics.DrawerSpaceSaturationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >


    <Grid   Width="1024" Height="608">
        
            <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,40,0,0" MaxWidth="500"
                        Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                        Text="{x:Static Resources:OperatorApp.DrawerSpaceSaturazionHeader}" />

            <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="520,90,0,0" MaxWidth="300"
                                                   ContentText="3.050 x 840"
                                                   LabelText="{x:Static Resources:OperatorApp.DrawerSpaceSaturazionDrawerMeasure}"/>

            <DataGrid    HorizontalAlignment="Left" Height="340" Margin="140,150,0,0" VerticalAlignment="Top" Width="650" FontFamily="Helvetica Neue" FontSize="16"
                         Background="{DynamicResource FerrettoBlack}" BorderBrush="{DynamicResource FerrettoLightGray}"
                         HorizontalGridLinesBrush="{DynamicResource FerrettoLightGray}" VerticalGridLinesBrush="{DynamicResource FerrettoLightGray}"
                         RowBackground="{DynamicResource FerrettoLightGray}" AlternatingRowBackground="{DynamicResource FerrettoMediumGray}" >

                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Cassetto" CanUserResize="False" MaxWidth="80" MinWidth="80"/>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Missioni" CanUserResize="False" MaxWidth="90" MinWidth="90"/>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Scomparti" CanUserResize="False" MaxWidth="110" MinWidth="110"/>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Riempimento" MaxWidth="120" MinWidth="120"/>
                    <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="% riempimento" MaxWidth="150" MinWidth="150"/>
                </DataGrid.Columns>

            </DataGrid>
        
            <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,90,0,0" MaxWidth="300"
                                                   ContentText="55"
                                                   LabelText="{x:Static Resources:OperatorApp.DrawerSpaceSaturazionTotalDrawers}"/>
        
            <Controls:CustomProgressBarControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="590,510,0,0" MaxWidth="300"
                                                ProgressionValue="65"
                                                LabelText="{x:Static Resources:OperatorApp.DrawerSpaceSaturazionFillingMachine}"/>
        
            <Button  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,150,20,0"
                     Content="{x:Static Resources:OperatorApp.CommonUp}"
                     Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
            <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,215,20,0"
                      Content="{x:Static Resources:OperatorApp.CommonDown}"
                      Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
            <Button   HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
                      Command="{Binding DrawerWeightSaturationButtonCommand}"
                      Content="{x:Static Resources:OperatorApp.DrawerSpaceSaturazionWeightAnalisys}"
                      Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />


    </Grid>
</UserControl>
