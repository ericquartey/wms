<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.Statistics.DrawerWeightSaturationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid Width="1024" Height="608">

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,40,0,0" MaxWidth="500"
            Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
            Text="{x:Static Resources:OperatorApp.DrawerWeightSaturationHeader}" />
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="560,90,0,0" MaxWidth="300"
            ContentText="38.000"
            LabelText="{x:Static Resources:OperatorApp.DrawerWeightSaturationWeightGrossLoaded}"/>
        <DataGrid    HorizontalAlignment="Left" Height="320" Margin="140,200,0,0" VerticalAlignment="Top" Width="650" FontFamily="Helvetica Neue" FontSize="16"
            Background="{DynamicResource FerrettoBlack}" BorderBrush="{DynamicResource FerrettoLightGray}"
            HorizontalGridLinesBrush="{DynamicResource FerrettoLightGray}" VerticalGridLinesBrush="{DynamicResource FerrettoLightGray}"
            RowBackground="{DynamicResource FerrettoLightGray}" AlternatingRowBackground="{DynamicResource FerrettoMediumGray}" >
            <!--SelectionChanged="DataGrid_SelectionChanged"-->

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Cassetto" CanUserResize="False" MaxWidth="80" MinWidth="80"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Altezza" CanUserResize="False" MaxWidth="80" MinWidth="80"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Peso max." CanUserResize="False" MaxWidth="100" MinWidth="100"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Tara" MaxWidth="80" MinWidth="80"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Peso attuale lordo" MaxWidth="160" MinWidth="160"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="% max" MaxWidth="100" MinWidth="100"/>

            </DataGrid.Columns>

        </DataGrid>
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="140,90,0,0" MaxWidth="300"
            ContentText="55"
            LabelText="{x:Static Resources:OperatorApp.DrawerWeightSaturationTotalDrawers}"/>
        <Controls:CustomProgressBarControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="600,540,0,0" MaxWidth="300"
            ProgressionValue="65"
            LabelText="{x:Static Resources:OperatorApp.DrawerWeightSaturationNetLoadedWeight}"/>
        <Button  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,200,20,0"
            Content="{x:Static Resources:OperatorApp.CommonUp}"
            Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        <Button   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,265,20,0"
            Content="{x:Static Resources:OperatorApp.CommonDown}"
            Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,90,0,0" MaxWidth="300"
            ContentText="70.000"
            LabelText="{x:Static Resources:OperatorApp.DrawerWeightSaturationMaxGrossRange}"/>
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="560,140,0,0" MaxWidth="300"
            ContentText="36.000"
            LabelText="{x:Static Resources:OperatorApp.DrawerWeightSaturationWeightNetLoaded}"/>
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="320,140,0,0" MaxWidth="300"
            ContentText="65.000"
            LabelText="{x:Static Resources:OperatorApp.DrawerWeightSaturationMaxNetRange}"/>



    </Grid>
</UserControl>
