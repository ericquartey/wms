<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.Statistics.CellsStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid Width="1024" Height="608">
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,40,0,0" MaxWidth="500"
            Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
            Text="{x:Static Resources:OperatorApp.CellsStatisticsHeader}" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="520,120,0,0" MaxWidth="300"
            ContentText="300"
            LabelText="{x:Static Resources:OperatorApp.CellsStatisticsFrontCellsTotal}"/>

        <DataGrid    HorizontalAlignment="Left" Height="250" Margin="250,250,0,0" VerticalAlignment="Top" Width="480" FontFamily="Helvetica Neue" FontSize="16"
            Background="{DynamicResource FerrettoBlack}" BorderBrush="{DynamicResource FerrettoLightGray}"
            HorizontalGridLinesBrush="{DynamicResource FerrettoLightGray}" VerticalGridLinesBrush="{DynamicResource FerrettoLightGray}"
            RowBackground="{DynamicResource FerrettoLightGray}" AlternatingRowBackground="{DynamicResource FerrettoMediumGray}" >
            <!--SelectionChanged="DataGrid_SelectionChanged"-->

            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Stato" CanUserResize="False" MaxWidth="80" MinWidth="80"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Totale" CanUserResize="False" MaxWidth="90" MinWidth="90"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="% Tot." CanUserResize="False" MaxWidth="110" MinWidth="110"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="Totale" MaxWidth="120" MinWidth="120"/>
                <DataGridCheckBoxColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="% Tot." MaxWidth="150" MinWidth="150"/>
            </DataGrid.Columns>

        </DataGrid>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="250,120,0,0" MaxWidth="300"
            ContentText="630"
            LabelText="{x:Static Resources:OperatorApp.CellsStatisticsCellsTotal}"/>

        <Button  HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,440,20,0"
            Content="{x:Static Resources:OperatorApp.CellsStatisticsOther}"
            Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="520,180,0,0" MaxWidth="300"
            ContentText="330"
            LabelText="{x:Static Resources:OperatorApp.CellsStatisticsRearCellsTotal}"/>
        <Controls:CustomProgressBarControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="530,528,0,0" MaxWidth="300"
            ProgressionValue="87"
            LabelText="{x:Static Resources:OperatorApp.CellsStatisticsTotalUsedCells}"/>


    </Grid>
</UserControl>
