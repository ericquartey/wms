<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.Statistics.CellsStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
             xmlns:Resources="clr-namespace:Ferretto.VW.Resources;assembly=Ferretto.VW.Resources"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">

    <Grid Width="1024"
          Height="608">

        <TextBlock MaxWidth="500"
                   Margin="250,40,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.CellsStatisticsHeader}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="520,120,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="300"
                                              LabelText="{x:Static Resources:OperatorApp.CellsStatisticsFrontCellsTotal}" />

        <DataGrid Width="480"
                  Height="250"
                  Margin="250,250,0,0"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  AlternatingRowBackground="{DynamicResource FerrettoMediumGray}"
                  Background="{DynamicResource FerrettoBlack}"
                  BorderBrush="{DynamicResource FerrettoLightGray}"
                  FontFamily="Helvetica Neue"
                  FontSize="16"
                  HorizontalGridLinesBrush="{DynamicResource FerrettoLightGray}"
                  RowBackground="{DynamicResource FerrettoLightGray}"
                  VerticalGridLinesBrush="{DynamicResource FerrettoLightGray}">
            <!--  SelectionChanged="DataGrid_SelectionChanged"  -->

            <DataGrid.Columns>
                <DataGridCheckBoxColumn MinWidth="80"
                                        MaxWidth="80"
                                        Binding="{x:Null}"
                                        CanUserResize="False"
                                        ClipboardContentBinding="{x:Null}"
                                        Header="Stato" />
                <DataGridCheckBoxColumn MinWidth="90"
                                        MaxWidth="90"
                                        Binding="{x:Null}"
                                        CanUserResize="False"
                                        ClipboardContentBinding="{x:Null}"
                                        Header="Totale" />
                <DataGridCheckBoxColumn MinWidth="110"
                                        MaxWidth="110"
                                        Binding="{x:Null}"
                                        CanUserResize="False"
                                        ClipboardContentBinding="{x:Null}"
                                        Header="% Tot." />
                <DataGridCheckBoxColumn MinWidth="120"
                                        MaxWidth="120"
                                        Binding="{x:Null}"
                                        ClipboardContentBinding="{x:Null}"
                                        Header="Totale" />
                <DataGridCheckBoxColumn MinWidth="150"
                                        MaxWidth="150"
                                        Binding="{x:Null}"
                                        ClipboardContentBinding="{x:Null}"
                                        Header="% Tot." />
            </DataGrid.Columns>

        </DataGrid>

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="250,120,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="630"
                                              LabelText="{x:Static Resources:OperatorApp.CellsStatisticsCellsTotal}" />

        <Button Margin="0,440,20,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Command="{Binding DrawerCompactingButtonCommand}"
                Content="{x:Static Resources:OperatorApp.CellsStatisticsOther}"
                Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="520,180,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="330"
                                              LabelText="{x:Static Resources:OperatorApp.CellsStatisticsRearCellsTotal}" />

        <Controls:CustomProgressBarControl MaxWidth="300"
                                           Margin="530,528,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           LabelText="{x:Static Resources:OperatorApp.CellsStatisticsTotalUsedCells}"
                                           ProgressionValue="87" />

    </Grid>
</UserControl>
