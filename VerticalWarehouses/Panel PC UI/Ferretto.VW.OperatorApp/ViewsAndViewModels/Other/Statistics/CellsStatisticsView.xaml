<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.Statistics.CellsStatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid Width="1024" Height="608">
        
        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,40,0,0" MaxWidth="500"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static Resources:OperatorApp.CellsStatisticsHeader}" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="490,90,0,0" MaxWidth="300"
                                               ContentText="300"
                                               LabelText="{x:Static Resources:OperatorApp.CellsStatisticsFrontCellsTotal}"/>

        <ContentControl HorizontalAlignment="Left"
                        Height="160"
                        Margin="220,220,0,0"
                        VerticalAlignment="Top"
                        Width="530"
                        Content="{Binding DataGridViewModel}" >
        </ContentControl>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="220,90,0,0" MaxWidth="300"
                                               ContentText="630"
                                               LabelText="{x:Static Resources:OperatorApp.CellsStatisticsCellsTotal}"/>

        <Button  HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"
                 Content="{x:Static Resources:OperatorApp.CellsStatisticsOther}"
                 Command="{Binding DrawerCompactingButtonCommand}"
                 Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="490,145,0,0" MaxWidth="300"
                                               ContentText="330"
                                               LabelText="{x:Static Resources:OperatorApp.CellsStatisticsRearCellsTotal}"/>
        
        <Controls:CustomProgressBarControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="560,410,0,0" MaxWidth="300"
                                            ProgressionValue="87"
                                            LabelText="{x:Static Resources:OperatorApp.CellsStatisticsTotalUsedCells}"/>

    </Grid>
</UserControl>
