<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.Statistics.StatisticsGeneralDataView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d">

    <Grid Width="774"
          Height="608">

        <TextBlock MaxWidth="500"
                   Margin="153,45,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static Resources:OperatorApp.StatisticsGeneralDataHeader}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="153,145,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="12.235"
                                              LabelText="{x:Static Resources:OperatorApp.StatisticsGeneralDataTotDrawerMoved}" />

        <Controls:CustomLabelTextBlockControl MaxWidth="300"
                                              Margin="473,145,0,0"
                                              HorizontalAlignment="Left"
                                              VerticalAlignment="Top"
                                              ContentText="9.684"
                                              LabelText="{x:Static Resources:OperatorApp.StatisticsGeneralDataTotPowerOnTime}" />

        <Controls:CustomProgressBarControl MaxWidth="300"
                                           Margin="153,255,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           LabelText="{x:Static Resources:OperatorApp.StatisticsGeneralDataAreaFilling}"
                                           ProgressionValue="65" />

        <Controls:CustomProgressBarControl MaxWidth="300"
                                           Margin="153,335,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           LabelText="{x:Static Resources:OperatorApp.StatisticsGeneralDataWeightFilling}"
                                           ProgressionValue="72" />

        <Controls:CustomProgressBarControl MaxWidth="300"
                                           Margin="473,255,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           LabelText="{x:Static Resources:OperatorApp.StatisticsGeneralDataTotAutoTime}"
                                           ProgressionValue="87" />

        <Controls:CustomProgressBarControl MaxWidth="300"
                                           Margin="473,335,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           LabelText="{x:Static Resources:OperatorApp.StatisticsGeneralDataUtilization}"
                                           ProgressionValue="61" />

    </Grid>
</UserControl>
