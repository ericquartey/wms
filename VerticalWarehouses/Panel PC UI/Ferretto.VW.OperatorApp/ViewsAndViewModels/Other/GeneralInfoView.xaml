<UserControl x:Class="Ferretto.VW.OperatorApp.ViewsAndViewModels.Other.GeneralInfoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:local="clr-namespace:Ferretto.VW.OperatorApp"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Resources="clr-namespace:Ferretto.VW.App.Resources;assembly=Ferretto.VW.App.Resources"
             xmlns:Controls="clr-namespace:Ferretto.VW.App.Controls.Controls;assembly=Ferretto.VW.App.Controls"
             xmlns:prism="http://prismlibrary.com/"
             mc:Ignorable="d" >

    <Grid   Width="774" Height="608">

        <TextBlock  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,40,0,0" MaxWidth="500"
                    Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                    Text="{x:Static Resources:OperatorApp.GeneralInfoHeader}" />

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,100,0,0" MaxWidth="300"
                                               ContentText="VRT EF 84 L 990-BIS H 6345"
                                               LabelText="{x:Static Resources:OperatorApp.GeneralInfoModel}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,260,0,0" MaxWidth="300"
                                               ContentText="2017-02-12"
                                               LabelText="{x:Static Resources:OperatorApp.GeneralInfoInstallationDate}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,160,0,0" MaxWidth="300"
                                               ContentText="54"
                                               LabelText="{x:Static Resources:OperatorApp.GeneralInfoTotDrawers}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="440,100,0,0" MaxWidth="300"
                                               ContentText="VW_190012"
                                               LabelText="{x:Static Resources:OperatorApp.GeneralInfoSerial}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="440,160,0,0" MaxWidth="300"
                                               ContentText="1.1.01 Beta"
                                               LabelText="{x:Static Resources:OperatorApp.GeneralInfoSwRelease}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="440,260,0,0" MaxWidth="300"
                                               ContentText="2019-03-05"
                                               LabelText="{x:Static Resources:OperatorApp.GeneralInfoNextMaintenanceDate}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,320,0,0" MaxWidth="300"
                                               ContentText="2018-03-05"
                                               LabelText="{x:Static Resources:OperatorApp.GeneralInfoLastMaintenanceDate}"/>

        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="480,320,0,0" MaxWidth="300"
                                               ContentText="Manutenzione richiesta."
                                               LabelText="{x:Static Resources:OperatorApp.GeneralInfoOperativeStatus}"/>
        
        <Controls:CustomLabelTextBlockControl  HorizontalAlignment="Left" VerticalAlignment="Top" Margin="130,420,0,0" MaxWidth="300"
                                               ContentText="WMS in linea."
                                               LabelText="{x:Static Resources:OperatorApp.GeneralInfoWmsStatus}"/>

        <Rectangle HorizontalAlignment="Left" VerticalAlignment="Top" Margin="90,426,0,0"
                   Width="25" Height="25"
                   Fill="Green"  />

        <Rectangle HorizontalAlignment="Left" VerticalAlignment="Top" Margin="440,326,0,0"
                   Width="25" Height="25"
                   Fill="Red"  />

    </Grid>
</UserControl>
