<Window x:Class="Ferretto.VW.VWApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ferretto.VW.VWApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
        Title="MainWindow"
        Width="1024"
        Height="768"
        ResizeMode="NoResize"
        WindowStyle="None"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               Grid.Column="0"
               Margin="20,0,0,0"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/ferrettologo_768x162.jpg" />
        <Image Grid.Row="1"
               Grid.Column="1"
               Margin="0,0,0,10"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/VertimagTreQuartiDX.png" />
        <StackPanel Grid.Row="1"
                    Grid.Column="0">
            <Rectangle Name="SpaceRectangle1"
                       Height="50" />
            <Label Content="{x:Static res:General.VertimagX}"
                   Style="{StaticResource StandardTitleTextStyle}" />
            <Label Content="Sn.125658"
                   Style="{StaticResource StandardBodyTextStyle}" />
            <Rectangle Name="SpaceRectangle2"
                       Height="230" />
            <custom:CustomInputFieldControl Margin="20,0,0,0"
                                            InputText="{Binding UserLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:General.UserLogin}" />
            <custom:CustomInputFieldControl Margin="20,0,0,0"
                                            InputText="{Binding PasswordLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:General.PasswordLogin}" />
            <TextBlock Height="60"
                       Margin="40,10,0,0"
                       Style="{StaticResource ErrorBodyTextStyle}"
                       Text="{Binding LoginErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       TextWrapping="WrapWithOverflow" />
            <Button Command="{Binding LoginButtonCommand}"
                    Content="{x:Static res:General.Login}"
                    Style="{StaticResource StandardButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
