<Window x:Class="Ferretto.VW.VWApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ferretto.VW.VWApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="1024"
        Height="768"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Border Grid.Row="1"
                Grid.Column="1"
                Width="auto"
                Height="auto"
                BorderBrush="{StaticResource FerrettoMediumGray}"
                BorderThickness="2">
            <StackPanel>
                <Label Margin="5"
                       HorizontalContentAlignment="Center"
                       Content="User Login:"
                       Style="{StaticResource ResourceKey=BodyStyle}" />
                <TextBox Name="UserLoginTextBox"
                         Margin="5"
                         HorizontalContentAlignment="Center"
                         Style="{StaticResource ResourceKey=BodyStyle}" />
                <Label Margin="5"
                       HorizontalContentAlignment="Center"
                       Content="Password Login:"
                       Style="{StaticResource ResourceKey=BodyStyle}" />
                <TextBox Name="PasswordLoginTextBox"
                         Margin="5"
                         HorizontalContentAlignment="Center"
                         Style="{StaticResource ResourceKey=BodyStyle}" />
                <Button Height="120"
                        Click="LoginButtonMethod"
                        Style="{StaticResource ButtonStyle}">
                    Log In
                </Button>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="3"
                    Grid.Column="2">
            <Button Height="65"
                    Style="{StaticResource ButtonStyle}">
                Other Action
            </Button>
            <Button Height="65"
                    Style="{StaticResource ButtonStyle}">
                Switch Off System
            </Button>
        </StackPanel>
    </Grid>
</Window>
