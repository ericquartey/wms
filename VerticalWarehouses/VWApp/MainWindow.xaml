<Window x:Class="Ferretto.VW.VWApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ferretto.VW.VWApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
        Title="MainWindow"
        Width="1024"
        Height="768"
        ResizeMode="NoResize"
        WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d">
    <Grid Background="{DynamicResource VWAPP_BACKGROUND}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               Grid.Column="0"
               Margin="50,0,0,0"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/ferrettologo_768x162.jpg" />
        <Button Grid.Row="1"
                Grid.Column="1"
                Background="Transparent"
                BorderThickness="0"
                Command="{Binding SwitchOffCommand}">
            <Image Grid.Row="1"
                   Grid.Column="1"
                   Margin="0,0,0,50"
                   Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/VertimagTreQuartiDX.png" />
        </Button>
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    HorizontalAlignment="Center">
            <Rectangle Name="SpaceRectangle1"
                       Height="50" />
            <TextBlock HorizontalAlignment="Left"
                       Style="{StaticResource VWAPP_SplashScreenTitleTextBlockStyle}"
                       Text="{Binding MachineModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock HorizontalAlignment="Left"
                       Style="{StaticResource VWAPP_SplashScreenSubTitleTextBlockStyle}"
                       Text="{Binding SerialNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Rectangle Name="SpaceRectangle2"
                       Height="160" />
            <custom:CustomInputFieldControl Width="200"
                                            HorizontalAlignment="Left"
                                            InputText="{Binding UserLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:General.UserLogin}" />
            <custom:CustomInputFieldControl Width="200"
                                            HorizontalAlignment="Left"
                                            InputText="{Binding PasswordLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                            LabelText="{x:Static res:General.PasswordLogin}" />
            <TextBlock Height="60"
                       HorizontalAlignment="Left"
                       Style="{StaticResource IAPP_ViewErrorTextBlockStyle}"
                       Text="{Binding LoginErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       TextWrapping="WrapWithOverflow" />
            <Button Width="200"
                    HorizontalAlignment="Left"
                    Command="{Binding LoginButtonCommand}"
                    Content="{x:Static res:General.Login}"
                    Style="{StaticResource IAPP_ViewButtonStyle}" />
            <Button Width="200"
                    HorizontalAlignment="Left"
                    Command="{Binding ChangeStyleButtonCommand}"
                    Content="Change style"
                    Style="{StaticResource IAPP_ViewButtonStyle}" />
        </StackPanel>
    </Grid>
</Window>
