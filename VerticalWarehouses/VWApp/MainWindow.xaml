<Window x:Class="Ferretto.VW.VWApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:custom="clr-namespace:Ferretto.VW.CustomControls.Controls;assembly=Ferretto.VW.CustomControls"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ferretto.VW.VWApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
        Title="MainWindow"
        Width="1024"
        Height="768"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">

    <Grid Background="{DynamicResource VWAPP_BACKGROUND}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               Grid.Column="0"
               Width="200"
               Height="60"
               Margin="50,10,0,0"
               HorizontalAlignment="Left"
               Source="{DynamicResource Ferretto_Logo}"
               Stretch="Uniform" />
        <Image Grid.Row="1"
               Grid.Column="1"
               Margin="0,60,0,50"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/background_machine.png" />
        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Margin="60,0,0,0"
                    HorizontalAlignment="Left">
            <Rectangle Name="SpaceRectangle1"
                       Height="50" />
            <TextBlock HorizontalAlignment="Left"
                       Style="{StaticResource VWAPP_SplashScreenTitleTextBlockStyle}"
                       Text="{Binding MachineModel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock HorizontalAlignment="Left"
                       Style="{StaticResource VWAPP_SplashScreenSubTitleTextBlockStyle}"
                       Text="{Binding SerialNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Rectangle Name="SpaceRectangle2"
                       Height="150" />
            <custom:CustomInputFieldControlFocusable Width="200"
                                                     HorizontalAlignment="Left"
                                                     InputText="{Binding UserLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                                     LabelText="{x:Static res:VWApp.UserLogin}"
                                                     Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />
            <custom:CustomInputFieldControlFocusable Width="200"
                                                     HorizontalAlignment="Left"
                                                     InputText="{Binding PasswordLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                     LabelText="{x:Static res:VWApp.PasswordLogin}"
                                                     Style="{StaticResource VWAPP_CustomInputFieldControlFocusableStyle}" />
            <TextBlock Height="160"
                       HorizontalAlignment="Left"
                       Style="{StaticResource VWAPP_ViewErrorTextBlockStyle}"
                       Text="{Binding LoginErrorMessage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                       TextWrapping="WrapWithOverflow" />
            <Button Width="200"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    Command="{Binding LoginButtonCommand}"
                    Content="{x:Static res:General.Login}"
                    Template="{StaticResource VWAPP_ActionButton_ControlTemplate}" />
            <Button Height="50"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{Binding ChangeSkin}" />
            <Button Height="50"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Command="{Binding SwitchOffCommand}" />
        </StackPanel>
    </Grid>
</Window>
