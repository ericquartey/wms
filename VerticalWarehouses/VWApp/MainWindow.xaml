<Window x:Class="Ferretto.VW.VWApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Ferretto.VW.VWApp"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:Ferretto.Common.Resources;assembly=Ferretto.Common.Resources"
        Title="MainWindow"
        Width="1024"
        Height="768"
        ResizeMode="NoResize"
        WindowStyle="None"
        mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="150" />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>
        <Image Grid.Row="0"
               Grid.Column="1"
               Margin="3"
               Source="pack://application:,,,/Ferretto.VW.CustomControls;Component/Assets/ferrettologo_768x162.jpg" />
        <Border Grid.Row="1"
                Grid.Column="1"
                Width="auto"
                Height="auto"
                BorderBrush="{StaticResource FerrettoMediumGray}"
                BorderThickness="2">
            <StackPanel>
                <Label Margin="5"
                       HorizontalContentAlignment="Center"
                       Content="{x:Static res:General.UserLogin}"
                       Style="{StaticResource StandardBodyTextStyle}" />
                <TextBox Name="UserLoginTextBox"
                         Margin="5"
                         HorizontalContentAlignment="Center"
                         Style="{StaticResource StandardBodyTextStyle}"
                         Text="{Binding UserLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Label Margin="5"
                       HorizontalContentAlignment="Center"
                       Content="{x:Static res:General.PasswordLogin}"
                       Style="{StaticResource StandardBodyTextStyle}" />
                <TextBox Name="PasswordLoginTextBox"
                         Margin="5"
                         HorizontalContentAlignment="Center"
                         Style="{StaticResource StandardBodyTextStyle}"
                         Text="{Binding PasswordLogin, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Button Height="120"
                        Command="{Binding LoginButtonCommand}"
                        Content="{x:Static res:General.Login}"
                        Style="{StaticResource StandardButtonStyle}" />
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="3"
                    Grid.Column="1">
            <Button Height="65"
                    Command="{Binding SwitchOffButtonCommand}"
                    Content="{x:Static res:General.SwitchOff}"
                    Style="{StaticResource StandardButtonStyle}" />
        </StackPanel>
        <Popup Name="LoginErrorPopup"
               Grid.Row="1"
               Grid.Column="1"
               Width="auto"
               Height="auto"
               IsOpen="{Binding EnableErrorPopup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
               Placement="Center">
            <Border Background="{StaticResource FerrettoPureWhite}"
                    BorderBrush="{StaticResource FerrettoMediumGray}"
                    BorderThickness="2">
                <StackPanel>
                    <Label Height="100"
                           Margin="5"
                           Content="{x:Static res:VWApp.ErrorLogin}"
                           Foreground="{StaticResource FerrettoRed}"
                           Style="{StaticResource StandardBodyTextStyle}" />
                    <Button Height="100"
                            Command="{Binding CloseErrorPopupButtonCommand}"
                            Content="{x:Static res:VWApp.Ok}"
                            Style="{StaticResource StandardButtonStyle}" />
                </StackPanel>
            </Border>
        </Popup>
    </Grid>
</Window>
