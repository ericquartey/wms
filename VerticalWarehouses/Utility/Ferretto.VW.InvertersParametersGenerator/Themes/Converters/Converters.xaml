<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                    
                    xmlns:conv="clr-namespace:Ferretto.VW.InvertersParametersGenerator">

    <!--  converters  -->
    
    <conv:BoolToVisibilityConverter x:Key="BTVC" />
    <conv:BoolToVisibilityConverter x:Key="BTVIC"
                                    Invert="True" />
    <conv:BoolToVisibilityConverter x:Key="BTVHC"
                                    Hide="True" />
    <conv:BooleanNegationConverter x:Key="BNC" />
    <conv:BusyToCursorConverter x:Key="BTCC" />
    <conv:BusyToCursorConverter x:Key="BTCIC" Invert="True" />
    <conv:MultiBooleanToUiConverter x:Key="MBTUI" />

</ResourceDictionary>
