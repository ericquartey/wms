<UserControl x:Class="Ferretto.VW.InvertersParametersGenerator.Views.ExportConfigurationView"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:viewmodels="clr-namespace:Ferretto.VW.InvertersParametersGenerator.ViewModels"
            xmlns:controls="clr-namespace:Ferretto.VW.InvertersParametersGenerator.Controls"
            xmlns:res="clr-namespace:Ferretto.VW.InvertersParametersGenerator.Properties"
            d:DesignHeight="700"
            d:DesignWidth="1024"            
            mc:Ignorable="d">

    <UserControl.Resources>

    </UserControl.Resources>

    <Grid x:Name="Root"
           Margin="30">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock x:Name="Title"                   
                   Grid.ColumnSpan="3"
                   VerticalAlignment="Top"
                   FontSize="36"
                   Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                   Text="{x:Static res:Resources.EsportConfigurationFile}" />


        <Grid Grid.Row="1"
                     Grid.Column="1"
                     Grid.ColumnSpan="2"
                     Margin="10,20,10,0"
                     HorizontalAlignment="Stretch">
            <StackPanel Orientation="Vertical">
                <TextBlock Grid.Row="2"
                               Margin="0,20"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"                               
                               Text="{x:Static res:Resources.VertimagConfigurationFile}" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Row="0"
                               Margin="0,25"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               TextWrapping="Wrap"
                               FontSize="{DynamicResource FontSize_Normal}"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                               Text="{Binding VertimagConfigurationFilePath}" />

                    <Button Margin="20 0 20 0"
                                Grid.Column="1"
                                Width="120"
                                Height="60"
                                FontSize="18"
                                Content="{x:Static res:Resources.ExportFile}"
                                Style="{StaticResource ButtonStyle}"
                                Command="{Binding ExportCommand}">
                    </Button>
                    <TextBlock
                               Grid.Row="1"
                               Grid.ColumnSpan="2"
                               HorizontalAlignment="Left"
                               VerticalAlignment="Top"
                               TextWrapping="Wrap"
                               FontSize="{DynamicResource FontSize_Normal}"
                               Style="{StaticResource VWAPP_ViewTitleTextBlockStyle}"
                               Foreground="Red"
                               Text="{Binding ResultVertimagConfiguration}" />
                </Grid>
            </StackPanel>
        </Grid>

        <Button Grid.Row="3"
                Grid.ColumnSpan="3"
                Margin="15,15,15,0"
                Width="100"
                Height="60"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="18"
                Style="{StaticResource ButtonStyle}"
                Command="{Binding CloseCommand}"
                Content="{x:Static res:Resources.Close}" />
    </Grid>

</UserControl>
