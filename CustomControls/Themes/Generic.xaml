<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls">

    <Style TargetType="{x:Type local:CompartmentRectangle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CompartmentRectangle}">
                    <Border Name="Border" Background="Red" BorderBrush="Red" BorderThickness="2" Opacity=".2">
                        <DockPanel>
                            <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="15" Text="{Binding ElementName=Border, Path=ActualWidth}"></TextBlock>
                            <TextBlock DockPanel.Dock="left" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="15" Text="{Binding ElementName=Border, Path=ActualHeight}"></TextBlock>
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
