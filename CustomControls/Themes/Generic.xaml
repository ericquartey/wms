<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls">

    <Style TargetType="{x:Type local:CompartmentRectangle}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:CompartmentRectangle}">
                    <UserControl Name="CompartmentRectangleUserControl" Focusable="True">
                        <Border Name="border" BorderThickness="2" BorderBrush="Red">
                            <DockPanel Opacity=".2" Background="Red">
                                <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="15" Text="{Binding ElementName=border, Path=ActualWidth}"></TextBlock>
                                <TextBlock DockPanel.Dock="Left" HorizontalAlignment="Center" VerticalAlignment="Top" Foreground="White" FontSize="15" Text="{Binding ElementName=border, Path=ActualHeight}"></TextBlock>
                            </DockPanel>
                        </Border>
                    </UserControl>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused"  Value="True">
                            <Setter Property="Background" Value="Green" TargetName="border"/>
                            <Setter Property="BorderBrush" Value="Green" TargetName="border"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
