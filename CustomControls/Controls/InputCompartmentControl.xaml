<UserControl x:Class="Ferretto.VW.CustomControls.Controls.InputCompartmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid x:Name="input"
          Height="50">
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Offset="0" Color="#FF1F7E7E" />
                <GradientStop Offset="1" Color="#FF20E28A" />
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Grid.Column="1"
               Margin="7,7,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="X"
               FontSize="18" />
        <TextBox x:Name="PositionXText"
                 Grid.Column="1"
                 Width="71"
                 Height="23"
                 Margin="29,15,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontSize="18"
                 Text="100"
                 TextChanged="PositionX_TextChanged"
                 TextWrapping="Wrap" />
        <TextBox x:Name="PositionYText"
                 Grid.Column="2"
                 Width="71"
                 Height="23"
                 Margin="29,14,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontSize="18"
                 Text="100"
                 TextChanged="PositionY_TextChanged"
                 TextWrapping="Wrap" />
        <Label Grid.Column="2"
               Width="25"
               Margin="5,8,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="Y"
               FontSize="18" />
        <Label Grid.Column="3"
               Margin="3,9,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="W"
               FontSize="18"
               RenderTransformOrigin="0.175,0.047" />
        <TextBox x:Name="WidthText"
                 Grid.Column="3"
                 Width="76"
                 Height="23"
                 Margin="34,15,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontSize="18"
                 Text="100"
                 TextChanged="Width_TextChanged"
                 TextWrapping="Wrap" />
        <Label Grid.Column="4"
               Margin="8,9,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Content="H"
               FontSize="18" />
        <TextBox x:Name="HeightText"
                 Grid.Column="4"
                 Width="78"
                 Height="23"
                 Margin="31,13,0,0"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 FontSize="18"
                 Text="100"
                 TextChanged="Height_TextChanged"
                 TextWrapping="Wrap" />
        <Label Grid.ColumnSpan="2"
               Width="137"
               Height="50"
               Margin="3,0,0,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Background="#FF292020"
               Content="COMPARTMENT DETAILS&#xD;&#xA;"
               Foreground="White" />
        <Button x:Name="CreateCompartment"
                Grid.Column="5"
                Margin="8,8,12,0"
                VerticalAlignment="Top"
                Click="CreateCompartmentBtn_Click"
                Content="Create"
                FontSize="22"
                RenderTransformOrigin="0.102,0.404" />
    </Grid>
</UserControl>
