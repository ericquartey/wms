<UserControl x:Class="Ferretto.VW.CustomControls.Controls.InputCompartmentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ferretto.VW.CustomControls.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid x:Name="input" Height="50">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF1F7E7E" Offset="0"/>
                <GradientStop Color="#FF20E28A" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="X" Grid.Column="1" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="PositionXText" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="29,15,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="71" TextChanged="PositionX_TextChanged" FontSize="18"/>
        <TextBox x:Name="PositionYText" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="29,14,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="71" TextChanged="PositionY_TextChanged" FontSize="18"/>
        <Label Content="Y" Grid.Column="2" HorizontalAlignment="Left" Margin="5,8,0,0" VerticalAlignment="Top" Width="25" FontSize="18"/>
        <Label Content="W" Grid.Column="3" HorizontalAlignment="Left" Margin="3,9,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.175,0.047" FontSize="18"/>
        <TextBox x:Name="WidthText" Grid.Column="3" HorizontalAlignment="Left" Height="23" Margin="34,15,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="76" TextChanged="Width_TextChanged" FontSize="18"/>
        <Label Content="H" Grid.Column="4" HorizontalAlignment="Left" Margin="8,9,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="HeightText" Grid.Column="4" HorizontalAlignment="Left" Height="23" Margin="31,13,0,0" TextWrapping="Wrap" Text="100" VerticalAlignment="Top" Width="78" TextChanged="Height_TextChanged" FontSize="18"/>
        <Label Content="COMPARTMENT DETAILS&#xD;&#xA;" HorizontalAlignment="Left" Margin="3,0,0,0" VerticalAlignment="Top" Height="50" Background="#FF292020" Foreground="White" Grid.ColumnSpan="2" Width="137"/>
        <Button x:Name="CreateCompartment" Content="Create" Grid.Column="5" Margin="8,8,12,0" VerticalAlignment="Top" Click="CreateCompartmentBtn_Click" RenderTransformOrigin="0.102,0.404" FontSize="22"/>
    </Grid>
</UserControl>
